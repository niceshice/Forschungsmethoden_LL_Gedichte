{
    "title": "wiepersdorf-spaeter-3-1303",
    "gender": "m",
    "author": "Klaus Merz",
    "author_birth": "1945",
    "poem": {
        "line.1": {
            "text": "Das zu-, das abnehmende Licht,"
        },
        "line.2": {
            "text": "die wandernden Wolkenschatten,"
        },
        "line.3": {
            "text": "der schwindelerregende Wind."
        },
        "line.4": {
            "text": "Noch einmal spielt mir der Tag"
        },
        "line.5": {
            "text": "einen Schmetterling zu, den ich"
        },
        "line.6": {
            "text": "kenne, das Entengeschwader"
        },
        "line.7": {
            "text": "hebt ab. Libellen jagen Ã¼bers leere"
        },
        "line.8": {
            "text": "Atomsprengkopflager im Tann:"
        },
        "line.9": {
            "text": "Pro Lidschlag ein Bild, das unter-"
        },
        "line.10": {
            "text": "zuckerte Licht treibt mir den Schweiss"
        },
        "line.11": {
            "text": "aus der Haut. Mit flatternden Fingern"
        },
        "line.12": {
            "text": "notier ich die Zitterpartie."
        }
    }
}