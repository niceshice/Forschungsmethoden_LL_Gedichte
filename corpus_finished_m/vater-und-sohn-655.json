{
    "title": "vater-und-sohn-655",
    "gender": "m",
    "author": "Uwe Kolbe",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "Ein einziges Abstandhalten"
        },
        "line.2": {
            "text": "und Beieinanderstehn"
        },
        "line.3": {
            "text": "mit schlenkernden Armen."
        },
        "line.4": {
            "text": "Der Vater die Uniform,"
        },
        "line.5": {
            "text": "der Sohn mit den Rastazöpfen."
        },
        "line.6": {
            "text": "Der Vater im Rucksack Preußen,"
        },
        "line.7": {
            "text": "der Sohn auf dem Surfbrett"
        },
        "line.8": {
            "text": "zur Mündung der Flüsse hinaus."
        },
        "line.9": {
            "text": "Der Vater auf Reisen,"
        },
        "line.10": {
            "text": "der Sohn die innere Emigration."
        },
        "line.11": {
            "text": "Der Vater die Briefe,"
        },
        "line.12": {
            "text": "der Sohn schweigt."
        },
        "line.13": {
            "text": "Vater, ders locker nimmt,"
        },
        "line.14": {
            "text": "Sohn zu dem Herzen."
        },
        "line.15": {
            "text": "Einander Kampf ohne Regel,"
        },
        "line.16": {
            "text": "ernster als auf dem Spielplatz je,"
        },
        "line.17": {
            "text": "länger als lebenslang."
        },
        "line.18": {
            "text": "Nie sterben die Väter,"
        },
        "line.19": {
            "text": "hört man, seit Ohren sind,"
        },
        "line.20": {
            "text": "und selten leben die Söhne."
        }
    }
}