{
    "title": "sitzung-5369",
    "gender": "m",
    "author": "Nicolai Kobus",
    "author_birth": "1968",
    "poem": {
        "line.1": {
            "text": "ich kann so lange nicht sitzen"
        },
        "line.2": {
            "text": "ich laß dir ein polaroid von mir"
        },
        "line.3": {
            "text": "mach doch damit was du willst"
        },
        "line.4": {
            "text": "ich gehe jetzt. immer die beine"
        },
        "line.5": {
            "text": "übereinander geschlagen schlechte"
        },
        "line.6": {
            "text": "durchblutung alles staut sich"
        },
        "line.7": {
            "text": "im schritt daher oben die bleiche"
        },
        "line.8": {
            "text": "visage ich brauche bewegung schon"
        },
        "line.9": {
            "text": "out of focus"
        },
        "line.10": {
            "text": "rechtshändig tremor"
        },
        "line.11": {
            "text": "dafür aber noch ein recht präziser"
        },
        "line.12": {
            "text": "strich die linke im mantel (zettel im"
        },
        "line.13": {
            "text": "saum) ich hasse garderoben alles"
        },
        "line.14": {
            "text": "vereitelte fluchten wenn ich mich"
        },
        "line.15": {
            "text": "so sitzend sehen müßte ich hackte"
        },
        "line.16": {
            "text": "mir sehr deutlich in die fresse bis"
        },
        "line.17": {
            "text": "mir mein nasenbein von seitwärts"
        },
        "line.18": {
            "text": "ansichtig würde und der rotz aus"
        },
        "line.19": {
            "text": "nebenhöhlen plastisch wie pastos"
        },
        "line.20": {
            "text": "auf revers und hosenbein geriete"
        },
        "line.21": {
            "text": "in atemnot der schatten meiner"
        },
        "line.22": {
            "text": "selbst wie ein munch von hinten"
        },
        "line.23": {
            "text": "ich muß hier raus aus schwarzen"
        },
        "line.24": {
            "text": "schächten violetten quadraten aus"
        },
        "line.25": {
            "text": "formalen versuchen für nichts"
        },
        "line.26": {
            "text": "und wieder nichts als deformiertem"
        },
        "line.27": {
            "text": "fleisch und schulbankzwang. deine"
        },
        "line.28": {
            "text": "geduld wird mich sehr bald töten"
        },
        "line.29": {
            "text": "ich laß dir ein polaroid von mir"
        },
        "line.30": {
            "text": "mach damit doch was du willst"
        },
        "line.31": {
            "text": "ich kann so lange nicht sitzen"
        },
        "line.32": {
            "text": "Francis Bacon"
        },
        "line.33": {
            "text": "Selbstbildnis, 1972"
        },
        "line.34": {
            "text": "Öl auf Leinwand  198 x 147,5 cm"
        }
    }
}