{
    "title": "geschichte-der-malerei-1570",
    "gender": "m",
    "author": "Michael Krüger",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Ich las eine Geschichte der Malerei"
        },
        "line.2": {
            "text": "von den Anfängen bis heute."
        },
        "line.3": {
            "text": "Eine Geschichte der weißen Lämmer,"
        },
        "line.4": {
            "text": "bevor sie der Strahl trifft."
        },
        "line.5": {
            "text": "Eine Geschichte der kleinen, geflügelten Engel"
        },
        "line.6": {
            "text": "und des jungfräulichen Rasens,"
        },
        "line.7": {
            "text": "von Gänseblümchen übersät."
        },
        "line.8": {
            "text": "Eine Geschichte der Stoffe"
        },
        "line.9": {
            "text": "und der Durchsetzung des Goldes."
        },
        "line.10": {
            "text": "Eine Geschichte der feinsten Tränen"
        },
        "line.11": {
            "text": "auf blassen Gesichtern."
        },
        "line.12": {
            "text": "Eine Geschichte der gewölbten Stirnen"
        },
        "line.13": {
            "text": "und der eingefallenen Wangen."
        },
        "line.14": {
            "text": "Eine Geschichte des Wassers"
        },
        "line.15": {
            "text": "und wie man es malt."
        },
        "line.16": {
            "text": "Eine Geschichte der Schulen,"
        },
        "line.17": {
            "text": "der Stile, des Kampfes um Wahrheit."
        },
        "line.18": {
            "text": "Eine Geschichte der Gewalt,"
        },
        "line.19": {
            "text": "der Tücke und Gemeinheit,"
        },
        "line.20": {
            "text": "der Treulosigkeit und des Verrats,"
        },
        "line.21": {
            "text": "der gebrochenen Eide, der Revolten"
        },
        "line.22": {
            "text": "und der nie aufhörenden Schlächtereien."
        },
        "line.23": {
            "text": "In den Fußnoten las ich auch"
        },
        "line.24": {
            "text": "eine Geschichte der Scham,"
        },
        "line.25": {
            "text": "eine verwickelte Geschichte des Trostes."
        },
        "line.26": {
            "text": "Insgesamt eine schöne Geschichte,"
        },
        "line.27": {
            "text": "die Geschichte der Malerei,"
        },
        "line.28": {
            "text": "und nicht nur für die Augen."
        },
        "line.29": {
            "text": "In seinem Nachwort erklärt der Autor"
        },
        "line.30": {
            "text": "umständlich, was wir sähen, sei"
        },
        "line.31": {
            "text": "nur Farbe in verschiedenem Auftrag."
        },
        "line.32": {
            "text": "Er hatte das Gift vergessen,"
        },
        "line.33": {
            "text": "das ihr beigemengt war,"
        },
        "line.34": {
            "text": "das Gift für die Augen."
        }
    }
}