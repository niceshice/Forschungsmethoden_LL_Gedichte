{
    "title": "wotanische-verse-3398",
    "gender": "m",
    "author": "Arno  Reinfrank",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Als Lungenpest, als Beulenpest"
        },
        "line.2": {
            "text": "und als die blutvergiftende"
        },
        "line.3": {
            "text": "erschien der Schwarze Tod bei uns."
        },
        "line.4": {
            "text": "Im Brot stak Gift vom Mutterkorn."
        },
        "line.5": {
            "text": "Choräle übertönten Glocken."
        },
        "line.6": {
            "text": "Die Büßer sangen Frömmigkeit"
        },
        "line.7": {
            "text": "und Künstler bleichten zu Gebein."
        },
        "line.8": {
            "text": "Die Fürstenkriege hielten an."
        },
        "line.9": {
            "text": "Skelette trommelten zum Tanz,"
        },
        "line.10": {
            "text": "die Geißler schwangen Peitschen."
        },
        "line.11": {
            "text": "Wir hatten Geld,"
        },
        "line.12": {
            "text": "denn die Verwandten starben."
        },
        "line.13": {
            "text": "Wir soffen, hurten, legten Scheiterhaufen,"
        },
        "line.14": {
            "text": "denn nahe war der letzte Tag."
        },
        "line.15": {
            "text": "Dreihundert Jahre dauerte"
        },
        "line.16": {
            "text": "das Festival von Floh und Ratte."
        },
        "line.17": {
            "text": "Den Beinhäusern entkrochen Religionen"
        },
        "line.18": {
            "text": "reformgekämmt zur Gegenwart."
        },
        "line.19": {
            "text": "Jetzt sind Priester an AIDS erkrankt."
        },
        "line.20": {
            "text": "Wir huren, fressen und betrügen."
        },
        "line.21": {
            "text": "Die Totengräber nehmen zu."
        },
        "line.22": {
            "text": "Nach Scharfgerichten wird gerufen."
        },
        "line.23": {
            "text": "Die Polizei ist schwer bewaffnet."
        },
        "line.24": {
            "text": "Altwarenhändler bieten Hoffnung feil."
        },
        "line.25": {
            "text": "Einwanderer und kahlrasierte Schädel"
        },
        "line.26": {
            "text": "stehen vorm Letzten Tag."
        },
        "line.27": {
            "text": "Uran zerstrahlt, Wasser verfault,"
        },
        "line.28": {
            "text": "die Äcker sind längst chemische Kloaken."
        },
        "line.29": {
            "text": "Boccaccio schrieb, Europas Ordnung"
        },
        "line.30": {
            "text": "läge zertrümmert, kein Gesetz"
        },
        "line.31": {
            "text": "würde beachtet, keine Sitte."
        },
        "line.32": {
            "text": "Das war im 14. Jahrhundert."
        },
        "line.33": {
            "text": "Fabriken leert das 20. Jahrhundert."
        },
        "line.34": {
            "text": "Die Kriegsmusik schrillt elektronisch."
        },
        "line.35": {
            "text": "Nicht jeder hat jetzt Geld."
        },
        "line.36": {
            "text": "Die keines haben, sind vergessen."
        },
        "line.37": {
            "text": "Gewalt will die Gewalt vernichten."
        },
        "line.38": {
            "text": "Ein schlecht gemachter Fernsehthriller,"
        },
        "line.39": {
            "text": "der sich anhalten ließe,"
        },
        "line.40": {
            "text": "wenn's nicht so spannend wäre -"
        },
        "line.41": {
            "text": "den Regisseur zittern zu sehn."
        }
    }
}