{
    "title": "einem-geruestbauer-11830",
    "gender": "m",
    "author": "Steffen  Jacobs",
    "author_birth": "1968",
    "poem": {
        "line.1": {
            "text": "Der steht vor meinem Fenster,"
        },
        "line.2": {
            "text": "geht sicher auf schwankendem Grund,"
        },
        "line.3": {
            "text": "den hat er sich selbst gebaut,"
        },
        "line.4": {
            "text": "fünf Stockwerke hoch, und"
        },
        "line.5": {
            "text": "der Wind schießt ihm ins Haar."
        },
        "line.6": {
            "text": "Ich sitze an meinem Schreibtisch,"
        },
        "line.7": {
            "text": "sortiere, was wäre und war."
        },
        "line.8": {
            "text": "Schön warm ist es hier,"
        },
        "line.9": {
            "text": "schön windstill. Eine Hand,"
        },
        "line.10": {
            "text": "meine, fährt mir durchs Haar."
        },
        "line.11": {
            "text": "Wenn er stolpert, wenn er fällt,"
        },
        "line.12": {
            "text": "ist es für ihn das Ende der Welt."
        },
        "line.13": {
            "text": "Wenn es holpert bei mir, wenn"
        },
        "line.14": {
            "text": "ich stürze und falle, dann"
        },
        "line.15": {
            "text": "falle ich allenfalls unter den Tisch."
        },
        "line.16": {
            "text": "Und ich frage mich,"
        },
        "line.17": {
            "text": "frage mich täppisch und zweifle:"
        },
        "line.18": {
            "text": "Wer von uns beiden"
        },
        "line.19": {
            "text": "trägt wohl das größere Risiko,"
        },
        "line.20": {
            "text": "wer schwebt schöner in Gefahr?"
        },
        "line.21": {
            "text": "Zumindest aus seiner Sicht"
        },
        "line.22": {
            "text": "ist die Sache wohl ziemlich klar."
        },
        "line.23": {
            "text": "Man sieht es gleich, wie er so,"
        },
        "line.24": {
            "text": "die Zigarette in der Hand,"
        },
        "line.25": {
            "text": "an der Brüstung lehnt und gähnt."
        },
        "line.26": {
            "text": "Kein Grund zum Verzweifeln,"
        },
        "line.27": {
            "text": "scheint er zu glauben, so oder so."
        },
        "line.28": {
            "text": "Kunststück, daß der sich brüstet:"
        },
        "line.29": {
            "text": "Steht er auch an der Wand,"
        },
        "line.30": {
            "text": "so ist er doch besser gerüstet."
        }
    }
}