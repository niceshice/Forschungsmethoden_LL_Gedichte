{
    "title": "ein-weisser-schnuersenkel-7583",
    "gender": "m",
    "author": "Christian  Filips",
    "author_birth": "1981",
    "poem": {
        "line.1": {
            "text": "Blitz jetzt. Das ist"
        },
        "line.2": {
            "text": "Mamas Hand, wie sie knotet!"
        },
        "line.3": {
            "text": "Verknoten beibringt mir"
        },
        "line.4": {
            "text": "ihm beibringen will: sie"
        },
        "line.5": {
            "text": "sitzt ihrem Sohn gegenüber"
        },
        "line.6": {
            "text": "bindet die Senkel,"
        },
        "line.7": {
            "text": "so, beide Hände"
        },
        "line.8": {
            "text": "Hände beide linksrum in der Schlaufe"
        },
        "line.9": {
            "text": "weiß sie"
        },
        "line.10": {
            "text": "wierum? sorum? Löffelstil"
        },
        "line.11": {
            "text": "gleich selber, nein hierum!"
        },
        "line.12": {
            "text": "nicht mehr"
        },
        "line.13": {
            "text": "ach spiegelverkehrt,"
        },
        "line.14": {
            "text": "Mutter Gottes!"
        },
        "line.15": {
            "text": "Bald schnüren wir ihn"
        },
        "line.16": {
            "text": "Bald er uns"
        }
    }
}