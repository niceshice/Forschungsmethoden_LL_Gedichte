{
    "title": "angeln-vor-oland-15602",
    "gender": "m",
    "author": "Steffen  Mensching",
    "author_birth": "1958",
    "poem": {
        "line.1": {
            "text": "Fur Herbert, Matthias und Micha"
        },
        "line.2": {
            "text": "Mit Ruten, Rollen, Blinkern, Pilkern,"
        },
        "line.3": {
            "text": "Wobblern und Wurmern, Haken"
        },
        "line.4": {
            "text": "und Osen, die Salmoniden im Sund"
        },
        "line.5": {
            "text": "das Furchten zu lehren, zogen wir,"
        },
        "line.6": {
            "text": "an Scheren vorbei, in Richtung"
        },
        "line.7": {
            "text": "der Sonne, hinaus auf offene See,"
        },
        "line.8": {
            "text": "am Abend, in Richtung der Sonne,"
        },
        "line.9": {
            "text": "ans Ufer zuruck, funf Tage, voll"
        },
        "line.10": {
            "text": "Sehnsucht auf Fang, die Hand"
        },
        "line.11": {
            "text": "in den Sehnen, umsonst. Kein Lachs,"
        },
        "line.12": {
            "text": "Dorsch, weder Forelle noch Flunder,"
        },
        "line.13": {
            "text": "Aal, Hecht oder Barsch (nicht mal"
        },
        "line.14": {
            "text": "Kaulbarsch) biß an, das Echolot"
        },
        "line.15": {
            "text": "(Hightech, verfluchte) zeigte, Schwarme"
        },
        "line.16": {
            "text": "schwammen gemachlich ums Boot, wir"
        },
        "line.17": {
            "text": "schwitzten, drillten, rollten,"
        },
        "line.18": {
            "text": "trollten, zupften, lupften"
        },
        "line.19": {
            "text": "die Schnure mit Geschick und dem Mut"
        },
        "line.20": {
            "text": "verzweifelter Manner, ab und zu"
        },
        "line.21": {
            "text": "gewahrte einer, wie aus Versehn,"
        },
        "line.22": {
            "text": "des weichen Lichts uber den Inseln,"
        },
        "line.23": {
            "text": "der Wacholderbaume und Ganse, wahrend"
        },
        "line.24": {
            "text": "ein anderer, abwesend, Schlick hakend,"
        },
        "line.25": {
            "text": "sagte (zum tausendsten Mal): Ich"
        },
        "line.26": {
            "text": "begreifs nicht. Hinterm Motor,"
        },
        "line.27": {
            "text": "der Steuermann, rugte: Der Koder"
        },
        "line.28": {
            "text": "ist falsch, der am Bug sprach:"
        },
        "line.29": {
            "text": "das Wetter, der Echolotse: Die Stelle."
        },
        "line.30": {
            "text": "Die falschen Manner, meinte der Mann"
        },
        "line.31": {
            "text": "mit dem ewigen Fitz. Die Fische"
        },
        "line.32": {
            "text": "lachten uns aus, wir, in Krampfen,"
        },
        "line.33": {
            "text": "uber Bord hangend, hip oder high,"
        },
        "line.34": {
            "text": "lachten mit ihnen im Chor Tranen"
        },
        "line.35": {
            "text": "ins salzige Wasser, was fur ein Gaudi,"
        },
        "line.36": {
            "text": "auf ganzer Linie zu scheitern, Freunde,"
        },
        "line.37": {
            "text": "nichts toten zu konnen, was"
        },
        "line.38": {
            "text": "fur ein Elend, welch ein Mordsspaß."
        }
    }
}