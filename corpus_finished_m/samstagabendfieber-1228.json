{
    "title": "samstagabendfieber-1228",
    "gender": "m",
    "author": "Robert  Gernhardt",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Wenn mit großen Feuerwerken"
        },
        "line.2": {
            "text": "Bürger froh das Dunkel feiern,"
        },
        "line.3": {
            "text": "sich mit Bier und Fleischwurst stärken"
        },
        "line.4": {
            "text": "und in die Rabatten reihern,"
        },
        "line.5": {
            "text": "Wenn sie in den Handschuhfächern"
        },
        "line.6": {
            "text": "kundig nach Kondomen tasten,"
        },
        "line.7": {
            "text": "und die breiten Autos blechern"
        },
        "line.8": {
            "text": "strahlend ineinanderhasten,"
        },
        "line.9": {
            "text": "Wenn in Häusern bunte Schatten"
        },
        "line.10": {
            "text": "herrlich aufeinander schießen,"
        },
        "line.11": {
            "text": "sich verprügeln, sich begatten,"
        },
        "line.12": {
            "text": "bis die letzten Kinos schließen,"
        },
        "line.13": {
            "text": "Wenn dann in zu lauten Räumen"
        },
        "line.14": {
            "text": "viele Menschen sich bewegen"
        },
        "line.15": {
            "text": "und beim Lärmen davon träumen,"
        },
        "line.16": {
            "text": "stumm einander flachzulegen,"
        },
        "line.17": {
            "text": "Wenn am Ende Franz und Frieda"
        },
        "line.18": {
            "text": "glücklich in der Falle liegen -:"
        },
        "line.19": {
            "text": "Wer gedenkt dann jener, die da"
        },
        "line.20": {
            "text": "noch eins in die Fresse kriegen?"
        }
    }
}