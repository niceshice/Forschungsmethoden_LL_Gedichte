{
    "title": "glueckliche-kindheit-7837",
    "gender": "m",
    "author": "Rolf Haufs",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Heilfitler riefen die Tanten"
        },
        "line.2": {
            "text": "Heilfitler antworteten die Kinder"
        },
        "line.3": {
            "text": "Seid ihr gewachsen"
        },
        "line.4": {
            "text": "Fingernägel vor den Kopf runter wie"
        },
        "line.5": {
            "text": "Zum Schafott. Blasse saubere Hälse"
        },
        "line.6": {
            "text": "Ihr habt Läuse riefen die Tanten"
        },
        "line.7": {
            "text": "Haare ab"
        },
        "line.8": {
            "text": "Auch die Mädchen"
        },
        "line.9": {
            "text": "Dann kam der Schneider mit der Scher'"
        },
        "line.10": {
            "text": "Essigregen"
        },
        "line.11": {
            "text": "Da schrien die Kinder"
        },
        "line.12": {
            "text": "Heilfitler riefen die Tanten"
        },
        "line.13": {
            "text": "Fuß blutete"
        },
        "line.14": {
            "text": "Die Tanten sagten"
        },
        "line.15": {
            "text": "Du hast schon wieder ins Bett gepißt"
        },
        "line.16": {
            "text": "Also Schnauze und den Daumen rein beim Gruß"
        },
        "line.17": {
            "text": "Heilfitler."
        }
    }
}