{
    "title": "der-schrei-3690",
    "gender": "m",
    "author": "Yaak  Karsunke",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "weil sie vom boden"
        },
        "line.2": {
            "text": "nicht auffliegen können"
        },
        "line.3": {
            "text": "lassen sich die mauersegler fallen"
        },
        "line.4": {
            "text": "aus einiger höhe"
        },
        "line.5": {
            "text": "& beginnen im sturz ihren flug"
        },
        "line.6": {
            "text": "ein jüngerer vogel"
        },
        "line.7": {
            "text": "war gegen die scheibe geprallt"
        },
        "line.8": {
            "text": "& lag benommen"
        },
        "line.9": {
            "text": "mit ausgebreiteten schwingen"
        },
        "line.10": {
            "text": "auf dem balkon"
        },
        "line.11": {
            "text": "ich schob seine flügel zusammen"
        },
        "line.12": {
            "text": "& hob ihn auf"
        },
        "line.13": {
            "text": "hielt ihn in meinen händen"
        },
        "line.14": {
            "text": "spürte sein herz hämmern dann"
        },
        "line.15": {
            "text": "warf ich ihn in die luft"
        },
        "line.16": {
            "text": "er schrie"
        },
        "line.17": {
            "text": "als er davonschoss"
        }
    }
}