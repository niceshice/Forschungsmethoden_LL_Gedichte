{
    "title": "angel-2950",
    "gender": "m",
    "author": "Paulus  Böhmer",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Licht, Dunkelheit,"
        },
        "line.2": {
            "text": "Inseln von Dunkelheit,"
        },
        "line.3": {
            "text": "Inseln von Licht."
        },
        "line.4": {
            "text": "Angie schleuderte"
        },
        "line.5": {
            "text": "ihr dickes schwarzes Haar nach hinten, belehrte"
        },
        "line.6": {
            "text": "mich über die Grausamkeit, alles,"
        },
        "line.7": {
            "text": "was wir aus Liebe tun, wird"
        },
        "line.8": {
            "text": "für niemals Bestand haben,"
        },
        "line.9": {
            "text": "mischte mir, damit ich nicht mehr begehre,"
        },
        "line.10": {
            "text": "das Hirn der Katze mit Schnipseln"
        },
        "line.11": {
            "text": "von Briefen, schleuderte mir"
        },
        "line.12": {
            "text": "ihr dickes Haar, durch="
        },
        "line.13": {
            "text": "stieß mich."
        },
        "line.14": {
            "text": "In Europas Städten schrieen die Geistesgestörten."
        },
        "line.15": {
            "text": "Kleine Jäger schleppten ihre Beute ab."
        },
        "line.16": {
            "text": "Vom Mond fiel das Licht wie Puder"
        },
        "line.17": {
            "text": "und bedeckte die Orte."
        },
        "line.18": {
            "text": "Weiß"
        },
        "line.19": {
            "text": "wie das Rauschen der Sprache."
        },
        "line.20": {
            "text": "Wie das Summen der Sonnensysteme."
        },
        "line.21": {
            "text": "Schiele umspielt die Scham"
        },
        "line.22": {
            "text": "mit Beinen, die man nicht liebt."
        },
        "line.23": {
            "text": "Mit liegenden, knieenden, rück="
        },
        "line.24": {
            "text": "wärtigen Positionen: Fremd"
        },
        "line.25": {
            "text": "bleibt, was man liebt."
        },
        "line.26": {
            "text": "Teilchen vernichten einander im Blitz."
        },
        "line.27": {
            "text": "Nager wisperten"
        },
        "line.28": {
            "text": "in den Krümmungen ihrer Gänge."
        },
        "line.29": {
            "text": "Das Schaben tektonischer Platten,"
        },
        "line.30": {
            "text": "die zischende Auffächerung"
        },
        "line.31": {
            "text": "der Säugetiere vor aller Zeit:"
        },
        "line.32": {
            "text": "Ich hörte."
        },
        "line.33": {
            "text": "Ich schlief."
        },
        "line.34": {
            "text": "Korallen errichten Millionen"
        },
        "line.35": {
            "text": "Kubikmeter Riff und verschwinden."
        },
        "line.36": {
            "text": "Die Spuren der Plünderungen verwischt."
        },
        "line.37": {
            "text": "Die Leichen seitwärts geschafft. So"
        },
        "line.38": {
            "text": "tauchen die Sieger auf, als"
        },
        "line.39": {
            "text": "Angie mich durchstieß."
        },
        "line.40": {
            "text": "Ich rede"
        },
        "line.41": {
            "text": "von kleinen verlogenen Händen."
        },
        "line.42": {
            "text": "Vom Pochen der Pfortadern. Vom Oberst"
        },
        "line.43": {
            "text": "mit den Gewehren. Aus der Ohm"
        },
        "line.44": {
            "text": "wachsen Inseln. Gewitter wuchern."
        },
        "line.45": {
            "text": "Der flache Atem der Tierkörper. Die"
        },
        "line.46": {
            "text": "erschreckenden Innenauskleidungen"
        },
        "line.47": {
            "text": "der Frau. Als eine Frau"
        },
        "line.48": {
            "text": "das Kinn eines Mannes berührt, um seinen Blick"
        },
        "line.49": {
            "text": "aufzurichten, beginnt er zu weinen."
        },
        "line.50": {
            "text": "Zwischen den Zweigen"
        },
        "line.51": {
            "text": "erscheint ein Gesicht und verschwindet"
        },
        "line.52": {
            "text": "für alle Zeit."
        },
        "line.53": {
            "text": "Inseln von Dunkelheit."
        },
        "line.54": {
            "text": "Inseln von Licht."
        },
        "line.55": {
            "text": "Wie Brausepulver glitzerte Angie auf meiner Haut."
        },
        "line.56": {
            "text": "Es fiel ihr dickes Haar."
        },
        "line.57": {
            "text": "Es ist eine alte Geschichte."
        },
        "line.58": {
            "text": "Und meine Hände griffen"
        },
        "line.59": {
            "text": "in einen Laut,"
        },
        "line.60": {
            "text": "der schmeckt wie Erde,"
        },
        "line.61": {
            "text": "griffen in Licht, das sich"
        },
        "line.62": {
            "text": "anhört wie Blut."
        },
        "line.63": {
            "text": "Für alle Zeit."
        }
    }
}