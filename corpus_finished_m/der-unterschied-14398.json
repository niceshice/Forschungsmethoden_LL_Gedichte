{
    "title": "der-unterschied-14398",
    "gender": "m",
    "author": "Carl-Christian Elze",
    "author_birth": "1974",
    "poem": {
        "line.1": {
            "text": "der unterschied"
        },
        "line.2": {
            "text": "zwischen einem stein"
        },
        "line.3": {
            "text": "und einem hund"
        },
        "line.4": {
            "text": "scheint für menschen gewaltig zu sein."
        },
        "line.5": {
            "text": "bewegung und wachstum"
        },
        "line.6": {
            "text": "fortpflanzung und entwicklung"
        },
        "line.7": {
            "text": "stoffwechsel und reizbarkeit"
        },
        "line.8": {
            "text": "die merkmale alles lebendigen: die ehernen sechs."
        },
        "line.9": {
            "text": "in allen schulen dieser welt"
        },
        "line.10": {
            "text": "werden sie gelehrt. sie vollständig"
        },
        "line.11": {
            "text": "zu nennen, und zu begründen"
        },
        "line.12": {
            "text": "warum eine kerzenflamme nicht lebt"
        },
        "line.13": {
            "text": "obwohl sie im wind flackert"
        },
        "line.14": {
            "text": "wird immer belohnt."
        },
        "line.15": {
            "text": "10-jährige hören auf mit steinen zu reden"
        },
        "line.16": {
            "text": "zu reden, mit ihren stofftieren und stöcken."
        },
        "line.17": {
            "text": "ihre gehirne verändern sich, unmerklich"
        },
        "line.18": {
            "text": "von komplexeren, verzweigten galaxien"
        },
        "line.19": {
            "text": "zu einfachen datenautobahnen"
        },
        "line.20": {
            "text": "die nur noch im kreis fahren."
        },
        "line.21": {
            "text": "äußerlich wachsen unsere schädel"
        },
        "line.22": {
            "text": "einschließlich ihrer zerfurchten füllung"
        },
        "line.23": {
            "text": "aber es sind nur die raststätten, die wachsen"
        },
        "line.24": {
            "text": "nicht die straßen. nur die raststätten"
        },
        "line.25": {
            "text": "wachsen zu immer größeren löchern"
        },
        "line.26": {
            "text": "heran, um in sich tausendschaften"
        },
        "line.27": {
            "text": "zu versammeln. alle raststätten aller gehirne"
        },
        "line.28": {
            "text": "sind restlos überfüllt. in jedem"
        },
        "line.29": {
            "text": "quadratmillimeter lungern reisende"
        },
        "line.30": {
            "text": "millionen ausgewachsene"
        },
        "line.31": {
            "text": "müde gestalten"
        },
        "line.32": {
            "text": "kinderzimmerträumende krüppel."
        }
    }
}