{
    "title": "wer-koennte-platz-nehmen-10091",
    "gender": "m",
    "author": "Christoph Meckel",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Wer könnte Platz nehmen"
        },
        "line.2": {
            "text": "in der Gerechtigkeit"
        },
        "line.3": {
            "text": "mit seinem Gepäck, seiner Spottdrossel, seinem Namen"
        },
        "line.4": {
            "text": "der Freundschaft des Brotes gewiß, und sicher"
        },
        "line.5": {
            "text": "daß das Wasser seinen Anblick erträgt"
        },
        "line.6": {
            "text": "und die Liebe ihn achtet"
        },
        "line.7": {
            "text": "wer könnte ausruhn bei den Säulen und sagen:"
        },
        "line.8": {
            "text": "hier bin ich, eingeschlossen"
        },
        "line.9": {
            "text": "in Salz und Licht."
        },
        "line.10": {
            "text": "Er rückt sich in ihr keinen Sessel zurecht."
        },
        "line.11": {
            "text": "Von ihrem Vorwurf"
        },
        "line.12": {
            "text": "betäubt und geschunden"
        },
        "line.13": {
            "text": "am Rand der Straße hockt er noch immer"
        },
        "line.14": {
            "text": "und zählt wie die Katze seine sieben Leben"
        },
        "line.15": {
            "text": "unversöhnlich, hungrig"
        },
        "line.16": {
            "text": "es tröstet ihn nichts."
        }
    }
}