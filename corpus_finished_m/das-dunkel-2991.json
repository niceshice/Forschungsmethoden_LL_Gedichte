{
    "title": "das-dunkel-2991",
    "gender": "m",
    "author": "Robert  Gernhardt",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Menschen kleiden sich gern bunt,"
        },
        "line.2": {
            "text": "das hat einen dunklen Grund."
        },
        "line.3": {
            "text": "Menschen zeigen sich gern nackt-"
        },
        "line.4": {
            "text": "Dunkelheit in Haut verpackt."
        },
        "line.5": {
            "text": "Ob im Mann, ob im Weib,"
        },
        "line.6": {
            "text": "Dunkel herrscht in jedem Leib."
        },
        "line.7": {
            "text": "Auch trifft zu, daß Greis und Kind"
        },
        "line.8": {
            "text": "innen völlig dunkel sind."
        },
        "line.9": {
            "text": "Hinter jedem roten Mund"
        },
        "line.10": {
            "text": "öffnet sich ein dunkler Schlund."
        },
        "line.11": {
            "text": "Meerrettich und Brot und Wein"
        },
        "line.12": {
            "text": "läßt der Schlund ins Dunkel ein,"
        },
        "line.13": {
            "text": "Rein in Magen, Blase, Darm,"
        },
        "line.14": {
            "text": "alle dunkel, aber warm."
        },
        "line.15": {
            "text": "Wein und Brot und Meerrettich"
        },
        "line.16": {
            "text": "wandern durch ein dunkles Ich."
        },
        "line.17": {
            "text": "Auf dem Weg vom Ich zum Du"
        },
        "line.18": {
            "text": "freilich geht's noch dunkler zu."
        },
        "line.19": {
            "text": "Dunkel lockt der Zeugungstrieb:"
        },
        "line.20": {
            "text": "Laß mich ein. Hab mich lieb."
        },
        "line.21": {
            "text": "Dunkel bleibt auch, ob es frommt,"
        },
        "line.22": {
            "text": "daß da das zusammenkommt:"
        },
        "line.23": {
            "text": "Same sah nie Tageslicht,"
        },
        "line.24": {
            "text": "Ei warf niemals Schatten nicht."
        },
        "line.25": {
            "text": "Klar ist nur, daß es das Glied"
        },
        "line.26": {
            "text": "gradewegs ins Dunkel zieht,"
        },
        "line.27": {
            "text": "Und daß es ein Spalt empfängt,"
        },
        "line.28": {
            "text": "den es dunkel zu ihm drängt."
        },
        "line.29": {
            "text": "Dunkel ist, was sich dann tut,"
        },
        "line.30": {
            "text": "Dunkel herrscht, wenn alles ruht,"
        },
        "line.31": {
            "text": "Doch im Schoß der dunklen Nacht"
        },
        "line.32": {
            "text": "regt sich dunkel der Verdacht,"
        },
        "line.33": {
            "text": "Alles Licht sei eitel Schein"
        },
        "line.34": {
            "text": "auf dem Weg ins Dunkelsein."
        }
    }
}