{
    "title": "die-geliebte-7647",
    "gender": "m",
    "author": "Tom Schulz",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "sie rollte die Welle an den Strand"
        },
        "line.2": {
            "text": "an jenem Morgen jene blaue See"
        },
        "line.3": {
            "text": "kannte Engel ohne Lizenz"
        },
        "line.4": {
            "text": "zum Engelsein, wenn sie aufs Meer"
        },
        "line.5": {
            "text": "hinaus schwamm, waren die Berge"
        },
        "line.6": {
            "text": "niemals ferne Rücken, jedesmal"
        },
        "line.7": {
            "text": "setzte sie einen Fuß weich auf"
        },
        "line.8": {
            "text": "die Insel, der Boden gab nach"
        },
        "line.9": {
            "text": "die Vulkanerde errötete unter"
        },
        "line.10": {
            "text": "ihren kleinen Zehen, ich sah sie"
        },
        "line.11": {
            "text": "gern durch Kirchentüren laufen"
        },
        "line.12": {
            "text": "andere hielten sie für Beutekunst"
        },
        "line.13": {
            "text": "es stimmt, sie war wie ein fremdländischer"
        },
        "line.14": {
            "text": "Opal, mit jedem Tag stieg ihr Preis"
        },
        "line.15": {
            "text": "Plagiate gab es von ihr keine"
        },
        "line.16": {
            "text": "ich habe niemals mehr danach"
        },
        "line.17": {
            "text": "& auch davor eine Vollendung gesehen"
        },
        "line.18": {
            "text": "die in Sprache ausgedrückt"
        },
        "line.19": {
            "text": "nicht vorkommen kann -"
        },
        "line.20": {
            "text": "wenn sie sich singen ließe, dann"
        },
        "line.21": {
            "text": "in einem Chorwerk von Pergolesi"
        },
        "line.22": {
            "text": "an der wahren Schönheit operierte"
        },
        "line.23": {
            "text": "sie, sie hatte einen Fehler, schielte"
        },
        "line.24": {
            "text": "leicht um Litfaßsäulen, Bars"
        },
        "line.25": {
            "text": "wenn sie nicht redete, legte ich"
        },
        "line.26": {
            "text": "den Kopf ins Gras & schwieg die Zeit"
        },
        "line.27": {
            "text": "zu Ende"
        }
    }
}