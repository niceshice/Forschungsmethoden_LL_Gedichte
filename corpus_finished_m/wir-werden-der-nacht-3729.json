{
    "title": "wir-werden-der-nacht-3729",
    "gender": "m",
    "author": "Peter Turrini",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Wir werden der Nacht"
        },
        "line.2": {
            "text": "eine offene Rose"
        },
        "line.3": {
            "text": "entreißen."
        },
        "line.4": {
            "text": "Wir werden aus der Mauer"
        },
        "line.5": {
            "text": "eine Handvoll Samen"
        },
        "line.6": {
            "text": "holen."
        },
        "line.7": {
            "text": "Wir werden aus dem Schweigen"
        },
        "line.8": {
            "text": "Purzelbäume"
        },
        "line.9": {
            "text": "formen."
        },
        "line.10": {
            "text": "Wenn ich einen Termin frei habe."
        }
    }
}