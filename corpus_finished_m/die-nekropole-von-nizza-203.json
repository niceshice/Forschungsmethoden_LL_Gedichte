{
    "title": "die-nekropole-von-nizza-203",
    "gender": "m",
    "author": "Joachim Sartorius",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Das Krematorium der Stadt Nizza,"
        },
        "line.2": {
            "text": "eingezäunt, 10 km aufwärts am Var,"
        },
        "line.3": {
            "text": "zwischen Kleinindustrie und Mangoldfeldern,"
        },
        "line.4": {
            "text": "gebaut in ein felsiges Amphitheater"
        },
        "line.5": {
            "text": "wie ein moderner Tempel für Hatschepsut,"
        },
        "line.6": {
            "text": "Arabesken aus Leichtbeton, weiß, bombastisch,"
        },
        "line.7": {
            "text": "sinnlose Versatzstücke der Callablüte"
        },
        "line.8": {
            "text": "und des Mohnstengels, unwirklich, lumpig"
        },
        "line.9": {
            "text": "und bedrängt, umzäunt, baumlos:"
        },
        "line.10": {
            "text": "Platz für 60.000 Urnen."
        },
        "line.11": {
            "text": "Der Wind orgelt über den Parkplatz,"
        },
        "line.12": {
            "text": "als zerstöhne sich die Asche noch."
        },
        "line.13": {
            "text": "Zwei Wärter, Nordafrikaner,"
        },
        "line.14": {
            "text": "Gesichter, die auf Prügel warten,"
        },
        "line.15": {
            "text": "hissen Butanflaschen"
        },
        "line.16": {
            "text": "auf eine Lorre, die ins Innere fährt"
        },
        "line.17": {
            "text": "im Glanz der Stabtaschenlampen."
        }
    }
}