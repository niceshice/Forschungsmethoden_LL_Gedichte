{
    "title": "elegie-istanbul-konstantinopel-11",
    "gender": "m",
    "author": "Armin Senser",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "Staub zementiert die Nüstern. Staub bedeckt"
        },
        "line.2": {
            "text": "alles, was sich infolge Mangels an Bewegung"
        },
        "line.3": {
            "text": "Raum verschafft: Straßen, Plätze,"
        },
        "line.4": {
            "text": "gewagte Dcollets, Wangen, Bücher."
        },
        "line.5": {
            "text": "Staub umhüllt Zedern, Statuen, Minarette,"
        },
        "line.6": {
            "text": "Paläste. Er füllt die Hand des Bettlers,"
        },
        "line.7": {
            "text": "stopft die städtischen Abwasserleitungen,"
        },
        "line.8": {
            "text": "Staub führt das Auge hinters Licht."
        },
        "line.9": {
            "text": "Überall Staub. Staub auf den Seidenstrümpfen,"
        },
        "line.10": {
            "text": "im Kaffee, im Wimpernhaar, auf der Zunge,"
        },
        "line.11": {
            "text": "Staub mischt sich in alles ein: in Farben,"
        },
        "line.12": {
            "text": "den Regen, ins Bewußtsein."
        },
        "line.13": {
            "text": "Staub erstickt Kamine, es ersticken"
        },
        "line.14": {
            "text": "die Lungen greiser Chevrolets, Glocken"
        },
        "line.15": {
            "text": "ersticken, Staub erstickt die Zeit."
        },
        "line.16": {
            "text": "Im Staub versiegen Meere, Flüsse,"
        },
        "line.17": {
            "text": "Stimmen, versiegt die Stadt. Staub"
        },
        "line.18": {
            "text": "macht sich breit in Schuhen, dem"
        },
        "line.19": {
            "text": "Wort, in Gedanken. Staub geht durchs"
        },
        "line.20": {
            "text": "Öhr und setzt sich fort bis in den Tod."
        }
    }
}