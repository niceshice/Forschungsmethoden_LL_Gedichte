{
    "title": "schulkinder-6082",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Die Kriegsfackel flackerte durchs Land mit Bränden,"
        },
        "line.2": {
            "text": "warf Ängste in die Menschen,"
        },
        "line.3": {
            "text": "Soldaten löschten daran"
        },
        "line.4": {
            "text": "und hielten sie"
        },
        "line.5": {
            "text": "mit Mühe niedrig."
        },
        "line.6": {
            "text": "Buchstaben sollten wir nicht lernen, -"
        },
        "line.7": {
            "text": "Handgranatenwurf!"
        },
        "line.8": {
            "text": "hörten wir Kinder."
        },
        "line.9": {
            "text": "Wir sollten nicht Lieder singen"
        },
        "line.10": {
            "text": "zu Gärten, -"
        },
        "line.11": {
            "text": "im Kampfschritt gehen und schrein"
        },
        "line.12": {
            "text": "zum Tod der Feinde, hieß es."
        },
        "line.13": {
            "text": "Wir sollten nicht für uns"
        },
        "line.14": {
            "text": "die Kühe hüten,"
        },
        "line.15": {
            "text": "sondern für die Männer an den Fronten."
        },
        "line.16": {
            "text": "Wir sollten an den Füßen Leder sparen,"
        },
        "line.17": {
            "text": "für ihre Stiefel sei es besser"
        },
        "line.18": {
            "text": "und förderlicher angewendet,"
        },
        "line.19": {
            "text": "und kürzen sollte man den Stoff für Kleider,"
        },
        "line.20": {
            "text": "wir sollten schon mit sechzehn Jahren"
        },
        "line.21": {
            "text": "wie Zwanzigjährige an Fronten stehn,"
        },
        "line.22": {
            "text": "an feuernden Kanonen."
        },
        "line.23": {
            "text": "So war ich Schulkind."
        },
        "line.24": {
            "text": "Ich senke meinen Kopf."
        }
    }
}