{
    "title": "maschinenzeit-8240",
    "gender": "m",
    "author": "Levin Westermann",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "maschinenzeit"
        },
        "line.2": {
            "text": "; aus"
        },
        "line.3": {
            "text": "den ästen"
        },
        "line.4": {
            "text": "tropft das erste licht des morgens"
        },
        "line.5": {
            "text": "und der wind bringt neue namen"
        },
        "line.6": {
            "text": "für drei dinge, die wir einstmals"
        },
        "line.7": {
            "text": "anders nannten. der stumme winkel,"
        },
        "line.8": {
            "text": "den zwei wände bilden,"
        },
        "line.9": {
            "text": "wenn sie sich in deinem rücken treffen,"
        },
        "line.10": {
            "text": "um ein schweigen zu beschliessen,"
        },
        "line.11": {
            "text": "wenn du dich leidlich windest,"
        },
        "line.12": {
            "text": "zwischen wiederkommen und verharren."
        },
        "line.13": {
            "text": "die stimmen, die dich endlos teilen,"
        },
        "line.14": {
            "text": "um sich allmählich einzunisten,"
        },
        "line.15": {
            "text": "ein konzentriertes zittern vor dem beben"
        },
        "line.16": {
            "text": "tief im schlund."
        },
        "line.17": {
            "text": "türen fallen von den kacheln"
        },
        "line.18": {
            "text": "und verschliessen orte,"
        },
        "line.19": {
            "text": "welche nun im dunkeln liegen"
        },
        "line.20": {
            "text": "oder aber, hell erleuchtet, unsichtbar"
        },
        "line.21": {
            "text": "auf antwort warten. grüne augen"
        },
        "line.22": {
            "text": "oder blaue augen beim morgendlichen häuten"
        },
        "line.23": {
            "text": "auf rezept. es riecht nach putz"
        },
        "line.24": {
            "text": "und all der zeit im teppich,"
        },
        "line.25": {
            "text": "riecht nach seife, riecht nach kaffee"
        },
        "line.26": {
            "text": "und nach dreck. vom balkon"
        },
        "line.27": {
            "text": "siehst du das meer,"
        },
        "line.28": {
            "text": "abzüglich der fluchtbewegung"
        },
        "line.29": {
            "text": "in die tiefe; vom balkon"
        },
        "line.30": {
            "text": "hörst du den sand,"
        },
        "line.31": {
            "text": "zuzüglich des glockenschlags"
        },
        "line.32": {
            "text": "um zwölf. mit spuren auf dem torso"
        },
        "line.33": {
            "text": "und steinen in den taschen,"
        },
        "line.34": {
            "text": "all die dinge, die du fasst,"
        },
        "line.35": {
            "text": "bis sie dich schliesslich fassen,"
        },
        "line.36": {
            "text": "viel haben, abzüglich des seins"
        },
        "line.37": {
            "text": "und du legst noch eine decke"
        },
        "line.38": {
            "text": "um die schultern,"
        },
        "line.39": {
            "text": "denn plötzlich ist dir kalt"
        },
        "line.40": {
            "text": "im mund."
        }
    }
}