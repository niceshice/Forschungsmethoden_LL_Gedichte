{
    "title": "das-wahre-troja-liegt-innen-7570",
    "gender": "m",
    "author": "Andre Rudolph",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "einmal,"
        },
        "line.2": {
            "text": "während jener belagerungszustände,"
        },
        "line.3": {
            "text": "in die wir unsere körper"
        },
        "line.4": {
            "text": "durch den reichlichen gebrauch von cocktails"
        },
        "line.5": {
            "text": "versetzten, als wären wir"
        },
        "line.6": {
            "text": "seefahrer oder huren nicht nur im traum,"
        },
        "line.7": {
            "text": "wurdest du so nahbar,"
        },
        "line.8": {
            "text": "dass mir davon die augen bluteten"
        },
        "line.9": {
            "text": "die stadt lag friedlich wie je"
        },
        "line.10": {
            "text": "und bemerkte gar nicht,"
        },
        "line.11": {
            "text": "dass sie gerade beschossen wurde"
        },
        "line.12": {
            "text": "ganze straßenzüge wurden unterdessen"
        },
        "line.13": {
            "text": "ausgelöscht;"
        },
        "line.14": {
            "text": "wir waren die einzigen, die das sahn"
        },
        "line.15": {
            "text": "aber wir saßen fest"
        },
        "line.16": {
            "text": "und warteten ab, dass es vorüberginge"
        },
        "line.17": {
            "text": "dann sprudelte draußen"
        },
        "line.18": {
            "text": "aus den abgeschlagnen köpfen der hydranten"
        },
        "line.19": {
            "text": "frisches leben"
        },
        "line.20": {
            "text": "und überschwemmte alles"
        },
        "line.21": {
            "text": "du erinnerst dich, lieber christoph"
        },
        "line.22": {
            "text": "wir gingen hinaus,"
        },
        "line.23": {
            "text": "du mit deinem komischen hut"
        },
        "line.24": {
            "text": "und ich mit ein paar hasenohren"
        },
        "line.25": {
            "text": "aber wir kamen gut durch,"
        },
        "line.26": {
            "text": "die laternen beugten sich mit ihren gebogenen"
        },
        "line.27": {
            "text": "hälsen zu uns herunter,"
        },
        "line.28": {
            "text": "friedliche saurier"
        },
        "line.29": {
            "text": "sie fraßen uns"
        },
        "line.30": {
            "text": "das licht aus der hand,"
        },
        "line.31": {
            "text": "und ich erzählte dir,"
        },
        "line.32": {
            "text": "dass ich neuerdings meditiere,"
        },
        "line.33": {
            "text": "gegen die tödliche nervosität,"
        },
        "line.34": {
            "text": "die mein ganzes leben bestimmt"
        }
    }
}