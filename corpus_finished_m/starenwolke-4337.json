{
    "title": "starenwolke-4337",
    "gender": "m",
    "author": "Wulf Kirsten",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "der herbst schwingt eine schwarze rassel,"
        },
        "line.2": {
            "text": "waghalsige flugspiele am himmel zur schau"
        },
        "line.3": {
            "text": "gestellt, dirigiert von einem meister,"
        },
        "line.4": {
            "text": "der die starenwolke figurenschneiden"
        },
        "line.5": {
            "text": "heißt, ein fahnenschwenken und senken,"
        },
        "line.6": {
            "text": "ein wehen so zart und luftig, ein wehen"
        },
        "line.7": {
            "text": "so biegsam und kunstvoll, bis sie"
        },
        "line.8": {
            "text": "aufstiebt, die wolke in schwarz,"
        },
        "line.9": {
            "text": "als wäre der teufel in sie gefahren,"
        },
        "line.10": {
            "text": "zu sehen, zu bewundern, wie elegant"
        },
        "line.11": {
            "text": "sich stare formieren, auf ein ballett"
        },
        "line.12": {
            "text": "eingeschworen, das sich jäh ballt"
        },
        "line.13": {
            "text": "und rasch wieder entzurrt"
        },
        "line.14": {
            "text": "auf überirdisches kommando,"
        },
        "line.15": {
            "text": "inszeniertes gebild, darbietung"
        },
        "line.16": {
            "text": "zirzensischer natur, ein flügel-"
        },
        "line.17": {
            "text": "rauschen abertausendfach, unisono"
        },
        "line.18": {
            "text": "ganz in schwarz, der himmel kahl"
        },
        "line.19": {
            "text": "gefressen, myriaden gegen myriaden,"
        },
        "line.20": {
            "text": "ein vorspiel flüchtigen abbilds,"
        },
        "line.21": {
            "text": "was da aufzuckt, die vergänglichkeit"
        },
        "line.22": {
            "text": "übt sich in sprechenden bildern,"
        },
        "line.23": {
            "text": "gedenkt nicht grundlos, nicht anders,"
        },
        "line.24": {
            "text": "ebenso deiner, ebenso meiner."
        }
    }
}