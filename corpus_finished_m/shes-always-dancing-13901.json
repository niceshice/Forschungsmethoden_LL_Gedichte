{
    "title": "shes-always-dancing-13901",
    "gender": "m",
    "author": "Max Sessner",
    "author_birth": "1959",
    "poem": {
        "line.1": {
            "text": "Das Mädchen das immerzu tanzen"
        },
        "line.2": {
            "text": "will steckt wie ich vermute in der Haut"
        },
        "line.3": {
            "text": "meiner alten Nachbarin vom Haus"
        },
        "line.4": {
            "text": "gegenüber dreimal am Tag Sommer"
        },
        "line.5": {
            "text": "wie Winter verlässt sie das Haus geht"
        },
        "line.6": {
            "text": "mit graziösen Schrittchen die Füße"
        },
        "line.7": {
            "text": "in Hauspantoffeln zu ihrem Kleinwagen"
        },
        "line.8": {
            "text": "der in der Hofeinfahrt parkt umrundet"
        },
        "line.9": {
            "text": "ihn mehrmals bleibt schließlich stehen"
        },
        "line.10": {
            "text": "und starrt auf die Strasse hinaus wie"
        },
        "line.11": {
            "text": "in etwas Dunkles Applaus flüstert's"
        },
        "line.12": {
            "text": "im Dunklen und ein Raunen liegt in"
        },
        "line.13": {
            "text": "der Luft das ist ein bisschen makaber"
        },
        "line.14": {
            "text": "aber auch ein bisschen schön wenn"
        },
        "line.15": {
            "text": "man zufällig am Fenster steht streicht"
        },
        "line.16": {
            "text": "man sich unwillkürlich die Haare glatt"
        }
    }
}