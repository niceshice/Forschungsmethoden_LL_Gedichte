{
    "title": "zuni-ny-3943",
    "gender": "m",
    "author": "Dieter M. Gräf",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": "1"
        },
        "line.2": {
            "text": "in Richtung Leer"
        },
        "line.3": {
            "text": "gefegter oder Öder Platz"
        },
        "line.4": {
            "text": "Audubon Ballroom, fast schon"
        },
        "line.5": {
            "text": "Viertausenderbroadway, farbige Terra"
        },
        "line.6": {
            "text": "kottafassade, Fake mit Füchsen (hängen"
        },
        "line.7": {
            "text": "für Besitzer Fox),Todesargo über allem,"
        },
        "line.8": {
            "text": "ihr weis"
        },
        "line.9": {
            "text": "sagendes sog. Holz sprach"
        },
        "line.10": {
            "text": "Gegenwart"
        },
        "line.11": {
            "text": "gehört den Märtyrern"
        },
        "line.12": {
            "text": "."
        },
        "line.13": {
            "text": "Malcolm Little, Detroit Red, X, El Hajj Malik Shabbaz"
        },
        "line.14": {
            "text": "blau"
        },
        "line.15": {
            "text": "färbten sich die Augen des einstigen Predigers vom Tempel 7,"
        },
        "line.16": {
            "text": "sie verfärbten sich stets."
        },
        "line.17": {
            "text": "Nahm Sonnenbäder(von Berufs wegen),"
        },
        "line.18": {
            "text": "Afrikaner nannten ihn Albino,weisse Teufel interviewten,"
        },
        "line.19": {
            "text": "schwarze Glaubensbrüder durchsiebten ihn,hier."
        },
        "line.20": {
            "text": "Jeder Finger,jeder Zeh,jedes Auge,jedes Weh"
        },
        "line.21": {
            "text": "geht manchmal in seine eigene Richtung,"
        },
        "line.22": {
            "text": "so dass nichts zurückbleibt auf dem Platz"
        },
        "line.23": {
            "text": "Persönlichkeit"
        },
        "line.24": {
            "text": "."
        },
        "line.25": {
            "text": "Seine Geschichten ------ Torpedos gegen die Geschichte,"
        },
        "line.26": {
            "text": "aber viel bizarrer als sie."
        },
        "line.27": {
            "text": "Die brave Linienhand"
        },
        "line.28": {
            "text": "schrift, Knastschule,hat jahrelang alles mit"
        },
        "line.29": {
            "text": "geschrieben, was derSendbote verzapfte:Jakub"
        },
        "line.30": {
            "text": "der Grossköpfige, der die Weissen gezüchtet hat,die Mutter-"
        },
        "line.31": {
            "text": "und Babyflugzeuge der Unerbittlichen im"
        },
        "line.32": {
            "text": "entscheidenden Angriff --------Armageddon."
        },
        "line.33": {
            "text": "Sich tapfer er"
        },
        "line.34": {
            "text": "finden müssen, mit Underdogposen; Kämpfer, mied die Tat. 39,"
        },
        "line.35": {
            "text": "Schauspieler"
        },
        "line.36": {
            "text": "charisma (wird aufAutobiographie"
        },
        "line.37": {
            "text": "vom Schauspieler Denzel Washington ersetzt),"
        },
        "line.38": {
            "text": "stets freundlich,"
        },
        "line.39": {
            "text": "waren die Mikros abgestellt;"
        },
        "line.40": {
            "text": "ansonsten:"
        },
        "line.41": {
            "text": "Wir hoffen, dass jeden Tag"
        },
        "line.42": {
            "text": "ein Flugzeug vom Himmel fällt (Telegramm von Allah)"
        },
        "line.43": {
            "text": "--"
        },
        "line.44": {
            "text": "Runter nach Harlem gelaufen,"
        },
        "line.45": {
            "text": "zu"
        },
        "line.46": {
            "text": "Sylvias"
        },
        "line.47": {
            "text": ", Malcolm X Boulevard,"
        },
        "line.48": {
            "text": "zum Hotel Teresa, erund Fidel Castro"
        },
        "line.49": {
            "text": "sitzen auf schäbigem Bett,Chruschtschowtage,"
        },
        "line.50": {
            "text": "ganz junge Typen, vor denen das weisse Amerika zitterte --"
        },
        "line.51": {
            "text": "--Malcolm X Boulevard, Harlem, New York:"
        },
        "line.52": {
            "text": "dort am Martin Luther King, Jr.- Spielplatz"
        },
        "line.53": {
            "text": "einen stolzen Mann gern nach dem Weg gefragt,"
        },
        "line.54": {
            "text": "2"
        },
        "line.55": {
            "text": "in Richtung"
        },
        "line.56": {
            "text": "Heim des heutigen Tags"
        },
        "line.57": {
            "text": "in Richtung"
        },
        "line.58": {
            "text": "Heim des Wassers"
        },
        "line.59": {
            "text": "3"
        },
        "line.60": {
            "text": "in Richtung Platz"
        },
        "line.61": {
            "text": "des Wunderschönen Rot"
        }
    }
}