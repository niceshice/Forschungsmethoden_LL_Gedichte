{
    "title": "umbruch-749",
    "gender": "m",
    "author": "Mirko Bonné",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Getrabt, mit grünen Hufen, kam,"
        },
        "line.2": {
            "text": "über den buckligen Moränenrücken,"
        },
        "line.3": {
            "text": "das Wetter. Und das Wetter,"
        },
        "line.4": {
            "text": "das andere, in der Erde, rief,"
        },
        "line.5": {
            "text": "dem Wetter, dem ersten, zu:"
        },
        "line.6": {
            "text": "Frühling!"
        },
        "line.7": {
            "text": "Die Bergmänner verwandelten sich"
        },
        "line.8": {
            "text": "zu Wegerich. Der Brennesselbusch,"
        },
        "line.9": {
            "text": "im Schatten der alten Gärtnerei,"
        },
        "line.10": {
            "text": "keiner wird es glauben, ist"
        },
        "line.11": {
            "text": "mein Vater."
        },
        "line.12": {
            "text": "Während man noch in der Zeitung"
        },
        "line.13": {
            "text": "von Veränderungen liest,"
        },
        "line.14": {
            "text": "schlagen die Regenschirme Wurzeln"
        },
        "line.15": {
            "text": "im Autobus. In den Kellern"
        },
        "line.16": {
            "text": "fällt Schnee, und das Unkraut,"
        },
        "line.17": {
            "text": "hört man, fordert, wie die Asseln,"
        },
        "line.18": {
            "text": "Gerechtigkeit."
        }
    }
}