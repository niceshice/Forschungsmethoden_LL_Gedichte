{
    "title": "so-leicht-11581",
    "gender": "m",
    "author": "Jürg  Halter",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "So leicht wie eine Plastiktüte,"
        },
        "line.2": {
            "text": "die eine Straße entlang schwebt,"
        },
        "line.3": {
            "text": "so leicht wie der Gang einer Frau,"
        },
        "line.4": {
            "text": "die Treppe zur S-Bahn empor,"
        },
        "line.5": {
            "text": "so leicht wie die Wolke dort,"
        },
        "line.6": {
            "text": "die mein Herz in sich trägt,"
        },
        "line.7": {
            "text": "so leicht wie in diesen Minuten"
        },
        "line.8": {
            "text": "war mir lange nicht zumut"
        },
        "line.9": {
            "text": "als hätt die Schwerkraft mich"
        },
        "line.10": {
            "text": "eben mal verlassen ..."
        },
        "line.11": {
            "text": "oder bin ich bloß"
        },
        "line.12": {
            "text": "vom Stuhl gekippt"
        },
        "line.13": {
            "text": "und hab das Malheur"
        },
        "line.14": {
            "text": "als einziger noch"
        },
        "line.15": {
            "text": "nicht mitgekriegt?"
        }
    }
}