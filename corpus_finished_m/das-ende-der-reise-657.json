{
    "title": "das-ende-der-reise-657",
    "gender": "m",
    "author": "Uwe Kolbe",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "Du sitzt, früh auf,"
        },
        "line.2": {
            "text": "hebräisch im Zwielicht der Taube,"
        },
        "line.3": {
            "text": "doch scheint es, in einem Buch,"
        },
        "line.4": {
            "text": "in dem du die Welt liest,"
        },
        "line.5": {
            "text": "denn sonst bestünde"
        },
        "line.6": {
            "text": "der Glockenschlag nicht,"
        },
        "line.7": {
            "text": "den der Trinker zum Anlaß nimmt"
        },
        "line.8": {
            "text": "seiner letzten Suada,"
        },
        "line.9": {
            "text": "das Rappeln des Wagens"
        },
        "line.10": {
            "text": "des Straßenkehrers (heut ist es nicht"
        },
        "line.11": {
            "text": "Quasimodo, dein Traum"
        },
        "line.12": {
            "text": "gibt ihm frei für den Sonntag)."
        },
        "line.13": {
            "text": "Denn sonst bestünde"
        },
        "line.14": {
            "text": "der Schritt eines Fremden nicht,"
        },
        "line.15": {
            "text": "das Prasseln der Reifen"
        },
        "line.16": {
            "text": "des Taxis, das einen davonträgt,"
        },
        "line.17": {
            "text": "hinaus aus der Stadt."
        },
        "line.18": {
            "text": "Das Gleichmaß des Brunnens,"
        },
        "line.19": {
            "text": "der fließendes Wasser nachahmt."
        },
        "line.20": {
            "text": "Sonst wären es nicht"
        },
        "line.21": {
            "text": "inzwischen drei Straßenkehrer,"
        },
        "line.22": {
            "text": "zwei Pärchen Tauben, die lauthals,"
        },
        "line.23": {
            "text": "nun Krähe, die Elster, die Amsel."
        },
        "line.24": {
            "text": "Nicht einmal dein kalter Schwanz"
        },
        "line.25": {
            "text": "und der Atem,"
        },
        "line.26": {
            "text": "der leise Schmerz"
        },
        "line.27": {
            "text": "des gebeugten Nackens,"
        },
        "line.28": {
            "text": "nichts, gar nichts bestünde,"
        },
        "line.29": {
            "text": "von Draußen nach Drinnen,"
        },
        "line.30": {
            "text": "der Blick, wie er sich zurückzieht,"
        },
        "line.31": {
            "text": "der Traum eines Mannes,"
        },
        "line.32": {
            "text": "der aufgegeben hat."
        }
    }
}