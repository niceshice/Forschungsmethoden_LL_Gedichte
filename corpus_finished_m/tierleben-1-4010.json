{
    "title": "tierleben-1-4010",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "1"
        },
        "line.2": {
            "text": "Immer bedeutet der Spiegel"
        },
        "line.3": {
            "text": "beides zugleich."
        },
        "line.4": {
            "text": "Samt"
        },
        "line.5": {
            "text": "und"
        },
        "line.6": {
            "text": "sonders"
        },
        "line.7": {
            "text": "im Verein. Ein"
        },
        "line.8": {
            "text": "oft besuchter Ort wo"
        },
        "line.9": {
            "text": "Leere staunt. Wo Asche weiss"
        },
        "line.10": {
            "text": "wer sie ist. Jeder"
        },
        "line.11": {
            "text": "Apfel als Mitgift. Und aber"
        },
        "line.12": {
            "text": "bald ruht die n-te"
        },
        "line.13": {
            "text": "Natur auch. Ob der Leib"
        },
        "line.14": {
            "text": "die Wärme oder die Wärme"
        },
        "line.15": {
            "text": "den Leib sucht. Das"
        },
        "line.16": {
            "text": "sächliche Geschlecht ist"
        },
        "line.17": {
            "text": "nie nicht gefälscht."
        },
        "line.18": {
            "text": "Echt kein Ruhm. Wo"
        },
        "line.19": {
            "text": "inmitten der Nixe"
        },
        "line.20": {
            "text": "die Quelle rumort und leis"
        },
        "line.21": {
            "text": "eine Oper beginnt."
        },
        "line.22": {
            "text": "(\"Der Spiegel ist"
        },
        "line.23": {
            "text": "der Ort wo"
        },
        "line.24": {
            "text": "Leere staunt. Wo Samt"
        },
        "line.25": {
            "text": "und Asche weiss"
        },
        "line.26": {
            "text": "aber schwarz sind. Wie"
        },
        "line.27": {
            "text": "jede Mitgift. Was"
        },
        "line.28": {
            "text": "heissen will. Ob die n-te"
        },
        "line.29": {
            "text": "Natur ruht oder"
        },
        "line.30": {
            "text": "Wärme den Leib sucht. Das"
        },
        "line.31": {
            "text": "sächliche Geschlecht"
        },
        "line.32": {
            "text": "das echt gefälscht ist wie"
        },
        "line.33": {
            "text": "kein Quell und eine"
        },
        "line.34": {
            "text": "Nixe die leis  mit"
        },
        "line.35": {
            "text": "dem Sinken  beginnt.\")"
        }
    }
}