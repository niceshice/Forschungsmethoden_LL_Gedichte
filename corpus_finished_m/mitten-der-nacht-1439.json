{
    "title": "mitten-der-nacht-1439",
    "gender": "m",
    "author": "Paul Maar",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Keine Ahnung, wo ich bin."
        },
        "line.2": {
            "text": "Nichts als Dunkel um mich her."
        },
        "line.3": {
            "text": "Wie im Bauch von einem Fisch"
        },
        "line.4": {
            "text": "meilentief im Schwarzen Meer."
        },
        "line.5": {
            "text": "Lebt noch jemand außer mir?"
        },
        "line.6": {
            "text": "Oder bin ich ganz allein!"
        },
        "line.7": {
            "text": "Diese Stille. Dieses Dunkel."
        },
        "line.8": {
            "text": "Gleich beginne ich zu schrein."
        },
        "line.9": {
            "text": "Da entdeck ich in der Schwärze"
        },
        "line.10": {
            "text": "einen schmalen Strich aus Licht."
        },
        "line.11": {
            "text": "Das ist meine Zimmertüre!"
        },
        "line.12": {
            "text": "Alles klar, ich schreie nicht."
        }
    }
}