{
    "title": "schwarzgalle-10094",
    "gender": "m",
    "author": "Christoph Meckel",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Nicht wünschenswert, mit ihr"
        },
        "line.2": {
            "text": "auf die Inseln zu kommen,"
        },
        "line.3": {
            "text": "wenn die Rückkehr von dort immer mehr"
        },
        "line.4": {
            "text": "ihre Schwermut vertieft,"
        },
        "line.5": {
            "text": "und zurückbleibt, was an anderen Stellen"
        },
        "line.6": {
            "text": "der erreichbaren Erde für sie"
        },
        "line.7": {
            "text": "vorhanden sein sollte"
        },
        "line.8": {
            "text": "Ein Bungalow, winterfest,"
        },
        "line.9": {
            "text": "aus Holz und Schiefer,"
        },
        "line.10": {
            "text": "Nachttropfen im Nussbaum,"
        },
        "line.11": {
            "text": "Vogelflug im September, Horizonte"
        },
        "line.12": {
            "text": "vor hellen Zonen, strömendes Wasser"
        },
        "line.13": {
            "text": "und was von Verwüstung nicht erreicht"
        },
        "line.14": {
            "text": "Wir ziehn weiter, mein Vogel,"
        },
        "line.15": {
            "text": "wir fliegen fort"
        }
    }
}