{
    "title": "kruzifix-7079",
    "gender": "m",
    "author": "Sepp Mall",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Im Krankenzimmer / hängt"
        },
        "line.2": {
            "text": "ein blasser Korpus"
        },
        "line.3": {
            "text": "unter den Lamellen der Klima"
        },
        "line.4": {
            "text": "O Gott / sage ich"
        },
        "line.5": {
            "text": "Wie bist du schmal ge-"
        },
        "line.6": {
            "text": "worden"
        },
        "line.7": {
            "text": "ein richtiges Handtuch"
        },
        "line.8": {
            "text": "Und im Spiegel / dreht"
        },
        "line.9": {
            "text": "Sich die Ärzteschar weg"
        },
        "line.10": {
            "text": "Mit lachendem Trippel-"
        },
        "line.11": {
            "text": "schritt / eine"
        },
        "line.12": {
            "text": "Sekunde zu schnell"
        },
        "line.13": {
            "text": "Heilen / ist auch"
        },
        "line.14": {
            "text": "so ein Wort / das man gern"
        },
        "line.15": {
            "text": "in den Mund nimmt"
        }
    }
}