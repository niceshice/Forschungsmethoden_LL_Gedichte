{
    "title": "winterspiel-472",
    "gender": "m",
    "author": "Lutz Rathenow",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "Schneemänner rasen"
        },
        "line.2": {
            "text": "nachts in den Straßen."
        },
        "line.3": {
            "text": "Schneller als Wind"
        },
        "line.4": {
            "text": "sieht sie kein Kind."
        },
        "line.5": {
            "text": "Mit Bonbonstücken,"
        },
        "line.6": {
            "text": "Salzstangenkrücken,"
        },
        "line.7": {
            "text": "schlagen sie Scheiben ein,"
        },
        "line.8": {
            "text": "setzen sie wieder ein."
        },
        "line.9": {
            "text": "In den Geschäften"
        },
        "line.10": {
            "text": "mit allen Kräften"
        },
        "line.11": {
            "text": "schmelzen sie weg."
        },
        "line.12": {
            "text": "Nasser Fleck."
        },
        "line.13": {
            "text": "Es wundern die Leute"
        },
        "line.14": {
            "text": "sich gestern und heute."
        }
    }
}