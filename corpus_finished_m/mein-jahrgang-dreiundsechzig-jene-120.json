{
    "title": "mein-jahrgang-dreiundsechzig-jene-120",
    "gender": "m",
    "author": "Lutz Seiler",
    "author_birth": "1963",
    "poem": {
        "line.1": {
            "text": "endlose folge von kindern, geschraubt"
        },
        "line.2": {
            "text": "in das echo gewölbe der flure, verkrochen"
        },
        "line.3": {
            "text": "beim gehen gebeugt in die tasche"
        },
        "line.4": {
            "text": "eines anderen, fremden mantels, sieben"
        },
        "line.5": {
            "text": "voll wachs mit einer aus dielen"
        },
        "line.6": {
            "text": "geatmeten schwere, acht"
        },
        "line.7": {
            "text": "mit einer aus piss-"
        },
        "line.8": {
            "text": "becken zu kopf gestiegenen schwere, wir hatten"
        },
        "line.9": {
            "text": "gagarin, aber gagarin"
        },
        "line.10": {
            "text": "hatte auch uns, morgens das gleiche, der schrift"
        },
        "line.11": {
            "text": "folgende scharren der ärmel"
        },
        "line.12": {
            "text": "über den bänken & mittags"
        },
        "line.13": {
            "text": "das schlagwerk der löffel, wir hatten"
        },
        "line.14": {
            "text": "den tischdienst, den milchdienst, den druck"
        },
        "line.15": {
            "text": "einer leerkraft in den augen gelee"
        },
        "line.16": {
            "text": "in den ohren bis"
        },
        "line.17": {
            "text": "sie verstummte"
        },
        "line.18": {
            "text": "die schwerkraft verstummte"
        },
        "line.19": {
            "text": "in unseren mützen"
        },
        "line.20": {
            "text": "das waren die schmerzen"
        },
        "line.21": {
            "text": "beim urinieren, im schutzwald"
        },
        "line.22": {
            "text": "beim sprechen, wir hatten"
        },
        "line.23": {
            "text": "zitate: dass wir den schattenseiten des planeten"
        },
        "line.24": {
            "text": "wenigstens"
        },
        "line.25": {
            "text": "eine lichte entgegenhielten"
        },
        "line.26": {
            "text": "erst alle gemeinsam & dann"
        },
        "line.27": {
            "text": "jeder noch einmal"
        },
        "line.28": {
            "text": "still für sich, wir hatten"
        },
        "line.29": {
            "text": "kein glück. also zerfallen die häuser"
        },
        "line.30": {
            "text": "werden wir endlich"
        },
        "line.31": {
            "text": "wieder klein &"
        },
        "line.32": {
            "text": "reiten zurück in die dörfer aus holz, aus"
        },
        "line.33": {
            "text": "stroh, aus denen wir kamen, rissig & dünn"
        },
        "line.34": {
            "text": "mit einem am wind"
        },
        "line.35": {
            "text": "geschliffenen echo: wir grüssen gagarin, wir"
        },
        "line.36": {
            "text": "hatten kein glück, abfahrt, zurück"
        },
        "line.37": {
            "text": "in unsere dörfer"
        },
        "line.38": {
            "text": "& ausfahrt der dörfer"
        },
        "line.39": {
            "text": "über die äcker bei nacht..."
        }
    }
}