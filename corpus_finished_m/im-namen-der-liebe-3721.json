{
    "title": "im-namen-der-liebe-3721",
    "gender": "m",
    "author": "Peter Turrini",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Im Namen der Liebe"
        },
        "line.2": {
            "text": "verschenken wir das Herz."
        },
        "line.3": {
            "text": "Ich verblute."
        },
        "line.4": {
            "text": "Im Namen der Liebe"
        },
        "line.5": {
            "text": "rauben wir uns den Atem."
        },
        "line.6": {
            "text": "Ich ersticke."
        },
        "line.7": {
            "text": "Im Namen der Liebe"
        },
        "line.8": {
            "text": "schreiben wir einen"
        },
        "line.9": {
            "text": "anderen"
        },
        "line.10": {
            "text": "Namen"
        },
        "line.11": {
            "text": "anstelle des eigenen."
        }
    }
}