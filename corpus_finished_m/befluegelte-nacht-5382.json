{
    "title": "befluegelte-nacht-5382",
    "gender": "m",
    "author": "Richard Pietraß",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Das Fenster war zum Sommer hin geöffnet"
        },
        "line.2": {
            "text": "Zugleich verhängt mit Fliegenseide"
        },
        "line.3": {
            "text": "Daß täglich nicht, noch nächtlich"
        },
        "line.4": {
            "text": "Summbesuch die Grenze überschreite."
        },
        "line.5": {
            "text": "So lag ich auf dem Bett mit meiner Zeitung"
        },
        "line.6": {
            "text": "Vertieft ins Leben königlichen Bluts"
        },
        "line.7": {
            "text": "Als ein leiser Geigerzähler"
        },
        "line.8": {
            "text": "Meine Mondscheinstille knackte."
        },
        "line.9": {
            "text": "Ich sackte in die Tiefe meines Nests"
        },
        "line.10": {
            "text": "Und weitete die Augenschlitze"
        },
        "line.11": {
            "text": "Bis ich im Obereck des Gazefensters"
        },
        "line.12": {
            "text": "Die schreckende Erscheinung sah:"
        },
        "line.13": {
            "text": "Ein Tierchen von der Größe eines Eichblatts"
        },
        "line.14": {
            "text": "Ein Knäuel von Häuten, kunstgefaltet."
        },
        "line.15": {
            "text": "Das Ganze feinsinnigst gestaltet"
        },
        "line.16": {
            "text": "Aus Knöchelchen, aus Pelz und Widerhaken."
        },
        "line.17": {
            "text": "Die Augen Hemdennadelköpfe"
        },
        "line.18": {
            "text": "Die Ohren flink wie junge Zirkushunde"
        },
        "line.19": {
            "text": "Die Zähne nicht gleich vorn im Munde"
        },
        "line.20": {
            "text": "Die Nase zwei versenkte Tropfen."
        },
        "line.21": {
            "text": "Bestechend dunkle Engelsflügel"
        },
        "line.22": {
            "text": "Dünner als Tortillateig, geschmeidig"
        },
        "line.23": {
            "text": "Luftgespinst im Weibersommer."
        },
        "line.24": {
            "text": "Und so was will mir nahekommen ?"
        },
        "line.25": {
            "text": "Dachte ich im Leisenähertreten."
        },
        "line.26": {
            "text": "Mich lahmte der Gedanke an die Zähne"
        },
        "line.27": {
            "text": "Geschlagen in mein Schläferblut."
        },
        "line.28": {
            "text": "So meint ich, auf der Hut zu sein"
        },
        "line.29": {
            "text": "Und schloß sie zwischen Grill und Scheibe ein"
        },
        "line.30": {
            "text": "Nahm sie nur in meine Träume."
        },
        "line.31": {
            "text": "Anderntags schien sie geschwächt"
        },
        "line.32": {
            "text": "Warn dickste Fliegen ihr nicht recht"
        },
        "line.33": {
            "text": "Die ich ans Mückengitter pinnte."
        },
        "line.34": {
            "text": "Grad Wasser nahm sie noch von mir."
        },
        "line.35": {
            "text": "Doch wars nicht Hundemilch, nicht rote Tinte."
        },
        "line.36": {
            "text": "Vorbei ihr Zimmerdeckenflug, vorbei"
        },
        "line.37": {
            "text": "Der Kopfhang in der Falte der Gardine."
        },
        "line.38": {
            "text": "Ein Tag in meiner Neugierminne"
        },
        "line.39": {
            "text": "Verbrannte sie wie Bogenlampen das Insekt."
        },
        "line.40": {
            "text": "Nun trocknet sie als Menetekel"
        },
        "line.41": {
            "text": "Von Peitschenlampen an die Zimmerwand"
        },
        "line.42": {
            "text": "Geworfen übers Bett, auf dem ich lieg"
        },
        "line.43": {
            "text": "Zerknirscht und eingeigelt."
        }
    }
}