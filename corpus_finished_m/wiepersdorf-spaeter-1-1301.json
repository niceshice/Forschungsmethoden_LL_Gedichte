{
    "title": "wiepersdorf-spaeter-1-1301",
    "gender": "m",
    "author": "Klaus Merz",
    "author_birth": "1945",
    "poem": {
        "line.1": {
            "text": "Das Rad sirrt leise"
        },
        "line.2": {
            "text": "durch die Ebene, gleitet"
        },
        "line.3": {
            "text": "unter den Schattenachsen"
        },
        "line.4": {
            "text": "des Soldatenkönigs hin. Grosse"
        },
        "line.5": {
            "text": "Gänge, kleine Kränze. Lerchen"
        },
        "line.6": {
            "text": "und Falke sind in der Luft, Bogen"
        },
        "line.7": {
            "text": "und Pfeil. Tagbleich versinkt"
        },
        "line.8": {
            "text": "hinterm Dorf der Trabant,"
        },
        "line.9": {
            "text": "die freundlichen Leute stehen"
        },
        "line.10": {
            "text": "vor ihren vorbeiflitzenden Häusern."
        },
        "line.11": {
            "text": "(Zur Sicherheit wacht hinter jeder"
        },
        "line.12": {
            "text": "Hoftür der deutsche Schäfer.) Später"
        },
        "line.13": {
            "text": "am Rand der Kadaver des Hasen,"
        },
        "line.14": {
            "text": "fliehend noch immer, Wind"
        },
        "line.15": {
            "text": "und Wolken ziehen darüber weg."
        },
        "line.16": {
            "text": "Im Vorgarten der Zwerg langt"
        },
        "line.17": {
            "text": "nach seiner Schaufel und gräbt"
        },
        "line.18": {
            "text": "ein Loch in den märkischen Sand:"
        },
        "line.19": {
            "text": "Für August Ziekert, Förster a.D.,"
        },
        "line.20": {
            "text": "Wolf genannt. Er hat Grossmutter"
        },
        "line.21": {
            "text": "und Kind aus dem Tierbauch"
        },
        "line.22": {
            "text": "befreit. Über den Wackersteinen"
        },
        "line.23": {
            "text": "der Wiepersdorfer Alleen"
        },
        "line.24": {
            "text": "liegt jetzt Asphalt."
        }
    }
}