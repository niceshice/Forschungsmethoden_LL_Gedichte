{
    "title": "der-tropfen-faellt-6598",
    "gender": "m",
    "author": "Matthias  Göritz",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "Oder ich bitte dich"
        },
        "line.2": {
            "text": "Tanzen mitten im Regen"
        },
        "line.3": {
            "text": "oder ich gehe mit dir. Die Wolkenbrüche"
        },
        "line.4": {
            "text": "mitten im Leben, andere"
        },
        "line.5": {
            "text": "mathematisch, des Worts"
        },
        "line.6": {
            "text": "der Tropfen, der"
        },
        "line.7": {
            "text": "in meiner Abwesenheit"
        },
        "line.8": {
            "text": "fällt"
        },
        "line.9": {
            "text": "ebenso geht es mir"
        },
        "line.10": {
            "text": "der flache Körper, der wächst"
        },
        "line.11": {
            "text": "wenn ich an dich denke"
        },
        "line.12": {
            "text": "die Sehnsucht"
        },
        "line.13": {
            "text": "wo immer du bist"
        },
        "line.14": {
            "text": "öffnet sich eine Tür"
        }
    }
}