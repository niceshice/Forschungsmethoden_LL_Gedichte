{
    "title": "lamour-spirituelle-5693",
    "gender": "m",
    "author": "Thien Tran",
    "author_birth": "1979",
    "poem": {
        "line.1": {
            "text": "der luftleere Raum war uns"
        },
        "line.2": {
            "text": "zu unpersönlich. wir strebten auseinander"
        },
        "line.3": {
            "text": "Hanna geriet in ein Energiefeld"
        },
        "line.4": {
            "text": "außerhalb des Intendierten. so jedenfalls"
        },
        "line.5": {
            "text": "berichtete sie. als wir wieder zusammenfanden"
        },
        "line.6": {
            "text": "dass es unerträglich sei. in einer Raum-"
        },
        "line.7": {
            "text": "Zeit- und Bewegungsextension"
        },
        "line.8": {
            "text": "zu denken"
        },
        "line.9": {
            "text": "und Hanna liebte ihren Körper"
        },
        "line.10": {
            "text": "gut möglich dass die Grundkonfiguration"
        },
        "line.11": {
            "text": "ihrer Neuronensoftware nicht ausreichte"
        },
        "line.12": {
            "text": "zumindest nicht. um die Progressivform"
        },
        "line.13": {
            "text": "zu integrieren. also machte sie kehrt"
        },
        "line.14": {
            "text": "noch ehe ich mich entschuldigen konnte"
        },
        "line.15": {
            "text": "und noch wollte ich mich"
        },
        "line.16": {
            "text": "entschuldigen"
        },
        "line.17": {
            "text": "zu spät: um uns herum bildeten sich"
        },
        "line.18": {
            "text": "durchsichtige Basalt- und Eisenmoleküle"
        },
        "line.19": {
            "text": "die beiden Grundelemente des Städtischen"
        },
        "line.20": {
            "text": "und wir überprüften noch einmal die Koordinaten"
        },
        "line.21": {
            "text": "unserer Radargeräte. und stellten fest"
        },
        "line.22": {
            "text": "unter uns führte die Landebahn direkt"
        },
        "line.23": {
            "text": "in die Zivilisation."
        }
    }
}