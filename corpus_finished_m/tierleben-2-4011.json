{
    "title": "tierleben-2-4011",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "2"
        },
        "line.2": {
            "text": "Der Ich-Stirn"
        },
        "line.3": {
            "text": "eingeprägt die Sehnsucht"
        },
        "line.4": {
            "text": "nach dem Tier. Was"
        },
        "line.5": {
            "text": "bleibt ist nichts"
        },
        "line.6": {
            "text": "als dieser ausgestopfte"
        },
        "line.7": {
            "text": "Balg mit dem Geschlecht für"
        },
        "line.8": {
            "text": "zwei. Mit dem Gesicht"
        },
        "line.9": {
            "text": "das lacht und staubt wenn"
        },
        "line.10": {
            "text": "die Strafe es trifft. Liest ihm wer"
        },
        "line.11": {
            "text": "den leisesten Fluch"
        },
        "line.12": {
            "text": "von den Lippen. Den Namen"
        },
        "line.13": {
            "text": "dessen der im Spiegel"
        },
        "line.14": {
            "text": "Schmiere steht und  während"
        },
        "line.15": {
            "text": "das Glas sich beschlägt"
        },
        "line.16": {
            "text": "vergeht. Kalt wie jeder Vergleich."
        },
        "line.17": {
            "text": "(\"Die Sehnsucht nach"
        },
        "line.18": {
            "text": "dem Tier hat ein gefiedertes"
        },
        "line.19": {
            "text": "Geschlecht für zwei"
        },
        "line.20": {
            "text": "im Sinn. Ein"
        },
        "line.21": {
            "text": "Opfer ausgestopft mit Staub"
        },
        "line.22": {
            "text": "das lacht wenn die Strafe"
        },
        "line.23": {
            "text": "es trifft und der Fluch dessen"
        },
        "line.24": {
            "text": "der im Spiegel"
        },
        "line.25": {
            "text": "Schmiere steht bis auch er"
        },
        "line.26": {
            "text": "wie jeder Vergleich"
        },
        "line.27": {
            "text": "geht und vergeht.\")"
        }
    }
}