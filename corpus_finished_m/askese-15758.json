{
    "title": "askese-15758",
    "gender": "m",
    "author": "Günter Grass",
    "author_birth": "1927",
    "poem": {
        "line.1": {
            "text": "Die Katze spricht."
        },
        "line.2": {
            "text": "Was spricht die Katze denn?"
        },
        "line.3": {
            "text": "Du sollst mit einem spitzen Blei"
        },
        "line.4": {
            "text": "die Bräute und den Schnee schattieren,"
        },
        "line.5": {
            "text": "du sollst die graue Farbe lieben,"
        },
        "line.6": {
            "text": "unter bewölktem Himmel sein."
        },
        "line.7": {
            "text": "Die Katze spricht."
        },
        "line.8": {
            "text": "Was spricht die Katze denn?"
        },
        "line.9": {
            "text": "Du sollst dich mit dem Abendblatt,"
        },
        "line.10": {
            "text": "in Sacktuch wie Kartoffeln kleiden"
        },
        "line.11": {
            "text": "und diesen Anzug immer wieder wenden"
        },
        "line.12": {
            "text": "und nie in neuem Anzug sein."
        },
        "line.13": {
            "text": "Die Katze spricht."
        },
        "line.14": {
            "text": "Was spricht die Katze denn?"
        },
        "line.15": {
            "text": "Du solltest die Marine streichen,"
        },
        "line.16": {
            "text": "die Kirschen, Mohn und Nasenbluten,"
        },
        "line.17": {
            "text": "auch jene Fahne sollst du streichen"
        },
        "line.18": {
            "text": "und Asche auf Geranien streun."
        },
        "line.19": {
            "text": "Du sollst, so spricht die Katze weiter,"
        },
        "line.20": {
            "text": "nur noch von Nieren, Milz und Leber,"
        },
        "line.21": {
            "text": "von atemloser saurer Lunge,"
        },
        "line.22": {
            "text": "vom Seich der Nieren, ungewässert,"
        },
        "line.23": {
            "text": "von alter Milz und zäher Leber,"
        },
        "line.24": {
            "text": "aus grauem Topf: So sollst du leben."
        },
        "line.25": {
            "text": "Und an die Wand, wo früher pausenlos"
        },
        "line.26": {
            "text": "das grüne Bild das Grüne wiederkäute,"
        },
        "line.27": {
            "text": "sollst du mit deinem spitzen Blei"
        },
        "line.28": {
            "text": "Askese schreiben, schreib: Askese."
        },
        "line.29": {
            "text": "So spricht die Katze: Schreib Askese."
        }
    }
}