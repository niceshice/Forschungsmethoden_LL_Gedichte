{
    "title": "borges-auf-pingvellir-2896",
    "gender": "m",
    "author": "Gregor  Laschen",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "Am großen Rift bei Pingvellir, das"
        },
        "line.2": {
            "text": "jährlich Stück für Stück"
        },
        "line.3": {
            "text": "mit Sorge in die Breite geht, an dessen"
        },
        "line.4": {
            "text": "Rand der alte blinde Borges seine"
        },
        "line.5": {
            "text": "Ohren legt, das Schrein"
        },
        "line.6": {
            "text": "der schönen Frauen in der Tiefe, sie und"
        },
        "line.7": {
            "text": "das lange Büßen des Verrats belauschend"
        },
        "line.8": {
            "text": "mitzuschreiben: überblüht"
        },
        "line.9": {
            "text": "die Lavaflecken, unser Reden im"
        },
        "line.10": {
            "text": "Getöse der Geruch von Thymian."
        }
    }
}