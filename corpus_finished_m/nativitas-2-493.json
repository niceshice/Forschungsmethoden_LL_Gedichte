{
    "title": "nativitas-2-493",
    "gender": "m",
    "author": "Christian Lehnert",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "dies ist die geschichte der angst"
        },
        "line.2": {
            "text": "des embryos,"
        },
        "line.3": {
            "text": "was er gewesen war, wieder"
        },
        "line.4": {
            "text": "und wieder geschehend, hinabgesehen,"
        },
        "line.5": {
            "text": "wo zwischen daumen und zeigefinger"
        },
        "line.6": {
            "text": "nichts mehr zu rekonstruieren war"
        },
        "line.7": {
            "text": "im glas, feine kanülen"
        },
        "line.8": {
            "text": "alles, was er von sich wußte,"
        },
        "line.9": {
            "text": "abgesaugt hatten,"
        },
        "line.10": {
            "text": "wuchern ließen"
        },
        "line.11": {
            "text": "im kopf eines anderen, was"
        },
        "line.12": {
            "text": "für ein hirnrissiges produkt,"
        },
        "line.13": {
            "text": "die seele"
        },
        "line.14": {
            "text": "an den ort der zeit einzugraben,"
        },
        "line.15": {
            "text": "in ein selbstloses wesen, als ratte"
        },
        "line.16": {
            "text": "getestet,"
        },
        "line.17": {
            "text": "nierenlos, herzlos, augenlos,"
        },
        "line.18": {
            "text": "nach vervielfachung lechzende"
        },
        "line.19": {
            "text": "innereien, einzukehren in die ewige"
        },
        "line.20": {
            "text": "jagd, erstes und letztes"
        },
        "line.21": {
            "text": "leben auf dem nährboden"
        },
        "line.22": {
            "text": "(wer gut kommt, soll auch gut essen),"
        },
        "line.23": {
            "text": "sind vater und mutter"
        },
        "line.24": {
            "text": "in keiner person, sich teilend"
        },
        "line.25": {
            "text": "in ein drittes fort-"
        },
        "line.26": {
            "text": "pflanzungsfähiges"
        },
        "line.27": {
            "text": "konstrukt ihrer angst"
        }
    }
}