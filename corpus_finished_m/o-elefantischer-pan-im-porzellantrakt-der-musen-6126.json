{
    "title": "o-elefantischer-pan-im-porzellantrakt-der-musen-6126",
    "gender": "m",
    "author": "Steffen Popp",
    "author_birth": "1978",
    "poem": {
        "line.1": {
            "text": "O elefantischer Pan im Porzellantrakt der Musen"
        },
        "line.2": {
            "text": "hinter den Schleiern suchst du Gesang, übst dich"
        },
        "line.3": {
            "text": "in Gedanken: Wir sind"
        },
        "line.4": {
            "text": "ein Gespräch, sagst du, Wir sind"
        },
        "line.5": {
            "text": "Elefanten"
        },
        "line.6": {
            "text": "und bist ganz allein mit diesen Sätzen"
        },
        "line.7": {
            "text": "einsamer als Dialoge, Dickhäuter"
        },
        "line.8": {
            "text": "einsamer als die Elektrogeräte des Weltalls"
        },
        "line.9": {
            "text": "stromsparende Lampen, Wärmepumpen"
        },
        "line.10": {
            "text": "verwahrlost und hungrig nach Liebe kommen sie"
        },
        "line.11": {
            "text": "langsam heran aus dem unendlichen Dunkel"
        },
        "line.12": {
            "text": "an deiner Raumkapsel, ihren geheimen Sprossen"
        },
        "line.13": {
            "text": "an deinen klugen Händen und Knien"
        },
        "line.14": {
            "text": "deinen schlafenden Füßen, geträumten Flügeln"
        },
        "line.15": {
            "text": "reiben sie ihre Felle aus Chrom und Kunststoff"
        },
        "line.16": {
            "text": "Die angelernte Hilflosigkeit der Gegenstände"
        },
        "line.17": {
            "text": "Unmöglichkeit einer Berührung"
        },
        "line.18": {
            "text": "das Lied, unter seiner Nachtmütze aus Sternen"
        },
        "line.19": {
            "text": "bewegt es den einsamen Boiler, den irrenden"
        },
        "line.20": {
            "text": "Ventilator"
        },
        "line.21": {
            "text": "dein irrendes Auge"
        },
        "line.22": {
            "text": "auch"
        },
        "line.23": {
            "text": "in eine Nestgemeinschaft ohne Strom"
        },
        "line.24": {
            "text": "ohne Gedanken"
        },
        "line.25": {
            "text": "nur gravitierende Körper, ihre beinahe"
        },
        "line.26": {
            "text": "staatenbildende Panik vor dem Winter."
        }
    }
}