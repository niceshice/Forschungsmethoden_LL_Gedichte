{
    "title": "paradox-2597",
    "gender": "m",
    "author": "Hans Thill",
    "author_birth": "1954",
    "poem": {
        "line.1": {
            "text": "PARADOX aller Erhebung der Boden"
        },
        "line.2": {
            "text": "gibt nach. Wir legen uns beiseite:"
        },
        "line.3": {
            "text": "ein holziges Etwas, das beim Rudern"
        },
        "line.4": {
            "text": "stört. Zu stehen es steigt bis an"
        },
        "line.5": {
            "text": "die Stirn. Sich nichts anmerken"
        },
        "line.6": {
            "text": "zu lassen aufrecht in den Booten zu"
        },
        "line.7": {
            "text": "treiben während das Liegende ver-"
        },
        "line.8": {
            "text": "schwimmt. Am Handrücken"
        },
        "line.9": {
            "text": "die Stirn der Nachbarin feucht"
        },
        "line.10": {
            "text": "oder bereits an die Strömung verkauft."
        },
        "line.11": {
            "text": "Sich aufzusparen die eigene Hitze"
        },
        "line.12": {
            "text": "nicht anrechnen zu lassen"
        },
        "line.13": {
            "text": "zu kauen zu hören wie das rauscht."
        },
        "line.14": {
            "text": "Mit der Nase alles zu räumen"
        },
        "line.15": {
            "text": "immer die Allgemeinheit im Ohr"
        },
        "line.16": {
            "text": "zu schlucken wie es kommt von unten"
        },
        "line.17": {
            "text": "klopft sich seitwärts in die Knie"
        },
        "line.18": {
            "text": "drückt. Das Lineal in den Einge-"
        },
        "line.19": {
            "text": "weiden zu liebkosen zu denken:"
        },
        "line.20": {
            "text": "willkommen zu fragen: schmeckt denn"
        },
        "line.21": {
            "text": "das Treibholz nach uns"
        }
    }
}