{
    "title": "tierleben-5-4014",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "5"
        },
        "line.2": {
            "text": "Da ist der Schalter zum"
        },
        "line.3": {
            "text": "Das-Tier-Andrehn."
        },
        "line.4": {
            "text": "Wo alle Ecken enden"
        },
        "line.5": {
            "text": "und der Korridor sich sträubt"
        },
        "line.6": {
            "text": "erleuchtet der Begriff"
        },
        "line.7": {
            "text": "das Ungemeine. Bis das"
        },
        "line.8": {
            "text": "Tier-Geworden-Sein"
        },
        "line.9": {
            "text": "des Jägers zweite Natur"
        },
        "line.10": {
            "text": "ist und im krachenden"
        },
        "line.11": {
            "text": "Dickicht für immer"
        },
        "line.12": {
            "text": "das Opfer glimmt. Stimmt"
        },
        "line.13": {
            "text": "denn also der Lockruf"
        },
        "line.14": {
            "text": "der den Schuss zum Schützen"
        },
        "line.15": {
            "text": "kehrt. Und lehrt"
        },
        "line.16": {
            "text": "er  anderseits  das Mensch"
        },
        "line.17": {
            "text": "gewordne Tier"
        },
        "line.18": {
            "text": "am eignen Hunger"
        },
        "line.19": {
            "text": "zu verhungern."
        },
        "line.20": {
            "text": "(\"Rasch mal das Tier"
        },
        "line.21": {
            "text": "andrehn damit Begriffe überm"
        },
        "line.22": {
            "text": "Ungemeinen leuchten"
        },
        "line.23": {
            "text": "und die Beute auch im Dickicht"
        },
        "line.24": {
            "text": "stimmt. Anderseits"
        },
        "line.25": {
            "text": "der Lockruf kehrt den Schuss"
        },
        "line.26": {
            "text": "zum Schützen"
        },
        "line.27": {
            "text": "wie das Mensch gewordne"
        },
        "line.28": {
            "text": "Tier den Ruf das Locken"
        },
        "line.29": {
            "text": "und den Hunger"
        },
        "line.30": {
            "text": "das Verhungern lehrt.\")"
        }
    }
}