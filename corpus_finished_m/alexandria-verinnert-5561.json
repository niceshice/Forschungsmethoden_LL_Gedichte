{
    "title": "alexandria-verinnert-5561",
    "gender": "m",
    "author": "José F. A. Oliver",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "Du, Erinnerung, halte fest, wie sie waren"
        },
        "line.2": {
            "text": "(Konstantinos Kavakis)"
        },
        "line.3": {
            "text": "den epilog vorüberheiten"
        },
        "line.4": {
            "text": "im dichten ort. Die äugen"
        },
        "line.5": {
            "text": "saphirblau, ganz meerin. Eros"
        },
        "line.6": {
            "text": "gegenwart: Kavafis"
        },
        "line.7": {
            "text": "im aufgedeckten bett"
        },
        "line.8": {
            "text": "die zerriebene geographie"
        },
        "line.9": {
            "text": "der Straßen. Er"
        },
        "line.10": {
            "text": "traute sich die stille zu"
        },
        "line.11": {
            "text": "die den baren versen folgt"
        },
        "line.12": {
            "text": "und der Versehrten lust. Dann"
        },
        "line.13": {
            "text": "nahm er die frühen spiegel"
        },
        "line.14": {
            "text": "von den worten und entwarf"
        },
        "line.15": {
            "text": "die zeit. Licht-"
        },
        "line.16": {
            "text": "opal,"
        },
        "line.17": {
            "text": "nachtjasmin"
        },
        "line.18": {
            "text": "nachmittags. Im zimmer"
        },
        "line.19": {
            "text": "die Stadt vor seinem fenster"
        },
        "line.20": {
            "text": "wie unbeirrt. Am rande"
        },
        "line.21": {
            "text": "des begreifens"
        },
        "line.22": {
            "text": "ein hautgedächtnis. So"
        },
        "line.23": {
            "text": "lieh er sich den tod"
        },
        "line.24": {
            "text": "ins alphabet und schriet"
        },
        "line.25": {
            "text": "Halte fest, Erinnerung!"
        },
        "line.26": {
            "text": "und ging wie du"
        }
    }
}