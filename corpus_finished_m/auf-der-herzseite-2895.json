{
    "title": "auf-der-herzseite-2895",
    "gender": "m",
    "author": "Gregor  Laschen",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "Genug. Zieh den Vorhang zu."
        },
        "line.2": {
            "text": "Auf der Herzseite liegend, als"
        },
        "line.3": {
            "text": "sei die Welt plötzlich umgefallen"
        },
        "line.4": {
            "text": "und der Himmel darunter leer,"
        },
        "line.5": {
            "text": "Sah ich die Hühnergötter im Garten"
        },
        "line.6": {
            "text": "gehängt in was Blaues, aus dem der"
        },
        "line.7": {
            "text": "Sinn kriecht in was Langsameres,"
        },
        "line.8": {
            "text": "Das schaukelt an seinem Strick und"
        },
        "line.9": {
            "text": "spricht mit den Rissen in der Text-"
        },
        "line.10": {
            "text": "haut, aus der es aber noch atmete."
        }
    }
}