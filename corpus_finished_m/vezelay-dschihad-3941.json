        },
        "line.9": {
            "text": "......................................................................................."
        },
        "line.10": {
            "text": "Vzelay Abendland Einwohner 615."
        },
        "line.11": {
            "text": "616 mein amerikanischer Gast Julia,"
        },
        "line.12": {
            "text": "betet vor"
        },
        "line.13": {
            "text": "der Nacht bei den Russischorthodoxen,"
        },
        "line.14": {
            "text": "die da wären: der Handwerker,"
        },
        "line.15": {
            "text": "der Priester und seine Frau,"
        },
        "line.16": {
            "text": "der Bischof und sein Erzbischof."
        },
        "line.17": {
            "text": "617 der Grabstein von George Bataille."
        },
        "line.18": {
            "text": "618 Richard Löwenherz, 619 Le Corbusier,"
        },
        "line.19": {
            "text": "620 Claudel, 621 Pacificus."
        },
        "line.20": {
            "text": "622 der versteinerte Jesus Christus,"
        },
        "line.21": {
            "text": "eingefügt ins Tympanon am Tag des Thaumaturgen:"
        },
        "line.22": {
            "text": "Ein Ritter Christi, sage ich, tötet"
        },
        "line.23": {
            "text": "ihr Riesen, Pygmäen, groß"
        },
        "line.24": {
            "text": "ohrige Völker, Pelikane, ihr"
        },
        "line.25": {
            "text": "Fabeltiere, Drachen, ach Baselisk"
        },
        "line.26": {
            "text": "in Sicherheit, und"
        },
        "line.27": {
            "text": "in noch größerer Sicherheit stirbt er."
        },
        "line.28": {
            "text": "Wenn er stirbt, nützt er"
        },
        "line.29": {
            "text": "sich selber; wenn er tötet, nützt er"
        },
        "line.30": {
            "text": "Christus."
        },
        "line.31": {
            "text": "Heiliger"
        },
        "line.32": {
            "text": "Bernhard 623, der hier das Kreuz gab,"
        },
        "line.33": {
            "text": "Dschihad, flammte aus"
        },
        "line.34": {
            "text": "seinem askeseverstümmelten Leib."
        },
        "line.35": {
            "text": "Erbrach sich davor und danach,"
        },
        "line.36": {
            "text": "fuhr weiter, mit dem Zug nach Paris,"
        },
        "line.37": {
            "text": "dorthin, wo die Vorstädte brannten."
        },
        "line.38": {
            "text": ".........................................................................................."
        },
        "line.39": {
            "text": ".........................................................................................."
        },
        "line.40": {
            "text": ".........................................................................................."
        },
        "line.41": {
            "text": "2"
        },
        "line.42": {
            "text": "(Aber"
        },
        "line.43": {
            "text": "es ist so ein nunsanfter"
        },
        "line.44": {
            "text": "Hügel, der uns hochwindet ..."
        },
        "line.45": {
            "text": "... zum Magdalenen"
        },
        "line.46": {
            "text": "heiligtum,"
        },
        "line.47": {
            "text": "ihre"
        },
        "line.48": {
            "text": "Sakramente ...)"
        },
        "line.49": {
            "text": "*"
        },
        "line.50": {
            "text": "((O möget ihr"
        },
        "line.51": {
            "text": "echt werden, verpönte Reliquien!*))"
        },
        "line.52": {
            "text": "......................................................................................."
        },
        "line.53": {
            "text": "......................................................................................."
        },
        "line.54": {
            "text": "......................................................................................."
        },
        "line.55": {
            "text": "An den Rändernan den Straßen"
        },
        "line.56": {
            "text": "rändern der Spaß"
        },
        "line.57": {
            "text": "gesellschaft der GroßeSchachtelhalm"
        },
        "line.58": {
            "text": "der Bischofsstab aus jungeneingerollten Blättern"
        },
        "line.59": {
            "text": "Fontenay Wurmfarn Zaserblume Mittagsblume Bloss"
        },
        "line.60": {
            "text": "feldt Samen Mariengesänge im Autoradio"
        },
        "line.61": {
            "text": "was für ein Leihwagen zu den Zodiaquemönchen hin"
        },
        "line.62": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.63": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.64": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.65": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.66": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.67": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.68": {
            "text": "die langsame Welt die langsame Welt die langsame Welt"
        },
        "line.69": {
            "text": "stürzt ab stürzt nicht ab** stürzt ab stürzt nicht ab"
        },
        "line.70": {
            "text": "Blitz durch zweierlei KnieBlitz durch zweierlei Knie"
        },
        "line.71": {
            "text": "ende da ist der Blitzende da bewahrt die geblitzte"
        },
        "line.72": {
            "text": "Nonne blitzender Kniender bewahrt und geblitzte Knie"
        },
        "line.73": {
            "text": "ende ich glaubeende ich glaubeende ich glaube"
        },
        "line.74": {
            "text": "nicht an die Hölle ich glaube nicht ans Paradies ich glaube"
        },
        "line.75": {
            "text": "an einen blitzenden Knienden und eine geblitzte Kniende"
        },
        "line.76": {
            "text": "das werden die letzten Menschen sein aber"
        },
        "line.77": {
            "text": "wies weitergeht weiß ich nicht."
        },
        "line.78": {
            "text": "* a l l e Gegenstände sollen echt werden,"
        },
        "line.79": {
            "text": "RELIQUIEN IHRER SELBST"
        },
        "line.80": {
            "text": "**hier irrt Abälard"
        },
        "line.81": {
            "text": "herum in der Größe"
        },
        "line.82": {
            "text": "des Datensatzes,"
        },
        "line.83": {
