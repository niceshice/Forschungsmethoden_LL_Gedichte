        "line.2": {
            "text": "(die sanften Pfoten der Orgel)"
        },
        "line.3": {
            "text": "(in den Rücken leuchtende"
        },
        "line.4": {
            "text": "Magdalenenreliquie)(ihr"
        },
        "line.5": {
            "text": "Säulen, die ihr dienende, wunder"
        },
        "line.6": {
            "text": "wirkende Kräfte seid)"
        },
        "line.7": {
            "text": "......................................................................................."
        },
        "line.8": {
