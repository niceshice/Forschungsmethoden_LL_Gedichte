{
    "title": "alkaeisch-die-dreizehnte-1178",
    "gender": "m",
    "author": "Urs Allemann",
    "author_birth": "1948",
    "poem": {
        "line.1": {
            "text": "Halb Wort halb Fleisch und luegt umenandcliclac!"
        },
        "line.2": {
            "text": "und wuchert chunschdötusen im Rachenfels"
        },
        "line.3": {
            "text": "zu bersten cliclac! wotschintschnurre"
        },
        "line.4": {
            "text": "stand aber einMetronom in Flammen"
        },
        "line.5": {
            "text": "ein schöngebeiztes braunes kchabauttcliclac!"
        },
        "line.6": {
            "text": "wärs das Gewicht schiäps abe durchlöcherts dich"
        },
        "line.7": {
            "text": "schiäps ufe clic! dass schier zu wippen"
        },
        "line.8": {
            "text": "nimmer ein Räuchlein und stunden alle"
        },
        "line.9": {
            "text": "Sekunden still clac! schtinggschwenn am Bildschirmrand"
        },
        "line.10": {
            "text": "sich die Geschwulst hörschöppis nach aussen stülpt"
        },
        "line.11": {
            "text": "bis gopvrteckl das Metallteil"
        },
        "line.12": {
            "text": "schmölze am Pendel cliclac! bis Kohle"
        },
        "line.13": {
            "text": "bis Sterbelieder grölend dr Gügglbis"
        },
        "line.14": {
            "text": "zum blutte Chropf im Mist du bis giftiges"
        },
        "line.15": {
            "text": "Geschnupper allseits söttschsvrchlöpfe"
        },
        "line.16": {
            "text": "cliclac! Geborenes lesbar würde"
        }
    }
}