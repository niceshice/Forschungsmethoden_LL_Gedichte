{
    "title": "das-wasser-dem-wir-wohnen-656",
    "gender": "m",
    "author": "Uwe Kolbe",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "für Peter Waterhouse"
        },
        "line.2": {
            "text": "Wir rappeln uns auf"
        },
        "line.3": {
            "text": "und spucken das modrige Wasser"
        },
        "line.4": {
            "text": "aus jungem Mund"
        },
        "line.5": {
            "text": "und husten das kratzende Naß"
        },
        "line.6": {
            "text": "aus unverdorbenem Halse."
        },
        "line.7": {
            "text": "Die Augen sehen noch nicht"
        },
        "line.8": {
            "text": "und suchen den Helfer schon,"
        },
        "line.9": {
            "text": "der oben über uns steht"
        },
        "line.10": {
            "text": "auf niedrigem, trockenen Steg."
        },
        "line.11": {
            "text": "Und gleich wird sein Arm da sein,"
        },
        "line.12": {
            "text": "uns Halt bieten, hieven."
        },
        "line.13": {
            "text": "Noch hindert sein Lachen ihn,"
        },
        "line.14": {
            "text": "noch lacht er zu laut,"
        },
        "line.15": {
            "text": "um helfen zu können."
        },
        "line.16": {
            "text": "Gleich stehen wir wieder neben ihm"
        },
        "line.17": {
            "text": "wie die begossenen Pudel."
        }
    }
}