{
    "title": "die-liebe-den-zeiten-der-eu-3175",
    "gender": "m",
    "author": "Björn  Kuhligk",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "Wie ein Grenzschutz wieder"
        },
        "line.2": {
            "text": "eine Linie zieht, das muß, es"
        },
        "line.3": {
            "text": "darf geschossen werden, das"
        },
        "line.4": {
            "text": "muß, das darf gefilmt werden"
        },
        "line.5": {
            "text": "wie erdfremd dieser Kontinent"
        },
        "line.6": {
            "text": "mit Sternchen am Revers, wie der"
        },
        "line.7": {
            "text": "die Abwehr aufbaut, Mutti macht"
        },
        "line.8": {
            "text": "noch schnell den Abwasch"
        },
        "line.9": {
            "text": "als im Süden die ersten Turnschuhe"
        },
        "line.10": {
            "text": "angespült wurden, später zwei, drei"
        },
        "line.11": {
            "text": "Zweibeiner gefischt wurden, das muß"
        },
        "line.12": {
            "text": "es darf zurückgefeuert werden"
        }
    }
}