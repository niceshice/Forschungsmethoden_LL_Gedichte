{
    "title": "kreuz-des-suedens-7829",
    "gender": "m",
    "author": "Reiner Kunze",
    "author_birth": "1933",
    "poem": {
        "line.1": {
            "text": "Nächte, die dich steinigen"
        },
        "line.2": {
            "text": "Die sterne stürzen herab"
        },
        "line.3": {
            "text": "auf ihrem licht"
        },
        "line.4": {
            "text": "Du stehst in ihrem hagel"
        },
        "line.5": {
            "text": "Keiner trifft dich"
        },
        "line.6": {
            "text": "Doch es schmerzt,"
        },
        "line.7": {
            "text": "als träfen alle"
        }
    }
}