{
    "title": "der-hahn-4080",
    "gender": "m",
    "author": "Norbert C. Kaser",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "wenn der hahn sich erhebt"
        },
        "line.2": {
            "text": "an jedem morgen"
        },
        "line.3": {
            "text": "seinen kamm neu stellt"
        },
        "line.4": {
            "text": "rot voller blut und fleisch"
        },
        "line.5": {
            "text": "da werfe ich ihm steine nach"
        },
        "line.6": {
            "text": "an jedem morgen"
        },
        "line.7": {
            "text": "dem hahn in"
        },
        "line.8": {
            "text": "seine federn"
        },
        "line.9": {
            "text": "wenn der hahn sich erhebt"
        },
        "line.10": {
            "text": "an jedem abend"
        },
        "line.11": {
            "text": "seinen kamm noch stellt"
        },
        "line.12": {
            "text": "wo er doch schlafen soll"
        },
        "line.13": {
            "text": "da werfe ich ihm sand ins lid"
        },
        "line.14": {
            "text": "an jedem abend"
        },
        "line.15": {
            "text": "dem hahn da√ü"
        },
        "line.16": {
            "text": "er schlafe"
        },
        "line.17": {
            "text": "13/2/69"
        }
    }
