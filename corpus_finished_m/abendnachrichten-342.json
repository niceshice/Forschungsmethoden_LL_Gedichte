{
    "title": "abendnachrichten-342",
    "gender": "m",
    "author": "Hans Magnus Enzensberger",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "massaker um eine handvoll reis,"
        },
        "line.2": {
            "text": "höre ich, für jeden an jedem tag"
        },
        "line.3": {
            "text": "eine handvoll reis: trommelfeuer"
        },
        "line.4": {
            "text": "auf dünnen hütten, undeutlich"
        },
        "line.5": {
            "text": "höre ich es, beim abendessen."
        },
        "line.6": {
            "text": "auf den glasierten ziegeln"
        },
        "line.7": {
            "text": "höre ich reiskörner tanzen,"
        },
        "line.8": {
            "text": "eine handvoll, beim abendessen,"
        },
        "line.9": {
            "text": "reiskörner auf meinem dach:"
        },
        "line.10": {
            "text": "den ersten märzregen, deutlich."
        }
    }
}