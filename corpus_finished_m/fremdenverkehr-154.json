{
    "title": "fremdenverkehr-154",
    "gender": "m",
    "author": "Gerhard Falkner",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "und in Augsburg erwiderte der wilde Lech"
        },
        "line.2": {
            "text": "mit faustgroßen Kieseln"
        },
        "line.3": {
            "text": "die Kirsche hing lodernd ins Feuer"
        },
        "line.4": {
            "text": "sie brannte noch lange"
        },
        "line.5": {
            "text": "da sagte jemand auf japanisch: I am"
        },
        "line.6": {
            "text": "disgusted!"
        },
        "line.7": {
            "text": "und in Heidelberg erwiderte das Schloß"
        },
        "line.8": {
            "text": "mit hirschartigen Zinnen"
        },
        "line.9": {
            "text": "Linda hatte ihre Tage, ich meine"
        },
        "line.10": {
            "text": "ihre Brüste waren geschwellt"
        },
        "line.11": {
            "text": "wie Joghurtbecher"
        },
        "line.12": {
            "text": "da sagte jemand in einer"
        },
        "line.13": {
            "text": "Landessprache:"
        },
        "line.14": {
            "text": "my whole ass went crazy!"
        },
        "line.15": {
            "text": "ich führte die faustgroße Kirsche"
        },
        "line.16": {
            "text": "ins Kieselsteinamt zu Kehlheim"
        },
        "line.17": {
            "text": "wir ließen uns trauen"
        },
        "line.18": {
            "text": "auf dem Krüglein stand bitter"
        },
        "line.19": {
            "text": "wenn dir dein Liebster nicht treu ist:"
        },
        "line.20": {
            "text": "send him alone!"
        },
        "line.21": {
            "text": "und in Frankfurt erwiderte der Frankfurter Hof"
        },
        "line.22": {
            "text": "mit einem Schwall von Tränen und Fahnen"
        },
        "line.23": {
            "text": "im Zimmer direkt überm Dienstbotenstern"
        },
        "line.24": {
            "text": "hatten wir Fremdenverkehr"
        },
        "line.25": {
            "text": "danach buchstabierten wir"
        },
        "line.26": {
            "text": "auf der Zeil unser Frühstück:"
        },
        "line.27": {
            "text": "j.u.n.k."
        },
        "line.28": {
            "text": "und im ICE schließlich nach Fulda"
        },
        "line.29": {
            "text": "auf der Hochgeschwindigkeitstrasse"
        },
        "line.30": {
            "text": "zwischen Deutschherrenkehre"
        },
        "line.31": {
            "text": "und Tausendguldengitter"
        },
        "line.32": {
            "text": "da verschwand diese garstige Sprache"
        },
        "line.33": {
            "text": "mit den Worten:"
        },
        "line.34": {
            "text": "Oh, this is what you meant"
        },
        "line.35": {
            "text": "by not having any doors!"
        }
    }
}