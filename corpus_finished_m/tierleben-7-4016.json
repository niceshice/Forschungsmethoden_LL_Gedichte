{
    "title": "tierleben-7-4016",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "7"
        },
        "line.2": {
            "text": "Never believe"
        },
        "line.3": {
            "text": "your eyes in solcher"
        },
        "line.4": {
            "text": "Eiseskälte. Wenn der Busch"
        },
        "line.5": {
            "text": "der lichterloh am Bildrand"
        },
        "line.6": {
            "text": "steht sich füllt mit"
        },
        "line.7": {
            "text": "knisterndem Gedankengut"
        },
        "line.8": {
            "text": "gilt der absolute"
        },
        "line.9": {
            "text": "Stock als Blick. Und"
        },
        "line.10": {
            "text": "aber da betrachtet wieder"
        },
        "line.11": {
            "text": "einmal niemands Zeitgenosse"
        },
        "line.12": {
            "text": "welch ein Rücken"
        },
        "line.13": {
            "text": "zur Welt!  in der überfrornen"
        },
        "line.14": {
            "text": "Pfütze zwischen seinen"
        },
        "line.15": {
            "text": "Schuhn das eigne"
        },
        "line.16": {
            "text": "längst verwischte Gesicht."
        },
        "line.17": {
            "text": "So lebt er (als wäre"
        },
        "line.18": {
            "text": "er tot) noch"
        },
        "line.19": {
            "text": "heute fort und"
        },
        "line.20": {
            "text": "macht Geschichte."
        },
        "line.21": {
            "text": "(\"Wenn der Busch"
        },
        "line.22": {
            "text": "mit knisterndem Gedanken-"
        },
        "line.23": {
            "text": "gut sich füllt"
        },
        "line.24": {
            "text": "betrachtet niemands"
        },
        "line.25": {
            "text": "Zeitgenosse in der Pfütze"
        },
        "line.26": {
            "text": "das eigne verwischte"
        },
        "line.27": {
            "text": "Gesicht und macht (als"
        },
        "line.28": {
            "text": "wäre er tot) wie"
        },
        "line.29": {
            "text": "nichts Geschichte.\")"
        }
    }
}