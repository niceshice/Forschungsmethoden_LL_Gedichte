{
    "title": "steigen-fallen-und-innehalten-11477",
    "gender": "m",
    "author": "Franz Dodel",
    "author_birth": "1949",
    "poem": {
        "line.1": {
            "text": "Steigen Fallen und"
        },
        "line.2": {
            "text": "Innehalten dazwischen"
        },
        "line.3": {
            "text": "diese Bewegung"
        },
        "line.4": {
            "text": "macht sich immer wieder als"
        },
        "line.5": {
            "text": "Dreitakt bemerkbar"
        },
        "line.6": {
            "text": "beim Sich-Bücken zum Beispiel"
        },
        "line.7": {
            "text": "und Aufrichten beim"
        },
        "line.8": {
            "text": "Wäscheaufhängen also"
        },
        "line.9": {
            "text": "oder wenn Blüten"
        },
        "line.10": {
            "text": "aufragen und sich später"
        },
        "line.11": {
            "text": "wieder verneigen"
        },
        "line.12": {
            "text": "wie das Hungerblümchen (mit"
        },
        "line.13": {
            "text": "dem schönen Namen"
        },
        "line.14": {
            "text": "Erophila praecox) das"
        },
        "line.15": {
            "text": "im Monat März schon"
        },
        "line.16": {
            "text": "mit dieser Übung beginnt"
        },
        "line.17": {
            "text": "auch das Aufschrecken"
        },
        "line.18": {
            "text": "ist eine Regung die sich"
        },
        "line.19": {
            "text": "bald wieder einfügt"
        },
        "line.20": {
            "text": "ein Zurücksinken wird in"
        },
        "line.21": {
            "text": "das schon Vertraute"
        },
        "line.22": {
            "text": "wie das Sitzen vor dem Haus"
        },
        "line.23": {
            "text": "im Schatten eines"
        },
        "line.24": {
            "text": "Kastanienbaums und plötzlich"
        },
        "line.25": {
            "text": "ertönt schüchtern ein"
        },
        "line.26": {
            "text": "ovalgoldenes Klingeln"
        },
        "line.27": {
            "text": "das spät noch einen"
        },
        "line.28": {
            "text": "Besucher ankündigt den"
        },
        "line.29": {
            "text": "niemand erwartet"
        },
        "line.30": {
            "text": "dieser jedoch übergibt"
        },
        "line.31": {
            "text": "wie jedes Jahr nur"
        },
        "line.32": {
            "text": "einen Strauß Hyazinthen"
        },
        "line.33": {
            "text": "zum Geburtstag des"
        },
        "line.34": {
            "text": "irrgewordenen Dichters"
        },
        "line.35": {
            "text": "der meint er liege"
        },
        "line.36": {
            "text": "als toter Vogel neben"
        },
        "line.37": {
            "text": "diesem Stein der still"
        },
        "line.38": {
            "text": "auf ihn hinabblickt wie auf"
        },
        "line.39": {
            "text": "ein verworfenes"
        },
        "line.40": {
            "text": "Experiment für den Stein"
        },
        "line.41": {
            "text": "aber ist alles"
        },
        "line.42": {
            "text": "was lebt stets nur ein Versuch"
        },
        "line.43": {
            "text": "der sicher misslingt"
        },
        "line.44": {
            "text": "doch dieses Misslingen weckt"
        },
        "line.45": {
            "text": "im Lebendigen"
        },
        "line.46": {
            "text": "die Zuversicht es müsste"
        },
        "line.47": {
            "text": "an Übergängen"
        },
        "line.48": {
            "text": "doch möglich sein die Richtung"
        },
        "line.49": {
            "text": "zu wechseln in ein"
        },
        "line.50": {
            "text": "Gelände das mehr zulässt"
        },
        "line.51": {
            "text": "als Vor und Zurück"
        },
        "line.52": {
            "text": "selbst ein Gedicht geschrieben"
        },
        "line.53": {
            "text": "während des Stürzens"
        },
        "line.54": {
            "text": "zeigt eine Weite die sonst"
        },
        "line.55": {
            "text": "verschlossen bliebe"
        },
        "line.56": {
            "text": "(Hölderlin fragt noch im Jahr"
        },
        "line.57": {
            "text": "seines Todes ob"
        },
        "line.58": {
            "text": "die Besucher ein Gedicht"
        },
        "line.59": {
            "text": "über Griechenland"
        },
        "line.60": {
            "text": "wünschten über den Frühling"
        },
        "line.61": {
            "text": "oder den Zeitgeist"
        },
        "line.62": {
            "text": "kaum noch sichtbar wölben sich"
        },
        "line.63": {
            "text": "über die Verse"
        },
        "line.64": {
            "text": "einzelne Lichtbogen von"
        },
        "line.65": {
            "text": "Blattrand zu Blattrand"
        },
        "line.66": {
            "text": "ein Hangar überzogen"
        },
        "line.67": {
            "text": "mit Seidenpapier"
        },
        "line.68": {
            "text": "und einer dünnen Schicht Schnee"
        },
        "line.69": {
            "text": "die Dämmerung dringt"
        },
        "line.70": {
            "text": "langsam nur ein ohne der"
        },
        "line.71": {
            "text": "Dunkelheit Anteil)"
        }
    }
}