{
    "title": "sailors-all-5427",
    "gender": "m",
    "author": "Uwe Kolbe",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "Und wieder ein Liebeslied"
        },
        "line.2": {
            "text": "vom Rande der Katastrophen"
        },
        "line.3": {
            "text": "(wars terroristischer Mord?"
        },
        "line.4": {
            "text": "wars Flut und wars Hunger"
        },
        "line.5": {
            "text": "oder schlicht"
        },
        "line.6": {
            "text": "Shareholders Value?)."
        },
        "line.7": {
            "text": "Wir hatten anderes gelernt"
        },
        "line.8": {
            "text": "und anderes versprochen"
        },
        "line.9": {
            "text": "in einem der vorigen Leben,"
        },
        "line.10": {
            "text": "unter dem Segel Hoffnung"
        },
        "line.11": {
            "text": "im Industriezeitalter,"
        },
        "line.12": {
            "text": "im Atomzeitalter,"
        },
        "line.13": {
            "text": "im Ismus im Ismus im Ismus."
        },
        "line.14": {
            "text": "Was bleibt aber,"
        },
        "line.15": {
            "text": "ist ein Liebeslied,"
        },
        "line.16": {
            "text": "kleines, beharrliches Lied,"
        },
        "line.17": {
            "text": "fast nichts."
        }
    }
}