{
    "title": "das-gespenst-485",
    "gender": "m",
    "author": "Günter Saalmann",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Wieso sahst nie du ein Gespenst?"
        },
        "line.2": {
            "text": "Weil du es nur nicht richtig kennst?"
        },
        "line.3": {
            "text": "Weil du es Nacht für Nacht verpennst?"
        },
        "line.4": {
            "text": "Weil es die Geisterstunde schwänzt?"
        },
        "line.5": {
            "text": "Pst, pst! Wenn du es wirklich liebst,"
        },
        "line.6": {
            "text": "Punkt zwölf zum Lokus dich begibst,"
        },
        "line.7": {
            "text": "dann laß die Lampe ausgeknipst:"
        },
        "line.8": {
            "text": "Horch! Wies im Spülungskasten piepst!"
        }
    }
}