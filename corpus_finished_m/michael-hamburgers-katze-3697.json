{
    "title": "michael-hamburgers-katze-3697",
    "gender": "m",
    "author": "Richard  Anders",
    "author_birth": "1928",
    "poem": {
        "line.1": {
            "text": "Für Anne Beresford"
        },
        "line.2": {
            "text": "Die Katze auf dem Birnbaum"
        },
        "line.3": {
            "text": "hinter dem Fenster"
        },
        "line.4": {
            "text": "mit dem Spiegelbild"
        },
        "line.5": {
            "text": "roter Lampenschirme"
        },
        "line.6": {
            "text": "vor der Abendschwärze,"
        },
        "line.7": {
            "text": "weiß hingestrecktes Tier,"
        },
        "line.8": {
            "text": "das gern zu mir"
        },
        "line.9": {
            "text": "hereinspringen möchte"
        },
        "line.10": {
            "text": "es erkennt die Scheibe."
        },
        "line.11": {
            "text": "Die mich unsichtbar trennt"
        },
        "line.12": {
            "text": "Von seinem Blick."
        },
        "line.13": {
            "text": "Den Hölderlin auf dem Tisch"
        },
        "line.14": {
            "text": "vier dicke Supplement.- Bände"
        },
        "line.15": {
            "text": "das Glas Orangenwein,"
        },
        "line.16": {
            "text": "selbstgemacht von Jane,"
        },
        "line.17": {
            "text": "erkennt es nicht, aber"
        },
        "line.18": {
            "text": "den Widerspruch von"
        },
        "line.19": {
            "text": "durchsichtig und hart, dem es für Minuten"
        },
        "line.20": {
            "text": "standhält, bis ein"
        },
        "line.21": {
            "text": "Satz ins Dunkel"
        },
        "line.22": {
            "text": "die Einsicht aufhebt"
        }
    }
}