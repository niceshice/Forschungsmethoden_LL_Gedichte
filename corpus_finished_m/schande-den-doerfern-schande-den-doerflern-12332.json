{
    "title": "schande-den-doerfern-schande-den-doerflern-12332",
    "gender": "m",
    "author": "Ulrich Koch",
    "author_birth": "1966",
    "poem": {
        "line.1": {
            "text": "Was wirft man in die honesty box"
        },
        "line.2": {
            "text": "für Grünkohl der Marke LERCHENZUNGE?"
        },
        "line.3": {
            "text": "Unsere Turnhallen sind schon die Schlafsäle"
        },
        "line.4": {
            "text": "der nächsten Katastrophe."
        },
        "line.5": {
            "text": "Schande den Dörfern, Schande uns Dörflern."
        },
        "line.6": {
            "text": "Unseren Doppelnamen, unseren Doppelgaragen."
        },
        "line.7": {
            "text": "In den Gästebetten frieren die Alten hoch,"
        },
        "line.8": {
            "text": "zu Ostern auf den Feldern die Steine."
        },
        "line.9": {
            "text": "Schande den Montagen, an denen die leeren Zimmer"
        },
        "line.10": {
            "text": "auf Zehenspitzen in den Häusern schleichen,"
        },
        "line.11": {
            "text": "die Schlange stehen bis zum Ortsausgang,"
        },
        "line.12": {
            "text": "um sich ins Kondolenzbuch des Vormittags einzutragen."
        },
        "line.13": {
            "text": "Schande den Friedhöfen,"
        },
        "line.14": {
            "text": "die Toten sind eingeschlafene Limbo-Tänzer."
        },
        "line.15": {
            "text": "Schande unseren Fertilitätsfressen."
        },
        "line.16": {
            "text": "Die Gesichter unserer Kinder sehen aus"
        },
        "line.17": {
            "text": "wie die Kinder unserer Gesichter."
        },
        "line.18": {
            "text": "Schande der Kartoffelfäule im Gesicht."
        },
        "line.19": {
            "text": "Schande dem Schneckenfraß im Hirn."
        },
        "line.20": {
            "text": "Schande den zerfallenden Bäckereien,"
        },
        "line.21": {
            "text": "dem Zimtgeruch ihrer Wände,"
        },
        "line.22": {
            "text": "den Brötchen Marke Salpeterfraß,"
        },
        "line.23": {
            "text": "den Fenstern, blinde Bäcker,"
        },
        "line.24": {
            "text": "und den Räum- und Streufahrzeugen,"
        },
        "line.25": {
            "text": "blinkenden Krippen in den vorweihnachtlichen Gärten"
        },
        "line.26": {
            "text": "und den Schwiegertöchtern mittwochs auf den Aufsitzmähern"
        },
        "line.27": {
            "text": "und den Schwiegermüttern mit den Drucksprühgeräten."
        },
        "line.28": {
            "text": "Schande unserem Ackerbau,"
        },
        "line.29": {
            "text": "er ist wie Dynamitfischen."
        },
        "line.30": {
            "text": "Schande dem barrierefreien Wohnen."
        },
        "line.31": {
            "text": "Schande unseren Strumpfbeinen und Beinstümpfen"
        },
        "line.32": {
            "text": "den röhrenden Hirschen und Bildschirmröhren."
        },
        "line.33": {
            "text": "Schande den Neubausiedlungen,"
        },
        "line.34": {
            "text": "die Strampler auf den Wäscheleinen sind schon Schicksalsschläge."
        },
        "line.35": {
            "text": "Schande unseren überdüngten Weiden, Gräser kniehoch,"
        },
        "line.36": {
            "text": "Kühe schwarzweiß,"
        },
        "line.37": {
            "text": "unseren Gräben, Kanälen, Lagerhallen,"
        },
        "line.38": {
            "text": "Windparks, Halden, Betriebsausfahrten,"
        },
        "line.39": {
            "text": "unseren Turnhallen, Kirchen, Rohbauten,"
        },
        "line.40": {
            "text": "in deren Vorgärten Kräne"
        },
        "line.41": {
            "text": "zitternd nach Gold"
        },
        "line.42": {
            "text": "oder Essbarem scharren."
        },
        "line.43": {
            "text": "Schande den Buswartehäuschen aus Waschbeton,"
        },
        "line.44": {
            "text": "der Marienverehrung einer Dorfschönheit,"
        },
        "line.45": {
            "text": "bevor sie das Klimakterium"
        },
        "line.46": {
            "text": "der Volkshochschule betritt."
        },
        "line.47": {
            "text": "Schande unseren neugeborenen Tiefkühltruhen."
        },
        "line.48": {
            "text": "Schande den in der Ebene verstreuten Häusern, den Höfen,"
        },
        "line.49": {
            "text": "dem Wachse oder weiche,"
        },
        "line.50": {
            "text": "den Scheunen, Viehunterständen, Hochsitzen, verbunden"
        },
        "line.51": {
            "text": "von Wind und Licht, miteinander redend im Gekläff"
        },
        "line.52": {
            "text": "der Hunde, mit Schüssen fragend, mit Stille antwortend,"
        },
        "line.53": {
            "text": "mit dem Geräusch der Nacktheit, wenn sich im Regen"
        },
        "line.54": {
            "text": "die Dächer am Himmel reiben."
        },
        "line.55": {
            "text": "Abermals Schande den Zimmern,"
        },
        "line.56": {
            "text": "von Spinnenfäden vertäut, sich zublinzelnd in der Nacht,"
        },
        "line.57": {
            "text": "den Buswartehäuschen an den Kreisstraßen,"
        },
        "line.58": {
            "text": "an den Kreuzungen, Stichstraßen: Kapellen."
        },
        "line.59": {
            "text": "Dem Fahrplan der Rücklichter. Dem Flüsterton der Dunkelheit."
        },
        "line.60": {
            "text": "Den Schwalben am Morgen. Dem Marschgepäck der Grundschüler."
        },
        "line.61": {
            "text": "Dem Busfahrer. Dem Rosenkranz des Lenkrads. Den Einfällen des Lichts."
        },
        "line.62": {
            "text": "Den in Betrachtung ihrer selbst versunkenen Teichen."
        },
        "line.63": {
            "text": "Dem gelben Postauto, das herumstreunt, bei laufendem Motor"
        },
        "line.64": {
            "text": "steigt die Briefträgerin aus (Schande"
        },
        "line.65": {
            "text": "der Briefträgerin!), ihrem Kindergartenblond,"
        },
        "line.66": {
            "text": "ihrer Hand, die die Briefkästen bestäubt."
        },
        "line.67": {
            "text": "Der vogelgesprenkelten Fahne des Himmels,"
        },
        "line.68": {
            "text": "der Zärtlichkeit eines Vormittags, der Schlafgesellschaft der Sätze"
        },
        "line.69": {
            "text": "über dem Kleinstadtbahnhof am Abend."
        },
        "line.70": {
            "text": "Schande dem eigenen Knie,"
        },
        "line.71": {
            "text": "blutig von der Prozession des aufrechten Gangs."
        },
        "line.72": {
            "text": "Dem Katzenfell der Stille, den Lippenbekenntnissen des Lichts,"
        },
        "line.73": {
            "text": "der Jungfernfahrt des Leichenwagens."
        },
        "line.74": {
            "text": "Schande dem Schild: Kindergarten Sportplatz Friedhof."
        },
        "line.75": {
            "text": "Schande den aufgeschüttelten Wolken,"
        },
        "line.76": {
            "text": "der Fruchtfolge der Psalmen."
        },
        "line.77": {
            "text": "Schande dem Heidentum der Kühe auf der Weide."
        },
        "line.78": {
            "text": "Schande den Hinterhöfen und Schuppen,"
        },
        "line.79": {
            "text": "jenem Hinterhof, jenem Schuppen,"
        },
        "line.80": {
            "text": "hinter dem wir uns immer heimlich trafen."
        },
        "line.81": {
            "text": "In der Regentonne zitterte der Mond,"
        },
        "line.82": {
            "text": "in seinem versoffenen Gesicht"
        },
        "line.83": {
            "text": "eine Handvoll Mückenlarven."
        }
    }
}