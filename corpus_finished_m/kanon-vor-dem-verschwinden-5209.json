{
    "title": "kanon-vor-dem-verschwinden-5209",
    "gender": "m",
    "author": "Tom Schulz",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "die Trauerränder, die nachtblau"
        },
        "line.2": {
            "text": "zerstochenen Venen; die Geburtstagskarten"
        },
        "line.3": {
            "text": "ins Jenseits, während du durchgefeuert wirst"
        },
        "line.4": {
            "text": "im Universalsarg, einfachste Ausführung"
        },
        "line.5": {
            "text": "wie verrinnst du denn und dein Pferd"
        },
        "line.6": {
            "text": "Rosinante; ich singe"
        },
        "line.7": {
            "text": "dass dem Tod kein Scheich"
        },
        "line.8": {
            "text": "Tum gehören soll, keine wüste"
        },
        "line.9": {
            "text": "Wüste"
        },
        "line.10": {
            "text": "wer kippt den Heilerde"
        },
        "line.11": {
            "text": "Cocktail herunter, der zwischen den Zähnen"
        },
        "line.12": {
            "text": "knirscht, vor der 24 Stunden globalen Versand"
        },
        "line.13": {
            "text": "Apotheke, wer nippt am Scheidebecher"
        },
        "line.14": {
            "text": "und lässt die Heide"
        },
        "line.15": {
            "text": "Einbetten, Umbetten"
        },
        "line.16": {
            "text": "Ankleiden"
        },
        "line.17": {
            "text": "postmortal erblühen"
        },
        "line.18": {
            "text": "bei den Tumorspendern, den Asbest"
        },
        "line.19": {
            "text": "Fenstern eines kranken Hauses am Rande"
        },
        "line.20": {
            "text": "der Schlafstadt, wo die kranken Schwestern"
        },
        "line.21": {
            "text": "alle Gestern zurückrufen auf den rational"
        },
        "line.22": {
            "text": "pharmaverwirrten Tablettenwagen, mit schwarz"
        },
        "line.23": {
            "text": "verfärbten Handschuhen, bei den endos"
        },
        "line.24": {
            "text": "kopierten Bildern, auf denen die Geschwür"
        },
        "line.25": {
            "text": "Blumen zum späten Rot"
        },
        "line.26": {
            "text": "Harnstrauß"
        },
        "line.27": {
            "text": "Trompetensolo"
        },
        "line.28": {
            "text": "hinwuchern"
        },
        "line.29": {
            "text": "an den letzten Novembernächten, so mild"
        },
        "line.30": {
            "text": "dass du mich ausziehst, bis unter die skelettartige"
        },
        "line.31": {
            "text": "hautfarbene Unterwäsche, als würden wir in"
        },
        "line.32": {
            "text": "einander eindringen wie lotsenlose Flug"
        },
        "line.33": {
            "text": "Körper in verletzte dahin treibende Lufträume"
        },
        "line.34": {
            "text": "wovon singst du denn und dein langer Insel-Eistee"
        },
        "line.35": {
            "text": "der für keins der Manhattan die Wette annimmt"
        },
        "line.36": {
            "text": "ich swinge und sage,"
        },
        "line.37": {
            "text": "ich heirate die drei Schwestern"
        },
        "line.38": {
            "text": "und dem Tod soll keine Gründerzeitvilla bleiben"
        }
    }
}