{
    "title": "der-schnee-faellt-16561",
    "gender": "m",
    "author": "Sascha Garzetti",
    "author_birth": "1986",
    "poem": {
        "line.1": {
            "text": "Der Schnee fällt"
        },
        "line.2": {
            "text": "der Landschaft auf den Mund,"
        },
        "line.3": {
            "text": "macht alles still."
        },
        "line.4": {
            "text": "Wie ihr kleiner werdet,"
        },
        "line.5": {
            "text": "jede in ihren Schlaf versunken,"
        },
        "line.6": {
            "text": "und eine weiß"
        },
        "line.7": {
            "text": "von der anderen nichts."
        },
        "line.8": {
            "text": "Die Krähe draußen auf dem Geländer."
        },
        "line.9": {
            "text": "Du im Krankenbett."
        },
        "line.10": {
            "text": "Später wird eine"
        },
        "line.11": {
            "text": "den Tod davontragen"
        },
        "line.12": {
            "text": "und eine wird unsagbar leicht."
        }
    }
}