{
    "title": "mittag-aus-dem-provenzalischen-6757",
    "gender": "m",
    "author": "Jan Volker Röhnert",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "- und die Katzen auf dem Blechdach"
        },
        "line.2": {
            "text": "der roten Karosserie, in der Altstadt"
        },
        "line.3": {
            "text": "geht jetzt keine Bewegung"
        },
        "line.4": {
            "text": "ab: Kaminrauch, eine dauerhafte Wolke,"
        },
        "line.5": {
            "text": "südwärts verzogen, bleibt"
        },
        "line.6": {
            "text": "länger in der Atmosphäre"
        },
        "line.7": {
            "text": "als das Gedächtnis des Olivbaums, im"
        },
        "line.8": {
            "text": "Herbst gefällt, zu Brennholz zersägt,"
        },
        "line.9": {
            "text": "darin verschwindet, länger"
        },
        "line.10": {
            "text": "als ein blauer Fensterladen vorgezogen"
        },
        "line.11": {
            "text": "bleibt, der in Gedanken"
        },
        "line.12": {
            "text": "eine Farbspur hinterläßt. Die"
        },
        "line.13": {
            "text": "Wolken öffnen einen Zeitraum weit, so"
        },
        "line.14": {
            "text": "weit, daß alles darin stehen bleibt."
        },
        "line.15": {
            "text": "Man ist oben angekommen, der"
        },
        "line.16": {
            "text": "Madonna, Turmruine, die nachts"
        },
        "line.17": {
            "text": "den Ziegen dient. Der Wind"
        },
        "line.18": {
            "text": "ist ein nördlicher Lückentext,"
        },
        "line.19": {
            "text": "ohne Schlüssel, der wörtlich"
        },
        "line.20": {
            "text": "zu verstehen ist. Die Sonne"
        },
        "line.21": {
            "text": "ein Stoß trockener Wäsche."
        }
    }
}