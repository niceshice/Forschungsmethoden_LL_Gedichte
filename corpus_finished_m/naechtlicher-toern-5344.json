{
    "title": "naechtlicher-toern-5344",
    "gender": "m",
    "author": "Mario Wirz",
    "author_birth": "1956",
    "poem": {
        "line.1": {
            "text": "der Wind in deinem Traum"
        },
        "line.2": {
            "text": "bläht die Gardinen zum Segel"
        },
        "line.3": {
            "text": "reißt alle Dinge die wir gesammelt haben"
        },
        "line.4": {
            "text": "von ihrem Platz"
        },
        "line.5": {
            "text": "im furchtsamen Licht der Nachttischlampe"
        },
        "line.6": {
            "text": "suche ich vergeblich unsere Rettungswesten"
        },
        "line.7": {
            "text": "hohe Wellen schlagen über deinem Schlaf"
        },
        "line.8": {
            "text": "die Nacht auf die Seite des Mondes"
        },
        "line.9": {
            "text": "vielleicht wärest du lieber als"
        },
        "line.10": {
            "text": "Einhandsegler unterwegs"
        },
        "line.11": {
            "text": "unbeschwert von meinen Ängsten"
        },
        "line.12": {
            "text": "auch diese Frage werfe ich jetzt"
        },
        "line.13": {
            "text": "über Bord"
        },
        "line.14": {
            "text": "steige vorsichtig in deinen Traum"
        },
        "line.15": {
            "text": "und folge seinem Kurs"
        },
        "line.16": {
            "text": "das Meer das ich nicht gefragt habe"
        },
        "line.17": {
            "text": "in all den Jahren"
        },
        "line.18": {
            "text": "denkt sich in unserem Schlaf"
        },
        "line.19": {
            "text": "eine neue Geschichte aus"
        }
    }
}