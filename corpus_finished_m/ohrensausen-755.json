{
    "title": "ohrensausen-755",
    "gender": "m",
    "author": "Maik Lippert",
    "author_birth": "1966",
    "poem": {
        "line.1": {
            "text": "einen klammen april lang"
        },
        "line.2": {
            "text": "mit otitis media"
        },
        "line.3": {
            "text": "die alte im gehörgang"
        },
        "line.4": {
            "text": "gerbt dir das trommelfell mit alaun"
        },
        "line.5": {
            "text": "du hörst radio mit dem stirnbein"
        },
        "line.6": {
            "text": "im schädel haspeln"
        },
        "line.7": {
            "text": "berichterstatter auf die blechmembranen"
        },
        "line.8": {
            "text": "von münzfernsprächern"
        },
        "line.9": {
            "text": "du suchst die orte im schulatlas"
        },
        "line.10": {
            "text": "orte mit symbolen"
        },
        "line.11": {
            "text": "wie kobalt und kupfer"
        },
        "line.12": {
            "text": "du siehst menschen"
        },
        "line.13": {
            "text": "die mit grubenlampen auf der stirn geboren werden"
        },
        "line.14": {
            "text": "andere mit gewehrläufen in den augen"
        },
        "line.15": {
            "text": "sagst dir"
        },
        "line.16": {
            "text": "im fieber"
        },
        "line.17": {
            "text": "werden wir alle wach"
        },
        "line.18": {
            "text": "und wünschst allen krankenschwestern"
        },
        "line.19": {
            "text": "und lehrern"
        },
        "line.20": {
            "text": "die für die dichtkunst leiden"
        },
        "line.21": {
            "text": "ohrensausen"
        },
        "line.22": {
            "text": "staubfresser für die ewigkeit"
        },
        "line.23": {
            "text": "diese gedichte"
        },
        "line.24": {
            "text": "über sommerregen und venenleiden"
        },
        "line.25": {
            "text": "sagst du"
        },
        "line.26": {
            "text": "der rest ist amoxicillin"
        },
        "line.27": {
            "text": "3mal täglich eine ganze tablette"
        },
        "line.28": {
            "text": "und im mai schreibst du wieder"
        },
        "line.29": {
            "text": "gedichte"
        },
        "line.30": {
            "text": "wäßrig wie die venenkarten an deinen beinen"
        }
    }
}