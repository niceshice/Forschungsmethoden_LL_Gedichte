{
    "title": "wolken-12342",
    "gender": "m",
    "author": "David  Krause",
    "author_birth": "1988",
    "poem": {
        "line.1": {
            "text": "es gibt keinen fluss"
        },
        "line.2": {
            "text": "neben diesem haus und in dem haus"
        },
        "line.3": {
            "text": "kein kinderbett überzogen mit wolken"
        },
        "line.4": {
            "text": "wo der sohn die augen schließt"
        },
        "line.5": {
            "text": "und die arme ausstreckt bis weit"
        },
        "line.6": {
            "text": "über den rand. es gibt"
        },
        "line.7": {
            "text": "keinen schuppen im garten"
        },
        "line.8": {
            "text": "wo der vater mit dem messer"
        },
        "line.9": {
            "text": "zärtlich die soldaten schnitzt"
        },
        "line.10": {
            "text": "und wenn die wolken donnern"
        },
        "line.11": {
            "text": "stellt er sein heer auf und träumt. es gibt"
        },
        "line.12": {
            "text": "kein wohnzimmer wo die mutter"
        },
        "line.13": {
            "text": "den schal strickt: groß genug"
        },
        "line.14": {
            "text": "für alle zusammen; und es ticken"
        },
        "line.15": {
            "text": "die nadeln die uhren die zähne während"
        },
        "line.16": {
            "text": "die fäden zu mustern verwachsen:"
        },
        "line.17": {
            "text": "wolken und wolken und wolken. es gibt"
        },
        "line.18": {
            "text": "keine fenster und türen und wände."
        },
        "line.19": {
            "text": "das gras und den wind und wellen in pfützen"
        },
        "line.20": {
            "text": "gibt es jetzt; es gibt"
        },
        "line.21": {
            "text": "die fliehenden wolken."
        },
        "line.22": {
            "text": "es gibt mich"
        },
        "line.23": {
            "text": "den schal um den hals"
        },
        "line.24": {
            "text": "einen soldaten in der hand"
        },
        "line.25": {
            "text": "nicht mehr"
        },
        "line.26": {
            "text": "den fluss; nur sein bett; es gibt"
        },
        "line.27": {
            "text": "mir einen ort; es gibt"
        },
        "line.28": {
            "text": "mir einen ort."
        }
    }
}