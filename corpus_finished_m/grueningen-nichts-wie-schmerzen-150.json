{
    "title": "grueningen-nichts-wie-schmerzen-150",
    "gender": "m",
    "author": "Gerhard Falkner",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "Barfuß trete ich vor die Deutsche Bank"
        },
        "line.2": {
            "text": "und spreche vom gerippten Mann"
        },
        "line.3": {
            "text": "den gerippten Mann überrascht morgens"
        },
        "line.4": {
            "text": "vor einem Beet voller Knochen"
        },
        "line.5": {
            "text": "der klägliche Einklang"
        },
        "line.6": {
            "text": "von Vergeblichkeit und Vogelgezwitscher"
        },
        "line.7": {
            "text": "der gerippte Mann sieht"
        },
        "line.8": {
            "text": "wie das Leben seine Borsten bewegt"
        },
        "line.9": {
            "text": "er sieht, wie die Knochen Wurzeln schlagen"
        },
        "line.10": {
            "text": "und"
        },
        "line.11": {
            "text": "hochkochen"
        },
        "line.12": {
            "text": "wie die Vergeblichkeit auf ihrem Lieblingsfelsen"
        },
        "line.13": {
            "text": "Platz nimmt und singt"
        },
        "line.14": {
            "text": "er blickt in die Schale seiner hohlen Hand"
        },
        "line.15": {
            "text": "auf die gesponnenen Fäden"
        },
        "line.16": {
            "text": "und liest: Jan 97. In Grüningen."
        },
        "line.17": {
            "text": "Nichts wie Schmerzen"
        }
    }
}