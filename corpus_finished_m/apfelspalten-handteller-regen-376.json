{
    "title": "apfelspalten-handteller-regen-376",
    "gender": "m",
    "author": "Oswald Egger",
    "author_birth": "1963",
    "poem": {
        "line.1": {
            "text": "Klatschmond sind die Ackerschnecken Halbwege,"
        },
        "line.2": {
            "text": "das graue Heurad, zügiger als stillt der Sommer sich,"
        },
        "line.3": {
            "text": "und schwirrt ins dunkle Licht."
        },
        "line.4": {
            "text": "Sichtweit eine Malfülle von Grasperlen, und der leblos"
        },
        "line.5": {
            "text": "lebendige Glastsaum zu häufigen, fluren Tropfkissen"
        },
        "line.6": {
            "text": "aus Nesselmoos."
        },
        "line.7": {
            "text": "Am Ahorn hängt die Schaukel klamm und zwirn,"
        },
        "line.8": {
            "text": "das Grummet dampft von Duft-satt."
        },
        "line.9": {
            "text": "Und Saatkrah"
        },
        "line.10": {
            "text": "warten die Hornraben Heimchen windstill"
        },
        "line.11": {
            "text": "und die Schlupfwespen und Teichfliegen entflohen,"
        },
        "line.12": {
            "text": "Vorhangfenster, die ins Stubenfreie führen, diese"
        },
        "line.13": {
            "text": "Sparren verschwundener Nachmittage"
        },
        "line.14": {
            "text": "im Schober vom Gehöft und vielleicht, Barfüße"
        },
        "line.15": {
            "text": "im Sichelgras, einfächern jetzt und schneisen die"
        },
        "line.16": {
            "text": "Melissen der Holunderblüten Blatt-naß vom"
        },
        "line.17": {
            "text": "Prasseln der Rhabarber, die Schwarzerde"
        },
        "line.18": {
            "text": "der Luft-stillen Mohn-Lachen Spiegelwolken,"
        },
        "line.19": {
            "text": "Schleiern und Silg-lilien, die Sand-blauen"
        },
        "line.20": {
            "text": "Lilienarme"
        },
        "line.21": {
            "text": "regenschwer | Lilien, die gluten."
        }
    }
}