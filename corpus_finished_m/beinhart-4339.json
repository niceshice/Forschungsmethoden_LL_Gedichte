{
    "title": "beinhart-4339",
    "gender": "m",
    "author": "Wulf Kirsten",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "ob du willst oder nicht, du mußt"
        },
        "line.2": {
            "text": "ein offenes ohr haben für die nöte"
        },
        "line.3": {
            "text": "der mitreisenden nachbarn auf zeit,"
        },
        "line.4": {
            "text": "dann erfährst du in gezwängter und"
        },
        "line.5": {
            "text": "bedrängter position, wo den mitmenschen,"
        },
        "line.6": {
            "text": "der vor redseligkeit überquillt,"
        },
        "line.7": {
            "text": "der schuh drückt, hier kannst du"
        },
        "line.8": {
            "text": "beispiele sammeln für mitteilungsdrang,"
        },
        "line.9": {
            "text": "eingekeilt in die masse der menschheit,"
        },
        "line.10": {
            "text": "großraum zweiter klasse, vom zufall"
        },
        "line.11": {
            "text": "kurzfristig geballt, hier lebst du"
        },
        "line.12": {
            "text": "mit der gewißheit, den boden unter"
        },
        "line.13": {
            "text": "den füßen noch nicht verloren zu haben,"
        },
        "line.14": {
            "text": "so wird beschwichtigt die mitfahrerpein,"
        },
        "line.15": {
            "text": "hier kannst du nicht abheben wie der"
        },
        "line.16": {
            "text": "und jener, sobald ihn die ohnmächtige"
        },
        "line.17": {
            "text": "allmacht in andere regionen entführte"
        },
        "line.18": {
            "text": "oder zum mandatsträger erkor und nur"
        },
        "line.19": {
            "text": "noch imstande, sich selbst zuzuhören,"
        },
        "line.20": {
            "text": "berauscht von der vorgefertigten"
        },
        "line.21": {
            "text": "phraseologie, lieber bahnreisender"
        },
        "line.22": {
            "text": "sein und die klagelieder vernehmen"
        },
        "line.23": {
            "text": "notgedrungener erscheinungen"
        },
        "line.24": {
            "text": "im fernverkehr, umgetriebener,"
        },
        "line.25": {
            "text": "ausgebuffter geschäftsvertreter,"
        },
        "line.26": {
            "text": "wie etwa eben des herrn da neben dir"
        },
        "line.27": {
            "text": "aus der futtermittelbranche,"
        },
        "line.28": {
            "text": "der es nicht leicht hat,"
        },
        "line.29": {
            "text": "wenn sein wehklagen nicht aufschneiderei,"
        },
        "line.30": {
            "text": "nun wird er doch nicht gar"
        },
        "line.31": {
            "text": "sein herzeleid ausschütteln"
        },
        "line.32": {
            "text": "wie Frau Holle die betten,"
        },
        "line.33": {
            "text": "bis kein fussel mehr im inlett:"
        },
        "line.34": {
            "text": "was mich umtreibt, ist ein gnadenloser job,"
        },
        "line.35": {
            "text": "oh, da muß einer auf dem quivive sein,"
        },
        "line.36": {
            "text": "wenn er mithalten will, beinhart"
        },
        "line.37": {
            "text": "sind die agrargenossen im osten,"
        },
        "line.38": {
            "text": "beinhart sind die brüder, wirklich beinhart."
        }
    }
}