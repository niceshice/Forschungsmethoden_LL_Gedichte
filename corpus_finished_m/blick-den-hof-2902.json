{
    "title": "blick-den-hof-2902",
    "gender": "m",
    "author": "Harald  Hartung",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "Während es anfängt zu schneien"
        },
        "line.2": {
            "text": "schaukelt das Mädchen im Hof"
        },
        "line.3": {
            "text": "schaukelt sich tief"
        },
        "line.4": {
            "text": "ins wachsende weiße Dunkel"
        },
        "line.5": {
            "text": "Glück ist ein Sekundenschlaf"
        },
        "line.6": {
            "text": "Ich schaue auf, die leere Schaukel"
        },
        "line.7": {
            "text": "schwingt noch ein wenig nach"
        }
    }
}