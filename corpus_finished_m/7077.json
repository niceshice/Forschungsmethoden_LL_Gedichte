{
    "title": "7077",
    "gender": "m",
    "author": "Sepp Mall",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Da / wo sich die Finger-"
        },
        "line.2": {
            "text": "kuppen berühren (nach"
        },
        "line.3": {
            "text": "dem ersten Zurückschrecken)"
        },
        "line.4": {
            "text": "Wo / eine Silbe stockt"
        },
        "line.5": {
            "text": "auf der Zunge"
        },
        "line.6": {
            "text": "und sich wieder zurecht-"
        },
        "line.7": {
            "text": "legt"
        },
        "line.8": {
            "text": "Wo das Zittern / nachläßt"
        },
        "line.9": {
            "text": "In dieser Landschaft"
        },
        "line.10": {
            "text": "wagen sich / die ersten Tiere"
        },
        "line.11": {
            "text": "aus ihren Verstecken"
        },
        "line.12": {
            "text": "vorsichtig / vertraute Stimmen"
        },
        "line.13": {
            "text": "im Strauchwerk"
        },
        "line.14": {
            "text": "Und hinterm Zaun"
        },
        "line.15": {
            "text": "seh ich dich"
        },
        "line.16": {
            "text": "Wie du die Haare aufsteckst"
        },
        "line.17": {
            "text": "atmest"
        }
    }
}