{
    "title": "die-mauersegler-13982",
    "gender": "m",
    "author": "Jan Volker Röhnert",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "Sie haben ihr Reich auf Luft gebaut,"
        },
        "line.2": {
            "text": "Wirbel, Widerstände, Windkanäle,"
        },
        "line.3": {
            "text": "Zufall und Gesetz der Strömungslehre"
        },
        "line.4": {
            "text": "im Element, das unsichtbar die anderen umgibt."
        },
        "line.5": {
            "text": "Sie schlüpfen aus Fugen, Rissen, Giebelschlitzen"
        },
        "line.6": {
            "text": "wie Hasen aus dem Hut des Zauberers"
        },
        "line.7": {
            "text": "plötzlich da"
        },
        "line.8": {
            "text": "ohne dass jemand gesehen hat,"
        },
        "line.9": {
            "text": "wie sie Wald, Wüste, Alpen überqueren"
        },
        "line.10": {
            "text": "in konzentrischen Schleifen, Möbiusbändern,"
        },
        "line.11": {
            "text": "die wie Wetterkarten wandernd"
        },
        "line.12": {
            "text": "den Globus überziehn: Kontinent"
        },
        "line.13": {
            "text": "aus Flügelspannen, pechschwarzer Sturmhaube"
        },
        "line.14": {
            "text": "und einem Aug, das im Himmelblau"
        },
        "line.15": {
            "text": "vom ersten bis zum letzten Sonnenstrahl"
        },
        "line.16": {
            "text": "das Delirium der Landschaft träumt"
        },
        "line.17": {
            "text": "großes Kino ohne Dunkelheit,"
        },
        "line.18": {
            "text": "als Popcorn Mücken, Fliegen oder Larven"
        },
        "line.19": {
            "text": "ihnen zugeflogen, in den Schnabel,"
        },
        "line.20": {
            "text": "der, aus den Kehlen, wie eine ferne Sonde sirrt,"
        },
        "line.21": {
            "text": "die in die Atmosphäre bricht"
        },
        "line.22": {
            "text": "und des Kosmos fremdes Rauschen hörbar macht,"
        },
        "line.23": {
            "text": "im Hintergrund des Tages,"
        },
        "line.24": {
            "text": "dem sie seinen Himmel wiedergeben:"
        },
        "line.25": {
            "text": "Die Mauersegler"
        },
        "line.26": {
            "text": "sind"
        },
        "line.27": {
            "text": "das Blau;"
        },
        "line.28": {
            "text": "federleichte, beinah schwerelose Flügelsehne,"
        },
        "line.29": {
            "text": "die den Sommerhimmelbogen spannt."
        }
    }
}