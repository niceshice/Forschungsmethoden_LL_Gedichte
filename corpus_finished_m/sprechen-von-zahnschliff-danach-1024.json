{
    "title": "sprechen-von-zahnschliff-danach-1024",
    "gender": "m",
    "author": "Ferdinand Schmatz",
    "author_birth": "1953",
    "poem": {
        "line.1": {
            "text": "unten im tier"
        },
        "line.2": {
            "text": "setzt was an"
        },
        "line.3": {
            "text": "am zahn  die zeit  und schleift"
        },
        "line.4": {
            "text": "über den augen oben im denken"
        },
        "line.5": {
            "text": "das gesehene um in schrift"
        },
        "line.6": {
            "text": "winkt verwahrtes vom schreiben"
        },
        "line.7": {
            "text": "ins mündlich gesagte"
        },
        "line.8": {
            "text": "wo lippen die blätter"
        },
        "line.9": {
            "text": "zu zeichen bewegen"
        },
        "line.10": {
            "text": "vom bambus zum papier"
        },
        "line.11": {
            "text": "hochjagen ins auge"
        },
        "line.12": {
            "text": "geschlossenes küssen"
        },
        "line.13": {
            "text": "hinter eigenen stäben"
        },
        "line.14": {
            "text": "wo das feuer zur feier dreht"
        },
        "line.15": {
            "text": "der nacht nachzusprechen beginnt"
        },
        "line.16": {
            "text": "die bittere brise des tages"
        },
        "line.17": {
            "text": "- süsses wird salz"
        },
        "line.18": {
            "text": "in formen gehortet die sätze"
        },
        "line.19": {
            "text": "gegossen aus lettern in schwärze"
        },
        "line.20": {
            "text": "deren schliff die dinge verziert"
        },
        "line.21": {
            "text": "dem lautbau den rahmen bildet"
        },
        "line.22": {
            "text": "im dunkel aus blut"
        },
        "line.23": {
            "text": "wo der zahn das gesprochene war"
        },
        "line.24": {
            "text": "die dort arbeitenden kauen drängt"
        },
        "line.25": {
            "text": "damit hörbar werden"
        },
        "line.26": {
            "text": "wörter des wechsels"
        },
        "line.27": {
            "text": "im wandel der töne"
        },
        "line.28": {
            "text": "schatten"
        },
        "line.29": {
            "text": "im kreis gegebener hände regel"
        },
        "line.30": {
            "text": "folgt jeder fuss im mass der ferse"
        },
        "line.31": {
            "text": "gesetzt unter palmen"
        },
        "line.32": {
            "text": "dem schlagen im holz"
        },
        "line.33": {
            "text": "klingen im aufprall der augen"
        },
        "line.34": {
            "text": "früchte von sinnen vernagelt"
        },
        "line.35": {
            "text": "weist die wimper das lid:"
        },
        "line.36": {
            "text": "geniesse zu lesen den tag"
        },
        "line.37": {
            "text": "zu sprechen die fehler mit stolz"
        },
        "line.38": {
            "text": "als salz in der suppe aus sätzen"
        },
        "line.39": {
            "text": "verstehen zum raten erhoben"
        },
        "line.40": {
            "text": "gegebenes von sprüchen gelöst"
        },
        "line.41": {
            "text": "aufgeblättert vom mund"
        },
        "line.42": {
            "text": "in die sinne zurück"
        },
        "line.43": {
            "text": "verwandelt der rhythmus"
        },
        "line.44": {
            "text": "einmal laufend die angst"
        },
        "line.45": {
            "text": "von der wiederkehr des selben"
        },
        "line.46": {
            "text": "gleich(sam) zur jagd"
        }
    }
}