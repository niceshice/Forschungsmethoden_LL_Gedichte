{
    "title": "meilerrauch-5668",
    "gender": "m",
    "author": "Manfred Peter Hein",
    "author_birth": "1931",
    "poem": {
        "line.1": {
            "text": "Hier wo nichts als dies hier"
        },
        "line.2": {
            "text": "ins Bild kommt"
        },
        "line.3": {
            "text": "sitz nieder"
        },
        "line.4": {
            "text": "am Meiler beim dritten"
        },
        "line.5": {
            "text": "Glas Tee frag"
        },
        "line.6": {
            "text": "den Köhler"
        },
        "line.7": {
            "text": "Nach Lamponia mit Augen"
        },
        "line.8": {
            "text": "zeichnet der Berg"
        },
        "line.9": {
            "text": "Versfuß und Pfad"
        },
        "line.10": {
            "text": "Vers"
        },
        "line.11": {
            "text": "auf die Trümmer"
        },
        "line.12": {
            "text": "der Stadt die reden"
        },
        "line.13": {
            "text": "und reden im"
        },
        "line.14": {
            "text": "Licht der"
        },
        "line.15": {
            "text": "Pappel"
        },
        "line.16": {
            "text": "Meiler"
        },
        "line.17": {
            "text": "Glut und Rauch laß"
        },
        "line.18": {
            "text": "Rauch und Asche uns sein"
        }
    }
}