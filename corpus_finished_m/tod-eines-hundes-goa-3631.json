{
    "title": "tod-eines-hundes-goa-3631",
    "gender": "m",
    "author": "Franz Xaver  Kroetz",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Die Handschrift,"
        },
        "line.2": {
            "text": "unlöschbar,"
        },
        "line.3": {
            "text": "fordert vom Gedanken"
        },
        "line.4": {
            "text": "Reife."
        },
        "line.5": {
            "text": "Lange Zeit saß"
        },
        "line.6": {
            "text": "ich hoch über"
        },
        "line.7": {
            "text": "meinem Fluß."
        },
        "line.8": {
            "text": "Wohin fließen"
        },
        "line.9": {
            "text": "meine Wasser jetzt?"
        },
        "line.10": {
            "text": "Unsichtbar, doch"
        },
        "line.11": {
            "text": "fließen sie noch?"
        },
        "line.12": {
            "text": "Wenn mein Tod käme,"
        },
        "line.13": {
            "text": "er träfe einen Geliebten."
        },
        "line.14": {
            "text": "Welch sinnlose Angst,"
        },
        "line.15": {
            "text": "welch eitle."
        },
        "line.16": {
            "text": "Wo doch der Hund,"
        },
        "line.17": {
            "text": "vom Rattengift gelahmt,"
        },
        "line.18": {
            "text": "neben mir kalt wird."
        }
    }
}