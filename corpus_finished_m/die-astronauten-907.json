{
    "title": "die-astronauten-907",
    "gender": "m",
    "author": "Jürgen Theobaldy",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Wenn ich dieses Blatt wegwerfe,"
        },
        "line.2": {
            "text": "werfe ich nicht das Gedicht weg,"
        },
        "line.3": {
            "text": "dein Kopf wird zum Haupt,"
        },
        "line.4": {
            "text": "falls du dich verneigst vor ihm,"
        },
        "line.5": {
            "text": "auch ein Grabstein sagt mir weniger"
        },
        "line.6": {
            "text": "als die Spuren täglicher Wege,"
        },
        "line.7": {
            "text": "die einer meiner Sänger ging."
        },
        "line.8": {
            "text": "Zweimal im Leben kommst du"
        },
        "line.9": {
            "text": "an dem Laden vorbei,"
        },
        "line.10": {
            "text": "in dessen Fenster die Gitarre weint,"
        },
        "line.11": {
            "text": "die du nicht kaufst."
        },
        "line.12": {
            "text": "Beim dritten Mal ist der Laden weg."
        },
        "line.13": {
            "text": "Erstaunlich, was sich alles verändert hat."
        },
        "line.14": {
            "text": "Ich wachse mit der Schallplatte auf"
        },
        "line.15": {
            "text": "und kaum bin ich aufgewachsen,"
        },
        "line.16": {
            "text": "rollt sie davon ins Museum."
        },
        "line.17": {
            "text": "Jetzt darfst du mir auch"
        },
        "line.18": {
            "text": "auf meine blauen Wildlederschuhe treten,"
        },
        "line.19": {
            "text": "wenn du aus der Schlange"
        },
        "line.20": {
            "text": "vor der Kasse tänzelst."
        },
        "line.21": {
            "text": "Eines Abends schlug ich die Augen auf"
        },
        "line.22": {
            "text": "und sah Männer auf dem Mond"
        },
        "line.23": {
            "text": "in silbernen Taucheranzügen"
        },
        "line.24": {
            "text": "mit einem Spickzettel im Ohr,"
        },
        "line.25": {
            "text": "der die Botschaft an die freie Welt enthielt,"
        },
        "line.26": {
            "text": "die Botschaft hieß: Wird gemacht."
        },
        "line.27": {
            "text": "Nur was geschrieben ist, besteht,"
        },
        "line.28": {
            "text": "nur was geschrieben ist, vergeht."
        },
        "line.29": {
            "text": "Auch die Astronauten steigen hinauf"
        },
        "line.30": {
            "text": "in etwas so Unwohnliches wie die Ewigkeit,"
        },
        "line.31": {
            "text": "weil sie zurückkehren wollen"
        },
        "line.32": {
            "text": "in den Interview-Raum."
        },
        "line.33": {
            "text": "Im Dunkeln strömt das Mondgestein vorbei."
        },
        "line.34": {
            "text": "Still atmend höre ich nichts"
        },
        "line.35": {
            "text": "als das Knarren meines Gürtels."
        }
    }
}