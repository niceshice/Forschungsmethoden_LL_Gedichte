{
    "title": "manoeverkritik-768",
    "gender": "m",
    "author": "Mirko Bonné",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Es würde den Sandweg erklären,"
        },
        "line.2": {
            "text": "die eingefahrenen Spuren,"
        },
        "line.3": {
            "text": "die in der Dämmerung leuchten,"
        },
        "line.4": {
            "text": "so dass ein Kauz, anhand Schatten,"
        },
        "line.5": {
            "text": "einen Anhaltspunkt hätte,"
        },
        "line.6": {
            "text": "man ihn deshalb erkännte,"
        },
        "line.7": {
            "text": "bevor der Weg ansteigt."
        },
        "line.8": {
            "text": "Ein Grund für die Böschung!"
        },
        "line.9": {
            "text": "Ferner zurückgelassene Proviantreste"
        },
        "line.10": {
            "text": "und Milchlachen im Huflattich,"
        },
        "line.11": {
            "text": "unter abblätternden Armeelastern,"
        },
        "line.12": {
            "text": "eine Art Manöverkritik,"
        },
        "line.13": {
            "text": "Herbst verwitternder Tarnung,"
        },
        "line.14": {
            "text": "ein Wäldchen, rechtzeitig entlaubt,"
        },
        "line.15": {
            "text": "wo Kinder nach Patronen grüben,"
        },
        "line.16": {
            "text": "aber deutlichere Spuren?"
        },
        "line.17": {
            "text": "Winternacht. Gleich, ob mit Schnee"
        },
        "line.18": {
            "text": "oder dem Frost von Silvester,"
        },
        "line.19": {
            "text": "oberhalb des Rübenfeldes,"
        },
        "line.20": {
            "text": "am Rand des Käuzchenkreises,"
        },
        "line.21": {
            "text": "stünde die Wentzenburg,"
        },
        "line.22": {
            "text": "wie es beim Schlachten erzählt wird."
        },
        "line.23": {
            "text": "Der Sandweg führte hinauf, es gäbe eine Brücke,"
        },
        "line.24": {
            "text": "im First des Raubritterdachs nisteten Uhus."
        }
    }
}