{
    "title": "horror-dienstag-3019",
    "gender": "m",
    "author": "Nicolas  Born",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Die ruhenden"
        },
        "line.2": {
            "text": "flüchtig überteerten Straßenbahnschienen -"
        },
        "line.3": {
            "text": "wieder ein Warten auf alte Zeiten"
        },
        "line.4": {
            "text": "wie Rückkehr zum Handschriftlichen"
        },
        "line.5": {
            "text": "Plötzlicher Regen, es ist Nachmittag"
        },
        "line.6": {
            "text": "nur wenig Licht gesammelt in Gesichtern"
        },
        "line.7": {
            "text": "nieselnde Gräue, die Felder nah"
        },
        "line.8": {
            "text": "dunkle Wassergräben, Bäume stehen tief"
        },
        "line.9": {
            "text": "Nasser Kragen nasse Lippen"
        },
        "line.10": {
            "text": "Kind mit nassen Zöpfen führt alten Mann"
        },
        "line.11": {
            "text": "Zementsilos neben dem Abstellgleis"
        },
        "line.12": {
            "text": "Vogelschwärme Banner sinken"
        },
        "line.13": {
            "text": "Verkäuferin winkt durch die Glaswand ab"
        },
        "line.14": {
            "text": "Neuer Stadtrand flackert auf um sechs"
        },
        "line.15": {
            "text": "ich denke an fern ausgesetzte Insel des Gehirns"
        },
        "line.16": {
            "text": "Baukräne, zementhelle Öde"
        },
        "line.17": {
            "text": "Blick in die aufsteigende Welt"
        },
        "line.18": {
            "text": "die nun doch nicht überlebt hat"
        }
    }
}