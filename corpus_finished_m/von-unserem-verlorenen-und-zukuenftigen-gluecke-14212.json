{
    "title": "von-unserem-verlorenen-und-zukuenftigen-gluecke-14212",
    "gender": "m",
    "author": "Tom Bresemann",
    "author_birth": "1978",
    "poem": {
        "line.1": {
            "text": "von unserem verlorenen und zukünftigen"
        },
        "line.2": {
            "text": "glücke"
        },
        "line.3": {
            "text": ", die formen"
        },
        "line.4": {
            "text": "verändern sich,   die formen sind wichtig,  der ausdruck leiden ist,"
        },
        "line.5": {
            "text": "so will es uns           scheinen, doppelsinnig,"
        },
        "line.6": {
            "text": "wenn man zu gast ist,      in mancher"
        },
        "line.7": {
            "text": "roten, schöpferischen stunde,"
        },
        "line.8": {
            "text": "es dunkelt, der tag"
        },
        "line.9": {
            "text": "geht zur rüste,               die formen"
        },
        "line.10": {
            "text": "ändern sich, sonst nichts,      dieses heran-"
        },
        "line.11": {
            "text": "drängen an den tod,        die größte              der epochen"
        },
        "line.12": {
            "text": "bricht jetzt an,"
        },
        "line.13": {
            "text": "man weiß jetzt nicht, was"
        },
        "line.14": {
            "text": "kommt, das beste   wäre, wenn es bald losginge."
        },
        "line.15": {
            "text": "hie wendet sichs,  und"
        },
        "line.16": {
            "text": "wird gar           ein new wesen,"
        },
        "line.17": {
            "text": "irgendetwas"
        },
        "line.18": {
            "text": "von dem außerordentlichen wesen"
        },
        "line.19": {
            "text": "des betreffenden"
        },
        "line.20": {
            "text": "pflegt doch schon frühe"
        },
        "line.21": {
            "text": "durchzublitzen,"
        },
        "line.22": {
            "text": "dies kann, muß vielleicht"
        },
        "line.23": {
            "text": "als zentrale verlusterfahrung"
        },
        "line.24": {
            "text": "erfahren werden, bevor sie"
        },
        "line.25": {
            "text": "andere als opfer sehen,"
        },
        "line.26": {
            "text": "müssen sie sich selbst"
        },
        "line.27": {
            "text": "als opfer erleben dürfen."
        }
    }
}