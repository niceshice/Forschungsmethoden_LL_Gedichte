{
    "title": "bin-so-680",
    "gender": "m",
    "author": "Jürg Schubiger",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Bin so"
        },
        "line.2": {
            "text": "so traurig,"
        },
        "line.3": {
            "text": "dass mir fast der Kopf"
        },
        "line.4": {
            "text": "fast vom Hals fällt,"
        },
        "line.5": {
            "text": "dass das Dach"
        },
        "line.6": {
            "text": "vom Haus fällt,"
        },
        "line.7": {
            "text": "dass das Haus fällt."
        },
        "line.8": {
            "text": "Habe Füsse wie"
        },
        "line.9": {
            "text": "wie in viel zu grossen Schuhn,"
        },
        "line.10": {
            "text": "Hände wie"
        },
        "line.11": {
            "text": "wie in viel zu grossen Handschuhn."
        },
        "line.12": {
            "text": "Versteh nicht, was da"
        },
        "line.13": {
            "text": "was gelacht wird ringsherum."
        },
        "line.14": {
            "text": "Bin so"
        },
        "line.15": {
            "text": "wie ein Hund,"
        },
        "line.16": {
            "text": "so traurig"
        },
        "line.17": {
            "text": "wie ein Huhn,"
        },
        "line.18": {
            "text": "ein gelbes Suppenhuhn,"
        },
        "line.19": {
            "text": "ein altes Weissbrot,"
        },
        "line.20": {
            "text": "ein Kuchen, der nicht aufgeht,"
        },
        "line.21": {
            "text": "nie mehr auf."
        },
        "line.22": {
            "text": "Bin so"
        },
        "line.23": {
            "text": "so traurig,"
        },
        "line.24": {
            "text": "dass die Tränen nur so"
        },
        "line.25": {
            "text": "an mir herunter laufen,"
        },
        "line.26": {
            "text": "immer nur so herunter,"
        },
        "line.27": {
            "text": "dass das Hemd nass, die Hose nass,"
        },
        "line.28": {
            "text": "die Haut nass."
        },
        "line.29": {
            "text": "Denn das hört"
        },
        "line.30": {
            "text": "denn das hört nie mehr auf,"
        },
        "line.31": {
            "text": "dass der Kopf mir fast vom Hals,"
        },
        "line.32": {
            "text": "dass das Dach fällt,"
        },
        "line.33": {
            "text": "dass das Haus."
        }
    }
}