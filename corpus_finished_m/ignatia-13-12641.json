{
    "title": "ignatia-13-12641",
    "gender": "m",
    "author": "Gerhard Falkner",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "Ordne das Holz."
        },
        "line.2": {
            "text": "Ordne das Holz und die Zahl."
        },
        "line.3": {
            "text": "Rolle dein Laken zusammen"
        },
        "line.4": {
            "text": "und lüfte das Zimmer."
        },
        "line.5": {
            "text": "Wir liegen noch gut im Rennen!"
        },
        "line.6": {
            "text": "Die hochgestellte Zahl ist die Zeit."
        },
        "line.7": {
            "text": "Wir schmücken sie mit dem Bruchteil des Holzes."
        },
        "line.8": {
            "text": "Unser Bett ist ein Bruchteil des Holzes."
        },
        "line.9": {
            "text": "Gewähr gibt es natürlich keine. Für nichts."
        },
        "line.10": {
            "text": "Selbst die Division durch die Null"
        },
        "line.11": {
            "text": "unterliegt Tagesschwankungen."
        },
        "line.12": {
            "text": "Ich geteilt durch Null"
        },
        "line.13": {
            "text": "das ist mein heutiger Kurswert."
        },
        "line.14": {
            "text": "Ordne das Holz."
        },
        "line.15": {
            "text": "Das Holz ist der Ort, den die Sprache"
        },
        "line.16": {
            "text": "der Zeit auf den Tisch knallt."
        },
        "line.17": {
            "text": "Holz und Zeit."
        },
        "line.18": {
            "text": "Sie zeigen den Käfer, das Gras und die Linde."
        },
        "line.19": {
            "text": "Die Kornblumenkorridore der absoluten Stille."
        },
        "line.20": {
            "text": "Abende voller Atemlosigkeit."
        },
        "line.21": {
            "text": "Das schläfrige Anschlagen der Brandung."
        },
        "line.22": {
            "text": "Alles spielt sich ab. Gleichzeitig."
        },
        "line.23": {
            "text": "Bis endlich die Seele in See sticht."
        },
        "line.24": {
            "text": "In Zeitlupe."
        },
        "line.25": {
            "text": "Bis endlich auf dem Zehnmeterturm oben"
        },
        "line.26": {
            "text": "das winzige Ich sich als Seele entpuppt"
        },
        "line.27": {
            "text": "und ansetzt zum Kopfsprung."
        }
    }
}