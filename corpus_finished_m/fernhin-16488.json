{
    "title": "fernhin-16488",
    "gender": "m",
    "author": "Dominik Dombrowski",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "Ich denke wie erwachsen / ich als Kind noch war"
        },
        "line.2": {
            "text": "denn ich lag"
        },
        "line.3": {
            "text": "unter der Bettdecke mit einer Lampe & las"
        },
        "line.4": {
            "text": "doch inzwischen"
        },
        "line.5": {
            "text": "ist es unter der Decke unendlich"
        },
        "line.6": {
            "text": "dunkel geworden / und ich"
        },
        "line.7": {
            "text": "lese seither / höchstens im Regen noch / oder an all diesen"
        },
        "line.8": {
            "text": "Dingen von meinem nächtlichen Fenster ab"
        },
        "line.9": {
            "text": "so lange"
        },
        "line.10": {
            "text": "bis ich an meiner Meerestiefe angekommen bin"
        },
        "line.11": {
            "text": "Meine alte Katze"
        },
        "line.12": {
            "text": "streift derweil / weit voraus"
        },
        "line.13": {
            "text": "mit ihren Geheimnissen / über den dunklen"
        },
        "line.14": {
            "text": "Fußboden sichert sie sich"
        },
        "line.15": {
            "text": "meine Gunst durch ihr Talent"
        },
        "line.16": {
            "text": "keineswegs / sich enträtseln"
        },
        "line.17": {
            "text": "zu lassen / dort bin ich / hoffentlich auch bald"
        },
        "line.18": {
            "text": "im Bauch"
        },
        "line.19": {
            "text": "meines Blauwals gestrandet & habe mich dort"
        },
        "line.20": {
            "text": "eingerichtet"
        },
        "line.21": {
            "text": "unter einem schwankenden Leuchter"
        },
        "line.22": {
            "text": "im alten Sessel / über"
        },
        "line.23": {
            "text": "meinem aschenen Teppichläufer"
        },
        "line.24": {
            "text": "der an den leeren Regalen"
        },
        "line.25": {
            "text": "endet hier / schläft auch manchmal"
        },
        "line.26": {
            "text": "meine nachdenkliche Nixe"
        },
        "line.27": {
            "text": "im Tabakrauch ein"
        },
        "line.28": {
            "text": "Ich nehme ihr sachte die Brille ab / Ausschau"
        },
        "line.29": {
            "text": "haltend am Auge des Tiers"
        },
        "line.30": {
            "text": "immerzu"
        },
        "line.31": {
            "text": "nach einem der Länder wo"
        },
        "line.32": {
            "text": "die Zitronen blühn mein Gott"
        },
        "line.33": {
            "text": "wie wirklichkeitsfremd bin ich"
        },
        "line.34": {
            "text": "doch oft gewesen mit all"
        },
        "line.35": {
            "text": "diesen Büchern"
        },
        "line.36": {
            "text": "in meiner Kindheit"
        }
    }
}