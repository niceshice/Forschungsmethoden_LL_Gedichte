{
    "title": "tierleben-4-4013",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "4"
        },
        "line.2": {
            "text": "Der wäre wer! Dem"
        },
        "line.3": {
            "text": "der Spiegel kein Gesicht"
        },
        "line.4": {
            "text": "andichtet! Und"
        },
        "line.5": {
            "text": "nestelt ihm die Maske"
        },
        "line.6": {
            "text": "vom Geschlecht."
        },
        "line.7": {
            "text": "Klaubt ihm den Namen"
        },
        "line.8": {
            "text": "aus der stur"
        },
        "line.9": {
            "text": "zum Gruss geballten"
        },
        "line.10": {
            "text": "Faust. Nur nie"
        },
        "line.11": {
            "text": "nicht Ja und Amen sagen."
        },
        "line.12": {
            "text": "Zweimal Ich! gekräht"
        },
        "line.13": {
            "text": "und schon schiesst aus dem Staub"
        },
        "line.14": {
            "text": "das Beutetier ins"
        },
        "line.15": {
            "text": "Bild. Um nach sich selbst"
        },
        "line.16": {
            "text": "zu schnappen."
        },
        "line.17": {
            "text": "(\"Wer wäre er. Der"
        },
        "line.18": {
            "text": "sich ein Gesicht andichten"
        },
        "line.19": {
            "text": "liesse. Und nestelte"
        },
        "line.20": {
            "text": "dem Gegenüber  zuck!"
        },
        "line.21": {
            "text": "die Maske vom Geschlecht."
        },
        "line.22": {
            "text": "Klaubt ihm Gruss"
        },
        "line.23": {
            "text": "und Namen aus der Faust."
        },
        "line.24": {
            "text": "Sagt statt Amen"
        },
        "line.25": {
            "text": "zweimal Ich! Und schon"
        },
        "line.26": {
            "text": "schiesst krähend"
        },
        "line.27": {
            "text": "aus dem Staub das Beutetier"
        },
        "line.28": {
            "text": "ins Bild. Und jetzt"
        },
        "line.29": {
            "text": "der Biss.\")"
        }
    }
}