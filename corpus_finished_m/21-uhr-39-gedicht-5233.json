{
    "title": "21-uhr-39-gedicht-5233",
    "gender": "m",
    "author": "Franz Hodjak",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Wer eine Überraschung"
        },
        "line.2": {
            "text": "erwartet, muß schon unter"
        },
        "line.3": {
            "text": "falschem Namen auftauchen."
        },
        "line.4": {
            "text": "Die Polizei, die Göttin"
        },
        "line.5": {
            "text": "der Liebe, regelt"
        },
        "line.6": {
            "text": "das Gesetz der Nachfrage"
        },
        "line.7": {
            "text": "und des Angebots. Das Glück"
        },
        "line.8": {
            "text": "öffnet die Schenkel"
        },
        "line.9": {
            "text": "wie nach einem Gebet,"
        },
        "line.10": {
            "text": "im Namen des Turnschuhs,"
        },
        "line.11": {
            "text": "des Benzinpreises und des"
        },
        "line.12": {
            "text": "heiligen Oleanders. Daß es"
        },
        "line.13": {
            "text": "in der Ewigkeit keine"
        },
        "line.14": {
            "text": "Sonnenblumen gibt, keine"
        },
        "line.15": {
            "text": "Öffentlichkeit, keine Hotelgeschichten,"
        },
        "line.16": {
            "text": "keinen Aufschwung, keinen"
        },
        "line.17": {
            "text": "Niedergang, verdüstert"
        },
        "line.18": {
            "text": "die Perspektive. Deshalb"
        },
        "line.19": {
            "text": "bemalen wir akribisch"
        },
        "line.20": {
            "text": "mit bunten Szenen den Sarg, in dem"
        },
        "line.21": {
            "text": "wir liegen werden."
        }
    }
}