{
    "title": "einschlafessays-16492",
    "gender": "m",
    "author": "Dominik Dombrowski",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "Wir gingen nicht mehr allzu oft zusammen ins Bett aber wenn"
        },
        "line.2": {
            "text": "blieb mein Blick"
        },
        "line.3": {
            "text": "an deinem Rückgrat hängen"
        },
        "line.4": {
            "text": "als betrachtete ich ein Salvador-Dali-Bild."
        },
        "line.5": {
            "text": "Wir erzählten uns Einschlafessays"
        },
        "line.6": {
            "text": "über die letzten Filme"
        },
        "line.7": {
            "text": "die wir gesehen haben zum Beispiel"
        },
        "line.8": {
            "text": "die schöne Langeweile"
        },
        "line.9": {
            "text": "die von"
        },
        "line.10": {
            "text": "Blade Runner"
        },
        "line.11": {
            "text": "ausgeht"
        },
        "line.12": {
            "text": "oder wie man das Ende von"
        },
        "line.13": {
            "text": "Joker"
        },
        "line.14": {
            "text": "hätte besser gestalten können."
        },
        "line.15": {
            "text": "Irgendwann drehten wir je an unserer Wand durch."
        },
        "line.16": {
            "text": "Und du sagtest: Meinst du"
        },
        "line.17": {
            "text": "wir werden einmal wieder so ficken wie früher"
        },
        "line.18": {
            "text": "bevor wir ins Gras beißen?"
        },
        "line.19": {
            "text": "Ins Gras beißen"
        },
        "line.20": {
            "text": "erschien mir da"
        },
        "line.21": {
            "text": "plötzlich wörtlich und es ging"
        },
        "line.22": {
            "text": "eine Verheißung davon aus"
        },
        "line.23": {
            "text": "eine Art geborgte Erleichterung."
        },
        "line.24": {
            "text": "Ins Gras beißen"
        },
        "line.25": {
            "text": "sah ich mich plötzlich"
        },
        "line.26": {
            "text": "aus dem Bett robben voller Morphine"
        },
        "line.27": {
            "text": "in meinen letzten Zügen"
        },
        "line.28": {
            "text": "in einem Krankenpark stranden"
        },
        "line.29": {
            "text": "um dann an außergewöhnlichen Wiesen zu lecken"
        },
        "line.30": {
            "text": "und dort staunend niederzuknien"
        },
        "line.31": {
            "text": "um endlich wiederkäuend einzuschlafen"
        },
        "line.32": {
            "text": "Als Letztes spürte ich noch"
        },
        "line.33": {
            "text": "mein schmerzendes Ohr"
        },
        "line.34": {
            "text": "wie es am Ende der Erde"
        },
        "line.35": {
            "text": "gehorchte und wie"
        },
        "line.36": {
            "text": "ich mit dem Wind blinzelte"
        },
        "line.37": {
            "text": "in den Gräsern als du"
        },
        "line.38": {
            "text": "dich zu mir umdrehtest und ich mich zu dir."
        },
        "line.39": {
            "text": "Und wir schauten"
        },
        "line.40": {
            "text": "uns"
        },
        "line.41": {
            "text": "sehr"
        },
        "line.42": {
            "text": "kultiviert"
        },
        "line.43": {
            "text": "in die Augen als grüben wir"
        },
        "line.44": {
            "text": "eine fernere Zeit aus."
        },
        "line.45": {
            "text": "Und wir sahen uns an und ich sagte tief"
        },
        "line.46": {
            "text": "an deine Müdigkeit:"
        },
        "line.47": {
            "text": "Ich liebe mich und du"
        },
        "line.48": {
            "text": "sofort:"
        },
        "line.49": {
            "text": "Ich liebe mich"
        },
        "line.50": {
            "text": "auch."
        }
    }
}