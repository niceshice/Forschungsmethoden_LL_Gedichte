{
    "title": "klaren-weihern-6084",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Reich an Gütern begegnet mir ein Mann,"
        },
        "line.2": {
            "text": "was ich will mit der zerrissenen Hose"
        },
        "line.3": {
            "text": "und dem zerfransten Hut?"
        },
        "line.4": {
            "text": "Wandern"
        },
        "line.5": {
            "text": "und nicht stehen bleiben,"
        },
        "line.6": {
            "text": "daß mich einer mustre"
        },
        "line.7": {
            "text": "und spotte."
        },
        "line.8": {
            "text": "Die klaren Weiher bemängeln meine Kleidung nicht,"
        },
        "line.9": {
            "text": "in Spiegelbildern lassen sie mich sehen"
        },
        "line.10": {
            "text": "meine verlotterte Gestalt in Ruhe,"
        },
        "line.11": {
            "text": "und ich trag es"
        },
        "line.12": {
            "text": "und verzweifle nicht."
        },
        "line.13": {
            "text": "In hohem Gras sitzend,"
        },
        "line.14": {
            "text": "verzeih ich mir."
        },
        "line.15": {
            "text": "Schöne Frauen"
        },
        "line.16": {
            "text": "reise ich nicht an."
        },
        "line.17": {
            "text": "Von den Wettern des Sonnenscheins"
        },
        "line.18": {
            "text": "laß ich mich trösten"
        },
        "line.19": {
            "text": "und sitz,"
        },
        "line.20": {
            "text": "als sei ich mundlos."
        }
    }
}