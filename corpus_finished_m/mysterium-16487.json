{
    "title": "mysterium-16487",
    "gender": "m",
    "author": "Dominik Dombrowski",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "Mein Herz ist immer größer"
        },
        "line.2": {
            "text": "geworden nicht weil"
        },
        "line.3": {
            "text": "es wuchs / sondern weil in ihm"
        },
        "line.4": {
            "text": "immer mehr"
        },
        "line.5": {
            "text": "Herzen zu schlagen"
        },
        "line.6": {
            "text": "begannen"
        },
        "line.7": {
            "text": "Dieses Herz ist eine russische Puppe"
        },
        "line.8": {
            "text": "eine Matrjoschka schlagender"
        },
        "line.9": {
            "text": "Herzen geworden"
        },
        "line.10": {
            "text": "bis es riss / ich sehe das erst jetzt"
        },
        "line.11": {
            "text": "in der Nähe des Luftschachts"
        },
        "line.12": {
            "text": "nördlich der Pathologen"
        },
        "line.13": {
            "text": "wie sie alle meine stillstehenden"
        },
        "line.14": {
            "text": "Herzen vor sich / aufreihen"
        },
        "line.15": {
            "text": "entnommen dem einen"
        },
        "line.16": {
            "text": "das zu groß / für mich geworden"
        },
        "line.17": {
            "text": "Überm Mundschutz"
        },
        "line.18": {
            "text": "die Pathologen starren"
        },
        "line.19": {
            "text": "auf ihr Besteck"
        },
        "line.20": {
            "text": "Sie wissen nicht weiter"
        }
    }
}