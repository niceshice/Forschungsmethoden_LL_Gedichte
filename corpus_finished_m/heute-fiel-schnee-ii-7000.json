{
    "title": "heute-fiel-schnee-ii-7000",
    "gender": "m",
    "author": "Hendrik  Jackson",
    "author_birth": "1971",
    "poem": {
        "line.1": {
            "text": "heute fiel Schnee"
        },
        "line.2": {
            "text": "(***)"
        },
        "line.3": {
            "text": "eine Woche starb, vergeudet Stern um Stern"
        },
        "line.4": {
            "text": "Wirbelndes: eingeflockt, im wehen Treiben: kein Pfahl, kein Pfad."
        },
        "line.5": {
            "text": "damals, damals"
        },
        "line.6": {
            "text": ": Pelzmützen, Montgolfiere  wache auf: der Traum"
        },
        "line.7": {
            "text": "dahinter"
        },
        "line.8": {
            "text": ", nur ein Begriff:"
        },
        "line.9": {
            "text": "clair automatique"
        },
        "line.10": {
            "text": ", klirrt anvisiertes Auge"
        },
        "line.11": {
            "text": "Zauber des Winterapfels, gehütet. wie früher!  Stillstand"
        },
        "line.12": {
            "text": "(Gestöber)"
        },
        "line.13": {
            "text": "Freunde kamen herein"
        },
        "line.14": {
            "text": "(Gespenster)"
        },
        "line.15": {
            "text": "schneiige Eulen, Lifte aus Glas"
        },
        "line.16": {
            "text": "(schon zerstoben)"
        },
        "line.17": {
            "text": "Himmel, wenn Fell ruppiger wird, Haut gegerbt"
        },
        "line.18": {
            "text": "Kind und Wind, was sich trollt, ins Bett  schläfrige Tatze, pulsiert"
        }
    }
}