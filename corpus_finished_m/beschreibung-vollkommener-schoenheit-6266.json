{
    "title": "beschreibung-vollkommener-schoenheit-6266",
    "gender": "m",
    "author": "Tom Schulz",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "zwei Brüste die wie Märchenreiche"
        },
        "line.2": {
            "text": "schwimmen in einem Meer untergegangener"
        },
        "line.3": {
            "text": "Katecheten, diesen Himmel habe ich"
        },
        "line.4": {
            "text": "kuratiert mit einem Kuss, der mir"
        },
        "line.5": {
            "text": "an einer Straßenecke begegnete oder"
        },
        "line.6": {
            "text": "in der Hacienda eines Silberblicks oder"
        },
        "line.7": {
            "text": "die Aufrichtigkeit eines Bienenschwarms"
        },
        "line.8": {
            "text": "wenn du auf den Plan trittst, deines Munds"
        },
        "line.9": {
            "text": "der sich gelegentlich öffnet"
        },
        "line.10": {
            "text": "Heute Ruhetag, geschlossene Gesellschaft"
        },
        "line.11": {
            "text": "der Leberflecken & ich träume"
        },
        "line.12": {
            "text": "mich in ein Muttermal zu verwandeln"
        },
        "line.13": {
            "text": "um dir nah zu sein, deine Vollkommen"
        },
        "line.14": {
            "text": "Heit beginnt bei den Zehen, denen die"
        },
        "line.15": {
            "text": "Knöchel geweiht sind, aufwärts"
        },
        "line.16": {
            "text": "immer mehr, immer mehr Heiligkeit"
        },
        "line.17": {
            "text": "bis zum Eingang sog. Tempelstätten"
        },
        "line.18": {
            "text": "dann eine schier endlose Weite"
        },
        "line.19": {
            "text": "von Oasen  der Hals, ein Schwanensee"
        },
        "line.20": {
            "text": "ich möchte ertrinken, zwischen"
        },
        "line.21": {
            "text": "dem Kalkül & den Himbeersträuchern"
        },
        "line.22": {
            "text": "nimm mich mit, wenn es Blitzabzeichen"
        },
        "line.23": {
            "text": "sind, die aufflackern am Revers"
        },
        "line.24": {
            "text": "dieser Sternenfiliale, Landmine"
        },
        "line.25": {
            "text": "nimm mich mit, wenn du es"
        },
        "line.26": {
            "text": "ernst meinst oder sei der Sandregen"
        },
        "line.27": {
            "text": "& verschütte mich"
        }
    }
}