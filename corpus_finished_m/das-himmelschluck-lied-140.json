{
    "title": "das-himmelschluck-lied-140",
    "gender": "m",
    "author": "Peter Rühmkorf",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Mein Herz beschert mir groben Spaß,"
        },
        "line.2": {
            "text": "die Lunge kommt mir auch zupaß,"
        },
        "line.3": {
            "text": "ich preise mein Gewicht."
        },
        "line.4": {
            "text": "Zeigt ernst die Nas nach Norden hin,"
        },
        "line.5": {
            "text": "daß ich aus Lust geworden bin,"
        },
        "line.6": {
            "text": "vergeß, vergeß ich nicht."
        },
        "line.7": {
            "text": "Die Bäume stehen sich durchs Jahr,"
        },
        "line.8": {
            "text": "das Herz ist wunder- und wandelbar,"
        },
        "line.9": {
            "text": "ich setz auf Wasnichtbleibt;"
        },
        "line.10": {
            "text": "so Blüten, Laub und Schöpferklein"
        },
        "line.11": {
            "text": "und leg dir Feuer ans Gebein,"
        },
        "line.12": {
            "text": "bis daß es Funken treibt."
        },
        "line.13": {
            "text": "Schau, die katangaschwarze Nacht"
        },
        "line.14": {
            "text": "hat die Machete mitgebracht"
        },
        "line.15": {
            "text": "und säbelt in den Wind."
        },
        "line.16": {
            "text": "Da sind die Sterne aufgereiht,"
        },
        "line.17": {
            "text": "Schnittmuster für die Ewigkeit,"
        },
        "line.18": {
            "text": "der wir verloren sind."
        },
        "line.19": {
            "text": "Oh schönes Sein, oh großes Nuscht,"
        },
        "line.20": {
            "text": "zwei Wolken, in die Luft getuscht,"
        },
        "line.21": {
            "text": "die ich wohl fangen möcht."
        },
        "line.22": {
            "text": "Es fällt die Nacht, es steigt die Früh,"
        },
        "line.23": {
            "text": "im Spiegel bleckt mein Kontervieh"
        },
        "line.24": {
            "text": "sein heimliches Geschlecht."
        },
        "line.25": {
            "text": "Doch Ketzers Kopf voll Fröhlichkeit,"
        },
        "line.26": {
            "text": "die Liebe bringt ihn um die Zeit,"
        },
        "line.27": {
            "text": "und ist für gut verjuxt."
        },
        "line.28": {
            "text": "Dann aber kommt der Tag des Herrn"
        },
        "line.29": {
            "text": "mit Donnerschlag und Mandelkern,"
        },
        "line.30": {
            "text": "wo du den Himmel schluckst."
        }
    }
}