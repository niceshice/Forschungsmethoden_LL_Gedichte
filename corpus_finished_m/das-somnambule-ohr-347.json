{
    "title": "das-somnambule-ohr-347",
    "gender": "m",
    "author": "Hans Magnus Enzensberger",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Wie sollst du je wieder einschlafen,"
        },
        "line.2": {
            "text": "wenn in der menschenleeren Stunde"
        },
        "line.3": {
            "text": "ehe es hell wird,"
        },
        "line.4": {
            "text": "das Haus klopft und scharrt,"
        },
        "line.5": {
            "text": "wenn du es murmeln hörst"
        },
        "line.6": {
            "text": "hinter der Wand?"
        },
        "line.7": {
            "text": "Diese Schüsse, kommen sie aus einem Film,"
        },
        "line.8": {
            "text": "den niemand sieht,"
        },
        "line.9": {
            "text": "oder stirbt da einer im Treppenhaus?"
        },
        "line.10": {
            "text": "Etwas gurrt, wo keine Taube lebt,"
        },
        "line.11": {
            "text": "etwas ächzt  ein alter Kühlschrank"
        },
        "line.12": {
            "text": "oder ein längst verschwundenes Liebespaar."
        },
        "line.13": {
            "text": "In den Ventilen zischt das Gas."
        },
        "line.14": {
            "text": "Es werden schwere Möbel gerückt."
        },
        "line.15": {
            "text": "Etwas tropft. Der Dampf tickt."
        },
        "line.16": {
            "text": "Das Wasser stürzt durch die Röhren."
        },
        "line.17": {
            "text": "Wer trinkt, wer duscht,"
        },
        "line.18": {
            "text": "wer entleert sich da?"
        },
        "line.19": {
            "text": "Und als es endlich still ist"
        },
        "line.20": {
            "text": "das Haus hält vor Angst die Luft an ,"
        },
        "line.21": {
            "text": "vernimmst du ein Sirren,"
        },
        "line.22": {
            "text": "fast jenseits des Hörbaren,"
        },
        "line.23": {
            "text": "geisterhaft dünn wie der glitzernde Ring"
        },
        "line.24": {
            "text": "eines unaufhaltsamen Zählers,"
        },
        "line.25": {
            "text": "der sich im Dunkeln dreht."
        }
    }
}