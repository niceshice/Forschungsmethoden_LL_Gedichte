{
    "title": "sind-wir-nicht-mehr-da-kommt-eine-grosse-ruhe-11483",
    "gender": "m",
    "author": "Franz Dodel",
    "author_birth": "1949",
    "poem": {
        "line.1": {
            "text": "sind wir nicht mehr da"
        },
        "line.2": {
            "text": "kommt eine große Ruhe"
        },
        "line.3": {
            "text": "zurück in die Welt"
        },
        "line.4": {
            "text": "angekündigt vielleicht durch"
        },
        "line.5": {
            "text": "die Gleichgültigkeit"
        },
        "line.6": {
            "text": "der Pendeluhren oder"
        },
        "line.7": {
            "text": "die Feindseligkeit"
        },
        "line.8": {
            "text": "violetter Vorhänge"
        },
        "line.9": {
            "text": "was aber wenn die"
        },
        "line.10": {
            "text": "letzte Uhr stillsteht und der"
        },
        "line.11": {
            "text": "Vorhang sich öffnet?"
        },
        "line.12": {
            "text": "und nach dem Atemholen"
        },
        "line.13": {
            "text": "wird Gott noch einmal"
        },
        "line.14": {
            "text": "einen Neuanfang denken?"
        },
        "line.15": {
            "text": "falls ja sollte er"
        },
        "line.16": {
            "text": "uns mit Sorgfalt ins Leben"
        },
        "line.17": {
            "text": "heben leicht wie wenn"
        },
        "line.18": {
            "text": "man ein Haar aus der Milch zieht"
        },
        "line.19": {
            "text": "er dürfte uns nicht"
        },
        "line.20": {
            "text": "gleich zu Beginn mit einem"
        },
        "line.21": {
            "text": "Verbot verwirren"
        },
        "line.22": {
            "text": "das unser Unvermögen"
        },
        "line.23": {
            "text": "ans Licht bringt so dass"
        },
        "line.24": {
            "text": "die Scham sich festsetzt in uns"
        },
        "line.25": {
            "text": "ich vermute dass"
        },
        "line.26": {
            "text": "es uns besser bekäme"
        },
        "line.27": {
            "text": "hieße man uns das tun"
        },
        "line.28": {
            "text": "was wir können beharrlich"
        },
        "line.29": {
            "text": "bis wie von selbst uns"
        },
        "line.30": {
            "text": "dieses Andere gelingt"
        }
    }
}