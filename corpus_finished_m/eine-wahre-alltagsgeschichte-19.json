{
    "title": "eine-wahre-alltagsgeschichte-19",
    "gender": "m",
    "author": "Hans Manz",
    "author_birth": "1931",
    "poem": {
        "line.1": {
            "text": "Mein Tür-an-Tür-Nachbar,"
        },
        "line.2": {
            "text": "ein Chinese aus Hongkong,"
        },
        "line.3": {
            "text": "kehrt, wenn er mit dem Besen kehrt,"
        },
        "line.4": {
            "text": "zuerst vor meiner Tür,"
        },
        "line.5": {
            "text": "erst dann vor der seinen."
        },
        "line.6": {
            "text": "Er kennt unsere Redensart"
        },
        "line.7": {
            "text": "vom Kehren vor Türen nicht."
        },
        "line.8": {
            "text": "Mir ist sie geläufig,"
        },
        "line.9": {
            "text": "habe mich aber inzwischen"
        },
        "line.10": {
            "text": "auch von ihr abgekehrt"
        },
        "line.11": {
            "text": "und kehre, wenn ich mit dem Besen kehre,"
        },
        "line.12": {
            "text": "zuerst vor der Tür meines Nachbarn,"
        },
        "line.13": {
            "text": "des Chinesen aus Hongkong,"
        },
        "line.14": {
            "text": "und dann erst vor meiner."
        },
        "line.15": {
            "text": "So sind bei seiner Rückkehr von der Arbeit"
        },
        "line.16": {
            "text": "oder bei meiner Heimkehr"
        },
        "line.17": {
            "text": "die Treppen immer blank-"
        },
        "line.18": {
            "text": "und die alten Regeln hinweggekehrt."
        },
        "line.19": {
            "text": "Kehraus der Abgrenzungen."
        }
    }
}