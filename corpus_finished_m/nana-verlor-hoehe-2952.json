{
    "title": "nana-verlor-hoehe-2952",
    "gender": "m",
    "author": "Paulus  Böhmer",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Die Erde ein bizarrer Tanz."
        },
        "line.2": {
            "text": "Mama war eine Blaualge."
        },
        "line.3": {
            "text": "Papa ein Stein."
        },
        "line.4": {
            "text": "Fleisch"
        },
        "line.5": {
            "text": "dient zu nichts."
        },
        "line.6": {
            "text": "Nana verlor an Höhe,"
        },
        "line.7": {
            "text": "das linke Triebwerk fiel aus, herum="
        },
        "line.8": {
            "text": "gerissen durch die Schubkraft des rechten,"
        },
        "line.9": {
            "text": "kippte sie ab und zerschellte,"
        },
        "line.10": {
            "text": "so jung, so blau,"
        },
        "line.11": {
            "text": "so unzählige Lichtjahre weg."
        },
        "line.12": {
            "text": "Vielleicht halb"
        },
        "line.13": {
            "text": "Tier, halb Pflanze, im Schatten"
        },
        "line.14": {
            "text": "eines unsichtbaren Riffs. Vielleicht"
        },
        "line.15": {
            "text": "das Überbleibsel einer nie zu Planeten"
        },
        "line.16": {
            "text": "verschmolzenen Materie vor ihrem Übertritt"
        },
        "line.17": {
            "text": "ins Hell. Ach, such sie nicht, bald wird"
        },
        "line.18": {
            "text": "aus der Gejagten eine Jägerin."
        },
        "line.19": {
            "text": "Die Flügel großer Rochen blitzen,"
        },
        "line.20": {
            "text": "Schwärme zittern. Falls du mich finden solltest,"
        },
        "line.21": {
            "text": "bin ich nicht mehr"
        },
        "line.22": {
            "text": "da."
        },
        "line.23": {
            "text": "Ein mandelgroßer Zellhaufen,"
        },
        "line.24": {
            "text": "der mir in die Augen schaute, mich"
        },
        "line.25": {
            "text": "in die Arme nahm. Nach der Ankunft im Hafen"
        },
        "line.26": {
            "text": "blieb er im Schiff."
        },
        "line.27": {
            "text": "Winzige Flüssigkeitsbrücken"
        },
        "line.28": {
            "text": "zwischen den Körnern des Sandes."
        },
        "line.29": {
            "text": "Weiß wie Gespenster Korallen."
        },
        "line.30": {
            "text": "Große Schanker am Pol."
        },
        "line.31": {
            "text": "Zurück aufs Schiff, hörte ich,"
        },
        "line.32": {
            "text": "von weit draußen her, das Heulen der See,"
        },
        "line.33": {
            "text": "das Verwandeln nackter Materie."
        },
        "line.34": {
            "text": "Die Toten sind da, hocken in Flusen="
        },
        "line.35": {
            "text": "ecken, im Ausguß, im Abrieb"
        },
        "line.36": {
            "text": "der Wanne, Waschpulver, Suppenrest, die Toten"
        },
        "line.37": {
            "text": "sind da, blicken durch dich hindurch, für sie"
        },
        "line.38": {
            "text": "bist du kein anderer"
        },
        "line.39": {
            "text": "als sie, warte nur. Mit der Blutung"
        },
        "line.40": {
            "text": "stößt der süße Körper der Frau"
        },
        "line.41": {
            "text": "die Reste des Herakles ab, so, als schliefe"
        },
        "line.42": {
            "text": "etwas unter der schwerflüssigen Fläche, das nicht"
        },
        "line.43": {
            "text": "geweckt werden wollte, inmitten von Wesen,"
        },
        "line.44": {
            "text": "für die niemand zählt."
        },
        "line.45": {
            "text": "Bett, Zigarette, Schuhputzzeug,"
        },
        "line.46": {
            "text": "Frischhaltebeutel, Lottoschein,"
        },
        "line.47": {
            "text": "Rasierwasser, Bürste, Vitamintablette:"
        },
        "line.48": {
            "text": "das Alter"
        },
        "line.49": {
            "text": "entbindet"
        },
        "line.50": {
            "text": "mit vielen Nachgeburten."
        },
        "line.51": {
            "text": "Der Albatros auf dem Bug"
        },
        "line.52": {
            "text": "scheint ein verirrter Geist. Deine Stimme"
        },
        "line.53": {
            "text": "noch in meinem Ohr."
        },
        "line.54": {
            "text": "Wie lange soll man sich erinnern?"
        },
        "line.55": {
            "text": "Immer. Immer? Immer."
        }
    }
}