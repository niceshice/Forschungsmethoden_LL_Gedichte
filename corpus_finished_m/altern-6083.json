{
    "title": "altern-6083",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Plötzlich habe ich schlaffe Haut"
        },
        "line.2": {
            "text": "und Haar in Eselsfarben,"
        },
        "line.3": {
            "text": "höre so wenig fast wie ein Stein,"
        },
        "line.4": {
            "text": "rufe den Pfosten wie einen Sohn,"
        },
        "line.5": {
            "text": "mein Verstand"
        },
        "line.6": {
            "text": "zerfällt."
        },
        "line.7": {
            "text": "Ich greife"
        },
        "line.8": {
            "text": "nach Sonnenstrahlen,"
        },
        "line.9": {
            "text": "die wie Stäbe durchs Märzfenster ziehn,"
        },
        "line.10": {
            "text": "mich zu stützen,"
        },
        "line.11": {
            "text": "und Feuer will ich haben"
        },
        "line.12": {
            "text": "stets wie eine wärmende Frau"
        },
        "line.13": {
            "text": "um meine Glieder."
        },
        "line.14": {
            "text": "Ich biete Gruß dem Raben"
        },
        "line.15": {
            "text": "als Totenvogel."
        },
        "line.16": {
            "text": "Zimtkuchen"
        },
        "line.17": {
            "text": "schmeckt mir im Mund wie Heu."
        },
        "line.18": {
            "text": "Der Mond wird mir ein Tor"
        },
        "line.19": {
            "text": "um hindurchzugehn, durch das bleiche,"
        },
        "line.20": {
            "text": "aus der Welt"
        },
        "line.21": {
            "text": "ohne Pein im Schlaf."
        }
    }
}