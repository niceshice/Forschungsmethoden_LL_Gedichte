{
    "title": "wer-immer-du-bist-902",
    "gender": "m",
    "author": "Jürgen Theobaldy",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Nicht immer sehe ich dich"
        },
        "line.2": {
            "text": "mit meinen Augen, ich sehe dich auch"
        },
        "line.3": {
            "text": "mit deinen Augen, Bild um Bild"
        },
        "line.4": {
            "text": "kreiselt im Stau vor der Netzhaut."
        },
        "line.5": {
            "text": "Der Erklärungen sind so manche"
        },
        "line.6": {
            "text": "und ähneln einander doch, Schatten,"
        },
        "line.7": {
            "text": "fließend, über Blätter."
        },
        "line.8": {
            "text": "Aber wenn ich das Bild nicht weiß,"
        },
        "line.9": {
            "text": "dann sehe ich es doch,"
        },
        "line.10": {
            "text": "mit meinen sogenannten eigenen Augen,"
        },
        "line.11": {
            "text": "die eben sehen, wie die Wolken"
        },
        "line.12": {
            "text": "über Gipfeln dort der Alpen"
        },
        "line.13": {
            "text": "aus Vulkanen aus Schnee hervorgehen."
        },
        "line.14": {
            "text": "Unter ihnen warst du daheim"
        },
        "line.15": {
            "text": "und bist es wieder."
        },
        "line.16": {
            "text": "Du brauchst nun keinen mehr,"
        },
        "line.17": {
            "text": "der dich mit deinen Augen sieht,"
        },
        "line.18": {
            "text": "und doch ist nicht umsonst,"
        },
        "line.19": {
            "text": "was sich daraus ergibt, es ist,"
        },
        "line.20": {
            "text": "nun eben, wie man sagt, man atmet,"
        },
        "line.21": {
            "text": "und auf einmal hälst du inne."
        },
        "line.22": {
            "text": "Komm in deinem schönen Kleid."
        },
        "line.23": {
            "text": "Schau dich um."
        },
        "line.24": {
            "text": "Sag mir, wen du siehst."
        },
        "line.25": {
            "text": "Wer immer wir sind,"
        },
        "line.26": {
            "text": "wir sind es nicht immer."
        }
    }
}