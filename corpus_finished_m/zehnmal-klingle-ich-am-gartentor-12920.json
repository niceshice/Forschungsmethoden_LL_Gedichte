{
    "title": "zehnmal-klingle-ich-am-gartentor-12920",
    "gender": "m",
    "author": "Christian  Filips",
    "author_birth": "1981",
    "poem": {
        "line.1": {
            "text": "und höre es klingeln von oben,"
        },
        "line.2": {
            "text": "zehnmal: Vater!"
        },
        "line.3": {
            "text": "Vater?"
        },
        "line.4": {
            "text": "Steht er hinterm Zaun, hinterm Fenster,"
        },
        "line.5": {
            "text": "hinter der Gardine, der vergilbten,"
        },
        "line.6": {
            "text": "auf Zehenspitzen? Sieht hinaus"
        },
        "line.7": {
            "text": "und durch mich durch nichts als sich selbst"
        },
        "line.8": {
            "text": "wie ich auch ihn ja nur durch mich"
        },
        "line.9": {
            "text": "Gilb : die Gardine sehe"
        },
        "line.10": {
            "text": "als Fenster, Zaun, Spiegel der Luft"
        },
        "line.11": {
            "text": "(Fata) Zigarette links, die Rechte"
        },
        "line.12": {
            "text": "rafft den Vorhang, jetzt winkt sie"
        },
        "line.13": {
            "text": "- He Papa aus der Batschka! - wischend mich"
        },
        "line.14": {
            "text": "weg ... Ja, hat er denn wirklich gewunken?"
        },
        "line.15": {
            "text": "Der Vorhang senkt sich ... Weg! Weg!"
        },
        "line.16": {
            "text": "Vielleicht war er betrunken? Vielleicht"
        },
        "line.17": {
            "text": "kommt er gleich runter? Drohendes"
        },
        "line.18": {
            "text": "Droben,"
        },
        "line.19": {
            "text": "zerstieben, zerstoben"
        },
        "line.20": {
            "text": "...."
        },
        "line.21": {
            "text": "Nein, runter kann der von da oben"
        },
        "line.22": {
            "text": "nicht kommen, solange er der"
        },
        "line.23": {
            "text": "von"
        },
        "line.24": {
            "text": "da droben"
        },
        "line.25": {
            "text": "noch bleibt. Viel zu hoch"
        },
        "line.26": {
            "text": "für ihn, für mich, von hier aus"
        },
        "line.27": {
            "text": "vorm Fenster, vorm Zaun aus gesehn:"
        },
        "line.28": {
            "text": "Immerhin! Vater mal Zehn."
        },
        "line.29": {
            "text": "Von hier unten bin ich fremd vielleicht"
        },
        "line.30": {
            "text": "ihm wie eine seine Scham"
        },
        "line.31": {
            "text": "(Gogols Streetview)"
        },
        "line.32": {
            "text": "beäugende Drohne."
        }
    }
}