{
    "title": "botschaften-des-regens-3812",
    "gender": "m",
    "author": "Günter Eich",
    "author_birth": "1907",
    "poem": {
        "line.1": {
            "text": "Nachrichten, die für mich bestimmt sind,"
        },
        "line.2": {
            "text": "weitergetrommelt von Regen zu Regen,"
        },
        "line.3": {
            "text": "von Schiefer- zu Ziegeldach,"
        },
        "line.4": {
            "text": "eingeschleppt wie eine Krankheit,"
        },
        "line.5": {
            "text": "Schmuggelgut, dem überbracht,"
        },
        "line.6": {
            "text": "der es nicht haben will"
        },
        "line.7": {
            "text": "Jenseits der Wand schallt das Fensterblech,"
        },
        "line.8": {
            "text": "rasselnde Buchstaben, die sich zusammenfügen,"
        },
        "line.9": {
            "text": "und der Regen redet"
        },
        "line.10": {
            "text": "in der Sprache, von welcher ich glaubte,"
        },
        "line.11": {
            "text": "niemand kenne sie außer mir"
        },
        "line.12": {
            "text": "Bestürzt vernehme ich"
        },
        "line.13": {
            "text": "die Botschaften der Verzweiflung,"
        },
        "line.14": {
            "text": "die Botschaften der Armut"
        },
        "line.15": {
            "text": "und die Botschaften des Vorwurfs."
        },
        "line.16": {
            "text": "Es kränkt mich, daß sie an mich gerichtet sind,"
        },
        "line.17": {
            "text": "denn ich fühle mich ohne Schuld."
        },
        "line.18": {
            "text": "Ich spreche es laut aus,"
        },
        "line.19": {
            "text": "daß ich den Regen nicht fürchte und seine Anklagen"
        },
        "line.20": {
            "text": "und den nicht, der sie mir zuschickte,"
        },
        "line.21": {
            "text": "daß ich zu guter Stunde"
        },
        "line.22": {
            "text": "hinausgehen und ihm antworten will."
        }
    }
}