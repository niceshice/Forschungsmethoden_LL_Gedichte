{
    "title": "vom-richtigen-gebrauch-der-zeit-11679",
    "gender": "m",
    "author": "Franz Hohler",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Ich habe dich"
        },
        "line.2": {
            "text": "heute morgen"
        },
        "line.3": {
            "text": "nicht zum Bahnhof begleitet"
        },
        "line.4": {
            "text": "ich hatte soviel zu tun"
        },
        "line.5": {
            "text": "und brauchte sie dringend"
        },
        "line.6": {
            "text": "die halbe Stunde."
        },
        "line.7": {
            "text": "Doch kaum warst du weg"
        },
        "line.8": {
            "text": "sass ich da"
        },
        "line.9": {
            "text": "und war"
        },
        "line.10": {
            "text": "eine ganze Stunde lang traurig."
        }
    }
}