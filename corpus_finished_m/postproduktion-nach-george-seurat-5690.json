{
    "title": "postproduktion-nach-george-seurat-5690",
    "gender": "m",
    "author": "Thien Tran",
    "author_birth": "1979",
    "poem": {
        "line.1": {
            "text": "Realismus"
        },
        "line.2": {
            "text": "in Dolby Soround"
        },
        "line.3": {
            "text": "man vermied die Fehler der Verfremdung"
        },
        "line.4": {
            "text": "auch bei den Nachwuchsregisseuren"
        },
        "line.5": {
            "text": "modernste Digital Technik. wir applaudierten"
        },
        "line.6": {
            "text": "nicht ohne Grund"
        },
        "line.7": {
            "text": "eine unabhänige Jury. die Bourgoisie"
        },
        "line.8": {
            "text": "nominierte diesen Kanditaten. die Sonntage nun schon"
        },
        "line.9": {
            "text": "zum dritten Mal ausgezeichnet"
        },
        "line.10": {
            "text": "für die beste Kamera. reine Bildfolgen"
        },
        "line.11": {
            "text": "des Unspektakulären"
        },
        "line.12": {
            "text": "rasche Handfolgen eingeübter Rituale"
        },
        "line.13": {
            "text": "man pumpte eine Unsumme an Geld in den Nachbau"
        },
        "line.14": {
            "text": "der Gewässer. wie jeden Morgen"
        },
        "line.15": {
            "text": "vorwiegend Sätze und Reden in Sachen"
        },
        "line.16": {
            "text": "Mensch-sein"
        },
        "line.17": {
            "text": "bei der Preisvergabe dann"
        },
        "line.18": {
            "text": "dieses Blitzgewitter der Fotografen. man posierte"
        },
        "line.19": {
            "text": "im Rampenlicht: ausnahmslos Demokraten"
        },
        "line.20": {
            "text": "die über den roten Teppich"
        },
        "line.21": {
            "text": "marschierten."
        }
    }
}