{
    "title": "tage-mit-haehern-3818",
    "gender": "m",
    "author": "Günter Eich",
    "author_birth": "1907",
    "poem": {
        "line.1": {
            "text": "Der Häher wirft mir"
        },
        "line.2": {
            "text": "die blaue Feder nicht zu."
        },
        "line.3": {
            "text": "In die Morgendämmerung kollern"
        },
        "line.4": {
            "text": "die Eicheln seiner Schreie."
        },
        "line.5": {
            "text": "Ein bitteres Mehl, die Speise"
        },
        "line.6": {
            "text": "des ganzen Tags."
        },
        "line.7": {
            "text": "Hinter dem roten Laub"
        },
        "line.8": {
            "text": "hackt er mit hartem Schnabel"
        },
        "line.9": {
            "text": "tagsüber die Nacht"
        },
        "line.10": {
            "text": "aus Ästen und Baumfrüchten,"
        },
        "line.11": {
            "text": "ein Tuch, das er über mich zieht."
        },
        "line.12": {
            "text": "Sein Flug gleicht dem Herzschlag."
        },
        "line.13": {
            "text": "Wo schläft er aber"
        },
        "line.14": {
            "text": "und wem gleicht sein Schlaf?"
        },
        "line.15": {
            "text": "Ungesehen liegt in der Finsternis"
        },
        "line.16": {
            "text": "die Feder vor meinem Schuh."
        }
    }
}