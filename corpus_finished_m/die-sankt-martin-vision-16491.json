{
    "title": "die-sankt-martin-vision-16491",
    "gender": "m",
    "author": "Dominik Dombrowski",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "Auf dem Rückweg von der Tankstelle gerate ich plötzlich"
        },
        "line.2": {
            "text": "mitten in einen Martinszug"
        },
        "line.3": {
            "text": "Es ist ein schwüler Novemberabend"
        },
        "line.4": {
            "text": "etwa fünfundzwanzig Grad"
        },
        "line.5": {
            "text": "Nun ist es endlich dunkel sagen die Daddys"
        },
        "line.6": {
            "text": "/"
        },
        "line.7": {
            "text": "dunkel aber laut ist es auch"
        },
        "line.8": {
            "text": "und im Vorgarten neben den lichtgesicherten"
        },
        "line.9": {
            "text": "Baustellen habe ich plötzlich die Vision"
        },
        "line.10": {
            "text": "wie ich zu einem der Daddys werde"
        },
        "line.11": {
            "text": "Ich sehe mich wie ich mich"
        },
        "line.12": {
            "text": "zu meinem imaginären Sohn hinunterbeuge"
        },
        "line.13": {
            "text": "im Partnerlook unserer Verkehrssicherheitswesten"
        },
        "line.14": {
            "text": "im Rauschen der Rush-Hour sagt er"
        },
        "line.15": {
            "text": "jetzt geht es endlich"
        },
        "line.16": {
            "text": "weiter"
        },
        "line.17": {
            "text": "/ und weiter Daddy"
        },
        "line.18": {
            "text": "Sei"
        },
        "line.19": {
            "text": "bloß"
        },
        "line.20": {
            "text": "vorsichtig kleiner Mann"
        },
        "line.21": {
            "text": "gehe immer nur bei grün über die Ampel"
        },
        "line.22": {
            "text": "und behalte deinen Text bei"
        },
        "line.23": {
            "text": "Da oben leuchten die Sterne"
        },
        "line.24": {
            "text": "hier unten leuchten wir"
        },
        "line.25": {
            "text": "dann zupft er an einer Plastiktüte"
        },
        "line.26": {
            "text": "die die Laterne umhüllt"
        },
        "line.27": {
            "text": "in der ein dürres LED-Licht glimmt"
        },
        "line.28": {
            "text": "Ich möchte gern wissen was in meinem Kopf vorgeht"
        },
        "line.29": {
            "text": "ich beobachte mich dabei"
        },
        "line.30": {
            "text": "wie ich für einen Moment an einer nassen"
        },
        "line.31": {
            "text": "Treppe auf meine Schuhe starre"
        },
        "line.32": {
            "text": "hinter mir die Kolonne der Scheinwerfer"
        },
        "line.33": {
            "text": "der Autos die Ungeduld der Fahrer"
        },
        "line.34": {
            "text": "vor der Ampel sehe ich meinen imaginären kleinen Jungen"
        },
        "line.35": {
            "text": "in der Erwartung des Festes zwischen den Baustellen"
        },
        "line.36": {
            "text": "für eine kurze Zeit / befällt mich vielleicht doch"
        },
        "line.37": {
            "text": "eine Ahnung ob der Trostlosigkeit"
        },
        "line.38": {
            "text": "dieser Veranstaltung doch im nächsten"
        },
        "line.39": {
            "text": "Moment verbiete ich mir all das"
        },
        "line.40": {
            "text": "zu Ende zu denken am Zebrastreifen mit dem Sohn"
        },
        "line.41": {
            "text": "an der Hand / der zu mir aufsieht"
        },
        "line.42": {
            "text": "und vielleicht auch ahnt was es bedeutet"
        },
        "line.43": {
            "text": "dass dieser große bemühte Mann"
        },
        "line.44": {
            "text": "der ich bin ihn begleitet"
        },
        "line.45": {
            "text": "durch all diese Idiotie und dann"
        },
        "line.46": {
            "text": "hängt plötzlich der Kopf vom Daddy"
        },
        "line.47": {
            "text": "am Laternenstab und spricht"
        },
        "line.48": {
            "text": "hast du denn auch dein Lied gelernt"
        },
        "line.49": {
            "text": "Und an der Hand staunt"
        },
        "line.50": {
            "text": "der zu mir aufblickende Sohn"
        },
        "line.51": {
            "text": "in ein langsam verglühendes LED-Licht"
        },
        "line.52": {
            "text": "und rennt mit dem Vaterkopf"
        },
        "line.53": {
            "text": "am Stab in meine Firma"
        },
        "line.54": {
            "text": "als wäre dies ein möglicher Ausweg"
        },
        "line.55": {
            "text": "und ich der Vaterkopf singe"
        },
        "line.56": {
            "text": "als ich mein Büro erkenne immerzu"
        },
        "line.57": {
            "text": "Strawberry fields forever"
        },
        "line.58": {
            "text": "/"
        },
        "line.59": {
            "text": "Strawberry"
        },
        "line.60": {
            "text": "fields forever"
        },
        "line.61": {
            "text": "Und wippe am Stab und das Büro gleicht einem Glaskasten"
        },
        "line.62": {
            "text": "und drum herum drehen die Gabelstapler"
        },
        "line.63": {
            "text": "ihre Kreise immer mehr Gabelstapler"
        },
        "line.64": {
            "text": "drehen Kreise Hunderte von Kreisen"
        },
        "line.65": {
            "text": "und die Gabeln fahren hoch und runter"
        },
        "line.66": {
            "text": "an den Staplern wie Gabeln an Gabelstaplern"
        },
        "line.67": {
            "text": "und dann ist alles verstopft"
        },
        "line.68": {
            "text": "von Gabelstaplern und überall blinken"
        },
        "line.69": {
            "text": "und tönen Martinshörner auf"
        },
        "line.70": {
            "text": "und all die Gabelstaplerfahrer"
        },
        "line.71": {
            "text": "stehen plötzlich auf"
        },
        "line.72": {
            "text": "und nehmen ihre Baseballkappen ab"
        },
        "line.73": {
            "text": "und sie formieren sich zu einem Chor"
        },
        "line.74": {
            "text": "und singen das Laternenlied"
        },
        "line.75": {
            "text": "und ich im Glaskasten singe"
        },
        "line.76": {
            "text": "Strawberry fields forever"
        },
        "line.77": {
            "text": "Und mein Gedächtnissohn sieht hinten an der Laderampe plötzlich"
        },
        "line.78": {
            "text": "ein Wichtelmädchen kommen"
        },
        "line.79": {
            "text": "dann noch eins und dann"
        },
        "line.80": {
            "text": "immer mehr dieser Wichtelmädchen"
        },
        "line.81": {
            "text": "wie sie beginnen mithilfe krebs-"
        },
        "line.82": {
            "text": "erregender Pasten alles"
        },
        "line.83": {
            "text": "mit Pieter-Breughel-Geschenkpapier"
        },
        "line.84": {
            "text": "unter sich zu begraben"
        }
    }
}