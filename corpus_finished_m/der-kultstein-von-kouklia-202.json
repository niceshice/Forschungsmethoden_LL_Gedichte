{
    "title": "der-kultstein-von-kouklia-202",
    "gender": "m",
    "author": "Joachim Sartorius",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Es ist ein Meteorit."
        },
        "line.2": {
            "text": "Ein Steinbrocken, dessen Feuer"
        },
        "line.3": {
            "text": "beim Aufprall erlosch. Die dünne"
        },
        "line.4": {
            "text": "gläserne Schmelzrinde erinnert"
        },
        "line.5": {
            "text": "an dieses Zusammentreffen"
        },
        "line.6": {
            "text": "von Himmel und Erde, sie"
        },
        "line.7": {
            "text": "zieht die Suchenden an."
        },
        "line.8": {
            "text": "Er ist unansehnlich, graugrün"
        },
        "line.9": {
            "text": "statt schwarz, die Kegelform"
        },
        "line.10": {
            "text": "nicht regelmäßig, ein Idol,"
        },
        "line.11": {
            "text": "das keinen Reim gibt"
        },
        "line.12": {
            "text": "auf die schöngestaltige"
        },
        "line.13": {
            "text": "Schaumgeborene. Es wird"
        },
        "line.14": {
            "text": "das Geheimnis der Wallfahrt"
        },
        "line.15": {
            "text": "sein."
        },
        "line.16": {
            "text": "Die hohen, sich selbst tragenden"
        },
        "line.17": {
            "text": "Säulen, gekrönt vom Doppelhorn,"
        },
        "line.18": {
            "text": "sind auf Münzen zu sehen."
        },
        "line.19": {
            "text": "Das reine Feuer, das zum Himmel"
        },
        "line.20": {
            "text": "stieg, müssen wir uns denken."
        },
        "line.21": {
            "text": "Wir wandern um den Glassturz."
        },
        "line.22": {
            "text": "Vor dem Museum donnern Lastwagen,"
        },
        "line.23": {
            "text": "beladen mit antikem Marmor,"
        },
        "line.24": {
            "text": "über die Straßen der Erinnerung."
        },
        "line.25": {
            "text": "Der Stein kann nicht berührt,"
        },
        "line.26": {
            "text": "nicht geküßt werden."
        }
    }
}