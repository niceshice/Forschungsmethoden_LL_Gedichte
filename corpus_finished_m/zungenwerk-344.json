{
    "title": "zungenwerk-344",
    "gender": "m",
    "author": "Hans Magnus Enzensberger",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Dein seltsamer, stockender Singsang,"
        },
        "line.2": {
            "text": "jahrzehntelang fortgesetzt,"
        },
        "line.3": {
            "text": "und der Singsang des Andern"
        },
        "line.4": {
            "text": "Flüstern, Summen, Keuchen, Stammeln"
        },
        "line.5": {
            "text": "wirre Wirbelstürme im Luftmeer:"
        },
        "line.6": {
            "text": "Der gewandteste unter den Muskeln,"
        },
        "line.7": {
            "text": "die Zunge allein  denke dir"
        },
        "line.8": {
            "text": "eine einsame Zunge,"
        },
        "line.9": {
            "text": "die sich vor dir auf dem Teller windet ,"
        },
        "line.10": {
            "text": "die Zunge allein tut es nicht."
        },
        "line.11": {
            "text": "Seufzen, Murmeln, Schreien und Radebrechen"
        },
        "line.12": {
            "text": "Qui la sua voce soave, Zu Befehl,"
        },
        "line.13": {
            "text": "London Interbank Offered Rate,"
        },
        "line.14": {
            "text": "oder Verwickelteres"
        },
        "line.15": {
            "text": "wie Koran oder Kosmologie:"
        },
        "line.16": {
            "text": "Da geht es nicht ab ohne Blasebalg,"
        },
        "line.17": {
            "text": "Ansatzrohr, Resonanzhöhlen;"
        },
        "line.18": {
            "text": "da werden Knorpel gedreht, gekippt;"
        },
        "line.19": {
            "text": "Deckel heben und senken,"
        },
        "line.20": {
            "text": "Öffner und Schließer"
        },
        "line.21": {
            "text": "spannen sich und erschlaffen,"
        },
        "line.22": {
            "text": "Fasern, Membranen werden erregt,"
        },
        "line.23": {
            "text": "immer so fort, innen,"
        },
        "line.24": {
            "text": "im Andern, arbeitet es,"
        },
        "line.25": {
            "text": "es arbeitet, innen, in dir:"
        },
        "line.26": {
            "text": "eine Polsterpfeife, ein Zungenwerk,"
        },
        "line.27": {
            "text": "unberechenbar, schwer verständlich,"
        },
        "line.28": {
            "text": "ein chaotischer Oszillator,"
        },
        "line.29": {
            "text": "immer so fort, bis ihr versteht,"
        },
        "line.30": {
            "text": "oder bis euch die Luft ausgeht."
        }
    }
}