{
    "title": "saemtliches-767",
    "gender": "m",
    "author": "Mirko Bonné",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Strikte Eklipsen, Finsternisskripte"
        },
        "line.2": {
            "text": "Dunklem verschrieben oder einmal"
        },
        "line.3": {
            "text": "gezielt mit erhabenem Impetus"
        },
        "line.4": {
            "text": "alles zuscheißen. Schau, Herbst"
        },
        "line.5": {
            "text": "und Sommer schießen in die Waage,"
        },
        "line.6": {
            "text": "an jedem Morgen und Himmel beginnts"
        },
        "line.7": {
            "text": "mit Greisen, gelbem Laub und nichts"
        },
        "line.8": {
            "text": "als Gefühl für den Aufstand. Ich bin da,"
        },
        "line.9": {
            "text": "und das gefällt. Andocken an Mittags"
        },
        "line.10": {
            "text": "Täuschungsmanövern und Kiefern der"
        },
        "line.11": {
            "text": "Leute, die mahlend lächelnd dastehen,"
        },
        "line.12": {
            "text": "ein Wort verlieren über Gewohnheiten"
        },
        "line.13": {
            "text": "mit Tieren, ohne sie - o du erahnest ja"
        },
        "line.14": {
            "text": "Sämtliches in den Solchenmomenten,"
        },
        "line.15": {
            "text": "aber Dieses nur weißt du: Dass alles,"
        },
        "line.16": {
            "text": "was einfällt ins Licht und Gedächtnis,"
        },
        "line.17": {
            "text": "die strikte Eklipse verhindert. Ausfall"
        },
        "line.18": {
            "text": "funktionierender Sozialisation, Schritte,"
        },
        "line.19": {
            "text": "Mauern, Brückenbogen, schon kleine"
        },
        "line.20": {
            "text": "orangerote Säuberungsmaschine"
        },
        "line.21": {
            "text": "des Stadtwerks, die langsam wird."
        }
    }
}