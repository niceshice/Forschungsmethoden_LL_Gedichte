{
    "title": "der-wortgewandte-elefant-649",
    "gender": "m",
    "author": "Martin Auer",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "Als die Elefanten"
        },
        "line.2": {
            "text": "sich einmal verrannten"
        },
        "line.3": {
            "text": "und in Zorn entbrannten"
        },
        "line.4": {
            "text": "gegen ihre Verwandten;"
        },
        "line.5": {
            "text": "als sie Onkel und Tanten"
        },
        "line.6": {
            "text": "vor Wut nicht mehr kannten,"
        },
        "line.7": {
            "text": "sie Verräter nannten"
        },
        "line.8": {
            "text": "und Intriganten;"
        },
        "line.9": {
            "text": "als die Elefanten"
        },
        "line.10": {
            "text": "Kriegserklärungen sandten,"
        },
        "line.11": {
            "text": "Kommandanten ernannten"
        },
        "line.12": {
            "text": "und Adjutanten,"
        },
        "line.13": {
            "text": "die den Angriff planten;"
        },
        "line.14": {
            "text": "als sie ihre Verwandten"
        },
        "line.15": {
            "text": "aus dem Lande verbannten,"
        },
        "line.16": {
            "text": "ihre Fahne verbrannten,"
        },
        "line.17": {
            "text": "ihre Häuser umrannten -"
        },
        "line.18": {
            "text": "da sagte einer"
        },
        "line.19": {
            "text": "(und zwar ein kleiner"
        },
        "line.20": {
            "text": "mit Namen Heiner):"
        },
        "line.21": {
            "text": "\"He, ich find das nicht fein"
        },
        "line.22": {
            "text": "sondern ziemlich gemein"
        },
        "line.23": {
            "text": "und fies obendrein!\""
        },
        "line.24": {
            "text": "Die andern sagten:"
        },
        "line.25": {
            "text": "\"Was soll das sein?"
        },
        "line.26": {
            "text": "Du bist viel zu klein"
        },
        "line.27": {
            "text": "um so rumzuschrei'n,"
        },
        "line.28": {
            "text": "lass die Kinderei'n"
        },
        "line.29": {
            "text": "und misch dich nicht ein!\""
        },
        "line.30": {
            "text": "Doch der kleine"
        },
        "line.31": {
            "text": "sprach: \"Nein!"
        },
        "line.32": {
            "text": "Weil ich genauso sterben kann,"
        },
        "line.33": {
            "text": "geht mich der Krieg genauso an."
        },
        "line.34": {
            "text": "Ich brauch nicht die Häuser von meinen Kusinen"
        },
        "line.35": {
            "text": "ich will viel lieber spielen mit ihnen.\""
        },
        "line.36": {
            "text": "und er redete, bis die Elefanten"
        },
        "line.37": {
            "text": "sich wieder entspannten,"
        },
        "line.38": {
            "text": "ihren Fehler erkannten"
        },
        "line.39": {
            "text": "und ihren Verwandten"
        },
        "line.40": {
            "text": "mit charmanten"
        },
        "line.41": {
            "text": "und galanten"
        },
        "line.42": {
            "text": "Entschuldigungen Geschenke sandten"
        },
        "line.43": {
            "text": "die überreicht wurden von Musikanten"
        },
        "line.44": {
            "text": "und Komödianten;"
        },
        "line.45": {
            "text": "so dass Onkel und Tanten"
        },
        "line.46": {
            "text": "und alle Elefanten-"
        },
        "line.47": {
            "text": "Verwandten"
        },
        "line.48": {
            "text": "sich mit toleranten"
        },
        "line.49": {
            "text": "und kulanten"
        },
        "line.50": {
            "text": "Worten zum Frieden bekannten,"
        },
        "line.51": {
            "text": "ihre Waffen verbrannten"
        },
        "line.52": {
            "text": "und sich ab nun nur mehr amüsanten"
        },
        "line.53": {
            "text": "und eleganten"
        },
        "line.54": {
            "text": "Tätigkeiten zuwandten."
        },
        "line.55": {
            "text": "Und natürlich kamen alle als Gratulanten"
        },
        "line.56": {
            "text": "zu dem kleinsten der Elefanten,"
        },
        "line.57": {
            "text": "den sie ihren furchtlosen Retter nannten."
        },
        "line.58": {
            "text": "Sagt ihr, solche Sachen sind nur zum Lachen,"
        },
        "line.59": {
            "text": "es hört doch eh keiner auf die Schwachen?"
        },
        "line.60": {
            "text": "Vielleicht."
        },
        "line.61": {
            "text": "Aber einer muss doch den Anfang machen?"
        }
    }
}