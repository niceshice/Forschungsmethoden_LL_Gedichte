{
    "title": "verwundeter-schwefelbergarbeiter-12624",
    "gender": "m",
    "author": "Ulrich Zieger",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "was geschah mit renato guttuso,"
        },
        "line.2": {
            "text": "über den in den fünfziger jahren john berger"
        },
        "line.3": {
            "text": "eine monographie verfaßte,"
        },
        "line.4": {
            "text": "wie war sein verhältnis zu dem völlig überdrehten"
        },
        "line.5": {
            "text": "pier paolo pasolini, der womöglich annahm, daß auf ihn"
        },
        "line.6": {
            "text": "nichts folgen würde,"
        },
        "line.7": {
            "text": "ähnliches glaubte schon brecht"
        },
        "line.8": {
            "text": "das sind bewundernswerte, ziemlich dumme menschen,"
        },
        "line.9": {
            "text": "mindestens im lebensklugen sinne,"
        },
        "line.10": {
            "text": "was man von guiseppe ungaretti nicht behaupten kann,"
        },
        "line.11": {
            "text": "der gegen leopardis schlangenhaut kaum mehr als ein indischer"
        },
        "line.12": {
            "text": "grieche gewesen sein dürfte,"
        },
        "line.13": {
            "text": "der leeren bezifferten räumen"
        },
        "line.14": {
            "text": "die einfachen formeln des gestischen sprechens"
        },
        "line.15": {
            "text": "entgegenhielt,"
        },
        "line.16": {
            "text": "manche redeten, andere dachten"
        },
        "line.17": {
            "text": "und manche empfanden daran etwas falsches"
        },
        "line.18": {
            "text": "was geschah mit renato guttuso,"
        },
        "line.19": {
            "text": "der gar nicht geredet und wenig gedacht,"
        },
        "line.20": {
            "text": "der das alles gemalt hat."
        }
    }
}