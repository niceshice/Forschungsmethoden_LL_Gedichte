{
    "title": "bewegung-6087",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Bewegung auf dem Fußballfeld"
        },
        "line.2": {
            "text": "rät mir mancher an."
        },
        "line.3": {
            "text": "Sportbeine, schnelle,"
        },
        "line.4": {
            "text": "soll ich mit dem Ball im Spiel"
        },
        "line.5": {
            "text": "beim Kampf mit flinken Männern regen."
        },
        "line.6": {
            "text": "O Elend, wie das Alter meine Kniee krampft"
        },
        "line.7": {
            "text": "und in meine Schultern drückende Gewichte"
        },
        "line.8": {
            "text": "mit Hohn gelegt hat, daß ich schleiche."
        },
        "line.9": {
            "text": "Doch gern den Treppenweg, umhegt von Büschen,"
        },
        "line.10": {
            "text": "doch gern den Bach entlang,"
        },
        "line.11": {
            "text": "doch gern die Brücke hin"
        },
        "line.12": {
            "text": "und langsam wie ein Schatten"
        },
        "line.13": {
            "text": "gehe ich und bin zufrieden"
        },
        "line.14": {
            "text": "mit Langsamkeiten"
        },
        "line.15": {
            "text": "und hege keinen Neid,"
        },
        "line.16": {
            "text": "wenn ich den Sportsmann sehe"
        },
        "line.17": {
            "text": "in Eile wie ein Wind."
        }
    }
}