{
    "title": "die-einschiffung-nach-kythera-1-8232",
    "gender": "m",
    "author": "Michael Speier",
    "author_birth": "1950",
    "poem": {
        "line.1": {
            "text": "nur einen gönner"
        },
        "line.2": {
            "text": "für diesen gewaltigen sommer -"
        },
        "line.3": {
            "text": "an dessen ende wir stehn"
        },
        "line.4": {
            "text": "um auf die see zu blicken"
        },
        "line.5": {
            "text": "die lichte unruhe kräuselt"
        },
        "line.6": {
            "text": "uns aber kränkt kein bewölktsein"
        },
        "line.7": {
            "text": "(im sinne von verrauscht)"
        },
        "line.8": {
            "text": "wir leben in ausgeleuchteten räumen"
        },
        "line.9": {
            "text": "aus landschaft, die macchia polstert die hänge"
        },
        "line.10": {
            "text": "rasen mit frischem fassonschnitt"
        },
        "line.11": {
            "text": "die halme gezupft mit der zuckerzange"
        },
        "line.12": {
            "text": "hier nun die frage was willst du betonen"
        },
        "line.13": {
            "text": "wenn die terrassen unterm sternbild"
        },
        "line.14": {
            "text": "des kleeblatts dahinziehn"
        },
        "line.15": {
            "text": "und unser leben sei wie wir es uns denken"
        },
        "line.16": {
            "text": "einer sagt human flourishing"
        },
        "line.17": {
            "text": "ein andrer oxytocin manche"
        },
        "line.18": {
            "text": "liegen auf sofas hören musik"
        },
        "line.19": {
            "text": "singen verstreute bücher papiere"
        },
        "line.20": {
            "text": "jemand trinkt wein"
        },
        "line.21": {
            "text": "bald aber müssen wir reisen"
        },
        "line.22": {
            "text": "versorgt mit italienischen brocken die man uns"
        },
        "line.23": {
            "text": "(den hyperboräischen hunden) hinwirft"
        },
        "line.24": {
            "text": "während auf dem tisch der sprache"
        },
        "line.25": {
            "text": "die silbernen löffel ruhn"
        }
    }
}