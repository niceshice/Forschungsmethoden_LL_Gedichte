{
    "title": "tierische-freundschaften-1438",
    "gender": "m",
    "author": "Paul Maar",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Der Kater liebt die Katze sehr,"
        },
        "line.2": {
            "text": "sie ist ja seine Frau."
        },
        "line.3": {
            "text": "Die Katze mag den Kater auch"
        },
        "line.4": {
            "text": "und lockt ihn mit: Miau!"
        },
        "line.5": {
            "text": "Der Hundemann bellt: Wuff, wuff, wuff!,"
        },
        "line.6": {
            "text": "die Hundefrau sagt: Wau!"
        },
        "line.7": {
            "text": "Vielleicht ist es auch umgekehrt,"
        },
        "line.8": {
            "text": "das weiß man nie genau."
        },
        "line.9": {
            "text": "Der Frosch, der guckt die Fröschin an"
        },
        "line.10": {
            "text": "und zeigt, dass er sie mag."
        },
        "line.11": {
            "text": "Erst bläht er sich ganz mächtig auf"
        },
        "line.12": {
            "text": "und dann, dann sagt er Quaaak!"
        },
        "line.13": {
            "text": "Der Buchfink mag die Fledermaus"
        },
        "line.14": {
            "text": "und flüstert ihr ins Ohr:"
        },
        "line.15": {
            "text": "Hängdich doch bitte neben mich,"
        },
        "line.16": {
            "text": "dann les ich dir was vor!"
        },
        "line.17": {
            "text": "Wenn Igel und Frau Igelin"
        },
        "line.18": {
            "text": "vergnügt zusammensitzen,"
        },
        "line.19": {
            "text": "dann kitzelt sie ihn ganz, ganz sacht"
        },
        "line.20": {
            "text": "mit ihren Stachelspitzen."
        },
        "line.21": {
            "text": "Die Grille zirpt und will damit"
        },
        "line.22": {
            "text": "den Heuschreck zu sich locken."
        },
        "line.23": {
            "text": "Doch weil der Heuschreck schreckhaft ist,"
        },
        "line.24": {
            "text": "ist er nur ganz erschrocken."
        },
        "line.25": {
            "text": "Faultiermann und Faultierfrau,"
        },
        "line.26": {
            "text": "die sich im Urwald trafen,"
        },
        "line.27": {
            "text": "die blinzelten sich träge an,"
        },
        "line.28": {
            "text": "dann sind sie eingeschlafen."
        }
    }
}