{
    "title": "im-eilschritt-6387",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Manchmal"
        },
        "line.2": {
            "text": "kehrt die Jugendraserei"
        },
        "line.3": {
            "text": "in meinen Leib zurück."
        },
        "line.4": {
            "text": "Und Eilschritt, einen meisterhaften, habe ich die Treppe"
        },
        "line.5": {
            "text": "hinab in den Morgen."
        },
        "line.6": {
            "text": "In Art der Siebzehnjährigen"
        },
        "line.7": {
            "text": "stürm ich zur Kirche,"
        },
        "line.8": {
            "text": "zu sehn das Brautpaar,"
        },
        "line.9": {
            "text": "eh sein Glanz erlischt"
        },
        "line.10": {
            "text": "unterm Säulenpfeiler. Neugier treibt mich."
        },
        "line.11": {
            "text": "Zur guten Mahlzeit"
        },
        "line.12": {
            "text": "und einer Flasche Wein"
        },
        "line.13": {
            "text": "beweg ich mich schnell."
        },
        "line.14": {
            "text": "Zur Abreise an die Haltestelle"
        },
        "line.15": {
            "text": "lauf ich. Manchmal,"
        },
        "line.16": {
            "text": "manchmal ruft man mir Scherzworte zu."
        },
        "line.17": {
            "text": "Ob ich wieder jung geworden wäre,"
        },
        "line.18": {
            "text": "fragt man lächelnd."
        },
        "line.19": {
            "text": "Doch einen alten Narrn, den oft im Herzen"
        },
        "line.20": {
            "text": "Stiche peinigen,"
        },
        "line.21": {
            "text": "nenn ich mich; sie mahnen:"
        },
        "line.22": {
            "text": "Ruhendes Wasser"
        },
        "line.23": {
            "text": "sei dein Wesen!"
        },
        "line.24": {
            "text": "Gleichgültigkeit"
        },
        "line.25": {
            "text": "befähige dich,"
        },
        "line.26": {
            "text": "gesund,"
        },
        "line.27": {
            "text": "gemäßigt"
        },
        "line.28": {
            "text": "und gediegen hinzugehn,"
        },
        "line.29": {
            "text": "langsam wie die Frühlingswolke,"
        },
        "line.30": {
            "text": "die kein Wind bewegt."
        }
    }
}