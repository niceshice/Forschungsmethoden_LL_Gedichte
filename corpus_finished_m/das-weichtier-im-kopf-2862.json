{
    "title": "das-weichtier-im-kopf-2862",
    "gender": "m",
    "author": "Helwig  Brunner",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "Ein Anfang in d-Moll, so weit ist Verlass"
        },
        "line.2": {
            "text": "auf das Ohr im Ohr, tongenau im Traum"
        },
        "line.3": {
            "text": "erinnert der fiebrig hingestellte Beginn,"
        },
        "line.4": {
            "text": "der die Saiten unter die Finger spannt,"
        },
        "line.5": {
            "text": "die Mollterz, zeitversetzt eingerahmt"
        },
        "line.6": {
            "text": "von den Pfeilern einer blanken Quint,"
        },
        "line.7": {
            "text": "der Kammerton als Tabula rasa,"
        },
        "line.8": {
            "text": "die alles erträgt: jede folgende Idee,"
        },
        "line.9": {
            "text": "die sich nun aufspannt, weitet, schrägt,"
        },
        "line.10": {
            "text": "während der Mond nervös und kalt"
        },
        "line.11": {
            "text": "sein gerades Licht ins Fenster stellt,"
        },
        "line.12": {
            "text": "dem er alle Wärme ausgesaugt hat,"
        },
        "line.13": {
            "text": "bevor es auf die Erde niederklirrt"
        },
        "line.14": {
            "text": "und das Weichtier im Kopf erschüttert:"
        },
        "line.15": {
            "text": "die Schnecke in der Muschel, dünn"
        },
        "line.16": {
            "text": "und eingerollt wie ein Kinderfinger"
        },
        "line.17": {
            "text": "jenseits der obskuren Knöchelchen,"
        },
        "line.18": {
            "text": "die einst ein Fisch zum Kauen benützte,"
        },
        "line.19": {
            "text": "als alle Musik noch ferne Zukunft war,"
        },
        "line.20": {
            "text": "morgens der ungeteilten Gegenwart"
        },
        "line.21": {
            "text": "exponiert den Gehörsinn, Hören und Sinn"
        },
        "line.22": {
            "text": "jenseits verstörender Physiologie: fraglos"
        },
        "line.23": {
            "text": "den Intervallen ausgesetzt, dem prasselnden"
        },
        "line.24": {
            "text": "Feuerwerk schöner Besessenheit, besessen"
        },
        "line.25": {
            "text": "von Schönheit, Schaudern und Scheitern,"
        },
        "line.26": {
            "text": "faksimile dazu im Notenbild entziffert"
        },
        "line.27": {
            "text": "die freien Nervenenden eines Mannes,"
        },
        "line.28": {
            "text": "der sich an luzider Nüchternheit berauschte:"
        },
        "line.29": {
            "text": "zur Seite die kreiselnden Symmetrien,"
        },
        "line.30": {
            "text": "die dicht verfugten Dolden, Girlanden,"
        },
        "line.31": {
            "text": "perlenden Festlichkeiten, unwirsch zur Seite"
        },
        "line.32": {
            "text": "gelehnt, geschichtet, geschoben, gestürzt"
        },
        "line.33": {
            "text": "die Konturen, die aufgefächerten Metren,"
        },
        "line.34": {
            "text": "mit Fingernägeln bis aufs Blut geschabt"
        },
        "line.35": {
            "text": "an der gekalkten Außenwand der Kirche,"
        },
        "line.36": {
            "text": "bis etwas wegbricht: der rote Kalk,"
        },
        "line.37": {
            "text": "die Macht, die sich im Primklang trifft,"
        },
        "line.38": {
            "text": "der Zirkelschluss der eigenen Adern"
        }
    }
}