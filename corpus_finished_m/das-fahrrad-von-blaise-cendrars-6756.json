{
    "title": "das-fahrrad-von-blaise-cendrars-6756",
    "gender": "m",
    "author": "Jan Volker Röhnert",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "lag dort am Bahndamm"
        },
        "line.2": {
            "text": "auf dem überwachsenen Gleis"
        },
        "line.3": {
            "text": "aluminiumhell im Löwenzahn:"
        },
        "line.4": {
            "text": "das heißt nur"
        },
        "line.5": {
            "text": "noch das blanke Hinterrad ohne"
        },
        "line.6": {
            "text": "Mantel ohne Schlauch verbogen wie"
        },
        "line.7": {
            "text": "es sich für ein objet trouv gehört,"
        },
        "line.8": {
            "text": "das nicht in den Museen steht"
        },
        "line.9": {
            "text": "die andren Teile auf Bedarfsbahnhöfen"
        },
        "line.10": {
            "text": "der Dritten Welt verstreut,"
        },
        "line.11": {
            "text": "sein Besitzer unauffindbar"
        },
        "line.12": {
            "text": "eilt er den Ausgestiegenen voraus"
        },
        "line.13": {
            "text": "im Tropenhelm aus Schwanzfedern"
        },
        "line.14": {
            "text": "des Kolibri im Jackett Paris - Dakar,"
        },
        "line.15": {
            "text": "die Speichen glänzend erklärn die Welt"
        },
        "line.16": {
            "text": "zum Rad das dreht & dreht"
        },
        "line.17": {
            "text": "sich:"
        },
        "line.18": {
            "text": "mon-dial mon-dial"
        },
        "line.19": {
            "text": "zerfetzte"
        },
        "line.20": {
            "text": "Augenblicke wenn die Sonne zwischen-"
        },
        "line.21": {
            "text": "blitzt / ruf an der Text diktiert"
        },
        "line.22": {
            "text": "halb Manifest halb Script halb Telegramm"
        },
        "line.23": {
            "text": "kamtschatkafern // Gin Aperi-"
        },
        "line.24": {
            "text": "tief Apollinaire dermaßen liquid die Felge"
        },
        "line.25": {
            "text": "einpoliert der Zahnkranz Gänge alle"
        },
        "line.26": {
            "text": "Übersetzungen möglich, dran installiert:"
        },
        "line.27": {
            "text": "VITESSE heißt Schnelligkeit, französisch"
        }
    }
}