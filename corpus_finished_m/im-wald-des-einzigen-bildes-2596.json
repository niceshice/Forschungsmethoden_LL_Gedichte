{
    "title": "im-wald-des-einzigen-bildes-2596",
    "gender": "m",
    "author": "Hans Thill",
    "author_birth": "1954",
    "poem": {
        "line.1": {
            "text": "Immerhin hatten wir Hunde dabei"
        },
        "line.2": {
            "text": "blonde Bürsten hüfthohe Zotteljäger"
        },
        "line.3": {
            "text": "gehorsamer als ein Schatten der am Halsband"
        },
        "line.4": {
            "text": "zerrt uns hatte man das Gehör mit"
        },
        "line.5": {
            "text": "Papier verstopft und Zöpfe"
        },
        "line.6": {
            "text": "ins Haar gestrickt der Kohl kräuselte"
        },
        "line.7": {
            "text": "sich zu unseren Füßen wir"
        },
        "line.8": {
            "text": "traten rutschige Blattrippen in der Lichtung"
        },
        "line.9": {
            "text": "der alphabetische Schnee!"
        },
        "line.10": {
            "text": "Krumm wie Kommas kamen wir ins Gehölz"
        },
        "line.11": {
            "text": "halblauten Flügelschlags (die Kälte hatte unsere"
        },
        "line.12": {
            "text": "Instrumente gestimmt) und machten"
        },
        "line.13": {
            "text": "Motorengeräusch: Barkas!"
        },
        "line.14": {
            "text": "riefen wir Barkas! oder krähten obertönig"
        },
        "line.15": {
            "text": "(auszudenken wie Bettine schrie"
        },
        "line.16": {
            "text": "wenn wir übern Teppich latschten)"
        },
        "line.17": {
            "text": "Im Wald des einzigen Bildes"
        },
        "line.18": {
            "text": "rief es aus unseren Bäuchen in alten Sprachen."
        },
        "line.19": {
            "text": "Wir fanden den Meridian festigten"
        },
        "line.20": {
            "text": "die Stelle mit Bengeln und Kerzenwachs knoteten"
        },
        "line.21": {
            "text": "jeweils ein Hundefell in die stillen Kiefern"
        },
        "line.22": {
            "text": "Zelten seither jeder eine Trommel unter seiner"
        },
        "line.23": {
            "text": "Haut als Zeitvertreib für kommende"
        },
        "line.24": {
            "text": "Karawanen wissenschaftliche Eselsbrücke"
        },
        "line.25": {
            "text": "Unendlichkeit von Namen davon sind die Alben satt"
        }
    }
}