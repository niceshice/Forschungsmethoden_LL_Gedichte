{
    "title": "tierleben-3-4012",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "3"
        },
        "line.2": {
            "text": "Wer weiss seit wann"
        },
        "line.3": {
            "text": "im Trockeneis das Opfer"
        },
        "line.4": {
            "text": "Verlust oder Vorrat"
        },
        "line.5": {
            "text": "eingefroren dampft. Und aber"
        },
        "line.6": {
            "text": "keine Oper bringt"
        },
        "line.7": {
            "text": "den Triumph des Verlierers"
        },
        "line.8": {
            "text": "in A-Dur. Rad"
        },
        "line.9": {
            "text": "und Uhr werden endlich"
        },
        "line.10": {
            "text": "erfunden. Unten (zum zynischen"
        },
        "line.11": {
            "text": "Geständnis hin) ist"
        },
        "line.12": {
            "text": "das Gutdünken wahr. In Gold"
        },
        "line.13": {
            "text": "gekocht das Fabelhafte und"
        },
        "line.14": {
            "text": "der Sinn. Und hinterher"
        },
        "line.15": {
            "text": "wird etwas auf die Welt gebracht"
        },
        "line.16": {
            "text": "und nicht gebraucht."
        },
        "line.17": {
            "text": "(\"Ins Trockeneis das Gold"
        },
        "line.18": {
            "text": "Verlust oder Vorrat"
        },
        "line.19": {
            "text": "eingelassen. Weiss das Opfer"
        },
        "line.20": {
            "text": "vom Triumph des Siegers."
        },
        "line.21": {
            "text": "Nämlich Rad und Uhr"
        },
        "line.22": {
            "text": "zurückgedreht bis zum Da!"
        },
        "line.23": {
            "text": "der Erfindung. Bis"
        },
        "line.24": {
            "text": "zum Eingeständnis dessen"
        },
        "line.25": {
            "text": "der für Sinn und Fabel"
        },
        "line.26": {
            "text": "haftet. Der wie"
        },
        "line.27": {
            "text": "Same brüht und sich"
        },
        "line.28": {
            "text": "verteilt nach innen. Immer"
        },
        "line.29": {
            "text": "nicht gebraucht.\")"
        }
    }
}