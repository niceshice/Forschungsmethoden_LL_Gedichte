{
    "title": "der-tag-dem-das-verschwand-1219",
    "gender": "m",
    "author": "Robert  Gernhardt",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Am Tag, an dem dasverschwand,"
        },
        "line.2": {
            "text": "da war die uft vo Kagen."
        },
        "line.3": {
            "text": "Den Dichtern, ach, verschug es gatt"
        },
        "line.4": {
            "text": "ihr Singen und ihr Sagen."
        },
        "line.5": {
            "text": "Nun gut. Sie haben sich gefasst."
        },
        "line.6": {
            "text": "Man sieht sie wieder schreiben."
        },
        "line.7": {
            "text": "Jedoch:"
        },
        "line.8": {
            "text": "Soang dasnicht wiederkehrt,"
        },
        "line.9": {
            "text": "mu√ü aes Fickwerk beiben."
        }
    }
}