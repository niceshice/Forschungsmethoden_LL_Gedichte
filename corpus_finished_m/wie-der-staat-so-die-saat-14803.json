{
    "title": "wie-der-staat-so-die-saat-14803",
    "gender": "m",
    "author": "Eberhard Häfner",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "Die einsilbigen Wörter"
        },
        "line.2": {
            "text": "außerhalb der alphabetischen Ordnung"
        },
        "line.3": {
            "text": "sind signifikant, man kann sie als Lautbild lesen"
        },
        "line.4": {
            "text": "wenn im Nest versteckt der Mai"
        },
        "line.5": {
            "text": "nun für sich kein Haus zu bauen braucht"
        },
        "line.6": {
            "text": "keinen Stein wendet, Geld spart"
        },
        "line.7": {
            "text": "sich sagt, Schwein gehabt, weil er im Glück"
        },
        "line.8": {
            "text": "vergaß, dass während der Nacht"
        },
        "line.9": {
            "text": "so durchsichtig wie Glas, Tau gefallen"
        },
        "line.10": {
            "text": "zwischen Berg und Tal"
        },
        "line.11": {
            "text": "war aufgegangen die Saat im Staat"
        },
        "line.12": {
            "text": "zu groß oder zufällig"
        },
        "line.13": {
            "text": "Lug und Trug bedeutungslos"
        },
        "line.14": {
            "text": "dann flankieren Konsonanten den Vokal"
        },
        "line.15": {
            "text": "während die Milch einer Kuh"
        },
        "line.16": {
            "text": "vom Wiesenkraut schäumt wie mein okkultes Blut"
        },
        "line.17": {
            "text": "das gedüngt von der Kunst, von einer"
        },
        "line.18": {
            "text": "gemacht für mein Herz"
        },
        "line.19": {
            "text": "gut"
        }
    }
}