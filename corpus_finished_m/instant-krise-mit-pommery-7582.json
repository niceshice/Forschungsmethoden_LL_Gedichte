{
    "title": "instant-krise-mit-pommery-7582",
    "gender": "m",
    "author": "Christian  Filips",
    "author_birth": "1981",
    "poem": {
        "line.1": {
            "text": "O Pommery! O Pomerol!"
        },
        "line.2": {
            "text": "Ich weiß nicht, wie ich weiterleben soll."
        },
        "line.3": {
            "text": "Seh ich Euch zwei hier vor mir stehn,"
        },
        "line.4": {
            "text": "dann trink ich. Ihr vergeht. Ich trink"
        },
        "line.5": {
            "text": "noch paarmal von dem Satz, la lie,"
        },
        "line.6": {
            "text": "bis ebenso ich geh. Ins Bett"
        },
        "line.7": {
            "text": "als Letzter. Immer wieder mich:"
        },
        "line.8": {
            "text": "wie das Verstehen lerne ich?"
        },
        "line.9": {
            "text": "Gefragt. Und wenn verstanden: wie"
        },
        "line.10": {
            "text": "verkraften alles das? Vergehen"
        },
        "line.11": {
            "text": "kann lustig auch am Morgen sein"
        },
        "line.12": {
            "text": "und lieblich sein, am Abend ja"
        },
        "line.13": {
            "text": "gewaltig winselnd wieder sein:"
        },
        "line.14": {
            "text": "Das Echo der herzeignen Scherze"
        },
        "line.15": {
            "text": "hinter der Bienenwachskerze"
        },
        "line.16": {
            "text": "wäre nur ein Summen des Dekors,"
        },
        "line.17": {
            "text": "ein summendes Dekor im Ohr"
        },
        "line.18": {
            "text": "brennt alles hin, brennt ab, bevor."
        },
        "line.19": {
            "text": "O Pomerol. O Pommery."
        },
        "line.20": {
            "text": "Wie soll ich weiterleben? Wie?"
        }
    }
}