{
    "title": "im-ei-15757",
    "gender": "m",
    "author": "Günter Grass",
    "author_birth": "1927",
    "poem": {
        "line.1": {
            "text": "Wir leben im Ei."
        },
        "line.2": {
            "text": "Die Innenseite der Schale"
        },
        "line.3": {
            "text": "haben wir mit unanständigen Zeichnungen"
        },
        "line.4": {
            "text": "und den Vornamen unserer Feinde bekritzelt."
        },
        "line.5": {
            "text": "Wir werden gebrütet."
        },
        "line.6": {
            "text": "Wer uns auch brütet,"
        },
        "line.7": {
            "text": "unseren Bleistift brütet er mit."
        },
        "line.8": {
            "text": "Ausgeschlüpft eines Tages,"
        },
        "line.9": {
            "text": "werden wir uns sofort"
        },
        "line.10": {
            "text": "ein Bildnis des Brütenden machen."
        },
        "line.11": {
            "text": "Wir nehmen an, daß wir gebrütet werden."
        },
        "line.12": {
            "text": "Wir stellen uns ein gutmütiges Geflügel vor"
        },
        "line.13": {
            "text": "und schreiben Schulaufsätze"
        },
        "line.14": {
            "text": "über Farbe und Rasse"
        },
        "line.15": {
            "text": "der uns brütenden Henne."
        },
        "line.16": {
            "text": "Wann schlüpfen wir aus?"
        },
        "line.17": {
            "text": "Unsere Propheten im Ei"
        },
        "line.18": {
            "text": "streiten sich für mittelmäßige Bezahlung"
        },
        "line.19": {
            "text": "über die Dauer der Brutzeit."
        },
        "line.20": {
            "text": "Sie nehmen einen Tag X an."
        },
        "line.21": {
            "text": "Aus Langeweile und echtem Bedürfnis"
        },
        "line.22": {
            "text": "haben wir Brutkästen erfunden."
        },
        "line.23": {
            "text": "Wir sorgen uns sehr um unseren Nachwuchs im Ei."
        },
        "line.24": {
            "text": "Gerne würden wir jener, die über uns wacht,"
        },
        "line.25": {
            "text": "unser Patent empfehlen."
        },
        "line.26": {
            "text": "Wir aber haben ein Dach überm Kopf."
        },
        "line.27": {
            "text": "Senile Küken,"
        },
        "line.28": {
            "text": "Embryos mit Sprachkenntnissen"
        },
        "line.29": {
            "text": "reden den ganzen Tag"
        },
        "line.30": {
            "text": "und besprechen noch ihre Träume."
        },
        "line.31": {
            "text": "Und wenn wir nun nicht gebrütet werden?"
        },
        "line.32": {
            "text": "Wenn diese Schale niemals ein Loch bekommt?"
        },
        "line.33": {
            "text": "Wenn unser Horizont nur der Horizont"
        },
        "line.34": {
            "text": "unserer Kritzeleien ist und auch bleiben wird?"
        },
        "line.35": {
            "text": "Wir hoffen, daß wir gebrütet werden."
        },
        "line.36": {
            "text": "Wenn wir auch nur noch vom Brüten reden,"
        },
        "line.37": {
            "text": "bleibt doch zu befürchten, daß jemand,"
        },
        "line.38": {
            "text": "außerhalb unserer Schale, Hunger verspürt,"
        },
        "line.39": {
            "text": "uns in die Pfanne haut und mit Salz bestreut."
        },
        "line.40": {
            "text": "Was machen wir dann, ihr Brüder im Ei?"
        }
    }
}