{
    "title": "nachsommer-1574",
    "gender": "m",
    "author": "Michael Krüger",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Bevor wir das Haus abschließen,"
        },
        "line.2": {
            "text": "muß der Wein in den Ausguß"
        },
        "line.3": {
            "text": "und das Licht die Zimmer verlassen."
        },
        "line.4": {
            "text": "Jedes Wort, das jetzt noch fällt,"
        },
        "line.5": {
            "text": "ist zustimmungspflichtig."
        },
        "line.6": {
            "text": "Und vergiß die Mülltüte nicht."
        },
        "line.7": {
            "text": "Die freundlichen Spiegel"
        },
        "line.8": {
            "text": "im Eingang verbeugen sich"
        },
        "line.9": {
            "text": "mit einem traurigen Gesicht."
        },
        "line.10": {
            "text": "Und laß den Schlüssel stecken."
        },
        "line.11": {
            "text": "Am Ufer wartet die Arche,"
        },
        "line.12": {
            "text": "im Bug schnappt der Hund"
        },
        "line.13": {
            "text": "mit hechelnder Zunge nach Fliegen."
        },
        "line.14": {
            "text": "Von jetzt an mähen die Schwalben"
        },
        "line.15": {
            "text": "das Gras. Vergiß auch die Liebe"
        },
        "line.16": {
            "text": "nicht."
        },
        "line.17": {
            "text": "Schon auf dem Wasser,"
        },
        "line.18": {
            "text": "sehn wir die Hügel brennen."
        }
    }
}