{
    "title": "versuch-ueber-herden-und-rudel-13870",
    "gender": "m",
    "author": "Tobias Roth",
    "author_birth": "1985",
    "poem": {
        "line.1": {
            "text": "Ein Rudel Schafe."
        },
        "line.2": {
            "text": "Und die Wälder antworten."
        },
        "line.3": {
            "text": "Der Schrei trägt nur eine Landschaft weit,"
        },
        "line.4": {
            "text": "Pan und was anfangs mit dem Schweigen war,"
        },
        "line.5": {
            "text": "Wird das Weiß rot, gebrochen Blumen und Gras."
        },
        "line.6": {
            "text": "Ein Tier gerissen, in Stücken."
        },
        "line.7": {
            "text": "Für ein paar Strümpfe wird es noch reichen,"
        },
        "line.8": {
            "text": "Waten wir knöchelhoch durch das Weiß,"
        },
        "line.9": {
            "text": "Und die Wälder antworten."
        },
        "line.10": {
            "text": "Aufgelesen, zerstreut,"
        },
        "line.11": {
            "text": "Zerstreut, zusammengesetzt."
        }
    }
}