{
    "title": "ballade-13895",
    "gender": "m",
    "author": "Max Sessner",
    "author_birth": "1959",
    "poem": {
        "line.1": {
            "text": "Dann geht man eines schönen"
        },
        "line.2": {
            "text": "Tages verloren du hörst womöglich"
        },
        "line.3": {
            "text": "eine Melodie kommst ab vom"
        },
        "line.4": {
            "text": "Weg und plötzlich sitzt du bei den"
        },
        "line.5": {
            "text": "Bauarbeitern mit am Grill es gibt"
        },
        "line.6": {
            "text": "viel Bier und überm Feuer liegen"
        },
        "line.7": {
            "text": "dicke Scheiben Fleisch so nach"
        },
        "line.8": {
            "text": "der vierten Flasche erscheint auf"
        },
        "line.9": {
            "text": "deinem Unterarm die Tätowierung"
        },
        "line.10": {
            "text": "eines nackten Mädchens es scheint"
        },
        "line.11": {
            "text": "dir unentwegt zu winken doch kannst"
        },
        "line.12": {
            "text": "du jetzt nicht weg du machst ihr klar"
        },
        "line.13": {
            "text": "dass du hier leben willst in einer"
        },
        "line.14": {
            "text": "dieser stickigen Baracken die du"
        },
        "line.15": {
            "text": "seit Monaten vom Sehen kennst"
        },
        "line.16": {
            "text": "schon bald ist Herbst der Mond wird"
        },
        "line.17": {
            "text": "langsam blasser und nur damit"
        },
        "line.18": {
            "text": "du's weißt in diesem Männermief"
        },
        "line.19": {
            "text": "wirst du zu Grunde gehen es sei"
        },
        "line.20": {
            "text": "denn du besinnst dich wieder auf"
        },
        "line.21": {
            "text": "das Mädchen noch vor dem ersten"
        },
        "line.22": {
            "text": "Schnee wenn niemand euren Spuren"
        },
        "line.23": {
            "text": "folgen kann und all die Kerle vor"
        },
        "line.24": {
            "text": "Eifersucht ganz krank am Bauzaun"
        },
        "line.25": {
            "text": "um ein schwaches Feuer stehen"
        }
    }
}