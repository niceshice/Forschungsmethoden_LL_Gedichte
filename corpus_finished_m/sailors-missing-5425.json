{
    "title": "sailors-missing-5425",
    "gender": "m",
    "author": "Uwe Kolbe",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "Ich habe ihn Jahre gesucht."
        },
        "line.2": {
            "text": "Ich wusste, er wohnt in der Flasche,"
        },
        "line.3": {
            "text": "das war leicht festzustellen,"
        },
        "line.4": {
            "text": "doch wo beginnen zu suchen?"
        },
        "line.5": {
            "text": "Die Welt eine Flasche, die Flasche die Welt,"
        },
        "line.6": {
            "text": "bauchig, schön, und innen drinnen,"
        },
        "line.7": {
            "text": "da hat sie sich gewaschen."
        },
        "line.8": {
            "text": "Lübecker Rotspon"
        },
        "line.9": {
            "text": "oder schwerer Argentinier?"
        },
        "line.10": {
            "text": "Sherry vom Schwarzen Mann"
        },
        "line.11": {
            "text": "oder Chardonnay vom Tafelberg?"
        },
        "line.12": {
            "text": "Ich wusste etwas über sein Aussehen,"
        },
        "line.13": {
            "text": "den Bauch."
        },
        "line.14": {
            "text": "Ich wusste um seine Meinung:"
        },
        "line.15": {
            "text": "Prost auf die Welt!"
        },
        "line.16": {
            "text": "Und ich wusste, ich halte zu ihm."
        },
        "line.17": {
            "text": "In Casablanca verlor sich die Spur,"
        },
        "line.18": {
            "text": "dann auf dem blauen Nil,"
        },
        "line.19": {
            "text": "in Schanghai,"
        },
        "line.20": {
            "text": "in den Tränen des Mädchens,"
        },
        "line.21": {
            "text": "dem er die Raddampferfahrt"
        },
        "line.22": {
            "text": "von Dresden nach Pirna versprochen hatte,"
        },
        "line.23": {
            "text": "der Luftikus, der gottverdammte"
        },
        "line.24": {
            "text": "Luftikus,"
        },
        "line.25": {
            "text": "da tauchte er wieder auf,"
        },
        "line.26": {
            "text": "sein Buddelschiff Made in China."
        }
    }
}