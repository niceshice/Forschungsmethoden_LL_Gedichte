{
    "title": "das-handpedal-der-wimmerkiste-4243",
    "gender": "m",
    "author": "Christian Steinbacher",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": "Wie auf Knopfdruck läuft das Rädchen"
        },
        "line.2": {
            "text": "sachte durch die dunklen Gänge,"
        },
        "line.3": {
            "text": "stutzt den Flügel, stimmt mich uni-"
        },
        "line.4": {
            "text": "sono ein auf Feinabstufung."
        },
        "line.5": {
            "text": "Längst schon ist die träge Scheibe,"
        },
        "line.6": {
            "text": "wie die Visitation ergründet,"
        },
        "line.7": {
            "text": "abgewählt, samt Loch und Streifen"
        },
        "line.8": {
            "text": "durch das Nebelloch zurückzieht"
        },
        "line.9": {
            "text": "uns die Fingerübung, der der"
        },
        "line.10": {
            "text": "Hebel wieder steigt, sich auf- und"
        },
        "line.11": {
            "text": "auslöst, durch die Haut nach vor geht"
        },
        "line.12": {
            "text": "oder händisch zur Geschwulst wird."
        },
        "line.13": {
            "text": "Abgerutscht der Greifarm, zweifelt,"
        },
        "line.14": {
            "text": "ob ein Zirkel dann schon einen"
        },
        "line.15": {
            "text": "Gibbon macht, der uns die Klimper-"
        },
        "line.16": {
            "text": "Kiste auf das Stelldich einstimmt."
        }
    }
}