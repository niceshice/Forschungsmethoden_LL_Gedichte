{
    "title": "schiffe-13900",
    "gender": "m",
    "author": "Max Sessner",
    "author_birth": "1959",
    "poem": {
        "line.1": {
            "text": "Spät ist es in den Wörtern wo"
        },
        "line.2": {
            "text": "ganze Mannschaften träumen"
        },
        "line.3": {
            "text": "wo man Lieder singt kurz"
        },
        "line.4": {
            "text": "vorm Morgengrauen sprich"
        },
        "line.5": {
            "text": "sie ruhig aus sie treiben die"
        },
        "line.6": {
            "text": "Straße hinunter Schiffe die"
        },
        "line.7": {
            "text": "Segel gebläht und am Mast"
        },
        "line.8": {
            "text": "flattert der Totenkopf mit den"
        },
        "line.9": {
            "text": "gekreuzten Säbeln sprich"
        },
        "line.10": {
            "text": "sie ruhig aus oder aber sei"
        },
        "line.11": {
            "text": "einfach still dann tümpeln"
        },
        "line.12": {
            "text": "die Schiffe im Hafen laufen"
        },
        "line.13": {
            "text": "nicht aus Steuermänner"
        },
        "line.14": {
            "text": "spucken ins Wasser und die"
        },
        "line.15": {
            "text": "Leere im Frachtraum ist nicht"
        },
        "line.16": {
            "text": "zu ertragen es liegt an dir"
        },
        "line.17": {
            "text": "ob du hinabsteigst barfüßig"
        },
        "line.18": {
            "text": "über die Planken läufst hin"
        },
        "line.19": {
            "text": "und her immer wieder bis"
        },
        "line.20": {
            "text": "du das Meer fühlst dunkel"
        },
        "line.21": {
            "text": "und tief unter deinen Füßen"
        }
    }
}