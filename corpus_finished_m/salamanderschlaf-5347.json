{
    "title": "salamanderschlaf-5347",
    "gender": "m",
    "author": "Mario Wirz",
    "author_birth": "1956",
    "poem": {
        "line.1": {
            "text": "Unter der Sonne"
        },
        "line.2": {
            "text": "schlief der Salamander"
        },
        "line.3": {
            "text": "auf einem Stein"
        },
        "line.4": {
            "text": "den ich aufhob"
        },
        "line.5": {
            "text": "Stunden später"
        },
        "line.6": {
            "text": "als der Salamander"
        },
        "line.7": {
            "text": "mit der Sonne"
        },
        "line.8": {
            "text": "verschwunden war"
        },
        "line.9": {
            "text": "Stumm blieb"
        },
        "line.10": {
            "text": "der Stein"
        },
        "line.11": {
            "text": "vor allen Fragen"
        },
        "line.12": {
            "text": "die ich durch"
        },
        "line.13": {
            "text": "mein Leben schleppte"
        },
        "line.14": {
            "text": "Jahrzehnte später"
        },
        "line.15": {
            "text": "in schlafloser Stille"
        },
        "line.16": {
            "text": "hütet der Stein"
        },
        "line.17": {
            "text": "das Geheimnis"
        },
        "line.18": {
            "text": "des Salamanders"
        },
        "line.19": {
            "text": "jene ferne Stunde"
        },
        "line.20": {
            "text": "unter der Sonne"
        }
    }
}