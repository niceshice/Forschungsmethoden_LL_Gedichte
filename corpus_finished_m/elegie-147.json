{
    "title": "elegie-147",
    "gender": "m",
    "author": "Peter Rühmkorf",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Gruß aus Köln - die bleiche Trauerkarte,"
        },
        "line.2": {
            "text": "die am Rand noch grad die Fassung wahrt,"
        },
        "line.3": {
            "text": "würde- und bedeutungsvoll:"
        },
        "line.4": {
            "text": "ah-was-soll"
        },
        "line.5": {
            "text": "all das dämliche Getanke und Gestarte"
        },
        "line.6": {
            "text": "für das bißchen Fahrt?"
        },
        "line.7": {
            "text": "Staub zu Staub und Schaum zu Schaum:"
        },
        "line.8": {
            "text": "Diese Knöchel oft umschlossen,"
        },
        "line.9": {
            "text": "dieser Hintern tief geliebt,"
        },
        "line.10": {
            "text": "haltlos durch ein Totenhemd gesiebt,"
        },
        "line.11": {
            "text": "ausgeflossen"
        },
        "line.12": {
            "text": "in den sterneleeren Kofferraum."
        },
        "line.13": {
            "text": "Efeu schleppt sich lautlos durch die Jahre;"
        },
        "line.14": {
            "text": "immergrün und unbegrenzt"
        },
        "line.15": {
            "text": "deckt er diesen früh entschlafnen Schoß;"
        },
        "line.16": {
            "text": "knochenlos"
        },
        "line.17": {
            "text": "trete ich vor deine Abendbahre,"
        },
        "line.18": {
            "text": "zart wie ein Gespenst."
        },
        "line.19": {
            "text": "Hark ich dir die Erde vom Gesicht,"
        },
        "line.20": {
            "text": "laß die Blumen von den Ketten"
        },
        "line.21": {
            "text": "- himmelstrebend, hochgehanft -"
        },
        "line.22": {
            "text": "Dich in mein entfliehendes Gedicht"
        },
        "line.23": {
            "text": "u m z u b e t t e n"
        },
        "line.24": {
            "text": "(Ruhe sanft!)"
        },
        "line.25": {
            "text": "Da ist Silber - da ist Gold - ist Licht."
        }
    }
}