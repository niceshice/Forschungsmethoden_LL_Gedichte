{
    "title": "die-grosse-schrift-eines-schwierigen-schuelers-250",
    "gender": "m",
    "author": "Jörg Schieke",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Immer am samstag"
        },
        "line.2": {
            "text": "zeichnen wir abends die berge Frau radbach"
        },
        "line.3": {
            "text": "erlaubt uns"
        },
        "line.4": {
            "text": "sogar zu radieren Wir dürfen"
        },
        "line.5": {
            "text": "auch singen"
        },
        "line.6": {
            "text": "im hof oder"
        },
        "line.7": {
            "text": "erröten Nur das geschirr"
        },
        "line.8": {
            "text": "mit aufs zimmer"
        },
        "line.9": {
            "text": "nehmen dürfen wir nicht Liebe mam"
        },
        "line.10": {
            "text": "ich bekomme jetzt"
        },
        "line.11": {
            "text": "tabletten zum lutschen nicht mehr"
        },
        "line.12": {
            "text": "die zum schlucken So ist"
        },
        "line.13": {
            "text": "alles viel schöner Ich freue"
        },
        "line.14": {
            "text": "mich schon"
        },
        "line.15": {
            "text": "auf den samstag, da zeichnen wir wieder"
        },
        "line.16": {
            "text": "Die Berge"
        }
    }
}