{
    "title": "schwarze-milch-3400",
    "gender": "m",
    "author": "Arno  Reinfrank",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Mittels einet Meßmaschine"
        },
        "line.2": {
            "text": "suchte man Milchmindeiung"
        },
        "line.3": {
            "text": "bei den Kühen festzustellen,"
        },
        "line.4": {
            "text": "deten Gras im Fluglärm wächst."
        },
        "line.5": {
            "text": "Klugheit ging zu Wetk und baute"
        },
        "line.6": {
            "text": "zwanzig Schockwirkungsgeräte,"
        },
        "line.7": {
            "text": "die man auf den Rindern festband."
        },
        "line.8": {
            "text": "Jedes war aus Strangpreß-Alu."
        },
        "line.9": {
            "text": "Glasfaserverstärkte Proberöhrchen,"
        },
        "line.10": {
            "text": "Kochsalzlösung und Katheter"
        },
        "line.11": {
            "text": "führten alle zur Erkenntnis,"
        },
        "line.12": {
            "text": "daß der Kuh der Lärm nichts ausmacht."
        },
        "line.13": {
            "text": "Dazu gluckte die Fasanenhenne,"
        },
        "line.14": {
            "text": "die zwischen den Schwellen brütet"
        },
        "line.15": {
            "text": "einer vielbefahrnen Strecke."
        },
        "line.16": {
            "text": "Furchtlos ist die Vogelmutter."
        },
        "line.17": {
            "text": "Während Zug um Zug sie überdonnert,"
        },
        "line.18": {
            "text": "warnt sie ihre Küken: Duckt euch!"
        },
        "line.19": {
            "text": "Auch die Kühe schlucken friedlich"
        },
        "line.20": {
            "text": "auf den lärmbeschallten Flächen"
        },
        "line.21": {
            "text": "mit dem Gras den Düsendreck."
        }
    }
}