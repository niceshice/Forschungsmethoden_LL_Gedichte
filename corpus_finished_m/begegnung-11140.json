{
    "title": "begegnung-11140",
    "gender": "m",
    "author": "Peter Huchel",
    "author_birth": "1903",
    "poem": {
        "line.1": {
            "text": "Für Michael Hamburger"
        },
        "line.2": {
            "text": "Schleiereule,"
        },
        "line.3": {
            "text": "Tochter des Schnees,"
        },
        "line.4": {
            "text": "dem Nachtwind unterworfen,"
        },
        "line.5": {
            "text": "doch Wurzeln fassend"
        },
        "line.6": {
            "text": "mit den Krallen"
        },
        "line.7": {
            "text": "im modrig grindigen Gemäuer,"
        },
        "line.8": {
            "text": "Schnabelgesicht"
        },
        "line.9": {
            "text": "mit runden Augen,"
        },
        "line.10": {
            "text": "herzstarre Maske"
        },
        "line.11": {
            "text": "aus Federn weißen Feuers,"
        },
        "line.12": {
            "text": "das weder Zeit noch Raum berührt,"
        },
        "line.13": {
            "text": "kalt weht die Nacht"
        },
        "line.14": {
            "text": "ans alte Gehöft,"
        },
        "line.15": {
            "text": "im Vorhof fahles Gelichter,"
        },
        "line.16": {
            "text": "Schlitten, Gepäck, verschneite Laternen,"
        },
        "line.17": {
            "text": "in den Töpfen Tod,"
        },
        "line.18": {
            "text": "in den Krügen Gift,"
        },
        "line.19": {
            "text": "das Testament an den Balken genagelt."
        },
        "line.20": {
            "text": "Das Verborgene unter"
        },
        "line.21": {
            "text": "den Klauen der Felsen,"
        },
        "line.22": {
            "text": "die Öffnung in die Nacht,"
        },
        "line.23": {
            "text": "die Todesangst"
        },
        "line.24": {
            "text": "wie stechendes Salz ins Fleisch gelegt."
        },
        "line.25": {
            "text": "Laßt uns niederfahren"
        },
        "line.26": {
            "text": "in der Sprache der Engel"
        },
        "line.27": {
            "text": "zu den zerbrochenen Ziegeln Babels."
        }
    }
}