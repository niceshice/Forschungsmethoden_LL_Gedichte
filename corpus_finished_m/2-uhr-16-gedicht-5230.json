{
    "title": "2-uhr-16-gedicht-5230",
    "gender": "m",
    "author": "Franz Hodjak",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Hin und wieder"
        },
        "line.2": {
            "text": "knistert nachts ein Teufel, als wollte"
        },
        "line.3": {
            "text": "er dich mahnen, umzukehren aus dem Traum."
        },
        "line.4": {
            "text": "Doch die Ausgänge"
        },
        "line.5": {
            "text": "sind alle besetzt von Panzern."
        },
        "line.6": {
            "text": "Die Fahnen, auf denen die Geschlechtsteile"
        },
        "line.7": {
            "text": "der Welt verzeichnet sind, wehen auf Halbmast."
        },
        "line.8": {
            "text": "Einem Gemüsehändler wird ein Denkmal gesetzt,"
        },
        "line.9": {
            "text": "als Zeichen,"
        },
        "line.10": {
            "text": "daß es den Widerspruch an sich nicht gibt."
        },
        "line.11": {
            "text": "Du bürstest deinen Hut,"
        },
        "line.12": {
            "text": "und überraschenderweise findest du"
        },
        "line.13": {
            "text": "keinen Toten im Schrank."
        },
        "line.14": {
            "text": "An allen Ecken werden Erinnerungen verteilt,"
        },
        "line.15": {
            "text": "die aufrufen zum Bedauern,"
        },
        "line.16": {
            "text": "doch du weißt, die Verklärung ist kein Beweis."
        },
        "line.17": {
            "text": "Dann wieder bist du zwischen Holland und Island"
        },
        "line.18": {
            "text": "an einem Faden baumelnd,"
        },
        "line.19": {
            "text": "auf den noble Gesten weisen."
        },
        "line.20": {
            "text": "Auch Träume haben ihre Lokalpresse,"
        },
        "line.21": {
            "text": "aber kein Heimatgefühl"
        },
        "line.22": {
            "text": "und schon gar nicht Ortsschilder."
        },
        "line.23": {
            "text": "Vor Begeisterung"
        },
        "line.24": {
            "text": "willst du dich in dein Unglück stürzen,"
        },
        "line.25": {
            "text": "aber du kommst nicht vom Fleck."
        },
        "line.26": {
            "text": "Und weshalb solltest du umkehren,"
        },
        "line.27": {
            "text": "bloß weil ein armer Teufel"
        },
        "line.28": {
            "text": "mit dieser Grammatik nicht zurechtkommen kann?"
        }
    }
}