    "poem": {
        "line.1": {
            "text": "WENN IRGENDEIN HERR"
        },
        "line.2": {
            "text": "dieses gebrochene aus-"
        },
        "line.3": {
            "text": "brocken kann und"
        },
        "line.4": {
            "text": "die blutsammlung sichten"
        },
        "line.5": {
            "text": "wird J.H.V.H."
        },
        "line.6": {
            "text": "durch den hauch aus dem autofriedhof"
        },
        "line.7": {
            "text": "das öffentliche licht zerstäuben"
        },
        "line.8": {
            "text": "und sich niederlassen"
        },
        "line.9": {
            "text": "auf dem heupferd"
        },
        "line.10": {
            "text": "denn alles wird herrlichkeit"
        },
        "line.11": {
            "text": "und ein obdach sein"
        },
        "line.12": {
            "text": "hinter den akten"
        },
        "line.13": {
            "text": "und zum schutz und schirm"
        },
        "line.14": {
            "text": "gegen regen"
        },
        "line.15": {
            "text": "und sonstiges"
        },
        "line.16": {
            "text": "ICH WILL,"
        },
        "line.17": {
            "text": "spricht einer,"
        },
        "line.18": {
            "text": "ein fürst sein,"
        },
        "line.19": {
            "text": "der euch versiegelt"
        },
        "line.20": {
            "text": "die augen,"
        },
        "line.21": {
            "text": "daß sich"
        },
        "line.22": {
            "text": "das reden und tun"
        },
        "line.23": {
            "text": "an nächst-"
        },
        "line.24": {
            "text": "liegendes"
        },
        "line.25": {
            "text": "richtet"
        },
        "line.26": {
            "text": "und blindheit"
        },
        "line.27": {
            "text": "zum vorteil gereicht."
        },
        "line.28": {
            "text": "der hat hier ein sagen dem hier ein sagen gewährt ist"
        },
        "line.29": {
            "text": "der hat hier ein sagen dem hier ein sagen gewährt ist"
        },
        "line.30": {
            "text": "der hat hier ein sagen dem hier ein sagen gewährt ist"
        },
        "line.31": {
            "text": "der hat hier ein sagen dem hier ein sagen gewährt ist"
        },
        "line.32": {
            "text": "ICH BIN DER FÜRST"
        },
        "line.33": {
            "text": "der das auge"
        },
        "line.34": {
            "text": "verziert"
        },
        "line.35": {
            "text": "und den balken"
        },
        "line.36": {
            "text": "verklärt"
        },
        "line.37": {
            "text": "ich bin der wurm"
        },
        "line.38": {
            "text": "noch im"
        },
        "line.39": {
            "text": "wurm"
        },
        "line.40": {
            "text": "wer hier ein sagen hat"
        },
        "line.41": {
            "text": "möge es sagen"
