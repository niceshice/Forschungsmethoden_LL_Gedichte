{
    "title": "mecklenburg-1943-7839",
    "gender": "m",
    "author": "Rolf Haufs",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Fuhren wir hin. Schild um den Hals. Dicke"
        },
        "line.2": {
            "text": "Nase. Hörte: Geschwüre können tödlich sein."
        },
        "line.3": {
            "text": "Unterwegs die brennende Stadt Braunschweig."
        },
        "line.4": {
            "text": "Gegen Morgen brauner Rotekreuztee. Fahrt"
        },
        "line.5": {
            "text": "Richtung Nordostost. Schilf und heißer August"
        },
        "line.6": {
            "text": "Himmel ohne Gefahr, Süße Beeren."
        },
        "line.7": {
            "text": "Radionachrichten über zerstörte Häuser"
        },
        "line.8": {
            "text": "Verbrannte Menschen. Namen wurden"
        },
        "line.9": {
            "text": "Nicht genannt. Pilze haben wir"
        },
        "line.10": {
            "text": "Gesammelt. Die rheinischen Frauen sagten"
        },
        "line.11": {
            "text": "Dreck hier nur Dreck. Wollten die Koffer packen"
        },
        "line.12": {
            "text": "Das erlaubten die Behörden nicht."
        },
        "line.13": {
            "text": "Flugzeuge flogen über den See wohin. Wasser"
        },
        "line.14": {
            "text": "Bewegte sich. Schüsse nach wilden Enten"
        },
        "line.15": {
            "text": "Gefangene Franzosen fingen Frösche. Die"
        },
        "line.16": {
            "text": "Rheinischen Frauen ekelten sich. Holz"
        },
        "line.17": {
            "text": "Haben wir gestapelt für den Winter. Das"
        },
        "line.18": {
            "text": "Pflichtjahrmädchen hackte sich den Daumen"
        },
        "line.19": {
            "text": "Ab. Hat keinen Mann gekriegt. Jagten"
        },
        "line.20": {
            "text": "Flöhe. Der See roch nach Sommer"
        },
        "line.21": {
            "text": "Garten lief über."
        },
        "line.22": {
            "text": "Hier wären wir gern geblieben, wenn nicht"
        },
        "line.23": {
            "text": "Der Blick gewesen wäre der Frau, die ihre"
        },
        "line.24": {
            "text": "Zimmer abgeben mußte mit Mobiliar. Teilen"
        },
        "line.25": {
            "text": "Ihr Hofklosett mit den rheinischen"
        },
        "line.26": {
            "text": "Frauen. Fremde Frisuren, andere Sprache"
        },
        "line.27": {
            "text": "Zu laut zu schnell. Bunte Kleidung."
        },
        "line.28": {
            "text": "Die Franzosen bauten Stege in den See. Machten"
        },
        "line.29": {
            "text": "Feuer. Der Rauch flog nach Westen weg."
        },
        "line.30": {
            "text": "Die rheinischen Frauen hörten"
        },
        "line.31": {
            "text": "Nicht auf mit Reden."
        }
    }
}