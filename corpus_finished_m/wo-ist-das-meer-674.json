{
    "title": "wo-ist-das-meer-674",
    "gender": "m",
    "author": "Jürg Schubiger",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Da, wo Kolumbus Indien sucht,"
        },
        "line.2": {
            "text": "wo die grossen Schiffe versinken,"
        },
        "line.3": {
            "text": "wo einem, ohne zu blinzeln,"
        },
        "line.4": {
            "text": "ein Fisch ins Auge schaut."
        },
        "line.5": {
            "text": "wo es aussieht wie auf dem Mond,"
        },
        "line.6": {
            "text": "wo der Mond aussieht"
        },
        "line.7": {
            "text": "wie das Ei der Nacht,"
        },
        "line.8": {
            "text": "wo man sich fragt, ob man umkehren soll"
        },
        "line.9": {
            "text": "oder nicht,"
        },
        "line.10": {
            "text": "wo man nicht umkehrt,"
        },
        "line.11": {
            "text": "weil es schauderhaft schön ist."
        }
    }
}