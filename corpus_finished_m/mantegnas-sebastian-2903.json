{
    "title": "mantegnas-sebastian-2903",
    "gender": "m",
    "author": "Harald  Hartung",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "Ich zählte alle Pfeile"
        },
        "line.2": {
            "text": "die er an seinem Leib trägt"
        },
        "line.3": {
            "text": "die Stellen wo sie eintreten"
        },
        "line.4": {
            "text": "die Stellen wo sie austreten"
        },
        "line.5": {
            "text": "auch die verdeckten"
        },
        "line.6": {
            "text": "und vergaß über meinem Zählen"
        },
        "line.7": {
            "text": "den eigenen Schmerz"
        },
        "line.8": {
            "text": "Ich trat hinaus in das Licht des Kanals"
        },
        "line.9": {
            "text": "Zwischen Schmutz"
        },
        "line.10": {
            "text": "und dümpelnden Plastikflaschen"
        },
        "line.11": {
            "text": "trieb bäuchlings ein Teddybär"
        },
        "line.12": {
            "text": "Da trat mir das Salz ins Aug"
        }
    }
}