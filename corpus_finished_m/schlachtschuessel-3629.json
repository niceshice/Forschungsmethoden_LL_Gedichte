{
    "title": "schlachtschuessel-3629",
    "gender": "m",
    "author": "Franz Xaver  Kroetz",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Ich trug diese Tage"
        },
        "line.2": {
            "text": "schwer am Herzen."
        },
        "line.3": {
            "text": "Mit einem gefrorenen Hasen"
        },
        "line.4": {
            "text": "und einer heißen Katze"
        },
        "line.5": {
            "text": "hielt ich Mahl."
        },
        "line.6": {
            "text": "Da schlug der Sturm"
        },
        "line.7": {
            "text": "die Faust in die Felder."
        },
        "line.8": {
            "text": "Der Blitz zog der Nacht"
        },
        "line.9": {
            "text": "ein weißes Kleid an."
        },
        "line.10": {
            "text": "Vier Höfe brannten ab."
        },
        "line.11": {
            "text": "Sämlinge trieben an der Alz."
        },
        "line.12": {
            "text": "Ich sank besoffen ins Bett."
        },
        "line.13": {
            "text": "Das Donnerwetter ließ nach."
        },
        "line.14": {
            "text": "Der Sturm schnürte sein Bündel,"
        },
        "line.15": {
            "text": "warf es nach mir und ging."
        },
        "line.16": {
            "text": "Da wurds mir leichter."
        },
        "line.17": {
            "text": "Nach so einem Donnerwetter"
        },
        "line.18": {
            "text": "hungern alle"
        },
        "line.19": {
            "text": "Es roch nach Schnee."
        },
        "line.20": {
            "text": "Nach Schnee und Schreiben."
        },
        "line.21": {
            "text": "Es gab zuerst Schlachtschüssel,"
        },
        "line.22": {
            "text": "dann Blut, Sperma und Tränen."
        },
        "line.23": {
            "text": "Köstlich!"
        }
    }
}