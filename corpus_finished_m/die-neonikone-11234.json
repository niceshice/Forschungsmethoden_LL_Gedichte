{
    "title": "die-neonikone-11234",
    "gender": "m",
    "author": "Thomas Rosenlöcher",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "Als ich nach Amsterdam kam"
        },
        "line.2": {
            "text": "und um die Ecke bog,"
        },
        "line.3": {
            "text": "stand ich vor dem Fenster der Hure."
        },
        "line.4": {
            "text": "Sie aber saß in rötlichem Licht"
        },
        "line.5": {
            "text": "auf einem Hocker und schaute mich an."
        },
        "line.6": {
            "text": "Und lupfte ihre lange,"
        },
        "line.7": {
            "text": "lebendige Zunge nach mir."
        },
        "line.8": {
            "text": "Da war ich vom Donner gerührt."
        },
        "line.9": {
            "text": "Weil alle Schönheit der Welt"
        },
        "line.10": {
            "text": "in einer Hure wohnte."
        },
        "line.11": {
            "text": "Und neben mir im Dunklen stand"
        },
        "line.12": {
            "text": "ein augenrollender Kreole"
        },
        "line.13": {
            "text": "und ein lächelnder Blitzlichtjapaner."
        },
        "line.14": {
            "text": "So daß wir gemeinsam die Menschheit darstellten,"
        },
        "line.15": {
            "text": "vor der Ikone aus Neon,"
        },
        "line.16": {
            "text": "die ihre Schenkel auftat und schloß,"
        },
        "line.17": {
            "text": "noch als ich nach Sachsen zurücklief und meinen"
        },
        "line.18": {
            "text": "armen, armerudernden Schatten"
        },
        "line.19": {
            "text": "schräg an die Wand warf im Lauf."
        }
    }
}