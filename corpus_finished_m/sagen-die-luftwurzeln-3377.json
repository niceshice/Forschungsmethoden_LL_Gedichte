{
    "title": "sagen-die-luftwurzeln-3377",
    "gender": "m",
    "author": "Jürgen  Nendza",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "I"
        },
        "line.2": {
            "text": "Vielleicht"
        },
        "line.3": {
            "text": "ist es das Erzittern,"
        },
        "line.4": {
            "text": "mit dem wir beginnen und enden,"
        },
        "line.5": {
            "text": "während die Augen am Himmel saugen"
        },
        "line.6": {
            "text": "im Rhythmus einer Sprache"
        },
        "line.7": {
            "text": "ohne persönliche Besitzanzeige:"
        },
        "line.8": {
            "text": "Kupfer, Zimt, ein türkisfarbenes"
        },
        "line.9": {
            "text": "Fliegengewicht, sagen die Luftwurzeln,"
        },
        "line.10": {
            "text": "und wir zerstäuben im Lichtfächer"
        },
        "line.11": {
            "text": "des Kolibris, im Nonstoppflug, Jetlag:"
        },
        "line.12": {
            "text": "drei Gramm Flugtöne und rausch,"
        },
        "line.13": {
            "text": "Variationen in Kalliopes Stimme."
        },
        "line.14": {
            "text": "So bleiben wir stehen"
        },
        "line.15": {
            "text": "in der Luft, in einer Schleife"
        },
        "line.16": {
            "text": "ohne toten Umkehrpunkt, während"
        },
        "line.17": {
            "text": "unter uns die Landschaft"
        },
        "line.18": {
            "text": "weiterzieht."
        },
        "line.19": {
            "text": "II"
        },
        "line.20": {
            "text": "Ein Fragebogen"
        },
        "line.21": {
            "text": "ist deine Braue, in deinen Augen"
        },
        "line.22": {
            "text": "das Gespräch der Leuchtkäfer:"
        },
        "line.23": {
            "text": "Sag, wächst uns eine andere Haut,"
        },
        "line.24": {
            "text": "wenn du mich so ansiehst"
        },
        "line.25": {
            "text": "und wir beginnen"
        },
        "line.26": {
            "text": "uns zu steigern, zu verdoppeln:"
        },
        "line.27": {
            "text": "motmot, die Schwingen"
        },
        "line.28": {
            "text": "des Paradieses, rotrot,"
        },
        "line.29": {
            "text": "die Blüten des Flammenbaums,"
        },
        "line.30": {
            "text": "und die Leuchtkäfer fragen:"
        },
        "line.31": {
            "text": "Ist der Kolibri eine Metapher"
        },
        "line.32": {
            "text": "für einen Schwarm um sich selbst"
        },
        "line.33": {
            "text": "kreisender Fische, schillernd"
        },
        "line.34": {
            "text": "im bunten Schlaf, ein Aufglühen"
        },
        "line.35": {
            "text": "der Farben unter den Lidern,"
        },
        "line.36": {
            "text": "wenn wir im Sprechen"
        },
        "line.37": {
            "text": "rotieren: Kommkomm,"
        },
        "line.38": {
            "text": "jeder bleibt für sich"
        },
        "line.39": {
            "text": "in seinem Aufwachraum"
        },
        "line.40": {
            "text": "halbiert."
        },
        "line.41": {
            "text": "III"
        },
        "line.42": {
            "text": "Die Hitze,"
        },
        "line.43": {
            "text": "eine große Hand,"
        },
        "line.44": {
            "text": "gebacken aus Licht. Wir"
        },
        "line.45": {
            "text": "trinken Kokoswasser,"
        },
        "line.46": {
            "text": "hören"
        },
        "line.47": {
            "text": "den Durst, der gelöscht wird"
        },
        "line.48": {
            "text": "längs der Schweißnähte"
        },
        "line.49": {
            "text": "der Körper: Der eigene"
        },
        "line.50": {
            "text": "Name trennt sich"
        },
        "line.51": {
            "text": "auf unter den Luftwurzeln,"
        },
        "line.52": {
            "text": "ist nur ein geteiltes Wort"
        },
        "line.53": {
            "text": "wie Kupfer oder Zimt"
        },
        "line.54": {
            "text": "ohne persönliche Besitzanzeige"
        },
        "line.55": {
            "text": "und ein Vibrieren"
        },
        "line.56": {
            "text": "auf dem Zungengrund"
        },
        "line.57": {
            "text": "in der Rotation"
        },
        "line.58": {
            "text": "der Flügel. Klangschalen"
        },
        "line.59": {
            "text": "sind deine Lippen,"
        },
        "line.60": {
            "text": "an deren Enden das sichtbare"
        },
        "line.61": {
            "text": "Licht verschwindet,"
        },
        "line.62": {
            "text": "wenn nur noch die Zeit"
        },
        "line.63": {
            "text": "mit uns unterwegs ist."
        },
        "line.64": {
            "text": "IV"
        },
        "line.65": {
            "text": "Der Regen"
        },
        "line.66": {
            "text": "bindet seine Schnüre"
        },
        "line.67": {
            "text": "zu einer klopfenden Wand:"
        },
        "line.68": {
            "text": "ein grauer Dauerton"
        },
        "line.69": {
            "text": "liegt über uns, dem Grün,"
        },
        "line.70": {
            "text": "den Dingen: eine Haut,"
        },
        "line.71": {
            "text": "unter der wir uns verlaufen."
        },
        "line.72": {
            "text": "Betäubt, als hätte"
        },
        "line.73": {
            "text": "das gewaltige Alleinsein"
        },
        "line.74": {
            "text": "seine Schleusen geöffnet,"
        },
        "line.75": {
            "text": "faltet unser Atem"
        },
        "line.76": {
            "text": "das Restlicht wie eine Tischdecke"
        },
        "line.77": {
            "text": "zusammen: wir beginnen uns"
        },
        "line.78": {
            "text": "aus der Erinnerung"
        },
        "line.79": {
            "text": "zu begleiten, während wir reden"
        },
        "line.80": {
            "text": "vom Nonstoppflug, eine erklärbare"
        },
        "line.81": {
            "text": "Reihenfolge suchen, einen Handlauf"
        },
        "line.82": {
            "text": "ins Dunkle und niemand"
        },
        "line.83": {
            "text": "mit bloßem Auge"
        },
        "line.84": {
            "text": "die Liebe erkennt."
        },
        "line.85": {
            "text": "V"
        },
        "line.86": {
            "text": "Terracottafliese,"
        },
        "line.87": {
            "text": "der Abdruck deines nassen Fußes."
        },
        "line.88": {
            "text": "Die Gegenwart ist ein Verdunsten"
        },
        "line.89": {
            "text": "in diesem Gebäude aus Hitze"
        },
        "line.90": {
            "text": "und Regen: Feine Luftwege"
        },
        "line.91": {
            "text": "führen ins türkisfarbene"
        },
        "line.92": {
            "text": "Fliegengewicht, durch die Kammern"
        },
        "line.93": {
            "text": "der Knochen, wenn das Erzittern"
        },
        "line.94": {
            "text": "uns füttert jenseits der Lichtschranken."
        },
        "line.95": {
            "text": "Reden wir also vom Kolibri,"
        },
        "line.96": {
            "text": "der tausendmal schon"
        },
        "line.97": {
            "text": "gesagt worden ist, vom Tisch,"
        },
        "line.98": {
            "text": "der tausendmal schon"
        },
        "line.99": {
            "text": "gesagt worden ist, von tausendmal:"
        },
        "line.100": {
            "text": "Nie haben wir genug Hände"
        },
        "line.101": {
            "text": "uns zu begreifen."
        },
        "line.102": {
            "text": "VI"
        },
        "line.103": {
            "text": "Der Abend"
        },
        "line.104": {
            "text": "versammelt sich"
        },
        "line.105": {
            "text": "im Regenbaum. Gelb lockt"
        },
        "line.106": {
            "text": "zwischen Blattpaaren"
        },
        "line.107": {
            "text": "die Königin der Nacht"
        },
        "line.108": {
            "text": "wie eine verlassene"
        },
        "line.109": {
            "text": "Empfindung, die uns entdeckt,"
        },
        "line.110": {
            "text": "wenn der Schlaf uns spricht:"
        },
        "line.111": {
            "text": "Das Laken haben wir gespannt"
        },
        "line.112": {
            "text": "und uns in der Umdrehung."
        },
        "line.113": {
            "text": "Kontaktschlaf, so gehen wir auf"
        },
        "line.114": {
            "text": "Federfühlung, gefiedert"
        },
        "line.115": {
            "text": "mit dem Radius der Entfernung,"
        },
        "line.116": {
            "text": "bis wir bei Tageslicht"
        },
        "line.117": {
            "text": "ermüden unter der Last"
        },
        "line.118": {
            "text": "der getrennten"
        },
        "line.119": {
            "text": "Körper."
        },
        "line.120": {
            "text": "VII"
        },
        "line.121": {
            "text": "Ein Schwirrflug"
        },
        "line.122": {
            "text": "ist das Stakkato der Fristen:"
        },
        "line.123": {
            "text": "Tausendmal saugen die Augen"
        },
        "line.124": {
            "text": "am Himmel, werfen wir"
        },
        "line.125": {
            "text": "Luftwurzeln aus, suchen"
        },
        "line.126": {
            "text": "Tiefenwärme mit einem Refrain"
        },
        "line.127": {
            "text": "aus Gesagtem und Stille"
        },
        "line.128": {
            "text": "am Ende der Skala"
        },
        "line.129": {
            "text": "des sichtbaren Lichts. Tausendmal"
        },
        "line.130": {
            "text": "wischen Wolken über alles"
        },
        "line.131": {
            "text": "hinweg, sieht das Sterben"
        },
        "line.132": {
            "text": "uns zu im Spiegel,"
        },
        "line.133": {
            "text": "und jedes Mal noch"
        },
        "line.134": {
            "text": "wölbt sich dein Atem"
        },
        "line.135": {
            "text": "über dieses Bild hinaus,"
        },
        "line.136": {
            "text": "spannt deine Brust"
        },
        "line.137": {
            "text": "Bogen, Braue und Bucht:"
        },
        "line.138": {
            "text": "Kommkomm,"
        },
        "line.139": {
            "text": "sagt das Erzittern,"
        },
        "line.140": {
            "text": "lass uns balancieren"
        },
        "line.141": {
            "text": "auf dieser Frequenz"
        },
        "line.142": {
            "text": "wo wir enden."
        },
        "line.143": {
            "text": "VIII"
        },
        "line.144": {
            "text": "Vielleicht"
        },
        "line.145": {
            "text": "wird uns einmal gefallen"
        },
        "line.146": {
            "text": "die Art, wie Ameisen"
        },
        "line.147": {
            "text": "aus unserem Schatten treten."
        },
        "line.148": {
            "text": "Einmal, wenn deine Haut"
        },
        "line.149": {
            "text": "nicht mehr durchblutet ist,"
        },
        "line.150": {
            "text": "wird sie weiß sein"
        },
        "line.151": {
            "text": "wie das Papier, auf dem ich"
        },
        "line.152": {
            "text": "schreibe, auf dem du"
        },
        "line.153": {
            "text": "liest, weiß und still:"
        },
        "line.154": {
            "text": "Ein abgelegtes Hochzeitskleid"
        },
        "line.155": {
            "text": "wird sie sein, immer schon"
        },
        "line.156": {
            "text": "mit dir beschrieben,"
        },
        "line.157": {
            "text": "und wenn der Umkehrpunkt"
        },
        "line.158": {
            "text": "gestorben ist, das Laken"
        },
        "line.159": {
            "text": "in letzter Umdrehung verharrt"
        },
        "line.160": {
            "text": "unter einer Landschaft"
        },
        "line.161": {
            "text": "aus Träumen,"
        },
        "line.162": {
            "text": "die über uns hinwegzieht,"
        },
        "line.163": {
            "text": "dann frag ich dich:"
        },
        "line.164": {
            "text": "wieviel Belichtungszeit"
        },
        "line.165": {
            "text": "braucht das Glück, bevor"
        },
        "line.166": {
            "text": "die Augen uns schließen."
        }
    }
}