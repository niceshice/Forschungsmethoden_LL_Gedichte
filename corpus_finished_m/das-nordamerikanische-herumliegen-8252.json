{
    "title": "das-nordamerikanische-herumliegen-8252",
    "gender": "m",
    "author": "Ror Wolf",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "Ein Fischer, ein Forscher, ein Farmer,"
        },
        "line.2": {
            "text": "ein Geiger, ein Dirigent,"
        },
        "line.3": {
            "text": "ein reicher Friseur und ein armer,"
        },
        "line.4": {
            "text": "die liegen in Maryland."
        },
        "line.5": {
            "text": "Ein Koch liegt am Rand von Montana,"
        },
        "line.6": {
            "text": "ein Fleischer liegt bleich in Vermont,"
        },
        "line.7": {
            "text": "ein Heizer in Louisiana,"
        },
        "line.8": {
            "text": "schwarz hinter dem Horizont."
        },
        "line.9": {
            "text": "In Oregon liegt ein verletzter"
        },
        "line.10": {
            "text": "Konditor, in Tennessee"
        },
        "line.11": {
            "text": "ein Doktor, ein ganz entsetzter"
        },
        "line.12": {
            "text": "Doktor der Philosophie."
        },
        "line.13": {
            "text": "In South Carolina ein spitzer"
        },
        "line.14": {
            "text": "Dentist, in Kentucky, ganz matt,"
        },
        "line.15": {
            "text": "ein Makler. Ein Nachtclubbesitzer"
        },
        "line.16": {
            "text": "liegt platt in Connecticut."
        },
        "line.17": {
            "text": "In Illinois liegt ein Vertreter"
        },
        "line.18": {
            "text": "in seinem Hotel in der Nacht,"
        },
        "line.19": {
            "text": "und dieser Vertreter wird später"
        },
        "line.20": {
            "text": "im Liegen ums Leben gebracht."
        },
        "line.21": {
            "text": "In Maine liegt ein Autoverkäufer."
        },
        "line.22": {
            "text": "In Michigan liegt ein Bankier."
        },
        "line.23": {
            "text": "Ein Wirt und ein Langstreckenläufer"
        },
        "line.24": {
            "text": "die liegen in Texas im Schnee."
        },
        "line.25": {
            "text": "In Georgia ein Reiseleiter."
        },
        "line.26": {
            "text": "In Oklahoma ein Lord."
        },
        "line.27": {
            "text": "In Florida undsoweiter."
        },
        "line.28": {
            "text": "In Washington undsofort."
        },
        "line.29": {
            "text": "Ein Dunst liegt über Dakota,"
        },
        "line.30": {
            "text": "und über Nevada liegt Rauch"
        },
        "line.31": {
            "text": "und Qualm über Minnesota."
        },
        "line.32": {
            "text": "Am Ende liege ich auch."
        },
        "line.33": {
            "text": "2005"
        }
    }
}