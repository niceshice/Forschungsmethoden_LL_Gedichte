{
    "title": "farben-12343",
    "gender": "m",
    "author": "David  Krause",
    "author_birth": "1988",
    "poem": {
        "line.1": {
            "text": "ich werde einen becher füllen"
        },
        "line.2": {
            "text": "am fluss wo du und ich"
        },
        "line.3": {
            "text": "vom fließen sprachen. ich werde"
        },
        "line.4": {
            "text": "uns so malen wie wir waren"
        },
        "line.5": {
            "text": "in den jahren danach:"
        },
        "line.6": {
            "text": "ein raum leer bis auf uns"
        },
        "line.7": {
            "text": "ein regennasses fenster"
        },
        "line.8": {
            "text": "dahinter die stadt."
        },
        "line.9": {
            "text": "wir werden schlamm sein: zwei"
        },
        "line.10": {
            "text": "mit lichterfarben vermischte"
        },
        "line.11": {
            "text": "körper. wir werden"
        },
        "line.12": {
            "text": "uns mit den fingerkuppen berühren"
        },
        "line.13": {
            "text": "ich eine rückenfigur"
        },
        "line.14": {
            "text": "du mit blick aus dem bild."
        },
        "line.15": {
            "text": "das weiß in deinen augen wird"
        },
        "line.16": {
            "text": "die letzte leerstelle sein"
        },
        "line.17": {
            "text": "und das papier das uns hält"
        },
        "line.18": {
            "text": "wird wellen schlagen"
        }
    }
}