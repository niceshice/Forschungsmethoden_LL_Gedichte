{
    "title": "der-letzte-ball-8249",
    "gender": "m",
    "author": "Ror Wolf",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "Mit dem Fuß, so weit, so weit:"
        },
        "line.2": {
            "text": "dort am Abend fliegt der harte"
        },
        "line.3": {
            "text": "Ball, dort wo es schreit und schneit,"
        },
        "line.4": {
            "text": "steigt er auf und schwebt, der zarte"
        },
        "line.5": {
            "text": "aufgepumpte angestarrte"
        },
        "line.6": {
            "text": "Ball rasch in die Einsamkeit."
        },
        "line.7": {
            "text": "Weit am Tor vorbei, vorbei,"
        },
        "line.8": {
            "text": "hoch, als ob Papier es wäre,"
        },
        "line.9": {
            "text": "fliegt er leicht und sorgenfrei"
        },
        "line.10": {
            "text": "aufwärts in die wolkenschwere"
        },
        "line.11": {
            "text": "atemlose menschenleere"
        },
        "line.12": {
            "text": "Luft, hinaus aus dem Geschrei."
        },
        "line.13": {
            "text": "Durch den Wind davon, davon,"
        },
        "line.14": {
            "text": "hoch, so hoch sieht man den weichen"
        },
        "line.15": {
            "text": "Ball ganz sanft und ohne Ton,"
        },
        "line.16": {
            "text": "angestrahlt, den mondscheinbleichen"
        },
        "line.17": {
            "text": "Ball fort in die Ferne streichen:"
        },
        "line.18": {
            "text": "Weit entfernt von allem schon."
        },
        "line.19": {
            "text": "1981"
        }
    }
}