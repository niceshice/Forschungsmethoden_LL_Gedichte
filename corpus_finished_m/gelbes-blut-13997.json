{
    "title": "gelbes-blut-13997",
    "gender": "m",
    "author": "Thomas Böhme",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Gelbes Blut des Sommers"
        },
        "line.2": {
            "text": "das noch im Abdomen der Bienen hämmert."
        },
        "line.3": {
            "text": "Aus den klebrigen Blüten der Ölweiden"
        },
        "line.4": {
            "text": "steigt der sündige Duft"
        },
        "line.5": {
            "text": "der die Himmel rammdösig macht."
        },
        "line.6": {
            "text": "Wildes Gras säumt die Wege"
        },
        "line.7": {
            "text": "die mit Mäuse- und Krötenmumien"
        },
        "line.8": {
            "text": "markiert sind."
        },
        "line.9": {
            "text": "Dem Luchsäugigen summt die Haut"
        },
        "line.10": {
            "text": "wenn seine Sohlen die nackte Erde berühren."
        },
        "line.11": {
            "text": "Es kommt nicht mehr häufig vor"
        },
        "line.12": {
            "text": "daß aus fiebrigem Buschwerk"
        },
        "line.13": {
            "text": "eine Klauenhand fährt"
        },
        "line.14": {
            "text": "und seinen Knöchel"
        },
        "line.15": {
            "text": "mit eisernem Griff umklammert."
        },
        "line.16": {
            "text": "Doch es kommt vor."
        }
    }
}