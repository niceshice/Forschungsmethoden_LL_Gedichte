{
    "title": "die-bewohner-901",
    "gender": "m",
    "author": "Jürgen Theobaldy",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Nur die Bewohner machen"
        },
        "line.2": {
            "text": "eine Wohnung fröhlich,"
        },
        "line.3": {
            "text": "aber du bist nicht da,"
        },
        "line.4": {
            "text": "die Heizung ist abgedreht"
        },
        "line.5": {
            "text": "und kühl sickert die Luft"
        },
        "line.6": {
            "text": "durch den Spalt im Fenster."
        },
        "line.7": {
            "text": "Ich will nicht sagen, daß ich"
        },
        "line.8": {
            "text": "dich austauschen könnte"
        },
        "line.9": {
            "text": "gegen irgend jemanden sonst,"
        },
        "line.10": {
            "text": "ähnlich dir oder ganz"
        },
        "line.11": {
            "text": "anders. Du bist eine"
        },
        "line.12": {
            "text": "von Millionen, aber auch ich"
        },
        "line.13": {
            "text": "bin einer von Millionen."
        },
        "line.14": {
            "text": "Wären wir soweit (du und ich"
        },
        "line.15": {
            "text": "und alle, die wir nicht kennen),"
        },
        "line.16": {
            "text": "die Türen nicht abzuschließen,"
        },
        "line.17": {
            "text": "wenn wir wegfahren für länger,"
        },
        "line.18": {
            "text": "wer weiß, ich wäre eingetreten"
        },
        "line.19": {
            "text": "in einen fröhlichen Kreis."
        },
        "line.20": {
            "text": "So blicke ich auf den Teebeutel,"
        },
        "line.21": {
            "text": "vertrocknet im Aschenbecher,"
        },
        "line.22": {
            "text": "stehe im Mantel herum"
        },
        "line.23": {
            "text": "und vermisse dich, die ich liebe,"
        },
        "line.24": {
            "text": "vielleicht mehr"
        },
        "line.25": {
            "text": "als uns lieb sein kann."
        }
    }
}