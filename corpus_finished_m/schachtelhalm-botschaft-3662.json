{
    "title": "schachtelhalm-botschaft-3662",
    "gender": "m",
    "author": "Günter  Kunert",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Wie Schneegestöber Menschenmassen"
        },
        "line.2": {
            "text": "die fallen über den Planeten her"
        },
        "line.3": {
            "text": "und fressen seine Fülle leer"
        },
        "line.4": {
            "text": "um Wüsten hinter sich zu lassen."
        },
        "line.5": {
            "text": "Hingegen er: Aus Zeitenferne."
        },
        "line.6": {
            "text": "Zu Stein geworden und uralt"
        },
        "line.7": {
            "text": "als Ausdruck pflanzlicher Gestalt"
        },
        "line.8": {
            "text": "und wie von einem fremden Sterne."
        },
        "line.9": {
            "text": "Beweisstück für die Flüchtigkeiten"
        },
        "line.10": {
            "text": "der Wunder ungeheurer Zahl."
        },
        "line.11": {
            "text": "Durch die Äonen ein Signal:"
        },
        "line.12": {
            "text": "Zu spät da wir uns schon entgleiten."
        }
    }
}