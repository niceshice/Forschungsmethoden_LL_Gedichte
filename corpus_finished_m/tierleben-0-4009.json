{
    "title": "tierleben-0-4009",
    "gender": "m",
    "author": "Felix Philipp Ingold",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "0"
        },
        "line.2": {
            "text": "Im Anfang war"
        },
        "line.3": {
            "text": "das Wort ein Ort. Noch"
        },
        "line.4": {
            "text": "fern vom Namen"
        },
        "line.5": {
            "text": "und noch ungeschieden"
        },
        "line.6": {
            "text": "vom Ruch  Geist"
        },
        "line.7": {
            "text": "wie Bewegung!  der Natur."
        },
        "line.8": {
            "text": "Ruht nah"
        },
        "line.9": {
            "text": "dem Rätsel das die Lösung"
        },
        "line.10": {
            "text": "ist. Das Knirschen"
        },
        "line.11": {
            "text": "dieses oder jenes Kontinents."
        },
        "line.12": {
            "text": "Das Wummern der Meere."
        },
        "line.13": {
            "text": "Das Pochen wo"
        },
        "line.14": {
            "text": "das Blut beginnt. Wo der"
        },
        "line.15": {
            "text": "Ja!-Leib klart. Und"
        },
        "line.16": {
            "text": "wie im Märch..."
        },
        "line.17": {
            "text": "Das Spieglein an der Wand."
        },
        "line.18": {
            "text": "Wie's tobt. Die Schönheit im Auge"
        },
        "line.19": {
            "text": "des Andern."
        }
    }
}