{
    "title": "keine-schleife-ohne-knoten-14799",
    "gender": "m",
    "author": "Eberhard Häfner",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "Wanderer"
        },
        "line.2": {
            "text": "der du dich anders"
        },
        "line.3": {
            "text": "dich häufig umdrehst, nach jeder Biege"
        },
        "line.4": {
            "text": "umläufig ein Fries, diesbezüglich"
        },
        "line.5": {
            "text": "in Stein gebannt die Geometrie der Winkel"
        },
        "line.6": {
            "text": "ließ den großen Mäander versanden"
        },
        "line.7": {
            "text": "die Milesier auswandern"
        },
        "line.8": {
            "text": "mit dem Zipperlein am Bein, treppab"
        },
        "line.9": {
            "text": "treppauf die kalte Progression"
        },
        "line.10": {
            "text": "stufenweise, bevor das geflügelte Wort"
        },
        "line.11": {
            "text": "abstürzt"
        },
        "line.12": {
            "text": "und auf die Schnürsenkel treten, die losen Enden"
        },
        "line.13": {
            "text": "Schlepptau der Füße, aus Pfützen trinken"
        },
        "line.14": {
            "text": "willst du kein Blutsauger sein"
        }
    }
}