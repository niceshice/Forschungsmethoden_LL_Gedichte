{
    "title": "ziemlich-frei-nach-brecht-3689",
    "gender": "m",
    "author": "Yaak  Karsunke",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "als das haus einstürzte vor dessen"
        },
        "line.2": {
            "text": "baufälligkeit sie gewarnt worden waren"
        },
        "line.3": {
            "text": "seit langem & mehrfach & immer vergeblich"
        },
        "line.4": {
            "text": "klammerten sich einige von ihnen"
        },
        "line.5": {
            "text": "noch im fallen an einzelne balken"
        },
        "line.6": {
            "text": "& lobten die pläne der architekten"
        },
        "line.7": {
            "text": "rühmten auch das fundament in dessen"
        },
        "line.8": {
            "text": "sich rasch verbreiternden rissen"
        },
        "line.9": {
            "text": "sie am ende verschwanden"
        },
        "line.10": {
            "text": "& priesen noch aus der tiefe"
        },
        "line.11": {
            "text": "das schützende dach dessen trümmer"
        },
        "line.12": {
            "text": "sie schließlich erschlugen"
        }
    }
}