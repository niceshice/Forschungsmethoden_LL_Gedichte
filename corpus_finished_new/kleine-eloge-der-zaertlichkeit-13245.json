{
    "title": "kleine-eloge-der-zaertlichkeit-13245",
    "gender": "w",
    "author": "Ilma Rakusa",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Mit der Fingerkuppe über eine Wange fahren,"
        },
        "line.2": {
            "text": "über ein Blütenblatt streichen,"
        },
        "line.3": {
            "text": "die Borke eines Baumes berühren."
        },
        "line.4": {
            "text": "Wasser im Handteller sammeln und es"
        },
        "line.5": {
            "text": "langsam zwischen den Fingern hindurchrinnen lassen."
        },
        "line.6": {
            "text": "Den Finger in Eigelb tunken, damit vorsichtig einen Teig bestreichen."
        },
        "line.7": {
            "text": "Nase an Nase reiben, dazu den passenden Zauberspruch aufsagen."
        },
        "line.8": {
            "text": "Den Nacken des Kindes streicheln, seinen feinen Haaransatz."
        },
        "line.9": {
            "text": "Barfuss über einen Seidenteppich gehen."
        },
        "line.10": {
            "text": "Das Fell des alten Hundes kraulen."
        },
        "line.11": {
            "text": "Die chinesische Porzellantasse küssen."
        },
        "line.12": {
            "text": "Sich nackt ins Moosbett legen."
        },
        "line.13": {
            "text": "Zerknittertes Seidenpapier glattstreichen."
        },
        "line.14": {
            "text": "Auf dem Klavier leise einen C-Dur-Akkord anschlagen."
        },
        "line.15": {
            "text": "Die Rosen häufeln."
        },
        "line.16": {
            "text": "Mit dem Zeh die Kniehkehle des Freundes kitzeln."
        },
        "line.17": {
            "text": "Seinen Rücken massieren."
        },
        "line.18": {
            "text": "Zuckerwatte schlecken."
        },
        "line.19": {
            "text": "Bartstoppeln betasten."
        },
        "line.20": {
            "text": "Die kleine Fingerwunde sauberlecken."
        },
        "line.21": {
            "text": "Schuppen von Mutters Mantelkragen abschnippen."
        },
        "line.22": {
            "text": "Den flaumigen Pfirsich liebkosen."
        },
        "line.23": {
            "text": "Die Sichel der Nagelkuppe ins Mehl drücken."
        },
        "line.24": {
            "text": "Winzige Muscheln aus dem Sand klauben. Sie blankreiben."
        },
        "line.25": {
            "text": "Das Perserkissen tätscheln."
        },
        "line.26": {
            "text": "Eine Blume auf die beschlagene Scheibe zeichnen."
        },
        "line.27": {
            "text": "Aus heissem Kerzenwachs Kugeln kneten."
        },
        "line.28": {
            "text": "Den fremden Alten an der Hand über die Strasse geleiten."
        },
        "line.29": {
            "text": "Vogelfutter streuen."
        },
        "line.30": {
            "text": "Die Schneeflocken auf dem Gesicht zergehen lassen."
        },
        "line.31": {
            "text": "Lichthasen fangen."
        },
        "line.32": {
            "text": "Den japanischen Pinsel zausen."
        }
    }
}