{
    "title": "antonius-eskalation-i-und-ii-2598",
    "gender": "m",
    "author": "Hans Thill",
    "author_birth": "1954",
    "poem": {
        "line.1": {
            "text": "Antonius-Eskalation I"
        },
        "line.2": {
            "text": "Auf sandigen Füßen schwebten durch die"
        },
        "line.3": {
            "text": "Trockenheit des Dunkels"
        },
        "line.4": {
            "text": "das ihre leichten Körper trug"
        },
        "line.5": {
            "text": "glitten mit der Fülle ihrer zitternden"
        },
        "line.6": {
            "text": "Hinterbacken lässig daher mit"
        },
        "line.7": {
            "text": "ihren pastosen Leberflecken mit ihren"
        },
        "line.8": {
            "text": "stolzen Gesichtern mit ihren Augen"
        },
        "line.9": {
            "text": "aus"
        },
        "line.10": {
            "text": "zeigten sich\tein blaues Tuch"
        },
        "line.11": {
            "text": "um den Hals lagen die Nackten"
        },
        "line.12": {
            "text": "auf der Wiese inmitten von Kühen"
        },
        "line.13": {
            "text": "im Flutlicht"
        },
        "line.14": {
            "text": "und auf den Kühlern der Parkplätze"
        },
        "line.15": {
            "text": "trugen die Schönen große Lippen"
        },
        "line.16": {
            "text": "in die er keine Rosen legte"
        },
        "line.17": {
            "text": "und wenn sie ihn ansprachen"
        },
        "line.18": {
            "text": "war es ein helles Wasser"
        },
        "line.19": {
            "text": "das lächelnd vorbeifloß"
        },
        "line.20": {
            "text": "Antonius-Eskalation II"
        },
        "line.21": {
            "text": "Ihr langstieligen Hausfrauen"
        },
        "line.22": {
            "text": "an einem Samstag in den Häuserfronten"
        },
        "line.23": {
            "text": "hängend beim Wischen der"
        },
        "line.24": {
            "text": "Fenster in der Frühjahrssonne"
        },
        "line.25": {
            "text": "Stadtluft atmend"
        }
    }
}