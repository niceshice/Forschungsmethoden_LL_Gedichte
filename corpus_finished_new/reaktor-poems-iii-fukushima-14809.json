{
    "title": "reaktor-poems-iii-fukushima-14809",
    "gender": "m",
    "author": "Paul-Henri  Campbell",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "ich auf dem sofa / streame die katastrophe / beim cappuccino"
        },
        "line.2": {
            "text": "live laufen sie ein / fukushima bei youtube /"
        },
        "line.3": {
            "text": "as it happened full"
        },
        "line.4": {
            "text": "posttraumatische / automatisierte bildflut / auch 911"
        },
        "line.5": {
            "text": "as it happened full"
        },
        "line.6": {
            "text": "/ oder"
        },
        "line.7": {
            "text": "complete"
        },
        "line.8": {
            "text": "''8:10:12 / rohe wirklichkeit"
        },
        "line.9": {
            "text": "rohe abdrücke / staub und gestein am vesuv / überlagert hang"
        },
        "line.10": {
            "text": "zum suchleisten stich / probebohrungen wortkern / gemovete bilder"
        },
        "line.11": {
            "text": "zufällige per- / spektiven oft verwackelt / auf rauch auf asche"
        },
        "line.12": {
            "text": "das video"
        },
        "line.13": {
            "text": "first"
        },
        "line.14": {
            "text": "/"
        },
        "line.15": {
            "text": "draft of history"
        },
        "line.16": {
            "text": "steht / : siehst du die unschuld"
        },
        "line.17": {
            "text": "das fassungslose / simultan übersetzte / bildtondokument"
        },
        "line.18": {
            "text": "atomisiert"
        },
        "line.19": {
            "text": "save"
        },
        "line.20": {
            "text": "/ kontinuum zeit zäsur /"
        },
        "line.21": {
            "text": "lots of weighing in"
        },
        "line.22": {
            "text": "bei studios live / rom new york berlin cairo / peking perth lima"
        },
        "line.23": {
            "text": "alle screens leuchten / stopp aller spaltungen welt / eins im ereignis"
        },
        "line.24": {
            "text": "fohlen statt walfleisch / sushi meiden sake vor- / jahr"
        },
        "line.25": {
            "text": "kanpai"
        },
        "line.26": {
            "text": "trinke"
        },
        "line.27": {
            "text": "oder was ist sonst /"
        },
        "line.28": {
            "text": "shin gojira"
        },
        "line.29": {
            "text": "für mich hier / ich auf dem sofa"
        },
        "line.30": {
            "text": "entrückte alpwelt / schock bis ich sie wegklicke / und plinius lese"
        }
    }
}