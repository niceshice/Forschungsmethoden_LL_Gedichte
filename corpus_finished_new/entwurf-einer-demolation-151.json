{
    "title": "entwurf-einer-demolation-151",
    "gender": "m",
    "author": "Gerhard Falkner",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "ICH BIN ES, der Dichter,"
        },
        "line.2": {
            "text": "ich bin es nicht wert, daß man mir den Dreck"
        },
        "line.3": {
            "text": "hinterher wirft, den ich von mir gebe,"
        },
        "line.4": {
            "text": "ich bin, so steht es auf dem Papier,"
        },
        "line.5": {
            "text": "die Gestalt,"
        },
        "line.6": {
            "text": "an der die Sprache sich abwischt,"
        },
        "line.7": {
            "text": "der Dauergast"
        },
        "line.8": {
            "text": "in ihren Elendsvierteln"
        },
        "line.9": {
            "text": "es ist so einfach"
        },
        "line.10": {
            "text": "meinem Hirn über die Schultern zu gucken"
        },
        "line.11": {
            "text": "und auf die gestirnte Leere zu blicken"
        },
        "line.12": {
            "text": "die mein Denken überschattet"
        },
        "line.13": {
            "text": "was immer ich anschneide"
        },
        "line.14": {
            "text": "ist allein schon dadurch"
        },
        "line.15": {
            "text": "blamiert bis auf die Knochen"
        },
        "line.16": {
            "text": "kaum mache ich den Mund auf"
        },
        "line.17": {
            "text": "schon schallen mir die glücklichsten Zeiten"
        },
        "line.18": {
            "text": "entgegen"
        },
        "line.19": {
            "text": "(glücklich im Sinne von unglücklich)"
        },
        "line.20": {
            "text": "ich drücke die Türklinke"
        },
        "line.21": {
            "text": "ich öffne ein Schubfach, Nacht schlägt"
        },
        "line.22": {
            "text": "mir entgegen aus dem Schubfach,"
        },
        "line.23": {
            "text": "Apfelduft und Nacht."
        },
        "line.24": {
            "text": "Immer wieder entschlüpft etwas Dunkles,"
        },
        "line.25": {
            "text": "für das ich zu flach bin."
        },
        "line.26": {
            "text": "zu unbekannt, zu geboren."
        },
        "line.27": {
            "text": "Ich möchte einen schlafen gehen"
        },
        "line.28": {
            "text": "aber wer bin ich, das zu wollen"
        },
        "line.29": {
            "text": "Ich greife zum Haar, das Haar brennt"
        },
        "line.30": {
            "text": "nicht, keine Flammen, kein Nachmittag,"
        },
        "line.31": {
            "text": "an dem jemand stirbt,"
        },
        "line.32": {
            "text": "stirbt an seinem bisher, stirbt an der Frage,"
        },
        "line.33": {
            "text": "warum etwas ist und nicht vielmehr nichts."
        },
        "line.34": {
            "text": "(eine Frage, die dasteht, wie gedruckt!)"
        },
        "line.35": {
            "text": "ich liege im Zimmer"
        },
        "line.36": {
            "text": "die Welt ist aufgeblasen wie ein Ball"
        },
        "line.37": {
            "text": "die Augendeckel sind hochgeklappt."
        },
        "line.38": {
            "text": "Draußen stehen die Bäume, die grünen Bläser"
        },
        "line.39": {
            "text": "abgeriegelt von den Geigenklängen"
        },
        "line.40": {
            "text": "dahinter der große Hintergrund meines Lebens"
        },
        "line.41": {
            "text": "hell und hohl"
        },
        "line.42": {
            "text": "da endlich betritt sie das Zimmer"
        },
        "line.43": {
            "text": "sie, die in jeder Frau sich wiederholt"
        },
        "line.44": {
            "text": "sie, die dasteht wie gedruckt"
        },
        "line.45": {
            "text": "sie, die mich sieht und nicht vielmehr nicht sieht."
        },
        "line.46": {
            "text": "Zwischen Tür und Angel entdeckt sie ihre Neugierde"
        },
        "line.47": {
            "text": "sie legt ihre Hände voller Virtuosität"
        },
        "line.48": {
            "text": "auf ihre Rippen,"
        },
        "line.49": {
            "text": "Rippen, die sie hungrig und kurzlebig"
        },
        "line.50": {
            "text": "erscheinen lassen."
        },
        "line.51": {
            "text": "Er, der über sich selbst hinaus auch noch ich ist,"
        },
        "line.52": {
            "text": "sieht das, sieht wie"
        },
        "line.53": {
            "text": "sie fragt: was geht hier vor?"
        },
        "line.54": {
            "text": "Er sagt ich sage: halb drei!"
        },
        "line.55": {
            "text": "und ziehe durch diese Zahl"
        },
        "line.56": {
            "text": "eine tote Hortensie. Da erzählt sie:"
        },
        "line.57": {
            "text": "Mein schmaler Gatte kommt auf mich zu"
        },
        "line.58": {
            "text": "und sagt: sei froh, daß du tot bist."
        },
        "line.59": {
            "text": "Für mich, sage ich, sagt sie, bin ich nicht"
        },
        "line.60": {
            "text": "tot, für mich ist es nur spät, schon"
        },
        "line.61": {
            "text": "halb drei"
        },
        "line.62": {
            "text": "die Stunden sterben wie die Fliegen"
        },
        "line.63": {
            "text": "sie fragt, was geht hier eigentlich vor"
        },
        "line.64": {
            "text": "ich sage, ich werde gerade selbstbefriedigt!"
        },
        "line.65": {
            "text": "damit beginnt der Abstieg"
        },
        "line.66": {
            "text": "aus der Höhe der Reflexion"
        },
        "line.67": {
            "text": "in die Tiefe der Befleckung."
        },
        "line.68": {
            "text": "Aber, sagt sie, das geht nicht"
        },
        "line.69": {
            "text": "ich bin doch kein Sack,"
        },
        "line.70": {
            "text": "den man sich in die Tür hängt"
        },
        "line.71": {
            "text": "ich werde jetzt heiraten gehen"
        },
        "line.72": {
            "text": "ich geh auf die Straße"
        },
        "line.73": {
            "text": "und heirate ich aber,"
        },
        "line.74": {
            "text": "ich kann nur beteuern:"
        },
        "line.75": {
            "text": "ich habe das Gedicht nicht gewollt,"
        },
        "line.76": {
            "text": "wie ein Vers liege ich nachts"
        },
        "line.77": {
            "text": "auf dem Rücken, aufgedeckt, nicht zuende"
        },
        "line.78": {
            "text": "gedacht, wie ein trockener Teebeutel,"
        },
        "line.79": {
            "text": "wie das herunterhängende rote Ende"
        },
        "line.80": {
            "text": "eines nicht mehr dichtbaren"
        },
        "line.81": {
            "text": "Gedankenfadens"
        }
    }
}