{
    "title": "psalmen-auszug-anfang-4743",
    "gender": "m",
    "author": "SAID",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "herr"
        },
        "line.2": {
            "text": "du kannst alles anbeten"
        },
        "line.3": {
            "text": "neben mir"
        },
        "line.4": {
            "text": "denn ich habe den anspruch der einzigartigkeit"
        },
        "line.5": {
            "text": "aufgegeben"
        },
        "line.6": {
            "text": "um nicht im eigenen licht zu erstarren"
        },
        "line.7": {
            "text": "und ich bitte dich oh herr"
        },
        "line.8": {
            "text": "verrate mir alle deine namen"
        },
        "line.9": {
            "text": "auch den letzten"
        },
        "line.10": {
            "text": "den verborgenen"
        },
        "line.11": {
            "text": "herr"
        },
        "line.12": {
            "text": "entzweie dich"
        },
        "line.13": {
            "text": "für den abtrünnigen der ich bin"
        },
        "line.14": {
            "text": "für meine zornlosen hände"
        },
        "line.15": {
            "text": "für meine selektive treue"
        },
        "line.16": {
            "text": "die alles verrät"
        },
        "line.17": {
            "text": "bis auf träume und gebete"
        },
        "line.18": {
            "text": "herr"
        },
        "line.19": {
            "text": "laß uns das gespräch wieder aufnehmen"
        },
        "line.20": {
            "text": "nach langem erzwungenem schweigen"
        },
        "line.21": {
            "text": "nachdem du deine geschöpfe denaturiert hast"
        },
        "line.22": {
            "text": "in auschwitz"
        },
        "line.23": {
            "text": "in hiroshima"
        },
        "line.24": {
            "text": "in halabtsche"
        },
        "line.25": {
            "text": "in srebrenica"
        },
        "line.26": {
            "text": "gehst du nun auf die knie vor den opfern?"
        },
        "line.27": {
            "text": "und vor den tätern auch?"
        },
        "line.28": {
            "text": "und glaubst du"
        },
        "line.29": {
            "text": "daß wir die Versuchung zu einer noch radikaleren"
        },
        "line.30": {
            "text": "liebe überstehen"
        },
        "line.31": {
            "text": "ohne dein wort?"
        },
        "line.32": {
            "text": "siehe oh herr"
        },
        "line.33": {
            "text": "ich singe kein lob auf dich"
        },
        "line.34": {
            "text": "ich suche dich"
        },
        "line.35": {
            "text": "mit meinen gliedern"
        },
        "line.36": {
            "text": "die ich eigens für dich gezüchtet habe"
        },
        "line.37": {
            "text": "denn ich will über dein wort wachen"
        },
        "line.38": {
            "text": "auf daß die liebe neu entdeckt werde"
        },
        "line.39": {
            "text": "und wir unsere Wildheit zurückgewinnen"
        }
    }
}