{
    "title": "abwendig-haengt-der-mond-im-dunst-1284",
    "gender": "w",
    "author": "Christine Lavant",
    "author_birth": "1915",
    "poem": {
        "line.1": {
            "text": "Abwendig hängt der Mond im Dunst,"
        },
        "line.2": {
            "text": "mein Herz geht durch die Feuersbrunst"
        },
        "line.3": {
            "text": "in glasig harte Kälte."
        },
        "line.4": {
            "text": "Von einer frühen Älte"
        },
        "line.5": {
            "text": "befallen sitz ich träg und krank"
        },
        "line.6": {
            "text": "auf der verlaßnen Bahnhofsbank"
        },
        "line.7": {
            "text": "und fürcht mich aufzustehen."
        },
        "line.8": {
            "text": "Was ist mir denn geschehen?..."
        },
        "line.9": {
            "text": "Das denk ich immer vor mich her,"
        },
        "line.10": {
            "text": "doch oben ist die Stelle leer,"
        },
        "line.11": {
            "text": "die das noch wissen sollte."
        },
        "line.12": {
            "text": "Wie schwer wiegt das verkohlte"
        },
        "line.13": {
            "text": "steinharte Ding da in der Brust..."
        },
        "line.14": {
            "text": "Noch gestern hab ich mehr gewußt,"
        },
        "line.15": {
            "text": "es war so wie ein Messer."
        },
        "line.16": {
            "text": "Der Schmerz ist heute besser"
        },
        "line.17": {
            "text": "und morgen ist er sicherlich"
        },
        "line.18": {
            "text": "nur mehr so wie ein Nadelstich"
        },
        "line.19": {
            "text": "muß jetzt wohl schlafen gehen."
        },
        "line.20": {
            "text": "Was ist mir denn geschehen?..."
        },
        "line.21": {
            "text": "Abwendig sinkt der Mond im Wald,"
        },
        "line.22": {
            "text": "bis in die Seele ist mir kalt."
        }
    }
}