{
    "title": "und-gleiten-3358",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "unterm freien Blau"
        },
        "line.2": {
            "text": "der Meeresatem hebt"
        },
        "line.3": {
            "text": "das Schwimmhaus hoch"
        },
        "line.4": {
            "text": "und senkts herab"
        },
        "line.5": {
            "text": "so dass sich eine Ruhe"
        },
        "line.6": {
            "text": "breitet schlaftrunken"
        },
        "line.7": {
            "text": "schlafend wach das"
        },
        "line.8": {
            "text": "ruhige Atmen unsres"
        },
        "line.9": {
            "text": "Meers hineingebettet in"
        },
        "line.10": {
            "text": "die Küstenberge"
        },
        "line.11": {
            "text": "Das Atmen ist"
        },
        "line.12": {
            "text": "ein Singen auf Deck"
        },
        "line.13": {
            "text": "hört mans auch tief"
        },
        "line.14": {
            "text": "in den Kajüten wie"
        },
        "line.15": {
            "text": "nah doch Atmen"
        },
        "line.16": {
            "text": "Singen beieinanderliegen"
        },
        "line.17": {
            "text": "zu Kinderzeiten schon"
        },
        "line.18": {
            "text": "wenn Vater im Stubeneng"
        },
        "line.19": {
            "text": "im Nachtbang auf"
        },
        "line.20": {
            "text": "den Kissen hinter"
        },
        "line.21": {
            "text": "der Schmalwand liegend"
        },
        "line.22": {
            "text": "uns in Klang gewiegt und"
        },
        "line.23": {
            "text": "gab uns quer durchs Dunkel"
        },
        "line.24": {
            "text": "den Geleitsang"
        }
    }
}