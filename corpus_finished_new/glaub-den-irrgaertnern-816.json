{
    "title": "glaub-den-irrgaertnern-816",
    "gender": "m",
    "author": "Christian Loidl",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "glaub den irrgärtnern"
        },
        "line.2": {
            "text": "ihre heuchelei und habgier"
        },
        "line.3": {
            "text": "glaub ihnen"
        },
        "line.4": {
            "text": "das tote im blick wenn sie"
        },
        "line.5": {
            "text": "kerker für ideen bauen"
        },
        "line.6": {
            "text": "trau"
        },
        "line.7": {
            "text": "dem gefrierfach hinter ihrer stirn"
        },
        "line.8": {
            "text": "trau ihrem handschlag"
        },
        "line.9": {
            "text": "jeden tiefschlag zu"
        }
    }
}