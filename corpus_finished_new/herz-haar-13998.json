{
    "title": "herz-haar-13998",
    "gender": "m",
    "author": "Thomas Böhme",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Die Stimmen sind leiser geworden"
        },
        "line.2": {
            "text": "mit denen wir uns behexten, beharkten."
        },
        "line.3": {
            "text": "Ich mache mir einen Knoten ins Herz"
        },
        "line.4": {
            "text": "um dich nicht zu vergessen."
        },
        "line.5": {
            "text": "Dein Gesicht eine weiße Maske"
        },
        "line.6": {
            "text": "auf filzigem Grund. Aber die Stimmen"
        },
        "line.7": {
            "text": "sind leiser geworden."
        },
        "line.8": {
            "text": "Gestern fand ich im Abfluß"
        },
        "line.9": {
            "text": "drei dunkle Haare von dir."
        },
        "line.10": {
            "text": "Etwas wenig für einen Zopf."
        },
        "line.11": {
            "text": "Alles ist relativ, würdest du sagen"
        },
        "line.12": {
            "text": "mit sehr leiser Stimme."
        },
        "line.13": {
            "text": "Und auch ich würde flüstern"
        },
        "line.14": {
            "text": "um dich nicht zu verscheuchen."
        },
        "line.15": {
            "text": "Mit einem Knoten im Herzen"
        },
        "line.16": {
            "text": "kann man alt werden, denke ich."
        },
        "line.17": {
            "text": "Und was sonst mir noch einfällt"
        },
        "line.18": {
            "text": "sind Kleinigkeiten"
        },
        "line.19": {
            "text": "wie das Haar auf dem Kissen"
        },
        "line.20": {
            "text": "von dem ich nicht wußte"
        },
        "line.21": {
            "text": "ob es immer noch schlief."
        }
    }
}