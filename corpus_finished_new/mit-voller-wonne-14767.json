{
    "title": "mit-voller-wonne-14767",
    "gender": "w",
    "author": "Sabine  Schiffner",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "meine mutter lehrt mich"
        },
        "line.2": {
            "text": "sprechen"
        },
        "line.3": {
            "text": "denk einfach deine sprache"
        },
        "line.4": {
            "text": "sei unendlich viele samentütchen"
        },
        "line.5": {
            "text": "sagt sie und lehrt mich die blumennamen"
        },
        "line.6": {
            "text": "die akelei"
        },
        "line.7": {
            "text": "blüht im waldesschatten"
        },
        "line.8": {
            "text": "sie zeigt mir die kaiserkron"
        },
        "line.9": {
            "text": "die liebte ich einst"
        },
        "line.10": {
            "text": "und meinen namen sucht sie"
        },
        "line.11": {
            "text": "aus ihrem alphabet weil er"
        },
        "line.12": {
            "text": "der stockrose ähnelt die"
        },
        "line.13": {
            "text": "nah am haus steht und"
        },
        "line.14": {
            "text": "dem schmetterlingsflieder"
        },
        "line.15": {
            "text": "buddleja"
        },
        "line.16": {
            "text": "und den sonnenblumen"
        },
        "line.17": {
            "text": "die oft porträtiert zu hause hängen"
        },
        "line.18": {
            "text": "auch auf so seltsame blüten wie"
        },
        "line.19": {
            "text": "den sonnentau kommt sie zu sprechen"
        },
        "line.20": {
            "text": "jedes kind nicht nur du"
        },
        "line.21": {
            "text": "die wir aus dem moor holten"
        },
        "line.22": {
            "text": "ist so einzigartig wie der"
        },
        "line.23": {
            "text": "ein rares gewächs ist er"
        },
        "line.24": {
            "text": "treibt aus auf rauem grund"
        },
        "line.25": {
            "text": "meine mutter ist sprechlehrerin"
        },
        "line.26": {
            "text": "im reich der beete und blumen"
        },
        "line.27": {
            "text": "und sie singt voller wonne"
        },
        "line.28": {
            "text": "die rose die lilie die taube"
        },
        "line.29": {
            "text": "die sonne"
        }
    }
}