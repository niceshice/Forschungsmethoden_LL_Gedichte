{
    "title": "ohne-kragen-und-wenn-wirs-denken-wuerden-3179",
    "gender": "m",
    "author": "Björn  Kuhligk",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "Die Farbfilme lagern in Kühlschränken"
        },
        "line.2": {
            "text": "ein Beischlaf kann im Treppenhaus"
        },
        "line.3": {
            "text": "beginnen, ja, unter den Tieren sind"
        },
        "line.4": {
            "text": "wir die traurigsten"
        },
        "line.5": {
            "text": "wir kaufen Geld an Automaten"
        },
        "line.6": {
            "text": "wir mieten Zimmer für den Sommer"
        },
        "line.7": {
            "text": "wir lesen morgens Zeitung und"
        },
        "line.8": {
            "text": "erleben Dja-vus, wir erwarten"
        },
        "line.9": {
            "text": "Liebesbriefe, die nicht kommen"
        },
        "line.10": {
            "text": "wir denken uns ein Land und vögeln"
        },
        "line.11": {
            "text": "bis ein Heiland niedergeht und"
        },
        "line.12": {
            "text": "schieben Einkaufswagen durch"
        },
        "line.13": {
            "text": "einen schwerbestückten Laden"
        },
        "line.14": {
            "text": "ja aber, WENN WIRS DENKEN WÜRDEN"
        },
        "line.15": {
            "text": "wir stünden auf Aussichtstürmen, eine Menge"
        },
        "line.16": {
            "text": "Nomaden im verstörten Licht"
        },
        "line.17": {
            "text": "Es gibt Ansätze, würde jemand"
        },
        "line.18": {
            "text": "flüstern, Eine Verbesserung"
        },
        "line.19": {
            "text": "würde jemand hinzufügen und vielleicht"
        },
        "line.20": {
            "text": "sagt es dann einer: DER MENSCH ALS"
        },
        "line.21": {
            "text": "KLEINSTE WIRTSCHAFTLICHE EINHEIT"
        },
        "line.22": {
            "text": "geht jeden Sonntag Kuchen holn oder"
        },
        "line.23": {
            "text": "steht vor einem Zielfernrohr"
        },
        "line.24": {
            "text": "an dessen Ende der Körper fällt, MACHTS"
        },
        "line.25": {
            "text": "GUT, NACHBARN, ja, es genügt"
        },
        "line.26": {
            "text": "zu wissen, wie eine Schwertlilie aussieht"
        }
    }
}