{
    "title": "der-stein-1430",
    "gender": "m",
    "author": "Fredrik Vahle",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "Es war einmal ein Stein,"
        },
        "line.2": {
            "text": "hat weder Kopf noch Bein."
        },
        "line.3": {
            "text": "Er sah die Menschen wetzen,"
        },
        "line.4": {
            "text": "er sah die Menschen hetzen"
        },
        "line.5": {
            "text": "und sah sie oft beim Denken"
        },
        "line.6": {
            "text": "sich ihren Kopf verrenken,"
        },
        "line.7": {
            "text": "und manche sah er holpern"
        },
        "line.8": {
            "text": "und über sich wegstolpern"
        },
        "line.9": {
            "text": "und dachte: Was hat so ein Leben für`n Sinn?"
        },
        "line.10": {
            "text": "Der Mensch will immer woanders hin."
        },
        "line.11": {
            "text": "Warum nur ... Fragezeichen,"
        },
        "line.12": {
            "text": "es ist zum Steinerweichen."
        },
        "line.13": {
            "text": "Ich bin stets hier und niemals da"
        },
        "line.14": {
            "text": "und kleiner als Amerika."
        },
        "line.15": {
            "text": "Ich bin von dieser Welt ein Stück,"
        },
        "line.16": {
            "text": "und wo ich bin,"
        },
        "line.17": {
            "text": "da ist das Glück."
        },
        "line.18": {
            "text": "Da kam der kleine Mattias Speck"
        },
        "line.19": {
            "text": "und warf ihn im hohen Bogen weg."
        },
        "line.20": {
            "text": "Der Stein ist fortgeflogen ..."
        },
        "line.21": {
            "text": "In einem schönen Bogen ..."
        },
        "line.22": {
            "text": "Und sprach, als er gelandet war:"
        },
        "line.23": {
            "text": "Bin immer hier und niemals da!"
        },
        "line.24": {
            "text": "Und flüstert dann ganz leise:"
        },
        "line.25": {
            "text": "Was sind wir Steine weise."
        }
    }
}