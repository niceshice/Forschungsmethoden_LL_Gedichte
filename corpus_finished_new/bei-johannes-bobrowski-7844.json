{
    "title": "bei-johannes-bobrowski-7844",
    "gender": "m",
    "author": "Rolf Haufs",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Es ist tröstlich"
        },
        "line.2": {
            "text": "Von deinen Johannisbeersträuchern zu wissen"
        },
        "line.3": {
            "text": "Und im Frühjahr das vergaß ich zu sagen"
        },
        "line.4": {
            "text": "Müßte der Gartenzaun gestrichen werden"
        },
        "line.5": {
            "text": "Aber geht denn der Herbst nicht zu Ende"
        },
        "line.6": {
            "text": "Schmerzen die Ahornblätter nicht"
        },
        "line.7": {
            "text": "In den weichen Händen deiner Kinder"
        },
        "line.8": {
            "text": "Gewiß"
        },
        "line.9": {
            "text": "Da ist ihre Mutter die durchs Haus geht"
        },
        "line.10": {
            "text": "Und die tägliche Heimkehr"
        },
        "line.11": {
            "text": "Und die hohe Tür"
        },
        "line.12": {
            "text": "Durch die man aus der Dunkelheit kommt"
        },
        "line.13": {
            "text": "Auch denke ich an die alte Schwester"
        },
        "line.14": {
            "text": "Eilte sie nicht am Stock von Weh zu Weh"
        },
        "line.15": {
            "text": "Es ist gut"
        },
        "line.16": {
            "text": "Auf den Tag zu warten"
        },
        "line.17": {
            "text": "Das ist: man bereitet sich vor"
        }
    }
}