{
    "title": "der-pockennarbige-toetet-w-3936",
    "gender": "m",
    "author": "Dieter M. Gräf",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": ""
        },
        "line.2": {
            "text": "Der Tod schafft sogleich eine Synthese des abgelaufenen Lebens,"
        },
        "line.3": {
            "text": "und das Licht, das er auf dieses Leben zurückwirft,"
        },
        "line.4": {
            "text": "beleuchtet die wesentlichen Momente und macht"
        },
        "line.5": {
            "text": "aus diesen mythische oder moralische Akte außerhalb der Zeit."
        },
        "line.6": {
            "text": ""
        },
        "line.7": {
            "text": "P. P. P."
        },
        "line.8": {
            "text": "vollendet ihn, denn"
        },
        "line.9": {
            "text": "Schönheit sei räudig."
        },
        "line.10": {
            "text": "Ihre Linie teile"
        },
        "line.11": {
            "text": "sich, werde Strick,"
        },
        "line.12": {
            "text": "schmuck um den Hals"
        },
        "line.13": {
            "text": "von jedem: Vene"
        },
        "line.14": {
            "text": "zianisches Messer,"
        },
        "line.15": {
            "text": "blitzt auf, wie Denk"
        },
        "line.16": {
            "text": "münzen, die zurück"
        },
        "line.17": {
            "text": "bleiben am Ort"
        },
        "line.18": {
            "text": "der Verbrechen. Sonne"
        },
        "line.19": {
            "text": "auf Signor Giovanni,"
        },
        "line.20": {
            "text": "auf"
        },
        "line.21": {
            "text": "große Sprünge"
        },
        "line.22": {
            "text": "über viel leere Plätze"
        },
        "line.23": {
            "text": ","
        },
        "line.24": {
            "text": "sie falle"
        },
        "line.25": {
            "text": "auf seines Mörders"
        },
        "line.26": {
            "text": "Kadaver, geflochten"
        },
        "line.27": {
            "text": "vorm Stadttor ans Rad."
        },
        "line.28": {
            "text": "(Für Kerstin Wagenschwanz)"
        }
    }
}