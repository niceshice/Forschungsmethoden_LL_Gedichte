{
    "title": "wolkenbilder-1450",
    "gender": "w",
    "author": "Irmela Brender",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Jennifer und Florian"
        },
        "line.2": {
            "text": "schauen sich die Wolken an."
        },
        "line.3": {
            "text": "Dauernd ändert sich das Bild,"
        },
        "line.4": {
            "text": "das da aus dem Himmel quillt:"
        },
        "line.5": {
            "text": "Zuckerwatte, Sahneeis"
        },
        "line.6": {
            "text": "wogen luftig cremigweiß."
        },
        "line.7": {
            "text": "Grauer Rauch ballt sich am Rand"
        },
        "line.8": {
            "text": "zur enormen Rächerhand."
        },
        "line.9": {
            "text": "Riesen schlagen eine Schlacht"
        },
        "line.10": {
            "text": "gegen eine Geistermacht,"
        },
        "line.11": {
            "text": "die beim Angriff rasch verweht"
        },
        "line.12": {
            "text": "und in zartem Dunst vergeht."
        },
        "line.13": {
            "text": "Florian, der Pflanzen liebt,"
        },
        "line.14": {
            "text": "sieht, dass es da Engel gibt."
        },
        "line.15": {
            "text": "Rund, in wallendem Gewand"
        },
        "line.16": {
            "text": "knien sie vor der Wolkenwand."
        },
        "line.17": {
            "text": "Ob, wenn hier die Blumen welken,"
        },
        "line.18": {
            "text": "dort die Engel Wolken melken?"
        },
        "line.19": {
            "text": "Und ob aus den Wolkenkühen"
        },
        "line.20": {
            "text": "manchmal Schnee und Hagel sprühen?"
        },
        "line.21": {
            "text": "Er hat Jennifer gefragt."
        },
        "line.22": {
            "text": "Sie denkt nach, bevor sie sagt:"
        },
        "line.23": {
            "text": "Kann schon sein. Ich seh dort drüben"
        },
        "line.24": {
            "text": "Elefanten Weitsprung üben."
        },
        "line.25": {
            "text": "Einer ist jetzt hingefallen"
        },
        "line.26": {
            "text": "und zerschmilzt in lauter Quallen,"
        },
        "line.27": {
            "text": "wie sie sonst in Meeren treiben."
        },
        "line.28": {
            "text": "Gar nicht einfach zu beschreiben."
        },
        "line.29": {
            "text": "Florian sieht keine Quallen,"
        },
        "line.30": {
            "text": "sieht nur Wasserfälle fallen"
        },
        "line.31": {
            "text": "und dazwischen Krokodile,"
        },
        "line.32": {
            "text": "ganz vertieft in wilde Spiele."
        },
        "line.33": {
            "text": "Alles ändert sich im Nu"
        },
        "line.34": {
            "text": "ich seh dies, und das siehst du."
        },
        "line.35": {
            "text": "Aber es ist wunderschön,"
        },
        "line.36": {
            "text": "in den Wolken fernzusehn."
        }
    }
}