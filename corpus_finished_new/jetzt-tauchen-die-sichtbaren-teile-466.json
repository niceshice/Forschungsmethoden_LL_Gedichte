{
    "title": "jetzt-tauchen-die-sichtbaren-teile-466",
    "gender": "m",
    "author": "Jürgen Becker",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "jetzt tauchen die sichtbaren Teile"
        },
        "line.2": {
            "text": "der Geschichte auf, eine Folge von flimmernden"
        },
        "line.3": {
            "text": "Resten, die zum Wiedererkennen"
        },
        "line.4": {
            "text": "aufbewahrt und hervorgeholt sind. Musik"
        },
        "line.5": {
            "text": "in den Hauptstädten; Schwermut, Spiegelschriften,"
        },
        "line.6": {
            "text": "Schönheitswettbewerb. Noch abends wird"
        },
        "line.7": {
            "text": "an den Bretterzäunen gehämmert, die Wind"
        },
        "line.8": {
            "text": "ablenken, Geruch aus den Öfen. Die Nachbarin"
        },
        "line.9": {
            "text": "steht noch im Pflaumenbaum. Epochen"
        },
        "line.10": {
            "text": "werden verschoben, bis die Erinnerung unruhig"
        },
        "line.11": {
            "text": "wird, bis man hört, quer durch den Schlaf,"
        },
        "line.12": {
            "text": "das Rollen der Transporte. Möhren,"
        },
        "line.13": {
            "text": "Tabak, Sonnenblumen, die zeitfreien Wörter"
        },
        "line.14": {
            "text": "in einem Notizbuch, das vielleicht einmal"
        },
        "line.15": {
            "text": "weitervermacht wird; noch sind die Gärten"
        },
        "line.16": {
            "text": "nicht leer. Die Reihenfolge ist wieder ganz"
        },
        "line.17": {
            "text": "anders; anfangen kann man mitten"
        },
        "line.18": {
            "text": "im Sommer, unter Lautsprechern zwischen Bäumen"
        }
    }
}