{
    "title": "die-reise-nach-jerusalem-1576",
    "gender": "m",
    "author": "Michael Krüger",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Griechenlands steinerne Faust sah ich"
        },
        "line.2": {
            "text": "im Mittelmeer liegen und ein Schiff,"
        },
        "line.3": {
            "text": "das dem Wasser die Bläue abzog"
        },
        "line.4": {
            "text": "in gekräuselten Streifen. Weiter östlich"
        },
        "line.5": {
            "text": "türkische Gedichte, unaussprechlich,"
        },
        "line.6": {
            "text": "von Wellen rhythmisch bewegt."
        },
        "line.7": {
            "text": "Ich sah, wie sich das Wasser trennte"
        },
        "line.8": {
            "text": "vom Salz an der büßenden Küste."
        },
        "line.9": {
            "text": "Zwischen all den mürrischen Steinen"
        },
        "line.10": {
            "text": "entstanden die Epen: die Erzählung"
        },
        "line.11": {
            "text": "der Distel und des Brots,"
        },
        "line.12": {
            "text": "von der Sonne gebacken."
        },
        "line.13": {
            "text": "Dort unten ging die Sprache an Land,"
        },
        "line.14": {
            "text": "und jedes Ding erhielt einen Namen."
        },
        "line.15": {
            "text": "Ich konnte es deutlich sehen -"
        },
        "line.16": {
            "text": "die Worte zitterten wie eine Schar Vögel"
        },
        "line.17": {
            "text": "über dem öden Grund."
        },
        "line.18": {
            "text": "Wir mußten uns anschnallen, festgezurrt,"
        },
        "line.19": {
            "text": "mit angehaltenem Atem"
        },
        "line.20": {
            "text": "erreichten wir das gelobte Land."
        }
    }
}