{
    "title": "vor-dem-verschwinden-dies-haus-4310",
    "gender": "w",
    "author": "Andrea Heuser",
    "author_birth": "1971",
    "poem": {
        "line.1": {
            "text": "DIES HAUS. sein rotbrauner ton"
        },
        "line.2": {
            "text": "sein verschwommener umriss"
        },
        "line.3": {
            "text": "wispern"
        },
        "line.4": {
            "text": "das flussufer klart auf"
        },
        "line.5": {
            "text": "schienen, gestrüpp, stilles gestein"
        },
        "line.6": {
            "text": "was fürchtest du dich?"
        },
        "line.7": {
            "text": "diese tür teilt keinen schritten"
        },
        "line.8": {
            "text": "ihr innen und außen mehr zu"
        },
        "line.9": {
            "text": "vagabundengesichter, flüchtige"
        },
        "line.10": {
            "text": "stimmen bewohnen ihr holz"
        },
        "line.11": {
            "text": "wir wollen"
        },
        "line.12": {
            "text": "nicht wissen, ob du dich erinnerst"
        },
        "line.13": {
            "text": "dies zimmer. zarter staub rieselt"
        },
        "line.14": {
            "text": "durch seinen mund. kein winkel"
        },
        "line.15": {
            "text": "kein buch in den regalen, das nicht"
        },
        "line.16": {
            "text": "bebt"
        },
        "line.17": {
            "text": "du bist nicht mehr"
        },
        "line.18": {
            "text": "an meinem zukünftigen tag"
        },
        "line.19": {
            "text": "dieser fernseher ist längst aus seinem bild gefallen"
        },
        "line.20": {
            "text": "in seinem bauch nisten zuweilen die tauben"
        },
        "line.21": {
            "text": "auch auf dem zersessenen sofa federn, gesprenkelter dreck"
        },
        "line.22": {
            "text": "du leertest hier deine venen"
        },
        "line.23": {
            "text": "ich werde dich nicht"
        },
        "line.24": {
            "text": "berühren. ich werde dich nicht berühren"
        },
        "line.25": {
            "text": "dies fenster. sein sperriger blick"
        },
        "line.26": {
            "text": "ruht im rechteck. karge tage"
        },
        "line.27": {
            "text": "das gras wächst dir über die kante"
        },
        "line.28": {
            "text": "so wie man fortwächst in fremdem"
        },
        "line.29": {
            "text": "gedächtnis"
        },
        "line.30": {
            "text": "dieser schaukel dort fehlt es an rücken"
        },
        "line.31": {
            "text": "der wind verfängt sich nicht mehr"
        },
        "line.32": {
            "text": "er zerrt an den streben"
        },
        "line.33": {
            "text": "ich habe"
        },
        "line.34": {
            "text": "jasmina fliegen sehen, ich legte mich"
        },
        "line.35": {
            "text": "unter ihr haar, hob es zu schwingen"
        },
        "line.36": {
            "text": ","
        },
        "line.37": {
            "text": "nun aber ist der himmel"
        },
        "line.38": {
            "text": "wie ein vogel über gräbern"
        },
        "line.39": {
            "text": "und wie vor einer tür"
        },
        "line.40": {
            "text": "die man abgesperrt hat"
        },
        "line.41": {
            "text": "hämmert irgendwer, hämmert"
        },
        "line.42": {
            "text": "* Der Himmel ist /wie ein Vogel über Gräbern, / und wie vor einer Tür, /die man abgesperrt hat, /"
        },
        "line.43": {
            "text": "hämmert, irgendwer, hämmert: Zitat aus: Joseph Brodsky, Die Verben, in: Ders.: Haltestelle in der"
        },
        "line.44": {
            "text": "Wüste, Frankfurt am Main 1997, S. 7."
        }
    }
}