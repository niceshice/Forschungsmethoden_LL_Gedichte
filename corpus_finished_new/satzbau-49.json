{
    "title": "satzbau-49",
    "gender": "m",
    "author": "Gottfried Benn",
    "author_birth": "1886",
    "poem": {
        "line.1": {
            "text": "Alle haben den Himmel, die Liebe und das Grab,"
        },
        "line.2": {
            "text": "damit wollen wir uns nicht befassen,"
        },
        "line.3": {
            "text": "das ist für den Kulturkreis gesprochen und durchgearbeitet."
        },
        "line.4": {
            "text": "Was aber neu ist, ist die Frage nach dem Satzbau"
        },
        "line.5": {
            "text": "und die ist dringend:"
        },
        "line.6": {
            "text": "warum drücken wir etwas aus?"
        },
        "line.7": {
            "text": "Warum reimen wir oder zeichnen ein Mädchen"
        },
        "line.8": {
            "text": "direkt oder als Spiegelbild"
        },
        "line.9": {
            "text": "oder stricheln auf eine Handbreit Büttenpapier"
        },
        "line.10": {
            "text": "unzählige Pflanzen, Baumkronen, Mauern,"
        },
        "line.11": {
            "text": "letztere als dicke Raupen mit Schildkrötenkopf"
        },
        "line.12": {
            "text": "sich unheimlich niedrig hinziehend"
        },
        "line.13": {
            "text": "in bestimmter Anordnung?"
        },
        "line.14": {
            "text": "Überwältigend unbeantwortbar!"
        },
        "line.15": {
            "text": "Honoraraussicht ist es nicht,"
        },
        "line.16": {
            "text": "viele hungern darüber. Nein,"
        },
        "line.17": {
            "text": "es ist ein Antrieb in der Hand,"
        },
        "line.18": {
            "text": "ferngesteuert, eine Gehirnanlage,"
        },
        "line.19": {
            "text": "vielleicht ein verspäteter Heilbringer oder Totemtier,"
        },
        "line.20": {
            "text": "auf Kosten des Inhalts ein formaler Priapismus,"
        },
        "line.21": {
            "text": "er wird vorübergehen,"
        },
        "line.22": {
            "text": "aber heute ist der Satzbau"
        },
        "line.23": {
            "text": "das Primäre."
        },
        "line.24": {
            "text": "Die wenigen, die was davon erkannt - (Goethe) -"
        },
        "line.25": {
            "text": "wovon eigentlich?"
        },
        "line.26": {
            "text": "Ich nehme an: vom Satzbau."
        }
    }
}