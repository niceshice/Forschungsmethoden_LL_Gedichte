{
    "title": "es-koennte-eine-frau-sein-3344",
    "gender": "w",
    "author": "Maja  Haderlap",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "es könnte eine frau sein,"
        },
        "line.2": {
            "text": "die mir den weg zeigt zum dorf,"
        },
        "line.3": {
            "text": "das ich suche. es könnte ein dorf sein,"
        },
        "line.4": {
            "text": "mit herbergen für fremde"
        },
        "line.5": {
            "text": "und augenpaaren zum zählen."
        },
        "line.6": {
            "text": "eskönnte ein dorf sein"
        },
        "line.7": {
            "text": "mit hacken und spaten, mir wohlbekannt."
        },
        "line.8": {
            "text": "aber des nachts kommt meine mutter."
        },
        "line.9": {
            "text": "sie weist ins tal. das alles"
        },
        "line.10": {
            "text": "gehört uns nicht, sagt sie."
        },
        "line.11": {
            "text": "meine koffer stehen gepackt"
        },
        "line.12": {
            "text": "vor ihrer tür. ich sage verse auf"
        },
        "line.13": {
            "text": "übers ankommen."
        },
        "line.14": {
            "text": "es sind keine lieder, keine klagen,"
        },
        "line.15": {
            "text": "nur loser klang."
        }
    }
}