{
    "title": "elementares-gedicht-2-12336",
    "gender": "m",
    "author": "Ulrich Koch",
    "author_birth": "1966",
    "poem": {
        "line.1": {
            "text": "Die Bibliothek, von der ich nachts geträumt,"
        },
        "line.2": {
            "text": "bestand aus getrockneten Schmetterlingen,"
        },
        "line.3": {
            "text": "in der Mehrzahl Kleine Füchse und Admiräle,"
        },
        "line.4": {
            "text": "und ich erwachte als Lepidopterologe,"
        },
        "line.5": {
            "text": "gähnend, von Hämatomen übersät,"
        },
        "line.6": {
            "text": "als hätte mich Säugling über Nacht"
        },
        "line.7": {
            "text": "meine tote Mutter mit Küssen bedeckt."
        },
        "line.8": {
            "text": "Wo etwas gärte oder verweste: Krähenfontänen."
        },
        "line.9": {
            "text": "Diesige Wiesen, das Licht: Nasses Salz."
        },
        "line.10": {
            "text": "Und der Weg nahm mich nur oberflächlich wahr."
        },
        "line.11": {
            "text": "Ich weckte den Traum vom Fliegen"
        },
        "line.12": {
            "text": "beim Betreten des Hühnerstalls."
        },
        "line.13": {
            "text": "Schauerwolke, hell, mit Regenfäden:"
        },
        "line.14": {
            "text": "Seelenmyzel, in aufgelockerte Erde gesteckt."
        },
        "line.15": {
            "text": "Sternenhimmel, ich ging unter."
        },
        "line.16": {
            "text": "Rücklings vergaß mich das Gras."
        },
        "line.17": {
            "text": "Der Fluß trieb mit meinen Füßen voran."
        }
    }
}