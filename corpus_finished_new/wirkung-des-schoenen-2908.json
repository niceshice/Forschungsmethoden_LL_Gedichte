{
    "title": "wirkung-des-schoenen-2908",
    "gender": "m",
    "author": "Harald  Hartung",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "Der Alte an der Brücke"
        },
        "line.2": {
            "text": "der in der Hose fuhrwerkt"
        },
        "line.3": {
            "text": "sah sie vermutlich zuerst"
        },
        "line.4": {
            "text": "die rosige Doppelwolke"
        },
        "line.5": {
            "text": "überm Kanal"
        },
        "line.6": {
            "text": "üppig wie Aphrodites Hintern"
        },
        "line.7": {
            "text": "schöner als die Paläste"
        },
        "line.8": {
            "text": "Der Alte von der Wolke befriedigt"
        },
        "line.9": {
            "text": "wendet sich ab"
        },
        "line.10": {
            "text": "während der Kellner gafft"
        },
        "line.11": {
            "text": "und anhält mit vollem Tablett"
        },
        "line.12": {
            "text": "angewurzelt als wärs ihm"
        },
        "line.13": {
            "text": "zu meinem Tisch viel zu weit."
        }
    }
}