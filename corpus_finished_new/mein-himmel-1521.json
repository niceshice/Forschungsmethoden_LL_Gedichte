{
    "title": "mein-himmel-1521",
    "gender": "w",
    "author": "Elfriede Gerstl",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "mein himmel ist hier und jetzt"
        },
        "line.2": {
            "text": "mein himmel ist meine vorstellung"
        },
        "line.3": {
            "text": "von himmel"
        },
        "line.4": {
            "text": "er ist die freundlichkeit"
        },
        "line.5": {
            "text": "verlässlichkeit"
        },
        "line.6": {
            "text": "anteilnahme"
        },
        "line.7": {
            "text": "bei glücks- und unglücksfällen"
        },
        "line.8": {
            "text": "mein himmel ist nicht voller geigen"
        },
        "line.9": {
            "text": "sondern voll solidarität"
        },
        "line.10": {
            "text": "mein himmel ist auch eine utopie"
        },
        "line.11": {
            "text": "von einer gerechteren welt"
        },
        "line.12": {
            "text": "in der einsicht und nachsicht"
        },
        "line.13": {
            "text": "tägliche realität sein sollte"
        },
        "line.14": {
            "text": "himmel ist das festgeknüpfte netz"
        },
        "line.15": {
            "text": "ähnlich denkender und fühlender"
        },
        "line.16": {
            "text": "und das glück"
        },
        "line.17": {
            "text": "ihm anzugehören"
        },
        "line.18": {
            "text": "wenn es noch einen anderen himmel"
        },
        "line.19": {
            "text": "geben sollte"
        },
        "line.20": {
            "text": "lasse ich mich überraschen"
        }
    }
}