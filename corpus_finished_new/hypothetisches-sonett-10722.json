{
    "title": "hypothetisches-sonett-10722",
    "gender": "w",
    "author": "Ulla Hahn",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Wenn wir tiefer atmeten langsamer"
        },
        "line.2": {
            "text": "gingen ruhiger führten unsere Augen"
        },
        "line.3": {
            "text": "von einem zum anderen nur noch leise"
        },
        "line.4": {
            "text": "sprächen und selten: ewig lebten wir"
        },
        "line.5": {
            "text": "nicht aber ein bisschen ewiger doch"
        },
        "line.6": {
            "text": "wie das Meer vielleicht oder sogar"
        },
        "line.7": {
            "text": "wie Worte und Sätze vom Meer"
        },
        "line.8": {
            "text": "oder dieser eine Nachmittag heute"
        },
        "line.9": {
            "text": "an dem wir einander vergessen machen"
        },
        "line.10": {
            "text": "was anderswo auch geschieht"
        },
        "line.11": {
            "text": "dauerte sagen wir drei bis vier Wochen"
        },
        "line.12": {
            "text": "die wiederum ein paar"
        },
        "line.13": {
            "text": "doppelte dreifache Jahre oder"
        },
        "line.14": {
            "text": "wenigstens: Jetzt."
        },
        "line.15": {
            "text": "(aus:"
        },
        "line.16": {
            "text": "Galileo und zwei Frauen"
        },
        "line.17": {
            "text": ", 1997)"
        }
    }
}