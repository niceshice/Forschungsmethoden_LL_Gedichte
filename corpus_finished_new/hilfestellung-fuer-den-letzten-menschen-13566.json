{
    "title": "hilfestellung-fuer-den-letzten-menschen-13566",
    "gender": "w",
    "author": "Mara-Daria Cojocaru",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "Heute also, triffst dich mit Charles"
        },
        "line.2": {
            "text": "1"
        },
        "line.3": {
            "text": "Vorsitzender der Kommission"
        },
        "line.4": {
            "text": "Für unseren letzten Menschen"
        },
        "line.5": {
            "text": "Ahnung, ahnungslos, grob"
        },
        "line.6": {
            "text": "Welches Geschlecht, wenn überhaupt eines"
        },
        "line.7": {
            "text": "Welche Sprache, wenn überhaupt eine"
        },
        "line.8": {
            "text": "Wird er denn sprechen? Wird er Rot sehen"
        },
        "line.9": {
            "text": "Können? Vielleicht nein. Doch"
        },
        "line.10": {
            "text": "Das gibt ihm kein Recht auf"
        },
        "line.11": {
            "text": "Nichtexistenz. Was für ein very wrongful"
        },
        "line.12": {
            "text": "Leben. Du knirschst die Pläne weg"
        },
        "line.13": {
            "text": "Weg mit den Spitzen der Weltliteratur, zu der"
        },
        "line.14": {
            "text": "Bettwäsche gelegt. Was für ein Stuss"
        },
        "line.15": {
            "text": "Man bläst ihm ein Luftschloss auf"
        },
        "line.16": {
            "text": "Apokalyptische Hüpfburg, konditioniert den"
        },
        "line.17": {
            "text": "Universalen Palmarreflex"
        },
        "line.18": {
            "text": "Doch er muss loslassen: in Hologrammen lachen"
        },
        "line.19": {
            "text": "Quatschen, schnattern; jedes Leben förmlich"
        },
        "line.20": {
            "text": "Grüßen können, muss er"
        },
        "line.21": {
            "text": "Schon. Der Gedanke beschleicht dich"
        },
        "line.22": {
            "text": "Nicht, er stellt dir ein Bein: Der letzte"
        },
        "line.23": {
            "text": "Mensch könnte genauso dein Gesicht- und Scham"
        },
        "line.24": {
            "text": "Loses, Hass schwitzendes"
        },
        "line.25": {
            "text": "Gegenüber von vorhin sein: das über Tip und Topsy"
        },
        "line.26": {
            "text": "Lachen oder was in Bedlam witzig finden kann. Allein"
        },
        "line.27": {
            "text": "Du gehst durch deine Garderobe. Warum"
        },
        "line.28": {
            "text": "Fragt dich dein Besenstiel, ist dir am"
        },
        "line.29": {
            "text": "Fortbestehen des Menschen überhaupt gelegen"
        },
        "line.30": {
            "text": "Kehrsache: Fehlfarben. Wollen wir es nicht"
        },
        "line.31": {
            "text": "Mit Liebe versuchen"
        },
        "line.32": {
            "text": "2"
        },
        "line.33": {
            "text": "Dann also: Schnuppernde Bilder, türmendes Licht"
        },
        "line.34": {
            "text": "Agafias Gesangbuch für jeden Sonnenuntergang"
        },
        "line.35": {
            "text": "Den er alleine verbringt. Und ein Mobile"
        },
        "line.36": {
            "text": "Strandgut, letzte, beschädigte Hoffnungsträger"
        },
        "line.37": {
            "text": "Auf dass er in allem lieben Rat und Herzschlag findet"
        },
        "line.38": {
            "text": "Dazu ein rastloses Kitzeln in die Fersen genäht"
        },
        "line.39": {
            "text": "Auf dass er"
        },
        "line.40": {
            "text": "Nicht vergisst: Er soll die Mengenlehre von den"
        },
        "line.41": {
            "text": "Bienen lernen, ganz genau. Denn: In einem seiner"
        },
        "line.42": {
            "text": "Sommer"
        },
        "line.43": {
            "text": "bleibt"
        },
        "line.44": {
            "text": "der Honig aus"
        },
        "line.45": {
            "text": ". Und schwärmend"
        },
        "line.46": {
            "text": "Mit den Schweinen schwimmen"
        },
        "line.47": {
            "text": "Das soll er auch"
        },
        "line.48": {
            "text": "1"
        },
        "line.49": {
            "text": "Goselmanu, ihr seid nun per Du"
        },
        "line.50": {
            "text": "2"
        },
        "line.51": {
            "text": "Huch"
        }
    }
}