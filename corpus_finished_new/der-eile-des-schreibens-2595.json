{
    "title": "der-eile-des-schreibens-2595",
    "gender": "m",
    "author": "Hans Thill",
    "author_birth": "1954",
    "poem": {
        "line.1": {
            "text": "IN DER EILEdes Schreibens kamen von den"
        },
        "line.2": {
            "text": "Toten die tatenlos auf dem Felsen sitzen"
        },
        "line.3": {
            "text": "solche mit Taschenlampen solche in"
        },
        "line.4": {
            "text": "Affenform und redeten durch das Jammern"
        },
        "line.5": {
            "text": "der Frauen hindurch und schielten"
        },
        "line.6": {
            "text": "aus den perlengestopften Augenhöhlen"
        },
        "line.7": {
            "text": "aßen kaltes Fleisch und wischten sich den Mund"
        }
    }
}