{
    "title": "der-untergang-der-titanic-erster-gesang-348",
    "gender": "m",
    "author": "Hans Magnus Enzensberger",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Einer horcht. Er wartet. Er hält"
        },
        "line.2": {
            "text": "den Atem an, ganz in der Nähe,"
        },
        "line.3": {
            "text": "hier. Ersagt: Der da spricht, das bin ich."
        },
        "line.4": {
            "text": "Nie wieder, sagt er,"
        },
        "line.5": {
            "text": "wird es so ruhig sein,"
        },
        "line.6": {
            "text": "so trocken und warm wie jetzt."
        },
        "line.7": {
            "text": "Er hört sich"
        },
        "line.8": {
            "text": "in seinem rauschenden Kopf."
        },
        "line.9": {
            "text": "Es ist niemand da außer dem,"
        },
        "line.10": {
            "text": "der da sagt: Das muß ich sein."
        },
        "line.11": {
            "text": "Ich warte, halte den Atem an,"
        },
        "line.12": {
            "text": "lausche. Das ferne Geräusch"
        },
        "line.13": {
            "text": "in den Ohren, diesen Antennen"
        },
        "line.14": {
            "text": "aus weichem Fleisch, bedeutet nichts."
        },
        "line.15": {
            "text": "Es ist nur das Blut,"
        },
        "line.16": {
            "text": "das in der Ader schlägt."
        },
        "line.17": {
            "text": "Ich habe lang gewartet,"
        },
        "line.18": {
            "text": "mit angehaltenem Atem."
        },
        "line.19": {
            "text": "Weißes Rauschen im Kopfhörer"
        },
        "line.20": {
            "text": "meiner Zeitmaschine."
        },
        "line.21": {
            "text": "Stummer kosmischer Lärm."
        },
        "line.22": {
            "text": "Kein Klopfzeichen. Kein Hilfeschrei."
        },
        "line.23": {
            "text": "Funkstille."
        },
        "line.24": {
            "text": "Entweder ist es aus,"
        },
        "line.25": {
            "text": "sage ich mir, oder es hat"
        },
        "line.26": {
            "text": "noch nicht angefangen."
        },
        "line.27": {
            "text": "Jetzt aber! Jetzt:"
        },
        "line.28": {
            "text": "Ein Knirschen. Ein Scharren. Ein Riß."
        },
        "line.29": {
            "text": "Das ist es. Ein eisiger Fingernagel,"
        },
        "line.30": {
            "text": "der an der Tür kratzt und stockt."
        },
        "line.31": {
            "text": "Etwas reißt."
        },
        "line.32": {
            "text": "Eine endlose Segeltuchbahn,"
        },
        "line.33": {
            "text": "ein schneeweißer Leinwandstreifen,"
        },
        "line.34": {
            "text": "der erst langsam,"
        },
        "line.35": {
            "text": "dann rascher und immer rascher"
        },
        "line.36": {
            "text": "und fauchend entzweireißt."
        },
        "line.37": {
            "text": "Das ist der Anfang."
        },
        "line.38": {
            "text": "Hört ihr? Hört ihr es nicht?"
        },
        "line.39": {
            "text": "Haltet euch fest!"
        },
        "line.40": {
            "text": "Dann wird es wieder still."
        },
        "line.41": {
            "text": "Nur inder Wand klirrt"
        },
        "line.42": {
            "text": "etwas Dünngeschliffenes nach,"
        },
        "line.43": {
            "text": "ein kristallenes Zittern,"
        },
        "line.44": {
            "text": "das schwächer wird"
        },
        "line.45": {
            "text": "und vergeht."
        },
        "line.46": {
            "text": "Das war es."
        },
        "line.47": {
            "text": "War es das? Ja,"
        },
        "line.48": {
            "text": "das muß es gewesen sein."
        },
        "line.49": {
            "text": "Das war der Anfang."
        },
        "line.50": {
            "text": "Der Anfang vom Ende"
        },
        "line.51": {
            "text": "ist immer diskret."
        },
        "line.52": {
            "text": "Es ist elf Uhr vierzig"
        },
        "line.53": {
            "text": "an Bord. Die stählerne Haut"
        },
        "line.54": {
            "text": "unter der Wasserlinie klafft,"
        },
        "line.55": {
            "text": "zweihundert Meter lang,"
        },
        "line.56": {
            "text": "aufgeschlitzt"
        },
        "line.57": {
            "text": "von einem unvorstellbaren Messer."
        },
        "line.58": {
            "text": "Das Wasser schießt in die Schotten."
        },
        "line.59": {
            "text": "An dem leuchtenden Rumpf"
        },
        "line.60": {
            "text": "gleitet, dreißig Meter hoch"
        },
        "line.61": {
            "text": "über dem Meeresspiegel, schwarz"
        },
        "line.62": {
            "text": "und lautlos der Eisberg vorbei"
        },
        "line.63": {
            "text": "und bleibt zurück in der Dunkelheit."
        }
    }
}