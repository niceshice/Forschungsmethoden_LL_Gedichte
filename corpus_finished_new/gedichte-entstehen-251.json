{
    "title": "gedichte-entstehen-251",
    "gender": "m",
    "author": "Walther Petri",
    "author_birth": "1940",
    "poem": {
        "line.1": {
            "text": "bevor sie beginnen"
        },
        "line.2": {
            "text": "sie falln nicht"
        },
        "line.3": {
            "text": "wie Regen aufs Dach"
        },
        "line.4": {
            "text": "über Nacht"
        },
        "line.5": {
            "text": "und keines wird"
        },
        "line.6": {
            "text": "mit herzlichem Gruß"
        },
        "line.7": {
            "text": "wie die Post"
        },
        "line.8": {
            "text": "von der Post gebracht"
        },
        "line.9": {
            "text": "Gedichte beginnen"
        },
        "line.10": {
            "text": "bevor sie aus tausend"
        },
        "line.11": {
            "text": "sichtbaren Dingen entstehn"
        },
        "line.12": {
            "text": "aus einem Grunde"
        },
        "line.13": {
            "text": "der ist nicht zu sehn"
        },
        "line.14": {
            "text": "Gedichte geschehn"
        },
        "line.15": {
            "text": "ich kann sie nicht schreiben"
        },
        "line.16": {
            "text": "am besten ists"
        },
        "line.17": {
            "text": "ich lasse mich treiben"
        },
        "line.18": {
            "text": "und treib es mit ihnen"
        },
        "line.19": {
            "text": "und halte sie fest"
        },
        "line.20": {
            "text": "pechschwarz auf schneeweiß"
        },
        "line.21": {
            "text": "und gebe zu"
        },
        "line.22": {
            "text": "daß ich Genaues von ihnen"
        },
        "line.23": {
            "text": "nicht weiß"
        }
    }
}