{
    "title": "winter-seit-wochen-zu-kalt-16563",
    "gender": "m",
    "author": "Sascha Garzetti",
    "author_birth": "1986",
    "poem": {
        "line.1": {
            "text": "Winter, seit Wochen zu kalt,"
        },
        "line.2": {
            "text": "um draußen zu sitzen"
        },
        "line.3": {
            "text": "unter der alten Kastanie am Fluss."
        },
        "line.4": {
            "text": "Ich lese in einem Gedicht De Marchis,"
        },
        "line.5": {
            "text": "wie hinter einem Orangenpapier"
        },
        "line.6": {
            "text": "die Sonne Siziliens aufgeht,"
        },
        "line.7": {
            "text": "die Verse fuhren mich wie ein verstecktes Gleis"
        },
        "line.8": {
            "text": "uber die Grenze meiner Sprache,"
        },
        "line.9": {
            "text": "trinke die Wörter unterwegs wie Wasser"
        },
        "line.10": {
            "text": "in kleinen Schlucken"
        },
        "line.11": {
            "text": "aus einem kalten Glas im Sommer."
        },
        "line.12": {
            "text": "Ich fahre mit dem Zug durch das Land,"
        },
        "line.13": {
            "text": "weiter, als ich je war,"
        },
        "line.14": {
            "text": "verwandle mich in einen Kieselstein,"
        },
        "line.15": {
            "text": "lasse mich hinabschutteln,"
        },
        "line.16": {
            "text": "zum Fersbett, die Sohle entlang,"
        },
        "line.17": {
            "text": "bis es nicht weitergeht."
        },
        "line.18": {
            "text": "Der Novembernebel lichtet sich,"
        },
        "line.19": {
            "text": "ein brennender Fetzen Papier."
        },
        "line.20": {
            "text": "Die Zehen beruhren bald"
        },
        "line.21": {
            "text": "das Meer, es fehlt"
        },
        "line.22": {
            "text": "nicht viel."
        }
    }
}