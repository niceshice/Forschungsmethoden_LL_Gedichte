{
    "title": "glasstimmen-lasinaeaenet-3360",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "Glas lasi"
        },
        "line.2": {
            "text": "lasst uns erzählen"
        },
        "line.3": {
            "text": "es ließ uns der Mai in der Glashütte"
        },
        "line.4": {
            "text": "leben und war bei der Rückkehr vom"
        },
        "line.5": {
            "text": "Glashüttenfest das Meer"
        },
        "line.6": {
            "text": "aus Glas aus Glas"
        },
        "line.7": {
            "text": "Sprünge dienten als Rinnen für Schiffe"
        },
        "line.8": {
            "text": "das Meer bestand sonst aus"
        },
        "line.9": {
            "text": "Tiefenhöhlen hohlen Höckern"
        },
        "line.10": {
            "text": "Kämmen Kuppen schwebenden Schellen"
        },
        "line.11": {
            "text": "Gongen Klingeln Klangglast Glockenschimmer"
        },
        "line.12": {
            "text": "wenn die Sonne dazu"
        },
        "line.13": {
            "text": "das Fernwehn des Winds"
        },
        "line.14": {
            "text": "spielte mit dem wogenden Glas"
        },
        "line.15": {
            "text": "Es reisten mit uns besondere"
        },
        "line.16": {
            "text": "fürs bleibende Kindsein erwählte"
        },
        "line.17": {
            "text": "Kinder und klärte sich dass"
        },
        "line.18": {
            "text": "die gläserne See und die tönenden"
        },
        "line.19": {
            "text": "singenden Stimmen der Kinder"
        },
        "line.20": {
            "text": "aus einundemselben Gemenge sind"
        },
        "line.21": {
            "text": "lasinäänet Glasstimmen"
        },
        "line.22": {
            "text": "rein"
        },
        "line.23": {
            "text": "nicht gefährdet glaskrank"
        },
        "line.24": {
            "text": "zu werden wie das bei unseren Stimmen ist die"
        },
        "line.25": {
            "text": "zu Asche und Sand zerfallen können"
        },
        "line.26": {
            "text": "Kappen sind oft auch auf unseren Mündern"
        },
        "line.27": {
            "text": "während der Mund der Kinder"
        },
        "line.28": {
            "text": "freigesprengt ist"
        },
        "line.29": {
            "text": "Bei der Heimkehr vom"
        },
        "line.30": {
            "text": "Glashüttenfest inmitten der"
        },
        "line.31": {
            "text": "gläsernen Weite des Meers"
        },
        "line.32": {
            "text": "Glas lasi lasienäänet"
        },
        "line.33": {
            "text": "ereignete sich dass das farbige Glas der"
        },
        "line.34": {
            "text": "Kinderstimmen sich schob übers"
        },
        "line.35": {
            "text": "weiße Glas unserer Stimmen"
        },
        "line.36": {
            "text": "mannigfaltig in Mustern in Tönen"
        },
        "line.37": {
            "text": "entstand überfangenes Glas"
        },
        "line.38": {
            "text": "kellojenkieli kilisee helisee"
        },
        "line.39": {
            "text": "kilkatus kimallus"
        },
        "line.40": {
            "text": "Glas lasi lasienäänet"
        }
    }
}