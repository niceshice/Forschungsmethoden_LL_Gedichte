{
    "title": "widerlich-1028",
    "gender": "m",
    "author": "Ferdinand Schmatz",
    "author_birth": "1953",
    "poem": {
        "line.1": {
            "text": "etwas nicht austragen"
        },
        "line.2": {
            "text": "knospen etwa"
        },
        "line.3": {
            "text": "einblühen lassen"
        },
        "line.4": {
            "text": "immer wieder verlangt das sein"
        },
        "line.5": {
            "text": "treu das schön sein -"
        },
        "line.6": {
            "text": "rosen und garten plagen"
        },
        "line.7": {
            "text": "lieber fort fahren"
        },
        "line.8": {
            "text": "weg klagen den ort"
        },
        "line.9": {
            "text": "aus wort und sparten"
        },
        "line.10": {
            "text": "so der brauch"
        },
        "line.11": {
            "text": "wieder mal wider ich das du"
        },
        "line.12": {
            "text": "spielen wir die arten durch"
        },
        "line.13": {
            "text": "ausgelegt aufgegangen"
        },
        "line.14": {
            "text": "der spaten sticht"
        },
        "line.15": {
            "text": "meine wie deine male"
        },
        "line.16": {
            "text": "es gehört sich nicht"
        },
        "line.17": {
            "text": "was ich züchtet (spricht)"
        },
        "line.18": {
            "text": "bricht man nicht so einfach ab"
        },
        "line.19": {
            "text": "ein schon eher"
        },
        "line.20": {
            "text": "ehe der bruch springt -"
        },
        "line.21": {
            "text": "fällt das ich wieder einmal um zum beispiel"
        },
        "line.22": {
            "text": "seis aus kummer oder folge von kümmel"
        },
        "line.23": {
            "text": "- sorgen verlangen nach himmel -"
        },
        "line.24": {
            "text": "also kümmerlicher rum mag schuld sein"
        },
        "line.25": {
            "text": "wir am herd (geerdet)"
        },
        "line.26": {
            "text": "ganz feuer wasser"
        },
        "line.27": {
            "text": "trinken ihn etwas heisser"
        },
        "line.28": {
            "text": "im kalten magen -"
        },
        "line.29": {
            "text": "möge er teuer sein"
        },
        "line.30": {
            "text": "der ruhm (das herum tun)"
        },
        "line.31": {
            "text": "erweist sich sowieso"
        },
        "line.32": {
            "text": "als fortgeblasen wie die streu"
        },
        "line.33": {
            "text": "am leergefegten ast"
        },
        "line.34": {
            "text": "ohne elle (l)"
        },
        "line.35": {
            "text": "halten wir der stelle"
        },
        "line.36": {
            "text": "die hand auf den stamm"
        },
        "line.37": {
            "text": "die frucht ist abgelegt"
        },
        "line.38": {
            "text": "ein loch im lurch"
        },
        "line.39": {
            "text": "das ich (ohne l schon wieder)"
        },
        "line.40": {
            "text": "nicht einmal richtig durch"
        },
        "line.41": {
            "text": "ist die furcht - gewaschen mit allen sossen:"
        },
        "line.42": {
            "text": "brühen wir uns die rosen da ab"
        },
        "line.43": {
            "text": "* nicht nur beim wort genommen, auch"
        }
    }
}