{
    "title": "mamakind-nachtschaf-nachtlied-obstgarten-12837",
    "gender": "w",
    "author": "Margret Kreidl",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "MAMAKIND"
        },
        "line.2": {
            "text": "Ein kleines Da,"
        },
        "line.3": {
            "text": "ein großes Dort."
        },
        "line.4": {
            "text": "Geh nicht fort."
        },
        "line.5": {
            "text": "Ein kleines Ja,"
        },
        "line.6": {
            "text": "ein großes Nein."
        },
        "line.7": {
            "text": "Bin allein."
        },
        "line.8": {
            "text": "Ein kleines Ich,"
        },
        "line.9": {
            "text": "ein großes Du."
        },
        "line.10": {
            "text": "Die Tür ist zu."
        },
        "line.11": {
            "text": "Einfache Erklärung: Ich habe von meiner Mutter geträumt."
        },
        "line.12": {
            "text": "NACHTSCHAF"
        },
        "line.13": {
            "text": "Schlafdunkle Nacht:"
        },
        "line.14": {
            "text": "Tag, komm her!"
        },
        "line.15": {
            "text": "Schafe, habt acht:"
        },
        "line.16": {
            "text": "Kind mit Gewehr!"
        },
        "line.17": {
            "text": "Einfache Erklärung: Ich bin das schwarze Schaf der Familie."
        },
        "line.18": {
            "text": "NACHTLIED"
        },
        "line.19": {
            "text": "Die Erde ist schwer,"
        },
        "line.20": {
            "text": "leicht ist der Hauch."
        },
        "line.21": {
            "text": "Ich habe ein Herz"
        },
        "line.22": {
            "text": "und eine Hand, du auch."
        },
        "line.23": {
            "text": "Was willst du mehr?"
        },
        "line.24": {
            "text": "Einfache Erklärung: Am Anfang war der Rhythmus."
        },
        "line.25": {
            "text": "OBSTGARTEN"
        },
        "line.26": {
            "text": "Ich bin im Obstgarten meiner Großmutter und zähle das Obst:"
        },
        "line.27": {
            "text": "Eine Kirsche, zwei Äpfel, drei Himbeeren, vier Brombeeren, fünf Erdbeeren, sechs fehlen, sieben Zwetschken."
        },
        "line.28": {
            "text": "Einfache Erklärung: Meine Großmutter fehlt mir."
        }
    }
}