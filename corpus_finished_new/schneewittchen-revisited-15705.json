{
    "title": "schneewittchen-revisited-15705",
    "gender": "w",
    "author": "Birgit Kreipe",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "schneewittchen."
        },
        "line.2": {
            "text": "das gute an ihr:"
        },
        "line.3": {
            "text": "man kann sie vergiften, schütteln"
        },
        "line.4": {
            "text": "sie wacht wieder auf."
        },
        "line.5": {
            "text": "mal tanzt sie auf sieben hügeln"
        },
        "line.6": {
            "text": "dann löscht die nacht sie aus"
        },
        "line.7": {
            "text": "wie man eine schneekugel"
        },
        "line.8": {
            "text": "vom nachtisch fegt."
        },
        "line.9": {
            "text": "da liegt sie. die ganze weiße"
        },
        "line.10": {
            "text": "pracht schmilzt wie pulver."
        },
        "line.11": {
            "text": "jetzt ist klar, wer"
        },
        "line.12": {
            "text": "die glitzernde, strenge schöne ist."
        },
        "line.13": {
            "text": "aber ein morgen, irgendeiner"
        },
        "line.14": {
            "text": "voller apfelnachbilder"
        },
        "line.15": {
            "text": "voller miederbänder und apfelreste"
        },
        "line.16": {
            "text": "bringt sie zurück. irgendwann."
        },
        "line.17": {
            "text": "leg sie auf eis."
        },
        "line.18": {
            "text": "sie passt zu uns:"
        },
        "line.19": {
            "text": "man kann sie auftauen und"
        },
        "line.20": {
            "text": "wieder einfrieren. sieben"
        },
        "line.21": {
            "text": "kühlschränke geben uns recht"
        },
        "line.22": {
            "text": "ihre kehle ein bach, ihre zunge"
        },
        "line.23": {
            "text": "liegt auf der zunge wie ein guter wein"
        },
        "line.24": {
            "text": "ihr herz, königinnenart"
        },
        "line.25": {
            "text": "verdirbt nicht so schnell."
        }
    }
}