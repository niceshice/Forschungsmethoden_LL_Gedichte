{
    "title": "eine-reise-den-sueden-3730",
    "gender": "m",
    "author": "Peter Turrini",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Eine Reise in den Süden"
        },
        "line.2": {
            "text": "sagst du"
        },
        "line.3": {
            "text": "wird uns wieder"
        },
        "line.4": {
            "text": "zusammenbringen."
        },
        "line.5": {
            "text": "Wir liegen an einem griechischen Strand"
        },
        "line.6": {
            "text": "bei 35 Grad im Schatten"
        },
        "line.7": {
            "text": "und du fragst mich"
        },
        "line.8": {
            "text": "ob ich mich dir"
        },
        "line.9": {
            "text": "auch so nahe fühle?"
        },
        "line.10": {
            "text": "Ja, sage ich"
        },
        "line.11": {
            "text": "und denke dabei"
        },
        "line.12": {
            "text": "an gefüllte Paprika"
        },
        "line.13": {
            "text": "und ein kühles Hotelzimmer"
        },
        "line.14": {
            "text": "in Malmö."
        }
    }
}