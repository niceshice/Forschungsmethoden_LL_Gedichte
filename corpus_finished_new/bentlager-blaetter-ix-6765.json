{
    "title": "bentlager-blaetter-ix-6765",
    "gender": "m",
    "author": "Jan Volker Röhnert",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "Ich hörte Hubschrauber"
        },
        "line.2": {
            "text": "trommeln ans Dach des Sommers"
        },
        "line.3": {
            "text": "und dachte an die sechziger Jahre,"
        },
        "line.4": {
            "text": "die auf uns nurmehr vom Hörensagen,"
        },
        "line.5": {
            "text": "meinetwegen übers Blut unserer Eltern"
        },
        "line.6": {
            "text": "gekommen waren, das Jahrzehnt,"
        },
        "line.7": {
            "text": "da die Geschichten im Chaos endeten,"
        },
        "line.8": {
            "text": "in einem neuartigen Gedicht"
        },
        "line.9": {
            "text": "oder einem Schlager des RocknRoll,"
        },
        "line.10": {
            "text": "unvergesslicher als alles, was später"
        },
        "line.11": {
            "text": "lautstark die Gehörgänge tapezierte."
        },
        "line.12": {
            "text": "Der Sommerhimmel in der Vorstellung der Sechziger"
        },
        "line.13": {
            "text": "trägt holländisches Kolorit"
        },
        "line.14": {
            "text": "atlantisch, grenzenlos blau,"
        },
        "line.15": {
            "text": "blonde Mädchen sitzend vor den Cafs."
        },
        "line.16": {
            "text": "Und doch trommelten die Hubschrauber gegen das Dach"
        },
        "line.17": {
            "text": "und die Musiker sangen es:"
        },
        "line.18": {
            "text": "Mother do you think theyll drop the bomb"
        },
        "line.19": {
            "text": "Die Geschichte der Sechziger war ein open end,"
        },
        "line.20": {
            "text": "das sich erst heute in den Schallknöpfen verliert,"
        },
        "line.21": {
            "text": "hinausgezögert wie eine Modeerscheinung,"
        },
        "line.22": {
            "text": "deren Segen man erst in der Wiederholung begreift,"
        },
        "line.23": {
            "text": "anhaltend freudvoll wie der Segen des Minirocks."
        },
        "line.24": {
            "text": "Der Übergang in die Siebziger von keinem verspürt"
        },
        "line.25": {
            "text": "und das Versprechen einer Ära des Glück"
        },
        "line.26": {
            "text": "noch nirgendwo eingelöst"
        },
        "line.27": {
            "text": "außer in den zarten Gefilden"
        },
        "line.28": {
            "text": "des niederländischen Sommers, hoch oben"
        },
        "line.29": {
            "text": "dem atlantischen Blau."
        }
    }
}