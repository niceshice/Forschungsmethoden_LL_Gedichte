{
    "title": "countdown-2-auszug-13558",
    "gender": "m",
    "author": "Jörg Schieke",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Zu einer unchristlichen Uhrzeit"
        },
        "line.2": {
            "text": "wird man wach. Man möchte"
        },
        "line.3": {
            "text": "siebzehn senkrecht:"
        },
        "line.4": {
            "text": "seltenes Natur-"
        },
        "line.5": {
            "text": "schauspiel"
        },
        "line.6": {
            "text": "nicht verpassen. Man hat gelernt"
        },
        "line.7": {
            "text": "den Koffer wie im Schlaf"
        },
        "line.8": {
            "text": "wie einen Koffer voller Schnee"
        },
        "line.9": {
            "text": "zu packen. Man steigt auf eine Wanderdüne."
        },
        "line.10": {
            "text": "Trinkwasser ist das wichtigste, Worte"
        },
        "line.11": {
            "text": "sind knapp. Lost in the Augenblick"
        },
        "line.12": {
            "text": "in the Funkloch und auf der Reiseroute. Man"
        },
        "line.13": {
            "text": "wähnt sich glücklich und wie"
        },
        "line.14": {
            "text": "schaumgeboren. Das Woher und Wohin"
        },
        "line.15": {
            "text": "kann man dem Zufall"
        },
        "line.16": {
            "text": "überlassen. Die Strände leuchten, und morgen"
        },
        "line.17": {
            "text": "ist auch noch ein Tag."
        }
    }
}