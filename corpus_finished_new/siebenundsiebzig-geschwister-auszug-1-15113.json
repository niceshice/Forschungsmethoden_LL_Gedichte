{
    "title": "siebenundsiebzig-geschwister-auszug-1-15113",
    "gender": "w",
    "author": "Zsuzsanna Gahse",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Und die vier Schwestern haben"
        },
        "line.2": {
            "text": "eine ähnliche Haut und riechen,"
        },
        "line.3": {
            "text": "duften sagt man,"
        },
        "line.4": {
            "text": "ähnlich, obwohl sie sich verschieden"
        },
        "line.5": {
            "text": "parfümieren, alle vier watscheln"
        },
        "line.6": {
            "text": "ähnlich, und ihr unverheirateter"
        },
        "line.7": {
            "text": "Bruder watschelt ebenfalls,"
        },
        "line.8": {
            "text": "wohlwollend gesagt. Was ist"
        },
        "line.9": {
            "text": "wohlwollend. Alle Menschen"
        },
        "line.10": {
            "text": "werden Brüder, und die"
        },
        "line.11": {
            "text": "freistehenden Frauengestalten"
        },
        "line.12": {
            "text": "senken schnell die Köpfe."
        },
        "line.13": {
            "text": "Schöne Lügenschwestern,"
        },
        "line.14": {
            "text": "schön anzusehen die drei,"
        },
        "line.15": {
            "text": "ihre Sprache verdreht sich"
        },
        "line.16": {
            "text": "mehr und mehr, derzeit"
        },
        "line.17": {
            "text": "klingen ihre Sätze hell,"
        },
        "line.18": {
            "text": "eisern, eisig hell, sie halten"
        },
        "line.19": {
            "text": "sich zu dritt die Stange,"
        },
        "line.20": {
            "text": "ich, ich, ich sagen sie und"
        },
        "line.21": {
            "text": "schützen einander gegenseitig,"
        },
        "line.22": {
            "text": "die drei Künstlerinnen."
        }
    }
}