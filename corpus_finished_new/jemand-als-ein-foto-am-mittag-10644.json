{
    "title": "jemand-als-ein-foto-am-mittag-10644",
    "gender": "m",
    "author": "Sebastian Unger",
    "author_birth": "1978",
    "poem": {
        "line.1": {
            "text": "Die bestimmte Art Fehler ins Muster zu sprechen"
        },
        "line.2": {
            "text": "schön durch so viel neue Sprache"
        },
        "line.3": {
            "text": "einzeln gegangen durchs Öhr, Haar-"
        },
        "line.4": {
            "text": "risse und Feigen über die Straße hinweg"
        },
        "line.5": {
            "text": "offene Stellen"
        },
        "line.6": {
            "text": "Bleib so, wie du dort im Bild stehst"
        },
        "line.7": {
            "text": "der Wasserläufer"
        },
        "line.8": {
            "text": "verpass dem flüssigen Grund"
        },
        "line.9": {
            "text": "ein paar ordentliche Blechdellen"
        },
        "line.10": {
            "text": "halt die Luft im festen Händedruck und wate"
        },
        "line.11": {
            "text": "für ein paar Sekunden noch"
        },
        "line.12": {
            "text": "wie ein Foto entfernt"
        },
        "line.13": {
            "text": "Wie sie aufgeht die Form"
        },
        "line.14": {
            "text": "der geschwollenen Brust, der Tag"
        },
        "line.15": {
            "text": "eine versprühte Treibhauswolke im Zeitraffer"
        },
        "line.16": {
            "text": "Gewächse die sich öffnen und schließen, trainiert"
        },
        "line.17": {
            "text": "auf Muskelschwund: sich so gewaltsam"
        },
        "line.18": {
            "text": "ans Licht zu halten"
        },
        "line.19": {
            "text": "Sobald du leicht bist, versteig dich"
        },
        "line.20": {
            "text": "bei den Flugzeugen, wo alles gleich ist, Rauch"
        },
        "line.21": {
            "text": "um Halt zu finden in vorgetäuschten Organen, der beliehene"
        },
        "line.22": {
            "text": "Ast, die beliehene Schwerkraft"
        },
        "line.23": {
            "text": "die Häuser erledigen den Restanspruch"
        },
        "line.24": {
            "text": "auf Dauer"
        }
    }
}