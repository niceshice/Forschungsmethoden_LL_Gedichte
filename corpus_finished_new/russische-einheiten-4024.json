{
    "title": "russische-einheiten-4024",
    "gender": "m",
    "author": "Steffen Popp",
    "author_birth": "1978",
    "poem": {
        "line.1": {
            "text": "Eine Art Liebe, zwischen den Blocks"
        },
        "line.2": {
            "text": "mit Schneeohren: unwirklich, außer der Zeit"
        },
        "line.3": {
            "text": "liegen die Steine unter dem Eis"
        },
        "line.4": {
            "text": "die gefrorene Bremsspur, die Pirouette"
        },
        "line.5": {
            "text": "des Betrunkenen"
        },
        "line.6": {
            "text": "in meinem Herz"
        },
        "line.7": {
            "text": "dröhnt ein Finale, ich weiß nicht"
        },
        "line.8": {
            "text": "von welchem Stück"
        },
        "line.9": {
            "text": "durch das Balkonfenster"
        },
        "line.10": {
            "text": "blickt die Geranie, reglos, ein schläfriges Kind"
        },
        "line.11": {
            "text": "sagt: Wir haben Lenin gesehen"
        },
        "line.12": {
            "text": "und jedes Licht ist eine Münze Glück/Unglück"
        },
        "line.13": {
            "text": "die Dinge zerfallen, in ihre stoische Schönheit"
        },
        "line.14": {
            "text": "eine träumende Schaffnerin"
        },
        "line.15": {
            "text": "mit eisernem Münzkasten"
        },
        "line.16": {
            "text": "man sieht den Schnee und möchte sich losreißen"
        },
        "line.17": {
            "text": "wenn wir in kleinen Gefährten"
        },
        "line.18": {
            "text": "durch Städte reisen, bleiben Ringlinien"
        },
        "line.19": {
            "text": "die letzten Einheiten"
        },
        "line.20": {
            "text": "atmet der ausgebeutete Raum"
        },
        "line.21": {
            "text": "ein Massiv aus toten Bienen."
        }
    }
}