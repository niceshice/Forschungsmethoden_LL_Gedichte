{
    "title": "wie-ein-bambusspross-stoesst-die-sprache-durch-die-zeit-11474",
    "gender": "m",
    "author": "Franz Dodel",
    "author_birth": "1949",
    "poem": {
        "line.1": {
            "text": "[21171]wie ein Bambusspross"
        },
        "line.2": {
            "text": "stößt die Sprache durch die Zeit"
        },
        "line.3": {
            "text": "wächst in uns hinein"
        },
        "line.4": {
            "text": "sie will dass wir reden wenn"
        },
        "line.5": {
            "text": "etwas uns fehlt doch"
        },
        "line.6": {
            "text": "was uns fehlt fehlt uns erst recht"
        },
        "line.7": {
            "text": "wenn wir reden wie"
        },
        "line.8": {
            "text": "ließen sie sich finden die"
        },
        "line.9": {
            "text": "Laute die Wörter"
        },
        "line.10": {
            "text": "die die Trockenheit hindern"
        },
        "line.11": {
            "text": "sich auszubreiten"
        },
        "line.12": {
            "text": "[21211]alles was da ist"
        },
        "line.13": {
            "text": "irgendwie äußert es sich"
        },
        "line.14": {
            "text": "und lässt sich daran"
        },
        "line.15": {
            "text": "nicht hindern der Bienenschwarm"
        },
        "line.16": {
            "text": "der sich dem Knaben"
        },
        "line.17": {
            "text": "Platon grimmig summend auf"
        },
        "line.18": {
            "text": "den Mund gesetzt hat"
        },
        "line.19": {
            "text": "lässt diesen keineswegs für"
        },
        "line.20": {
            "text": "immer verstummen"
        },
        "line.21": {
            "text": "Honig soll was er redet"
        },
        "line.22": {
            "text": "den Hörenden sein"
        },
        "line.23": {
            "text": "für uns keltern die Bienen"
        },
        "line.24": {
            "text": "den Himmelsschweiß sagt"
        },
        "line.25": {
            "text": "Plinius der Ältere"
        },
        "line.26": {
            "text": "eine Ähnlichkeit"
        },
        "line.27": {
            "text": "bestünde also zwischen"
        },
        "line.28": {
            "text": "Himmelstau Honig"
        },
        "line.29": {
            "text": "und menschlicher Sprache dies"
        },
        "line.30": {
            "text": "scheint mir müsste doch"
        },
        "line.31": {
            "text": "gelten für jeden der spricht"
        },
        "line.32": {
            "text": "während ich spreche"
        },
        "line.33": {
            "text": "meine ich nahe zu sein"
        },
        "line.34": {
            "text": "dem Nabel der Welt"
        },
        "line.35": {
            "text": "am umbilicus urbis"
        },
        "line.36": {
            "text": "den aufzuknoten"
        },
        "line.37": {
            "text": "Sprache vergeblich versucht"
        },
        "line.38": {
            "text": "give up verse my boy"
        },
        "line.39": {
            "text": "theres nothing in it doch die"
        },
        "line.40": {
            "text": "Leerheit der Verse"
        },
        "line.41": {
            "text": "ist deren schärfstes Skalpell"
        },
        "line.42": {
            "text": "wie die Lerchen die"
        },
        "line.43": {
            "text": "unsichtbar irgendwo im"
        },
        "line.44": {
            "text": "Sonnenlicht singen"
        },
        "line.45": {
            "text": "kreisen die Wörter über"
        },
        "line.46": {
            "text": "den gut versteckten"
        },
        "line.47": {
            "text": "Nestern ihrer Bedeutung"
        },
        "line.48": {
            "text": "vielleicht müssten sie"
        },
        "line.49": {
            "text": "sich nur fallen lassen der"
        },
        "line.50": {
            "text": "Schwerkraft vertrauend"
        },
        "line.51": {
            "text": "um unverletzt sicheren"
        },
        "line.52": {
            "text": "Grund zu erreichen"
        },
        "line.53": {
            "text": "[21277]Wörter entfernen"
        },
        "line.54": {
            "text": "sich manchmal aus den Räumen"
        },
        "line.55": {
            "text": "ihres Gebrauchs doch"
        },
        "line.56": {
            "text": "bleiben sie wertvoll tauschbar"
        },
        "line.57": {
            "text": "wie alte Münzen"
        },
        "line.58": {
            "text": "das Wort minne zum Beispiel"
        },
        "line.59": {
            "text": "bleibt lichterregend"
        },
        "line.60": {
            "text": "nährt die flammula cordis"
        },
        "line.61": {
            "text": "und erwärmt den Sinn"
        },
        "line.62": {
            "text": "auf jenes Andere hin"
        },
        "line.63": {
            "text": "von dem wir hoffen"
        },
        "line.64": {
            "text": "dass wir ihm vielleicht doch nicht"
        },
        "line.65": {
            "text": "ganz gleichgültig sind"
        },
        "line.66": {
            "text": "denn im Zustand der minne"
        },
        "line.67": {
            "text": "spüren wir selbst die"
        },
        "line.68": {
            "text": "Dinge kümmern sich um uns"
        },
        "line.69": {
            "text": "und die Lücke vor"
        },
        "line.70": {
            "text": "der man uns warnt (mind the gap)"
        },
        "line.71": {
            "text": "bietet jetzt einen"
        },
        "line.72": {
            "text": "unerwarteten Ausblick"
        }
    }
}