{
    "title": "gedichtfrieden-germanistik-griechenlandkrise-grundsatzfragen-12834",
    "gender": "w",
    "author": "Margret Kreidl",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "GEDICHTFRIEDEN"
        },
        "line.2": {
            "text": "Ich bin im Verlag. Mein Verleger fragt, wann ich endlich"
        },
        "line.3": {
            "text": "etwas Neues schreibe. Ich arbeite gerade an einem Buch"
        },
        "line.4": {
            "text": "über den Gedichtfrieden mit der Zeit, sage ich. Er lacht:"
        },
        "line.5": {
            "text": "Ich kann nicht auf deinen Nachruf warten."
        },
        "line.6": {
            "text": "Einfache Erklärung:"
        },
        "line.7": {
            "text": "Über allen Gipfeln ist Ruh."
        },
        "line.8": {
            "text": "GERMANISTIK"
        },
        "line.9": {
            "text": "Das Kind im Germanen"
        },
        "line.10": {
            "text": "schreibt Gedichte,"
        },
        "line.11": {
            "text": "sagt der Germanist,"
        },
        "line.12": {
            "text": "aber warum das so ist,"
        },
        "line.13": {
            "text": "wissen wir nicht."
        },
        "line.14": {
            "text": "Einfache Erklärung: Alle alten Germanen sind Germanisten."
        },
        "line.15": {
            "text": "GRIECHENLANDKRISE"
        },
        "line.16": {
            "text": "Athen ist gefallen. Die Griechen zittern in meinem Zimmer."
        },
        "line.17": {
            "text": "Ich fürchte mich auch. Machen Sie sich keine Sorgen, sagt"
        },
        "line.18": {
            "text": "der Kommentator, das ist ein lieber Krieg."
        },
        "line.19": {
            "text": "Einfache Erklärung: Jeder hat einen Griechen zuhause."
        },
        "line.20": {
            "text": "GRUNDSATZFRAGEN"
        },
        "line.21": {
            "text": "Warum trinkt die Taube aus der Schale?"
        },
        "line.22": {
            "text": "Damit wir nicht ins Wasser fallen."
        },
        "line.23": {
            "text": "Warum hängt der Himmel voll Geigen?"
        },
        "line.24": {
            "text": "Damit wir im Bett nicht weinen."
        },
        "line.25": {
            "text": "Warum weht der Wind in den Bäumen?"
        },
        "line.26": {
            "text": "Damit wir von Äpfeln träumen."
        },
        "line.27": {
            "text": "Warum ist der Tisch gedeckt?"
        },
        "line.28": {
            "text": "Damit wir das Messer sehen."
        },
        "line.29": {
            "text": "Warum ist die Schachtel leer?"
        },
        "line.30": {
            "text": "Damit wir uns vermehren."
        },
        "line.31": {
            "text": "Warum ist der Schnee weiß?"
        },
        "line.32": {
            "text": "Damit wir ins Gras beißen."
        },
        "line.33": {
            "text": "Warum frisst der Wolf das Schaf?"
        },
        "line.34": {
            "text": "Damit wir gut schlafen."
        },
        "line.35": {
            "text": "Warum hat das Haus ein Dach?"
        },
        "line.36": {
            "text": "Damit wir weiterlachen."
        },
        "line.37": {
            "text": "Einfache Erklärung: Fragen halten uns wach."
        }
    }
}