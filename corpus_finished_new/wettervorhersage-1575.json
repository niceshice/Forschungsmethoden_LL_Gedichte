{
    "title": "wettervorhersage-1575",
    "gender": "m",
    "author": "Michael Krüger",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Irgendwann wird der Schnee"
        },
        "line.2": {
            "text": "sich auflösen in der Schmelze"
        },
        "line.3": {
            "text": "und zum Gießbach werden,"
        },
        "line.4": {
            "text": "der die dunklen Flüsse aufhellt"
        },
        "line.5": {
            "text": "auf ihrem bewachten Weg"
        },
        "line.6": {
            "text": "zum Meer. Irgendwann"
        },
        "line.7": {
            "text": "werden die Wolken hochgehen"
        },
        "line.8": {
            "text": "und die Bühne freigeben"
        },
        "line.9": {
            "text": "für die bittenden Augen."
        },
        "line.10": {
            "text": "Irgendwann werden wir wieder"
        },
        "line.11": {
            "text": "im Freien sitzen"
        },
        "line.12": {
            "text": "an den frisch gebeizten Tischen"
        },
        "line.13": {
            "text": "und die Bücher lesen,"
        },
        "line.14": {
            "text": "die im Winterschlaf lagen."
        },
        "line.15": {
            "text": "Also komm bitte bald,"
        },
        "line.16": {
            "text": "denn so wie es aussieht,"
        },
        "line.17": {
            "text": "wird es irgendwann wieder"
        },
        "line.18": {
            "text": "schneien."
        }
    }
}