{
    "title": "rauher-ort-4342",
    "gender": "m",
    "author": "Wulf Kirsten",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "I"
        },
        "line.2": {
            "text": "rauher tag an rauhem ort, bergerhoben,"
        },
        "line.3": {
            "text": "erdwärts schwarzes wolkengelänge,"
        },
        "line.4": {
            "text": "hinweg über bruch und trift orgelt"
        },
        "line.5": {
            "text": "der jachernde sturm, verbeißt sich"
        },
        "line.6": {
            "text": "im holz, daß es rasselt und klirrt"
        },
        "line.7": {
            "text": "im totenwald, schneegeplöder"
        },
        "line.8": {
            "text": "fegt in schrägstellung nieder,"
        },
        "line.9": {
            "text": "ein trommeln, ein pfeifen,"
        },
        "line.10": {
            "text": "wie es fetzt und stöbert im laub,"
        },
        "line.11": {
            "text": "das die schädelstätte bedeckt,"
        },
        "line.12": {
            "text": "jäh in den himmel gehoben, flugtüchtig"
        },
        "line.13": {
            "text": "und federleicht: Buchenwaldwetter."
        },
        "line.14": {
            "text": "2"
        },
        "line.15": {
            "text": "am steilhang eisenreifen,"
        },
        "line.16": {
            "text": "zertrümmertes blech,"
        },
        "line.17": {
            "text": "rostzerfreßne utensilien,"
        },
        "line.18": {
            "text": "wüst verstreut im dörnicht,"
        },
        "line.19": {
            "text": "das auf schuttmassen wuchert,"
        },
        "line.20": {
            "text": "hartriegel läuft freihändig"
        },
        "line.21": {
            "text": "die halde hinauf gleich mir,"
        },
        "line.22": {
            "text": "halbe teller, schüsseln,"
        },
        "line.23": {
            "text": "weißgeschirr marke Rosenthal,"
        },
        "line.24": {
            "text": "ein lederschuh zerbröselt"
        },
        "line.25": {
            "text": "vor meinen augen, oben standen"
        },
        "line.26": {
            "text": "kasernen, kasernen, besetzt"
        },
        "line.27": {
            "text": "von totenkopfverbänden,"
        },
        "line.28": {
            "text": "allberechnende barbaren"
        },
        "line.29": {
            "text": ","
        },
        "line.30": {
            "text": "die sich zerstreuten"
        },
        "line.31": {
            "text": "auf wilder flucht, satan"
        },
        "line.32": {
            "text": "untergetaucht, als biedermann"
        },
        "line.33": {
            "text": "auferstanden, friedfertig,"
        },
        "line.34": {
            "text": "keiner fliege je einen flügel"
        },
        "line.35": {
            "text": "gekrümmt, nützliches glied,"
        },
        "line.36": {
            "text": "wenn auch ohne gedächtnis."
        },
        "line.37": {
            "text": "3"
        },
        "line.38": {
            "text": "meerschutt,"
        },
        "line.39": {
            "text": "seelenverfinstert die kalkstirn"
        },
        "line.40": {
            "text": ","
        },
        "line.41": {
            "text": "aus dem berg geschlagen, steinträger"
        },
        "line.42": {
            "text": "Poller, schulterwund und wie gerädert"
        },
        "line.43": {
            "text": "am steilhang die serpentine hinauf,"
        },
        "line.44": {
            "text": "als ob ihn"
        },
        "line.45": {
            "text": "die mühle des schicksals"
        },
        "line.46": {
            "text": "zermalmt"
        },
        "line.47": {
            "text": ", auf die erdtafel schreiben die namen"
        },
        "line.48": {
            "text": "der toten, die in die postenkette liefen,"
        },
        "line.49": {
            "text": "hier ging Scholem, dort minister Winterstein,"
        },
        "line.50": {
            "text": "unfrei in der natur, eine endlose kette"
        },
        "line.51": {
            "text": "von namen, wehrlos geliefert,"
        },
        "line.52": {
            "text": "ein grauer tag, der mich umtreibt, kein"
        },
        "line.53": {
            "text": "mensch sonst, der die augenwege abgeht"
        },
        "line.54": {
            "text": "am laublosen aufwuchs, überrandet"
        },
        "line.55": {
            "text": "ansatzpunkte, halsbrecherisch im muschel-"
        },
        "line.56": {
            "text": "kalk,"
        },
        "line.57": {
            "text": "die menge der tyrannen wie wehende"
        },
        "line.58": {
            "text": "spreu"
        },
        "line.59": {
            "text": ", aus dieser baracke, auf deren grundriß"
        },
        "line.60": {
            "text": "ich steh, sprangen die kapos, droschen"
        },
        "line.61": {
            "text": "mit schaufelstielen, bis sie zerbrachen."
        },
        "line.62": {
            "text": "aufschwingende linien, moosüberzogene"
        },
        "line.63": {
            "text": "hügelhauben, über stillgelegten körpern"
        },
        "line.64": {
            "text": "der ausgewuchtete bruch, aufgelassen,"
        },
        "line.65": {
            "text": "als wär nichts geschehn."
        }
    }
}