{
    "title": "entsorgt-3020",
    "gender": "m",
    "author": "Nicolas  Born",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "So wird der Schrecken ohne Ende langsam"
        },
        "line.2": {
            "text": "normales Leben"
        },
        "line.3": {
            "text": "Zuschauer blinzeln in den Hof"
        },
        "line.4": {
            "text": "im Mittagslicht"
        },
        "line.5": {
            "text": "Kleinstadt, harte Narbe ziegelrot"
        },
        "line.6": {
            "text": "Gasthaus, wehende Gardinen"
        },
        "line.7": {
            "text": "und am Schreibtisch ist jetzt gering"
        },
        "line.8": {
            "text": "der persönliche Tod"
        },
        "line.9": {
            "text": "Ich kann nicht sagen, wie die Panik der Materie"
        },
        "line.10": {
            "text": "wirkt, wie ich in meiner Panik"
        },
        "line.11": {
            "text": "die nicht persönlich ist, nur an die"
        },
        "line.12": {
            "text": "falschen Wörter komme."
        },
        "line.13": {
            "text": "Das sorgend Schöne fehlt mir an"
        },
        "line.14": {
            "text": "Krypton"
        },
        "line.15": {
            "text": "und"
        },
        "line.16": {
            "text": "Jod 129"
        },
        "line.17": {
            "text": ". Mir fehlt die Zukunft der Zukunft"
        },
        "line.18": {
            "text": "mir"
        },
        "line.19": {
            "text": "fehlt sie."
        },
        "line.20": {
            "text": "Mir fehlen schon meine Kindeskinder"
        },
        "line.21": {
            "text": "Erinnerung an die Welten"
        },
        "line.22": {
            "text": "mir fehlen Folgen, lange Sommer am Wasser"
        },
        "line.23": {
            "text": "harte Winter, Wolle und Arbeit"
        },
        "line.24": {
            "text": "Hier entstehen Folgen starker Wörter"
        },
        "line.25": {
            "text": "die leblos sind, das verruchte Gesindel"
        },
        "line.26": {
            "text": "spürt nichts, sie schließen die Kartelle"
        },
        "line.27": {
            "text": "keine Ahnung was sie in die Erde setzen"
        },
        "line.28": {
            "text": "Ahnung nicht, nur Wissen"
        },
        "line.29": {
            "text": "was sie in die Erde setzen in Luft und Wasser"
        },
        "line.30": {
            "text": "für immer"
        },
        "line.31": {
            "text": "kein Gefühl für immer. Den Tod"
        },
        "line.32": {
            "text": "sonderbehandeln sie wie einen Schädling"
        },
        "line.33": {
            "text": "der gute Tod vergiftet wie die liebe Not."
        },
        "line.34": {
            "text": "Was schändet ihr die Gräber meiner Kindeskinder"
        },
        "line.35": {
            "text": "was plündert ihr den Traum der Materie,"
        },
        "line.36": {
            "text": "den Traum der Bilder, des Gewebs, der Bücher"
        },
        "line.37": {
            "text": "Knochen."
        },
        "line.38": {
            "text": "Die Trauer ist jetzt trostlos"
        },
        "line.39": {
            "text": "die Wut ohne Silbe, all die maskierte Lebendigkeit"
        },
        "line.40": {
            "text": "all die würgende Zuversicht"
        },
        "line.41": {
            "text": "Gras stürzt, die Gärten stürzen, niemand"
        },
        "line.42": {
            "text": "unterm Geldharnisch fühlt die Wunde"
        },
        "line.43": {
            "text": "entsorgt zu sein von sich selbst."
        },
        "line.44": {
            "text": "Kein Gedicht, höchstens das Ende davon."
        },
        "line.45": {
            "text": "Menschenvorkommen"
        },
        "line.46": {
            "text": "gefangen in verruchter Vernunft, die sich"
        },
        "line.47": {
            "text": "nicht einmal weiß vor Wissenschaft."
        },
        "line.48": {
            "text": "Kein Schritt mehr frei, kein Atem"
        },
        "line.49": {
            "text": "kein Wasser unerfaßt, käufliche Sommerspuren"
        },
        "line.50": {
            "text": "die Haut der Erde - Fotoabzüge"
        },
        "line.51": {
            "text": "die betonierte Seele, vorbereitetes Gewimmer"
        },
        "line.52": {
            "text": "das dann nicht mehr stattfindet"
        },
        "line.53": {
            "text": "vor Stimmgebrochenheit."
        },
        "line.54": {
            "text": "Winzige Prozeßrechnungen in der hohlen Hand"
        },
        "line.55": {
            "text": "beleben die Erde, alleswissende Mutanten"
        },
        "line.56": {
            "text": "dafür totaler Schutz vor Erfahrungen."
        },
        "line.57": {
            "text": "Lebensstatisten, Abgänger. Am Tropf"
        },
        "line.58": {
            "text": "der Systeme."
        },
        "line.59": {
            "text": "Gekippte Wiesenböschung, Engel, Ungewisse,"
        },
        "line.60": {
            "text": "warmer Menschenkörper und Verstehn"
        },
        "line.61": {
            "text": "Gärten hingebreitet, unter Zweigen Bänke . .."
        },
        "line.62": {
            "text": "....... Schatten ......Laub ... im Wind gesprochen"
        },
        "line.63": {
            "text": ".........................Samen"
        }
    }
}