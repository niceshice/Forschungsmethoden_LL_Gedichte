{
    "title": "mercury_redstone-4-5686",
    "gender": "m",
    "author": "Thien Tran",
    "author_birth": "1979",
    "poem": {
        "line.1": {
            "text": "konstante Geschwindigkeit"
        },
        "line.2": {
            "text": "bei konstanter Masse. man kann sich"
        },
        "line.3": {
            "text": "die Indifferenz vorstellen"
        },
        "line.4": {
            "text": "als ein Weder-noch. und anderntags"
        },
        "line.5": {
            "text": "das Aufschnattern der Tauben"
        },
        "line.6": {
            "text": "bis jetzt liefen die Realitätsgeneratoren"
        },
        "line.7": {
            "text": "einwandfrei. Touch Pad-Oberflächen"
        },
        "line.8": {
            "text": "unendlich bespielbar"
        },
        "line.9": {
            "text": "zumindest unseren Erfahrungen nach"
        },
        "line.10": {
            "text": "die Identifizierung des Objekts vollzog sich"
        },
        "line.11": {
            "text": "plötzlich. auch bei mir: unweigerlich die Bildung"
        },
        "line.12": {
            "text": "von Wärmedioxidatomen"
        },
        "line.13": {
            "text": "die sofort in sich zerfielen. als ich aufblickte"
        },
        "line.14": {
            "text": "im Gehirn stieg die Protonen-Dichte an"
        },
        "line.15": {
            "text": "kleine elektromagnetisch aufgeladene Teilchen"
        },
        "line.16": {
            "text": "die sprachfähig waren. siehe Quantenchemie"
        },
        "line.17": {
            "text": "das System reagierte"
        },
        "line.18": {
            "text": "die Scannmaschinen. die Bioinformations-"
        },
        "line.19": {
            "text": "reaktoren reagierten."
        }
    }
}