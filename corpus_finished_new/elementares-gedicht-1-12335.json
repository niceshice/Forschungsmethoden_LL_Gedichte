{
    "title": "elementares-gedicht-1-12335",
    "gender": "m",
    "author": "Ulrich Koch",
    "author_birth": "1966",
    "poem": {
        "line.1": {
            "text": "Trösten Brücken?"
        },
        "line.2": {
            "text": "Sterben Pferde?"
        },
        "line.3": {
            "text": "Jeden Morgen wäscht sie ihre Haare,"
        },
        "line.4": {
            "text": "als ertränke sie eine Katze."
        },
        "line.5": {
            "text": "Ich möchte ungeschehen machen,"
        },
        "line.6": {
            "text": "worauf ich so lange warte."
        }
    }
}