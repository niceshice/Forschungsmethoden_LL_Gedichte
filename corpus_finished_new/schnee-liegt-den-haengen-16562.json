{
    "title": "schnee-liegt-den-haengen-16562",
    "gender": "m",
    "author": "Sascha Garzetti",
    "author_birth": "1986",
    "poem": {
        "line.1": {
            "text": "Schnee liegt in den Hängen"
        },
        "line.2": {
            "text": "wie eine Herde Schafe"
        },
        "line.3": {
            "text": "birgt das Licht aus dem Winter."
        },
        "line.4": {
            "text": "Sehe die Maulwurfshugel"
        },
        "line.5": {
            "text": "auf den Feldern"
        },
        "line.6": {
            "text": "aufgeworfen gegen die Kälte"
        },
        "line.7": {
            "text": "sehe vor unseren Mundern"
        },
        "line.8": {
            "text": "den Hauch aufsteigen"
        },
        "line.9": {
            "text": "und Wörter, die hindurchschlupfen"
        },
        "line.10": {
            "text": "die von der Kindheit erzählen"
        },
        "line.11": {
            "text": "wie von einem Ort"
        },
        "line.12": {
            "text": "an dem ich lange nicht war."
        }
    }
}