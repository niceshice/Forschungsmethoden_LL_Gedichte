{
    "title": "kloppitz-klopot-nad-odra-1358",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "Körper, Depots der Geschichte, einander"
        },
        "line.2": {
            "text": "ablösend, einander ähnlich, gewöhnlich"
        },
        "line.3": {
            "text": "im Tageslicht, an einem Straßenrand Bäume"
        },
        "line.4": {
            "text": "hinterlassend, eine Art Faßbarkeit,"
        },
        "line.5": {
            "text": "Körper, aufgeschwemmt, ausgemergelt und"
        },
        "line.6": {
            "text": "jeden Tag tiefer hineingezogen"
        },
        "line.7": {
            "text": "in Nudeln mit Gulasch, in Erbsen-"
        },
        "line.8": {
            "text": "suppe, die strengen Gerüche des Mittags,"
        },
        "line.9": {
            "text": "der Wiedererkennbarkeit, Tische"
        },
        "line.10": {
            "text": "Kantinen, die Fortsetzung täglicher"
        },
        "line.11": {
            "text": "Schwäche, Besänftigung, Bänke"
        },
        "line.12": {
            "text": "am Abend vor Hauswänden, Körper"
        },
        "line.13": {
            "text": "saugen die Wärme der Mauern auf"
        },
        "line.14": {
            "text": "gegen den Winter, die Wiederkehr"
        },
        "line.15": {
            "text": "des Verdrängten, ein Westwind trägt Dämpfe"
        },
        "line.16": {
            "text": "herüber aus (ehemals) Stalinstadt, glaub-"
        },
        "line.17": {
            "text": "würdige, nahe Gerüche, sich ablagernd,"
        },
        "line.18": {
            "text": "nachrückend Früheres, Bilder von Dieselmotoren,"
        },
        "line.19": {
            "text": "erinnerte Braunkohle, Felder, gepflügt,"
        },
        "line.20": {
            "text": "hier im Ort brüten Störche,"
        },
        "line.21": {
            "text": "auf Sand gebaut, weiche"
        },
        "line.22": {
            "text": "Körper in denen dies stattfindet,"
        },
        "line.23": {
            "text": "weichende Körper, wie sehr"
        },
        "line.24": {
            "text": "ist es überall gleich"
        }
    }
}