{
    "title": "winter-jerusalem-4026",
    "gender": "m",
    "author": "Steffen Popp",
    "author_birth": "1978",
    "poem": {
        "line.1": {
            "text": "Ich bete, ich bete, allein"
        },
        "line.2": {
            "text": "zwischen Grünpflanzen kaue ich Chips, salziges Manna"
        },
        "line.3": {
            "text": ""
        },
        "line.4": {
            "text": "Stadt, leeres Gebirg, der Mond zielt"
        },
        "line.5": {
            "text": "mit der Gelassenheit eines Maurers"
        },
        "line.6": {
            "text": "über die Gräben"
        },
        "line.7": {
            "text": "Die Sterne sind matt, eine Brailleschrift"
        },
        "line.8": {
            "text": "im gelben Hauslicht, unten am Tor stehen die Schinder"
        },
        "line.9": {
            "text": "ein Haufen Nullen, schneeäugig"
        },
        "line.10": {
            "text": "verkrachte Dämonen mit Trillerpfeifen"
        },
        "line.11": {
            "text": "aber die Welt atmet weiter"
        },
        "line.12": {
            "text": "an meinem Fenster, kein Fluch"
        },
        "line.13": {
            "text": "treibt sie aus ihrem Geheimnis"
        },
        "line.14": {
            "text": "kein Wurm nagt sie an, kein Gebrüll eines heiligen"
        },
        "line.15": {
            "text": "Rinds"
        },
        "line.16": {
            "text": "kann sie erweichen!"
        },
        "line.17": {
            "text": "feldweit, unter Schneezäunen"
        },
        "line.18": {
            "text": "sinkt sie zurück, in einen Schlaf aus Granit"
        },
        "line.19": {
            "text": "auch sinkt das Meer, auch sinken"
        },
        "line.20": {
            "text": "die großen Meer-Säuger, und alle Engel"
        },
        "line.21": {
            "text": "sinken zurück"
        },
        "line.22": {
            "text": "in ihre Schöpfungsgelenke"
        },
        "line.23": {
            "text": "in einem Schneeglas, vor mir"
        },
        "line.24": {
            "text": "stürzt alles ein, schütteln die Sterne sich"
        },
        "line.25": {
            "text": "aber nichts mäßigt die Dinge"
        },
        "line.26": {
            "text": "in ihrem Gewicht, treibt die Dämonen aus"
        },
        "line.27": {
            "text": "diese Armleuchter"
        },
        "line.28": {
            "text": "unten am Tor stehen sie unverwandt"
        },
        "line.29": {
            "text": "fröhliche Schneetreiber"
        },
        "line.30": {
            "text": "auf ihre Schaufeln gestützt, spielen Trick-Track"
        },
        "line.31": {
            "text": "und ihre Hüte, dort in der Tiefe"
        },
        "line.32": {
            "text": "schwanken wie Wurfscheiben"
        }
    }
}