{
    "title": "das-klingen-der-schuesse-am-comer-see-3938",
    "gender": "m",
    "author": "Dieter M. Gräf",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": "es regnet, oder die Sonne scheint."
        },
        "line.2": {
            "text": "Durch diese Marienluft"
        },
        "line.3": {
            "text": "ihren Weg hoch zur Sichtbar"
        },
        "line.4": {
            "text": "keit der Kapelle. Drala"
        },
        "line.5": {
            "text": "des Astes, von irgend jemand"
        },
        "line.6": {
            "text": "an den Rasttisch getupft;"
        },
        "line.7": {
            "text": "ein unten am See schwebendes"
        },
        "line.8": {
            "text": "Glockenspiel halber"
        },
        "line.9": {
            "text": "Stunden, in das"
        },
        "line.10": {
            "text": "Bergziegenglöckchen ein"
        },
        "line.11": {
            "text": "fallen, Schüsse,"
        },
        "line.12": {
            "text": "hier klingen sie"
        },
        "line.13": {
            "text": "nach, denn alle"
        },
        "line.14": {
            "text": "sind gerettet, die"
        },
        "line.15": {
            "text": "jemand küsst und jemand tötet;"
        },
        "line.16": {
            "text": "der Glorienschein um die Taube,"
        },
        "line.17": {
            "text": "die der Fledermaus gleicht"
        },
        "line.18": {
            "text": "auf dem Bildstock, darauf Gott"
        },
        "line.19": {
            "text": "heiten, Eidechsen, älter"
        },
        "line.20": {
            "text": "als der Menschensohn,"
        },
        "line.21": {
            "text": "zuckend vor Leben."
        }
    }
}