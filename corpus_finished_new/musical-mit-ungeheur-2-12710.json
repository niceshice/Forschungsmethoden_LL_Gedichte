{
    "title": "musical-mit-ungeheur-2-12710",
    "gender": "w",
    "author": "Martina Hefter",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Ungeheur und Gartenroboter liebkosen einander"
        },
        "line.2": {
            "text": "eine Minute und vergessen darüber ihre Natur"
        },
        "line.3": {
            "text": "Pas de Deux, ohne Worte"
        },
        "line.4": {
            "text": "Unten, oben, Puls Puls Puls Puls,"
        },
        "line.5": {
            "text": "Nichts ist falsch, was ich an dir taste von dir dachte."
        },
        "line.6": {
            "text": "Fühlt sich an, als hantiere man am ganzen"
        },
        "line.7": {
            "text": "Herz. Nicht real. Bisschen kahl."
        },
        "line.8": {
            "text": "Bisschen tuscheln,"
        },
        "line.9": {
            "text": "lass mich wuscheln, am Ohr, da wächst Flor,"
        },
        "line.10": {
            "text": "und die Verhärtungen, dolle Knubbel,"
        },
        "line.11": {
            "text": "bilden sich wieder zurück, heißts."
        },
        "line.12": {
            "text": "Los, noch ein Beinchen lupfen."
        },
        "line.13": {
            "text": "Kingsize-Bienchen auf Bauch, Schultern tupfen."
        },
        "line.14": {
            "text": "Material, so zusammengeballt,"
        },
        "line.15": {
            "text": "dass der Druck einen Ton macht."
        },
        "line.16": {
            "text": "Langsam tropft von mir"
        },
        "line.17": {
            "text": "Gewicht für Gewicht."
        },
        "line.18": {
            "text": "Alles, was wir tun können, ist, zu ruhn"
        },
        "line.19": {
            "text": "auf Rumpf. Oben lodert Kopf."
        },
        "line.20": {
            "text": "Ich form mit meinen Händen  ja, es sind Hände"
        },
        "line.21": {
            "text": "für diesen Darling einen blitzenden Topf."
        }
    }
}