{
    "title": "so-ist-das-iii-16355",
    "gender": "w",
    "author": "Andrea Grill",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "III."
        },
        "line.2": {
            "text": "stundenlang von Schlaf geredet"
        },
        "line.3": {
            "text": "(nicht schlafen gegangen) der"
        },
        "line.4": {
            "text": "Winter holte noch schnell Atem"
        },
        "line.5": {
            "text": "bot dem Sommer Waffenstillstand an"
        },
        "line.6": {
            "text": "oder feinere Gesetze für wer"
        },
        "line.7": {
            "text": "unter freiem Himmel logiert"
        },
        "line.8": {
            "text": "unterwegs warst du allein"
        },
        "line.9": {
            "text": "ein Mantel dein ständiger Begleiter"
        },
        "line.10": {
            "text": "hält dich fest am Arm"
        },
        "line.11": {
            "text": "Zoll des lokalen Magnetfelds"
        },
        "line.12": {
            "text": "stundenlang paarweise Schritte geändert"
        },
        "line.13": {
            "text": "verlasse deinen Körper ungern und"
        },
        "line.14": {
            "text": "gegen den Willen der groben kugeligen"
        },
        "line.15": {
            "text": "Nachtgeister aus dem vorigen Jahrhundert;"
        },
        "line.16": {
            "text": "sie nämlich hätten mehr sehen wollen"
        }
    }
}