{
    "title": "rede-mit-toten-6127",
    "gender": "m",
    "author": "Steffen Popp",
    "author_birth": "1978",
    "poem": {
        "line.1": {
            "text": "Zu wenig Mittel, alles zu denken, was geschieht"
        },
        "line.2": {
            "text": "pflanzliches Schicksal z.B.:"
        },
        "line.3": {
            "text": "Im Tontopf verfault."
        },
        "line.4": {
            "text": "Das Intensive, gelangweilt von unseren Stilen"
        },
        "line.5": {
            "text": "spuckt uns ins Licht, Humus für Geist, Mikroben."
        },
        "line.6": {
            "text": "Was ist, sagt das Kind, außer Erinnerung nicht"
        },
        "line.7": {
            "text": "gegenwärtig im Raum, unausgespuckt in der Zeit"
        },
        "line.8": {
            "text": "es lernt an diesem Tag die Wörter"
        },
        "line.9": {
            "text": "Nougat"
        },
        "line.10": {
            "text": "Honduras, Zentralnervensystem, Zwerg Nase."
        },
        "line.11": {
            "text": "Es lernt das Wort"
        },
        "line.12": {
            "text": "Babel"
        },
        "line.13": {
            "text": "und vergisst es nicht"
        },
        "line.14": {
            "text": "nur seinen Sinn, es lernt das Wort"
        },
        "line.15": {
            "text": "Hobel"
        },
        "line.16": {
            "text": "das Wort"
        },
        "line.17": {
            "text": "Hobelspäne"
        },
        "line.18": {
            "text": ", das Wort"
        },
        "line.19": {
            "text": "Hobelbank."
        },
        "line.20": {
            "text": "Signifikant: das Schicksal des Hamsters z.B."
        },
        "line.21": {
            "text": "der Spinnen. Das Kind sagt hier nur -"
        },
        "line.22": {
            "text": "kant"
        },
        "line.23": {
            "text": ":"
        },
        "line.24": {
            "text": "Legt wortgenau Gräber an. Redet so mit Toten."
        }
    }
}