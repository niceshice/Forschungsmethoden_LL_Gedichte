{
    "title": "sailors-language-lesson-5426",
    "gender": "m",
    "author": "Uwe Kolbe",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "Es war in der Kleinstadt,"
        },
        "line.2": {
            "text": "kann sein, sie war lächerlich,"
        },
        "line.3": {
            "text": "du nahmst sie wie jede ernst,"
        },
        "line.4": {
            "text": "weil dieses Leben nur eins ist"
        },
        "line.5": {
            "text": "nach deiner bescheidenen"
        },
        "line.6": {
            "text": "Rechnung."
        },
        "line.7": {
            "text": "Es kam, wie es immer kommt."
        },
        "line.8": {
            "text": "Du lerntest die Sprache der Frau"
        },
        "line.9": {
            "text": "von Frage zu Frage genauer."
        },
        "line.10": {
            "text": "Ihr hattet einander erkannt"
        },
        "line.11": {
            "text": "als nur zu diesem Gespräch"
        },
        "line.12": {
            "text": "geboren."
        },
        "line.13": {
            "text": "Es war in der Kleinstadt,"
        },
        "line.14": {
            "text": "der wirklich lächerlichen Stadt,"
        },
        "line.15": {
            "text": "dass du dich eingelassen hast"
        },
        "line.16": {
            "text": "und Antwort gabst"
        },
        "line.17": {
            "text": "ihrem Mund, ihrem Schoß"
        },
        "line.18": {
            "text": "und den Tränen."
        },
        "line.19": {
            "text": "Nach einem Kassensturz"
        },
        "line.20": {
            "text": "musstest du weiterziehen,"
        },
        "line.21": {
            "text": "schriebst ihr noch Karten"
        },
        "line.22": {
            "text": "in eurer vertrauten Sprache,"
        },
        "line.23": {
            "text": "längst sprach dein Mund"
        },
        "line.24": {
            "text": "die nächste."
        }
    }
}