{
    "title": "fluchtwasser-3355",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "Wasser vesi vettä"
        },
        "line.2": {
            "text": "seine Geschichte"
        },
        "line.3": {
            "text": "als See- Moor-Flussgeschichte"
        },
        "line.4": {
            "text": "in diesem Land ist eine reiche gewesen"
        },
        "line.5": {
            "text": "sickernd fliessend strömend"
        },
        "line.6": {
            "text": "Das Volk mit der reichen Wassergeschichte"
        },
        "line.7": {
            "text": "geht in die Knie"
        },
        "line.8": {
            "text": "in den Saunas den Küchen in den Ställen bei dem Vieh"
        },
        "line.9": {
            "text": "in den Bädern vor den Brunnen Wiesenbrunnen Waldbrunnen"
        },
        "line.10": {
            "text": "Wasser vesi vettä"
        },
        "line.11": {
            "text": "verlass uns nicht"
        },
        "line.12": {
            "text": "Der Himmel ist seit dem Sommer aus Stein"
        },
        "line.13": {
            "text": "aus blauem orangem grauem Stein"
        },
        "line.14": {
            "text": "aus Wolkenmoränen"
        },
        "line.15": {
            "text": "Die Brunnen sind offene Krägen"
        },
        "line.16": {
            "text": "die aus der Erde ragen hechelnd"
        },
        "line.17": {
            "text": "röchelnd ihr Rachenraum glüht"
        },
        "line.18": {
            "text": "Das Volk mit der reichen Wassergeschichte"
        },
        "line.19": {
            "text": "fährt zu den Seen mit"
        },
        "line.20": {
            "text": "Becken Zubern Schöpfern Schläuchen Pumpen"
        },
        "line.21": {
            "text": "geht in die Knie"
        },
        "line.22": {
            "text": "Wasser vesi vettä"
        },
        "line.23": {
            "text": "du besamst sonst die Erde"
        },
        "line.24": {
            "text": "jetzt lässt du Wurzeln dursten"
        },
        "line.25": {
            "text": "Wiesenwurzeln Waldwurzeln Gras und Bäume sterben"
        },
        "line.26": {
            "text": "für uns selber wenigstens"
        },
        "line.27": {
            "text": "holen wir uns dich"
        },
        "line.28": {
            "text": "Die Seen fallen in sich zusammen"
        },
        "line.29": {
            "text": "Wasser vesi vettä"
        },
        "line.30": {
            "text": "verlass uns nicht"
        },
        "line.31": {
            "text": "du Fruchtwasser der Fische die in uns keimen"
        },
        "line.32": {
            "text": "trocknen wir aus wird Fruchtmord geschehen"
        },
        "line.33": {
            "text": "die Ufer der Seen treten hervor"
        },
        "line.34": {
            "text": "um sie gelegte Leidenswülste"
        },
        "line.35": {
            "text": "da tritt mit Macht der Winter ein"
        },
        "line.36": {
            "text": "der sie bedeckt verschliesst"
        },
        "line.37": {
            "text": "Wasser vesi vettä erbarm dich vedenarmo"
        },
        "line.38": {
            "text": "wir wissen von den Fluten die im Süden toben"
        },
        "line.39": {
            "text": "hätten wir nur ein paar Tropfen davon"
        },
        "line.40": {
            "text": "Das Volk mit der reichen Wassergeschichte hat"
        },
        "line.41": {
            "text": "keine Riten es dankt nicht auf den Knien"
        },
        "line.42": {
            "text": "für schon erhaltenes Wasser"
        },
        "line.43": {
            "text": "es opfert nicht"
        },
        "line.44": {
            "text": "tätschelt das steinerne Himmelsgesicht"
        },
        "line.45": {
            "text": "Wasser vesi vettä verlass uns nicht"
        },
        "line.46": {
            "text": "trommelt schlägt auf es ein"
        },
        "line.47": {
            "text": "Austritt tatsächlich ein kleiner Regen"
        },
        "line.48": {
            "text": "nicht stärker als kläglich geweinte Tränen"
        },
        "line.49": {
            "text": "der Regen dringt in den Boden"
        },
        "line.50": {
            "text": "der Frost packt zu"
        },
        "line.51": {
            "text": "lässt das Wasser zu Eis erstarren"
        },
        "line.52": {
            "text": "Eis wird es bis zur Aprilschmelze sein"
        }
    }
}