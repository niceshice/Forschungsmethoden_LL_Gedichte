{
    "title": "wind-teheran-13243",
    "gender": "w",
    "author": "Ilma Rakusa",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "für Mahmud Doulatabadi"
        },
        "line.2": {
            "text": "Wind hatte ich nicht erwartet"
        },
        "line.3": {
            "text": "einen Wind der die Blätter umdrehte"
        },
        "line.4": {
            "text": "an den Kopftüchern zerrte"
        },
        "line.5": {
            "text": "den Strassenstaub hochblies"
        },
        "line.6": {
            "text": "Wirbel bildete"
        },
        "line.7": {
            "text": "der die Sträucher zerwühlte"
        },
        "line.8": {
            "text": "und Plastiktüten zum Tanzen brachte"
        },
        "line.9": {
            "text": "Wind von allen Seiten"
        },
        "line.10": {
            "text": "ohne Unterbrechung"
        },
        "line.11": {
            "text": "Wind"
        },
        "line.12": {
            "text": "oben die glühenden Schneeberge"
        },
        "line.13": {
            "text": "unten das Wüstengrau"
        },
        "line.14": {
            "text": "und trockene Kehlen"
        },
        "line.15": {
            "text": "du schluckst"
        },
        "line.16": {
            "text": "du hast Wind geschluckt"
        },
        "line.17": {
            "text": "du hast ihn gegessen"
        },
        "line.18": {
            "text": "er schmeckt wie Filzstaub"
        },
        "line.19": {
            "text": "er fährt dir in Nase und Augen"
        },
        "line.20": {
            "text": "verfängt sich in deinem Mantel"
        },
        "line.21": {
            "text": "du weinst"
        },
        "line.22": {
            "text": "du weinst nicht aus Trauer"
        },
        "line.23": {
            "text": "du weinst Wind"
        },
        "line.24": {
            "text": "er hat keinen Namen"
        },
        "line.25": {
            "text": "er tut was er will"
        }
    }
}