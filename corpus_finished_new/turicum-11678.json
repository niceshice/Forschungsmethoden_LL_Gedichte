{
    "title": "turicum-11678",
    "gender": "m",
    "author": "Franz Hohler",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Die erste Nachricht"
        },
        "line.2": {
            "text": "die uns erreicht"
        },
        "line.3": {
            "text": "aus Zürich"
        },
        "line.4": {
            "text": "ist"
        },
        "line.5": {
            "text": "im 2. Jahrhundert nach Christus"
        },
        "line.6": {
            "text": "der Tod eines Kindes"
        },
        "line.7": {
            "text": "des kleinen"
        },
        "line.8": {
            "text": "Lucius Aelius"
        },
        "line.9": {
            "text": "sein Vater war römischer Oberzöllner"
        },
        "line.10": {
            "text": "Geld war sicher nicht sein Problem"
        },
        "line.11": {
            "text": "er hatte ein Amt, eine Frau und zu essen die Fülle"
        },
        "line.12": {
            "text": "und doch ist der Sohn"
        },
        "line.13": {
            "text": "nicht älter geworden"
        },
        "line.14": {
            "text": "als 1 Jahr 5 Monate und 5 Tage"
        },
        "line.15": {
            "text": "und seine Mutter hiess Secundina"
        },
        "line.16": {
            "text": "und ihr Kummer ist abzulesen"
        },
        "line.17": {
            "text": "aus der letzten Zeile des Grabsteins"
        },
        "line.18": {
            "text": "parentes dulcissimo filio"
        },
        "line.19": {
            "text": "die Eltern dem herzallerliebsten Sohn."
        },
        "line.20": {
            "text": "Heute"
        },
        "line.21": {
            "text": "sind es nur 5 Minuten zu Fuss"
        },
        "line.22": {
            "text": "von den Kastellen des Geldes"
        },
        "line.23": {
            "text": "und den Geschäften der obersten Oberzöllner"
        },
        "line.24": {
            "text": "hinüber zum Lindenhof"
        },
        "line.25": {
            "text": "wo alte Männer"
        },
        "line.26": {
            "text": "unter Bäumen Schachfiguren schieben"
        },
        "line.27": {
            "text": "und manchmal jemand stehenbleibt"
        },
        "line.28": {
            "text": "wie ich"
        },
        "line.29": {
            "text": "und diese Inschrift liest"
        },
        "line.30": {
            "text": "und denkt"
        },
        "line.31": {
            "text": "auch wenn in dieser Stadt"
        },
        "line.32": {
            "text": "gebaut gebohrt gelocht gerafft wird"
        },
        "line.33": {
            "text": "bis sie ganz aus Gold ist und aus Glas und Stahl"
        },
        "line.34": {
            "text": "dann liegt zuunterst doch"
        },
        "line.35": {
            "text": "ein totes Kind"
        },
        "line.36": {
            "text": "und eine Trauer"
        },
        "line.37": {
            "text": "die ausreicht"
        },
        "line.38": {
            "text": "für Jahrhunderte."
        }
    }
}