{
    "title": "der-verschleppte-regenwurm-1449",
    "gender": "w",
    "author": "Irmela Brender",
    "author_birth": "1935",
    "poem": {
        "line.1": {
            "text": "Ein Regenwurm"
        },
        "line.2": {
            "text": "auf einem Turm"
        },
        "line.3": {
            "text": "in Schnee und Sturm"
        },
        "line.4": {
            "text": "ist klar am falschen Ort."
        },
        "line.5": {
            "text": "Er wäre lieber dort,"
        },
        "line.6": {
            "text": "wo er als Boden Erde hat"
        },
        "line.7": {
            "text": "und nicht nur Stein, so kalt und glatt."
        },
        "line.8": {
            "text": "Das wurmt den Wurm."
        },
        "line.9": {
            "text": "Er türmt vom Turm"
        },
        "line.10": {
            "text": "und stürmt im Sturm"
        },
        "line.11": {
            "text": "hinunter und hinaus -"
        },
        "line.12": {
            "text": "beinah wärs mit ihm aus,"
        },
        "line.13": {
            "text": "denn rundum liegt nichts als ein See,"
        },
        "line.14": {
            "text": "bedeckt mit Eis und Schnee."
        },
        "line.15": {
            "text": "Das Los des Wurms"
        },
        "line.16": {
            "text": "am Fuß des Turms"
        },
        "line.17": {
            "text": "zur Zeit des Sturms"
        },
        "line.18": {
            "text": "ist unermesslich schwer."
        },
        "line.19": {
            "text": "Jedoch  wie kam er her?"
        },
        "line.20": {
            "text": "Vielleicht hat er trotz allem Glück"
        },
        "line.21": {
            "text": "und kommt so auch zurück?"
        },
        "line.22": {
            "text": "Er kam im Schnabel einer Meise,"
        },
        "line.23": {
            "text": "die hatte ihn gepickt als Speise"
        },
        "line.24": {
            "text": "und ließ ihn fallen, dummerweise,"
        },
        "line.25": {
            "text": "beim Heimflug durch den Sturm."
        },
        "line.26": {
            "text": "Drum saß der Wurm"
        },
        "line.27": {
            "text": "auf diesem Turm."
        },
        "line.28": {
            "text": "Jetzt wartet er, der arme Wurm,"
        },
        "line.29": {
            "text": "immer noch in Schnee und Sturm"
        },
        "line.30": {
            "text": "auf stets dem selben kalten Turm"
        },
        "line.31": {
            "text": "für den zweiten Teil der Reise"
        },
        "line.32": {
            "text": "auf die nächste Meise."
        }
    }
}