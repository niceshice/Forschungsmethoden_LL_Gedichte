{
    "title": "forsythien-die-knallgelb-noch-blattlos-ihr-wuerfeln-1007",
    "gender": "w",
    "author": "Ulrike Draesner",
    "author_birth": "1962",
    "poem": {
        "line.1": {
            "text": "das knospen der bäume, was für ein april."
        },
        "line.2": {
            "text": "was für ein mageres segnen, kastanien"
        },
        "line.3": {
            "text": "knospen auf autochrom, was"
        },
        "line.4": {
            "text": "für ein mageres regnen, knallgelb"
        },
        "line.5": {
            "text": "die forsythien, was für ein blättern,"
        },
        "line.6": {
            "text": "für was -"
        },
        "line.7": {
            "text": "büsche. traueraugen. an"
        },
        "line.8": {
            "text": "triebe, die los. die nicht."
        },
        "line.9": {
            "text": "regen als er hernieder. wie"
        },
        "line.10": {
            "text": "durch seltsamen wald ging"
        },
        "line.11": {
            "text": "ich mit den seltsamen weißen"
        },
        "line.12": {
            "text": "blumen, den zu kleinen füßen:"
        },
        "line.13": {
            "text": "knöcheltief ein blicken, das"
        },
        "line.14": {
            "text": "fehlt."
        },
        "line.15": {
            "text": "mädchenhöhe, ein"
        },
        "line.16": {
            "text": "schnitt. forsythie im brust"
        },
        "line.17": {
            "text": "bereich, hüpfend der pony"
        },
        "line.18": {
            "text": "vor der stirn - geschnittener"
        },
        "line.19": {
            "text": "schopf, der gedanke an dich"
        },
        "line.20": {
            "text": "wenn du wie jetzt dort hinten"
        },
        "line.21": {
            "text": "winkst, vater, in deiner rinde,"
        },
        "line.22": {
            "text": "sich näherndes grün."
        },
        "line.23": {
            "text": "forsythien, die knallgelb, noch blattlos,"
        },
        "line.24": {
            "text": "ihr würfeln, vorm waldrand, der kippt."
        },
        "line.25": {
            "text": "gelbe streichhölzer, sonst nichts."
        },
        "line.26": {
            "text": "touchpad stirn. klickt die lücken"
        },
        "line.27": {
            "text": "des waldes an. \"dich gibt es"
        },
        "line.28": {
            "text": "nicht mehr für mich\", hast du gesagt."
        },
        "line.29": {
            "text": "staub auf dem autochrom. der regen. meine"
        },
        "line.30": {
            "text": "füße stecken in schuhen, die drücken."
        },
        "line.31": {
            "text": "das knospen der bäume. nichts kehrt zurück."
        }
    }
}