{
    "title": "350",
    "gender": "m",
    "author": "Hans Magnus Enzensberger",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Bevor du B sagst, verweile doch,"
        },
        "line.2": {
            "text": "horch, bedenk,"
        },
        "line.3": {
            "text": "was du gesagt hast. Ein Vokal,"
        },
        "line.4": {
            "text": "der wenig bedeutet,"
        },
        "line.5": {
            "text": "viel in Bewegung setzt."
        },
        "line.6": {
            "text": "Einmal den Mund aufgemacht,"
        },
        "line.7": {
            "text": "und du treibst deine sterbliche Hülle"
        },
        "line.8": {
            "text": "zu Leistungen an"
        },
        "line.9": {
            "text": "von kosmischer Komplexität:"
        },
        "line.10": {
            "text": "ganze Kaskaden von Reizen,"
        },
        "line.11": {
            "text": "Berechnungen, Turbulenzen,"
        },
        "line.12": {
            "text": "hinter dem Rücken dessen,"
        },
        "line.13": {
            "text": "der Ich ist  vom Gehirn,"
        },
        "line.14": {
            "text": "das nicht redet"
        },
        "line.15": {
            "text": "und jeder Wissenschaft spottet,"
        },
        "line.16": {
            "text": "zu schweigen."
        }
    }
}