{
    "title": "im-auto-ueber-land-14381",
    "gender": "m",
    "author": "Erich Kästner",
    "author_birth": "1899",
    "poem": {
        "line.1": {
            "text": "An besonders schönen Tagen"
        },
        "line.2": {
            "text": "ist der Himmel sozusagen"
        },
        "line.3": {
            "text": "wie aus blauem Porzellan."
        },
        "line.4": {
            "text": "Und die Federwolken gleichen"
        },
        "line.5": {
            "text": "weißen, zart getuschten Zeichen,"
        },
        "line.6": {
            "text": "wie wir sie auf Schalen sahn."
        },
        "line.7": {
            "text": "Alle Welt fühlt sich gehoben,"
        },
        "line.8": {
            "text": "blinzelt glücklich schräg nach oben"
        },
        "line.9": {
            "text": "und bewundert die Natur."
        },
        "line.10": {
            "text": "Vater ruft, direkt verwegen:"
        },
        "line.11": {
            "text": "\"'n Wetter, glatt zum Eierlegen!\""
        },
        "line.12": {
            "text": "(Na, er renommiert wohl nur.)"
        },
        "line.13": {
            "text": "Und er steuert ohne Fehler"
        },
        "line.14": {
            "text": "über Hügel und durch Täler."
        },
        "line.15": {
            "text": "Tante Paula wird es schlecht."
        },
        "line.16": {
            "text": "Doch die übrige Verwandtschaft"
        },
        "line.17": {
            "text": "blickt begeistert in die Landschaft."
        },
        "line.18": {
            "text": "Und der Landschaft ist es recht."
        },
        "line.19": {
            "text": "Um den Kopf weht eine Brise"
        },
        "line.20": {
            "text": "von besonnter Luft und Wiese,"
        },
        "line.21": {
            "text": "dividiert durch viel Benzin."
        },
        "line.22": {
            "text": "Onkel Theobald berichtet,"
        },
        "line.23": {
            "text": "was er alles sieht und sichtet."
        },
        "line.24": {
            "text": "Doch man sieht's auch ohne ihn."
        },
        "line.25": {
            "text": "Den Gesang nach Kräften pflegend"
        },
        "line.26": {
            "text": "und sich rhythmisch fortbewegend"
        },
        "line.27": {
            "text": "strömt die Menschheit durchs Revier."
        },
        "line.28": {
            "text": "Immer rascher jagt der Wagen."
        },
        "line.29": {
            "text": "Und wir hören Vatern sagen:"
        },
        "line.30": {
            "text": "\"Dauernd Wald, und nirgends Bier.\""
        },
        "line.31": {
            "text": "Aber schließlich hilft sein Suchen."
        },
        "line.32": {
            "text": "Er kriegt Bier. Wir kriegen Kuchen."
        },
        "line.33": {
            "text": "Und das Auto ruht sich aus."
        },
        "line.34": {
            "text": "Tante schimpft auf die Gehälter."
        },
        "line.35": {
            "text": "Und allmählich wird es kälter."
        },
        "line.36": {
            "text": "Und dann fahren wir nach Haus."
        }
    }
}