{
    "title": "schon-baudelaire-fragte-scheinheilig-4737",
    "gender": "m",
    "author": "SAID",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "schon baudelaire fragte scheinheilig"
        },
        "line.2": {
            "text": "was modernität sei?"
        },
        "line.3": {
            "text": "baudelaire, hat er je richtig gehasst?"
        },
        "line.4": {
            "text": "hat er die zynikprobe überstanden?"
        },
        "line.5": {
            "text": "er wollte ja zu einem neuen verstand gelangen"
        },
        "line.6": {
            "text": "die moderne begann mit der einführung der guillotine,"
        },
        "line.7": {
            "text": "der ersten maschinellen tötung von menschen,"
        },
        "line.8": {
            "text": "die postmoderne mit auschwitz"
        },
        "line.9": {
            "text": "sie verletzte die virtuelle illusion des abendlands"
        },
        "line.10": {
            "text": "seither ist alles möglich"
        },
        "line.11": {
            "text": "das papier beruhigt"
        },
        "line.12": {
            "text": "der buchstabe tötet"
        }
    }
}