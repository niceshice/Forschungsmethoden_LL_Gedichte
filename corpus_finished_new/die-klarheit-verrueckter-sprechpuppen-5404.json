{
    "title": "die-klarheit-verrueckter-sprechpuppen-5404",
    "gender": "m",
    "author": "Arne  Rautenberg",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "verrückte sprechpuppe die beim anschalten sagt"
        },
        "line.2": {
            "text": "du musst mich anschalten"
        },
        "line.3": {
            "text": "und die beim ausschalten sagt"
        },
        "line.4": {
            "text": "du musst mich anschalten"
        },
        "line.5": {
            "text": "ich bewundere die falter die nachts"
        },
        "line.6": {
            "text": "zu hunderten trotz des harten gewitterregens"
        },
        "line.7": {
            "text": "um die straßenlaterne flattern"
        },
        "line.8": {
            "text": "verrückte sprechpuppe die beim anschalten sagt"
        },
        "line.9": {
            "text": "du musst mich ausschalten"
        },
        "line.10": {
            "text": "und die beim ausschalten sagt"
        },
        "line.11": {
            "text": "du musst mich ausschalten"
        },
        "line.12": {
            "text": "ich verachte die falter die nachts"
        },
        "line.13": {
            "text": "zu hunderten trotz des harten gewitterregens"
        },
        "line.14": {
            "text": "um die straßenlaterne flattern"
        }
    }
}