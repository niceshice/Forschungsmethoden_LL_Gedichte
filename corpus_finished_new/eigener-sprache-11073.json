{
    "title": "eigener-sprache-11073",
    "gender": "m",
    "author": "Valeri Scherstjanoi (Валерий Шерстяной)",
    "author_birth": "1950",
    "poem": {
        "line.1": {
            "text": "Da ich kein Stadtkind war"
        },
        "line.2": {
            "text": "Und das ärgerte mich sehr"
        },
        "line.3": {
            "text": "Träumte ich von der Stadt"
        },
        "line.4": {
            "text": "Ich liebte die Stadt"
        },
        "line.5": {
            "text": "Wo meine ersten Alphabete begannen"
        },
        "line.6": {
            "text": "Die ersten Buchstaben, die Zeichen der Stadt"
        },
        "line.7": {
            "text": "Sie leuchteten im Himmel"
        },
        "line.8": {
            "text": "In allen Regenbogenfarben"
        },
        "line.9": {
            "text": "Die ersten Buchstaben"
        },
        "line.10": {
            "text": "Die Zeichen der Stadt"
        },
        "line.11": {
            "text": "Die Sternzeichen der Stadt"
        },
        "line.12": {
            "text": "In Neonlichtern"
        },
        "line.13": {
            "text": "Sie tanzten und jubelten"
        },
        "line.14": {
            "text": "Nicht wie im Dorf"
        },
        "line.15": {
            "text": "Wo zwar der Himmel größer war"
        },
        "line.16": {
            "text": "Wo aber alles still lag"
        },
        "line.17": {
            "text": "Wie gelähmt"
        },
        "line.18": {
            "text": "Kühe Hühner Katzen Staub Steine Hitze"
        },
        "line.19": {
            "text": "Schmutzige Straßen im Regen"
        },
        "line.20": {
            "text": "War ich zurück"
        },
        "line.21": {
            "text": "So träumte ich wieder und wieder von der Stadt"
        },
        "line.22": {
            "text": "Zurück und eingeschult im Dorf"
        },
        "line.23": {
            "text": "Lehrtafeln mit den strengen Hinweisen"
        },
        "line.24": {
            "text": "So! muss man richtig sitzen"
        },
        "line.25": {
            "text": "So! richtig den Federhalter in der Hand halten"
        },
        "line.26": {
            "text": "So! den Rücken gerade halten"
        },
        "line.27": {
            "text": "So schön schreiben"
        },
        "line.28": {
            "text": "Schönschreiberei Rechtschreibungen"
        },
        "line.29": {
            "text": "Mit welchem Recht"
        },
        "line.30": {
            "text": "Schreibungen"
        },
        "line.31": {
            "text": "Nach dem Befehl der Lehrerin"
        },
        "line.32": {
            "text": "Die ersten Diktate"
        },
        "line.33": {
            "text": "Mit den reizlosen und den faden Inhalten"
        },
        "line.34": {
            "text": "Nach den nichts sagenden Mustern"
        },
        "line.35": {
            "text": "Die ersten Buchstaben selbst schreiben"
        },
        "line.36": {
            "text": "Die ersten Skizzen zu deiner Handschrift"
        },
        "line.37": {
            "text": "Die dich dein Leben lang begleiten wird"
        },
        "line.38": {
            "text": "Und die Stadt?"
        },
        "line.39": {
            "text": "Die Stadt mit den phantastischen Zeichen verschwand"
        },
        "line.40": {
            "text": "Aber das Schreiben gefiel mir"
        },
        "line.41": {
            "text": "Beim Schreiben konnte ich mir ausdenken"
        },
        "line.42": {
            "text": "Was ich wollte"
        },
        "line.43": {
            "text": "Darin erkannte ich die eigene Handschrift"
        },
        "line.44": {
            "text": "In eigener Sprache"
        },
        "line.45": {
            "text": "Jeder Buchstabe ist ein Zeichen"
        },
        "line.46": {
            "text": "Klang-Zeichen"
        },
        "line.47": {
            "text": "Ich sah es im Raum schweben"
        },
        "line.48": {
            "text": "Es wiederholt sich"
        },
        "line.49": {
            "text": "Sie wiederholen sich"
        },
        "line.50": {
            "text": "Immer wieder"
        },
        "line.51": {
            "text": "Linear oder kreisend"
        },
        "line.52": {
            "text": "Sie gehen ineinander"
        },
        "line.53": {
            "text": "Auseinander explodieren"
        },
        "line.54": {
            "text": "Verlieren ihre Klänge"
        },
        "line.55": {
            "text": "Ich schreibe im Dunkeln"
        },
        "line.56": {
            "text": "und sehe die Zeichen im Raum schweben"
        },
        "line.57": {
            "text": "Leuchtende Sprachen"
        },
        "line.58": {
            "text": "Vom Schreiben zum Zeichnen"
        },
        "line.59": {
            "text": "Und in jedem Blatt die Zeit lassen"
        }
    }
}