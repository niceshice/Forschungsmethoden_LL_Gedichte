{
    "title": "der-alte-bettler-486",
    "gender": "m",
    "author": "Günter Saalmann",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Der alte Bettler hockt am Tor,"
        },
        "line.2": {
            "text": "zeigt seine kranke Ferse vor."
        },
        "line.3": {
            "text": "In Zitterschrift, vor Gram und Scham,"
        },
        "line.4": {
            "text": "daß dieses Unglück auf ihn kam,"
        },
        "line.5": {
            "text": "ein schlichtes Pappschild steht dabei:"
        },
        "line.6": {
            "text": "Erbitte Spende für Arznei!"
        },
        "line.7": {
            "text": "Sein grauer Dackel heiser bellt."
        },
        "line.8": {
            "text": "Das Publikum gibt Fersengeld."
        }
    }
}