{
    "title": "coffee-and-cigarettes-deluxe-5692",
    "gender": "m",
    "author": "Thien Tran",
    "author_birth": "1979",
    "poem": {
        "line.1": {
            "text": "noch näher unmöglich"
        },
        "line.2": {
            "text": "das hieße: Identitätsverlust. hieße"
        },
        "line.3": {
            "text": "Implosion. wir differenzierten uns"
        },
        "line.4": {
            "text": "in die Bürokratie zurück"
        },
        "line.5": {
            "text": "aktivierten neue Paragraphen"
        },
        "line.6": {
            "text": "sammelten Unterschriften. Norwegen war"
        },
        "line.7": {
            "text": "personalisiert"
        },
        "line.8": {
            "text": "an der sanften Oberfläche des Sees"
        },
        "line.9": {
            "text": "wo die Jäger ruhten"
        },
        "line.10": {
            "text": "sprachen wir Englischdeutsch und Deutsch-"
        },
        "line.11": {
            "text": "englisch. der Jäger ist eine Metonymie"
        },
        "line.12": {
            "text": "für Expression. die sanfte Oberfläche des Sees"
        },
        "line.13": {
            "text": "eine Metapher für den Stillstand"
        },
        "line.14": {
            "text": "im Denken. (Metapher und Metonymie"
        },
        "line.15": {
            "text": "sind austauschbar.)"
        },
        "line.16": {
            "text": "so auch die Namen. die wir uns"
        },
        "line.17": {
            "text": "an die Ohren legten. austauschbare Maschinen"
        },
        "line.18": {
            "text": "die auch ohne Strom funktionierten"
        },
        "line.19": {
            "text": "die alle dem gleichen Bauplan folgten"
        },
        "line.20": {
            "text": "so waren wir zuunterst Herz"
        },
        "line.21": {
            "text": "und zuoberst Kopf. eine Vertikale"
        },
        "line.22": {
            "text": "die nur wenige Minuten lang andauerte"
        },
        "line.23": {
            "text": "danach klopfte wieder der Montag von innen"
        },
        "line.24": {
            "text": "an unser Brustgehäuse. und diesem"
        },
        "line.25": {
            "text": "hinterherschleichend. die Tage Dienstag"
        },
        "line.26": {
            "text": "Mittwoch Donnerstag"
        },
        "line.27": {
            "text": "und Freitag."
        }
    }
}