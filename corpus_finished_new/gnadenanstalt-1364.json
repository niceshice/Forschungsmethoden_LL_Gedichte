{
    "title": "gnadenanstalt-1364",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "barocke Lust überzuschwappen,"
        },
        "line.2": {
            "text": "die zuckenden Lider, zuckenden Beine,"
        },
        "line.3": {
            "text": "dick eingezuckerter Schlaf, süße Last"
        },
        "line.4": {
            "text": "dieses Fleisch und schon außerhalb deiner Kontrolle,"
        },
        "line.5": {
            "text": "schon fließend in Bildern, privates"
        },
        "line.6": {
            "text": "TV-Programm, rosiger Saft, den ich schluckte,"
        },
        "line.7": {
            "text": "du hast deine Lippen auf meine geschraubt"
        },
        "line.8": {
            "text": "und der Körper, pumpend und träumend,"
        },
        "line.9": {
            "text": "bewegt sich nach Fernbedienung"
        },
        "line.10": {
            "text": "wir gehen auf Sendung, die Glieder"
        },
        "line.11": {
            "text": "berühren sich, geben Signale, ich habe"
        },
        "line.12": {
            "text": "die Haut voller Sirup, ich klebe"
        },
        "line.13": {
            "text": "an dir, späte Serien rinnen dahin,"
        },
        "line.14": {
            "text": "dünne Spielfilme, REM-Phasen, zappend"
        },
        "line.15": {
            "text": "bearbeitet uns die Nacht"
        },
        "line.16": {
            "text": "ich habe Lust überzuschnappen,"
        },
        "line.17": {
            "text": "du testest im Schlaf"
        },
        "line.18": {
            "text": "das Fassungsvermögen der Hände,"
        },
        "line.19": {
            "text": "prüfst Südfruchte, rührst"
        },
        "line.20": {
            "text": "in heißen Kompotten aus quellenden Pfirsichen,"
        },
        "line.21": {
            "text": "Pflaumen, Marillen, die Bilder verbinden sich,"
        },
        "line.22": {
            "text": "dickflüssig sehe ich Herzkammern, Dias"
        },
        "line.23": {
            "text": "von gänzlich gezuckerten Wänden,"
        },
        "line.24": {
            "text": "ein Lichtblick, ein Kochstudio, das sich stabilisiert,"
        },
        "line.25": {
            "text": "und du tastest mich ab, bis ich schwer werde,"
        },
        "line.26": {
            "text": "durchscheinend, glänzend, der Körper kandiert"
        }
    }
}