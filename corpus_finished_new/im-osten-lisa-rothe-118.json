{
    "title": "im-osten-lisa-rothe-118",
    "gender": "m",
    "author": "Lutz Seiler",
    "author_birth": "1963",
    "poem": {
        "line.1": {
            "text": "gab es menschen, die"
        },
        "line.2": {
            "text": "beim husten ganz"
        },
        "line.3": {
            "text": "ihr gesicht bedeckten & verschwanden: lisa rothe, was"
        },
        "line.4": {
            "text": "wir in ihrem nachtschrank fanden, war genug"
        },
        "line.5": {
            "text": "für die insektenschwärze ihrer füsse"
        },
        "line.6": {
            "text": "nachschub für die fusslampen"
        },
        "line.7": {
            "text": "im schnee, öl und ausgeworfenes, dort"
        },
        "line.8": {
            "text": "bewahrte sie also das licht, die bestandteile"
        },
        "line.9": {
            "text": "des spiegels, wir erbrachen, wir fanden"
        },
        "line.10": {
            "text": "den abdruck eines schlafenden kopfes &"
        },
        "line.11": {
            "text": "ihre exkremente, wasser und leise"
        },
        "line.12": {
            "text": "bemerkungen über uns selbst, das ticken"
        },
        "line.13": {
            "text": "der kartoffeln in den speisekammern,"
        },
        "line.14": {
            "text": "die innere koppel,"
        },
        "line.15": {
            "text": "so"
        },
        "line.16": {
            "text": "war sie geschrumpft unter den geräuschen"
        },
        "line.17": {
            "text": "einer strasse, eines flusses, eines"
        },
        "line.18": {
            "text": "wismut stadions, so"
        },
        "line.19": {
            "text": "war sie erloschen"
        },
        "line.20": {
            "text": "im kegel ihrer zwecklampe, verrutscht"
        },
        "line.21": {
            "text": "wie weiche speise,"
        },
        "line.22": {
            "text": "harte speise, bis du schliefst, weiche speise, harte..."
        },
        "line.23": {
            "text": "wir"
        },
        "line.24": {
            "text": "selbst hatten das bettzeug"
        },
        "line.25": {
            "text": "weit zurückgeschlagen"
        },
        "line.26": {
            "text": "aus dem schnee"
        },
        "line.27": {
            "text": "gewaschene wangenknochen, mistelblut..."
        },
        "line.28": {
            "text": "aber"
        },
        "line.29": {
            "text": "wir ertrugen den geruch, die persönlichen"
        },
        "line.30": {
            "text": "infekte,"
        },
        "line.31": {
            "text": "ein"
        },
        "line.32": {
            "text": "ostvorstädtischer tanzpädagoge"
        },
        "line.33": {
            "text": "langsamer als alraun, gebar..."
        },
        "line.34": {
            "text": "nein"
        },
        "line.35": {
            "text": "man hört nichts mehr, jetzt"
        },
        "line.36": {
            "text": "kann man wirklich"
        },
        "line.37": {
            "text": "nichts mehr hören, still"
        },
        "line.38": {
            "text": "flankiert das fleisch im glas"
        },
        "line.39": {
            "text": "ihr grobes stehen &"
        },
        "line.40": {
            "text": "ihren gut gekämmten schlaf, es ist"
        },
        "line.41": {
            "text": "september, die"
        },
        "line.42": {
            "text": "tiere drängen jetzt"
        },
        "line.43": {
            "text": "ins haus, nichts fehlt"
        }
    }
}