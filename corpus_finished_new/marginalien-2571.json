{
    "title": "marginalien-2571",
    "gender": "m",
    "author": "Michael Roes",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": "Meine Ringe nimmt man mir,"
        },
        "line.2": {
            "text": "doch bleiben mir noch meine Finger"
        },
        "line.3": {
            "text": "Nach den Gebeten wird der Himmel eingerollt"
        },
        "line.4": {
            "text": "und in den Lastkörben verstaut"
        },
        "line.5": {
            "text": "Die Sommernacht zerspringt"
        },
        "line.6": {
            "text": "in ihrer Fassung"
        },
        "line.7": {
            "text": "Ich der gute Sohn bin die letzte Saite"
        },
        "line.8": {
            "text": "zwischen Steg und Wirbel"
        },
        "line.9": {
            "text": "Mein Vater ist der Asphaltierer Israels"
        },
        "line.10": {
            "text": "meine Mutter ein lächelnder Goldzahn"
        },
        "line.11": {
            "text": "Mein Haar im Rechen ihrer harten"
        },
        "line.12": {
            "text": "tätowierten Hände"
        },
        "line.13": {
            "text": "Mein Baumname ist nicht"
        },
        "line.14": {
            "text": "der Name den mir meine Feinde geben"
        },
        "line.15": {
            "text": "Mein Strauchname ist nicht"
        },
        "line.16": {
            "text": "das tautologische Vaterwort"
        },
        "line.17": {
            "text": "Allein die Stimme des vergessenen Gebots"
        },
        "line.18": {
            "text": "beunruhigt mich noch"
        }
    }
}