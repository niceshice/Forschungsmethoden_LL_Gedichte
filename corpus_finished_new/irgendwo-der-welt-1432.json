{
    "title": "irgendwo-der-welt-1432",
    "gender": "m",
    "author": "Paul Maar",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Ein Eisbär kauft ein Eis am Stiel,"
        },
        "line.2": {
            "text": "ein Huhn hat hohes Fieber,"
        },
        "line.3": {
            "text": "ganz leise weint ein Krokodil,"
        },
        "line.4": {
            "text": "zufrieden grinst ein Biber."
        },
        "line.5": {
            "text": "Ein Pinguin taucht tief ins Meer,"
        },
        "line.6": {
            "text": "ein Hase sitzt im Klee,"
        },
        "line.7": {
            "text": "ein Orang-Utan kratzt sich sehr,"
        },
        "line.8": {
            "text": "ein Wolf hat Magenweh."
        },
        "line.9": {
            "text": "Ein Wellensittich singt sein Lied,"
        },
        "line.10": {
            "text": "ein Floh sucht eine Bleibe,"
        },
        "line.11": {
            "text": "und während alles dies geschieht,"
        },
        "line.12": {
            "text": "sitz ich zu Haus und schreibe!"
        }
    }
}