{
    "title": "die-koenigin-von-uelzen-451",
    "gender": "w",
    "author": "Jutta Richter",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Die Königin von Uelzen,"
        },
        "line.2": {
            "text": "die ist so winzig klein."
        },
        "line.3": {
            "text": "Sie paßt in unsern Büchern"
        },
        "line.4": {
            "text": "in ein einziges Wort hinein."
        },
        "line.5": {
            "text": "Sie wohnt auf einem Hügel,"
        },
        "line.6": {
            "text": "dort steht ein kleines Schloß."
        },
        "line.7": {
            "text": "Das Reich, das sie regiert,"
        },
        "line.8": {
            "text": "ist daumennagelgroß."
        },
        "line.9": {
            "text": "Der Königin von Uelzen"
        },
        "line.10": {
            "text": "sind Glück und Lachen fremd,"
        },
        "line.11": {
            "text": "denn sie hat einem Riesen"
        },
        "line.12": {
            "text": "ihr kleines Herz geschenkt."
        },
        "line.13": {
            "text": "Sie sitzt auf ihrem Hügel"
        },
        "line.14": {
            "text": "in ihrem kleinen Schloß"
        },
        "line.15": {
            "text": "und kann nicht zu ihm kommen."
        },
        "line.16": {
            "text": "Der Riese ist zu groß."
        },
        "line.17": {
            "text": "Ihr Seufzen und ihr Sehnen,"
        },
        "line.18": {
            "text": "das hat er nie gehört,"
        },
        "line.19": {
            "text": "obwohl sie jede Stunde"
        },
        "line.20": {
            "text": "ihm Treu und Liebe schwört."
        },
        "line.21": {
            "text": "Und möchte sie ihn sehen,"
        },
        "line.22": {
            "text": "so muß er ferne sein."
        },
        "line.23": {
            "text": "Denn nur in großer Ferne"
        },
        "line.24": {
            "text": "ist auch ein Riese klein."
        }
    }
}