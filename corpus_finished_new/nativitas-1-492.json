{
    "title": "nativitas-1-492",
    "gender": "m",
    "author": "Christian Lehnert",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "nativitas, dieses wort wie zusammengewehte töne"
        },
        "line.2": {
            "text": "hoher glocken würde genau über das durchlöcherte"
        },
        "line.3": {
            "text": "holz passen, in wachs gestrichener lufthauch"
        },
        "line.4": {
            "text": "der hügel, die höhlung umgebend, in der eine frau"
        },
        "line.5": {
            "text": "erschöpft schläft unter nachgedunkelten"
        },
        "line.6": {
            "text": "ziegen, die abgeblätterte"
        },
        "line.7": {
            "text": "steinkrippe mit dem kind und der gebetsnische"
        },
        "line.8": {
            "text": "einer anderen zeit, all dies in erdfarben"
        },
        "line.9": {
            "text": "auf einer gewölbten ikone, atemstöße,"
        },
        "line.10": {
            "text": "vorsichtige, sich wellende, nässende"
        },
        "line.11": {
            "text": "finger, die auf etwas jenseits der erhaltenen"
        },
        "line.12": {
            "text": "fläche weisen, über ausgekratzte"
        },
        "line.13": {
            "text": "gesichter, irgendwelche nackten beine, rumpflos"
        },
        "line.14": {
            "text": "auf einem weg ins leere, so unbekannt"
        },
        "line.15": {
            "text": "wie wir uns selbst, weiter nichts,"
        },
        "line.16": {
            "text": "sind diese figuren,"
        },
        "line.17": {
            "text": "ganz voll von unsichtbarem, flecken,"
        },
        "line.18": {
            "text": "die bis in die netzhaut reichen, uns"
        },
        "line.19": {
            "text": "mit ihren augen nachgehen, rissen"
        },
        "line.20": {
            "text": "in der maserung, der zick-zack-jagd"
        },
        "line.21": {
            "text": "in den strichen fortgesetzter"
        },
        "line.22": {
            "text": "übermalungen"
        }
    }
}