{
    "title": "im-felderlatein-121",
    "gender": "m",
    "author": "Lutz Seiler",
    "author_birth": "1963",
    "poem": {
        "line.1": {
            "text": "einmal begründet sind wir ein bast"
        },
        "line.2": {
            "text": "auf der borke"
        },
        "line.3": {
            "text": "zu gast in der rinde & inneres kind"
        },
        "line.4": {
            "text": "der ausfall strassen. diese"
        },
        "line.5": {
            "text": "strassen sind eine leise gesprochene"
        },
        "line.6": {
            "text": "sprache noch über das einmal"
        },
        "line.7": {
            "text": "gesagte hinweg an den gärten"
        },
        "line.8": {
            "text": "ins felderlatein. dort"
        },
        "line.9": {
            "text": "sitzt das kind auf einem hügel die"
        },
        "line.10": {
            "text": "welt ist aus sand gemurmelte sprachen"
        },
        "line.11": {
            "text": "rollen nach innen wollen"
        },
        "line.12": {
            "text": "auch wasser brücken"
        },
        "line.13": {
            "text": "& strassen"
        },
        "line.14": {
            "text": "benötigen leise"
        },
        "line.15": {
            "text": "rollende sprachen das"
        },
        "line.16": {
            "text": "eigene kind im felderlatein"
        }
    }
}