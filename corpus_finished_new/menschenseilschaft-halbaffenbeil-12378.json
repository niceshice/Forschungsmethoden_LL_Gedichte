{
    "title": "menschenseilschaft-halbaffenbeil-12378",
    "gender": "w",
    "author": "Sonja vom Brocke",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "Wir entgleiten"
        },
        "line.2": {
            "text": "begießen die Nymphentemperatur"
        },
        "line.3": {
            "text": "erobern schwaches Gewächs"
        },
        "line.4": {
            "text": "ein verkalktes Nomen im Abguss"
        },
        "line.5": {
            "text": "die Hüftgelenke auf"
        },
        "line.6": {
            "text": "Talerregen!"
        },
        "line.7": {
            "text": "Ein schläfriges, tickendes Ei."
        },
        "line.8": {
            "text": "Dass du, Frau, und wir anderen Radierer"
        },
        "line.9": {
            "text": "regsam und in Zeitlupe zugleich"
        },
        "line.10": {
            "text": "den Flüchen begegnen."
        },
        "line.11": {
            "text": "Sammeln wir in der Kitteltasche zerstreute"
        },
        "line.12": {
            "text": "stummelige Plättchen"
        },
        "line.13": {
            "text": "sie werden nachgeben"
        },
        "line.14": {
            "text": "liebend nisten"
        },
        "line.15": {
            "text": "erschöpft und in Phlegma legen"
        },
        "line.16": {
            "text": "himmelsgiftwirren Äthers noch voll"
        },
        "line.17": {
            "text": "allein und in eins, ihre Sorge."
        },
        "line.18": {
            "text": "Sie wird uns helfen in ärgerer Zeit."
        },
        "line.19": {
            "text": "Gedrungen, softer zur Dauer."
        },
        "line.20": {
            "text": "Durchs All jagen indessen"
        },
        "line.21": {
            "text": "hitzige Teeniechöre"
        },
        "line.22": {
            "text": "erstarren blindlings im Schreck"
        },
        "line.23": {
            "text": "vor der Sonne  sie ist heller, als man denkt!"
        },
        "line.24": {
            "text": "und sich selbst."
        },
        "line.25": {
            "text": "Die Verkohlten. Entheben noch zu Tentakeln"
        },
        "line.26": {
            "text": "dann winken sie ihren Verwandten"
        },
        "line.27": {
            "text": "und tippen einander zu:"
        },
        "line.28": {
            "text": "Seepferdchen, Seepferdchen, du"
        },
        "line.29": {
            "text": "eventuell war die Glut"
        },
        "line.30": {
            "text": "eine andere Art des Abholens"
        }
    }
}