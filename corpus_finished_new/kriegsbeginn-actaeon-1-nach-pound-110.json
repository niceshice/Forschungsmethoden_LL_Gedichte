{
    "title": "kriegsbeginn-actaeon-1-nach-pound-110",
    "gender": "m",
    "author": "Thomas Kling",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "(für Ute Langanky)"
        },
        "line.2": {
            "text": "Ein bild der Lethe,"
        },
        "line.3": {
            "text": "und den feldern"
        },
        "line.4": {
            "text": "Voll stumpfen lichts,"
        },
        "line.5": {
            "text": "doch golden,"
        },
        "line.6": {
            "text": "Graue kliffs,"
        },
        "line.7": {
            "text": "und unter ihnen"
        },
        "line.8": {
            "text": "Ein meer"
        },
        "line.9": {
            "text": "Strenger als granit,"
        },
        "line.10": {
            "text": "unruhig, niemals aufgebend;"
        },
        "line.11": {
            "text": "Hohe gestalten"
        },
        "line.12": {
            "text": "mit den gesten von göttern,"
        },
        "line.13": {
            "text": "Gefährliche aussichten;"
        },
        "line.14": {
            "text": "Und einer sagte:"
        },
        "line.15": {
            "text": "Das ist Actaeon."
        },
        "line.16": {
            "text": "Actaeon mit den beinschienen von gold!"
        },
        "line.17": {
            "text": "Über helle wiesen,"
        },
        "line.18": {
            "text": "Übers überlegene gesicht dieses felds,"
        },
        "line.19": {
            "text": "Unruhig, immer in bewegung,"
        },
        "line.20": {
            "text": "Heere eines antiken volks,"
        },
        "line.21": {
            "text": "Das stumme gefolge."
        }
    }
}