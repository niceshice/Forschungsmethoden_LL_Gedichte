{
    "title": "cellosuite-1578",
    "gender": "m",
    "author": "Michael Krüger",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Vom Fenster aus"
        },
        "line.2": {
            "text": "sehe ich die Bahn kommen,"
        },
        "line.3": {
            "text": "ein rostiges Insekt"
        },
        "line.4": {
            "text": "mit geweiteten Augen."
        },
        "line.5": {
            "text": "Wie leicht sie die Särge"
        },
        "line.6": {
            "text": "durchs sonnige Tal zieht!"
        },
        "line.7": {
            "text": "Einundzwanzig, zweiundzwanzig ..."
        },
        "line.8": {
            "text": "Sind sie gefüllt oder leer?"
        },
        "line.9": {
            "text": "Jetzt läßt sie zischend Dampf ab,"
        },
        "line.10": {
            "text": "der sanft zu mir her zieht"
        },
        "line.11": {
            "text": "wie eine undeutliche Botschaft."
        },
        "line.12": {
            "text": "Ich drehe das Radio lauter,"
        },
        "line.13": {
            "text": "eine Cellosuite, im Hintergrund"
        },
        "line.14": {
            "text": "der keuchende Atem"
        },
        "line.15": {
            "text": "des Musikers, deutlich zu hören."
        }
    }
}