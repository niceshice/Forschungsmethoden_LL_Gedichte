{
    "title": "sex-mit-texten-14421",
    "gender": "m",
    "author": "Hans Thill",
    "author_birth": "1954",
    "poem": {
        "line.1": {
            "text": "Er schloß die Tür, um den Wind"
        },
        "line.2": {
            "text": "auszusperren, Wespen kamen"
        },
        "line.3": {
            "text": "durch den Briefschlitz ins Haus."
        },
        "line.4": {
            "text": "Im Treppenflur atmete die Nachbarin"
        },
        "line.5": {
            "text": "und es roch nach Asche und"
        },
        "line.6": {
            "text": "Bananen. Ein Zug fuhr durch"
        },
        "line.7": {
            "text": "die letzten Minuten der Stadt,"
        },
        "line.8": {
            "text": "die Straßenbahn hinterher."
        },
        "line.9": {
            "text": "Dann ging er an den Kühlschrank,"
        },
        "line.10": {
            "text": "und er nahm etwas heraus, gläsern"
        },
        "line.11": {
            "text": "und klar. Er spürte die alte Substanz"
        },
        "line.12": {
            "text": "klebrig an den Händen,"
        },
        "line.13": {
            "text": "den übermäßigen Rippendruck"
        },
        "line.14": {
            "text": "in den Wänden und draußen"
        },
        "line.15": {
            "text": "ein Nachlassen nirgendwo."
        },
        "line.16": {
            "text": "Jetzt kratzten ihn die Flügel seines"
        },
        "line.17": {
            "text": "Jeanshemds im Nacken"
        },
        "line.18": {
            "text": "und es wurde ihm klar, daß er"
        },
        "line.19": {
            "text": "nackt war bis auf die Baumwolle,"
        },
        "line.20": {
            "text": "die an einem Haken hing"
        }
    }
}