{
    "title": "im-hof-der-tschatschenden-frisoere-11635",
    "gender": "w",
    "author": "Odile Kennel",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "Frisöre verlangen ihre ganz eigene"
        },
        "line.2": {
            "text": "literarische Herangehensweise."
        },
        "line.3": {
            "text": "Felicitas Hoppe"
        },
        "line.4": {
            "text": "Les coiffeurs demandent"
        },
        "line.5": {
            "text": "une approche littraire particulire."
        },
        "line.6": {
            "text": "Emmanuelle Pagano"
        },
        "line.7": {
            "text": "immer träume ich von blauen"
        },
        "line.8": {
            "text": "Kletterschuhen und einem Hof"
        },
        "line.9": {
            "text": "voller Frisöre. Die Frisöre"
        },
        "line.10": {
            "text": "rauchen, es sind viele, und sie reden"
        },
        "line.11": {
            "text": "von Haaren. Dank der blauen Schuhe"
        },
        "line.12": {
            "text": "gelange ich hinunter in den Hof"
        },
        "line.13": {
            "text": "ich setze mich zu den Frisören"
        },
        "line.14": {
            "text": "und rauche mit ihnen. Rauche"
        },
        "line.15": {
            "text": "schweigend, weil ich nichts"
        },
        "line.16": {
            "text": "über Haare zu sagen habe."
        },
        "line.17": {
            "text": "Sie rufen Rapunzel und meinen"
        },
        "line.18": {
            "text": "nicht mich. Und weil Rapunzel"
        },
        "line.19": {
            "text": "jemand anderes ist und hier"
        },
        "line.20": {
            "text": "nicht wohnt, weiß ich nicht"
        },
        "line.21": {
            "text": "wie ich zurück nach oben komme."
        },
        "line.22": {
            "text": "Die Frisöre fragen, was bedeutet"
        },
        "line.23": {
            "text": "tschatschen, ich antworte:"
        },
        "line.24": {
            "text": "tchatcher, ihr coiffeure!"
        },
        "line.25": {
            "text": "Kennt ihr das nicht? Jeden Morgen"
        },
        "line.26": {
            "text": "werde ich wach davon und weiß jetzt"
        },
        "line.27": {
            "text": "es geht um Haare, was hatte ich"
        },
        "line.28": {
            "text": "anderes erwartet? Sie ziehn"
        },
        "line.29": {
            "text": "an ihren Kippen, ich kipple"
        },
        "line.30": {
            "text": "auf meinem Stuhl, frage mich"
        },
        "line.31": {
            "text": "und die Frisöre, was Sigmund"
        },
        "line.32": {
            "text": "sagen würde zu meinen Kletter-"
        },
        "line.33": {
            "text": "schuhen, warum sind sie blau,"
        },
        "line.34": {
            "text": "und was bedeuten Frisöre."
        },
        "line.35": {
            "text": "Doch die Frisöre hören"
        },
        "line.36": {
            "text": "nicht zu, die Frisöre"
        },
        "line.37": {
            "text": "gehen zurück an die Arbeit."
        },
        "line.38": {
            "text": "Und ich, ich sitze im Hof"
        },
        "line.39": {
            "text": "wie ein nasser Hund"
        }
    }
}