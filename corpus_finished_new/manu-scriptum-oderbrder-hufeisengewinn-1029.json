{
    "title": "manu-scriptum-oderbrder-hufeisengewinn-1029",
    "gender": "m",
    "author": "Ferdinand Schmatz",
    "author_birth": "1953",
    "poem": {
        "line.1": {
            "text": "es schreibt der ruck"
        },
        "line.2": {
            "text": "so kräftig, drückt,"
        },
        "line.3": {
            "text": "dass glückt dem arm,"
        },
        "line.4": {
            "text": "was streich der hand"
        },
        "line.5": {
            "text": "- das bleibt,"
        },
        "line.6": {
            "text": "nicht für sich selbst, es schreibt"
        },
        "line.7": {
            "text": "des griffels zeichen ein,"
        },
        "line.8": {
            "text": "auf wand, die zeigt,"
        },
        "line.9": {
            "text": "wo so gehautes treibt"
        },
        "line.10": {
            "text": "wie:"
        },
        "line.11": {
            "text": "hirnenmund"
        },
        "line.12": {
            "text": "- der sperrt sich auf -"
        },
        "line.13": {
            "text": "verbeisst sich nichts,"
        },
        "line.14": {
            "text": "gibt kunde, auch wenns pecht"
        },
        "line.15": {
            "text": "schürft er die ecke rund"
        },
        "line.16": {
            "text": "- schwatzt ab, was juckt ihn, laut"
        },
        "line.17": {
            "text": "das murmeln schluckt den ton,"
        },
        "line.18": {
            "text": "hebt ab so alles"
        },
        "line.19": {
            "text": "stimmige im fluss"
        },
        "line.20": {
            "text": "(wird span des griffels, feder - nun im sprung)"
        },
        "line.21": {
            "text": "- begriffen stirn wie stein,"
        },
        "line.22": {
            "text": "herz wie holz,"
        },
        "line.23": {
            "text": "im hinten denkt sich"
        },
        "line.24": {
            "text": "noch ein druck was aus:"
        },
        "line.25": {
            "text": "die form -"
        },
        "line.26": {
            "text": "eisen, schirmt nicht ab,"
        },
        "line.27": {
            "text": "es bildet lieber aus den tritt"
        },
        "line.28": {
            "text": "als ein, was sich so normt"
        },
        "line.29": {
            "text": "verliert es gern"
        },
        "line.30": {
            "text": "was aus spricht nur,"
        },
        "line.31": {
            "text": "sich mustert im spalier"
        },
        "line.32": {
            "text": "dort, wo es fliesst:"
        },
        "line.33": {
            "text": "ein bild aus silben, lauten"
        },
        "line.34": {
            "text": "nächtens"
        },
        "line.35": {
            "text": "(traum, gefärbt)"
        },
        "line.36": {
            "text": "gibt wild sich hin"
        },
        "line.37": {
            "text": "bis in den tag, der wird gesetzt"
        },
        "line.38": {
            "text": "in schrift"
        },
        "line.39": {
            "text": "(nicht hin gefetzt, die sprach ein schild)"
        },
        "line.40": {
            "text": "höchstens"
        },
        "line.41": {
            "text": "stosst sie hand"
        },
        "line.42": {
            "text": "wetzt den finger übers jetzt"
        },
        "line.43": {
            "text": "- das donnert in der stille auf,"
        },
        "line.44": {
            "text": "und steht dann drauf, verbrieft"
        },
        "line.45": {
            "text": "dass nimmer eingebrannt das glück,"
        },
        "line.46": {
            "text": "nie stück wird, sondern lauf"
        },
        "line.47": {
            "text": "(der zeichen kreis fliegt taubend auf)"
        },
        "line.48": {
            "text": "und kreidet an, was bleich"
        },
        "line.49": {
            "text": "an worten bloss"
        },
        "line.50": {
            "text": "von der blüten stil sich löst"
        }
    }
}