{
    "title": "unter-dem-nassen-lappen-16560",
    "gender": "m",
    "author": "Sascha Garzetti",
    "author_birth": "1986",
    "poem": {
        "line.1": {
            "text": "Unter dem nassen Lappen"
        },
        "line.2": {
            "text": "färbt sich der Gartentisch dunkelrot,"
        },
        "line.3": {
            "text": "du wischst Asche, Pfeffer, Krumen"
        },
        "line.4": {
            "text": "von der Platte in die hohle Hand,"
        },
        "line.5": {
            "text": "streust alles ins Gras."
        },
        "line.6": {
            "text": "Durch den Heckenstrauch dringt der Abend"
        },
        "line.7": {
            "text": "mit der Amsel, sie wird leicht"
        },
        "line.8": {
            "text": "wie ihr Schatten, den dunklen Anzug"
        },
        "line.9": {
            "text": "ins Gebusch gehängt, steigt"
        },
        "line.10": {
            "text": "ihrem Stimmchen nach."
        },
        "line.11": {
            "text": "In der Scheibe erscheint mein Gesicht,"
        },
        "line.12": {
            "text": "als du die Terrassentur zuschiebst,"
        },
        "line.13": {
            "text": "so nah an deinem,"
        },
        "line.14": {
            "text": "so werden wir die Nacht zähmen"
        },
        "line.15": {
            "text": "in einen anderen Tag."
        },
        "line.16": {
            "text": "Und morgen werde ich dir"
        },
        "line.17": {
            "text": "von der Amsel erzählen, ihrem Anzug"
        },
        "line.18": {
            "text": "und wo sie ihn anfertigen ließ,"
        },
        "line.19": {
            "text": "wenn sich der Tisch unter dem Lappen färbt,"
        },
        "line.20": {
            "text": "du alles so leicht ins Gras streust."
        }
    }
}