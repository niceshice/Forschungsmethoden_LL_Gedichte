{
    "title": "geschaetzte-kratzer-7726",
    "gender": "m",
    "author": "Christian Steinbacher",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": "Angeknabberter Morgen"
        },
        "line.2": {
            "text": "hier zu später Stunde"
        },
        "line.3": {
            "text": "oder viel zu früh"
        },
        "line.4": {
            "text": "starrst du auf das Pendel,"
        },
        "line.5": {
            "text": "starrst du auf die Waage,"
        },
        "line.6": {
            "text": "stößt sie leicht nur an, stierst"
        },
        "line.7": {
            "text": "wieder weg durch alles,"
        },
        "line.8": {
            "text": "Schleier werden fallen,"
        },
        "line.9": {
            "text": "heißt es, hebst dein Kissen"
        },
        "line.10": {
            "text": "auf und kriechst erneut ins"
        },
        "line.11": {
            "text": "Warme, deine Ferse"
        },
        "line.12": {
            "text": "hält es aus da draußen"
        },
        "line.13": {
            "text": "noch vor allen Scherben."
        },
        "line.14": {
            "text": "Soll ich oder nicht,"
        },
        "line.15": {
            "text": "siehst den Lappen an du."
        },
        "line.16": {
            "text": "Muss die Haut denn frisch sein?"
        },
        "line.17": {
            "text": "Nun, verlockend schon"
        },
        "line.18": {
            "text": "schwirrt ein Spaltbreit Licht,"
        },
        "line.19": {
            "text": "will mich motivieren"
        },
        "line.20": {
            "text": "nicht mehr zu drapieren"
        },
        "line.21": {
            "text": "unterm Kinn die Lade,"
        },
        "line.22": {
            "text": "reiß schon aus das Haar"
        },
        "line.23": {
            "text": "mit der"
        },
        "line.24": {
            "text": "rostigen"
        },
        "line.25": {
            "text": "Pinzette."
        },
        "line.26": {
            "text": "Frostig gar?"
        }
    }
}