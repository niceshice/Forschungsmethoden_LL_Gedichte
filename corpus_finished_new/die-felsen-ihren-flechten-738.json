{
    "title": "die-felsen-ihren-flechten-738",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "Die Felsen in ihren Flechten"
        },
        "line.2": {
            "text": "atmen ruhig in gemeinsamem Zug wie"
        },
        "line.3": {
            "text": "das für vielfältig gefältelte Felsen"
        },
        "line.4": {
            "text": "nicht zu erwarten ist"
        },
        "line.5": {
            "text": "sie haben ihren Atem an"
        },
        "line.6": {
            "text": "den der Sonne angeglichen"
        },
        "line.7": {
            "text": "ebenso Birken und Kiefern des Walds"
        },
        "line.8": {
            "text": "auch unser Haus ein Waldzögling"
        },
        "line.9": {
            "text": "Abendanbruch auf dem Hügel"
        },
        "line.10": {
            "text": "vor uns treibt das Getreidetal in"
        },
        "line.11": {
            "text": "ein wiegendes Gelb"
        },
        "line.12": {
            "text": "drum ist auch in uns dieses Gelb gezogen"
        },
        "line.13": {
            "text": "Wir haben unser Bett in der von Licht"
        },
        "line.14": {
            "text": "durchfächelten Veranda aufgestellt"
        },
        "line.15": {
            "text": "sitzen noch lange vor dem Haus und"
        },
        "line.16": {
            "text": "hören und schauen"
        },
        "line.17": {
            "text": "sind allen Reiselüsten abgestorben"
        },
        "line.18": {
            "text": "So nah ist D denk ich und seine Sprechsprach"
        },
        "line.19": {
            "text": "wie die Mutter ist sie war bei uns"
        },
        "line.20": {
            "text": "ist heimgefahren in mir bleibt"
        },
        "line.21": {
            "text": "ein verwaister Raum zurück ich halt"
        },
        "line.22": {
            "text": "ihn leer damit er Hallraum sein kann"
        },
        "line.23": {
            "text": "Über das Korntal her dann als"
        },
        "line.24": {
            "text": "das Licht in einer Muldendämmerung"
        },
        "line.25": {
            "text": "unterkriecht kommen"
        },
        "line.26": {
            "text": "den Donner dicht bei sich die Blitze"
        },
        "line.27": {
            "text": "blank grad wie von anderer Welt"
        },
        "line.28": {
            "text": "umstellen das Haus"
        }
    }
}