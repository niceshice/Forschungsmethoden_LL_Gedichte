{
    "title": "der-holunder-enkidu-11138",
    "gender": "m",
    "author": "Peter Huchel",
    "author_birth": "1903",
    "poem": {
        "line.1": {
            "text": "DER HOLUNDER öffnet die Monde,"
        },
        "line.2": {
            "text": "alles geht ins Schweigen hinüber,"
        },
        "line.3": {
            "text": "die fließenden Lichter im Bach,"
        },
        "line.4": {
            "text": "das durch Wasser getriebene Planetarium des Archimedes,"
        },
        "line.5": {
            "text": "astronomische Zeichen,"
        },
        "line.6": {
            "text": "in den Anfängen babylonisch."
        },
        "line.7": {
            "text": "Sohn, kleiner Sohn Enkidu,"
        },
        "line.8": {
            "text": "du verließest deine Mutter, die Gazelle,"
        },
        "line.9": {
            "text": "deinen Vater, den Wildesel,"
        },
        "line.10": {
            "text": "um mit der Hure nach Uruk zu gehen."
        },
        "line.11": {
            "text": "Die milchtragenden Ziegen flohen."
        },
        "line.12": {
            "text": "Es verdorrte die Steppe."
        },
        "line.13": {
            "text": "Hinter dem Stadttor"
        },
        "line.14": {
            "text": "mit den sieben Eisenriegeln"
        },
        "line.15": {
            "text": "unterwies dich Gilgamesch,"
        },
        "line.16": {
            "text": "der Grenzgänger zwischen Himmel und Erde,"
        },
        "line.17": {
            "text": "die Stricke des Todes zu durchhauen."
        },
        "line.18": {
            "text": "Finster brannte der Mittag auf dem Ziegelwerk,"
        },
        "line.19": {
            "text": "finster lag das Gold in der Kammer des Königs."
        },
        "line.20": {
            "text": "Kehre um, Enkidu."
        },
        "line.21": {
            "text": "Was schenkte dir Gilgamesch?"
        },
        "line.22": {
            "text": "Das schöne Haupt der Gazelle versank."
        },
        "line.23": {
            "text": "Der Staub schlug deine Knochen."
        }
    }
}