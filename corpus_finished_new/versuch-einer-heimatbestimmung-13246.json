{
    "title": "versuch-einer-heimatbestimmung-13246",
    "gender": "w",
    "author": "Ilma Rakusa",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Heimat ist"
        },
        "line.2": {
            "text": "jenes bergende Gras"
        },
        "line.3": {
            "text": "das Haus dort mit dem verkrüppelten Dach"
        },
        "line.4": {
            "text": "der Wind den du isst wie trockenen Staub"
        },
        "line.5": {
            "text": "Vater Mutter verwehtes Laub"
        },
        "line.6": {
            "text": "das Märchenbuch das nach Honig riecht"
        },
        "line.7": {
            "text": "der Mohnkuchen der Erinnerung wiegt"
        },
        "line.8": {
            "text": "das traurige Lied vom verlorenen Hahn"
        },
        "line.9": {
            "text": "das Fernweh das nicht ankommen kann"
        },
        "line.10": {
            "text": "der Glanz in den Augen des Freunds"
        },
        "line.11": {
            "text": "die Liebe die nichts bereut"
        },
        "line.12": {
            "text": "was du dir selbst bist in schlafloser Nacht"
        },
        "line.13": {
            "text": "oder unterwegs zwischen Himmel und Schacht"
        },
        "line.14": {
            "text": "die Stimme des einzigen Sohns"
        },
        "line.15": {
            "text": "ein Vers mit eigenem Ton"
        },
        "line.16": {
            "text": "das Gedächtnis das Tiefen auftut"
        },
        "line.17": {
            "text": "der Lichthase in sicherer Hut"
        },
        "line.18": {
            "text": "Sommer Herbst und blauweisser Schnee"
        },
        "line.19": {
            "text": "die lachend weinende Zeit die nie steht"
        }
    }
}