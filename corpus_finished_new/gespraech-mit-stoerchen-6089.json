{
    "title": "gespraech-mit-stoerchen-6089",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Die großen Störche überfliegen mich mit Flügeln,"
        },
        "line.2": {
            "text": "die leicht beweisen,"
        },
        "line.3": {
            "text": "sie sind im Flug"
        },
        "line.4": {
            "text": "sehr sicher."
        },
        "line.5": {
            "text": "Wie, habt ihr mich denn ausersehen,"
        },
        "line.6": {
            "text": "mir ein Kind zu bringen?"
        },
        "line.7": {
            "text": "Mißlaune wär mein Los!"
        },
        "line.8": {
            "text": "Prüft ihr mich mit euren Kreisen?"
        },
        "line.9": {
            "text": "Ich bin ein alter, kranker Mann!"
        },
        "line.10": {
            "text": "Versteht, mit Frauen"
        },
        "line.11": {
            "text": "wechsle ich nur zag noch arme Blicke."
        },
        "line.12": {
            "text": "Überfliegt die reichen jungen Fraun,"
        },
        "line.13": {
            "text": "die reichen schönen Männer,"
        },
        "line.14": {
            "text": "die sich in Betten mögen."
        },
        "line.15": {
            "text": "Ich bin wie eine taube Nuß."
        },
        "line.16": {
            "text": "Das Kind hätt einen Vater"
        },
        "line.17": {
            "text": "mit krummen Beinen,"
        },
        "line.18": {
            "text": "Schielaugen"
        },
        "line.19": {
            "text": "und mit einer Glatze,"
        },
        "line.20": {
            "text": "und meistens wär er stumm."
        },
        "line.21": {
            "text": "Ich kann nicht mehr schaukeln, wiegen,"
        },
        "line.22": {
            "text": "nicht singen."
        }
    }
}