{
    "title": "ballade-von-der-unzulaenglichkeit-menschlichen-planens-770",
    "gender": "m",
    "author": "Bertolt  Brecht",
    "author_birth": "1898",
    "poem": {
        "line.1": {
            "text": "Der Mensch lebt durch den Kopf."
        },
        "line.2": {
            "text": "Sein Kopf reicht ihm nicht aus."
        },
        "line.3": {
            "text": "Versuch es nur, von deinem Kopf"
        },
        "line.4": {
            "text": "Lebt höchstens eine Laus."
        },
        "line.5": {
            "text": "Denn für dieses Leben"
        },
        "line.6": {
            "text": "Ist der Mensch nicht schlau genug."
        },
        "line.7": {
            "text": "Niemals merkt er eben"
        },
        "line.8": {
            "text": "Diesen Lug und Trug."
        },
        "line.9": {
            "text": "Ja, mach nur einen Plan!"
        },
        "line.10": {
            "text": "Sei nur ein großes Licht!"
        },
        "line.11": {
            "text": "Und mach dann nochnen zweiten Plan"
        },
        "line.12": {
            "text": "Gehn tun sie beide nicht."
        },
        "line.13": {
            "text": "Denn für dieses Leben"
        },
        "line.14": {
            "text": "Ist der Mensch nicht schlecht genug."
        },
        "line.15": {
            "text": "Doch sein höhres Streben"
        },
        "line.16": {
            "text": "Ist ein schöner Zug."
        },
        "line.17": {
            "text": "Ja, renn nur nach dem Glück"
        },
        "line.18": {
            "text": "Doch renne nicht zu sehr"
        },
        "line.19": {
            "text": "Denn alle rennen nach dem Glück"
        },
        "line.20": {
            "text": "Das Glück rennt hinterher."
        },
        "line.21": {
            "text": "Denn für dieses Leben"
        },
        "line.22": {
            "text": "Ist der Mensch nicht anspruchslos genug."
        },
        "line.23": {
            "text": "Drum ist all sein Streben"
        },
        "line.24": {
            "text": "Nur ein Selbstbetrug."
        },
        "line.25": {
            "text": "Der Mensch ist gar nicht gut"
        },
        "line.26": {
            "text": "Drum hau ihn auf den Hut."
        },
        "line.27": {
            "text": "Hast du ihm auf dem Hut gehaun"
        },
        "line.28": {
            "text": "Dann wird er vielleicht gut."
        },
        "line.29": {
            "text": "Denn für dieses Leben"
        },
        "line.30": {
            "text": "Ist der Mensch nicht gut genug"
        },
        "line.31": {
            "text": "Darum haut ihm eben"
        },
        "line.32": {
            "text": "Ruhig auf den Hut!"
        }
    }
}