{
    "title": "geschichte-ist-geschichte-12820",
    "gender": "m",
    "author": "Michael Fehr",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "Ich kann mich an eine Mutter erinnern"
        },
        "line.2": {
            "text": "und ich will es wissen"
        },
        "line.3": {
            "text": "und ihr solltet es mir erklären"
        },
        "line.4": {
            "text": "Ida und die blinden Brüder Frederik und Paul"
        },
        "line.5": {
            "text": "wohnen in einem grauen Zimmer"
        },
        "line.6": {
            "text": "in weissem Licht sitzen Frederik und Paul sehr leise"
        },
        "line.7": {
            "text": "in graugefleckte"
        },
        "line.8": {
            "text": "weiche Sessel versunken"
        },
        "line.9": {
            "text": "die sie umfangen"
        },
        "line.10": {
            "text": "Paul"
        },
        "line.11": {
            "text": "der Geringere und Geduldigere"
        },
        "line.12": {
            "text": "streicht mit einem grauen Messer weisse Creme auf"
        },
        "line.13": {
            "text": "ein graues Stück Brot"
        },
        "line.14": {
            "text": "auf einem Tisch ist mehr graues Brot vorhanden"
        },
        "line.15": {
            "text": "und graues Fleisch und eben weisse Creme"
        },
        "line.16": {
            "text": "und in der grauen Wohnung"
        },
        "line.17": {
            "text": "in weissem Licht betrachtet Ida die Brüder"
        },
        "line.18": {
            "text": "Ich will es nun doch wissen"
        },
        "line.19": {
            "text": "weil es mich beschäftigt"
        },
        "line.20": {
            "text": "ich kann mich erinnern"
        },
        "line.21": {
            "text": "schlecht"
        },
        "line.22": {
            "text": "aber ich kann"
        },
        "line.23": {
            "text": "ihr solltet es mir nun doch erklären"
        },
        "line.24": {
            "text": "Es ist besser"
        },
        "line.25": {
            "text": "du weisst es nicht"
        },
        "line.26": {
            "text": "es ist ein Geheimnis"
        },
        "line.27": {
            "text": "wir sollten besser nicht darüber sprechen"
        },
        "line.28": {
            "text": "es gibt die Geschichte"
        },
        "line.29": {
            "text": "dass wir dich mit unseren Händen fingen wie eine"
        },
        "line.30": {
            "text": "Maus"
        },
        "line.31": {
            "text": "Frederik redet sehr ruhig aus dem stillen Sessel"
        },
        "line.32": {
            "text": "er trägt einen grauen Anzug"
        },
        "line.33": {
            "text": "einen sehr ähnlichen wie Paul"
        },
        "line.34": {
            "text": "der auch einen grauen Anzug trägt"
        },
        "line.35": {
            "text": "sanft das Messer in die sanfte"
        },
        "line.36": {
            "text": "weisse Creme taucht und über ein dürres"
        },
        "line.37": {
            "text": "graues Stück Brot streicht"
        },
        "line.38": {
            "text": "Warum willst du es denn wissen"
        },
        "line.39": {
            "text": "aber Ida ist eine rasche"
        },
        "line.40": {
            "text": "feste"
        },
        "line.41": {
            "text": "junge Frau"
        },
        "line.42": {
            "text": "Als ich klein war"
        },
        "line.43": {
            "text": "war ich vielleicht einverstanden eine Maus zu sein"
        },
        "line.44": {
            "text": "aber es gefällt mir nicht mehr auf diese Weise"
        },
        "line.45": {
            "text": "es gibt niemanden"
        },
        "line.46": {
            "text": "der zwei Väter hat und keine Mutter"
        },
        "line.47": {
            "text": "sie trägt ein graues Kleid"
        },
        "line.48": {
            "text": "sie betrachtet die stillen"
        },
        "line.49": {
            "text": "versunkenen Brüder"
        },
        "line.50": {
            "text": "Frederik und Paul sitzen in die graugefleckten"
        },
        "line.51": {
            "text": "weichen"
        },
        "line.52": {
            "text": "ruhigen Sessel vergraben"
        },
        "line.53": {
            "text": "Aber du hast nun einmal zwei Väter"
        },
        "line.54": {
            "text": "bei denen du aufwuchst"
        },
        "line.55": {
            "text": "und davor hast du ein Geheimnis"
        },
        "line.56": {
            "text": "ein Geheimnis"
        },
        "line.57": {
            "text": "das wir hüten"
        },
        "line.58": {
            "text": "und es ist besser"
        },
        "line.59": {
            "text": "wenn du es uns hüten lässt"
        },
        "line.60": {
            "text": "Aber ich will es wissen"
        },
        "line.61": {
            "text": "Wenn wir aber Schwierigkeiten bekommen"
        },
        "line.62": {
            "text": "werden wir wild und bissig"
        },
        "line.63": {
            "text": "darum lass uns besser mühelos sein und halt es aus"
        },
        "line.64": {
            "text": "dass manches im Dunkeln bleibt"
        },
        "line.65": {
            "text": "Paul nimmt ein graues"
        },
        "line.66": {
            "text": "dürres Stück Brot"
        },
        "line.67": {
            "text": "ein mit weisser Creme bestrichenes"
        },
        "line.68": {
            "text": "belegt es mit einem grauen"
        },
        "line.69": {
            "text": "dürren Stück Fleisch und streckt es hin"
        },
        "line.70": {
            "text": "Nimm Brot mit Fleisch und setz dich"
        },
        "line.71": {
            "text": "Ida nimmt es und setzt sich in den Sessel"
        },
        "line.72": {
            "text": "der ihr am nächsten steht und in den sie sich"
        },
        "line.73": {
            "text": "ohnehin zu setzen pflegt"
        },
        "line.74": {
            "text": "aber sie will nicht recht versinken"
        },
        "line.75": {
            "text": "in der einen Hand hält sie fest das Brot"
        },
        "line.76": {
            "text": "mit der anderen streicht sie fest über das graue Kleid"
        },
        "line.77": {
            "text": "Ich war einmal klein"
        },
        "line.78": {
            "text": "und ich bin nun eine junge Frau"
        },
        "line.79": {
            "text": "Aber warum willst du es wissen"
        },
        "line.80": {
            "text": "wir zwangen dich doch nicht"
        },
        "line.81": {
            "text": "bei uns zu bleiben"
        },
        "line.82": {
            "text": "und Geschichte ist Geschichte"
        },
        "line.83": {
            "text": "Davon rede ich nicht"
        },
        "line.84": {
            "text": "ich war gern bei euch"
        },
        "line.85": {
            "text": "und ich bin gern bei euch"
        },
        "line.86": {
            "text": "aber ich erinnere mich leider dunkel an eine Mutter"
        },
        "line.87": {
            "text": "Frederik bewegt sich nicht"
        },
        "line.88": {
            "text": "grau in grau"
        },
        "line.89": {
            "text": "Paul belegt leise Brot mit Fleisch"
        },
        "line.90": {
            "text": "Ida beisst ein Stück von ihrem Brot ab"
        },
        "line.91": {
            "text": "rasch"
        },
        "line.92": {
            "text": "ohne besondere Aufmerksamkeit"
        },
        "line.93": {
            "text": "sie betrachtet die Brüder"
        },
        "line.94": {
            "text": "Frederik taucht aus dem Sessel auf"
        },
        "line.95": {
            "text": "der Sessel gibt ihn frei"
        },
        "line.96": {
            "text": "Alles"
        },
        "line.97": {
            "text": "was wir haben"
        },
        "line.98": {
            "text": "beruht auf der Vereinbarung"
        },
        "line.99": {
            "text": "dass wir alles nur haben"
        },
        "line.100": {
            "text": "weil wir es geschaffen haben"
        },
        "line.101": {
            "text": "und nur haben"
        },
        "line.102": {
            "text": "was wir geschaffen haben"
        },
        "line.103": {
            "text": "und diese Vereinbarung bist du mit uns eingegangen"
        },
        "line.104": {
            "text": "als du klein warst"
        },
        "line.105": {
            "text": "Aber ich war doch klein"
        },
        "line.106": {
            "text": "ich konnte nichts vereinbaren"
        },
        "line.107": {
            "text": "Ich verbiete es dir"
        },
        "line.108": {
            "text": "es gibt nichts zu wissen"
        },
        "line.109": {
            "text": "es ist ein Geheimnis"
        },
        "line.110": {
            "text": "Geschichte ist Geschichte"
        },
        "line.111": {
            "text": "Frederik scheint zu wachsen"
        },
        "line.112": {
            "text": "Paul macht sich klein"
        },
        "line.113": {
            "text": "Es tut mir leid"
        },
        "line.114": {
            "text": "Ida"
        },
        "line.115": {
            "text": "Es soll dir nicht leid tun"
        },
        "line.116": {
            "text": "ich will es einfach wissen"
        },
        "line.117": {
            "text": "Es tut mir leid"
        },
        "line.118": {
            "text": "Ida"
        },
        "line.119": {
            "text": "Paul streicht mit der Hand fest über das Gesicht"
        },
        "line.120": {
            "text": "auch Frederik fährt mit der Hand fest über das"
        },
        "line.121": {
            "text": "Gesicht"
        },
        "line.122": {
            "text": "Ich verbiete dir zu reden"
        },
        "line.123": {
            "text": "Du kannst mir nichts befehlen"
        },
        "line.124": {
            "text": "sie bewegt sich rasch"
        },
        "line.125": {
            "text": "das graue Kleid spielt im weissen Licht"
        },
        "line.126": {
            "text": "die festen Haare werden kühn"
        },
        "line.127": {
            "text": "sie streicht hindurch"
        },
        "line.128": {
            "text": "sie reisst das Fleisch vom Brot"
        },
        "line.129": {
            "text": "das sie in der Hand hält"
        },
        "line.130": {
            "text": "wirft das Brot scharf Frederik ins Gesicht"
        },
        "line.131": {
            "text": "das Fleisch wirft sie scharf Paul ins Gesicht"
        },
        "line.132": {
            "text": "Frederik fährt mit beiden Händen übers Gesicht"
        },
        "line.133": {
            "text": "und durch die Haare"
        },
        "line.134": {
            "text": "springt auf"
        },
        "line.135": {
            "text": "versucht sie mit den Händen zu erwischen"
        },
        "line.136": {
            "text": "Du machst mich wütend"
        },
        "line.137": {
            "text": "Du machst mich auch wütend"
        },
        "line.138": {
            "text": "zischt Ida"
        },
        "line.139": {
            "text": "unter den grauen Sesseln fauchen die Hunde"
        },
        "line.140": {
            "text": "Ruhig"
        },
        "line.141": {
            "text": "Buben"
        },
        "line.142": {
            "text": "Paul bewegt sich sacht"
        },
        "line.143": {
            "text": "der Anzug bewegt sich im weissen Licht"
        },
        "line.144": {
            "text": "er steckt das Gesicht unter einen Sessel"
        },
        "line.145": {
            "text": "ruhig"
        },
        "line.146": {
            "text": "Ida nimmt ein Stück Brot mit Fleisch vom Tisch"
        },
        "line.147": {
            "text": "hält es fest"
        },
        "line.148": {
            "text": "Du sollst nicht mit uns umspringen"
        },
        "line.149": {
            "text": "sonst fallen wir über dich her"
        },
        "line.150": {
            "text": "wir sind immer noch deine Väter"
        },
        "line.151": {
            "text": "und gehorchen ist gehorchen"
        },
        "line.152": {
            "text": "Du kannst mich nicht sehen"
        },
        "line.153": {
            "text": "und ich bin rasch"
        },
        "line.154": {
            "text": "ich fürchte mich nicht"
        },
        "line.155": {
            "text": "Dann werde ich dich das Fürchten lehren"
        },
        "line.156": {
            "text": "Frederiks Hand versenkt sich im grauen Anzug und"
        },
        "line.157": {
            "text": "kommt mit einer Pistole wieder hervor"
        },
        "line.158": {
            "text": "es wird laut"
        },
        "line.159": {
            "text": "ein Schuss versinkt in dem Sessel"
        },
        "line.160": {
            "text": "in dem Ida zu sitzen pflegt"
        },
        "line.161": {
            "text": "und versengt ihn"
        },
        "line.162": {
            "text": "Das ist mein Sessel"
        },
        "line.163": {
            "text": "du Hund"
        },
        "line.164": {
            "text": "wieder wird es laut"
        },
        "line.165": {
            "text": "ein Schuss springt in den Sessel und verschwindet"
        },
        "line.166": {
            "text": "die Hunde fauchen und werden auch laut"
        },
        "line.167": {
            "text": "bellen"
        },
        "line.168": {
            "text": "Paul kommt unter dem Sessel hervor"
        },
        "line.169": {
            "text": "Ruhig"
        },
        "line.170": {
            "text": "Ida springt aus dem Zimmer"
        },
        "line.171": {
            "text": "Hunde"
        },
        "line.172": {
            "text": "Frederik steht mit der Pistole in der Hand"
        },
        "line.173": {
            "text": "Paul"
        },
        "line.174": {
            "text": "du kannst doch nicht einfach still bleiben"
        },
        "line.175": {
            "text": "Ich ging unter den Stuhl"
        },
        "line.176": {
            "text": "um die Hunde zu beruhigen"
        },
        "line.177": {
            "text": "Ida macht uns zu schaffen"
        },
        "line.178": {
            "text": "sie will uns auseinandernehmen"
        },
        "line.179": {
            "text": "das dürfen wir nicht hinnehmen"
        },
        "line.180": {
            "text": "wir müssen die Hunde auf sie hetzen"
        },
        "line.181": {
            "text": "Frederik fuchtelt mit der Pistole"
        },
        "line.182": {
            "text": "die graue Pistole bewegt sich im weissen Licht"
        },
        "line.183": {
            "text": "Buben"
        },
        "line.184": {
            "text": "jetzt müsst ihr sie euch krallen"
        },
        "line.185": {
            "text": "für uns müsst ihr jagen"
        },
        "line.186": {
            "text": "holt sie euch"
        },
        "line.187": {
            "text": "und schleift sie zurück"
        },
        "line.188": {
            "text": "Paul nimmt seine Pistole aus dem Anzug und legt"
        },
        "line.189": {
            "text": "sie auf den Tisch"
        },
        "line.190": {
            "text": "die graue Pistole liegt in weissem Licht"
        },
        "line.191": {
            "text": "die Sessel schütteln sich"
        },
        "line.192": {
            "text": "unter ihnen hervor springen die Hunde"
        },
        "line.193": {
            "text": "schütteln sich"
        },
        "line.194": {
            "text": "es sind echte Tiere"
        },
        "line.195": {
            "text": "graue Hunde in weissem Licht"
        },
        "line.196": {
            "text": "sie bellen und sind bissig"
        },
        "line.197": {
            "text": "schütteln die Köpfe"
        },
        "line.198": {
            "text": "reissen die Rachen auf"
        },
        "line.199": {
            "text": "zeigen die Zähne"
        },
        "line.200": {
            "text": "betrachten die Brüder"
        },
        "line.201": {
            "text": "schlagen wild um sich"
        },
        "line.202": {
            "text": "zeigen die Zähne"
        },
        "line.203": {
            "text": "fauchen"
        },
        "line.204": {
            "text": "bellen"
        },
        "line.205": {
            "text": "fürchten sich nicht"
        },
        "line.206": {
            "text": "stellen die Ohren"
        },
        "line.207": {
            "text": "recken die Nasen"
        },
        "line.208": {
            "text": "sind schmiegsam"
        },
        "line.209": {
            "text": "aber bereit zur Raserei"
        },
        "line.210": {
            "text": "es sind unterwürfige und gewalttätige Tiere"
        },
        "line.211": {
            "text": "Holt sie euch"
        },
        "line.212": {
            "text": "es wird laut"
        },
        "line.213": {
            "text": "Gebrüll"
        },
        "line.214": {
            "text": "Gebell"
        },
        "line.215": {
            "text": "die Hunde reissen sich zusammen"
        },
        "line.216": {
            "text": "springen hinaus und hetzen Ida hinterher"
        },
        "line.217": {
            "text": "Frederik geht in seinen Sessel zurück"
        },
        "line.218": {
            "text": "lässt sich gehen"
        },
        "line.219": {
            "text": "die Hand mit der Pistole hängt über den Sessel"
        },
        "line.220": {
            "text": "hinaus"
        },
        "line.221": {
            "text": "auch Paul setzt sich"
        },
        "line.222": {
            "text": "die Gesichter der Brüder werden wieder still"
        },
        "line.223": {
            "text": "Frederik legt die Pistole auf den Tisch"
        },
        "line.224": {
            "text": "die Brüder sitzen leise in weissem Licht"
        },
        "line.225": {
            "text": "sie nehmen Brot mit Fleisch"
        },
        "line.226": {
            "text": "beissen ohne besondere Beachtung ab und"
        },
        "line.227": {
            "text": "verschwinden in weichem"
        },
        "line.228": {
            "text": "geflecktem Grau"
        }
    }
}