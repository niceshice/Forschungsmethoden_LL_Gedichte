{
    "title": "horizontbetrachter-3177",
    "gender": "m",
    "author": "Björn  Kuhligk",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "Hier ist ein Wald"
        },
        "line.2": {
            "text": "da sind die Bäume"
        },
        "line.3": {
            "text": "darin sind die Ringe"
        },
        "line.4": {
            "text": "darin schläft die Angst"
        },
        "line.5": {
            "text": "du schlägst zu mit der Axt"
        },
        "line.6": {
            "text": "und trinkst den Harzstein mit"
        },
        "line.7": {
            "text": "und das Lieblingstier"
        },
        "line.8": {
            "text": "das ist der Affe im Zoo"
        },
        "line.9": {
            "text": "den kannst du besuchen"
        },
        "line.10": {
            "text": "und er dich nicht"
        }
    }
}