{
    "title": "der-daumengrosse-purusha-ist-wie-ein-rauchloses-licht-7571",
    "gender": "m",
    "author": "Andre Rudolph",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "es war schon heller mittag,"
        },
        "line.2": {
            "text": "als die jungs von der tierrettung kamen"
        },
        "line.3": {
            "text": "und mich aus dem"
        },
        "line.4": {
            "text": "baum herausklaubten, in den ich mich"
        },
        "line.5": {
            "text": "verstiegen hatte;"
        },
        "line.6": {
            "text": "ich war heiter wie schon lange"
        },
        "line.7": {
            "text": "nicht mehr, obwohl"
        },
        "line.8": {
            "text": "meine situation ziemlich verfahren war,"
        },
        "line.9": {
            "text": "wie ihr euch vorstellen könnt;"
        },
        "line.10": {
            "text": "trotzdem kam ich mir"
        },
        "line.11": {
            "text": "irgendwie hell vor;"
        },
        "line.12": {
            "text": "wie ein leuchtzwerg, dem sie gerade"
        },
        "line.13": {
            "text": "eine neue hundert-watt-lampe"
        },
        "line.14": {
            "text": "reingeschraubt haben"
        },
        "line.15": {
            "text": "(so ist das ja manchmal:"
        },
        "line.16": {
            "text": "eigentlich gehts dir dreckig, aber dann)"
        },
        "line.17": {
            "text": "und die jungs von der tierrettung"
        },
        "line.18": {
            "text": "wussten einen augenblick lang"
        },
        "line.19": {
            "text": "auch wirklich"
        },
        "line.20": {
            "text": "nicht so ganz genau, wo sie mich"
        },
        "line.21": {
            "text": "hinstecken sollten;"
        },
        "line.22": {
            "text": "wer hatte die überhaupt gerufen?"
        },
        "line.23": {
            "text": "einen besitzer"
        },
        "line.24": {
            "text": "scheine ich nicht zu haben, meinen"
        },
        "line.25": {
            "text": "namen habe ich vergessen;"
        },
        "line.26": {
            "text": "die subtile zeichnung"
        },
        "line.27": {
            "text": "meines fells und meine klugen, braunen"
        },
        "line.28": {
            "text": "augen deuten zwar auf"
        },
        "line.29": {
            "text": "eine recht feine, artige gattung"
        },
        "line.30": {
            "text": "und gesittung hin,"
        },
        "line.31": {
            "text": "aber was hilft mir das jetzt, in diesem"
        },
        "line.32": {
            "text": "schlimmen gatter,"
        },
        "line.33": {
            "text": "mit den poltrigen jungs"
        },
        "line.34": {
            "text": "von der tierrettung, die mit ihrem"
        },
        "line.35": {
            "text": "kastenwagen"
        },
        "line.36": {
            "text": "kreuz und quer durch die"
        },
        "line.37": {
            "text": "ganze stadt jagen, auf der suche"
        },
        "line.38": {
            "text": "nach einem passenden"
        },
        "line.39": {
            "text": "quartier?"
        }
    }
}