{
    "title": "und-wieder-ein-paradies-245",
    "gender": "m",
    "author": "Jörg Schieke",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "dann lief ich durch die stadt bis an den rand"
        },
        "line.2": {
            "text": "der stadt"
        },
        "line.3": {
            "text": "und habe tote"
        },
        "line.4": {
            "text": "tiere, die ich fand,"
        },
        "line.5": {
            "text": "auch nur mit langen zweigen"
        },
        "line.6": {
            "text": "angefasst. ich wollte"
        },
        "line.7": {
            "text": "auf zwei fingern"
        },
        "line.8": {
            "text": "pfeifen können doch es kam"
        },
        "line.9": {
            "text": "ein viel zu leichter, leerer, nicht mal den ratten"
        },
        "line.10": {
            "text": "hinterm schilf"
        },
        "line.11": {
            "text": "vertrauter ton, so dass, wer mit mir scherzen wollte,"
        },
        "line.12": {
            "text": "sich erbrach und ich,"
        },
        "line.13": {
            "text": "und ich? ... ließ mich"
        },
        "line.14": {
            "text": "von einem stein, der mir am herzen lag,"
        },
        "line.15": {
            "text": "bemuttern."
        }
    }
}