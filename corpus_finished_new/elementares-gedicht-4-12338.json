{
    "title": "elementares-gedicht-4-12338",
    "gender": "m",
    "author": "Ulrich Koch",
    "author_birth": "1966",
    "poem": {
        "line.1": {
            "text": "Begleiche deine Träume niemals im Mai."
        },
        "line.2": {
            "text": "Stell deine Hände einander vor."
        },
        "line.3": {
            "text": "Treibe die Flotte aufs Gras und weide sie."
        },
        "line.4": {
            "text": "Halt dich von Wangen fern, wenn kein Wind geht."
        },
        "line.5": {
            "text": "Gib zwei Schaufeln Erde ins Badewasser."
        },
        "line.6": {
            "text": "Leg dich in einen Katzenschatten."
        },
        "line.7": {
            "text": "Sag Mutter: Grüß Vater."
        },
        "line.8": {
            "text": "Halte den Vögeln die Ohren zu."
        },
        "line.9": {
            "text": "Hüte dich vor dem Hirten."
        },
        "line.10": {
            "text": "Verwechsle die Toten nie wieder mit Alpenglühen."
        },
        "line.11": {
            "text": "Meide Maische."
        },
        "line.12": {
            "text": "Tröste die Flotte, wenn sie weint."
        },
        "line.13": {
            "text": "Sag deinem Herz, es sei ein Einzelkind."
        },
        "line.14": {
            "text": "Teile dein Reich."
        },
        "line.15": {
            "text": "Komme."
        },
        "line.16": {
            "text": "Geschehe."
        }
    }
}