{
    "title": "trost-im-gedicht-1220",
    "gender": "m",
    "author": "Robert  Gernhardt",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Denk dir ein Trüffelschwein,"
        },
        "line.2": {
            "text": "denks wieder weg:"
        },
        "line.3": {
            "text": "Wird es auch noch so klein,"
        },
        "line.4": {
            "text": "wird nie verschwunden sein,"
        },
        "line.5": {
            "text": "bleibt doch als Fleck."
        },
        "line.6": {
            "text": "Was je ein Mensch gedacht,"
        },
        "line.7": {
            "text": "läßt eine Spur."
        },
        "line.8": {
            "text": "Wirkt als verborgne Macht,"
        },
        "line.9": {
            "text": "und erst die letzte Nacht"
        },
        "line.10": {
            "text": "löscht die Kontur."
        },
        "line.11": {
            "text": "Hat auch der Schein sein Sein"
        },
        "line.12": {
            "text": "und seinen Sinn."
        },
        "line.13": {
            "text": "Mußt ihm nur Sein verleihn:"
        },
        "line.14": {
            "text": "Denk dir kein Trüffelschwein,"
        },
        "line.15": {
            "text": "denks wieder hin."
        }
    }
}