{
    "title": "nachmittagsvorstellung-sizilianisch-3694",
    "gender": "m",
    "author": "Yaak  Karsunke",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "für Ingrid"
        },
        "line.2": {
            "text": "eidechsen in der sonne auf den rängen"
        },
        "line.3": {
            "text": "des griechischen theaters auf der bühne"
        },
        "line.4": {
            "text": "singen zikaden"
        },
        "line.5": {
            "text": "nebenan im museum der schmuck"
        },
        "line.6": {
            "text": "angelegt vor zweitausendvierhundert jahren"
        },
        "line.7": {
            "text": "(um wem zu gefallen) von einer frau"
        },
        "line.8": {
            "text": "in den alten steinbrüchen blühen"
        },
        "line.9": {
            "text": "mandelbäume & mimosen unter palmen"
        },
        "line.10": {
            "text": "siebentausend gefangene athener"
        },
        "line.11": {
            "text": "schlugen ihnen damals den platz frei"
        },
        "line.12": {
            "text": "& krepierten in steinstaub & schatten"
        },
        "line.13": {
            "text": "karthager die griechen die römer"
        },
        "line.14": {
            "text": "- zwei große karthagische &"
        },
        "line.15": {
            "text": "die drei punischen kriege"
        },
        "line.16": {
            "text": "dazwischen der friede von sonstwo -"
        },
        "line.17": {
            "text": "vandalen goten araber"
        },
        "line.18": {
            "text": "& nach den sarazenen: der sand"
        },
        "line.19": {
            "text": "raubzüge sklavenaufstände"
        },
        "line.20": {
            "text": "wechselnde koalitionen - der berg"
        },
        "line.21": {
            "text": "gibt keinen frieden einmal"
        },
        "line.22": {
            "text": "umfließt lava die mauern der stadt"
        },
        "line.23": {
            "text": "& füllt die wasser-"
        },
        "line.24": {
            "text": "gräben der festung mit feuer"
        },
        "line.25": {
            "text": "erdbeben pest der letzte ritter fällt"
        },
        "line.26": {
            "text": "an fäden aus dem marionettenhimmel"
        },
        "line.27": {
            "text": "mit martialisch aufgemaltem schnurrbart"
        },
        "line.28": {
            "text": "den harnisch aus messing"
        },
        "line.29": {
            "text": "fest an den holzleib genagelt"
        },
        "line.30": {
            "text": "noch einmal erschlägt er"
        },
        "line.31": {
            "text": "mit klimperndem blechschwert"
        },
        "line.32": {
            "text": "den drachen besiegt die araber"
        },
        "line.33": {
            "text": "& rettet die (christliche) jungfrau"
        },
        "line.34": {
            "text": "für ein langes leben im kloster"
        },
        "line.35": {
            "text": "dann tanzt der schatten"
        },
        "line.36": {
            "text": "einer elster über die szene"
        },
        "line.37": {
            "text": "die zikaden verstummen"
        },
        "line.38": {
            "text": "eine eidechse hebt ihren kopf"
        },
        "line.39": {
            "text": "bevor sie sich - ein trockenes geräusch -"
        },
        "line.40": {
            "text": "in den gräsern verliert auf den rängen"
        },
        "line.41": {
            "text": "des antiken theaters"
        }
    }
}