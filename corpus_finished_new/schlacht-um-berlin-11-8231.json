{
    "title": "schlacht-um-berlin-11-8231",
    "gender": "m",
    "author": "Michael Speier",
    "author_birth": "1950",
    "poem": {
        "line.1": {
            "text": "gib farbe, der japaner vor meiner haustür himmelblau"
        },
        "line.2": {
            "text": "und bronzino der fleischersohn"
        },
        "line.3": {
            "text": "wollen es so"
        },
        "line.4": {
            "text": "nur weil wahrheit und unwahrheit sich im wesen"
        },
        "line.5": {
            "text": "nicht gleichgültig sind"
        },
        "line.6": {
            "text": "kann überhaupt ein wahrer satz"
        },
        "line.7": {
            "text": "in die schärfe des gegenteils treten"
        },
        "line.8": {
            "text": "zum entsprechend unwahren satz"
        },
        "line.9": {
            "text": "wer aber vermag noch zu sagen (: zu singen)"
        },
        "line.10": {
            "text": "den unterschied zwischen quarks und quark"
        },
        "line.11": {
            "text": "nena und nono"
        },
        "line.12": {
            "text": "wer hört"
        },
        "line.13": {
            "text": "die schön gefluteten stimmen"
        },
        "line.14": {
            "text": "die obertöne im roggenfeld"
        },
        "line.15": {
            "text": "oder die sprüche der okzitanischen sibylle"
        },
        "line.16": {
            "text": "wenn die ganze nacht bier gezapft wird"
        },
        "line.17": {
            "text": "unter atheistischen bergzacken ?"
        },
        "line.18": {
            "text": "farben sind immer die anderen"
        },
        "line.19": {
            "text": "wir zählen bis zehn, sogar bis"
        },
        "line.20": {
            "text": "elf, der zahl der maßlosigkeit"
        },
        "line.21": {
            "text": "in verschwitzten t-shirts"
        },
        "line.22": {
            "text": "entlassen aus unseren kompositionen"
        }
    }
}