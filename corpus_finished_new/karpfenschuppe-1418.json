{
    "title": "karpfenschuppe-1418",
    "gender": "w",
    "author": "Christine Nöstlinger",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Wenn man sie gegen das Licht hält"
        },
        "line.2": {
            "text": "und ein Sonnenstrahl auf sie fällt,"
        },
        "line.3": {
            "text": "dann gibt es nichts auf der Welt,"
        },
        "line.4": {
            "text": "was schöner war!"
        },
        "line.5": {
            "text": "Aber meine Mutter hat keine Augen,"
        },
        "line.6": {
            "text": "die für das Wunderbare taugen."
        },
        "line.7": {
            "text": "Sie sieht nicht,"
        },
        "line.8": {
            "text": "wie's funkelt, glitzert und blinkt."
        },
        "line.9": {
            "text": "Sie schnüffelt bloß:"
        },
        "line.10": {
            "text": "Scheußlich, wie das wieder stinkt!"
        }
    }
}