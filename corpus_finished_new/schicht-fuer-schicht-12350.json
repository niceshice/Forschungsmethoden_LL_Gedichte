{
    "title": "schicht-fuer-schicht-12350",
    "gender": "m",
    "author": "David  Krause",
    "author_birth": "1988",
    "poem": {
        "line.1": {
            "text": "der film über vater und mutter"
        },
        "line.2": {
            "text": "zeigt beide nur einen moment. dann"
        },
        "line.3": {
            "text": "schwenkt die kamera fort"
        },
        "line.4": {
            "text": "zur weißen wand."
        },
        "line.5": {
            "text": "hinter der wand ein kind. sein lachen"
        },
        "line.6": {
            "text": "wie von einem mit schnee"
        },
        "line.7": {
            "text": "überspielten tonband."
        },
        "line.8": {
            "text": "davor das geklapper"
        },
        "line.9": {
            "text": "der gabeln und messer"
        },
        "line.10": {
            "text": "gekaue gerede"
        },
        "line.11": {
            "text": "geschichte"
        },
        "line.12": {
            "text": "wie sich schicht für schicht"
        },
        "line.13": {
            "text": "auf die rolle spult."
        },
        "line.14": {
            "text": "das licht der schall: alles"
        },
        "line.15": {
            "text": "geht ein in den film."
        },
        "line.16": {
            "text": "nur nicht ich der die kamera"
        },
        "line.17": {
            "text": "durch die räume trägt."
        }
    }
}