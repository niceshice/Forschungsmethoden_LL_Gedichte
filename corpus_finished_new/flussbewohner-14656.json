{
    "title": "flussbewohner-14656",
    "gender": "w",
    "author": "Lisa Elsässer",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "deine schmerzen hast du"
        },
        "line.2": {
            "text": "mir hinterlassen wie schöne"
        },
        "line.3": {
            "text": "kieselsteine ordne ich nun dein"
        },
        "line.4": {
            "text": "und mein nicht auseinander"
        },
        "line.5": {
            "text": "zu haltenist das flussgeschliffene"
        },
        "line.6": {
            "text": "grau dem das wasser beibrachte"
        },
        "line.7": {
            "text": "still still zu liegen so wie wir"
        },
        "line.8": {
            "text": "manchmal in der stille lagen"
        },
        "line.9": {
            "text": "und über uns das fliessen"
        },
        "line.10": {
            "text": "in der strömung einander"
        },
        "line.11": {
            "text": "zugewandt stumm im dunkel"
        },
        "line.12": {
            "text": "zogst du aus ohne ein gepäck"
        },
        "line.13": {
            "text": "ich legte mich in dein bett"
        },
        "line.14": {
            "text": "auf die blätter deiner zornhecke"
        },
        "line.15": {
            "text": "dort döste die wärme alles"
        },
        "line.16": {
            "text": "war noch da dein fehlen haare duft"
        },
        "line.17": {
            "text": "die so um mich geschlungene"
        },
        "line.18": {
            "text": "nacht als hätte sie nun deinen part"
        },
        "line.19": {
            "text": "und trotzdem war mir kalt"
        },
        "line.20": {
            "text": "denn die kiesel lagen noch da"
        },
        "line.21": {
            "text": "wach und aufmerksam liess"
        },
        "line.22": {
            "text": "ich sie liegen unfähig mein und"
        },
        "line.23": {
            "text": "dein dasselbe grau und doch"
        },
        "line.24": {
            "text": "wir werden bleiben unter einem"
        },
        "line.25": {
            "text": "klarem hell uns graue flussbewohner"
        }
    }
}