{
    "title": "kunst-am-bau-14140",
    "gender": "m",
    "author": "Nicolai Kobus",
    "author_birth": "1968",
    "poem": {
        "line.1": {
            "text": "sieh mich an echnaton ich"
        },
        "line.2": {
            "text": "habe dich gemacht und du"
        },
        "line.3": {
            "text": "hast mich machen lassen so"
        },
        "line.4": {
            "text": "entsteht wohl ein werk"
        },
        "line.5": {
            "text": "aus fleisch und stein"
        },
        "line.6": {
            "text": "ich werden und in stein"
        },
        "line.7": {
            "text": "machen stein werden und"
        },
        "line.8": {
            "text": "ein ich machen das andere"
        },
        "line.9": {
            "text": "versteinern läßt weil neben"
        },
        "line.10": {
            "text": "soviel ich im stein kaum"
        },
        "line.11": {
            "text": "anderes kontur gewinnt"
        },
        "line.12": {
            "text": "geschweige denn ein sein"
        },
        "line.13": {
            "text": "untermauert habe ich mich"
        },
        "line.14": {
            "text": "deinem bau echnaton voll"
        },
        "line.15": {
            "text": "im saft mit bauch und brüsten"
        },
        "line.16": {
            "text": "stattlich ehrvoll upperclass (heute"
        },
        "line.17": {
            "text": "hieße das leberschaden) mein"
        },
        "line.18": {
            "text": "weib mir zur seite am arm"
        },
        "line.19": {
            "text": "stolz und gleichgroß mit"
        },
        "line.20": {
            "text": "erkennbarer scham"
        },
        "line.21": {
            "text": "sieh mich an echnaton sieh"
        },
        "line.22": {
            "text": "daß ich stein geworden bin"
        },
        "line.23": {
            "text": "in deinem stein doch immer"
        },
        "line.24": {
            "text": "noch frei genug um dich"
        },
        "line.25": {
            "text": "zu tragen"
        },
        "line.26": {
            "text": "Naosstele des Bak,"
        },
        "line.27": {
            "text": "um 1345 vuZ,"
        },
        "line.28": {
            "text": "Quarzit, Höhe 67cm"
        }
    }
}