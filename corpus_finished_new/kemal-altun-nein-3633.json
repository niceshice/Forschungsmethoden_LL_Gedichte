{
    "title": "kemal-altun-nein-3633",
    "gender": "m",
    "author": "Franz Xaver  Kroetz",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Du Staat, du deutscher"
        },
        "line.2": {
            "text": "vom 30. August 1983,"
        },
        "line.3": {
            "text": "paß auf,"
        },
        "line.4": {
            "text": "ich muß dir ein paar"
        },
        "line.5": {
            "text": "Zeilen sagen."
        },
        "line.6": {
            "text": "Es ist aus zwischen uns."
        },
        "line.7": {
            "text": "Staatenlos wär ich lieber,"
        },
        "line.8": {
            "text": "als Bürger von dir."
        },
        "line.9": {
            "text": "Staat, daß das Faß heut überlief,"
        },
        "line.10": {
            "text": "an diesem milden Tag,"
        },
        "line.11": {
            "text": "hat seinen Grund in einem Tod,"
        },
        "line.12": {
            "text": "der an dir kleben bleibt."
        },
        "line.13": {
            "text": "Verdächtigt hab ich dich schon oft,"
        },
        "line.14": {
            "text": "heut hast du dich bewiesen."
        },
        "line.15": {
            "text": "Die Nachricht war ganz kurz,"
        },
        "line.16": {
            "text": "war sachlich. Schnell vorbei."
        },
        "line.17": {
            "text": "Heut früh ist einer"
        },
        "line.18": {
            "text": "aus dem Fenster gesprungen,"
        },
        "line.19": {
            "text": "der deinen Schutz, wollte,"
        },
        "line.20": {
            "text": "aus dem 6. Stock des"
        },
        "line.21": {
            "text": "Berliner Verwaltungsgerichts,"
        },
        "line.22": {
            "text": "und gestorben auf dem Rasen"
        },
        "line.23": {
            "text": "hinter dem Haus."
        },
        "line.24": {
            "text": "Der zu uns kam, und der nichts"
        },
        "line.25": {
            "text": "wollte als bleiben dürfen, leben können,"
        },
        "line.26": {
            "text": "atmen, der sprang heute aus deinem Fenster."
        },
        "line.27": {
            "text": "Jetzt liegt er im Gerichtsmedizinischen,"
        },
        "line.28": {
            "text": "und später kommt er in die Kühlkammer."
        },
        "line.29": {
            "text": "Wird dann weiter verhandelt,"
        },
        "line.30": {
            "text": "ob nun, da mehr nicht übrig ist,"
        },
        "line.31": {
            "text": "der Leichnam Asyl auf deutschem Boden kriegt,"
        },
        "line.32": {
            "text": "oder auch der noch auf türkischen muß?"
        },
        "line.33": {
            "text": "Ich kann dein Gesicht nicht mehr erkennen,"
        },
        "line.34": {
            "text": "du deutscher Staat vom 30. August 1983."
        },
        "line.35": {
            "text": "Wie alt bist du?"
        },
        "line.36": {
            "text": "Ich weiß von manchem Fenstersturz,"
        },
        "line.37": {
            "text": "als letztem Aufbegehren, gegen"
        },
        "line.38": {
            "text": "GESTAPO, KZ und Vergasung."
        },
        "line.39": {
            "text": "Für den, der jetzt tot ist,"
        },
        "line.40": {
            "text": "hat sich die demokratische Welt eingesetzt."
        },
        "line.41": {
            "text": "Man bat, man flehte, man hoffte."
        },
        "line.42": {
            "text": "Woher wußte der Tote, daß"
        },
        "line.43": {
            "text": "dieser deutsche Staat nicht zu rühren ist?"
        },
        "line.44": {
            "text": "Kannte er die deutsche Geschichte so gut?"
        },
        "line.45": {
            "text": "Für mich hast du heute getötet, Staat,"
        },
        "line.46": {
            "text": "nicht selbst, noch nicht, doch hast"
        },
        "line.47": {
            "text": "du einen Tod erzwungen, du lieferst aus"
        },
        "line.48": {
            "text": "als wüßtest du von GAR NICHTS"
        },
        "line.49": {
            "text": "Verfolgte eines Faschistenregimes"
        },
        "line.50": {
            "text": "lieferst du an das Faschistenregime aus."
        },
        "line.51": {
            "text": "Staat, du hast so manchen alten Nazi"
        },
        "line.52": {
            "text": "freundlich an deiner Brust,"
        },
        "line.53": {
            "text": "wie konntest du dem jungen Demokraten"
        },
        "line.54": {
            "text": "den Weg durchs Fenster weisen?"
        },
        "line.55": {
            "text": "In welchem Namen kannst du sowas tun,"
        },
        "line.56": {
            "text": "in welchem Auftrag?"
        },
        "line.57": {
            "text": "In meinem auch? Bin ich dein Eigentum"
        },
        "line.58": {
            "text": "so wie mein Paß? Ich will nicht mehr."
        },
        "line.59": {
            "text": "Will nicht mehr Bürger genannt werden"
        },
        "line.60": {
            "text": "eines Staats, der mit Systemen paktiert,"
        },
        "line.61": {
            "text": "die nach dem riechen, was auf den letzten"
        },
        "line.62": {
            "text": "europäischen Schlachtfeldern zerrieben schien."
        },
        "line.63": {
            "text": "Ich will nicht mehr Bürger genannt werden"
        },
        "line.64": {
            "text": "eines Staats, der sich mit jedem freundlich"
        },
        "line.65": {
            "text": "beschnuppert, der nach Unrecht, Terror,"
        },
        "line.66": {
            "text": "Folter, Blut und Elend riecht"
        },
        "line.67": {
            "text": "nach deutscher Vergangenheit also."
        },
        "line.68": {
            "text": "Staat du, vom 30. August 1983,"
        },
        "line.69": {
            "text": "ich hab noch viel auf der Zunge,"
        },
        "line.70": {
            "text": "aber es schändet nur den heute"
        },
        "line.71": {
            "text": "von dir Getöteten, er allein wär genug zu sagen:"
        },
        "line.72": {
            "text": "Staat, du bist der meine nicht mehr,"
        },
        "line.73": {
            "text": "mir ekelt vor dir,"
        },
        "line.74": {
            "text": "aus altem Nazischoß gekrochner,"
        },
        "line.75": {
            "text": "groß gewordner Bastard."
        },
        "line.76": {
            "text": "Mag sein, die Zeilen sind verbittert,"
        },
        "line.77": {
            "text": "maßlos auch und haßerfüllt,"
        },
        "line.78": {
            "text": "und sie entzwein mich mit mir selbst."
        },
        "line.79": {
            "text": "Ich kann nicht anders."
        },
        "line.80": {
            "text": "Als heut die Nachricht kam,"
        },
        "line.81": {
            "text": "nach dem Mittagsglockenläuten,"
        },
        "line.82": {
            "text": "war dieser Sprung aus dem Berliner Fenster"
        },
        "line.83": {
            "text": "mir zuviel."
        },
        "line.84": {
            "text": "Ich schäme mich."
        },
        "line.85": {
            "text": "Heimat? - Ich möchte staatenlos sein,"
        },
        "line.86": {
            "text": "ein Ausgewiesener wenigstens,"
        },
        "line.87": {
            "text": "die Zeit ist doch gekommen, daß man sagt:"
        },
        "line.88": {
            "text": "Bis hierher ist zuviel."
        },
        "line.89": {
            "text": "Mir brennt die Stirn."
        },
        "line.90": {
            "text": "Der Sprung des jungen Türken in den Tod,"
        },
        "line.91": {
            "text": "der ist von mir auch mitverschuldet."
        },
        "line.92": {
            "text": "Staat, du, vom 30. August 1983,"
        },
        "line.93": {
            "text": "ich schwieg zuviel von dir,"
        },
        "line.94": {
            "text": "und tat zuwenig gegen dich."
        },
        "line.95": {
            "text": "Das muß sich ändern."
        }
    }
}