{
    "title": "sphinx-hinter-gittern-357",
    "gender": "w",
    "author": "Anne Duden",
    "author_birth": "1942",
    "poem": {
        "line.1": {
            "text": "Jeden Morgen tut sich die Stadt auf"
        },
        "line.2": {
            "text": "und wird ein Schacht."
        },
        "line.3": {
            "text": "Eine riesige Mischmaschine"
        },
        "line.4": {
            "text": "dreht er sich um sich selbst"
        },
        "line.5": {
            "text": "den ganzen Tag."
        },
        "line.6": {
            "text": "Die Sphinx lag noch ausgestreckt im Bett."
        },
        "line.7": {
            "text": "Sie war ein Spätaufsteher."
        },
        "line.8": {
            "text": "Das aus dem Schacht aufsteigende Getöse drang"
        },
        "line.9": {
            "text": "bis zu ihr."
        },
        "line.10": {
            "text": "Aber sie konnte es zuerst nicht entziffern."
        },
        "line.11": {
            "text": "Bis sie sich einmal über den Rand beugte und alles sah."
        },
        "line.12": {
            "text": "Der Schacht saugte Festes an und gab Körperloses ab"
        },
        "line.13": {
            "text": "zu ungleichen Teilen."
        },
        "line.14": {
            "text": "In der Tiefe krachte und ächtzte es"
        },
        "line.15": {
            "text": "brodelte und mahlte."
        },
        "line.16": {
            "text": "Hier wurden die Knochen zerstoßen"
        },
        "line.17": {
            "text": "und in Flüssiggas umgesetzt."
        },
        "line.18": {
            "text": "Weiter oben die schon entsafteten Weichteile"
        },
        "line.19": {
            "text": "deren Zerkleinern fast lautlos erfolgte."
        },
        "line.20": {
            "text": "Ganz oben wurde alles zentrifugal an den"
        },
        "line.21": {
            "text": "Rand geschleudert"
        },
        "line.22": {
            "text": "klebte dort als reglose Geschwindigkeit."
        },
        "line.23": {
            "text": "Sie wendete sich ab."
        },
        "line.24": {
            "text": "Das Schleifen Rauschen Tosen"
        },
        "line.25": {
            "text": "blähte ihren Kopf auf."
        },
        "line.26": {
            "text": "Für Gedanken und Gefühle war es nun zu spät"
        },
        "line.27": {
            "text": "geworden."
        },
        "line.28": {
            "text": "Von dem Tag an wurde sie vieldeutig"
        },
        "line.29": {
            "text": "- ihr selbst war egal wer oder was sie war"
        },
        "line.30": {
            "text": "und lebte sie in einer Art Lattenverschlag"
        },
        "line.31": {
            "text": "oder Versandkäfig für Zootiere."
        },
        "line.32": {
            "text": "Sie wurde noch einmal betreten"
        },
        "line.33": {
            "text": "und dann nicht mehr."
        },
        "line.34": {
            "text": "Gebar Zwillinge."
        },
        "line.35": {
            "text": "Das eine Kind war schwarz, das andere weiß."
        },
        "line.36": {
            "text": "Aber nur dem schwarzen schenkte sie das Leben."
        },
        "line.37": {
            "text": "Und noch lange nach der Geburt"
        },
        "line.38": {
            "text": "ließ sie immer wieder bereitwillig zu"
        },
        "line.39": {
            "text": "wie der kleine dunkle Menschenkörper"
        },
        "line.40": {
            "text": "sich von ihren Brüsten herabgleiten ließ"
        },
        "line.41": {
            "text": "und nach einem leichten Stoß wie gegen Zitzen"
        },
        "line.42": {
            "text": "mit dem Kopf gegen die Öffnung zwischen ihren"
        },
        "line.43": {
            "text": "Beinen"
        },
        "line.44": {
            "text": "in ihrem Innern für ein Weilchen verschwand."
        },
        "line.45": {
            "text": "Zum Umschlungenwerden von ihren Eingeweiden."
        },
        "line.46": {
            "text": "Die Sphinx erstarrte äußerlich bald zur vollkommenen"
        },
        "line.47": {
            "text": "Ruhe."
        },
        "line.48": {
            "text": "Langsam hatte der Stein sich über ihr geschlossen."
        },
        "line.49": {
            "text": "In dem bläulichen Höhlen- oder Neonlicht"
        },
        "line.50": {
            "text": "erfroren ihr die Innereien"
        },
        "line.51": {
            "text": "und sackten unter ihr in eine bodenlose Kaltluft weg."
        },
        "line.52": {
            "text": "So dämmerte sie mit weitaufgerissenen Augen vor"
        },
        "line.53": {
            "text": "sich hin."
        },
        "line.54": {
            "text": "Zeit lief nicht mehr ab."
        },
        "line.55": {
            "text": "Sie ruhte nun auf einer Hohlschiene."
        },
        "line.56": {
            "text": "Ihre Vorderpfoten waren Stümpfe"
        },
        "line.57": {
            "text": "ihr Unterleib und Ihre Hinterläufe restlos weg-"
        },
        "line.58": {
            "text": "gefressen"
        },
        "line.59": {
            "text": "die Flügel ausgefranste schwärzliche Gerippe"
        },
        "line.60": {
            "text": "nur noch vorläufig von der Schienenprothese gehalten."
        },
        "line.61": {
            "text": "Aber ihr Kopf. Aber ihr Gesicht."
        },
        "line.62": {
            "text": "Mit den breiten Backenknochen des Löwenschädels"
        },
        "line.63": {
            "text": "und den doch wirklich menschlichen Lippen"
        },
        "line.64": {
            "text": "dem einen blinden Auge"
        },
        "line.65": {
            "text": "und dem anderen einzigen, das alles sah."
        },
        "line.66": {
            "text": "Man hatte ihren Gesichtsausdruck"
        },
        "line.67": {
            "text": "mit Kanonen beschießen lassen."
        },
        "line.68": {
            "text": "Vor Urzeiten. Es zählte nicht mehr."
        },
        "line.69": {
            "text": "Das war gar nichts gegen die Ausrottung"
        },
        "line.70": {
            "text": "ihrer Geschwister und anderen Verwandten."
        },
        "line.71": {
            "text": "Hydra Chimäre Drache Schlange Brut."
        },
        "line.72": {
            "text": "Sie selbst konnte schon lange nicht mehr"
        },
        "line.73": {
            "text": "die Stätten des Westens"
        },
        "line.74": {
            "text": "ZU DENEN DIE SONNE UND DIE TOTEN GEHEN"
        },
        "line.75": {
            "text": "bewachen."
        },
        "line.76": {
            "text": "Hier im Dunkeln und unter dem Stein"
        },
        "line.77": {
            "text": "vollkommen arbeitsunfähig."
        },
        "line.78": {
            "text": "Manchmal versandete sie."
        },
        "line.79": {
            "text": "Durch die Ritzen drang der Flugsand bis in ihr"
        },
        "line.80": {
            "text": "Verlies."
        },
        "line.81": {
            "text": "Auch davor schloß sie die Augen nicht mehr"
        },
        "line.82": {
            "text": "und die Häufigkeit der Luftspiegelungen nahm"
        },
        "line.83": {
            "text": "deutlich zu."
        },
        "line.84": {
            "text": "Ständig zitterte etwas nach"
        },
        "line.85": {
            "text": "flimmerte den Höhlenraum auf und ab."
        },
        "line.86": {
            "text": "Kurz vor Anbruch einer der unzähligen Ewigkeiten"
        },
        "line.87": {
            "text": "warf eine Fata Morgana sie auf sich selbst zurück."
        },
        "line.88": {
            "text": "Es dauerte lange bis sie sich wiedererkannte."
        },
        "line.89": {
            "text": "Dieses andauernde Zittern, dieses Changieren."
        },
        "line.90": {
            "text": "Die Spiegelung wollte nicht zur Ruhe kommen"
        },
        "line.91": {
            "text": "erzeugte einmal im sich Erheben Versteinerndes"
        },
        "line.92": {
            "text": "einmal sich selber richtungslos in den Raum"
        },
        "line.93": {
            "text": "lallende Bilder."
        },
        "line.94": {
            "text": "Nach dem endlos langen Starren"
        },
        "line.95": {
            "text": "waren Innen und Außen für sie zusammengefallen"
        },
        "line.96": {
            "text": "erkannte sie keine Grenze und keinen Horizont"
        },
        "line.97": {
            "text": "mehr an"
        },
        "line.98": {
            "text": "keine Lider keine Haut."
        },
        "line.99": {
            "text": "Waren Mauern nur noch Linien"
        },
        "line.100": {
            "text": "die ein und dasselbe voneinander trennten."
        },
        "line.101": {
            "text": "Sie erblickte sich  nach so langer Zeit."
        },
        "line.102": {
            "text": "Die hochangesetzten breiten Backenknochen"
        },
        "line.103": {
            "text": "die ungleichen Augen"
        },
        "line.104": {
            "text": "den menschlichen Mund."
        },
        "line.105": {
            "text": "Den totenbleichen hochgeschreckten Kopf"
        },
        "line.106": {
            "text": "Charlie Chaplins Buster Keatons Mephistos"
        },
        "line.107": {
            "text": "den Binder die heruntergefallene venezianische"
        },
        "line.108": {
            "text": "Halbmaske"
        },
        "line.109": {
            "text": "den Affen mit abgerutschter Schutzbrille"
        },
        "line.110": {
            "text": "diesen schwarzen Hohlmund in allen ihren Köpfen"
        },
        "line.111": {
            "text": "diesen ausgeleiert stumpfen"
        },
        "line.112": {
            "text": "nicht nachlassenden und gleichfalls schwarzen"
        },
        "line.113": {
            "text": "Augenblick."
        },
        "line.114": {
            "text": "Und zwischen ihr und ihr  schwebend"
        },
        "line.115": {
            "text": "die aus den Höhlen gedrehten"
        },
        "line.116": {
            "text": "versteinerten Augbälle."
        },
        "line.117": {
            "text": "Die Sonne ging unter"
        },
        "line.118": {
            "text": "und vereint sahen ihre Schädel"
        },
        "line.119": {
            "text": "AM ABENDHIMMEL BLÜHET EIN FRÜHLING AUF."
        },
        "line.120": {
            "text": "Die Wüsten leerten sich"
        },
        "line.121": {
            "text": "der Sand lief ab"
        },
        "line.122": {
            "text": "ihr Umfeld neigte sich zur Seite."
        },
        "line.123": {
            "text": "Sie riß die Steinlider auseinander"
        },
        "line.124": {
            "text": "über ihrem völlig unbeweglich gewordenen Restleib"
        },
        "line.125": {
            "text": "in ihrer Schädel-Sammlung."
        },
        "line.126": {
            "text": "Sie wollte plötzlich alles wahrnehmen"
        },
        "line.127": {
            "text": "sich umdrehen"
        },
        "line.128": {
            "text": "die Nüstern blähen"
        },
        "line.129": {
            "text": "die Gerüche verfolgen."
        },
        "line.130": {
            "text": "Aber die Nackenstarre war zu einem ewigen"
        },
        "line.131": {
            "text": "Korsett geworden"
        },
        "line.132": {
            "text": "und der Schwund ihres Körpers ließ nur noch"
        },
        "line.133": {
            "text": "Phantomwünsche zu."
        },
        "line.134": {
            "text": "Lange Wolkenleitern streckten sich in die Schräge"
        },
        "line.135": {
            "text": "bis vor sie hin."
        },
        "line.136": {
            "text": "Ein ruhiges Feuer glühte aus dem Innern jeder"
        },
        "line.137": {
            "text": "einzelnen Sprosse"
        },
        "line.138": {
            "text": "während die Ränder schon aschig ergrauten."
        },
        "line.139": {
            "text": "Die Schiene war fest im Boden verankert."
        },
        "line.140": {
            "text": "Sie kam nie mehr los"
        },
        "line.141": {
            "text": "obwohl die Sprossen aufwärts"
        },
        "line.142": {
            "text": "zum Greifen nahe waren."
        },
        "line.143": {
            "text": "Hinter einer sich auffächernden Pappel"
        },
        "line.144": {
            "text": "stand der Himmel nun senkrecht da"
        },
        "line.145": {
            "text": "und aus einer Mitte heraus"
        },
        "line.146": {
            "text": "genau hinter dem schwarzen Geäst"
        },
        "line.147": {
            "text": "erblühte ein alle Luft durchspannender"
        },
        "line.148": {
            "text": "oben weit und locker auseinanderfallender"
        },
        "line.149": {
            "text": "rot durchglühter Ritterspornstrauß."
        },
        "line.150": {
            "text": "Bevor der Sand wieder einlief"
        },
        "line.151": {
            "text": "und das nächste Jahrtausend oder ähnliches"
        },
        "line.152": {
            "text": "gleichmäßig zu rieseln begann."
        }
    }
}