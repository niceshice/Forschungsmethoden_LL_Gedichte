{
    "title": "vierzig-5412",
    "gender": "m",
    "author": "Hans Raimund",
    "author_birth": "1945",
    "poem": {
        "line.1": {
            "text": "Aber verlernt"
        },
        "line.2": {
            "text": "Tagelang in einem Boot"
        },
        "line.3": {
            "text": "Auf dem Wasser zu treiben"
        },
        "line.4": {
            "text": "Nächtelang mit den Freunden"
        },
        "line.5": {
            "text": "Zu redenzu rauchen"
        },
        "line.6": {
            "text": "Tasse um Tasse"
        },
        "line.7": {
            "text": "Bitteren Tees zu trinken"
        },
        "line.8": {
            "text": "Dinge beim Namen zu nennen"
        },
        "line.9": {
            "text": "Mit Wörtern zu spielen"
        },
        "line.10": {
            "text": "Ihren Geschmackihr Gewicht"
        },
        "line.11": {
            "text": "Brennendleicht auf der Zunge"
        },
        "line.12": {
            "text": "Kinder und Hunde"
        },
        "line.13": {
            "text": "Ohne Bedenken zu kosen"
        },
        "line.14": {
            "text": "Und in der Dämmerung"
        },
        "line.15": {
            "text": "Drachen steigen zu lassen"
        },
        "line.16": {
            "text": "Die jäh ein widriger Aufwind"
        },
        "line.17": {
            "text": "In Fetzen reißt"
        },
        "line.18": {
            "text": "Sie einzuholen und"
        },
        "line.19": {
            "text": "Reulos gelassen zu flicken"
        }
    }
}