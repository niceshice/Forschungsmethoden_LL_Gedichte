{
    "title": "der-moment-wo-meer-und-haut-sich-trafen-8235",
    "gender": "m",
    "author": "Michael Speier",
    "author_birth": "1950",
    "poem": {
        "line.1": {
            "text": "fanden uns auf dem rücken des wals"
        },
        "line.2": {
            "text": "später schlägt unruhig der schwanz"
        },
        "line.3": {
            "text": "der dogge an den küchentisch"
        },
        "line.4": {
            "text": "die katze ist auch schon da"
        },
        "line.5": {
            "text": "die tödliche blume"
        },
        "line.6": {
            "text": "schwankt im fenster"
        },
        "line.7": {
            "text": "niemand trocknet den schweiss"
        },
        "line.8": {
            "text": "des vertobten nachmittags"
        },
        "line.9": {
            "text": "rauch der sterne"
        },
        "line.10": {
            "text": "krümelt das gesicht"
        },
        "line.11": {
            "text": "wo du mich berührst"
        },
        "line.12": {
            "text": "war noch keiner"
        },
        "line.13": {
            "text": "nicht mal ich"
        }
    }
}