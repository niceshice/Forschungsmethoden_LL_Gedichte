{
    "title": "eine-nacht-herbeigeschrieben-12347",
    "gender": "m",
    "author": "David  Krause",
    "author_birth": "1988",
    "poem": {
        "line.1": {
            "text": "auf der letzten seite des tagebuches"
        },
        "line.2": {
            "text": "schreibe ich vom morgen an"
        },
        "line.3": {
            "text": "mit schwarzer tinte"
        },
        "line.4": {
            "text": "noch einmal unsere geschichte"
        },
        "line.5": {
            "text": "schreibe und schreibe ich über"
        },
        "line.6": {
            "text": "schreibe ich die worte"
        },
        "line.7": {
            "text": "schicht für schicht."
        },
        "line.8": {
            "text": "es wird dunkel. das papier"
        },
        "line.9": {
            "text": "zeigt nun das bild eines himmels."
        },
        "line.10": {
            "text": "der himmel unter dem wir saßen"
        },
        "line.11": {
            "text": "in der ersten nacht einen stift"
        },
        "line.12": {
            "text": "hinter unsere ohren geschoben."
        },
        "line.13": {
            "text": "wir ahnten nicht dass eine geschichte"
        },
        "line.14": {
            "text": "an ihrem anfang enden kann"
        },
        "line.15": {
            "text": "dass unsere zeichen verschwinden"
        },
        "line.16": {
            "text": "für einen blick in die tiefe"
        },
        "line.17": {
            "text": "für einen moment"
        }
    }
}