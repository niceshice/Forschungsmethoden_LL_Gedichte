{
    "title": "wiepersdorf-spaeter-2-1302",
    "gender": "m",
    "author": "Klaus Merz",
    "author_birth": "1945",
    "poem": {
        "line.1": {
            "text": "Überall stehen die Pilze parat,"
        },
        "line.2": {
            "text": "Schwämme sagen die hergereisten"
        },
        "line.3": {
            "text": "Schweizer und ernten nahrhaften"
        },
        "line.4": {
            "text": "Tadel vom sächsischen Förster."
        },
        "line.5": {
            "text": "Es erträgt wenig Abweichungen"
        },
        "line.6": {
            "text": "im Herbst. Aber auch damit"
        },
        "line.7": {
            "text": "hatten wir nicht gerechnet"
        },
        "line.8": {
            "text": "(auf dieses neuste Jahrtausend hin)"
        },
        "line.9": {
            "text": "dass, Tochter, dein Liebster"
        },
        "line.10": {
            "text": "zu dir kommt - aus einem Krieg."
        },
        "line.11": {
            "text": "Dazwischen geschenkte"
        },
        "line.12": {
            "text": "Heiterkeiten und eine Trommel"
        },
        "line.13": {
            "text": "im Ohr, an die niemand"
        },
        "line.14": {
            "text": "rührt, gozzeidank."
        }
    }
}