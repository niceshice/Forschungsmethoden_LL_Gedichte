{
    "title": "sommerabend-5353",
    "gender": "m",
    "author": "Tom Schulz",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "nichts gesagt und getan"
        },
        "line.2": {
            "text": "als die eigenen Hieroglyphen in den Sand gesetzt"
        },
        "line.3": {
            "text": "durch soviel Kuhmist geschritten"
        },
        "line.4": {
            "text": "rauchst du mit mir den miesesten ipod"
        },
        "line.5": {
            "text": "holst du die Anspruchsmusik herunter"
        },
        "line.6": {
            "text": "auf dich lässt sich alles verwenden"
        },
        "line.7": {
            "text": "die Nächte, in denen wir verbrennen"
        },
        "line.8": {
            "text": "sollen die Vulkane ins Quadrat nehmen"
        },
        "line.9": {
            "text": "deine Liebe, lass sie mich ausstatten"
        },
        "line.10": {
            "text": "mit einem Seepferdchen, nicht domestizierbar"
        },
        "line.11": {
            "text": "die Eiweißverbindungen die zwischen uns bestehen"
        },
        "line.12": {
            "text": "doch ich werde rein pflanzlich"
        },
        "line.13": {
            "text": "bis später, wüst gefallen vor 2069"
        },
        "line.14": {
            "text": "welche Kurpromenade werden die Berührungen"
        },
        "line.15": {
            "text": "entlang schlendern, wenn die wirkliche Schönheit"
        },
        "line.16": {
            "text": "verfliegt auf der anderen Straßenseite"
        },
        "line.17": {
            "text": "(sie kam vom studentischen Austauschdienst"
        },
        "line.18": {
            "text": "folge ihr ins Bad und vergifte sie)"
        },
        "line.19": {
            "text": "es ist Sommer, trockene Hitze, nein Schwüle"
        },
        "line.20": {
            "text": "trockene amerikanische Lakonie, es ist Sommer"
        },
        "line.21": {
            "text": "in den Bäumen die Maultiere, große Dürre"
        },
        "line.22": {
            "text": "waren es Williams Birnen oder Pflaumen"
        },
        "line.23": {
            "text": "jedenfalls ist es Sommer"
        },
        "line.24": {
            "text": "dreh mal die Platte um,"
        },
        "line.25": {
            "text": "sometimes a pony"
        },
        "line.26": {
            "text": "gets depressed"
        },
        "line.27": {
            "text": ", was macht das schon"
        },
        "line.28": {
            "text": "für einen Unterschied, verschwinden oder"
        },
        "line.29": {
            "text": "herausgestrichen werden aus einem Plan"
        },
        "line.30": {
            "text": "der nicht aufgeht"
        },
        "line.31": {
            "text": "nur die lange schweigende Mehrheit der auf dem Grund"
        },
        "line.32": {
            "text": "der Flüsse röchelnden Fische, die den Rochen voll"
        },
        "line.33": {
            "text": "und hinter tausend Hefeweizen keine Welt"
        }
    }
}