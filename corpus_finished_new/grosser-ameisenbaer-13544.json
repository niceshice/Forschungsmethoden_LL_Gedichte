{
    "title": "grosser-ameisenbaer-13544",
    "gender": "w",
    "author": "Sabine Scho",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "ein leiser zahnarmer, a-"
        },
        "line.2": {
            "text": "meisen in seinem"
        },
        "line.3": {
            "text": "bauch, ich sah den"
        },
        "line.4": {
            "text": "regenwald brennen"
        },
        "line.5": {
            "text": "und einen ameisenbären"
        },
        "line.6": {
            "text": "auch, niemand mit"
        },
        "line.7": {
            "text": "löschdecke trat auf"
        },
        "line.8": {
            "text": "der kreislauf in ammen"
        },
        "line.9": {
            "text": "organtätigkeit setzt aus"
        },
        "line.10": {
            "text": "wie fühlt sich das an"
        },
        "line.11": {
            "text": "lichterloh zu verenden"
        },
        "line.12": {
            "text": "neulich töteten ameisenbären"
        },
        "line.13": {
            "text": "zwei brasilianische bauern"
        },
        "line.14": {
            "text": "ob sie ihre vitalsphäre bedrohten"
        },
        "line.15": {
            "text": "und ihren lebensraum"
        },
        "line.16": {
            "text": "ist in jedem fall zu bedauern"
        },
        "line.17": {
            "text": "mit messerscharfen krallen"
        },
        "line.18": {
            "text": "kann man sich nicht wehren"
        },
        "line.19": {
            "text": "gegen brandrodung"
        },
        "line.20": {
            "text": "bricht so ein tier termiten-"
        },
        "line.21": {
            "text": "hügel auf und züngelt hitzig"
        },
        "line.22": {
            "text": "in alle gänge, heißt es"
        },
        "line.23": {
            "text": "lauf, termite, lauf"
        },
        "line.24": {
            "text": "ein körperbau in dem"
        },
        "line.25": {
            "text": "lange klebzungen wohnen"
        },
        "line.26": {
            "text": "bietet gewisse großzüngigkeit"
        },
        "line.27": {
            "text": "für gustatorische sensationen"
        },
        "line.28": {
            "text": "stell ich mir vor, wenn man"
        },
        "line.29": {
            "text": "kerbtiere ambierte"
        },
        "line.30": {
            "text": "veränderte das bei ameisenbären"
        },
        "line.31": {
            "text": "die darmtätigkeit"
        },
        "line.32": {
            "text": "er summte dann kaum hörbar"
        },
        "line.33": {
            "text": "burning down the house"
        },
        "line.34": {
            "text": "scheidet dazu schwelende"
        },
        "line.35": {
            "text": "heuweltjies"
        },
        "line.36": {
            "text": "aus"
        }
    }
}