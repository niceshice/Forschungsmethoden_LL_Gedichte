{
    "title": "und-die-luft-15728",
    "gender": "w",
    "author": "Marie T.  Martin",
    "author_birth": "2021",
    "poem": {
        "line.1": {
            "text": "Komm näher wenn der Koffer"
        },
        "line.2": {
            "text": "sich zugeklappt hat wenn die"
        },
        "line.3": {
            "text": "Geschichten sich verwandeln"
        },
        "line.4": {
            "text": "in den tieferen Schichten"
        },
        "line.5": {
            "text": "geteilte Luft die wir atmen"
        },
        "line.6": {
            "text": "wuchs eine Pappel vor dem"
        },
        "line.7": {
            "text": "Fenster oder war mein Blick"
        },
        "line.8": {
            "text": "so schnell dass die Äste"
        },
        "line.9": {
            "text": "bereits das Dach überwuchern"
        },
        "line.10": {
            "text": "habe ich mich weggedreht oder"
        },
        "line.11": {
            "text": "kehrst du mir nach Jahren im"
        },
        "line.12": {
            "text": "Traum den Rücken zu? Alles"
        },
        "line.13": {
            "text": "ist gespeichert in den Zellen"
        },
        "line.14": {
            "text": "dem Luxherz dem Ort mit der"
        },
        "line.15": {
            "text": "größtmöglichen Schwingung"
        },
        "line.16": {
            "text": "die Stühle sind längst überwachsen"
        },
        "line.17": {
            "text": "aber alles kämpft sich nach Jahren"
        },
        "line.18": {
            "text": "den Weg frei um neu betrachtet"
        },
        "line.19": {
            "text": "zu werden. und die Luft? Atmest"
        },
        "line.20": {
            "text": "du noch? Sprichst du manchmal mit"
        },
        "line.21": {
            "text": "einer die aussieht wie ich? Sind die"
        },
        "line.22": {
            "text": "Gestalten verbunden im Immer. Das"
        },
        "line.23": {
            "text": "jetzt ist?"
        }
    }
}