{
    "title": "eisenzeit-2591",
    "gender": "m",
    "author": "Hans Thill",
    "author_birth": "1954",
    "poem": {
        "line.1": {
            "text": "1. wir essen die Abfälle der Mannschaft"
        },
        "line.2": {
            "text": "auf dem Weg zur Arbeit"
        },
        "line.3": {
            "text": "2. unsere Fäustlinge ziehen wir  Daumen nach oben"
        },
        "line.4": {
            "text": "über den aufgerauhten Asphalt"
        },
        "line.5": {
            "text": "3. die Weiber kommen aus der Fabrik"
        },
        "line.6": {
            "text": "bei ihnen Handwerker"
        },
        "line.7": {
            "text": "mit Knüppeln aus Kirschholz"
        },
        "line.8": {
            "text": "4. einige von uns verkaufen Erdnüsse"
        },
        "line.9": {
            "text": "andere tragen bis zu drei Tortenesserinnen"
        },
        "line.10": {
            "text": "5. mit ihren Feldstechern betrachten die Grenzer"
        },
        "line.11": {
            "text": "unsere Mädchen die wie angeschwemmt"
        },
        "line.12": {
            "text": "in den Algen liegen Gurkenscheiben"
        },
        "line.13": {
            "text": "auf dem Gesicht"
        },
        "line.14": {
            "text": "6. der Qualm der Deponie"
        },
        "line.15": {
            "text": "riecht nach uns Götterschmieden"
        }
    }
}