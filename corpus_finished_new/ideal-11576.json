{
    "title": "ideal-11576",
    "gender": "m",
    "author": "Jürg  Halter",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "Wir stoßen weiter vor."
        },
        "line.2": {
            "text": "Mehr ist nicht genug."
        },
        "line.3": {
            "text": "Alles ist das Ziel."
        },
        "line.4": {
            "text": "Wir stoßen weiter vor."
        },
        "line.5": {
            "text": "Niemand zieht sich zurück,"
        },
        "line.6": {
            "text": "es gibt nur Zurückgedrängte."
        },
        "line.7": {
            "text": "Wir stoßen weiter vor."
        },
        "line.8": {
            "text": "Eine Welt ohne Grenzen"
        },
        "line.9": {
            "text": "können wir uns nicht vorstellen."
        },
        "line.10": {
            "text": "Verzicht bedeutet Pathos."
        },
        "line.11": {
            "text": "Wir rufen laut nach dem perfekten Tag,"
        },
        "line.12": {
            "text": "vor dem wir uns im Stillen fürchten;"
        },
        "line.13": {
            "text": "er hätte sich für immer zu wiederholen."
        },
        "line.14": {
            "text": "Jeden Abend würden wir ihn vergessen,"
        },
        "line.15": {
            "text": "so weckte er uns jeden Morgen"
        },
        "line.16": {
            "text": "gleich neu  Ideal."
        }
    }
}