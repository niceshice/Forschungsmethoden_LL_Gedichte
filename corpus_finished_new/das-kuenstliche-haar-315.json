{
    "title": "das-kuenstliche-haar-315",
    "gender": "m",
    "author": "Marcel Beyer",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Du sitzt und schaust: Geheimnisse. Die"
        },
        "line.2": {
            "text": "Gegenstände, ungesprochen, dem Wirt"
        },
        "line.3": {
            "text": "selbst wenden sie sich nicht mehr zu seit"
        },
        "line.4": {
            "text": "einigen Jahren. Im kalten Rauch, kälter"
        },
        "line.5": {
            "text": "und kälter die Deko, die Decke, das"
        },
        "line.6": {
            "text": "lichtwärts gewendete Topfgrün, bläulicher."
        },
        "line.7": {
            "text": "Bläulicher schimmern die Locken der"
        },
        "line.8": {
            "text": "Wirtin, möglich, sie weiß noch den Grund"
        },
        "line.9": {
            "text": "dieses Namens, Sibyllenort, heute. Heute,"
        },
        "line.10": {
            "text": "der Wirt geht auf Softsohlen, das Haar"
        },
        "line.11": {
            "text": "liegt auf Seite, kaum glimmend die"
        },
        "line.12": {
            "text": "Lichtkette, Stimmung, auch bläulicher."
        }
    }
}