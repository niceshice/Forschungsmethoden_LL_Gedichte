{
    "title": "fuer-joseph-brodsky-429",
    "gender": "w",
    "author": "Ilma Rakusa",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "War das Sofa rot?"
        },
        "line.2": {
            "text": "Der Koffer ja Überseekoffer"
        },
        "line.3": {
            "text": "stand da wie ein Boot"
        },
        "line.4": {
            "text": "bereit für Amerika."
        },
        "line.5": {
            "text": "Fahne Koffer die Bücher"
        },
        "line.6": {
            "text": "im Lot. Das Weggehen"
        },
        "line.7": {
            "text": "so plötzlich aber Not"
        },
        "line.8": {
            "text": "und wie sich zeigte"
        },
        "line.9": {
            "text": "für immer. Jetzt bist du tot."
        },
        "line.10": {
            "text": "Es schneite in Leningrad."
        },
        "line.11": {
            "text": "Nacht und die Tankstelle"
        },
        "line.12": {
            "text": "öd wie Brachland. Straßen"
        },
        "line.13": {
            "text": "Fassaden verwaist ohne"
        },
        "line.14": {
            "text": "Pracht. Du hast dich auf"
        },
        "line.15": {
            "text": "leisen Lippen davongemacht"
        },
        "line.16": {
            "text": "ins Gedicht. So fuhren wir"
        },
        "line.17": {
            "text": "still und gewichtlos durch"
        },
        "line.18": {
            "text": "deine Stadt. Sprachen nicht."
        },
        "line.19": {
            "text": "Die Schuhe der Schritt"
        },
        "line.20": {
            "text": "die Gasse dein Gesicht"
        },
        "line.21": {
            "text": "mittendrin. Du stehst"
        },
        "line.22": {
            "text": "am Kanal im Licht wie bestürzt"
        },
        "line.23": {
            "text": "und ich weiß nicht"
        },
        "line.24": {
            "text": "was sagen. Kragen hoch"
        },
        "line.25": {
            "text": "das Wort eine Wolke vorm Mund"
        },
        "line.26": {
            "text": "rund. Und lebwohl."
        },
        "line.27": {
            "text": "Bis in wie viel Tagen?"
        }
    }
}