{
    "title": "demokrit-lacht-nicht-mehr-6548",
    "gender": "w",
    "author": "Ilana Shmueli",
    "author_birth": "1924",
    "poem": {
        "line.1": {
            "text": "Demokrit lacht nicht mehr"
        },
        "line.2": {
            "text": "Heraklit trockenen Auges:"
        },
        "line.3": {
            "text": "Ohnmacht und Scharfsicht"
        },
        "line.4": {
            "text": "es brennt die Leber vor Galle"
        },
        "line.5": {
            "text": "die Menge beklatscht"
        },
        "line.6": {
            "text": "an vorgeschriebenen Stellen"
        },
        "line.7": {
            "text": "Wer wagt"
        },
        "line.8": {
            "text": "Was?"
        }
    }
}