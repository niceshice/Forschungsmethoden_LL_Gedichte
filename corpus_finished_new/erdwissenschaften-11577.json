{
    "title": "erdwissenschaften-11577",
    "gender": "m",
    "author": "Jürg  Halter",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "Sie versinkt in ihrem Sitz"
        },
        "line.2": {
            "text": "wie ein Stein im Wasser;"
        },
        "line.3": {
            "text": "geht unter wie eine"
        },
        "line.4": {
            "text": "zu leise gestellte Frage."
        },
        "line.5": {
            "text": "Alles ist ein Sinken"
        },
        "line.6": {
            "text": "zum Erdmittelpunkt und"
        },
        "line.7": {
            "text": "zurück in Millionen"
        },
        "line.8": {
            "text": "von Jahren und ..."
        },
        "line.9": {
            "text": "in allen Religionen gibt es"
        },
        "line.10": {
            "text": "eigentlich nur einen Gott,"
        },
        "line.11": {
            "text": "den der Schwerkraft."
        },
        "line.12": {
            "text": "Oder weshalb werfen sich"
        },
        "line.13": {
            "text": "Gläubige auf den Boden"
        },
        "line.14": {
            "text": "anstatt in die Luft zu springen?"
        }
    }
}