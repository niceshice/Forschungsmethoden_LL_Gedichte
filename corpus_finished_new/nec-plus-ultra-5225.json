{
    "title": "nec-plus-ultra-5225",
    "gender": "m",
    "author": "Franz Hodjak",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Was stets dazugehört: Grenzen,"
        },
        "line.2": {
            "text": "unsichtbar wie Luft, die sich zusammen"
        },
        "line.3": {
            "text": "setzt aus Partikeln, Ansätzen,"
        },
        "line.4": {
            "text": "Ursachen, die sich einen Dreck"
        },
        "line.5": {
            "text": "kümmern um uns. Eine Art Chemie, die"
        },
        "line.6": {
            "text": "der Sprache bevorsteht, sie zu"
        },
        "line.7": {
            "text": "begreifen. Lesbar, während Vergleiche"
        },
        "line.8": {
            "text": "gezogen werden, bleiben Bahnhöfe,"
        },
        "line.9": {
            "text": "Leuchtschriften, Spuren von Wild,"
        },
        "line.10": {
            "text": "Tomographien, Nächte, die kürzer"
        },
        "line.11": {
            "text": "werden oder länger. Einmal wollte Herr"
        },
        "line.12": {
            "text": "Kamilli von Strandgut leben. Nach"
        },
        "line.13": {
            "text": "und nach zerbrachen die Dinge, von denen"
        },
        "line.14": {
            "text": "man fasziniert war, als man mit ihren Schatten"
        },
        "line.15": {
            "text": "spielte, einst, in Platons Höhle."
        }
    }
}