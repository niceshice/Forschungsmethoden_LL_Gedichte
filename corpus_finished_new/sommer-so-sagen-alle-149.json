{
    "title": "sommer-so-sagen-alle-149",
    "gender": "m",
    "author": "Gerhard Falkner",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "nur einen Sommer, oder so"
        },
        "line.2": {
            "text": "sagen die Stimmen"
        },
        "line.3": {
            "text": "nur einen Sommer"
        },
        "line.4": {
            "text": "einen gewaltigen, oder so"
        },
        "line.5": {
            "text": "der, was er auch vermag, ohne anzuklopfen"
        },
        "line.6": {
            "text": "hereinbricht, der, wie immer er auftritt"
        },
        "line.7": {
            "text": "in Staub gewälzt oder behängt"
        },
        "line.8": {
            "text": "mit geschmeidigem Flimmern"
        },
        "line.9": {
            "text": "langsames Beginnen stumm überspringt"
        },
        "line.10": {
            "text": "der einsetzt, wie Breitwandkino"
        },
        "line.11": {
            "text": "in jeglicher Gegend"
        },
        "line.12": {
            "text": "und dann einer wie dir, die"
        },
        "line.13": {
            "text": "zu Unrecht davorsteht"
        },
        "line.14": {
            "text": "mit verkreuzten Lippen"
        },
        "line.15": {
            "text": "und stumm mit der Stirn gegen"
        },
        "line.16": {
            "text": "Halme gelehnt"
        },
        "line.17": {
            "text": "die eine geröstete Nuß"
        },
        "line.18": {
            "text": "in den Schoß zählt"
        },
        "line.19": {
            "text": "(nur immer die eine)"
        },
        "line.20": {
            "text": "oben aber, da schwimmen"
        },
        "line.21": {
            "text": "von den Blicken gepeitscht"
        },
        "line.22": {
            "text": "die Inseln, jede für sich"
        },
        "line.23": {
            "text": "die entmischten Hände"
        },
        "line.24": {
            "text": "schwankend und wie Schilf gereckt"
        },
        "line.25": {
            "text": "Höhenmesser über dem oben"
        },
        "line.26": {
            "text": "dem Handsegel"
        },
        "line.27": {
            "text": "da schwimmen"
        },
        "line.28": {
            "text": "von der Geisteskälte"
        },
        "line.29": {
            "text": "in weißes und schwarzes Licht zerlegt"
        },
        "line.30": {
            "text": "die Hälften des Sommers"
        },
        "line.31": {
            "text": "wie Bugholz"
        },
        "line.32": {
            "text": "gegeneinandergestoßen"
        },
        "line.33": {
            "text": "und soviel Zerknirschtes"
        },
        "line.34": {
            "text": "wieder zerknirschend"
        }
    }
}