{
    "title": "die-gestundete-zeit-264",
    "gender": "w",
    "author": "Ingeborg Bachmann",
    "author_birth": "1926",
    "poem": {
        "line.1": {
            "text": "Es kommen härtere Tage."
        },
        "line.2": {
            "text": "Die auf Widerruf gestundete Zeit"
        },
        "line.3": {
            "text": "wird sichtbar am Horizont."
        },
        "line.4": {
            "text": "Bald mußt du den Schuh schnüren"
        },
        "line.5": {
            "text": "und die Hunde zurückjagen in die Marschhöfe."
        },
        "line.6": {
            "text": "Denn die Eingeweide der Fische"
        },
        "line.7": {
            "text": "sind kalt geworden im Wind."
        },
        "line.8": {
            "text": "Ärmlich brennt das Licht der Lupinen."
        },
        "line.9": {
            "text": "Dein Blick spurt im Nebel:"
        },
        "line.10": {
            "text": "die auf Widerruf gestundete Zeit"
        },
        "line.11": {
            "text": "wird sichtbar am Horizont."
        },
        "line.12": {
            "text": "Drüben versinkt dir die Geliebte im Sand,"
        },
        "line.13": {
            "text": "er steigt um ihr wehendes Haar,"
        },
        "line.14": {
            "text": "er fällt ihr ins Wort,"
        },
        "line.15": {
            "text": "er befiehlt ihr zu schweigen,"
        },
        "line.16": {
            "text": "er findet sie sterblich"
        },
        "line.17": {
            "text": "und willig dem Abschied"
        },
        "line.18": {
            "text": "nach jeder Umarmung."
        },
        "line.19": {
            "text": "Sieh dich nicht um."
        },
        "line.20": {
            "text": "Schnür deinen Schuh."
        },
        "line.21": {
            "text": "Jag die Hunde zurück."
        },
        "line.22": {
            "text": "Wirf die Fische ins Meer."
        },
        "line.23": {
            "text": "Lösch die Lupinen!"
        },
        "line.24": {
            "text": "Es kommen härtere Tage."
        }
    }
}