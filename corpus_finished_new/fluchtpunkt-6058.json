{
    "title": "fluchtpunkt-6058",
    "gender": "w",
    "author": "Judith Zander",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "aus den brennenden"
        },
        "line.2": {
            "text": "scherenschritten schält sich"
        },
        "line.3": {
            "text": "ein rennen vierfüßer flieg"
        },
        "line.4": {
            "text": "an die kanten von atem"
        },
        "line.5": {
            "text": "und sicht"
        },
        "line.6": {
            "text": "beton"
        },
        "line.7": {
            "text": "schaukeln die bordsteine wider"
        },
        "line.8": {
            "text": "unsere augen eine"
        },
        "line.9": {
            "text": "rote treibarbeit"
        },
        "line.10": {
            "text": "zwischen deinen feuerzeugfingern"
        },
        "line.11": {
            "text": "wächst etwas warm wie fuchsfell"
        },
        "line.12": {
            "text": "fast as you can baby"
        },
        "line.13": {
            "text": "klappert mir unter"
        },
        "line.14": {
            "text": "der dünnen zunge die andere"
        },
        "line.15": {
            "text": "hälfte der losung"
        },
        "line.16": {
            "text": "lässlich trocknet dein nacken"
        },
        "line.17": {
            "text": "das regenlicht ein"
        },
        "line.18": {
            "text": "für Gregor"
        }
    }
}