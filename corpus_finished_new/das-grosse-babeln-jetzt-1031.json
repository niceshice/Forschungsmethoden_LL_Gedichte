{
    "title": "das-grosse-babeln-jetzt-1031",
    "gender": "m",
    "author": "Ferdinand Schmatz",
    "author_birth": "1953",
    "poem": {
        "line.1": {
            "text": "nichts,"
        },
        "line.2": {
            "text": "dass alles"
        },
        "line.3": {
            "text": "ringt sich,"
        },
        "line.4": {
            "text": "achsengebeugt,"
        },
        "line.5": {
            "text": "im wehdrang klagbar hoch"
        },
        "line.6": {
            "text": "jammergestockt, ein höchnis -"
        },
        "line.7": {
            "text": "so"
        },
        "line.8": {
            "text": "ständig wellts stimmwogen"
        },
        "line.9": {
            "text": "bänderlos nach unterst,"
        },
        "line.10": {
            "text": "doch dieses mal,"
        },
        "line.11": {
            "text": "eingruben sie sich,"
        },
        "line.12": {
            "text": "in die rammlücken"
        },
        "line.13": {
            "text": "schalten sie bloss,"
        },
        "line.14": {
            "text": "nicht nur ab"
        },
        "line.15": {
            "text": "geblockt stossen"
        },
        "line.16": {
            "text": "sie nicht nur hochhimmelnd"
        },
        "line.17": {
            "text": "laut"
        },
        "line.18": {
            "text": "vielmehr bäumen sie"
        },
        "line.19": {
            "text": "- am rücken des lamms -"
        },
        "line.20": {
            "text": "asteinwärts stammsüchtig verkorkst,"
        },
        "line.21": {
            "text": "im zirkel-wurf"
        },
        "line.22": {
            "text": "ohne zustich,"
        },
        "line.23": {
            "text": "durch spatenzunge"
        },
        "line.24": {
            "text": "aufgeladenen turf,"
        },
        "line.25": {
            "text": "so in etwa, hoch"
        },
        "line.26": {
            "text": "dreck hebts,"
        },
        "line.27": {
            "text": "drängt nach das eingelippte"
        },
        "line.28": {
            "text": "bröselt in sich auf"
        },
        "line.29": {
            "text": "bricht es, alles, sonnenwonne"
        },
        "line.30": {
            "text": "stochert zwischen den brauen"
        },
        "line.31": {
            "text": "sehen auf, das bringt:"
        },
        "line.32": {
            "text": "die gesichter - aus dem gleichen"
        },
        "line.33": {
            "text": "ins wanken, das heisst:"
        },
        "line.34": {
            "text": "zeichen müssen die blicke decken,"
        },
        "line.35": {
            "text": "und prasseln auch schon nieder,"
        },
        "line.36": {
            "text": "einknirsche trotz achselschmalz"
        },
        "line.37": {
            "text": "und armklatsche lautet nach,"
        },
        "line.38": {
            "text": "o, name beführ"
        },
        "line.39": {
            "text": "alles oder nichts wortet,"
        },
        "line.40": {
            "text": "drallt durch die gänge,"
        },
        "line.41": {
            "text": "ein hörfang ablass,"
        },
        "line.42": {
            "text": "also: wo ohr schall dort rahmt,"
        },
        "line.43": {
            "text": "bleich, die felle und trommelt"
        },
        "line.44": {
            "text": "der bänder flucht ins gewirksame,"
        },
        "line.45": {
            "text": "ein mit spiel im auftaumel,"
        },
        "line.46": {
            "text": "das rutscht, was wog, weg"
        },
        "line.47": {
            "text": "das heisst im wortgezitter:"
        },
        "line.48": {
            "text": "begreif es doch,"
        },
        "line.49": {
            "text": "nimm spur aus atem,"
        },
        "line.50": {
            "text": "ein er begriff,"
        },
        "line.51": {
            "text": "nie sie, aber all, also es,"
        },
        "line.52": {
            "text": "durch noch mal,"
        },
        "line.53": {
            "text": "durch dieses mal:"
        },
        "line.54": {
            "text": "so spragelts sich,"
        },
        "line.55": {
            "text": "was zu erwarten war"
        },
        "line.56": {
            "text": "hüpft, amselzitterich"
        },
        "line.57": {
            "text": "von einem ast"
        },
        "line.58": {
            "text": "zum nächsten wir,rnis hoch"
        },
        "line.59": {
            "text": "festigt das feste gar und nicht"
        },
        "line.60": {
            "text": "blitzt auf im farbenwusch, geziert"
        },
        "line.61": {
            "text": "zwingt es hinter das bein ins geh,irn"
        },
        "line.62": {
            "text": "und steigt, und steigt, dass esnur fallen muss,"
        },
        "line.63": {
            "text": "frucht, mensch auch, tier in der falle dazu,"
        },
        "line.64": {
            "text": "fall gesagt, aber (gedacht)"
        },
        "line.65": {
            "text": "zu spät"
        }
    }
}