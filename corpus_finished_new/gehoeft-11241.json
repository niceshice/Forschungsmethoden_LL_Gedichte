{
    "title": "gehoeft-11241",
    "gender": "m",
    "author": "Thomas Rosenlöcher",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "Tritt in den Hof. Der Pflug,"
        },
        "line.2": {
            "text": "umwuchert, sinkt in die Erde, das Fuhrwerk"
        },
        "line.3": {
            "text": "fährt auseinander, unmerklich, die Pferde"
        },
        "line.4": {
            "text": "nicken in ihrem Grab."
        },
        "line.5": {
            "text": "Füll deine Taschen, der Birnbaum"
        },
        "line.6": {
            "text": "wird bald gestürzt sein, das Haus,"
        },
        "line.7": {
            "text": "erdsüchtig, ging schon in die Knie."
        },
        "line.8": {
            "text": "Steige durch die zerbrochenen Wände,"
        },
        "line.9": {
            "text": "entfach im geborstenen Herd"
        },
        "line.10": {
            "text": "ein Feuer, sei furchtlos, der neben dir hockt,"
        },
        "line.11": {
            "text": "hockt da, um mit dir zu schweigen,"
        },
        "line.12": {
            "text": "während der Himmel über euch steht,"
        },
        "line.13": {
            "text": "den Schädeldächern ein Dach."
        }
    }
}