{
    "title": "charaktersache-479",
    "gender": "m",
    "author": "Günter Saalmann",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Ja, Wettbewerb spornt kolossal"
        },
        "line.2": {
            "text": "die Kräfte an. Wir machen mal:"
        },
        "line.3": {
            "text": "wer müder guckt,"
        },
        "line.4": {
            "text": "wer weiter spuckt,"
        },
        "line.5": {
            "text": "wer schneller trinkt,"
        },
        "line.6": {
            "text": "wer doller stinkt,"
        },
        "line.7": {
            "text": "wer schlimmer lügt,"
        },
        "line.8": {
            "text": "beim prügeln siegt,"
        },
        "line.9": {
            "text": "wer tiefer kullert,"
        },
        "line.10": {
            "text": "höher quiekt."
        },
        "line.11": {
            "text": "Vom Sieger heißts nicht ohne Neid:"
        },
        "line.12": {
            "text": "Hier zeigt sich schon Persönlichkeit."
        },
        "line.13": {
            "text": "Ja, Wettbewerb spornt kolossal"
        },
        "line.14": {
            "text": "die Kräfte an. Wir machen mal:"
        },
        "line.15": {
            "text": "wer netter dankt,"
        },
        "line.16": {
            "text": "sich niemals zankt,"
        },
        "line.17": {
            "text": "am stillsten sitzt,"
        },
        "line.18": {
            "text": "die Öhrlein spitzt,"
        },
        "line.19": {
            "text": "wer fleißig übt,"
        },
        "line.20": {
            "text": "sein Sparschwein liebt,"
        },
        "line.21": {
            "text": "wer Marken sammelt,"
        },
        "line.22": {
            "text": "nichts versiebt."
        },
        "line.23": {
            "text": "Der Sieger bei so guter Tat"
        },
        "line.24": {
            "text": "wird mal ein großer Mann im Staat."
        }
    }
}