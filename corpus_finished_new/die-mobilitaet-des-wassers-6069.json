{
    "title": "die-mobilitaet-des-wassers-6069",
    "gender": "m",
    "author": "Christoph W. Bauer",
    "author_birth": "1968",
    "poem": {
        "line.1": {
            "text": "die mobilität des wassers"
        },
        "line.2": {
            "text": "müsste man mieten können"
        },
        "line.3": {
            "text": "als verflüssigtes leben mit"
        },
        "line.4": {
            "text": "wechselndem wohnsitz"
        },
        "line.5": {
            "text": "die gestrandeten dörfer verlassen"
        },
        "line.6": {
            "text": "und sich rauswälzen aufs meer"
        },
        "line.7": {
            "text": "um wieder land zu sehen"
        },
        "line.8": {
            "text": "wo die nacht alles gefunkel"
        },
        "line.9": {
            "text": "an die fische verfüttert"
        },
        "line.10": {
            "text": "denen man eine welt und"
        },
        "line.11": {
            "text": "unentbehrlich ihrem wesen"
        },
        "line.12": {
            "text": "ganz zu schweigen"
        },
        "line.13": {
            "text": "von der aussicht abzudampfen"
        },
        "line.14": {
            "text": "und wirklich aufzusteigen"
        },
        "line.15": {
            "text": "himmelwärts"
        }
    }
}