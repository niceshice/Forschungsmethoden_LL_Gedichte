{
    "title": "herzkitz-16350",
    "gender": "w",
    "author": "Andrea Grill",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "scheu steigt der Sommer jetzt"
        },
        "line.2": {
            "text": "von den Bäumen;"
        },
        "line.3": {
            "text": "geschwinde unbeirrte Tritte"
        },
        "line.4": {
            "text": "der Boden zittert"
        },
        "line.5": {
            "text": "atme Gewitter (ein und aus)"
        },
        "line.6": {
            "text": "verschlucke Gedanken an"
        },
        "line.7": {
            "text": "weise hinter Kerzen gedeckte Tücher,"
        },
        "line.8": {
            "text": "vier lose Hufe, da draußen"
        },
        "line.9": {
            "text": "drinnen liebkostend der Erdäpfelfalter"
        },
        "line.10": {
            "text": "an deinen zart gepressten Trieben"
        },
        "line.11": {
            "text": "züngelt Feuchte weil die Luft warm,"
        },
        "line.12": {
            "text": "kreist ums Bett"
        },
        "line.13": {
            "text": "beklopft den Puls,"
        },
        "line.14": {
            "text": "Blut verlangt bruchfeste Gefäße"
        },
        "line.15": {
            "text": "pass ich noch in einen Körper?"
        },
        "line.16": {
            "text": "mich kitzelt mein Herz"
        }
    }
}