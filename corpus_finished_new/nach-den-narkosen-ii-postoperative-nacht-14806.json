{
    "title": "nach-den-narkosen-ii-postoperative-nacht-14806",
    "gender": "m",
    "author": "Paul-Henri  Campbell",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "es ist kein nistender vogel"
        },
        "line.2": {
            "text": "der vom blinkenden kasten"
        },
        "line.3": {
            "text": "hinter deinem lager schrill"
        },
        "line.4": {
            "text": "in intervallen hervorschreit"
        },
        "line.5": {
            "text": "es ist nur das kardiogramm"
        },
        "line.6": {
            "text": "das wacht und fiept über dir"
        },
        "line.7": {
            "text": "erschrick nicht ruh dich aus"
        },
        "line.8": {
            "text": "selbst wenn die schellen rasseln"
        },
        "line.9": {
            "text": "wenn rings die pumpen schmatzen"
        },
        "line.10": {
            "text": "und nie das fiepen pausiert"
        },
        "line.11": {
            "text": "es sind nur vitalparameter"
        },
        "line.12": {
            "text": "die gezählt gezähltüber dir"
        },
        "line.13": {
            "text": "jahrzehnte nacht für nacht"
        },
        "line.14": {
            "text": "hast du ihr widerstanden"
        },
        "line.15": {
            "text": "der längsten nacht ohne"
        },
        "line.16": {
            "text": "auch einmal je aufzufahren"
        },
        "line.17": {
            "text": "es ist nurjetzt spürst hörst du sie"
        },
        "line.18": {
            "text": "die schwarzen fittiche schlagen"
        }
    }
}