{
    "title": "surrounding-schnee-3027",
    "gender": "m",
    "author": "Ron Winkler",
    "author_birth": "1973",
    "poem": {
        "line.1": {
            "text": "für J. S., R. H. und M. R."
        },
        "line.2": {
            "text": "wir lieben diese kalte fraktale Grammatik."
        },
        "line.3": {
            "text": "das feingliedrige Taumeln des Schnees in der Luft."
        },
        "line.4": {
            "text": "das komplexe Tänzeln des feingliedrigen Schnees"
        },
        "line.5": {
            "text": "in der Atmosphäre."
        },
        "line.6": {
            "text": "das Neuland vor den white boxes unserer Augen."
        },
        "line.7": {
            "text": "das die Vereinfachung der Umgebung ist."
        },
        "line.8": {
            "text": "wir lieben diese lautlosen Hufe des Anfangs"
        },
        "line.9": {
            "text": "von"
        },
        "line.10": {
            "text": "es liegt Schnee"
        },
        "line.11": {
            "text": "."
        },
        "line.12": {
            "text": "wir lieben diese komplizierten Intensivstationen"
        },
        "line.13": {
            "text": "eines besonderen Klimas."
        },
        "line.14": {
            "text": "ihre unaufdringliche Kompliziertheit."
        },
        "line.15": {
            "text": "die Anschaulichkeit von"
        },
        "line.16": {
            "text": "spezifisches Ungleichgewicht"
        },
        "line.17": {
            "text": "."
        },
        "line.18": {
            "text": "wir lieben die sich selbst beweisende Turbulenz."
        },
        "line.19": {
            "text": "und die Erscheinung an sich (als Erinnerung"
        },
        "line.20": {
            "text": "an diese Erscheinung)."
        },
        "line.21": {
            "text": "vorsichtig lieben wir das friedliche"
        },
        "line.22": {
            "text": "overbombing"
        },
        "line.23": {
            "text": "."
        },
        "line.24": {
            "text": "und später den schleichenden Konstruktivismus"
        },
        "line.25": {
            "text": "eines weißen Sanskrits auf den Dingen."
        }
    }
}