{
    "title": "felder-offen-fuer-jedes-licht-15198",
    "gender": "w",
    "author": "Anja Kampmann",
    "author_birth": "1983",
    "poem": {
        "line.1": {
            "text": "als würden sie ihre eigenen ränder"
        },
        "line.2": {
            "text": "wieder und wieder nachziehen"
        },
        "line.3": {
            "text": "sich ihrer lage vergewissern"
        },
        "line.4": {
            "text": "als wäre da nichts als die lage"
        },
        "line.5": {
            "text": "die gelassenheit, in der sich die farben sammeln"
        },
        "line.6": {
            "text": "in streifen, zacken, angeschrägten kästen"
        },
        "line.7": {
            "text": "ohne tiefe"
        },
        "line.8": {
            "text": "wie etwas vorübergehendes"
        },
        "line.9": {
            "text": "lack, den du mit einem nagel abkratzt"
        },
        "line.10": {
            "text": "das bild, das wir voneinander behalten"
        },
        "line.11": {
            "text": "ohne zu verstehen."
        }
    }
}