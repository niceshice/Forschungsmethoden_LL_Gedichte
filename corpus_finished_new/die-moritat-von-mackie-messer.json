{
    "title": "die-moritat-von-mackie-messer",
    "gender": "m",
    "author": "Bertolt  Brecht",
    "author_birth": "1898",
    "poem": {
        "line.1": {
            "text": "Und der Haifisch, der hat Zähne"
        },
        "line.2": {
            "text": "Und die trägt er im Gesicht"
        },
        "line.3": {
            "text": "Und Macheath, der hat ein Messer"
        },
        "line.4": {
            "text": "Doch das Messer sieht man nicht."
        },
        "line.5": {
            "text": "Und es sind des Haifischs Flossen"
        },
        "line.6": {
            "text": "Rot, wenn dieser Blut vergießt"
        },
        "line.7": {
            "text": "Mackie Messer trägt nen Handschuh"
        },
        "line.8": {
            "text": "Drauf man keine Untat liest."
        },
        "line.9": {
            "text": "An der Themse grünem Wasser"
        },
        "line.10": {
            "text": "Fallen plötzlich Leute um"
        },
        "line.11": {
            "text": "Es ist weder Pest noch Cholera"
        },
        "line.12": {
            "text": "Doch es heißt: Mackie geht um."
        },
        "line.13": {
            "text": "Annem schönen blauen Sonntag"
        },
        "line.14": {
            "text": "Liegt ein toter Mann am Strand"
        },
        "line.15": {
            "text": "Und ein Mensch geht um die Ecke"
        },
        "line.16": {
            "text": "Den man Mackie Messer nennt."
        },
        "line.17": {
            "text": "Und Schmul Meier bleibt verschwunden"
        },
        "line.18": {
            "text": "Und so mancher reiche Mann"
        },
        "line.19": {
            "text": "Und sein Geld hat Mackie Messer"
        },
        "line.20": {
            "text": "Dem man nichts beweisen kann."
        },
        "line.21": {
            "text": "Jenny Towler ward gefunden"
        },
        "line.22": {
            "text": "Mit nem Messer in der Brust"
        },
        "line.23": {
            "text": "Und am Kai geht Mackie Messer"
        },
        "line.24": {
            "text": "Der von allem nichts gewußt."
        },
        "line.25": {
            "text": "Wo ist Alfons gleich, der Fuhrherr?"
        },
        "line.26": {
            "text": "Kommt er je ans Sonnenlicht?"
        },
        "line.27": {
            "text": "Wer es immer wissen könnte"
        },
        "line.28": {
            "text": "Mackie Messer weiß es nicht."
        },
        "line.29": {
            "text": "Und das große Feuer in Soho"
        },
        "line.30": {
            "text": "Sieben Kinder und ein Greis"
        },
        "line.31": {
            "text": "In der Menge Mackie Messer, den"
        },
        "line.32": {
            "text": "Man nichts fragt, und der nichts weiß."
        },
        "line.33": {
            "text": "Und die minderjährge Witwe"
        },
        "line.34": {
            "text": "Deren Namen jeder weiß"
        },
        "line.35": {
            "text": "Wachte auf und war geschändet"
        },
        "line.36": {
            "text": "Mackie welches war dein Preis?"
        }
    }
}