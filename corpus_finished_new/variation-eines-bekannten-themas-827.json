{
    "title": "variation-eines-bekannten-themas-827",
    "gender": "m",
    "author": "Gerhard Rühm",
    "author_birth": "1930",
    "poem": {
        "line.1": {
            "text": "von zehn fiel eines weg"
        },
        "line.2": {
            "text": "von neun blieben nur noch acht"
        },
        "line.3": {
            "text": "von acht nur noch sieben"
        },
        "line.4": {
            "text": "von sieben nur noch sechs"
        },
        "line.5": {
            "text": "von sechs nur noch fünf"
        },
        "line.6": {
            "text": "von fünf nur noch vier"
        },
        "line.7": {
            "text": "von den vieren, ja du errätst es, nur noch drei"
        },
        "line.8": {
            "text": "und auch die verringerten sich noch"
        },
        "line.9": {
            "text": "da wurden aus den restlichen zweien plötzlich"
        },
        "line.10": {
            "text": "beide"
        },
        "line.11": {
            "text": "und jedes von den beiden hatte angst"
        },
        "line.12": {
            "text": "schliesslich allein zu sein"
        },
        "line.13": {
            "text": "denn es schien unvermeidlich"
        },
        "line.14": {
            "text": "aber auch das würde sicher nicht lange währen"
        }
    }
}