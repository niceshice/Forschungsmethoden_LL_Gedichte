{
    "title": "vergaenglichkeit-der-schoenheit-6267",
    "gender": "m",
    "author": "Tom Schulz",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "der ferneren Nacht, in der Mond"
        },
        "line.2": {
            "text": "Bälle aufsteigen, während die lebende"
        },
        "line.3": {
            "text": "Blässe langsam übergeht"
        },
        "line.4": {
            "text": "in die der toten, Dependancen"
        },
        "line.5": {
            "text": "aus Vogelrufen & Telepathie, so dass"
        },
        "line.6": {
            "text": "auf der Haut nichts als Werden"
        },
        "line.7": {
            "text": "die Körperstellen, die porösen"
        },
        "line.8": {
            "text": "Partien straffen noch einmal den"
        },
        "line.9": {
            "text": "Gedankenbogen, zum Ausflug bereit"
        },
        "line.10": {
            "text": "in eine florierende Wüste, hast du"
        },
        "line.11": {
            "text": "den Sonnenschirm dabei? es brennt"
        },
        "line.12": {
            "text": "von oben, ein Loch in die Epidermis"
        },
        "line.13": {
            "text": "mit der Vergänglichkeitsschleuder"
        },
        "line.14": {
            "text": "fangen wir Insekten, mit der Zunge"
        },
        "line.15": {
            "text": "kreisen wir um den Abschiedsmund"
        },
        "line.16": {
            "text": "ach an diesem Tropf bleiben wir"
        },
        "line.17": {
            "text": "der Tropfen, beleibe nicht jene"
        },
        "line.18": {
            "text": "Vollmondabfüllung, so waren"
        },
        "line.19": {
            "text": "wir einander unstille Gewässer"
        },
        "line.20": {
            "text": "im Geiste, ausgestattet mit den"
        },
        "line.21": {
            "text": "Implantaten, das Herz"
        },
        "line.22": {
            "text": "ein innerer Prozessor, der die"
        },
        "line.23": {
            "text": "flimmernde Leinwand in Brand"
        },
        "line.24": {
            "text": "setzt, in den Versackungen"
        },
        "line.25": {
            "text": "liegen wir wach, und so weiter"
        },
        "line.26": {
            "text": "Klee wächst, im Schlingern"
        },
        "line.27": {
            "text": "kleinzelliger Wucherungen"
        }
    }
}