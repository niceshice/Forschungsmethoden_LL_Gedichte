{
    "title": "zerstoerungen-50",
    "gender": "m",
    "author": "Gottfried Benn",
    "author_birth": "1886",
    "poem": {
        "line.1": {
            "text": "Zerstörungen"
        },
        "line.2": {
            "text": "aber wo nichts mehr zu zerstören ist,"
        },
        "line.3": {
            "text": "selbst die Trümmer altern"
        },
        "line.4": {
            "text": "mit Wegerich und Zichorie"
        },
        "line.5": {
            "text": "auf ihren Humusandeutungen,"
        },
        "line.6": {
            "text": "verkrampft als Erde"
        },
        "line.7": {
            "text": "Zerstörungen"
        },
        "line.8": {
            "text": "das sagt immerhin: hier war einmal"
        },
        "line.9": {
            "text": "Masse, Gebautes, Festgefügtes"
        },
        "line.10": {
            "text": "o schönes Wort"
        },
        "line.11": {
            "text": "voll Anklang"
        },
        "line.12": {
            "text": "an Füllungsreichtum"
        },
        "line.13": {
            "text": "und Heimatfluren"
        },
        "line.14": {
            "text": "Zerstörungen"
        },
        "line.15": {
            "text": "o graues Siebenschläferwort"
        },
        "line.16": {
            "text": "mit Wolken, Schauern, Laubverdunkeltheiten,"
        },
        "line.17": {
            "text": "gesichert für lange Zeit"
        },
        "line.18": {
            "text": "wo Sommer sein sollte"
        },
        "line.19": {
            "text": "mit Fruchtgetränken,"
        },
        "line.20": {
            "text": "Eisbechern, beschlagenen,"
        },
        "line.21": {
            "text": "und Partys zu heller Nacht am Strande."
        }
    }
}