{
    "title": "das-feld-ist-abgeerntet-6086",
    "gender": "m",
    "author": "Johannes Kühn",
    "author_birth": "1934",
    "poem": {
        "line.1": {
            "text": "Das Feld ist abgeerntet und von Wettern grau."
        },
        "line.2": {
            "text": "Ich wandre abgewandt,"
        },
        "line.3": {
            "text": "ich gehe selbstverloren"
        },
        "line.4": {
            "text": "den Bordstein hin"
        },
        "line.5": {
            "text": "und fühle nichts"
        },
        "line.6": {
            "text": "als Kälte."
        },
        "line.7": {
            "text": "Da dröhnt"
        },
        "line.8": {
            "text": "vom Fußballplatz"
        },
        "line.9": {
            "text": "hinter niedren Häusern,"
        },
        "line.10": {
            "text": "ein Tor beschreiend,"
        },
        "line.11": {
            "text": "ein ungeheurer Lärm,"
        },
        "line.12": {
            "text": "trifft in mich, und mit einem Seufzer"
        },
        "line.13": {
            "text": "bekenne ich:"
        },
        "line.14": {
            "text": "O, könnt ich doch"
        },
        "line.15": {
            "text": "mit einem Lustschrei"
        },
        "line.16": {
            "text": "zu etwas in der Welt,"
        },
        "line.17": {
            "text": "gleich, was es sei,"
        },
        "line.18": {
            "text": "auch einmal laut in Freuden schwelgen!"
        }
    }
}