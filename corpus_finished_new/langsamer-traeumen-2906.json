{
    "title": "langsamer-traeumen-2906",
    "gender": "m",
    "author": "Harald  Hartung",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "Im Frühlicht sehe ich die zwei Maschinen"
        },
        "line.2": {
            "text": "die eine plump die andere schlanker"
        },
        "line.3": {
            "text": "pathetisch steigen: richtig feierlich"
        },
        "line.4": {
            "text": "Da wären Bomben ordinär und gegen"
        },
        "line.5": {
            "text": "die Abmachung des Traums"
        },
        "line.6": {
            "text": "Doch fallen schon"
        },
        "line.7": {
            "text": "die Eier aus der Legehenne während"
        },
        "line.8": {
            "text": "die andere (durchaus kein Tier)"
        },
        "line.9": {
            "text": "etwas verliert wie ein Torpedo"
        },
        "line.10": {
            "text": "und den obszönen Gegenstand"
        },
        "line.11": {
            "text": "(ganz Dame) übersieht und ihren Kurs hält"
        },
        "line.12": {
            "text": "Fragen des Stils die Sache von Sekunden"
        },
        "line.13": {
            "text": "zu kurz um das Geschehen zu verbessern"
        },
        "line.14": {
            "text": "Langsamer träumen! denke ich und sehe"
        },
        "line.15": {
            "text": "mich nach Deckung um"
        }
    }
}