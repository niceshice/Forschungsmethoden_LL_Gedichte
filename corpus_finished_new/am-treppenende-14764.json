{
    "title": "am-treppenende-14764",
    "gender": "w",
    "author": "Sabine  Schiffner",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "mit deiner tochter auf dem rücken"
        },
        "line.2": {
            "text": "gehst du hoch"
        },
        "line.3": {
            "text": "hast du heute noch gar nichts"
        },
        "line.4": {
            "text": "geschrieben und wenn ja warum nicht"
        },
        "line.5": {
            "text": "steht dir dabei schuldbewusst in den augen"
        },
        "line.6": {
            "text": "dein status als künstlerin"
        },
        "line.7": {
            "text": "schützte dich lange vor"
        },
        "line.8": {
            "text": "allzu viel stufen"
        },
        "line.9": {
            "text": "aber jetzt fühlst du dich schutzlos"
        },
        "line.10": {
            "text": "und siehst zum"
        },
        "line.11": {
            "text": "licht das von oben kommt hoch"
        },
        "line.12": {
            "text": "immer vermutest du"
        },
        "line.13": {
            "text": "ein brennen am ende der treppe"
        },
        "line.14": {
            "text": "man sagt du könnest"
        },
        "line.15": {
            "text": "über nichts anderes schreiben als"
        },
        "line.16": {
            "text": "mondschein abendrot morgenrot"
        },
        "line.17": {
            "text": "meer und meeresstrand schneelandschaften"
        },
        "line.18": {
            "text": "kirchhöfe klippentäler und ähnliches"
        },
        "line.19": {
            "text": "du hast einen krampf im bein"
        },
        "line.20": {
            "text": "und sagst je refuse"
        },
        "line.21": {
            "text": "nimmst magnesium bevor"
        },
        "line.22": {
            "text": "du die stufen hochsteigst"
        },
        "line.23": {
            "text": "das soll auch die nerven"
        },
        "line.24": {
            "text": "beruhigen die"
        },
        "line.25": {
            "text": "flattern inwendig"
        },
        "line.26": {
            "text": "außerhalb bleibst du ruhig du"
        },
        "line.27": {
            "text": "brauchst die kraft für das kind"
        },
        "line.28": {
            "text": "das du trägst"
        },
        "line.29": {
            "text": "deine tochter die die linien sieht weil sie dir"
        },
        "line.30": {
            "text": "nah ist linien die das haus"
        },
        "line.31": {
            "text": "in dem die treppe steht"
        },
        "line.32": {
            "text": "in dich schlug"
        },
        "line.33": {
            "text": "eben hast du dich am"
        },
        "line.34": {
            "text": "treppengeländer festgehalten und"
        },
        "line.35": {
            "text": "tief luft geholt du fühlst dich immer so"
        },
        "line.36": {
            "text": "als habest du keine aufgabe wie eine"
        },
        "line.37": {
            "text": "frau fühle ich mich die zum brennen geht"
        },
        "line.38": {
            "text": "sagst du"
        }
    }
}