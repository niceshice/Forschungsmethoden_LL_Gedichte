{
    "title": "magnetisiertes-zimmer-1363",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "du hast die metallischen Jahresringe"
        },
        "line.2": {
            "text": "der Obstkonserven gezählt,"
        },
        "line.3": {
            "text": "jede Oberseite rotierender Stillstand"
        },
        "line.4": {
            "text": "wie flimmernde Ventilatoren"
        },
        "line.5": {
            "text": "dieser Ort scheint verborgener jetzt, seit"
        },
        "line.6": {
            "text": "du hier bist, als sei endlich Ruhe"
        },
        "line.7": {
            "text": "eingekehrt, Sturm (alle Zimmer"
        },
        "line.8": {
            "text": "ins Licht getaucht, alles"
        },
        "line.9": {
            "text": "aus Angst überheizt):"
        },
        "line.10": {
            "text": "ich beobachte dich, deinen zweiten"
        },
        "line.11": {
            "text": "Versuch eine Dose zu öffnen,"
        },
        "line.12": {
            "text": "beschwichtigend, ungeschickt, oder"
        },
        "line.13": {
            "text": "als wartetest du, daß die"
        },
        "line.14": {
            "text": "Stimmung sich ändert, als hättest du"
        },
        "line.15": {
            "text": "deine gezielten Bewegungen leise verlegt"
        },
        "line.16": {
            "text": "wir ähneln einander wenn manchmal"
        },
        "line.17": {
            "text": "ein Gähnen ein anderes auslöst"
        },
        "line.18": {
            "text": "dann wieder die Unversehrtheit"
        },
        "line.19": {
            "text": "verschlossener Körper, ein Blechspielplatz hier,"
        },
        "line.20": {
            "text": "voller unverrichteter Dinge"
        }
    }
}