{
    "title": "beute-machen-13931",
    "gender": "w",
    "author": "Róža Domašcyna",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "jemanden wissen der fledermäuse hat"
        },
        "line.2": {
            "text": "ihm speck auf die butter träufeln"
        },
        "line.3": {
            "text": "eine henne für ein ei geben"
        },
        "line.4": {
            "text": "und mit zungenhonig einseifen"
        },
        "line.5": {
            "text": "jemandem schwarzes weismachen"
        },
        "line.6": {
            "text": "die federchen ausreißen"
        },
        "line.7": {
            "text": "den nagelwuchs beschneiden"
        },
        "line.8": {
            "text": "wermut in den likör gießen"
        },
        "line.9": {
            "text": "mit einer feder unter die nase fahren"
        },
        "line.10": {
            "text": "und mit einem halm die galle"
        },
        "line.11": {
            "text": "aus dem herzen saugen"
        },
        "line.12": {
            "text": "jemanden am seidenen zügel führen"
        },
        "line.13": {
            "text": "nach dem fest zum mahl bitten"
        },
        "line.14": {
            "text": "unter die bank stoßen"
        },
        "line.15": {
            "text": "mit der gabel kitzeln"
        },
        "line.16": {
            "text": "in den schwitzkasten nehmen"
        },
        "line.17": {
            "text": "und aus dem saft heben"
        },
        "line.18": {
            "text": "jemandem die beine verdrehen"
        },
        "line.19": {
            "text": "die brillengläser schwärzen"
        },
        "line.20": {
            "text": "den ellenbogen zwischen die rippen treiben"
        },
        "line.21": {
            "text": "mit einem leeren sack den kopf einschlagen"
        },
        "line.22": {
            "text": "die fledermäuse aus dem kopf ziehen"
        },
        "line.23": {
            "text": "und für eine handvoll dörrpflaumen hergeben"
        }
    }
}