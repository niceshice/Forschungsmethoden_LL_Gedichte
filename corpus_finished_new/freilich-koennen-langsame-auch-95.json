{
    "title": "freilich-koennen-langsame-auch-95",
    "gender": "w",
    "author": "Elke Erb",
    "author_birth": "1938",
    "poem": {
        "line.1": {
            "text": "schnell sein, Schwung nehmen,"
        },
        "line.2": {
            "text": "tun ja nichts anderes all die Zeit, als"
        },
        "line.3": {
            "text": "ihre Karrenochsenfasern auf!!"
        },
        "line.4": {
            "text": "zu wiegeln,"
        },
        "line.5": {
            "text": "und wenn dann der feste Körper des Denkens"
        },
        "line.6": {
            "text": "& Fühlens, der gedrungene ihrer"
        },
        "line.7": {
            "text": "langsam gewonnenen Ansicht"
        },
        "line.8": {
            "text": "ihnen hochfliegt, das nenne ich aberschnell,"
        },
        "line.9": {
            "text": "schnellend schnell, hellauf schnell,"
        },
        "line.10": {
            "text": "an Schwirrkraft"
        },
        "line.11": {
            "text": "fehlt nichts, und Sorgfalt ist gar"
        },
        "line.12": {
            "text": "kein Wort für ihr vorher"
        },
        "line.13": {
            "text": "unerbittliches Vor-"
        },
        "line.14": {
            "text": "bereiten, Anwachsenlassen, bis"
        },
        "line.15": {
            "text": "die Nötigung reift,"
        },
        "line.16": {
            "text": "also Beachten, also Genügen den"
        },
        "line.17": {
            "text": "stehenden Umständen, - also deren"
        },
        "line.18": {
            "text": "getreues Abbild, und"
        },
        "line.19": {
            "text": "keinen Widerspruch duldend"
        },
        "line.20": {
            "text": "(weil nicht einmal einen erwartend),"
        },
        "line.21": {
            "text": "das Tempo der Langsamen ist,"
        },
        "line.22": {
            "text": "in syntaktischem Doppelsinn, nämlich so oder so,"
        },
        "line.23": {
            "text": "freilich niemals so schnell, wie die Schnellen,"
        },
        "line.24": {
            "text": "die gleichsam ja kaum"
        },
        "line.25": {
            "text": "daß sie und  schwupp!  schon wieder"
        },
        "line.26": {
            "text": "verschwunden sind und während noch"
        },
        "line.27": {
            "text": "x-mal schon wieder  geschwind, in derart winzigen"
        },
        "line.28": {
            "text": "Intervallen Winzigsteln flügelig wie schon"
        },
        "line.29": {
            "text": "Luftteilchen nur noch, - auch"
        },
        "line.30": {
            "text": "imposant das!"
        },
        "line.31": {
            "text": "Anf. Juli 1998"
        }
    }
}