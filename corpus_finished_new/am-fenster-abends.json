{
    "title": "am-fenster-abends",
    "gender": "w",
    "author": "Erika Burkart",
    "author_birth": "1922",
    "poem": {
        "line.1": {
            "text": "Vor nachtgrünen Matten"
        },
        "line.2": {
            "text": "unterwegs zu Wörtern,"
        },
        "line.3": {
            "text": "Klartext zu einem"
        },
        "line.4": {
            "text": "dunklen Gedicht."
        },
        "line.5": {
            "text": "Das innere und das äussere Land,"
        },
        "line.6": {
            "text": "der Himmel flösst Gärten, Getrennte"
        },
        "line.7": {
            "text": "gehen dort Hand in Hand."
        },
        "line.8": {
            "text": "In zeichenmächtiger Schwärze"
        },
        "line.9": {
            "text": "vom Dachrand flatternd ein Vogel,"
        },
        "line.10": {
            "text": "Gedanke, Engel in Fetzen,"
        },
        "line.11": {
            "text": "der im simmernden Grau-Licht"
        },
        "line.12": {
            "text": "verschwand."
        }
    }
}