{
    "title": "vormittag-am-meer-6758",
    "gender": "m",
    "author": "Jan Volker Röhnert",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "Durch die eigene Anwesenheit gehen"
        },
        "line.2": {
            "text": "ist Stille. Die Leute, gegenseitig,"
        },
        "line.3": {
            "text": "stören nicht. Sie liegen da, aus"
        },
        "line.4": {
            "text": "gezogen, am Strand, blinzeln müde"
        },
        "line.5": {
            "text": "gegen die Wellen. Es ist nicht das Blau,"
        },
        "line.6": {
            "text": "was von diesem Tag gesagt sein wird,"
        },
        "line.7": {
            "text": "seinem Himmel, der See, es ist"
        },
        "line.8": {
            "text": "die Klarheit. Man spiegelt sich"
        },
        "line.9": {
            "text": "darin, wie in einer abstrakten"
        },
        "line.10": {
            "text": "Erinnerung an die ersten Stunden"
        },
        "line.11": {
            "text": "als sie, vor Jahren, das Kind"
        },
        "line.12": {
            "text": "zum Ufer führten. Man findet sie"
        },
        "line.13": {
            "text": "nicht wirklich dort, aber die Klarheit"
        },
        "line.14": {
            "text": "ist intensiv wie der Geruch des Pinien"
        },
        "line.15": {
            "text": "Holzes tief ist, als beginne es zu"
        },
        "line.16": {
            "text": "atmen, unter der Sonne, in"
        },
        "line.17": {
            "text": "einer anderen Sprache nur"
        },
        "line.18": {
            "text": "als der zitronengelbe Falter"
        },
        "line.19": {
            "text": "sich aus dem Laub bewegt und"
        },
        "line.20": {
            "text": "Anlaß zu einem Lied mit"
        },
        "line.21": {
            "text": "eingerückten Zeilen gibt, das du"
        },
        "line.22": {
            "text": "den ganzen Rückweg über, bei den"
        },
        "line.23": {
            "text": "Yachten vor den Klippen, der"
        },
        "line.24": {
            "text": "nackten Leda, die durchs Wasser, mit"
        },
        "line.25": {
            "text": "Sonnenbrille watet, ohne ein Wort"
        },
        "line.26": {
            "text": "zu streichen, ohne"
        },
        "line.27": {
            "text": "an der Erinnerung zu zweifeln, bis"
        },
        "line.28": {
            "text": "es auf Papier steht, in Gedanken"
        },
        "line.29": {
            "text": "wiederholst."
        }
    }
}