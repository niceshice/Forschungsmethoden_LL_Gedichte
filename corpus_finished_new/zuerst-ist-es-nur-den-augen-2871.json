{
    "title": "zuerst-ist-es-nur-den-augen-2871",
    "gender": "m",
    "author": "Helwig  Brunner",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "Zuerst ist es nur in den Augen,"
        },
        "line.2": {
            "text": "fällt ein, ohne Bezug und Replik,"
        },
        "line.3": {
            "text": "streift fingerlos die Saiten im Ohr,"
        },
        "line.4": {
            "text": "bis die steile Klaviatur der Fassaden"
        },
        "line.5": {
            "text": "kippt, sich ordnet, bespielbar wird,"
        },
        "line.6": {
            "text": "was ist daran wessen Erinnerung,"
        },
        "line.7": {
            "text": "was deine, meine, was erfunden oder"
        },
        "line.8": {
            "text": "fortgedacht mit dem Verlauf der Straßen,"
        },
        "line.9": {
            "text": "ins Dunkel verhakten Geraden,"
        },
        "line.10": {
            "text": "während die Ideen der Veränderung"
        },
        "line.11": {
            "text": "das einzig Veränderliche bleiben"
        },
        "line.12": {
            "text": "im feuchten, driftenden Licht,"
        },
        "line.13": {
            "text": "das über dem Asphalt sich umkehrt"
        },
        "line.14": {
            "text": "vom grauen Dämmer zur Nacht"
        },
        "line.15": {
            "text": "mit ihrer gleißenden Schwärze,"
        },
        "line.16": {
            "text": "Scheinwürfen, blinkenden Ködern,"
        },
        "line.17": {
            "text": "die vor den Bussen und Taxis zappeln,"
        },
        "line.18": {
            "text": "schräge Vögel sind es, die da brüten"
        },
        "line.19": {
            "text": "im Straßengezweig von N.Y.C.,"
        },
        "line.20": {
            "text": "orange Sperrschnäbel im Dickicht"
        },
        "line.21": {
            "text": "der bunten Jacken und Sweater,"
        },
        "line.22": {
            "text": "die aufgelesenen Befunde trennen uns"
        },
        "line.23": {
            "text": "von dem, was es im Augenblick bedeutet"
        },
        "line.24": {
            "text": "(glatte Tasten, geriefte Fingerkuppen),"
        },
        "line.25": {
            "text": "von der vagen Idee von etwas anderem,"
        },
        "line.26": {
            "text": "der kaum verhaltenen Asphaltreligion,"
        },
        "line.27": {
            "text": "Bekenntnissen in verzerrten Spiegelbildern,"
        },
        "line.28": {
            "text": "die gleich zu Gelächter zerspringen,"
        },
        "line.29": {
            "text": "doch allem ein Schrittmaß unterlegen:"
        },
        "line.30": {
            "text": "zurückgetastet an den eigenen Puls,"
        },
        "line.31": {
            "text": "um das Handgelenk gefasst und fort"
        },
        "line.32": {
            "text": "in eine schmale Gasse gezogen"
        }
    }
}