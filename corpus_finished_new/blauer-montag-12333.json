{
    "title": "blauer-montag-12333",
    "gender": "m",
    "author": "Ulrich Koch",
    "author_birth": "1966",
    "poem": {
        "line.1": {
            "text": "Man muss die Menschen lieben,"
        },
        "line.2": {
            "text": "sagt Rewicz. Aber wo sind sie."
        },
        "line.3": {
            "text": "Ruhetag der Frisöre und Gasthöfe."
        },
        "line.4": {
            "text": "Während der Fernseher beschlägt"
        },
        "line.5": {
            "text": "vom Wasserdampf der Kochsendung,"
        },
        "line.6": {
            "text": "hinterlässt der Kleinwagen des Pflegedienstes"
        },
        "line.7": {
            "text": "einen Ölfleck in den Farben"
        },
        "line.8": {
            "text": "der Alten Meister. Auf den Feldern"
        },
        "line.9": {
            "text": "suchen die Erntemaschinen nach einem"
        },
        "line.10": {
            "text": "Schlafplatz. Unter den schwarzen"
        },
        "line.11": {
            "text": "Plastikplanen grübeln Rüben:"
        },
        "line.12": {
            "text": "zuckerblinde Seher, enthauptet."
        }
    }
}