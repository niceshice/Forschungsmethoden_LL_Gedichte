{
    "title": "siebenundsiebzig-geschwister-auszug-2-15114",
    "gender": "w",
    "author": "Zsuzsanna Gahse",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Vier kleine Buben"
        },
        "line.2": {
            "text": "stehen nebeneinander,"
        },
        "line.3": {
            "text": "alle mit schlitzartigen,"
        },
        "line.4": {
            "text": "strichartigen Augen,"
        },
        "line.5": {
            "text": "mit schön gewölbten"
        },
        "line.6": {
            "text": "Hinterköpfen, etwa"
        },
        "line.7": {
            "text": "acht Jahre alt der Älteste,"
        },
        "line.8": {
            "text": "knochige Beine haben sie,"
        },
        "line.9": {
            "text": "kurze Flatterhosen, sie"
        },
        "line.10": {
            "text": "lachen nicht, sind nicht"
        },
        "line.11": {
            "text": "traurig, scheinbar schauen"
        },
        "line.12": {
            "text": "sie in die Ferne, was"
        },
        "line.13": {
            "text": "wohl am Licht liegt,"
        },
        "line.14": {
            "text": "sie haben ein großartiges"
        },
        "line.15": {
            "text": "Licht um sich, die vier"
        },
        "line.16": {
            "text": "Brüder, das Licht ist"
        },
        "line.17": {
            "text": "ihr gemeinsamer"
        },
        "line.18": {
            "text": "Ausgangspunkt."
        },
        "line.19": {
            "text": "Sie werden mir eine"
        },
        "line.20": {
            "text": "gelochte Frisierhaube"
        },
        "line.21": {
            "text": "mit zig Sensoren zum Gehirn"
        },
        "line.22": {
            "text": "stecken und mich beobachten."
        },
        "line.23": {
            "text": "Die Wirklichkeit ist, dass"
        },
        "line.24": {
            "text": "ich aus Schaltstellen bestehe,"
        },
        "line.25": {
            "text": "bis zu den Sternen hinauf."
        },
        "line.26": {
            "text": "Meine drei Brüder sehen aus,"
        },
        "line.27": {
            "text": "als seien sie soeben satt geworden."
        },
        "line.28": {
            "text": "Sie haben eine Art Dreitagebart,"
        },
        "line.29": {
            "text": "auch wenn der Bartwuchs nicht recht"
        },
        "line.30": {
            "text": "mitmacht. Sie wölben die Lippen vor."
        },
        "line.31": {
            "text": "Ich glaube, sie versuchen, negroid zu"
        },
        "line.32": {
            "text": "wirken und unbekümmert. Meine Brüder"
        },
        "line.33": {
            "text": "sind sexualisiert, seit einer Weile schon."
        },
        "line.34": {
            "text": "Eine sexualisierte Dreierbande. Sie"
        },
        "line.35": {
            "text": "gehen zum Film, filmen sich manchmal"
        },
        "line.36": {
            "text": "gegenseitig und schicken mir dann die"
        },
        "line.37": {
            "text": "Aufnahmen, allerdings nicht nur mir."
        }
    }
}