{
    "title": "im-nebel-5490",
    "gender": "m",
    "author": "Hermann Hesse",
    "author_birth": "1877",
    "poem": {
        "line.1": {
            "text": "Seltsam, im Nebel zu wandern!"
        },
        "line.2": {
            "text": "Einsam ist jeder Busch und Stein,"
        },
        "line.3": {
            "text": "Kein Baum sieht den andern,"
        },
        "line.4": {
            "text": "Jeder ist allein."
        },
        "line.5": {
            "text": "Voll von Freunden war mir die Welt,"
        },
        "line.6": {
            "text": "Als noch mein Leben licht war;"
        },
        "line.7": {
            "text": "Nun, da der Nebel fÃ¤llt,"
        },
        "line.8": {
            "text": "Ist keiner mehr sichtbar."
        },
        "line.9": {
            "text": "Wahrlich, keiner ist weise,"
        },
        "line.10": {
            "text": "Der nicht das Dunkel kennt,"
        },
        "line.11": {
            "text": "Das unentrinnbar und leise"
        },
        "line.12": {
            "text": "Von allen ihn trennt."
        },
        "line.13": {
            "text": "Seltsam, im Nebel zu wandern!"
        },
        "line.14": {
            "text": "Leben ist Einsamsein."
        },
        "line.15": {
            "text": "Kein Mensch kennt den andern,"
        },
        "line.16": {
            "text": "Jeder ist allein."
        }
    }
}