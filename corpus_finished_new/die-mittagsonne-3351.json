{
    "title": "die-mittagsonne-3351",
    "gender": "w",
    "author": "Maja  Haderlap",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "die mittagsonne"
        },
        "line.2": {
            "text": "hat ihren regenbogen in mein auge gelegt."
        },
        "line.3": {
            "text": "durch den sprühregen aus licht"
        },
        "line.4": {
            "text": "flimmern handreichungen bei tisch,"
        },
        "line.5": {
            "text": "wie in rosa seidenpapier gewickelt."
        },
        "line.6": {
            "text": "fliegen landen auf dem rücken"
        },
        "line.7": {
            "text": "bei dieser affenhitze, schlagen"
        },
        "line.8": {
            "text": "unsinnig mit ihren beinchen aus."
        },
        "line.9": {
            "text": "nun ist sie hochgezogen"
        },
        "line.10": {
            "text": "die operafolie des sommertages."
        },
        "line.11": {
            "text": "wir machen sie fest"
        },
        "line.12": {
            "text": "an den sporentrunkenen baumkronen,"
        },
        "line.13": {
            "text": "und den stacheligen old red moss ."
        },
        "line.14": {
            "text": "ich lehne an meinen freundschaftssätzen"
        },
        "line.15": {
            "text": "und halte ausschau nach zurufen."
        },
        "line.16": {
            "text": "feuerfunken werden von unseren gläsern"
        },
        "line.17": {
            "text": "in den gespannten himmel geschleudert,"
        },
        "line.18": {
            "text": "der länger im ofen verharrt als gedacht."
        },
        "line.19": {
            "text": "der wein in den karaffen läutet den donner ein,"
        },
        "line.20": {
            "text": "der uns am abend dem nass überlässt."
        }
    }
}