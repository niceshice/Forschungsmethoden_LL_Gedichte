{
    "title": "thema-polar-dur-3353",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "Mir ist der Winter eingegeben"
        },
        "line.2": {
            "text": "erst wenn die letzte Schweigezeit"
        },
        "line.3": {
            "text": "vorüber ist wird sich das ändern"
        },
        "line.4": {
            "text": "das Frostgestirn und die erstarrten Seen"
        },
        "line.5": {
            "text": "Bäume gekrallt ins Himmelsfleisch und"
        },
        "line.6": {
            "text": "Schneegeschneckel stummen Wilds in"
        },
        "line.7": {
            "text": "weissen Wäldern um die"
        },
        "line.8": {
            "text": "die Nacht sich schliesst und"
        },
        "line.9": {
            "text": "was das Festland aufsucht übers Meer"
        },
        "line.10": {
            "text": "kommts her als brennendkaltes"
        },
        "line.11": {
            "text": "sturmgetriebnes Eis wer weiss seit"
        },
        "line.12": {
            "text": "wann ich dieses Winterinland habe"
        },
        "line.13": {
            "text": "Ich höre nur das Meideglöckchen"
        },
        "line.14": {
            "text": "läuten wenn ich im Süden meinem"
        },
        "line.15": {
            "text": "Ursprung bin im Land der Kälte"
        },
        "line.16": {
            "text": "schweigts weil Innenaussenwinter"
        },
        "line.17": {
            "text": "sanft aneinanderschlagen am Selben"
        },
        "line.18": {
            "text": "wie zwei Gezeichnete Gebückte wie"
        },
        "line.19": {
            "text": "zwei Beglückte tragen"
        },
        "line.20": {
            "text": "Du mit der Grasnatur du so"
        },
        "line.21": {
            "text": "verspielt versommert bleib"
        },
        "line.22": {
            "text": "häng deine Stirn häng"
        },
        "line.23": {
            "text": "ihren Schein in meine Winterneien"
        },
        "line.24": {
            "text": "bei dir hör ich"
        },
        "line.25": {
            "text": "das Glöckchen nicht behüt"
        },
        "line.26": {
            "text": "auch wenn du mit dem Gegensinn"
        },
        "line.27": {
            "text": "zu meinem Stand beschenkt wardst"
        },
        "line.28": {
            "text": "Als Hergeborener dieses"
        },
        "line.29": {
            "text": "Lands kommst nah mir wie"
        },
        "line.30": {
            "text": "ich dir bist ja"
        },
        "line.31": {
            "text": "dem Eis entblüht"
        }
    }
}