{
    "title": "wie-jeder-tag-14653",
    "gender": "w",
    "author": "Lisa Elsässer",
    "author_birth": "1951",
    "poem": {
        "line.1": {
            "text": "dieselben stunden"
        },
        "line.2": {
            "text": "lebt lebten wir sie"
        },
        "line.3": {
            "text": "die stunden in der"
        },
        "line.4": {
            "text": "selben art wie zeiger"
        },
        "line.5": {
            "text": "einer uhr schritten"
        },
        "line.6": {
            "text": "durchschritten wir"
        },
        "line.7": {
            "text": "die zeit und dachten"
        },
        "line.8": {
            "text": "nie an stillstand nie"
        },
        "line.9": {
            "text": "stand die stille still"
        },
        "line.10": {
            "text": "sie ging mit uns"
        },
        "line.11": {
            "text": "im zerbrechlichen"
        },
        "line.12": {
            "text": "gehäuse gläsern"
        },
        "line.13": {
            "text": "der wind vom meer"
        },
        "line.14": {
            "text": "wehte als schriebe er"
        },
        "line.15": {
            "text": "abends eine nocturne"
        },
        "line.16": {
            "text": "für unseren atem und"
        },
        "line.17": {
            "text": "unsere hände im spiel"
        },
        "line.18": {
            "text": "selbstvergessen doch"
        },
        "line.19": {
            "text": "weckte uns das licht"
        },
        "line.20": {
            "text": "die zeit bewegt"
        },
        "line.21": {
            "text": "wie jeden tag"
        }
    }
}