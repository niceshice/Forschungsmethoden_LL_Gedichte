{
    "title": "so-wie-die-dinge-stechen-179",
    "gender": "m",
    "author": "Kurt  Aebli",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "S"
        },
        "line.2": {
            "text": "o wie die Dinge stechen sagte er aber"
        },
        "line.3": {
            "text": "alle pochten in Ermangelung eines"
        },
        "line.4": {
            "text": "besseren Zeitvertreibs und weil es"
        },
        "line.5": {
            "text": "ihm überaus logisch erschien verschickte"
        },
        "line.6": {
            "text": "er anonyme Briefe an das Postfach"
        },
        "line.7": {
            "text": "Zweitausendundfünf"
        },
        "line.8": {
            "text": "beschäftige mich außerdem schrieb"
        },
        "line.9": {
            "text": "er in diesen Tagen damit das Rätsel"
        },
        "line.10": {
            "text": "des Pflanzenstengels zu lösen des"
        },
        "line.11": {
            "text": "kleinen Pinsels das Geheimnis des"
        },
        "line.12": {
            "text": "sogenannten Details"
        }
    }
}