{
    "title": "die-gewichte-5374",
    "gender": "m",
    "author": "Richard Pietraß",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Die Muttermilch und das Vatererbe."
        },
        "line.2": {
            "text": "Mein Hunger nach Leben und das Wissen zu sterben."
        },
        "line.3": {
            "text": "Der Gang zum Weib, der Hang zum Wort."
        },
        "line.4": {
            "text": "Der Keim der Reinheit und wie er langsam verdorrt."
        },
        "line.5": {
            "text": "Das Strohfeuer und der glimmende Docht."
        },
        "line.6": {
            "text": "Aufruhr, der auf Gesetze pocht."
        },
        "line.7": {
            "text": "Die heillose Fahne im bleiernen Rauch."
        },
        "line.8": {
            "text": "Galle, verschluckt im Schlemmerbauch."
        },
        "line.9": {
            "text": "Die Statuten des exemplarischen Falls."
        },
        "line.10": {
            "text": "Mein niemals vollgekriegter Hals."
        },
        "line.11": {
            "text": "Der säuernde Rahm, der flüchtige Ruhm."
        },
        "line.12": {
            "text": "Die Grube und die Gnade postum."
        },
        "line.13": {
            "text": "(1986)"
        }
    }
}