{
    "title": "sand-geschrieben-5496",
    "gender": "m",
    "author": "Hermann Hesse",
    "author_birth": "1877",
    "poem": {
        "line.1": {
            "text": "Daß das Schöne und Berückende"
        },
        "line.2": {
            "text": "Nur ein Hauch und Schauer sei,"
        },
        "line.3": {
            "text": "Daß das Köstliche, Entzückende,"
        },
        "line.4": {
            "text": "Holde ohne Dauer sei:"
        },
        "line.5": {
            "text": "Wolke, Blume, Seifenblase,"
        },
        "line.6": {
            "text": "Feuerwerk und Kinderlachen,"
        },
        "line.7": {
            "text": "Frauenblick im Spiegelglase"
        },
        "line.8": {
            "text": "Und viel andre wunderbare Sachen,"
        },
        "line.9": {
            "text": "Daß sie, kaum entdeckt, vergehen,"
        },
        "line.10": {
            "text": "Nur von Augenblickes Dauer,"
        },
        "line.11": {
            "text": "Nur ein Duft und Windeswehen,"
        },
        "line.12": {
            "text": "Ach, wir wissen es mit Trauer."
        },
        "line.13": {
            "text": "Und das Dauerhafte, Starre"
        },
        "line.14": {
            "text": "Ist uns nicht so innig teuer:"
        },
        "line.15": {
            "text": "Edelstein mit kühlem Feuer,"
        },
        "line.16": {
            "text": "Glänzendschwere Goldesbarre;"
        },
        "line.17": {
            "text": "Selbst die Sterne, nicht zu zählen,"
        },
        "line.18": {
            "text": "Bleiben fern und fremd, sie gleichen"
        },
        "line.19": {
            "text": "Uns Vergänglichen nicht, erreichen"
        },
        "line.20": {
            "text": "Nicht das Innerste der Seelen."
        },
        "line.21": {
            "text": "Nein, es scheint das innigst Schöne,"
        },
        "line.22": {
            "text": "Liebenswerte dem Verderben"
        },
        "line.23": {
            "text": "Zugeneigt, stets nah am Sterben,"
        },
        "line.24": {
            "text": "Und das Köstlichste: die Töne"
        },
        "line.25": {
            "text": "Der Musik, die im Entstehen"
        },
        "line.26": {
            "text": "Schon enteilen, schon vergehen,"
        },
        "line.27": {
            "text": "Sind nur Wehen, Strömen, Jagen"
        },
        "line.28": {
            "text": "Und umweht von leiser Trauer,"
        },
        "line.29": {
            "text": "Denn auch nicht auf Herzschlags Dauer"
        },
        "line.30": {
            "text": "Lassen sie sich halten, bannen;"
        },
        "line.31": {
            "text": "Ton um Ton, kaum angeschlagen,"
        },
        "line.32": {
            "text": "Schwindet schon und rinnt von dannen."
        },
        "line.33": {
            "text": "So ist unser Herz dem Flüchtigen,"
        },
        "line.34": {
            "text": "Ist dem Fließenden, dem Leben"
        },
        "line.35": {
            "text": "Treu und brüderlich ergeben,"
        },
        "line.36": {
            "text": "Nicht dem Festen, Dauertüchtigen."
        },
        "line.37": {
            "text": "Bald ermüdet uns das Bleibende,"
        },
        "line.38": {
            "text": "Fels und Sternwelt und Juwelen,"
        },
        "line.39": {
            "text": "Uns in ewigem Wandel treibende"
        },
        "line.40": {
            "text": "Wind- und Seifenblasenseelen,"
        },
        "line.41": {
            "text": "Zeitvermählte, Dauerlose,"
        },
        "line.42": {
            "text": "Denen Tau am Blatt der Rose,"
        },
        "line.43": {
            "text": "Denen eines Vogels Werben,"
        },
        "line.44": {
            "text": "Eines Wolkenspieles Sterben,"
        },
        "line.45": {
            "text": "Schneegeflimmer, Regenbogen,"
        },
        "line.46": {
            "text": "Falter, schon hinweggeflogen,"
        },
        "line.47": {
            "text": "Denen eines Lachens Läuten,"
        },
        "line.48": {
            "text": "Das uns im Vorübergehen"
        },
        "line.49": {
            "text": "Kaum gestreift, ein Fest bedeuten"
        },
        "line.50": {
            "text": "Oder wehtun kann. Wir lieben,"
        },
        "line.51": {
            "text": "Was uns gleich ist, und verstehen,"
        },
        "line.52": {
            "text": "Was der Wind in Sand geschrieben."
        }
    }
}