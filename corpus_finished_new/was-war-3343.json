{
    "title": "was-war-3343",
    "gender": "w",
    "author": "Maja  Haderlap",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "einmal im jahr"
        },
        "line.2": {
            "text": "wenn lesezeichen"
        },
        "line.3": {
            "text": "aus meinen büchern fallen"
        },
        "line.4": {
            "text": "mit vermerken wie"
        },
        "line.5": {
            "text": "zählfarne,"
        },
        "line.6": {
            "text": "registraturnelken,"
        },
        "line.7": {
            "text": "nesselklammern,"
        },
        "line.8": {
            "text": "kehre ich in mein dorf zurück."
        },
        "line.9": {
            "text": "auf aufgeschlagenen seiten"
        },
        "line.10": {
            "text": "vergilben geschichten,"
        },
        "line.11": {
            "text": "die zu legenden wurden,"
        },
        "line.12": {
            "text": "und ihre waffen abgelegt haben,"
        },
        "line.13": {
            "text": "den spott, den aufruhr,"
        },
        "line.14": {
            "text": "den tanzschweiß,"
        },
        "line.15": {
            "text": "der von den schläfen"
        },
        "line.16": {
            "text": "der tänzer tropfte."
        },
        "line.17": {
            "text": "ich ziehe meinen roten kittel an,"
        },
        "line.18": {
            "text": "stülpe die haare"
        },
        "line.19": {
            "text": "wie einen strauch über den kopf,"
        },
        "line.20": {
            "text": "trage schmutzige socken"
        },
        "line.21": {
            "text": "und stiefel die einem mann"
        },
        "line.22": {
            "text": "passen könnten."
        },
        "line.23": {
            "text": "ich rieche das schweinefett"
        },
        "line.24": {
            "text": "in den ungelüfteten küchen,"
        },
        "line.25": {
            "text": "probiere namen aus"
        },
        "line.26": {
            "text": "und ihre schattengeschichten"
        },
        "line.27": {
            "text": "dieeinmal losgetreten,"
        },
        "line.28": {
            "text": "poltern"
        },
        "line.29": {
            "text": "wie treibendes holz."
        },
        "line.30": {
            "text": "am hofeingang bleibe ich stehen."
        },
        "line.31": {
            "text": "dort habe ich einen stein"
        },
        "line.32": {
            "text": "hingelegt, mit einer furche"
        },
        "line.33": {
            "text": "in kalk eingeschlossen,"
        },
        "line.34": {
            "text": "die mich erinnern soll,"
        },
        "line.35": {
            "text": "woher ich kam."
        }
    }
}