{
    "title": "so-ist-das-ii-16354",
    "gender": "w",
    "author": "Andrea Grill",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "II."
        },
        "line.2": {
            "text": "nur reglose kugelige Nachtgeister tatsächlich"
        },
        "line.3": {
            "text": "am Leben seit etwa einem halben Jahrhundert"
        },
        "line.4": {
            "text": "regelmäßig von freundlichen Gärtnern"
        },
        "line.5": {
            "text": "zu Bällen geschoren; beobachten uns"
        },
        "line.6": {
            "text": "hellgrün aus der Nähe gefiedert oder"
        },
        "line.7": {
            "text": "mit Nadeln bestückt stehen wir"
        },
        "line.8": {
            "text": "wo noch keiner gestanden ist"
        },
        "line.9": {
            "text": "ein paar Schritte aus dem Licht"
        },
        "line.10": {
            "text": "verlasse mich auf deinen Körper"
        },
        "line.11": {
            "text": "bis jetzt in der wärmsten Nacht im Jahr"
        },
        "line.12": {
            "text": "überrascht wie dünn der Anzugstoff"
        },
        "line.13": {
            "text": "von der Durchlässigkeit meiner Haut"
        }
    }
}