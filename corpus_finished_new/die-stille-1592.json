{
    "title": "die-stille-1592",
    "gender": "w",
    "author": "Erika Burkart",
    "author_birth": "1922",
    "poem": {
        "line.1": {
            "text": "Vibrierende Stille der Laubnacht,"
        },
        "line.2": {
            "text": "Stille vor Tag, ihr Klang,"
        },
        "line.3": {
            "text": "quillt die Sonne empor."
        },
        "line.4": {
            "text": "Funkstille vor dem Gewitter"
        },
        "line.5": {
            "text": "zwischen Menschen, die sich"
        },
        "line.6": {
            "text": "im Winter liebten."
        },
        "line.7": {
            "text": "Nebenan, sagte die Frau in der Stadt,"
        },
        "line.8": {
            "text": "bohre der Zahnarzt - ich hörte nichts -"
        },
        "line.9": {
            "text": "und liess die Band Perpetuum spielen,"
        },
        "line.10": {
            "text": "Musik vertreibe die Zeit."
        },
        "line.11": {
            "text": "Sammelt Stille Zeit?"
        },
        "line.12": {
            "text": "In Kernen, Formeln,"
        },
        "line.13": {
            "text": "darin sie Nicht-Fassbares"
        },
        "line.14": {
            "text": "weiterreicht?"
        },
        "line.15": {
            "text": "Ausgesetzt in die Stille, zählt"
        },
        "line.16": {
            "text": "das Herz die Zeit, ihm erscheint"
        },
        "line.17": {
            "text": "das lautlos ruckhafte Schwinden"
        },
        "line.18": {
            "text": "von Ziffern als Weltuntergang;"
        },
        "line.19": {
            "text": "im Fenster das Licht von gestern."
        },
        "line.20": {
            "text": "Jedermanns Angst, in die Stille zu fallen,"
        },
        "line.21": {
            "text": "wo kein Herzschlag das Grauen skandiert,"
        },
        "line.22": {
            "text": "Stille nach uns,"
        },
        "line.23": {
            "text": "die zum Himmel schreit."
        }
    }
}