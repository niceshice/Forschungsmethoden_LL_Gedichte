{
    "title": "die-einzelnen-905",
    "gender": "m",
    "author": "Jürgen Theobaldy",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Ein Wort steht offen, ein Massengrab,"
        },
        "line.2": {
            "text": "die Klinge trennt das Fleisch auf,"
        },
        "line.3": {
            "text": "Regen ist Blut, gesammelt im Erdloch,"
        },
        "line.4": {
            "text": "und an anderen Stränden liegen Knochen,"
        },
        "line.5": {
            "text": "vom Sand kaum bedeckt, in Höhlen"
        },
        "line.6": {
            "text": "finden sich angekohlte Schädel,"
        },
        "line.7": {
            "text": "Blut tritt aus dem Boden wie Schweiß,"
        },
        "line.8": {
            "text": "und immer bleibt etwas übrig,"
        },
        "line.9": {
            "text": "immer wird etwas sagen,"
        },
        "line.10": {
            "text": "wie es einmal unterging,"
        },
        "line.11": {
            "text": "wie unwägbar es ist, was bleibt,"
        },
        "line.12": {
            "text": "die Nachmittage in der Sonne,"
        },
        "line.13": {
            "text": "ein Messer, das aufblitzt im Caf,"
        },
        "line.14": {
            "text": "ein heimliches Lächeln, das gilt, gilt"
        },
        "line.15": {
            "text": "für eine Ewigkeit, die doch keine war,"
        },
        "line.16": {
            "text": "wenn sie die Straßen räumen"
        },
        "line.17": {
            "text": "und am Stadtrand Rauch aufquillt."
        },
        "line.18": {
            "text": "Zuletzt rufst du nach deiner Mutter,"
        },
        "line.19": {
            "text": "du schlägst die Augen auf,"
        },
        "line.20": {
            "text": "und sie ist gegangen vor langem,"
        },
        "line.21": {
            "text": "vor langem war sie eines Tages fort."
        },
        "line.22": {
            "text": "Und zuletzt stehen die Särge da,"
        },
        "line.23": {
            "text": "aufgereiht auf staubigen Plätzen,"
        },
        "line.24": {
            "text": "Knochen in Plastiksäcken,"
        },
        "line.25": {
            "text": "ein Kreuz markiert die Stelle,"
        },
        "line.26": {
            "text": "Ruinen stehen mit leeren Fenstern,"
        },
        "line.27": {
            "text": "nichts spürt den Blick der Kamera,"
        },
        "line.28": {
            "text": "das Massengrab wird täglich geöffnet,"
        },
        "line.29": {
            "text": "täglich Führung! täglich surren"
        },
        "line.30": {
            "text": "die Fernschreiber in leeren Zimmern,"
        },
        "line.31": {
            "text": "unendlich vervielfältigtes Wort"
        },
        "line.32": {
            "text": "im Irrgarten aus Fahnen und Tanzmusik,"
        },
        "line.33": {
            "text": "Berater plaudern auf schmalen Gängen."
        }
    }
}