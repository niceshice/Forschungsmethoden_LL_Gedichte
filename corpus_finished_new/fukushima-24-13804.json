{
    "title": "fukushima-24-13804",
    "gender": "w",
    "author": "Yoko Tawada",
    "author_birth": "1960",
    "poem": {
        "line.1": {
            "text": "Heute Ruhetag steht an der"
        },
        "line.2": {
            "text": "Tür eines Friseursalons. Seit"
        },
        "line.3": {
            "text": "drei Jahren hört der"
        },
        "line.4": {
            "text": "Tag Heute nicht"
        },
        "line.5": {
            "text": "mehr auf und die Haare"
        },
        "line.6": {
            "text": "wachsen woanders."
        }
    }
}