{
    "title": "im-kaffeehaus-3723",
    "gender": "m",
    "author": "Peter Turrini",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Im Kaffeehaus"
        },
        "line.2": {
            "text": "beschreibst du mir"
        },
        "line.3": {
            "text": "deine Vorstellungen"
        },
        "line.4": {
            "text": "von der Liebe."
        },
        "line.5": {
            "text": "Das Wichtigste"
        },
        "line.6": {
            "text": "sei die Aufrichtigkeit"
        },
        "line.7": {
            "text": "und die Treue."
        },
        "line.8": {
            "text": "Ich bin bereit"
        },
        "line.9": {
            "text": "deine Vorstellungen"
        },
        "line.10": {
            "text": "ganz und gar"
        },
        "line.11": {
            "text": "zu übernehmen"
        },
        "line.12": {
            "text": "wenn nur dein Knie"
        },
        "line.13": {
            "text": "nie aufhört"
        },
        "line.14": {
            "text": "das meine"
        },
        "line.15": {
            "text": "zu berühren."
        }
    }
}