{
    "title": "besuch-amsterdam-1577",
    "gender": "m",
    "author": "Michael Krüger",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Die Stadt öffnet weit ihre Fenster,"
        },
        "line.2": {
            "text": "um keinen Ton zu verpassen."
        },
        "line.3": {
            "text": "Ein Lied fährt auf dem Fahrrad vorbei"
        },
        "line.4": {
            "text": "und schenkt jedem Haus eine Note."
        },
        "line.5": {
            "text": "Mein Freund wohnt an einer Gracht."
        },
        "line.6": {
            "text": "Die Treppe seines gutsitzenden Hauses"
        },
        "line.7": {
            "text": "wurde von einem Schlangenbeschwörer"
        },
        "line.8": {
            "text": "entworfen, ausgebildet in den Kolonien:"
        },
        "line.9": {
            "text": "wenn man vorsichtig auftritt,"
        },
        "line.10": {
            "text": "hört man mandelförmige Seufzer."
        },
        "line.11": {
            "text": "Gelegentlich fährt ein altes Schiff"
        },
        "line.12": {
            "text": "durch den Salon, dessen Kapitän"
        },
        "line.13": {
            "text": "Schriftstücke auf dem Fensterbrett ablegt,"
        },
        "line.14": {
            "text": "mittelalterliche Traktate"
        },
        "line.15": {
            "text": "über Aufklärung und Magie,"
        },
        "line.16": {
            "text": "aber auch ganz normale Lebensgeschichten."
        },
        "line.17": {
            "text": "Blickt mein Freund aus dem Fenster,"
        },
        "line.18": {
            "text": "verdoppelt sich die Stadt."
        },
        "line.19": {
            "text": "In der Dämmerung treten die Klassiker"
        },
        "line.20": {
            "text": "aus den Regalen und beginnen zu arbeiten,"
        },
        "line.21": {
            "text": "ein Hund bedient sie mit Käse und Wein."
        },
        "line.22": {
            "text": "Und nachts fegt ein Engel sorgfältig"
        },
        "line.23": {
            "text": "den Weg zwischen Wasser und Haustür,"
        },
        "line.24": {
            "text": "als gälte es, einen der vier Flüsse"
        },
        "line.25": {
            "text": "zum Paradies zu säubern."
        }
    }
}