{
    "title": "liebe-macht-blind-3724",
    "gender": "m",
    "author": "Peter Turrini",
    "author_birth": "1944",
    "poem": {
        "line.1": {
            "text": "Liebe macht blind"
        },
        "line.2": {
            "text": "sagt man"
        },
        "line.3": {
            "text": "und folglich"
        },
        "line.4": {
            "text": "werde ich"
        },
        "line.5": {
            "text": "in den Verein der Blinden"
        },
        "line.6": {
            "text": "und Sehschwachen"
        },
        "line.7": {
            "text": "eintreten."
        },
        "line.8": {
            "text": "Einen Blindenhund"
        },
        "line.9": {
            "text": "beantragen."
        },
        "line.10": {
            "text": "Die Wohnung blindengerecht"
        },
        "line.11": {
            "text": "umbauen."
        },
        "line.12": {
            "text": "Und jede Nacht"
        },
        "line.13": {
            "text": "werde ich"
        },
        "line.14": {
            "text": "an den Erhebungen deines Körpers"
        },
        "line.15": {
            "text": "die Blindenschrift"
        },
        "line.16": {
            "text": "üben."
        }
    }
}