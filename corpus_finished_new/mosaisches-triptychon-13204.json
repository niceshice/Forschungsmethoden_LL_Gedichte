{
    "title": "mosaisches-triptychon-13204",
    "gender": "m",
    "author": "Max Czollek",
    "author_birth": "1987",
    "poem": {
        "line.1": {
            "text": "einer lässt sich pejes wachsen"
        },
        "line.2": {
            "text": "einer wäre gern prophet"
        },
        "line.3": {
            "text": "einer kippt benzin über menschen"
        },
        "line.4": {
            "text": "einer übt sich im händewaschen"
        },
        "line.5": {
            "text": "einer sagt: hättest du uns hinausgeführt"
        },
        "line.6": {
            "text": "und nicht hinein"
        },
        "line.7": {
            "text": "es wäre uns genug gewesen"
        },
        "line.8": {
            "text": "einer geht am schabbat heimlich tanzen"
        },
        "line.9": {
            "text": "einer pfeift sein gebet"
        },
        "line.10": {
            "text": "freunde, den talit brauche ich nicht"
        },
        "line.11": {
            "text": "meine familie hat gelernt"
        },
        "line.12": {
            "text": "nackt zu sterben"
        }
    }
}