{
    "title": "grund-zu-schafen-1356",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "Kochbirnen Walnüsse Gras"
        },
        "line.2": {
            "text": "es war weiß es war rot es war grau"
        },
        "line.3": {
            "text": "Mosaike aus Bauschutt verlorenes"
        },
        "line.4": {
            "text": "Material wir verhielten uns unsichtbar"
        },
        "line.5": {
            "text": "späte Ware die Nachkriegsmatratzen"
        },
        "line.6": {
            "text": "wie Altersflecken im Garten"
        },
        "line.7": {
            "text": "bekamen wir Schwachstellen unsere"
        },
        "line.8": {
            "text": "T-Shirts auch tagsüber noch voller Nacht"
        },
        "line.9": {
            "text": "die Birnen verrechneten wir"
        },
        "line.10": {
            "text": "mit den Wespen ein Blumenstau gratis"
        },
        "line.11": {
            "text": "zum Ende des Sommers war weiß oder rot"
        },
        "line.12": {
            "text": "jede Hitze vermehrte sich"
        },
        "line.13": {
            "text": "eine Wiese mit Bäumen man wuchs"
        },
        "line.14": {
            "text": "unter Blitzen auf dunkelte nach war"
        },
        "line.15": {
            "text": "das Auftragen alter Bekleidung kein Grund"
        },
        "line.16": {
            "text": "zu Schafen"
        }
    }
}