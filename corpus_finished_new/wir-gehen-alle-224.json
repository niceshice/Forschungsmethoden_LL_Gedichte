{
    "title": "wir-gehen-alle-224",
    "gender": "m",
    "author": "Detlev Meyer",
    "author_birth": "1948",
    "poem": {
        "line.1": {
            "text": "Wir gehen alle"
        },
        "line.2": {
            "text": "mit der Zeit,"
        },
        "line.3": {
            "text": "die keine Wunden heilt,"
        },
        "line.4": {
            "text": "die Wunden schlägt,"
        },
        "line.5": {
            "text": "die nicht verweilt,"
        },
        "line.6": {
            "text": "die uns nicht trägt,"
        },
        "line.7": {
            "text": "die keine Zeit ließ"
        },
        "line.8": {
            "text": "zum Verschnaufen,"
        },
        "line.9": {
            "text": "die vor der Zeit"
        },
        "line.10": {
            "text": "davongelaufen."
        },
        "line.11": {
            "text": "Die spuckt uns aus,"
        },
        "line.12": {
            "text": "weil wir nicht munden,"
        },
        "line.13": {
            "text": "weil wir nicht zahlten"
        },
        "line.14": {
            "text": "für die Stunden,"
        },
        "line.15": {
            "text": "in denen wir die Ewigkeit"
        },
        "line.16": {
            "text": "in Gold auf unsre Körper"
        },
        "line.17": {
            "text": "malten."
        },
        "line.18": {
            "text": "Wir gehen."
        }
    }
}