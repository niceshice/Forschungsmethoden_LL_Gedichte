{
    "title": "luken-oeffnen-2864",
    "gender": "m",
    "author": "Helwig  Brunner",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "Luken öffnen, aus den Fensterschrägen"
        },
        "line.2": {
            "text": "rufen, so dass der Himmel aufreißt,"
        },
        "line.3": {
            "text": "der taube Schleier vor der Sonne"
        },
        "line.4": {
            "text": "wegschmilzt in solche Stille hinein:"
        },
        "line.5": {
            "text": "in weiße Schrift die Idee gefasst,"
        },
        "line.6": {
            "text": "die reine Stelle im trüben Vorhof"
        },
        "line.7": {
            "text": "unsinnig hastender Stummbilder,"
        },
        "line.8": {
            "text": "als wären col legno und sul ponticello"
        },
        "line.9": {
            "text": "schiere Gesten, sforzato ein jähes"
        },
        "line.10": {
            "text": "Versprechen, eingepeitscht dem"
        },
        "line.11": {
            "text": "Hörbaren: dem Unerhörten."
        },
        "line.12": {
            "text": "Aber das Wissen um den Puls,"
        },
        "line.13": {
            "text": "der Klang als erinnerter Begriff,"
        },
        "line.14": {
            "text": "konkret wie der Gedanke an den Tod,"
        },
        "line.15": {
            "text": "alles lärmt an seinen verschmierten"
        },
        "line.16": {
            "text": "Rändern und schweigt in der Mitte,"
        },
        "line.17": {
            "text": "als wäre dort noch etwas auszusingen,"
        },
        "line.18": {
            "text": "abzuringen der Pantomime,"
        },
        "line.19": {
            "text": "dem Notenbild, dem bitteren Weiß,"
        },
        "line.20": {
            "text": "doch nein, niemals."
        }
    }
}