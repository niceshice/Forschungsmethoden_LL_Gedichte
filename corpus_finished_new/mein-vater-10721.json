{
    "title": "mein-vater-10721",
    "gender": "w",
    "author": "Ulla Hahn",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Wer ist das?"
        },
        "line.2": {
            "text": "fragen meine Freunde"
        },
        "line.3": {
            "text": "und deuten auf das Foto"
        },
        "line.4": {
            "text": "des Mannes über meinem Schreibtisch"
        },
        "line.5": {
            "text": "zwischen Salvador Allende"
        },
        "line.6": {
            "text": "und Angela Davis."
        },
        "line.7": {
            "text": "Ich sage:"
        },
        "line.8": {
            "text": "Mein Vater. Tot."
        },
        "line.9": {
            "text": "Dann fragt niemand weiter."
        },
        "line.10": {
            "text": "Wer ist das?"
        },
        "line.11": {
            "text": "frage ich den Mann,"
        },
        "line.12": {
            "text": "der nicht einmal"
        },
        "line.13": {
            "text": "für das Passfoto lächelt,"
        },
        "line.14": {
            "text": "der an mir vorbeischaut"
        },
        "line.15": {
            "text": "wie beim Grüßen"
        },
        "line.16": {
            "text": "an Menschen,"
        },
        "line.17": {
            "text": "die er nicht mochte."
        },
        "line.18": {
            "text": "Bauernkind, eines von zwölf,"
        },
        "line.19": {
            "text": "und mit elf von der Schule;"
        },
        "line.20": {
            "text": "hatte ausgelernt,"
        },
        "line.21": {
            "text": "mit geducktem Kopf nach"
        },
        "line.22": {
            "text": "oben zu sehen."
        },
        "line.23": {
            "text": "Ist krumm geworden"
        },
        "line.24": {
            "text": "als Arbeiter an der Maschine"
        },
        "line.25": {
            "text": "und als Soldat"
        },
        "line.26": {
            "text": "verführt gegen die Roten."
        },
        "line.27": {
            "text": "Nachher noch einmal:"
        },
        "line.28": {
            "text": "geglaubt, nicht begriffen."
        },
        "line.29": {
            "text": "Aber weitergemacht."
        },
        "line.30": {
            "text": "Als Arbeiter an der Maschine"
        },
        "line.31": {
            "text": "als Vater in der Familie"
        },
        "line.32": {
            "text": "und sonntags in die Kirche"
        },
        "line.33": {
            "text": "wegen der Frau"
        },
        "line.34": {
            "text": "und der Leute im Dorf."
        },
        "line.35": {
            "text": "Den hab ich gehasst."
        },
        "line.36": {
            "text": "Abends, wenn er aus der Fabrik"
        },
        "line.37": {
            "text": "nach Hause kam,"
        },
        "line.38": {
            "text": "schrie ich ihm entgegen"
        },
        "line.39": {
            "text": "Vokabeln, Latein, Englisch."
        },
        "line.40": {
            "text": "Am Tisch bei Professors,"
        },
        "line.41": {
            "text": "als mir der Tee"
        },
        "line.42": {
            "text": "aus zitternden Händen"
        },
        "line.43": {
            "text": "auf die Knie tropfte,"
        },
        "line.44": {
            "text": "hab ich Witze gestammelt"
        },
        "line.45": {
            "text": "über Tatzen,"
        },
        "line.46": {
            "text": "die nach Maschinenöl stinken."
        },
        "line.47": {
            "text": "Hab das Glauben verlernt mit Mühe."
        },
        "line.48": {
            "text": "Hab begreifen gelernt und begriffen:"
        },
        "line.49": {
            "text": "Den will ich lieben"
        },
        "line.50": {
            "text": "bis in den Tod"
        },
        "line.51": {
            "text": "all derer, die schuld sind"
        },
        "line.52": {
            "text": "an seinem Leben"
        },
        "line.53": {
            "text": "und meinem Hass."
        },
        "line.54": {
            "text": "Manchmal"
        },
        "line.55": {
            "text": "da lag schon die Decke"
        },
        "line.56": {
            "text": "auf seinen Knien"
        },
        "line.57": {
            "text": "im Rollstuhl,"
        },
        "line.58": {
            "text": "nahm er meine Hand,"
        },
        "line.59": {
            "text": "hat sie abgemessen"
        },
        "line.60": {
            "text": "mit Fingern und Blicken"
        },
        "line.61": {
            "text": "und mich gefragt,"
        },
        "line.62": {
            "text": "wie ich sie damit machen will,"
        },
        "line.63": {
            "text": "die neue Welt."
        },
        "line.64": {
            "text": "Mit Dir,"
        },
        "line.65": {
            "text": "hab ich gesagt"
        },
        "line.66": {
            "text": "und meine Faust"
        },
        "line.67": {
            "text": "geballt in der seinen."
        },
        "line.68": {
            "text": "Da machten wir die Zeit"
        },
        "line.69": {
            "text": "zu der unseren,"
        },
        "line.70": {
            "text": "als ich ein Sechstel"
        },
        "line.71": {
            "text": "der Erde ihm"
        },
        "line.72": {
            "text": "rot auf den Tisch hinzählte"
        },
        "line.73": {
            "text": "und er es stückweis"
        },
        "line.74": {
            "text": "und bedächtig"
        },
        "line.75": {
            "text": "für bare Münze"
        },
        "line.76": {
            "text": "und für sich nahm."
        },
        "line.77": {
            "text": "Wer ist das?"
        },
        "line.78": {
            "text": "fragen meine Freunde"
        },
        "line.79": {
            "text": "und ich sag: Einer von uns."
        },
        "line.80": {
            "text": "Nur der Fotograf"
        },
        "line.81": {
            "text": "hat vergessen,"
        },
        "line.82": {
            "text": "dass er mich anschaut"
        },
        "line.83": {
            "text": "und lacht."
        },
        "line.84": {
            "text": "(aus:"
        },
        "line.85": {
            "text": "Liebesgedichte"
        },
        "line.86": {
            "text": ", 1993)"
        }
    }
}