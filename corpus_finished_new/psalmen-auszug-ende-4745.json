{
    "title": "psalmen-auszug-ende-4745",
    "gender": "m",
    "author": "SAID",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "herr"
        },
        "line.2": {
            "text": "hilf meinem wort"
        },
        "line.3": {
            "text": "denn es ist seit jahren auf der flucht"
        },
        "line.4": {
            "text": "vor meinen lügen"
        },
        "line.5": {
            "text": "verhilf ihm zu neuen täuschungen"
        },
        "line.6": {
            "text": "damit es endlich begreift"
        },
        "line.7": {
            "text": "die flucht könne auch behausung sein"
        },
        "line.8": {
            "text": "sieh herr"
        },
        "line.9": {
            "text": "deine hände sind bereit für mich"
        },
        "line.10": {
            "text": "denn ich frage die rose nicht"
        },
        "line.11": {
            "text": "nach dem sinn des lebens"
        },
        "line.12": {
            "text": "ihre aufgabe ist vielleicht sich zu entblößen"
        },
        "line.13": {
            "text": "und in den tag zu scheinen"
        },
        "line.14": {
            "text": "herr"
        },
        "line.15": {
            "text": "achte auf den besiegten"
        },
        "line.16": {
            "text": "auf den unrat seiner träume"
        },
        "line.17": {
            "text": "und den rest seiner sprache"
        },
        "line.18": {
            "text": "denn er wartet auf einen anderen tod"
        },
        "line.19": {
            "text": "und will die ordnung der dinge"
        },
        "line.20": {
            "text": "am ort von deren verwirkung suchen"
        },
        "line.21": {
            "text": "und verrate mir oh herr"
        },
        "line.22": {
            "text": "deinen verborgenen namen"
        },
        "line.23": {
            "text": "für die stunde"
        },
        "line.24": {
            "text": "die aus dem gang der dinge geraten ist"
        },
        "line.25": {
            "text": "und für den moment"
        },
        "line.26": {
            "text": "wenn die faktisten mich bedrängen"
        },
        "line.27": {
            "text": "herr"
        },
        "line.28": {
            "text": "habe ich ein recht auf diese gebete?"
        },
        "line.29": {
            "text": "so verringere ihre kollateralschäden für andere"
        },
        "line.30": {
            "text": "geschöpfe"
        },
        "line.31": {
            "text": "denn ich verstehe mich nicht als täter"
        },
        "line.32": {
            "text": "sondern als suchender"
        },
        "line.33": {
            "text": "wie ein regenwurm im tiefschlaf"
        },
        "line.34": {
            "text": "ohne eine ahnung von urknall und wolken"
        },
        "line.35": {
            "text": "herr"
        },
        "line.36": {
            "text": "hörst du das geschrei der menge?"
        },
        "line.37": {
            "text": "sie haben einen neuen gott gefunden"
        },
        "line.38": {
            "text": "aber auch der weiß alles"
        },
        "line.39": {
            "text": "liebt es gedemütigt durch die welt zu gehen"
        },
        "line.40": {
            "text": "rechnet und ruft"
        },
        "line.41": {
            "text": "so ist auch er zum verzehr gezüchtet"
        }
    }
}