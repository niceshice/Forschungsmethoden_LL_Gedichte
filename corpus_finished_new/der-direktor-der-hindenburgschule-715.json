{
    "title": "der-direktor-der-hindenburgschule-715",
    "gender": "w",
    "author": "Sabine Scho",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "Was sich da im Glas spiegelt"
        },
        "line.2": {
            "text": "Reflex aufs Horn  abgehärmtes"
        },
        "line.3": {
            "text": "Strohrund, vor vielleicht Timmendorf"
        },
        "line.4": {
            "text": "drauf aufm Vollmond der deutschen"
        },
        "line.5": {
            "text": "Glatze"
        },
        "line.6": {
            "text": "Wer löst aus, das Gegenge-"
        },
        "line.7": {
            "text": "lichter  Aufgerunzel der Oberlippe"
        },
        "line.8": {
            "text": "der O.H.L. (schnappt nach Luft):"
        },
        "line.9": {
            "text": "verheerend, völlig ausgebrannt"
        },
        "line.10": {
            "text": "lassen sich die 3. sehn"
        },
        "line.11": {
            "text": "Hes no oil painting"
        },
        "line.12": {
            "text": "eins neun eins sechs  malen"
        },
        "line.13": {
            "text": "nach Zahlen der homo luden-"
        },
        "line.14": {
            "text": "dorffschulrektoren, homo erectoren"
        },
        "line.15": {
            "text": "den tut kein Zahn mehr weh"
        },
        "line.16": {
            "text": "Was sich da ganz steil"
        },
        "line.17": {
            "text": "noch über der Brücke spiegelt"
        },
        "line.18": {
            "text": "löst aus (Lendenschnecke)"
        },
        "line.19": {
            "text": "dralle Möpse"
        },
        "line.20": {
            "text": "Was sich da prothesenhohl zusammen-"
        },
        "line.21": {
            "text": "braut (unterm Leistenfluß):"
        },
        "line.22": {
            "text": "nervöse Selbstreinigung der Mundhöhle"
        }
    }
}