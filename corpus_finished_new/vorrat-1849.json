{
    "title": "vorrat-1849",
    "gender": "m",
    "author": "Andreas Altmann",
    "author_birth": "1963",
    "poem": {
        "line.1": {
            "text": "der schnee beginnt in den augen,"
        },
        "line.2": {
            "text": "wenn der wind das licht"
        },
        "line.3": {
            "text": "laut aus den pappeln treibt."
        },
        "line.4": {
            "text": "du mußt dich entscheiden,"
        },
        "line.5": {
            "text": "wenn dich dein schatten verläßt,"
        },
        "line.6": {
            "text": "welche wege du aufstellst"
        },
        "line.7": {
            "text": "fürs gehen. das zimmer erkaltet"
        },
        "line.8": {
            "text": "unter geräuschen des schnees."
        },
        "line.9": {
            "text": "es klopft an der tür. du öffnest das holz."
        },
        "line.10": {
            "text": "es ist die alte geschichte."
        },
        "line.11": {
            "text": "jemand erkennt dich"
        },
        "line.12": {
            "text": "und erzählt dir, was war."
        },
        "line.13": {
            "text": "du trocknest die worte und hoffst,"
        },
        "line.14": {
            "text": "daß sie halten. doch noch ist es"
        },
        "line.15": {
            "text": "september. du verteilst"
        },
        "line.16": {
            "text": "deine schatten nach ihren gewichten,"
        },
        "line.17": {
            "text": "fällst leicht durch die worte,"
        },
        "line.18": {
            "text": "die leiser werden, verstummen,"
        },
        "line.19": {
            "text": "wenn du sie aufschlägst"
        },
        "line.20": {
            "text": "auf seiten des schnees."
        }
    }
}