{
    "title": "crazy-sexy-4319",
    "gender": "w",
    "author": "Dagmar Leupold",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Der Schulweg im Bus führt jeden"
        },
        "line.2": {
            "text": "Morgen am Mainzer Puff vorbei:"
        },
        "line.3": {
            "text": "die Haltestelle genau vor dem Hauptportal"
        },
        "line.4": {
            "text": "hic habitat felicitas"
        },
        "line.5": {
            "text": "dahinter pelziges Rot"
        },
        "line.6": {
            "text": "Habe ich mir immer gewünscht"
        },
        "line.7": {
            "text": "zu den lärmenden Schülern stiege"
        },
        "line.8": {
            "text": "eine dazu mit müden Augen und"
        },
        "line.9": {
            "text": "geschminktem Gesicht und vor allem:"
        },
        "line.10": {
            "text": "der Illusion von Leben?"
        },
        "line.11": {
            "text": "Ich weiß es nicht mehr"
        },
        "line.12": {
            "text": "und wenn ich es wüßte"
        },
        "line.13": {
            "text": "hätte ich mich geirrt"
        }
    }
}