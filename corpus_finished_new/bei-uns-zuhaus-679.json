{
    "title": "bei-uns-zuhaus-679",
    "gender": "m",
    "author": "Jürg Schubiger",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Das Licht geht an,"
        },
        "line.2": {
            "text": "der Kuchen auf,"
        },
        "line.3": {
            "text": "die Schwester aus"
        },
        "line.4": {
            "text": "bei uns zuhaus."
        },
        "line.5": {
            "text": "Die Türen gehn,"
        },
        "line.6": {
            "text": "die Freunde sehn herein"
        },
        "line.7": {
            "text": "und grüssen."
        },
        "line.8": {
            "text": "Nur Tische, Stühle,"
        },
        "line.9": {
            "text": "Betten stehn"
        },
        "line.10": {
            "text": "bei uns zuhaus"
        },
        "line.11": {
            "text": "bockstill und auf vier Füssen."
        }
    }
}