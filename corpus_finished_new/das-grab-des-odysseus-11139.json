{
    "title": "das-grab-des-odysseus-11139",
    "gender": "m",
    "author": "Peter Huchel",
    "author_birth": "1903",
    "poem": {
        "line.1": {
            "text": "Niemand wird finden"
        },
        "line.2": {
            "text": "das Grab des Odysseus,"
        },
        "line.3": {
            "text": "kein Spatenstich den krustigen Helm"
        },
        "line.4": {
            "text": "im Dunst versteinerter Knochen."
        },
        "line.5": {
            "text": "Such nicht die Höhle,"
        },
        "line.6": {
            "text": "wo unter die Erde hinab"
        },
        "line.7": {
            "text": "ein wehender Ruß, ein Schatten nur,"
        },
        "line.8": {
            "text": "vom Pech der Fackel versehrt,"
        },
        "line.9": {
            "text": "zu seinen toten Gefährten ging,"
        },
        "line.10": {
            "text": "die Hände hebend waffenlos,"
        },
        "line.11": {
            "text": "bespritzt mit dem Blut geschlachteter Schafe,"
        },
        "line.12": {
            "text": "Mein ist alles, sagte der Staub,"
        },
        "line.13": {
            "text": "das Grab der Sonne hinter der Wüste,"
        },
        "line.14": {
            "text": "die Riffe voller Wassergetöse,"
        },
        "line.15": {
            "text": "der endlose Mittag, der immer noch warnt"
        },
        "line.16": {
            "text": "der Seeräubersohn aus Ithaka,"
        },
        "line.17": {
            "text": "das Steuerruder, schartig vom Salz,"
        },
        "line.18": {
            "text": "die Karten und Schiffskataloge"
        },
        "line.19": {
            "text": "des alten Homer."
        }
    }
}