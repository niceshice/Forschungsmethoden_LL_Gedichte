{
    "title": "suchen-ist-es-wahr-ist-es-wahr-14804",
    "gender": "m",
    "author": "Eberhard Häfner",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "Ist es wahr"
        },
        "line.2": {
            "text": "dass Schmetterlinge spielen"
        },
        "line.3": {
            "text": "auch dann, wenn ich übernächtigt, der Tag anhänglich"
        },
        "line.4": {
            "text": "aus den Spielen platzt, mich fühle im Lied"
        },
        "line.5": {
            "text": "höre auf meinen Atem"
        },
        "line.6": {
            "text": "ich lausche auf des Atems Stimme"
        },
        "line.7": {
            "text": "den Cantus firmus factus"
        },
        "line.8": {
            "text": "schemenhaft ein Kreis, dessen Lauf verwirbelt"
        },
        "line.9": {
            "text": "auf ein stilles Wasser zeigt"
        },
        "line.10": {
            "text": "Spiralen deklinieren eine Primzahl"
        },
        "line.11": {
            "text": "Körperzellen hellen auf"
        },
        "line.12": {
            "text": "und schließlich der Anfang endlich"
        },
        "line.13": {
            "text": "am Wendekreis, über den Atlas gebeugt"
        },
        "line.14": {
            "text": "die Hesperiden zu hören"
        },
        "line.15": {
            "text": "*"
        },
        "line.16": {
            "text": "es ist wahr"
        },
        "line.17": {
            "text": "dass die Blätter ihr Grün abfackeln"
        },
        "line.18": {
            "text": "wenn der wilde Wein reif und zu Kopfe steigt"
        },
        "line.19": {
            "text": "Strohdächer sich unter Schilf verstecken"
        },
        "line.20": {
            "text": "als Perückenträger ihr Gebälk nicht entblößen"
        },
        "line.21": {
            "text": "wer möchte sich die Blöße geben"
        },
        "line.22": {
            "text": "was offensichtlich"
        },
        "line.23": {
            "text": "schütter die Haare und es blinkt schon das Knie"
        },
        "line.24": {
            "text": "und der Mond, in die Bleiche mit ihm"
        },
        "line.25": {
            "text": "Lunte legen, riechen, Aroma buchstabieren"
        },
        "line.26": {
            "text": "oh weh, Kopf hat schon Schnee"
        },
        "line.27": {
            "text": "du sagst dazu ein Wort, das vielleicht"
        },
        "line.28": {
            "text": "zu viel an Liebenswürdigkeit"
        },
        "line.29": {
            "text": "mein Suchen vereitelt"
        }
    }
}