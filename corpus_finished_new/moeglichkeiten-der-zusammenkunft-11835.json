{
    "title": "moeglichkeiten-der-zusammenkunft-11835",
    "gender": "m",
    "author": "Steffen  Jacobs",
    "author_birth": "1968",
    "poem": {
        "line.1": {
            "text": "Manchmal nachts kommt ihm"
        },
        "line.2": {
            "text": "im Traum eine Frau,"
        },
        "line.3": {
            "text": "die er liebt,"
        },
        "line.4": {
            "text": "die ihn liebt."
        },
        "line.5": {
            "text": "Manchmal nachts"
        },
        "line.6": {
            "text": "kommt sie ihm vertraut vor,"
        },
        "line.7": {
            "text": "als wär es die Seine."
        },
        "line.8": {
            "text": "Ja, sie ist wirklich, diese Frau,"
        },
        "line.9": {
            "text": "unfaßbar wahr,"
        },
        "line.10": {
            "text": "und richtig"
        },
        "line.11": {
            "text": "ist er unfaßbar glücklich,"
        },
        "line.12": {
            "text": "wenn er aufwacht,"
        },
        "line.13": {
            "text": "weil im Bad ein Flakon klirrt:"
        },
        "line.14": {
            "text": "Sie ist wirklich, seine Frau."
        },
        "line.15": {
            "text": "Dann begleitet sie ihn"
        },
        "line.16": {
            "text": "vielleicht eine Weile,"
        },
        "line.17": {
            "text": "bis ans Ende des Tages,"
        },
        "line.18": {
            "text": "bis ans Ende der Tage,"
        },
        "line.19": {
            "text": "und immer sinnt er,"
        },
        "line.20": {
            "text": "woher er sie kennt,"
        },
        "line.21": {
            "text": "woher sie ihn."
        },
        "line.22": {
            "text": "Manchmal tags"
        },
        "line.23": {
            "text": "schaut sie ihn an,"
        },
        "line.24": {
            "text": "als ob das alles fraglos,"
        },
        "line.25": {
            "text": "als ob sie ohne Zweifel"
        },
        "line.26": {
            "text": "in der Welt wären, und es blitzt"
        },
        "line.27": {
            "text": "an ihrem Finger ein Ring,"
        },
        "line.28": {
            "text": "als wär es der Seine."
        },
        "line.29": {
            "text": "Sie aufs Neue zu binden,"
        },
        "line.30": {
            "text": "legt er sich nieder."
        },
        "line.31": {
            "text": "Abend für Abend"
        },
        "line.32": {
            "text": "schließt er die Augen,"
        },
        "line.33": {
            "text": "wie beim ersten Mal,"
        },
        "line.34": {
            "text": "wie zum letzten Mal, und"
        },
        "line.35": {
            "text": "manchmal findet er sie wieder."
        }
    }
}