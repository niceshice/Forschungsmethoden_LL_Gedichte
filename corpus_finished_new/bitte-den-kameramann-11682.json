{
    "title": "bitte-den-kameramann-11682",
    "gender": "m",
    "author": "Franz Hohler",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Könntest du"
        },
        "line.2": {
            "text": "Kameramann"
        },
        "line.3": {
            "text": "das nächstemal"
        },
        "line.4": {
            "text": "wenn du den Hunger filmst"
        },
        "line.5": {
            "text": "und auf die Fliegen zoomst"
        },
        "line.6": {
            "text": "an den Augen des äthiopischen Kindes"
        },
        "line.7": {
            "text": "könntest du dann"
        },
        "line.8": {
            "text": "deine Kamera sinken lassen"
        },
        "line.9": {
            "text": "und statt dessen"
        },
        "line.10": {
            "text": "die Fliegen vertreiben?"
        },
        "line.11": {
            "text": "Danke."
        }
    }
}