{
    "title": "gedicht-10717",
    "gender": "w",
    "author": "Ulla Hahn",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Für Proteus"
        },
        "line.2": {
            "text": "Denn bald hat man dich als Mann, bald als Löwen"
        },
        "line.3": {
            "text": "gesehen, bald warst du, grimmiger Eber, bald -"
        },
        "line.4": {
            "text": "entsetzlich anzufassen! - eine Schlange;"
        },
        "line.5": {
            "text": "bald machten Hörner dich zum Stier; oft"
        },
        "line.6": {
            "text": "konntest du wie ein Stein, oft auch wie ein Baum"
        },
        "line.7": {
            "text": "aussehen"
        },
        "line.8": {
            "text": "."
        },
        "line.9": {
            "text": "Ovid: Metamorphosen VIII"
        },
        "line.10": {
            "text": "Schwer zu erklären dass ein Gedicht"
        },
        "line.11": {
            "text": "keinen Gegenstand hat wie ein Schiff"
        },
        "line.12": {
            "text": "seine Container eine Jahreszeit ihre Blumen"
        },
        "line.13": {
            "text": "Unteilbar wie eine Primzahl"
        },
        "line.14": {
            "text": "Dass es flieht wie du vor der Zeit"
        },
        "line.15": {
            "text": "und vorbei ist"
        },
        "line.16": {
            "text": "wenn du zu schreiben aufhörst zu"
        },
        "line.17": {
            "text": "lesen aufhörst wenn du dich nicht"
        },
        "line.18": {
            "text": "mehr erinnerst was du gerade noch"
        },
        "line.19": {
            "text": "warst in einem Aufblitzen"
        },
        "line.20": {
            "text": "einem Moment lang ein Wort lang"
        },
        "line.21": {
            "text": "Schilfrohr Flamme Staub Komet"
        },
        "line.22": {
            "text": "der vorbeizischt ein Schwarm"
        },
        "line.23": {
            "text": "kleiner Vögel zwitschernd über"
        },
        "line.24": {
            "text": "uns alle hinweg nichts Greifbares"
        },
        "line.25": {
            "text": "nicht einmal schwarz auf weiß"
        },
        "line.26": {
            "text": "Höchstens Kindermalkasten"
        },
        "line.27": {
            "text": "springendes Wasser an dieser"
        },
        "line.28": {
            "text": "Erde festbinden Hostie"
        },
        "line.29": {
            "text": "unter der Zunge Vertrauen"
        },
        "line.30": {
            "text": "gelassen und blind Gespielt"
        },
        "line.31": {
            "text": "auf Syringen hart wie eine"
        },
        "line.32": {
            "text": "Brise so wie an den Hut getippt"
        },
        "line.33": {
            "text": "Jetzt und Vorbei Oh"
        },
        "line.34": {
            "text": "du Angst vor dem Ende endlose Angst"
        },
        "line.35": {
            "text": "dass alles vorbei ist bis alles vorbei ist"
        },
        "line.36": {
            "text": "solange wir schreiben"
        },
        "line.37": {
            "text": "solange wir lesen kann es"
        },
        "line.38": {
            "text": "kein Alles geben solange du schreibst"
        },
        "line.39": {
            "text": "solange du liest sind nur die anderen"
        },
        "line.40": {
            "text": "für dich gestorben wenn du es liest"
        },
        "line.41": {
            "text": "wenn es dich liest aus"
        },
        "line.42": {
            "text": "setzt unter wuchernden"
        },
        "line.43": {
            "text": "Himmeln Fallobst Septemberäpfel"
        },
        "line.44": {
            "text": "das Rohe und das Gekochte"
        },
        "line.45": {
            "text": "das Leere das Gestillte der Überfluss"
        },
        "line.46": {
            "text": "Hand und Fuß mit Schuhen und ohne"
        },
        "line.47": {
            "text": "Mann und Frau mit Sehnsucht"
        },
        "line.48": {
            "text": "und ohne Brotsuppe mit Bier Jetzt"
        },
        "line.49": {
            "text": "und Hier sag was du willst was"
        },
        "line.50": {
            "text": "willst du mehr als alles zurück und"
        },
        "line.51": {
            "text": "Für Immer Nichts hört auf"
        },
        "line.52": {
            "text": "wenn du aufhörst zu"
        },
        "line.53": {
            "text": "Sein oder? Nichtsein kann es nicht geben"
        },
        "line.54": {
            "text": "im Gedicht nicht geben und nicht im Leben"
        },
        "line.55": {
            "text": "Nimm das Holz aus der Glut Keiner"
        },
        "line.56": {
            "text": "den Asche erfreut Gib Namen Prämissen"
        },
        "line.57": {
            "text": "Gib Namen Kleine Unterkünfte über"
        },
        "line.58": {
            "text": "dem Abgrund gegründet All die Musik"
        },
        "line.59": {
            "text": "aus der Stille in Beethovens Ohr."
        },
        "line.60": {
            "text": "Abgestellt endgültig abgestellt Irgendwann wirklich"
        },
        "line.61": {
            "text": "das letzte Gedicht Darf keine Trauer sein"
        },
        "line.62": {
            "text": "Fangzahnordnung für ein paar"
        },
        "line.63": {
            "text": "Leichenteile kross schwimmend in Katastrophen"
        },
        "line.64": {
            "text": "und frischer Wäsche"
        },
        "line.65": {
            "text": "Rosen regnen herab keinerlei"
        },
        "line.66": {
            "text": "Messersschneiden Ziegelsteine"
        },
        "line.67": {
            "text": "Mag sein"
        },
        "line.68": {
            "text": "Gefaltete Hände von einem Fräulein"
        },
        "line.69": {
            "text": "die anno Nero schon"
        },
        "line.70": {
            "text": "Bravo Da capo Bravissimo rief."
        },
        "line.71": {
            "text": "(aus:"
        },
        "line.72": {
            "text": "Galileo und zwei Frauen"
        },
        "line.73": {
            "text": ", 1997)"
        }
    }
}