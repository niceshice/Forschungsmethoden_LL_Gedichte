{
    "title": "carbon-3795",
    "gender": "w",
    "author": "Sylvia  Geist",
    "author_birth": "1963",
    "poem": {
        "line.1": {
            "text": "für meinen vater,"
        },
        "line.2": {
            "text": "vom 15.-18. lebensjahr"
        },
        "line.3": {
            "text": "bergmann"
        },
        "line.4": {
            "text": "I."
        },
        "line.5": {
            "text": "erste schicht -"
        },
        "line.6": {
            "text": "einmal heißt das fallen"
        },
        "line.7": {
            "text": "lernen. ja"
        },
        "line.8": {
            "text": "so. lotrecht. ohne schwindel"
        },
        "line.9": {
            "text": "fest das"
        },
        "line.10": {
            "text": "gesicht halten. nach über-"
        },
        "line.11": {
            "text": "tage. tunnel"
        },
        "line.12": {
            "text": "sind die eine seite."
        },
        "line.13": {
            "text": "für meinen sohn"
        },
        "line.14": {
            "text": "II."
        },
        "line.15": {
            "text": "wie neige"
        },
        "line.16": {
            "text": "ausgesprochen das in wärme"
        },
        "line.17": {
            "text": "geschürfte strebe"
        },
        "line.18": {
            "text": "geräusch. schraubflöten fürn abraum"
        },
        "line.19": {
            "text": "möglich aber"
        },
        "line.20": {
            "text": "kreise ins eis kaum."
        },
        "line.21": {
            "text": "schreib auf"
        },
        "line.22": {
            "text": "ganz unten: das helle"
        }
    }
}