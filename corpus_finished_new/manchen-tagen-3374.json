{
    "title": "manchen-tagen-3374",
    "gender": "m",
    "author": "Jürgen  Nendza",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "An manchen Tagen"
        },
        "line.2": {
            "text": "erscheint er"
        },
        "line.3": {
            "text": "wie ein Glück, der Schatten,"
        },
        "line.4": {
            "text": "der durch das Zimmer wandert"
        },
        "line.5": {
            "text": "über die unerledigten Dinge. Draußen"
        },
        "line.6": {
            "text": "steckt das Schnittmuster der Bäume"
        },
        "line.7": {
            "text": "voller Möglichkeitssinn."
        },
        "line.8": {
            "text": "Wir haben Blaubeeren gegessen"
        },
        "line.9": {
            "text": "von verwilderten Gräbern"
        },
        "line.10": {
            "text": "und niemand weiß, wie viel"
        },
        "line.11": {
            "text": "Zeitraffer liegt in einem Wort. Das Licht"
        },
        "line.12": {
            "text": "synchronisiert uns mit dem Pfifflaut"
        },
        "line.13": {
            "text": "der Delphine, die Verborgenes sehen können."
        },
        "line.14": {
            "text": "Ich sehe einen Vogelschwarm"
        },
        "line.15": {
            "text": "von deiner Haut auffliegen und denke mir"
        },
        "line.16": {
            "text": "einen Rationalisten, der einen Sombrero trägt."
        }
    }
}