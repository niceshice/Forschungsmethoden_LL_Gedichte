{
    "title": "eine-beobachtung-beim-austausch-von-funktionseliten-346",
    "gender": "m",
    "author": "Hans Magnus Enzensberger",
    "author_birth": "1929",
    "poem": {
        "line.1": {
            "text": "Dieses schürfende Geräusch,"
        },
        "line.2": {
            "text": "ein Scharren, Tag und Nacht,"
        },
        "line.3": {
            "text": "von Zehen, Fingern, Krallen"
        },
        "line.4": {
            "text": "das kommt vom Kratzen,"
        },
        "line.5": {
            "text": "vom Klettern, vom Krabbeln derer,"
        },
        "line.6": {
            "text": "die da mit angehaltenem Atem"
        },
        "line.7": {
            "text": "hochwollen, hoch,"
        },
        "line.8": {
            "text": "immer höher, voll Angst,"
        },
        "line.9": {
            "text": "Angst, daß der sandige Hang"
        },
        "line.10": {
            "text": "nachgibt unter den Nägeln,"
        },
        "line.11": {
            "text": "so, daß sie abwärts, dahin,"
        },
        "line.12": {
            "text": "wo sie herkamen, rutschen,"
        },
        "line.13": {
            "text": "und zwar, je mehr sie, in Panik,"
        },
        "line.14": {
            "text": "noch ehe die mürbe Kante"
        },
        "line.15": {
            "text": "bröselt, bricht, auf allem,"
        },
        "line.16": {
            "text": "was sie unter sich vermuten,"
        },
        "line.17": {
            "text": "anfangen herumzutrampeln,"
        },
        "line.18": {
            "text": "desto tiefer, unaufhaltsam,"
        },
        "line.19": {
            "text": "nach unten"
        }
    }
}