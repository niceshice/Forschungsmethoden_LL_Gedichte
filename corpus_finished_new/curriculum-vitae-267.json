{
    "title": "curriculum-vitae-267",
    "gender": "w",
    "author": "Ingeborg Bachmann",
    "author_birth": "1926",
    "poem": {
        "line.1": {
            "text": "Lang ist die Nacht,"
        },
        "line.2": {
            "text": "lang für den Mann,"
        },
        "line.3": {
            "text": "der nicht sterben kann, lang"
        },
        "line.4": {
            "text": "unter Straßenlaternen schwankt"
        },
        "line.5": {
            "text": "sein nacktes Aug und sein Aug"
        },
        "line.6": {
            "text": "schnapsatemblind, und Geruch"
        },
        "line.7": {
            "text": "von nassem Fleisch unter seinen Nägeln"
        },
        "line.8": {
            "text": "betäubt ihn nicht immer, o Gott,"
        },
        "line.9": {
            "text": "lang ist die Nacht."
        },
        "line.10": {
            "text": "Mein Haar wird nicht weiß,"
        },
        "line.11": {
            "text": "den ich kroch aus dem Schoß von Maschinen,"
        },
        "line.12": {
            "text": "Rosenrot strich mir Teer auf die Stirn"
        },
        "line.13": {
            "text": "und die Strähnen, man hatt ihr"
        },
        "line.14": {
            "text": "die schneeweiße Schwester erwürgt. Aber ich,"
        },
        "line.15": {
            "text": "der Häuptling, schritt durch die Stadt"
        },
        "line.16": {
            "text": "von zehnmalhunderttausend Seelen, und mein Fuß"
        },
        "line.17": {
            "text": "trat auf die Seelenasseln unterm Lederhimmel,"
        },
        "line.18": {
            "text": "aus dem"
        },
        "line.19": {
            "text": "zehnmalhunderttausend Friedenspfeifen"
        },
        "line.20": {
            "text": "hingen, kalt. Engelsruhe"
        },
        "line.21": {
            "text": "wünscht ich mir oft"
        },
        "line.22": {
            "text": "und Jagdgründe, voll"
        },
        "line.23": {
            "text": "vom ohnmächtigen Geschrei"
        },
        "line.24": {
            "text": "meiner Freunde."
        },
        "line.25": {
            "text": "Mit gespreizten Beinen und Flügeln,"
        },
        "line.26": {
            "text": "binsenweis stieg die Jugend"
        },
        "line.27": {
            "text": "über mich, über Jauche, über Jasmin gings"
        },
        "line.28": {
            "text": "in die riesigen Nächte mit dem Quadrat-"
        },
        "line.29": {
            "text": "wurzelgeheimnis, es haucht die Sage"
        },
        "line.30": {
            "text": "des Tods stündlich mein Fenster an,"
        },
        "line.31": {
            "text": "Wolfsmilch gebt mir und schüttet"
        },
        "line.32": {
            "text": "in meinen Rachen das Lachen"
        },
        "line.33": {
            "text": "der Alten vor mir, wenn ich in Schlaf"
        },
        "line.34": {
            "text": "fall über den Folianten,"
        },
        "line.35": {
            "text": "in den beschämenden Traum,"
        },
        "line.36": {
            "text": "daß ich nicht taug für Gedanken,"
        },
        "line.37": {
            "text": "mit Troddeln spiel,"
        },
        "line.38": {
            "text": "aus denen Schlangen fransen."
        },
        "line.39": {
            "text": "Auch unsere Mütter haben"
        },
        "line.40": {
            "text": "von der Zukunft ihrer Männer geträumt,"
        },
        "line.41": {
            "text": "sie haben sie mächtig gesehen,"
        },
        "line.42": {
            "text": "revolutionär und einsam,"
        },
        "line.43": {
            "text": "doch nach der Andacht im Garten"
        },
        "line.44": {
            "text": "über das flammende Unkraut gebeugt,"
        },
        "line.45": {
            "text": "Hand in Hand mit dem geschwätzigen"
        },
        "line.46": {
            "text": "Kind ihrer Liebe. Mein trauriger Vater,"
        },
        "line.47": {
            "text": "warum habt ihr damals geschwiegen"
        },
        "line.48": {
            "text": "und nicht weitergedacht?"
        },
        "line.49": {
            "text": "Verloren in den Feuerfontänen,"
        },
        "line.50": {
            "text": "in einer Nacht neben einem Geschütz,"
        },
        "line.51": {
            "text": "das nicht feuert, verdammt lang"
        },
        "line.52": {
            "text": "ist die Nacht, unter dem Auswurf"
        },
        "line.53": {
            "text": "des gelbsüchtigen Monds, seinem galligen"
        },
        "line.54": {
            "text": "Licht, fegt in der Machttraumspur"
        },
        "line.55": {
            "text": "über mich (das halt ich nicht ab)"
        },
        "line.56": {
            "text": "der Schlitten mit der verbrämten"
        },
        "line.57": {
            "text": "Geschichte hinweg."
        },
        "line.58": {
            "text": "Nicht das ich schlief: wach war ich,"
        },
        "line.59": {
            "text": "zwischen Eisskeletten sucht ich den Weg,"
        },
        "line.60": {
            "text": "kam heim, wand mir Efeu"
        },
        "line.61": {
            "text": "um Arm und Bein und weißte"
        },
        "line.62": {
            "text": "mit Sonnenresten die Ruinen."
        },
        "line.63": {
            "text": "Ich hielt die hohen Feiertage,"
        },
        "line.64": {
            "text": "und erst wenn es gelobt war,"
        },
        "line.65": {
            "text": "brach ich das Brot."
        },
        "line.66": {
            "text": "In einer großspurigen Zeit"
        },
        "line.67": {
            "text": "muß man rasch von einem Licht"
        },
        "line.68": {
            "text": "ins andre gehen, von einem Land"
        },
        "line.69": {
            "text": "ins andre, unterm Regenbogen,"
        },
        "line.70": {
            "text": "die Zirkelspitze im Herzen,"
        },
        "line.71": {
            "text": "zum Radius genommen die Nacht."
        },
        "line.72": {
            "text": "Weit offen. Von den Bergen"
        },
        "line.73": {
            "text": "sieht man Seen, in den Seen"
        },
        "line.74": {
            "text": "Berge, und im Wolkengestühl"
        },
        "line.75": {
            "text": "schaukeln die Glocken"
        },
        "line.76": {
            "text": "der einen Welt. Wessen Welt"
        },
        "line.77": {
            "text": "zu wissen, ist mir verboten."
        },
        "line.78": {
            "text": "An einem Freitag geschahs"
        },
        "line.79": {
            "text": "ich fastete um mein Leben,"
        },
        "line.80": {
            "text": "die Luft troff vom Saft der Zitronen"
        },
        "line.81": {
            "text": "und die Gräte stak mir im Gaumen"
        },
        "line.82": {
            "text": "da löst ich aus dem entfalteten Fisch"
        },
        "line.83": {
            "text": "einen Ring, der, ausgeworfen"
        },
        "line.84": {
            "text": "bei meiner Geburt, in den Strom"
        },
        "line.85": {
            "text": "der Nacht fiel und versank."
        },
        "line.86": {
            "text": "Ich warf ihn zurück in die Nacht."
        },
        "line.87": {
            "text": "O hätt ich nicht Todesfurcht!"
        },
        "line.88": {
            "text": "Hätt ich das Wort,"
        },
        "line.89": {
            "text": "(verfehlt ichs nicht),"
        },
        "line.90": {
            "text": "hätt ich nicht Disteln im Herz,"
        },
        "line.91": {
            "text": "(schlüg ich die Sonne nicht aus),"
        },
        "line.92": {
            "text": "hätt ich nicht Gier im Mund,"
        },
        "line.93": {
            "text": "(tränk ich das wilde Wasser nicht),"
        },
        "line.94": {
            "text": "schlüg ich die Wimper nicht auf,"
        },
        "line.95": {
            "text": "(hätt ich die Schnur nicht gesehn)."
        },
        "line.96": {
            "text": "Ziehn sie den Himmel fort?"
        },
        "line.97": {
            "text": "Trüg mich die Erde nicht,"
        },
        "line.98": {
            "text": "läg ich schon lange still,"
        },
        "line.99": {
            "text": "läg ich schon lang,"
        },
        "line.100": {
            "text": "wo die Nacht mich will,"
        },
        "line.101": {
            "text": "eh sie die Nüstern bläht"
        },
        "line.102": {
            "text": "und ihren Huf hebt"
        },
        "line.103": {
            "text": "zu neuen Schlägen,"
        },
        "line.104": {
            "text": "immer zum Schlag."
        },
        "line.105": {
            "text": "Immer die Nacht."
        },
        "line.106": {
            "text": "Und kein Tag."
        }
    }
}