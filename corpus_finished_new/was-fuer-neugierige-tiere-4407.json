{
    "title": "was-fuer-neugierige-tiere-4407",
    "gender": "w",
    "author": "Ann Cotten",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "Niemand lebt von ihrem blassen Fleisch,"
        },
        "line.2": {
            "text": "eigentlich können sie nur alles falsch machen."
        },
        "line.3": {
            "text": "Verschlucken Haken, ohne zu krepieren,"
        },
        "line.4": {
            "text": "werden von Monofilamenten zerrissen."
        },
        "line.5": {
            "text": "Zerquetscht in Schleusen, in Schutzen"
        },
        "line.6": {
            "text": "vor Fluten zerstückelt, eingezwängt in"
        },
        "line.7": {
            "text": "Wasserregulierungseinrichtungen, tot"
        },
        "line.8": {
            "text": "durch Unterführungskanäle geschoben,"
        },
        "line.9": {
            "text": "fatal verstrickt in Treibnetzen und Reusen,"
        },
        "line.10": {
            "text": "bringen"
        },
        "line.11": {
            "text": "red tides"
        },
        "line.12": {
            "text": "sie um,"
        },
        "line.13": {
            "text": "Blüten von Algen vertragen sie nicht."
        },
        "line.14": {
            "text": "Sie mögen warmes Wasser, sie leben"
        },
        "line.15": {
            "text": "in wilder Ehe mit kalorischen"
        },
        "line.16": {
            "text": "Betrieben, untersuchen"
        },
        "line.17": {
            "text": "die Wärmequelle, werden"
        },
        "line.18": {
            "text": "von Propellern in Teile zerlegt."
        },
        "line.19": {
            "text": "Oft kratzen sie Kiele, und sie sterben"
        },
        "line.20": {
            "text": "viel später an Infektionen oder"
        },
        "line.21": {
            "text": "Blutungen der inneren Organe."
        }
    }
}