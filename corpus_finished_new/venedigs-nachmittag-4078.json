{
    "title": "venedigs-nachmittag-4078",
    "gender": "m",
    "author": "Norbert C. Kaser",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "venedigs kinderwaegen"
        },
        "line.2": {
            "text": "muessen sehr stabil sein"
        },
        "line.3": {
            "text": "weil sie die muetter"
        },
        "line.4": {
            "text": "geschickt ueber die stufen"
        },
        "line.5": {
            "text": "der bruecken springen lassen"
        },
        "line.6": {
            "text": "die kinder prasseln"
        },
        "line.7": {
            "text": "auf rollschuhen"
        },
        "line.8": {
            "text": "ueber die kleinen plaetze"
        },
        "line.9": {
            "text": "keiner macht platz"
        },
        "line.10": {
            "text": "wenn du ihm im gedaerm der gassen"
        },
        "line.11": {
            "text": "begegnest"
        },
        "line.12": {
            "text": "denn er hat sein eigenes haus hier"
        },
        "line.13": {
            "text": "auch wenn es"
        },
        "line.14": {
            "text": "aus nur drei steilen uebereinandergelegten"
        },
        "line.15": {
            "text": "fenstern besteht"
        },
        "line.16": {
            "text": "jeder hat sein haus"
        },
        "line.17": {
            "text": "seinen stolz der ihm verbietet"
        },
        "line.18": {
            "text": "nicht zu sein"
        },
        "line.19": {
            "text": "was die stadt an ruhm von ihm fordert"
        },
        "line.20": {
            "text": "ins fuenfte vierte fenster"
        },
        "line.21": {
            "text": "steigt auch kein geruch"
        },
        "line.22": {
            "text": "vom mueden wasser"
        },
        "line.23": {
            "text": "in den mansarden wie immer"
        },
        "line.24": {
            "text": "studenten"
        },
        "line.25": {
            "text": "vor dem sechsten fenster"
        },
        "line.26": {
            "text": "katzen auf leichtgebrannten ziegeln"
        },
        "line.27": {
            "text": "vom nachbarn"
        },
        "line.28": {
            "text": "im gedaerm des gehirns"
        },
        "line.29": {
            "text": "eine menge von"
        },
        "line.30": {
            "text": "frauen programmen umsturz"
        },
        "line.31": {
            "text": "so sind sie mir fremd"
        },
        "line.32": {
            "text": "(ich habe sie gekannt, als sie mich in den"
        },
        "line.33": {
            "text": "schulpausen an die wand drueckten)"
        },
        "line.34": {
            "text": "so sind sie mir fremd"
        },
        "line.35": {
            "text": "weil sie leben muessen was sie sagen"
        },
        "line.36": {
            "text": "sie haben kein haus"
        },
        "line.37": {
            "text": "die zeitung ist genug"
        },
        "line.38": {
            "text": "die wahrheit"
        },
        "line.39": {
            "text": "rot der kirche an die wand geschmiert"
        },
        "line.40": {
            "text": "rot der kirche an den bauch geschmiert"
        },
        "line.41": {
            "text": "und nichts als die wahrheit"
        },
        "line.42": {
            "text": "die kinder teufeln"
        },
        "line.43": {
            "text": "auf rollschuhen"
        },
        "line.44": {
            "text": "ueber die kleinen plaetze"
        },
        "line.45": {
            "text": "und nichts als die wahrheit"
        },
        "line.46": {
            "text": "vor der alles zum venezianerpilatus"
        },
        "line.47": {
            "text": "wird"
        },
        "line.48": {
            "text": "bis auf die frauen"
        },
        "line.49": {
            "text": "die ihre kinderwaegen geschickt ueber"
        },
        "line.50": {
            "text": "die stufen springen lassen"
        },
        "line.51": {
            "text": "und das gemuese kaufen"
        },
        "line.52": {
            "text": "wo es am billigsten ist."
        },
        "line.53": {
            "text": "21. 4. 69"
        }
    }
}