{
    "title": "ein-hoehenkurort-2001-1590",
    "gender": "w",
    "author": "Erika Burkart",
    "author_birth": "1922",
    "poem": {
        "line.1": {
            "text": "Lästig sind mir auf dem Waldweg"
        },
        "line.2": {
            "text": "keuchende Jogger und Biker."
        },
        "line.3": {
            "text": "Den Starrblick über dem Lenker"
        },
        "line.4": {
            "text": "dicht an der Stoppuhr,"
        },
        "line.5": {
            "text": "den Leerblick im Eiswind,"
        },
        "line.6": {
            "text": "sehen sie gar nichts,"
        },
        "line.7": {
            "text": "weder Felsenkronen noch Mohrenfalter,"
        },
        "line.8": {
            "text": "um ganz zu schweigen"
        },
        "line.9": {
            "text": "von Linns Moosglöcklein, nistend"
        },
        "line.10": {
            "text": "auf einem zu Höhlen"
        },
        "line.11": {
            "text": "verrottenden Strunk."
        },
        "line.12": {
            "text": "Durch das Fenster"
        },
        "line.13": {
            "text": "schaue ich auf zu den Bergen,"
        },
        "line.14": {
            "text": "sehe die Nebel aus Schluchten quellen;"
        },
        "line.15": {
            "text": "ihre Schatten, gemalt"
        },
        "line.16": {
            "text": "mit trocknem, mit triefendem Pinsel"
        },
        "line.17": {
            "text": "auf Ödland eine Schöpfung,"
        },
        "line.18": {
            "text": "die sich zuend denkt"
        },
        "line.19": {
            "text": "ohne uns, das Hirn der Erde,"
        },
        "line.20": {
            "text": "schlaflose Auge im Raum."
        }
    }
}