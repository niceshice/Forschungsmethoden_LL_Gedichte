{
    "title": "schutzmantelmadonna-1365",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "Roben und Stuck"
        },
        "line.2": {
            "text": "etwa Schadenszauber, versponnen, sie habe"
        },
        "line.3": {
            "text": "ihre Tapeten mit langen Lamettafäden beklebt,"
        },
        "line.4": {
            "text": "ihre Wände verkleidet mit Goldborke, Goldbrokat"
        },
        "line.5": {
            "text": "gegen den Frost der aus ihrer Kehle"
        },
        "line.6": {
            "text": "herausfahre, rauh wie aus Orgelpfeifen"
        },
        "line.7": {
            "text": "ein kalter glitzernder Strom (sie erbreche"
        },
        "line.8": {
            "text": "die eigene Zunge als ließe sich dadurch"
        },
        "line.9": {
            "text": "Verborgenes sichtbar machen...)"
        },
        "line.10": {
            "text": "im Strahlenkranz"
        },
        "line.11": {
            "text": "Perlen auf lebende Haare gefädelt,"
        },
        "line.12": {
            "text": "Atemschnur, Grabbeigabe in diesem"
        },
        "line.13": {
            "text": "nicht enden wollenden Winter, die"
        },
        "line.14": {
            "text": "eigenen Kleider mit Schneiderkreide markiert,"
        },
        "line.15": {
            "text": "heimlich Bannkreise darauf gezogen,"
        },
        "line.16": {
            "text": "die Sterne gedeutet und darin nur dich gesucht,"
        },
        "line.17": {
            "text": "Glaskugeln nach dir befragt, klare Glühbirnen,"
        },
        "line.18": {
            "text": "rundliche Lampenschirme als seiest du"
        },
        "line.19": {
            "text": "eine Lichtgestalt, ein flachbrüstiges Leuchten, Tauben"
        },
        "line.20": {
            "text": "schlafen nachts auf deinem Haupt wenn du"
        },
        "line.21": {
            "text": "innerlich brennend als schweigende Straßenlaterne"
        },
        "line.22": {
            "text": "vor ihrem Fenster wachst"
        }
    }
}