{
    "title": "der-unnuetze-11677",
    "gender": "m",
    "author": "Franz Hohler",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "Schon lange"
        },
        "line.2": {
            "text": "sollte ich den Thujabaum"
        },
        "line.3": {
            "text": "vor meinem Fenster"
        },
        "line.4": {
            "text": "fällen"
        },
        "line.5": {
            "text": "alle, die von Gärten was verstehen"
        },
        "line.6": {
            "text": "raten mir's"
        },
        "line.7": {
            "text": "er ist zu schnell gewachsen"
        },
        "line.8": {
            "text": "seinerzeit"
        },
        "line.9": {
            "text": "und ragt nun"
        },
        "line.10": {
            "text": "alt und viel zu schütter"
        },
        "line.11": {
            "text": "bis zum zweiten Stock"
        },
        "line.12": {
            "text": "frißt Licht und Boden"
        },
        "line.13": {
            "text": "aber dient zu nichts."
        },
        "line.14": {
            "text": "Jetzt sitzt ein Star"
        },
        "line.15": {
            "text": "auf einem seiner Äste"
        },
        "line.16": {
            "text": "putzt die Federn"
        },
        "line.17": {
            "text": "schlägt dann seine Flügel"
        },
        "line.18": {
            "text": "und singt den Morgen ein"
        },
        "line.19": {
            "text": "der müßte sonst woanders sitzen"
        },
        "line.20": {
            "text": "denk ich"
        },
        "line.21": {
            "text": "und es freut mich"
        },
        "line.22": {
            "text": "daß er ausgerechnet hier"
        },
        "line.23": {
            "text": "die Flügel schlägt"
        },
        "line.24": {
            "text": "und singt"
        },
        "line.25": {
            "text": "auf diesem ausgedörrten Ast"
        },
        "line.26": {
            "text": "der leise schwankt"
        },
        "line.27": {
            "text": "an einem Baum"
        },
        "line.28": {
            "text": "der gar nichts nützt."
        }
    }
}