{
    "title": "automatisches-morgendiktat-mit-meinem-kritischen-hund-13564",
    "gender": "w",
    "author": "Mara-Daria Cojocaru",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "Mit einem Ohrenzucken schickt er die Sonne"
        },
        "line.2": {
            "text": "Als Erstes duschen"
        },
        "line.3": {
            "text": "Wir bleiben liegen, trödeln"
        },
        "line.4": {
            "text": "Ein Traum von gestern klopft übers Pfotenspiel"
        },
        "line.5": {
            "text": "Den Tag genau auf die Belastbarkeiten ab"
        },
        "line.6": {
            "text": "Ich mache das Notat"
        },
        "line.7": {
            "text": "Ein Schluchzen jagt die Herde lang vertaner Chancen"
        },
        "line.8": {
            "text": "Und unsre frisch geborenen Fohlen"
        },
        "line.9": {
            "text": "Über den angefrorenen Boden"
        },
        "line.10": {
            "text": "Das Gras wächst grölend, stinkend, sauer"
        },
        "line.11": {
            "text": "Der Wind schwimmt"
        },
        "line.12": {
            "text": "Mit den Sirenen"
        },
        "line.13": {
            "text": "Um die Wette, durch die Luft, über die Mauer"
        },
        "line.14": {
            "text": "Dringt der Geruch vom Rückzug unsres stadtbekannten Fuchses"
        },
        "line.15": {
            "text": "All das verschwindet hinterm steckdosengroßen, nassen"
        },
        "line.16": {
            "text": "Unvergleichlich schwarzen, makrosmatisch mysteriösen Nasen"
        },
        "line.17": {
            "text": "Spiegel: Wir lecken die Lefzen und Lippen im Wechsel"
        },
        "line.18": {
            "text": "Schmecken im Philtrum den Wert ab"
        },
        "line.19": {
            "text": "Den es hat, als Erstes in der Welt"
        },
        "line.20": {
            "text": "Im Fell zu sein"
        },
        "line.21": {
            "text": "Und feiern das bisschen"
        },
        "line.22": {
            "text": "Anthropomorphismus"
        },
        "line.23": {
            "text": "Mit kleinem Tanz und Schwanz"
        },
        "line.24": {
            "text": "Wedeln an der Schwelle zum Bewusstsein"
        },
        "line.25": {
            "text": "Ich lese ihm das vor, er nimmt es mir nicht ab"
        },
        "line.26": {
            "text": "Und bedeutet, er ginge sich, noch heute, einen"
        },
        "line.27": {
            "text": "Neuen Menschen"
        },
        "line.28": {
            "text": "Kaufen"
        },
        "line.29": {
            "text": "** Ich reibe es ihm noch einmal anders"
        },
        "line.30": {
            "text": "Unter die Nase, mit mehr Rhythmus"
        },
        "line.31": {
            "text": "Und spiel die zweite Hand"
        },
        "line.32": {
            "text": "Dabei auf seinem Bauch"
        },
        "line.33": {
            "text": "Wo das Fell dünn wird und hoch"
        },
        "line.34": {
            "text": "Unter die erhobene Pfote"
        },
        "line.35": {
            "text": "Wir sind doch beide pleite"
        },
        "line.36": {
            "text": "Jetzt gefällts ihm auch"
        }
    }
}