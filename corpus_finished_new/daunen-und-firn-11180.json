{
    "title": "daunen-und-firn-11180",
    "gender": "m",
    "author": "Tobias Roth",
    "author_birth": "1985",
    "poem": {
        "line.1": {
            "text": "Da wandelt auf unruhigen Feldern"
        },
        "line.2": {
            "text": "Leukothea, Amme des Rausches einst, jetzt"
        },
        "line.3": {
            "text": "Liguster und Jasmin, keine Hilfe mehr."
        },
        "line.4": {
            "text": "Wenn der Wind in alles Wellen kämmt"
        },
        "line.5": {
            "text": "Und der Himmel"
        },
        "line.6": {
            "text": "Nicht einen Moment"
        },
        "line.7": {
            "text": "Der gleiche ist."
        },
        "line.8": {
            "text": "So wenig, klagt sie über uns,"
        },
        "line.9": {
            "text": "Raum, um weich zu sein."
        },
        "line.10": {
            "text": "Lichtpunkte auf den"
        },
        "line.11": {
            "text": "Weißen Haaren des Meeres,"
        },
        "line.12": {
            "text": "Auf vergletscherten Graten,"
        },
        "line.13": {
            "text": "Zittern des Zitterns."
        },
        "line.14": {
            "text": "Doch man schmiegt sich in die"
        },
        "line.15": {
            "text": "Letzten Winkel und Ecken."
        },
        "line.16": {
            "text": "Die letzte klare Form"
        },
        "line.17": {
            "text": "Im Dünnschliff des Turmalins,"
        },
        "line.18": {
            "text": "Die als Wunde des Sündenbocks"
        },
        "line.19": {
            "text": "Wie in Kirchenfenstern"
        },
        "line.20": {
            "text": "Brennt und blüht;"
        },
        "line.21": {
            "text": "Wir hoffen, es war der letzte"
        },
        "line.22": {
            "text": "Und den Lämmern langes Leben:"
        },
        "line.23": {
            "text": "Die uns verweisen,"
        },
        "line.24": {
            "text": "Die wir vergleichen:"
        },
        "line.25": {
            "text": "Unsere stete Nähe zu,"
        },
        "line.26": {
            "text": "Unsere stete Sehnsucht nach"
        },
        "line.27": {
            "text": "Daunen und Firn."
        },
        "line.28": {
            "text": "Unter ausgeblühten Bäumen,"
        },
        "line.29": {
            "text": "Zwischen weißen Dolden,"
        },
        "line.30": {
            "text": "Durch die schräg der Wind geht."
        }
    }
}