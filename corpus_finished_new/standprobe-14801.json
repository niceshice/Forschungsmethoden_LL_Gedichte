{
    "title": "standprobe-14801",
    "gender": "m",
    "author": "Eberhard Häfner",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "hatte eine Farm in Steinbach-Hallenberg"
        },
        "line.2": {
            "text": "In den Bächen hallen die Steine"
        },
        "line.3": {
            "text": "auffällig laut, aus ihrer Fassung springen"
        },
        "line.4": {
            "text": "die bleichen Bettnässer, geschliffene Kiesel"
        },
        "line.5": {
            "text": "das Zeitfenster aufstoßen"
        },
        "line.6": {
            "text": "während der Hinterwald eine Versuchsanstalt"
        },
        "line.7": {
            "text": "noch zeigt sich Frühling prüde"
        },
        "line.8": {
            "text": "eiskalt die Wasserschenkel, in meiner Sichtachse"
        },
        "line.9": {
            "text": "schraffierte Seitenansicht, im Windschatten"
        },
        "line.10": {
            "text": "Fichten, ihr lichtgrünes Gift"
        },
        "line.11": {
            "text": "fadenscheinig, erwartet die Anemonenzeit"
        },
        "line.12": {
            "text": "die weißen honiglosen Augen"
        },
        "line.13": {
            "text": "optimal abgestimmt mit der randlosen"
        },
        "line.14": {
            "text": "gottgefälligen Sehhilfe, Stellung bezogen"
        },
        "line.15": {
            "text": "der blinde Fleck vor der Nase, ein Versteck"
        },
        "line.16": {
            "text": "für mein Narrenschiff"
        },
        "line.17": {
            "text": "ach Wald, hier dein Stallknecht, zur Rechten ein Stein"
        },
        "line.18": {
            "text": "links eine Stutzmaschine, sie schluckt"
        },
        "line.19": {
            "text": "bis keine Wimper mehr tropft"
        },
        "line.20": {
            "text": "in weißen honiglosen Augen steht das Grauen"
        },
        "line.21": {
            "text": "fließt den Bach runter"
        }
    }
}