{
    "title": "pustekuchen-484",
    "gender": "m",
    "author": "Günter Saalmann",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Hier hab ich mit Schnörkeln,"
        },
        "line.2": {
            "text": "Krönchen und Zacken"
        },
        "line.3": {
            "text": "den berühmten"
        },
        "line.4": {
            "text": "Pustekuchen gebacken."
        },
        "line.5": {
            "text": "Mit Schaumzucker, Windei"
        },
        "line.6": {
            "text": "und Puffreisstäubchen,"
        },
        "line.7": {
            "text": "mit Blumenbutter,"
        },
        "line.8": {
            "text": "Rosinenscheibchen."
        },
        "line.9": {
            "text": "Mit Luftschokolade"
        },
        "line.10": {
            "text": "hauchdünn übergossen:"
        },
        "line.11": {
            "text": "Bauchweh ist praktisch"
        },
        "line.12": {
            "text": "ganz ausgeschlossen."
        },
        "line.13": {
            "text": "Zum Kindergeburtstag,"
        },
        "line.14": {
            "text": "zu großen Volksfesten,"
        },
        "line.15": {
            "text": "mit Mondschein gebacken"
        },
        "line.16": {
            "text": "schmeckt er am besten."
        },
        "line.17": {
            "text": "Falls er noch heiß ist:"
        },
        "line.18": {
            "text": "Vorsicht beim Pusten!"
        },
        "line.19": {
            "text": "Bäckst du ihn auch mal?"
        },
        "line.20": {
            "text": "Oder was tustn?"
        }
    }
}