{
    "title": "der-unsterbliche-3706",
    "gender": "m",
    "author": "Richard  Anders",
    "author_birth": "1928",
    "poem": {
        "line.1": {
            "text": "Glatt gebürstet"
        },
        "line.2": {
            "text": "vom Schnee-"
        },
        "line.3": {
            "text": "vom Sterngestöber"
        },
        "line.4": {
            "text": "das Marmorhaar"
        },
        "line.5": {
            "text": "Unter der Stirn"
        },
        "line.6": {
            "text": "statt der Augen"
        },
        "line.7": {
            "text": "bis auf die Knochen"
        },
        "line.8": {
            "text": "durchsichtige Topase"
        },
        "line.9": {
            "text": "So fest geschlossen"
        },
        "line.10": {
            "text": "daß zwischen den Lippen"
        },
        "line.11": {
            "text": "Messer zerspringen"
        },
        "line.12": {
            "text": "der Marmormund"
        },
        "line.13": {
            "text": "Den Marmorhut"
        },
        "line.14": {
            "text": "in der Marmorhand"
        },
        "line.15": {
            "text": "den Marmorfuß"
        },
        "line.16": {
            "text": "im Marmorschuh"
        },
        "line.17": {
            "text": "zögert er eine Ewigkeit"
        },
        "line.18": {
            "text": "ehe er sich schweren Schritts"
        },
        "line.19": {
            "text": "von seinem Schatten trennt"
        },
        "line.20": {
            "text": "und über den Sockelrand stürzt"
        }
    }
}