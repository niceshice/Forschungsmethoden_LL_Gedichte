{
    "title": "eigenartig-wie-rastlos-wir-unterwegs-sind-11476",
    "gender": "m",
    "author": "Franz Dodel",
    "author_birth": "1949",
    "poem": {
        "line.1": {
            "text": "eigenartig wie rastlos"
        },
        "line.2": {
            "text": "wir unterwegs sind"
        },
        "line.3": {
            "text": "Licht zu entdecken und es"
        },
        "line.4": {
            "text": "freilegen wo es"
        },
        "line.5": {
            "text": "sich sicher wähnte vor uns"
        },
        "line.6": {
            "text": "weder im Branntwein"
        },
        "line.7": {
            "text": "noch in Schwefelsäure nicht"
        },
        "line.8": {
            "text": "zerschnitten oder"
        },
        "line.9": {
            "text": "zerrissen und auch im Tod"
        },
        "line.10": {
            "text": "zeigen Medusen"
        },
        "line.11": {
            "text": "keinerlei Spuren von Licht"
        },
        "line.12": {
            "text": "dies stellt Christian"
        },
        "line.13": {
            "text": "Gottfried Ehrenberg fest der"
        },
        "line.14": {
            "text": "das Meeresleuchten"
        },
        "line.15": {
            "text": "gründlich untersucht hat doch"
        },
        "line.16": {
            "text": "an diesen Tieren"
        },
        "line.17": {
            "text": "nicht beobachten konnte"
        },
        "line.18": {
            "text": "mag sein dass es stimmt"
        },
        "line.19": {
            "text": "was andere berichten:"
        },
        "line.20": {
            "text": "vor Siam leuchte"
        },
        "line.21": {
            "text": "das südliche Meer weil es"
        },
        "line.22": {
            "text": "unaufhörlich das"
        },
        "line.23": {
            "text": "Licht einsauge der Sonne"
        },
        "line.24": {
            "text": "und dasselbe Licht"
        },
        "line.25": {
            "text": "lasse Eidechseneier"
        },
        "line.26": {
            "text": "Johanniskäfer"
        },
        "line.27": {
            "text": "und Torf hell aufleuchten nachts"
        },
        "line.28": {
            "text": "was aber bewirkt"
        },
        "line.29": {
            "text": "das Licht falls es auch bei uns"
        },
        "line.30": {
            "text": "Einlass findet und"
        },
        "line.31": {
            "text": "wie sehen wir aus wenn es"
        },
        "line.32": {
            "text": "uns wieder verlässt"
        },
        "line.33": {
            "text": "wozu sind wir Gefäße"
        },
        "line.34": {
            "text": "die aneinander"
        },
        "line.35": {
            "text": "sich drängen und denen es"
        },
        "line.36": {
            "text": "doch kaum je gelingt"
        },
        "line.37": {
            "text": "etwas wirklich zu fassen"
        },
        "line.38": {
            "text": "woher kommt das Licht"
        },
        "line.39": {
            "text": "das sich zwar auf uns doch nicht"
        },
        "line.40": {
            "text": "in uns hineinlegt"
        },
        "line.41": {
            "text": "stumm ergeben stehen wir"
        },
        "line.42": {
            "text": "scheinen zu warten"
        },
        "line.43": {
            "text": "dicht am Rande des Abgrunds"
        },
        "line.44": {
            "text": "weit unter uns und"
        },
        "line.45": {
            "text": "außerhalb aller Bilder"
        },
        "line.46": {
            "text": "funkeln die Scherben"
        },
        "line.47": {
            "text": "der zerbrochenen Krüge"
        },
        "line.48": {
            "text": "in deren Leere"
        },
        "line.49": {
            "text": "erst noch der gerade Strahl"
        },
        "line.50": {
            "text": "himmlischen Lichts fiel"
        },
        "line.51": {
            "text": "wir vermuten der Körper"
        },
        "line.52": {
            "text": "sei ein Gefäß das"
        },
        "line.53": {
            "text": "unsere vergangenen"
        },
        "line.54": {
            "text": "Freuden und Schmerzen"
        },
        "line.55": {
            "text": "und das Geistige in uns"
        },
        "line.56": {
            "text": "bewahre so dass"
        },
        "line.57": {
            "text": "erinnernd etwas davon"
        },
        "line.58": {
            "text": "aufglühen könnte"
        },
        "line.59": {
            "text": "aufblitzen vielleicht nur kurz"
        },
        "line.60": {
            "text": "als säßen wir in"
        },
        "line.61": {
            "text": "einem dunklen Speisesaal"
        },
        "line.62": {
            "text": "wo Glasprismen die"
        },
        "line.63": {
            "text": "als Messerbänkchen dienen"
        },
        "line.64": {
            "text": "ebenso schöne"
        },
        "line.65": {
            "text": "Lichter aufsprühen lassen"
        },
        "line.66": {
            "text": "wie die Fenster der"
        },
        "line.67": {
            "text": "Kathedrale von Chartres"
        }
    }
}