{
    "title": "about-neo-rauch-periphere-zuneigung-zu-new-york-13679",
    "gender": "w",
    "author": "Claudia Gabler",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "Im Moment der kleinen Schritte"
        },
        "line.2": {
            "text": "ist es fortgeschrittene LIEBE,"
        },
        "line.3": {
            "text": "sagte der Maler."
        },
        "line.4": {
            "text": ""
        },
        "line.5": {
            "text": "Welch Gelegenheit!"
        },
        "line.6": {
            "text": "Welch Chance,"
        },
        "line.7": {
            "text": "welch Chance für weltumspannenden Applaus!"
        },
        "line.8": {
            "text": ""
        },
        "line.9": {
            "text": "Er wolle also, sagte der Maler,"
        },
        "line.10": {
            "text": "einmal verzichten auf die großen Tore,"
        },
        "line.11": {
            "text": "die sich öffnen für diese Kosmen von Traum und Gleichzeitigkeit."
        },
        "line.12": {
            "text": ""
        },
        "line.13": {
            "text": "Stattdessen Sehschlitze,"
        },
        "line.14": {
            "text": "Augenausschnitte,"
        },
        "line.15": {
            "text": "Fragmente von wattierten, von schattigen Welten."
        },
        "line.16": {
            "text": ""
        },
        "line.17": {
            "text": "Als Motivlage für Bilder,"
        },
        "line.18": {
            "text": "die kleiner als üblich ihre Tests machten"
        },
        "line.19": {
            "text": "in den kühlen Kreisen der Botanik."
        },
        "line.20": {
            "text": ""
        },
        "line.21": {
            "text": "Und eigentlich Raum brauchen"
        },
        "line.22": {
            "text": "für die fatalen Folgen,"
        },
        "line.23": {
            "text": "die auf sie folgen."
        }
    }
}