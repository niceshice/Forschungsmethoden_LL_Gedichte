{
    "title": "mailand-ambrosianische-litanei-2-102",
    "gender": "m",
    "author": "Thomas Kling",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "auf eine halbsäule hin gemalt"
        },
        "line.2": {
            "text": "steht ein junger mann: lebensgroßer"
        },
        "line.3": {
            "text": "melancholiker  typ aus untersicht gesehen."
        },
        "line.4": {
            "text": "athlet, der auf die zweiten blicke sich entpuppt."
        },
        "line.5": {
            "text": "betrachten ist schmerzforschung."
        },
        "line.6": {
            "text": "kahlheit nackter bildprogramme."
        },
        "line.7": {
            "text": "sirrendes, singendes, zuletzt ein"
        },
        "line.8": {
            "text": "stummgemachtes fleisch."
        },
        "line.9": {
            "text": "dies ist der heilige mit der eignen haut (attribut);"
        },
        "line.10": {
            "text": "in kniehöhe sein schopf: dort"
        },
        "line.11": {
            "text": "baumelt die apostelhülle, struppig,"
        },
        "line.12": {
            "text": "ein ziemlich totes angesicht."
        },
        "line.13": {
            "text": "so stehen dulder. ein geschundenes bild."
        },
        "line.14": {
            "text": "der haut entkleidet. mit rosigem kopf: ein"
        },
        "line.15": {
            "text": "bartholomäus, die haut überm arm wie"
        },
        "line.16": {
            "text": "regenhaut. dazu die patientenglatze  sieht aus"
        },
        "line.17": {
            "text": "wie von der chemotherapie."
        },
        "line.18": {
            "text": "die vorgewiesenen attribute: ein messer, keine spritze."
        },
        "line.19": {
            "text": "und muß mit links, mit eleganz, sein lebensgroßes hautbild"
        },
        "line.20": {
            "text": "halten, den lebensnahen, totengrauen skalp."
        },
        "line.21": {
            "text": "der aderzeichen zeigt: das bild das ihm"
        },
        "line.22": {
            "text": "sonst runterrutschen würde von der schulter."
        },
        "line.23": {
            "text": "der nimmt das hin; ist schinderwerk."
        },
        "line.24": {
            "text": "ein bildprogramm, termingerecht geliefert"
        },
        "line.25": {
            "text": "ein sonderbarer heiliger, seitlich angebracht."
        },
        "line.26": {
            "text": "ein weihrauch-echo. (fresko)"
        }
    }
}