{
    "title": "mailand-ambrosianische-litanei-1-100",
    "gender": "m",
    "author": "Thomas Kling",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "die erste tafel der legende."
        },
        "line.2": {
            "text": "die stadt und ihr himmel:"
        },
        "line.3": {
            "text": "einer stahlplatte gesang."
        },
        "line.4": {
            "text": "auf der zweiten tafel, aussenraum und innenraum,"
        },
        "line.5": {
            "text": "ist ein gitter vor die heilige geleget,"
        },
        "line.6": {
            "text": "das stellt ihr gefängnis vor."
        },
        "line.7": {
            "text": "und ein kompakter, untersetzter bär"
        },
        "line.8": {
            "text": "verteidigt den raum ihrer unschuld."
        },
        "line.9": {
            "text": "der himmel drückender."
        },
        "line.10": {
            "text": "bedrückender gesang. ein hitziges martyrium!"
        },
        "line.11": {
            "text": "der weißgoldhimmel lastet auf der stadt."
        },
        "line.12": {
            "text": "die räume. im himmel:"
        },
        "line.13": {
            "text": "mailands hochfinanz."
        },
        "line.14": {
            "text": "mailand, die junge frau und ihre vergewaltiger:"
        },
        "line.15": {
            "text": "zwischen sie stellt sich der bär und"
        },
        "line.16": {
            "text": "fällt die bunten schergen an."
        },
        "line.17": {
            "text": "die dritte tafel: hier"
        },
        "line.18": {
            "text": "erreicht die draußen hingerichtete  die"
        },
        "line.19": {
            "text": "lag da einfach so, herr komissar"
        },
        "line.20": {
            "text": "den himmel mailands. sie erreicht hier"
        },
        "line.21": {
            "text": "mailands harten himmel."
        }
    }
}