{
    "title": "ausser-rufweite-1307",
    "gender": "m",
    "author": "Klaus Merz",
    "author_birth": "1945",
    "poem": {
        "line.1": {
            "text": "Gegen Mitternacht fährt"
        },
        "line.2": {
            "text": "jodelnd ein Mopedfahrer"
        },
        "line.3": {
            "text": "an meinem Fenster vorbei."
        },
        "line.4": {
            "text": "Mit offenem Visier"
        },
        "line.5": {
            "text": "als zöge er in einen"
        },
        "line.6": {
            "text": "fröhlichen Krieg."
        },
        "line.7": {
            "text": "Wieso nur erschreckt mich"
        },
        "line.8": {
            "text": "wenig später der Laut"
        },
        "line.9": {
            "text": "meines brennenden"
        },
        "line.10": {
            "text": "Zigarettepapiers?"
        }
    }
}