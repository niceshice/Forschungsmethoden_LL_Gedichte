{
    "title": "karte-aus-mexiko-2891",
    "gender": "m",
    "author": "Gregor  Laschen",
    "author_birth": "1941",
    "poem": {
        "line.1": {
            "text": "Das Gedicht ist der Alabasteraffe aus dem"
        },
        "line.2": {
            "text": "anthropologischen Museum in Mexiko-Stadt, der mit"
        },
        "line.3": {
            "text": "breiten Lippen vom ewigen Eis und seiner Glut"
        },
        "line.4": {
            "text": "in der Welt redet, mit geschwärzten Augen, mit"
        },
        "line.5": {
            "text": "erhobenen Händen: als Bild nach Europa"
        },
        "line.6": {
            "text": "geschickt, aus seinem Blau in"
        },
        "line.7": {
            "text": "das andere Blau hinüberleuchtend, mit der"
        },
        "line.8": {
            "text": "deutlichen Kerbe, der gesplitterten Wunde"
        },
        "line.9": {
            "text": "in den Unterschenkeln, die den"
        },
        "line.10": {
            "text": "wie zur Notdurft gebeugten Körper"
        },
        "line.11": {
            "text": "einfürallemal"
        },
        "line.12": {
            "text": "am Aufstehn hindern, während der"
        },
        "line.13": {
            "text": "Kopf, den Händen folgend, die den Korb"
        },
        "line.14": {
            "text": "der Geschichte, der ihm ins"
        },
        "line.15": {
            "text": "Kreuz gewachsen ist, übern Leib ziehen, auf"
        },
        "line.16": {
            "text": "den einen Sprung aus ist"
        },
        "line.17": {
            "text": "bis in die leuchtenden Zehenspitzen."
        },
        "line.18": {
            "text": "(1986)"
        }
    }
}