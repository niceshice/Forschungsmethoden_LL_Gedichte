{
    "title": "ein-mineral-erklingt-13557",
    "gender": "m",
    "author": "Jörg Schieke",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Ein Mineral erklingt,"
        },
        "line.2": {
            "text": "das steht"
        },
        "line.3": {
            "text": "in den Sternen geschrieben, im Sommer"
        },
        "line.4": {
            "text": "Zitronenbonbons, Schwaden"
        },
        "line.5": {
            "text": "schwarzer Freitage, einer bleibt hier, einer"
        },
        "line.6": {
            "text": "zum Horizont, aber vom Kopf her ist das"
        },
        "line.7": {
            "text": "der Hardcore. Die Ausrüstung, die um's Licht"
        },
        "line.8": {
            "text": "und die Felgen mich billiger"
        },
        "line.9": {
            "text": "kommt, als das Zimmer, der in die Wolken"
        },
        "line.10": {
            "text": "gezeichnete Fluch, Schadenzauber"
        },
        "line.11": {
            "text": "statt Schadensbegrenzung, dachte, das wär's, die Mantel-"
        },
        "line.12": {
            "text": "und Degensekunde, im achten, in Richtung"
        },
        "line.13": {
            "text": "September, Herr Tommasek, jetzt"
        },
        "line.14": {
            "text": "bloß keinen Fehler; sonst Lohnabzug."
        }
    }
}