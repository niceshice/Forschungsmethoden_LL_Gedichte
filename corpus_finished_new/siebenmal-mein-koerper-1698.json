{
    "title": "siebenmal-mein-koerper-1698",
    "gender": "m",
    "author": "Robert  Gernhardt",
    "author_birth": "1937",
    "poem": {
        "line.1": {
            "text": "Mein Körper ist ein schutzlos Ding,"
        },
        "line.2": {
            "text": "wie gut, daß er mich hat."
        },
        "line.3": {
            "text": "Ich hülle ihn in Tuch und Garn"
        },
        "line.4": {
            "text": "und mach ihn täglich satt."
        },
        "line.5": {
            "text": "Mein Körper hat es gut bei mir,"
        },
        "line.6": {
            "text": "ich geb' ihm Brot und Wein."
        },
        "line.7": {
            "text": "Er kriegt von beidem nie genug,"
        },
        "line.8": {
            "text": "und nachher muß er spein."
        },
        "line.9": {
            "text": "Mein Körper hält sich nicht an mich,"
        },
        "line.10": {
            "text": "er tut, was ich nicht darf."
        },
        "line.11": {
            "text": "Ich wärme mich an Bild, Wort, Klang,"
        },
        "line.12": {
            "text": "ihn machen Körper scharf."
        },
        "line.13": {
            "text": "Mein Körper macht nur, was er will,"
        },
        "line.14": {
            "text": "macht Schmutz, Schweiß, Haar und Horn."
        },
        "line.15": {
            "text": "Ich wasche und beschneide ihn"
        },
        "line.16": {
            "text": "von hinten und von vorn."
        },
        "line.17": {
            "text": "Mein Körper ist voll Unvernunft,"
        },
        "line.18": {
            "text": "ist gierig, faul und geil."
        },
        "line.19": {
            "text": "Tagtäglich geht er mehr kaputt,"
        },
        "line.20": {
            "text": "ich mach ihn wieder heil."
        },
        "line.21": {
            "text": "Mein Körper kennt nicht Maß noch Dank,"
        },
        "line.22": {
            "text": "er tut mir manchmal weh."
        },
        "line.23": {
            "text": "Ich bring ihn trotzdem übern Berg"
        },
        "line.24": {
            "text": "und fahr ihn an die See."
        },
        "line.25": {
            "text": "Mein Körper ist so unsozial."
        },
        "line.26": {
            "text": "Ich rede, er bleibt stumm."
        },
        "line.27": {
            "text": "Ich leb ein Leben lang für ihn."
        },
        "line.28": {
            "text": "Er bringt mich langsam um."
        }
    }
}