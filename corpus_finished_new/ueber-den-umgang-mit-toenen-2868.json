{
    "title": "ueber-den-umgang-mit-toenen-2868",
    "gender": "m",
    "author": "Helwig  Brunner",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "Etwas über den Umgang mit Tönen, körperhaft"
        },
        "line.2": {
            "text": "festgelegt: konsonanzlose Selbstbeobachtung,"
        },
        "line.3": {
            "text": "das Kolorit der Nacktheit, gegenläufige"
        },
        "line.4": {
            "text": "Reizbarkeiten. Lange Durststrecken, enggeführt."
        },
        "line.5": {
            "text": "Dann als Entwurf: Kulissen, die der Frühnebel"
        },
        "line.6": {
            "text": "vor dünnfingrige Föhrenwälder schiebt."
        },
        "line.7": {
            "text": "Bruchlinien, aus denen bald die Hitze steigt"
        },
        "line.8": {
            "text": "wie das Fieber schwerer Tiere."
        },
        "line.9": {
            "text": "Von pendelnder Kraft getrieben"
        },
        "line.10": {
            "text": "rücken die Zeiger enger zusammen,"
        },
        "line.11": {
            "text": "verlassen und holen einander ein,"
        },
        "line.12": {
            "text": "wenn die Schatten am kürzesten sind."
        },
        "line.13": {
            "text": "Alles ist die Meisterschaft dessen, was es ist,"
        },
        "line.14": {
            "text": "die Ausbreitung seiner Flächen,"
        },
        "line.15": {
            "text": "die Zuspitzung seiner Spitzen,"
        },
        "line.16": {
            "text": "die Ausformung seiner Form."
        },
        "line.17": {
            "text": "Was macht es da noch aus,"
        },
        "line.18": {
            "text": "dass jeder Ton das Beispiel eines Tones ist,"
        },
        "line.19": {
            "text": "was macht es aus, dass er nicht nur er selbst,"
        },
        "line.20": {
            "text": "sondern auch die Betrachtung seiner selbst ist?"
        }
    }
}