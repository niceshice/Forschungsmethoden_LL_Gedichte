{
    "title": "der-goldzahn-13897",
    "gender": "m",
    "author": "Max Sessner",
    "author_birth": "1959",
    "poem": {
        "line.1": {
            "text": "Wissen Sie das Glück ist ein"
        },
        "line.2": {
            "text": "Idiot es weiß nie so recht"
        },
        "line.3": {
            "text": "wohin es sich setzen soll sitzt"
        },
        "line.4": {
            "text": "es endlich steht es oft gleich"
        },
        "line.5": {
            "text": "wieder auf läuft durch die"
        },
        "line.6": {
            "text": "Straßen als nicht mehr ganz"
        },
        "line.7": {
            "text": "junger Mann in fadenscheiniger"
        },
        "line.8": {
            "text": "Kleidung vorstellen kann man"
        },
        "line.9": {
            "text": "sich dass er in Hauseingängen"
        },
        "line.10": {
            "text": "schläft aber es gibt diesen"
        },
        "line.11": {
            "text": "magischen Moment dieses"
        },
        "line.12": {
            "text": "Aufblitzen eines Goldzahns"
        },
        "line.13": {
            "text": "im Abendlicht wenn er sich"
        },
        "line.14": {
            "text": "doch einmal niederlässt und"
        },
        "line.15": {
            "text": "jemanden am Ärmel zupft"
        },
        "line.16": {
            "text": "vielleicht ja doch kein Idiot nur"
        },
        "line.17": {
            "text": "einer der zu schüchtern ist um"
        },
        "line.18": {
            "text": "laut in die Hände zu klatschen"
        }
    }
}