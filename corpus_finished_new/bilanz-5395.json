{
    "title": "bilanz-5395",
    "gender": "m",
    "author": "Hans Raimund",
    "author_birth": "1945",
    "poem": {
        "line.1": {
            "text": "Kaum einen Lidschlag lang"
        },
        "line.2": {
            "text": "Der Frühling"
        },
        "line.3": {
            "text": "Dein Frühling"
        },
        "line.4": {
            "text": "Halten wir dir zugute"
        },
        "line.5": {
            "text": "Du hast das Gespräch gesucht"
        },
        "line.6": {
            "text": "Mit BäumenGräsernSteinen"
        },
        "line.7": {
            "text": "- Die Scheu der Tiere schüchtert dich ein -"
        },
        "line.8": {
            "text": "Du hast Fragen gestelltaber"
        },
        "line.9": {
            "text": "Mit gewohnter Ungeduld"
        },
        "line.10": {
            "text": "Die Antworten nicht abgewartet"
        },
        "line.11": {
            "text": "Hast dich bereitwillig ablenken lassen"
        },
        "line.12": {
            "text": "Vom Singen der elektrischen Drähte"
        },
        "line.13": {
            "text": "Hoch über diran gewaltigen Masten"
        },
        "line.14": {
            "text": "Dein Zieldie Erreichung des Wasserturms"
        },
        "line.15": {
            "text": "Jenseits der echostillen Doline"
        },
        "line.16": {
            "text": "Hast du - kaum ins Auge gefaßt -"
        },
        "line.17": {
            "text": "Im Nu aus den Augen verloren"
        },
        "line.18": {
            "text": "Gewohnt gleichmütig"
        },
        "line.19": {
            "text": "Dich mit der Weglosigkeit des Geländes abfindend"
        },
        "line.20": {
            "text": "Die Brunnen vor den verfallenen Gehöften"
        },
        "line.21": {
            "text": "Hast du erst zur Kenntnis genommen"
        },
        "line.22": {
            "text": "Als deine Zunge schon raschelte"
        },
        "line.23": {
            "text": "Deine Lider spröd sich spannten"
        },
        "line.24": {
            "text": "Für das Blühen des Ginsters im Karst"
        },
        "line.25": {
            "text": "Voll Ungeduld erwartet"
        },
        "line.26": {
            "text": "Hast du kein Auge gehabt"
        },
        "line.27": {
            "text": "Kein Ohr"
        },
        "line.28": {
            "text": "Für das Getöse der Vögel"
        },
        "line.29": {
            "text": "Im wetterschrägen Spalier der Olivenbäume"
        },
        "line.30": {
            "text": "Keine Nase"
        },
        "line.31": {
            "text": "Für den Rauch brennenden Unkrauts"
        },
        "line.32": {
            "text": "Jäh aufsteigend"
        },
        "line.33": {
            "text": "Aus eben gejäteten Gärten"
        },
        "line.34": {
            "text": "Stumpfsinnigwie eh und je stehst du"
        },
        "line.35": {
            "text": "Mitten im Sommer"
        },
        "line.36": {
            "text": "Im Sommer der andern"
        },
        "line.37": {
            "text": "(1989)"
        }
    }
}