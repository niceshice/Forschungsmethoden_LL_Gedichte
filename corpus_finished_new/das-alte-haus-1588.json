{
    "title": "das-alte-haus-1588",
    "gender": "w",
    "author": "Erika Burkart",
    "author_birth": "1922",
    "poem": {
        "line.1": {
            "text": "Jahr um Jahr lernen"
        },
        "line.2": {
            "text": "sich nicht zu fürchten"
        },
        "line.3": {
            "text": "vor toten Winkeln."
        },
        "line.4": {
            "text": "Hochsitz der Stürme unter dem Dach:"
        },
        "line.5": {
            "text": "Ziegelzelt, Balkengefüge,"
        },
        "line.6": {
            "text": "in der Dämmerung eines"
        },
        "line.7": {
            "text": "andern Jahrhunderts,"
        },
        "line.8": {
            "text": "Im Schlupf in der Winde versteckt"
        },
        "line.9": {
            "text": "Schuhe, Scherben,"
        },
        "line.10": {
            "text": "Lumpen der Andern, die man nicht kannte,"
        },
        "line.11": {
            "text": "Namenlose, sie gingen"
        },
        "line.12": {
            "text": "voraus aus dem Haus"
        },
        "line.13": {
            "text": "im letzten Bett durch die Klostertür."
        },
        "line.14": {
            "text": "Verschollen Arachne"
        },
        "line.15": {
            "text": "zwischen Wetter- und Innenfenster,"
        },
        "line.16": {
            "text": "Sichtbarwerden zerfetzter Fäden,"
        },
        "line.17": {
            "text": "baumelt im Zugwind"
        },
        "line.18": {
            "text": "festgezurrt die vergessene Beute."
        },
        "line.19": {
            "text": "Treppenhaus Turm der Schatten -"
        },
        "line.20": {
            "text": "halbes Licht"
        },
        "line.21": {
            "text": "findet mich auf ausgetretenen Stufen"
        },
        "line.22": {
            "text": "bei Plastiktaschen voll Spaltholz,"
        },
        "line.23": {
            "text": "erst wenn die Stube sich aufwärmt,"
        },
        "line.24": {
            "text": "Bücherhöhle um einen Ofen,"
        },
        "line.25": {
            "text": "der jede Stunde sein Futter will,"
        },
        "line.26": {
            "text": "versuchen, die hausen,"
        },
        "line.27": {
            "text": "zu wohnen."
        },
        "line.28": {
            "text": "Fenster kreuz - Fadenkreuz - Kreuz;"
        },
        "line.29": {
            "text": "von Sprosse zu Sprosse der Mond"
        },
        "line.30": {
            "text": "in Konstellationen zu Bäumen,"
        },
        "line.31": {
            "text": "die leben in andern Bezügen, nachts,"
        },
        "line.32": {
            "text": "während die Mäuse raspeln im Grus,"
        },
        "line.33": {
            "text": "ein Ziegel vom Dach rutscht, aufschlägt -"
        },
        "line.34": {
            "text": "die Stille danach mir bang macht."
        },
        "line.35": {
            "text": "Es ist die Angst,"
        },
        "line.36": {
            "text": "nicht mehr zu erwachen,"
        },
        "line.37": {
            "text": "ich schlafe, aber der Traum ist wach."
        }
    }
}