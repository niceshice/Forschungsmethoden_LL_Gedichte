{
    "title": "falsche-prophezeiungen-iii-iauszuegei-819",
    "gender": "m",
    "author": "Christian Loidl",
    "author_birth": "1957",
    "poem": {
        "line.1": {
            "text": "SCHAU SIE DIR AN: so kannst du"
        },
        "line.2": {
            "text": "sie nicht sehn"
        },
        "line.3": {
            "text": "wir sind im himmel"
        },
        "line.4": {
            "text": "mädchen"
        },
        "line.5": {
            "text": "still aus dem zweifel und"
        },
        "line.6": {
            "text": "im stillen still"
        },
        "line.7": {
            "text": "öffnet die trauer hier"
        },
        "line.8": {
            "text": "den raum:"
        },
        "line.9": {
            "text": "den namenlosen"
        },
        "line.10": {
            "text": "durst,"
        },
        "line.11": {
            "text": "den zufalls-"
        },
        "line.12": {
            "text": "hunger"
        },
        "line.13": {
            "text": "die kindheits-unschuld und"
        },
        "line.14": {
            "text": "das seelenheil"
        },
        "line.15": {
            "text": "die blonden flügel lächeln"
        },
        "line.16": {
            "text": "mit den falten."
        },
        "line.17": {
            "text": "als sie uns tauften, banden sie"
        },
        "line.18": {
            "text": "die unschuld fest"
        },
        "line.19": {
            "text": "in einem brunnenloch."
        },
        "line.20": {
            "text": "es schlägt der herr"
        },
        "line.21": {
            "text": "die seinen"
        },
        "line.22": {
            "text": "alle"
        },
        "line.23": {
            "text": "anders."
        },
        "line.24": {
            "text": "DOCH ALS ICH IN DEN SANFTEN DÄMPFUNGEN"
        },
        "line.25": {
            "text": "der nachmittage engel aufnahm,"
        },
        "line.26": {
            "text": "die mir die frau als baum des lebens zeigten"
        },
        "line.27": {
            "text": "und mir den frost vom rippenkorb abküßten,"
        },
        "line.28": {
            "text": "da half auch oft, was eva nie verscherzte"
        },
        "line.29": {
            "text": "das paradies, das mit den tränensalzen"
        },
        "line.30": {
            "text": "zugleich das meer birgt und den atmungs-tau."
        },
        "line.31": {
            "text": "AUS MEINEN DICHTEN LIDERN"
        },
        "line.32": {
            "text": "sprühn gräsern andre augen,"
        },
        "line.33": {
            "text": "daß mir ein berg aus mut zuwächst"
        },
        "line.34": {
            "text": "und die verlorne aufhebt."
        },
        "line.35": {
            "text": "von ihr, an der ich meine stimme wärme,"
        },
        "line.36": {
            "text": "sei auch der name des gestirns entliehn,"
        },
        "line.37": {
            "text": "in das der augenschein sich schlafend hüllt."
        },
        "line.38": {
            "text": "bild, singendes, in dem der mittag ruht"
        },
        "line.39": {
            "text": "wir fielen bar des grunds"
        },
        "line.40": {
            "text": "einander zu."
        },
        "line.41": {
            "text": "in weiter klarheit trank"
        },
        "line.42": {
            "text": "den mund die mündin."
        },
        "line.43": {
            "text": "sag mir, wer bist du, daß du tilgst,"
        },
        "line.44": {
            "text": "was auf der zunge liegt,"
        },
        "line.45": {
            "text": "jetzt tief, jetzt neckisch-seicht,"
        },
        "line.46": {
            "text": "graswirr und schlangenhell,"
        },
        "line.47": {
            "text": "je nach der art, wie wir die göttin wiegen"
        },
        "line.48": {
            "text": "seit ich den schlangenchor"
        },
        "line.49": {
            "text": "aus deinen augen las,"
        },
        "line.50": {
            "text": "führt jedes buch in dich"
        },
        "line.51": {
            "text": "und jeder schlaf."
        },
        "line.52": {
            "text": "ich wußte nicht, daß ich schon dir gehörte,"
        },
        "line.53": {
            "text": "als mut und glück vor jeder frage tanzten,"
        },
        "line.54": {
            "text": "daß ich die stille sah und ihre wärme griff,"
        },
        "line.55": {
            "text": "und in der wärme leise,"
        },
        "line.56": {
            "text": "leise"
        },
        "line.57": {
            "text": "schreie"
        }
    }
}