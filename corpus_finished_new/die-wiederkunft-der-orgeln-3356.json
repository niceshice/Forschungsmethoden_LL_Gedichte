{
    "title": "die-wiederkunft-der-orgeln-3356",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "I"
        },
        "line.2": {
            "text": "Es ist ein Pflock in uns getrieben"
        },
        "line.3": {
            "text": "auch wenn wir neben und"
        },
        "line.4": {
            "text": "nicht im Gefängnis leben"
        },
        "line.5": {
            "text": "ein Pflock aus Tönen"
        },
        "line.6": {
            "text": "so laufen wir nicht fort"
        },
        "line.7": {
            "text": "Die Kathedralen sind herangerückt"
        },
        "line.8": {
            "text": "wir sind gebettet an Kathedralen"
        },
        "line.9": {
            "text": "auf die wir lauschen weil sie im Innern"
        },
        "line.10": {
            "text": "Orgeln schlagen"
        },
        "line.11": {
            "text": "Wir lauschen"
        },
        "line.12": {
            "text": "hier sind die Muscheln an unserem Kopf"
        },
        "line.13": {
            "text": "die wir wie schwere Krüge"
        },
        "line.14": {
            "text": "stützen müssen"
        },
        "line.15": {
            "text": "wir gehen in die Orgelhocke"
        },
        "line.16": {
            "text": "in die Orgelknie"
        },
        "line.17": {
            "text": "vertraut schon unserem Kindesbein"
        },
        "line.18": {
            "text": "ein einziges Neigen und"
        },
        "line.19": {
            "text": "Beugen vor der Musik"
        },
        "line.20": {
            "text": "II"
        },
        "line.21": {
            "text": "Sonnenorgeln"
        },
        "line.22": {
            "text": "Schattenorgeln der Kathedralen"
        },
        "line.23": {
            "text": "wir lauschen im Licht"
        },
        "line.24": {
            "text": "der Sonnenorgeln lauschen"
        },
        "line.25": {
            "text": "im Schatten der Schattenorgeln"
        },
        "line.26": {
            "text": "stemmen die Muscheln"
        },
        "line.27": {
            "text": "dass sie nicht brechen"
        },
        "line.28": {
            "text": "werden den Tonpflock nicht"
        },
        "line.29": {
            "text": "ausziehn und uns an Orgelstatt"
        },
        "line.30": {
            "text": "an anderes halten"
        },
        "line.31": {
            "text": "werden nicht"
        },
        "line.32": {
            "text": "aufstehn verleugnen gehen"
        },
        "line.33": {
            "text": "III"
        },
        "line.34": {
            "text": "Die Schattenorgeln"
        },
        "line.35": {
            "text": "sind dicht bei den Sonnenorgeln"
        },
        "line.36": {
            "text": "der Abstand beträgt einen Viertelton"
        },
        "line.37": {
            "text": "so wie wir"
        },
        "line.38": {
            "text": "dicht beim Gefängnis"
        },
        "line.39": {
            "text": "dicht bei den Kathedralen wohnen"
        },
        "line.40": {
            "text": "mit einem kleinen Dazwischen"
        },
        "line.41": {
            "text": "das abwehrt die Macht"
        },
        "line.42": {
            "text": "der Deckungsgleiche"
        },
        "line.43": {
            "text": "ein Reibungsraum ist vorhanden"
        },
        "line.44": {
            "text": "wo alles Abgeblühte Öde"
        },
        "line.45": {
            "text": "zu Sand zermahlen wird damit"
        },
        "line.46": {
            "text": "wirs nur noch"
        },
        "line.47": {
            "text": "wegzublasen brauchen"
        },
        "line.48": {
            "text": "IV"
        },
        "line.49": {
            "text": "Das Orgeln ist kein Trostgesang"
        },
        "line.50": {
            "text": "kein Hirtenaug uns ruhig zu weiden"
        },
        "line.51": {
            "text": "kein Winterweizen der sich dann"
        },
        "line.52": {
            "text": "emporlebt wenn"
        },
        "line.53": {
            "text": "die Eisschicht bricht"
        },
        "line.54": {
            "text": "es ist ein ungebärdiges Gestehn"
        },
        "line.55": {
            "text": "von Wünschen von Verzweiflung"
        },
        "line.56": {
            "text": "ein StampfenSchlagenSchreien"
        },
        "line.57": {
            "text": "Lustschluchzen Lobschluchzen aus Brustwerk Hauptwerk"
        },
        "line.58": {
            "text": "gegen den Himmel ein Jagen über Tod- und Auferstehungsgrenzen"
        },
        "line.59": {
            "text": "ist Löschung unsrer Augen"
        },
        "line.60": {
            "text": "V"
        },
        "line.61": {
            "text": "Wir hören sind betört"
        },
        "line.62": {
            "text": "sind hörig reine Form Spiralen"
        },
        "line.63": {
            "text": "bald von Orgeln hochgerissen"
        },
        "line.64": {
            "text": "bald gestaucht"
        },
        "line.65": {
            "text": "Orgeln die wies am Anfang war"
        },
        "line.66": {
            "text": "in offene Kindsgemüter"
        },
        "line.67": {
            "text": "das Majestätische in Überlebensgrösse"
        },
        "line.68": {
            "text": "gleich einem Vormund eintreten"
        },
        "line.69": {
            "text": "Orgeln ihr"
        },
        "line.70": {
            "text": "Brausen bei den Fruchtgewässern"
        },
        "line.71": {
            "text": "vor unserem Anfang schon uns in"
        },
        "line.72": {
            "text": "das Fleisch gesenkt"
        },
        "line.73": {
            "text": "als ein Organ"
        },
        "line.74": {
            "text": "als das Geschlecht"
        },
        "line.75": {
            "text": "als unsere Orgelleiblichkeit und jetzt"
        },
        "line.76": {
            "text": "durch Orgeln wiederkünftig"
        },
        "line.77": {
            "text": "in den herangerückten Kathedralen"
        },
        "line.78": {
            "text": "werden auch wir"
        },
        "line.79": {
            "text": "weil wir dafür geschaffen sind"
        },
        "line.80": {
            "text": "wir werden auch geschlagen"
        },
        "line.81": {
            "text": "VI"
        },
        "line.82": {
            "text": "Der arme Zungenwurm"
        },
        "line.83": {
            "text": "wie er"
        },
        "line.84": {
            "text": "sich krümmt und windet"
        },
        "line.85": {
            "text": "weil er ins Wortreich will"
        },
        "line.86": {
            "text": "bei diesem Toben"
        },
        "line.87": {
            "text": "und ist es ihm verwehrt"
        }
    }
}