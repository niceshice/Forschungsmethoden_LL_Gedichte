{
    "title": "im-brennglas-13934",
    "categories": [
        "Tod / Trauer",
        "Natur",
        "Wasser"
    ],
    "gender": "w",
    "author": "R\u00f3\u017ea Doma\u0161cyna",
    "poem": {
        "line.1": {
            "text": "I."
        },
        "line.2": {
            "text": "das ist krass sagst du  das rote wasser"
        },
        "line.3": {
            "text": "l\u00e4sst die hand eintauchen"
        },
        "line.4": {
            "text": "krasna woda"
        },
        "line.5": {
            "text": "krasna"
        },
        "line.6": {
            "text": "ist wunderbar entgegne ich doch"
        },
        "line.7": {
            "text": "dies ist einfach nur rot eisenoxid die kehrseite"
        },
        "line.8": {
            "text": "des wunders dem ich mich ergebe mit dir"
        },
        "line.9": {
            "text": "der du dich mir hingibst"
        },
        "line.10": {
            "text": "sprich das nicht aus sagst du am ostermorgen"
        },
        "line.11": {
            "text": "macht es uns von innen her rein"
        },
        "line.12": {
            "text": "ich halte das wasser lange in den handfl\u00e4chen"
        },
        "line.13": {
            "text": "die gedeuteten bedeutungen scheinen auf"
        },
        "line.14": {
            "text": "funken funkeln im brennglas"
        },
        "line.15": {
            "text": "II."
        },
        "line.16": {
            "text": "diese gegend sieht uns \u00e4hnlich:"
        },
        "line.17": {
            "text": "hier wird niemandes versprechen eingel\u00f6st"
        },
        "line.18": {
            "text": "die fl\u00f6ze eingetauscht gegen bares"
        },
        "line.19": {
            "text": "verh\u00f6kert den rest deckt mild das wasser"
        },
        "line.20": {
            "text": "diese gegend gibt mich nicht auf"
        },
        "line.21": {
            "text": "da ich mich ihr ausliefere"
        },
        "line.22": {
            "text": "die freigelegten schichten befrage"
        },
        "line.23": {
            "text": "wieso hat man fr\u00fcher unsereins"
        },
        "line.24": {
            "text": "umarmt zur letzten ruhe gebettet"
        },
        "line.25": {
            "text": "ich taste mich dir entgegen"
        },
        "line.26": {
            "text": "am morgen ist deine hand"
        },
        "line.27": {
            "text": "auf meinem arm ein kumpel"
        },
        "line.28": {
            "text": "doch gegen abend will mein arm"
        },
        "line.29": {
            "text": "in deiner hand ankern"
        },
        "line.30": {
            "text": "am feuer das die w\u00f6lfe fernh\u00e4lt"
        }
    }
}