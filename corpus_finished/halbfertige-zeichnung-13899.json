{
    "title": "halbfertige-zeichnung-13899",
    "categories": [
        "Leben & Beziehungen",
        "Tod / Trauer"
    ],
    "gender": "m",
    "author": "Max Sessner",
    "poem": {
        "line.1": {
            "text": "Sterben niemals aber eins werden"
        },
        "line.2": {
            "text": "mit dem Bezug des Sofas bietet"
        },
        "line.3": {
            "text": "eine Mglichkeit des sanften"
        },
        "line.4": {
            "text": "Verschwindens mit einem Lcheln"
        },
        "line.5": {
            "text": "und die Hnde in den Taschen bin"
        },
        "line.6": {
            "text": "ich kaum mehr sichtbar nur die"
        },
        "line.7": {
            "text": "mich lieben erkennen noch meine"
        },
        "line.8": {
            "text": "Zge im Muster des Stoffes Abende"
        },
        "line.9": {
            "text": "gibt es da sieht man mich etwas"
        },
        "line.10": {
            "text": "deutlicher ob es am Wetter liegt ich"
        },
        "line.11": {
            "text": "wei es nicht dann sitzt du neben"
        },
        "line.12": {
            "text": "mir die Hand auf meinem Knie und"
        },
        "line.13": {
            "text": "kaum lesbar erscheint auf deinem"
        },
        "line.14": {
            "text": "Handrcken eine winzige Schrift"
        },
        "line.15": {
            "text": "du bewegst stumm deine Lippen"
        },
        "line.16": {
            "text": "als du zu lesen versuchst dein Herz"
        },
        "line.17": {
            "text": "klopft stark es klopft auerhalb von"
        },
        "line.18": {
            "text": "dir irgendwo in diesem Zimmer"
        }
    }
}