    "title": "sternengeschichte-450",
    "categories": [
        "Lyrik f\u00fcr Kinder",
        "Stadt & st\u00e4dtisches Leben",
        "Natur"
    ],
    "gender": "w",
    "author": "Jutta Richter",
    "poem": {
        "line.1": {
            "text": "Die Sterne \u00fcber einer Stadt"
        },
        "line.2": {
            "text": "die hielten gro\u00dfen Sternenrat."
        },
        "line.3": {
            "text": "Sie warens leid."
        },
        "line.4": {
            "text": "Die Menschen in der hellen Stadt"
        },
        "line.5": {
            "text": "die hatten n\u00e4mlich Sterne satt"
        },
        "line.6": {
            "text": "und keine Zeit."
        },
        "line.7": {
            "text": "Und so beschlo\u00df der Sternenrat,"
        },
        "line.8": {
            "text": "da\u00df alle Sterne dieser Stadt"
        },
        "line.9": {
            "text": "in Urlaub gehn."
        },
        "line.10": {
            "text": "Und es geschah, wie man gesagt,"
        },
        "line.11": {
            "text": "die n\u00e4chste Nacht wurde vertagt,"
        },
        "line.12": {
            "text": "kein Stern zu sehn."
        },
        "line.13": {
            "text": "Die Menschen wunderten sich sehr."
        },
        "line.14": {
            "text": "Sie liefen unruhig hin und her"
        },
        "line.15": {
            "text": "auf Sternenwacht."
        },
        "line.16": {
            "text": "Die ganz Gescheiten meinten gar,"
        },
        "line.17": {
            "text": "der j\u00fcngste Tag sei ziemlich nah."
        },
        "line.18": {
            "text": "Er k\u00e4m bei Nacht."
        },
        "line.19": {
            "text": "Es war am zweiten Donnerstag,"
        },
        "line.20": {
            "text": "als sich ein kleiner Stern erschrak,"
        },
        "line.21": {
            "text": "den Halt verlor."
        },
        "line.22": {
            "text": "Er fiel an jener Stadt vorbei,"
        },
        "line.23": {
            "text": "man h\u00f6rte einen lauten Schrei"
        },
        "line.24": {
            "text": "am Rathaustor."
        },
        "line.25": {
            "text": "Ein Kind hatte den Stern entdeckt"
        },
        "line.26": {
            "text": "und seine Eltern schnell geweckt."
        },
        "line.27": {
            "text": "O welches Gl\u00fcck."
        },
        "line.28": {
            "text": "Die Leute haben sich umarmt."
        },
        "line.29": {
            "text": "Die Sterne haben sich erbarmt,"
        },
        "line.30": {
            "text": "kamen zur\u00fcck."
        }
    }
}