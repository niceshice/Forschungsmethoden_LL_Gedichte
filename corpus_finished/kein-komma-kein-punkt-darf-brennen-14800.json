    "gender": "m",
    "author": "Eberhard H\u00e4fner",
    "poem": {
        "line.1": {
            "text": "In H\u00f6hlungen versprengter Tafelritter"
        },
        "line.2": {
            "text": "Silberdisteln, verkaterter Morgen ohne Schwerkraft"
        },
        "line.3": {
            "text": "kaum m\u00f6glich, ob wir Anz\u00fcglichkeiten m\u00f6gen oder nicht"
        },
        "line.4": {
            "text": "diese Blumen nicken der Ausschweifung zu"
        },
        "line.5": {
            "text": "schreibe es unter die Haut und \u00fcberhaupt, schreibe"
        },
        "line.6": {
            "text": "wir verzehren uns und alles wovor uns graut, was gegenw\u00e4rtig gr\u00fcnt"
        },
        "line.7": {
            "text": "k\u00f6nnen wir ablesen, in Abwesenheit auch den Z\u00e4hlerstand"
        },
        "line.8": {
            "text": "die dritte Potenz, ihre tickende Halbwertzeit"
        },
        "line.9": {
            "text": "schreibe, erlesenen K\u00fcrbiskulturen"
        },
        "line.10": {
            "text": "buchr\u00fcckenrosa, im Abteil ein Reisebegleiter"
        },
        "line.11": {
            "text": "auf dem Klapptisch die weiche Broschur"
        },
        "line.12": {
            "text": "schreibe, der mittlere Teil leuchtet"
        },
        "line.13": {
            "text": "anf\u00e4ngliche Wortketten"
        },
        "line.14": {
            "text": "endg\u00fcltig durch Interpunktion, schreibe"
        },
        "line.15": {
            "text": "zehn Finger hast du an jeder Hand"
        },
        "line.16": {
            "text": "f\u00fcnfundzwanzig an H\u00e4nden und F\u00fc\u00dfen"
        },
        "line.17": {
            "text": "zehn Finger hast du, an jeder Hand f\u00fcnf,"
        },
        "line.18": {
            "text": "und zwanzig an H\u00e4nden und F\u00fc\u00dfen."
        }
    }
}