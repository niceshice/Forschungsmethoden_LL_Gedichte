    "poem": {
        "line.1": {
            "text": "Tritt in den Hof. Der Pflug,"
        },
        "line.2": {
            "text": "umwuchert, sinkt in die Erde, das Fuhrwerk"
        },
        "line.3": {
            "text": "fhrt auseinander, unmerklich, die Pferde"
        },
        "line.4": {
            "text": "nicken in ihrem Grab."
        },
        "line.5": {
            "text": "Fll deine Taschen, der Birnbaum"
        },
        "line.6": {
            "text": "wird bald gestrzt sein, das Haus,"
        },
        "line.7": {
            "text": "erdschtig, ging schon in die Knie."
        },
        "line.8": {
            "text": "Steige durch die zerbrochenen Wnde,"
        },
        "line.9": {
            "text": "entfach im geborstenen Herd"
        },
        "line.10": {
            "text": "ein Feuer, sei furchtlos, der neben dir hockt,"
        },
        "line.11": {
            "text": "hockt da, um mit dir zu schweigen,"
        },
        "line.12": {
            "text": "whrend der Himmel ber euch steht,"
        },
        "line.13": {
            "text": "den Schdeldchern ein Dach."
        }
    }
}