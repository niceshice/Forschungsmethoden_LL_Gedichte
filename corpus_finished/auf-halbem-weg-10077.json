{
    "title": "auf-halbem-weg-10077",
    "categories": [
        "Leben & Beziehungen",
        "Tiere"
    ],
    "gender": "m",
    "author": "Andreas Neeser",
    "poem": {
        "line.1": {
            "text": "Unheimlich lautlos"
        },
        "line.2": {
            "text": "friert den Enten der Teich zu"
        },
        "line.3": {
            "text": "das Eis wchst exzentrisch"
        },
        "line.4": {
            "text": "wie Hunger zum Herz."
        },
        "line.5": {
            "text": "Sie paddeln und schlagen das Wasser"
        },
        "line.6": {
            "text": "im schwindenden Kreis taucht ein Kopf"
        },
        "line.7": {
            "text": "so vorendlich sicher"
        },
        "line.8": {
            "text": "als wr es nicht immer zu spt."
        },
        "line.9": {
            "text": "Ich reiche dir stockend die Hand"
        },
        "line.10": {
            "text": "und wir schweigen uns schrittweise ein"
        },
        "line.11": {
            "text": "auf den Rckweg zu zweit."
        },
        "line.12": {
            "text": "Hilschweiher, Edenkoben"
        }
    }
}