{
    "title": "trostlied-im-konjunktiv-14383",
    "categories": [
        "Natur",
        "Pflanzen",
        "Reimgedicht"
    ],
    "gender": "m",
    "author": "Erich K\u00e4stner",
    "poem": {
        "line.1": {
            "text": "W\u00e4r ich ein Baum, st\u00fcnd ich droben am Wald."
        },
        "line.2": {
            "text": "Tr\u00fcg Wolke und Stern in den gr\u00fcnen Haaren."
        },
        "line.3": {
            "text": "W\u00e4re mit meinen dreihundert Jahren"
        },
        "line.4": {
            "text": "noch gar nicht sehr alt."
        },
        "line.5": {
            "text": "Wildtauben gr\u00fcben den Kopf untern Fl\u00fcgel."
        },
        "line.6": {
            "text": "Kriege ritten und klirrten im Trab"
        },
        "line.7": {
            "text": "querfeldein und \u00fcber die H\u00fcgel"
        },
        "line.8": {
            "text": "ins offene Grab."
        },
        "line.9": {
            "text": "Humpelten Hunger vor\u00fcber und Seuche."
        },
        "line.10": {
            "text": "K\u00e4men und schm\u00f6lzen wie Ostern und Schnee."
        },
        "line.11": {
            "text": "L\u00e4g ein P\u00e4rchen versteckt im Gestr\u00e4uche"
        },
        "line.12": {
            "text": "und t\u00e4t sich s\u00fc\u00df weh."
        },
        "line.13": {
            "text": "Kl\u00e4ngen vom Dorf her die Kirmesgeigen."
        },
        "line.14": {
            "text": "Ameisen br\u00e4chten die Ernte ein."
        },
        "line.15": {
            "text": "Hinge ein Toter in meinen Zweigen"
        },
        "line.16": {
            "text": "und schw\u00e4nge das Bein."
        },
        "line.17": {
            "text": "Spr\u00e4nge die Flut und ers\u00e4ufte die T\u00e4ler."
        },
        "line.18": {
            "text": "W\u00fcchse Vergissmeinnicht z\u00e4rtlich am Bach."
        },
        "line.19": {
            "text": "Alles verginge wie T\u00e4uschung und Fehler"
        },
        "line.20": {
            "text": "und Rauch \u00fcberm Dach."
        },
        "line.21": {
            "text": "W\u00e4r ich ein Baum, st\u00fcnd ich droben am Wald."
        },
        "line.22": {
            "text": "Tr\u00fcg Wolke und Stern in den gr\u00fcnen Haaren."
        },
        "line.23": {
            "text": "W\u00e4re mit meinen dreihundert Jahren"
        },
        "line.24": {
            "text": "noch gar nicht sehr alt...."
        }
    }
}