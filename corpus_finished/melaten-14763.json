    "author": "Sabine  Schiffner",
    "poem": {
        "line.1": {
            "text": "er sagt sein grab"
        },
        "line.2": {
            "text": "soll auf melaten sein"
        },
        "line.3": {
            "text": "dort unter hohen alten"
        },
        "line.4": {
            "text": "buchen er sagt wenn er zum letzten"
        },
        "line.5": {
            "text": "mal die augen schlie\u00dft"
        },
        "line.6": {
            "text": "stellt er sich vor ich w\u00fcrd"
        },
        "line.7": {
            "text": "ihn dort besuchen er sagt dass"
        },
        "line.8": {
            "text": "dies sein grab im schatten liegen soll"
        },
        "line.9": {
            "text": "malt es mir aus und \u00fcbern rasen komme ich"
        },
        "line.10": {
            "text": "herbei um seine erde gut zu pflegen"
        },
        "line.11": {
            "text": "das w\u00e4re was ihn neben allem"
        },
        "line.12": {
            "text": "anderem am leben h\u00e4lt"
        },
        "line.13": {
            "text": "denn wir sind ganz weit fort"
        },
        "line.14": {
            "text": "vom schatten auf melaten"
        },
        "line.15": {
            "text": "sitzen im wei\u00dfen haus auf"
        },
        "line.16": {
            "text": "unserer insel hinter den"
        },
        "line.17": {
            "text": "sorgsam zugezogenen gardinen"
        },
        "line.18": {
            "text": "ich sehe seine augen kaum"
        },
        "line.19": {
            "text": "sie sind ganz schwarz sind sie"
        },
        "line.20": {
            "text": "noch offen oder schon verschlossen"
        },
        "line.21": {
            "text": "frage ich mich als er"
        },
        "line.22": {
            "text": "sie aufschl\u00e4gt und"
        },
        "line.23": {
            "text": "schon wieder damit anf\u00e4ngt sagt"
        },
        "line.24": {
            "text": "sein grab soll auf"
        },
        "line.25": {
            "text": "melaten sein"
        }
    }
}