        "Natur"
    ],
    "gender": "m",
    "author": "Mirko Bonn√©",
    "poem": {
        "line.1": {
            "text": "Als es darum ging, etwas"
        },
        "line.2": {
            "text": "zu sagen. Als wir hineinstarrten"
        },
        "line.3": {
            "text": "in das Himbeergebsch. Als keine,"
        },
        "line.4": {
            "text": "keine Antwort kam. Als die Nacht"
        },
        "line.5": {
            "text": "nicht aufhren wollte. Als sie"
        },
        "line.6": {
            "text": "aufhrte ohne Klagen. Als"
        },
        "line.7": {
            "text": "die Schmerzen nachlieen,"
        },
        "line.8": {
            "text": "als keiner mehr etwas wusste"
        },
        "line.9": {
            "text": "gegen Schmerz. Als ich wieder nur"
        },
        "line.10": {
            "text": "dich liebte. Als du mich fast vergat."
        },
        "line.11": {
            "text": "Als die Kirchen einstrzten. Als er starb,"
        },
        "line.12": {
            "text": "der Elefant, der Angst hatte vor der Umsiedlung"
        },
        "line.13": {
            "text": "nach Belgien. Als wir endlich verstanden,"
        },
        "line.14": {
            "text": "warum. Als einer das Gras mhte."
        },
        "line.15": {
            "text": "Als das Gras weiterwuchs."
        }
    }
}