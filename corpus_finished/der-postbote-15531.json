    "gender": "m",
    "author": "Ralf Meyer",
    "poem": {
        "line.1": {
            "text": "Unter deinem Morgenrock"
        },
        "line.2": {
            "text": "Ahnt er wohlgeformte Beine,"
        },
        "line.3": {
            "text": "Er w\u00fcrfe gern die Rechnung fort,"
        },
        "line.4": {
            "text": "Was ihm gut und richtig scheine."
        },
        "line.5": {
            "text": "Doch er sieht vorm Fensterbord"
        },
        "line.6": {
            "text": "Meine Hosen auf der Leine."
        },
        "line.7": {
            "text": "Da will er das Geld sofort."
        },
        "line.8": {
            "text": "- Mu\u00dft du Schulden per Versand"
        },
        "line.9": {
            "text": "Dir bestelln aus Katalogen?"
        },
        "line.10": {
            "text": "- Willst du mich schlecht angezogen?"
        },
        "line.11": {
            "text": "Unsre Liebe w\u00e4r verbrannt!"
        },
        "line.12": {
            "text": "Vom Gespr\u00e4ch wie angesogen,"
        },
        "line.13": {
            "text": "Steht der Postmann festgebannt."
        },
        "line.14": {
            "text": "Postillion, du G\u00f6tterbote,"
        },
        "line.15": {
            "text": "Wei\u00dft du noch die goldne Zeit?"
        },
        "line.16": {
            "text": "Deine Tasche, pralle Schote,"
        },
        "line.17": {
            "text": "Platzte auf, vom Licht zerteilt!"
        },
        "line.18": {
            "text": "Blas dein Posthorn, triff die Note,"
        },
        "line.19": {
            "text": "Und der Sommer steht bereit!"
        },
        "line.20": {
            "text": "- Morgen mu\u00df ich wieder l\u00e4uten,"
        },
        "line.21": {
            "text": "Wenn ihr hier im Haus verweilt."
        },
        "line.22": {
            "text": "Eure Liebe mag bedeuten,"
        },
        "line.23": {
            "text": "Wohin bald die Menschheit eilt."
        },
        "line.24": {
            "text": "\u00c4rger hab ich mit den Leuten,"
        },
        "line.25": {
            "text": "Weil mich eure Liebe heilt."
        }
    }
}