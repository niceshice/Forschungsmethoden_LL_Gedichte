{
    "title": "elementares-gedicht-5-12339",
    "categories": [
        "Erinnerung",
        "Natur"
    ],
    "gender": "m",
    "author": "Ulrich Koch",
    "poem": {
        "line.1": {
            "text": "Was ich vergessen habe, hat mit Gras zu tun,"
        },
        "line.2": {
            "text": "Brombeeren am Bahndamm, knisternden"
        },
        "line.3": {
            "text": "Sekunden, freih\u00e4ndigen Fahrr\u00e4dern,"
        },
        "line.4": {
            "text": "an Platanen angebunden auf einem Vorplatz,"
        },
        "line.5": {
            "text": "Anfang August, einem mit Teerpappe"
        },
        "line.6": {
            "text": "gedeckten Dach, auf dem der Abendregen"
        },
        "line.7": {
            "text": "dampfte nach seinem schnellen Ende,"
        },
        "line.8": {
            "text": "tropfenden B\u00e4umen. Mehr nicht."
        },
        "line.9": {
            "text": "Scheinbar aufrecht gehend, wei\u00df"
        },
        "line.10": {
            "text": "bis zum Rand des Wassers, der alles,"
        },
        "line.11": {
            "text": "was den Augen geh\u00f6rt, in seinem Spiegel"
        },
        "line.12": {
            "text": "bricht: Wie ein Schwan, hin"
        },
        "line.13": {
            "text": "und her gleitend auf einem L\u00f6schteich,"
        },
        "line.14": {
            "text": "arbeitet mein Ged\u00e4chtnis."
        },
        "line.15": {
            "text": "Ein Tier, das nicht vor mir floh,"
        },
        "line.16": {
            "text": "sondern sich seiner Nacktheit sch\u00e4mte."
        },
        "line.17": {
            "text": "Denn ich will mich an nichts erinnern,"
        },
        "line.18": {
            "text": "es sei denn, ich kann es wiederholen."
        }
    }
}