{
    "title": "schwesternlicht-15706",
    "gender": "w",
    "author": "Birgit Kreipe",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "krieg-das heißt ins feld zu ziehen"
        },
        "line.2": {
            "text": "in einer bäumchenschonung"
        },
        "line.3": {
            "text": "hundertachtzig zwerge zu erschießen"
        },
        "line.4": {
            "text": "so ein getümmel--krieg, das heißt schätze"
        },
        "line.5": {
            "text": "aus dem boden zu reißen und heimzulaufen,"
        },
        "line.6": {
            "text": "frieden heißt einfach weiterschlafen, und dann ..."
        },
        "line.7": {
            "text": "frieden war gekommen"
        },
        "line.8": {
            "text": "mit ihm, rieseln, der frühling."
        },
        "line.9": {
            "text": "er hatte die strategie gewählt"
        },
        "line.10": {
            "text": "ganz selbstverständlich"
        },
        "line.11": {
            "text": "überall zu sein."
        },
        "line.12": {
            "text": "er postete gelbe blüten an zweige"
        },
        "line.13": {
            "text": "riesige schneckenhörner, die"
        },
        "line.14": {
            "text": "eben noch den regen"
        },
        "line.15": {
            "text": "befühlten."
        },
        "line.16": {
            "text": "er machte den leuten"
        },
        "line.17": {
            "text": "hoffnung auf leichtere schlafmittel"
        },
        "line.18": {
            "text": "(man fürchtete insgeheim"
        },
        "line.19": {
            "text": "die hellen, widerspenstigen nächte)."
        },
        "line.20": {
            "text": "störungen kamen nur noch"
        },
        "line.21": {
            "text": "aus den rückzugsgebieten der krähen."
        },
        "line.22": {
            "text": "kopftücher auf grünen stengeln"
        },
        "line.23": {
            "text": "die benzodiazepine. ein zwerg"
        },
        "line.24": {
            "text": "verflucht, für immer zu lächeln"
        },
        "line.25": {
            "text": "harkte die luft-"
        },
        "line.26": {
            "text": "der frühling verschenkte"
        },
        "line.27": {
            "text": "knospen am fenster. zum aufwachen."
        },
        "line.28": {
            "text": "falls"
        },
        "line.29": {
            "text": "jemand aufwachen wollte"
        },
        "line.30": {
            "text": "aus diesem benommenen licht."
        },
        "line.31": {
            "text": "er leuchtete den wald aus."
        },
        "line.32": {
            "text": "schneeweißchen schlief"
        },
        "line.33": {
            "text": "eingewickelt in winterlicht"
        },
        "line.34": {
            "text": "wie in weißes geschenkpapier"
        },
        "line.35": {
            "text": "die finger wund. eine"
        },
        "line.36": {
            "text": "putzsüchtige."
        },
        "line.37": {
            "text": "rosenrot, diese blume"
        },
        "line.38": {
            "text": "das leben in märchen gewöhnt"
        },
        "line.39": {
            "text": "(ein mucks zur falschen zeit"
        },
        "line.40": {
            "text": "und du landest"
        },
        "line.41": {
            "text": "in einem fass voller nägel)"
        },
        "line.42": {
            "text": "blühte auf. es war ihre zeit."
        },
        "line.43": {
            "text": "hier, am baum"
        },
        "line.44": {
            "text": "die stachlige"
        },
        "line.45": {
            "text": "schwesternschaft der rosen"
        },
        "line.46": {
            "text": "das lächeln der mutter"
        },
        "line.47": {
            "text": "die sträußchen"
        },
        "line.48": {
            "text": "die jalousien."
        },
        "line.49": {
            "text": "störungen kamen nur noch"
        },
        "line.50": {
            "text": "aus den rückzugsgebieten der krähen."
        },
        "line.51": {
            "text": "unverschämtheit."
        },
        "line.52": {
            "text": "gute nacht."
        }
    }
}