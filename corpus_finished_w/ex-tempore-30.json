{
    "title": "ex-tempore-30",
    "gender": "w",
    "author": "Elke Erb",
    "author_birth": "1938",
    "poem": {
        "line.1": {
            "text": "Das fürchterlichste Geschrei erhebt meine Sklavenhaut"
        },
        "line.2": {
            "text": "(Onkel Tom, alte Haut)"
        },
        "line.3": {
            "text": "jedesmal, wenn sie sieht,"
        },
        "line.4": {
            "text": "daß sie nie frei sein soll."
        },
        "line.5": {
            "text": "Außer Sklavenhaut nichts als"
        },
        "line.6": {
            "text": "Herrnhaut sein soll."
        },
        "line.7": {
            "text": "Arme alte Sisyphoshaut,"
        },
        "line.8": {
            "text": "errang durch List fragwürdige Erfolge,"
        },
        "line.9": {
            "text": "zur Strafe rollte der Felsblock"
        },
        "line.10": {
            "text": "nur wieder hin, wo er herkam,"
        },
        "line.11": {
            "text": "Stein zu Stein, Bein zu Bein."
        },
        "line.12": {
            "text": "Dem Geröll entkommen,"
        },
        "line.13": {
            "text": "öde, verledert, sanft schnurren"
        },
        "line.14": {
            "text": "anscheinend die anscheinend sittsam"
        },
        "line.15": {
            "text": "aus Brandmalkringeln und -zinken gefügten"
        },
        "line.16": {
            "text": "Buchstabenzeilen"
        },
        "line.17": {
            "text": "auf der Haut"
        },
        "line.18": {
            "text": "der auf der Haut"
        },
        "line.19": {
            "text": "anscheinend satt in sich ruhenden Rede."
        },
        "line.20": {
            "text": "Warnung:"
        },
        "line.21": {
            "text": "Im Dunkeln lauert Gefahr."
        },
        "line.22": {
            "text": "Es ist ein Haken dabei. Warnung vor Betrug."
        },
        "line.23": {
            "text": "Bekommen haben."
        },
        "line.24": {
            "text": "Das Fell über die Ohren gezogen"
        },
        "line.25": {
            "text": "bekommen haben. Nun abhängen."
        },
        "line.26": {
            "text": "dasz ein einziger, vielleicht der schwächste"
        },
        "line.27": {
            "text": "der ganzen nation ein angeerbtes recht haben könnte,"
        },
        "line.28": {
            "text": "hundert tausend weisern und bessern"
        },
        "line.29": {
            "text": "menschen"
        },
        "line.30": {
            "text": "das fell über die ohren zu ziehn."
        },
        "line.31": {
            "text": "Mitspracherecht. Ein Mitspracherecht."
        },
        "line.32": {
            "text": "Aufklärung. Ein Mitspracherecht."
        },
        "line.33": {
            "text": "Jäger gehn im Wald und blasen"
        },
        "line.34": {
            "text": "Aus der Angst vor erlittener Gewalt"
        },
        "line.35": {
            "text": "in die Angst um die eigene Haut,"
        },
        "line.36": {
            "text": "aus der Angst um die eigene Haut"
        },
        "line.37": {
            "text": "in die Angst vor Betrug"
        },
        "line.38": {
            "text": "huscht Verdunklung. Im Dunkeln lauert Gefahr."
        },
        "line.39": {
            "text": "Arme alte ehrliche Haut."
        },
        "line.40": {
            "text": "Aufgeladen, gespannt. Entzündet,"
        },
        "line.41": {
            "text": "verwundet, verschorft, vernarbt, verhornt,"
        },
        "line.42": {
            "text": "tote Zellen, Abraum vorgeblicher Vorsorge, Warnung."
        },
        "line.43": {
            "text": "Satt ruhend genossene Wachsamkeit."
        },
        "line.44": {
            "text": "Bis in den Herzbetrieb heilt das geborgene Körnchen"
        },
        "line.45": {
            "text": "Wahrheit."
        },
        "line.46": {
            "text": "Frohlockend heilt"
        },
        "line.47": {
            "text": "die Erwiderung, Antwort auf , Tat auf Untat, Tat."
        },
        "line.48": {
            "text": "Untat auf Untat. Sanft schnurrend genossene Spannung."
        },
        "line.49": {
            "text": "Verdacht, dem Ruhm nach Großsein bedeute:"
        },
        "line.50": {
            "text": "Töten können."
        },
        "line.51": {
            "text": "Mit Gewinn: verwalten, verarbeiten, verdauen, erwidern."
        },
        "line.52": {
            "text": "(So daß ja dann Ruhm sich angenehm anfüllt"
        },
        "line.53": {
            "text": "mit etwas Substanz!)"
        },
        "line.54": {
            "text": "Nicht töten können: Klein und kümmerlich bleiben,"
        },
        "line.55": {
            "text": "unter Gewissensbissen."
        },
        "line.56": {
            "text": "Nur auch das große Geschrei auf die Zumutung hin,"
        },
        "line.57": {
            "text": "Gewalt anzuwenden."
        },
        "line.58": {
            "text": "Und die Todesverachtung gegen das Töten."
        },
        "line.59": {
            "text": "Aber Größe und Weisheit sind Allesfresser."
        },
        "line.60": {
            "text": "Nichtverdauen, Nichtverwalten, Nichterwidern:"
        },
        "line.61": {
            "text": "Zu dumm gewesen, kümmerlich, dumm,"
        },
        "line.62": {
            "text": "verantwortungslos"
        },
        "line.63": {
            "text": "(immerhin nicht: kieselsauer tückisch)."
        },
        "line.64": {
            "text": "Warnung."
        },
        "line.65": {
            "text": "Groß, weich und weise,"
        },
        "line.66": {
            "text": "denn wenn du nicht aufpaßt, dann haben sie dich,"
        },
        "line.67": {
            "text": "Geistesgegenwart!"
        },
        "line.68": {
            "text": "3.2.1995"
        }
    }
}