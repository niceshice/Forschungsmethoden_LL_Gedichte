{
    "title": "kochvorschrift-leichenschmaus-12836",
    "gender": "w",
    "author": "Margret Kreidl",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "KOCHVORSCHRIFT"
        },
        "line.2": {
            "text": "Das Fleisch ist reif."
        },
        "line.3": {
            "text": "Greif in den eigenen Teig."
        },
        "line.4": {
            "text": "Lass die Kuh gehen."
        },
        "line.5": {
            "text": "Die Äpfel musst du schälen."
        },
        "line.6": {
            "text": "Stachelbeeren mit einer Nadel anstechen."
        },
        "line.7": {
            "text": "Das Gelee im Kelch lass stehen."
        },
        "line.8": {
            "text": "Stärke dich mit Mehl."
        },
        "line.9": {
            "text": "Dann geh in die Stadt und schau,"
        },
        "line.10": {
            "text": "wer die schönsten Waden hat."
        },
        "line.11": {
            "text": "Einfache Erklärung: Landluft macht hungrig."
        },
        "line.12": {
            "text": "LEICHENSCHMAUS"
        },
        "line.13": {
            "text": "Die weißen Schuhe, die süße Stimme."
        },
        "line.14": {
            "text": "Komm zurück."
        },
        "line.15": {
            "text": "Der letzte Bissen."
        },
        "line.16": {
            "text": "Wir müssen die Mutter beweinen."
        },
        "line.17": {
            "text": "Das zähe Fleisch."
        },
        "line.18": {
            "text": "Der nächste Sonntag ist schon vorbei."
        },
        "line.19": {
            "text": "Die weißen Strümpfe, die fremde Stimme."
        },
        "line.20": {
            "text": "Komm zurück."
        },
        "line.21": {
            "text": "Die dünne Luft."
        },
        "line.22": {
            "text": "Ich kann nicht singen."
        },
        "line.23": {
            "text": "Das schlimme Kind."
        },
        "line.24": {
            "text": "Die Vögel fliegen am Himmel vorbei."
        },
        "line.25": {
            "text": "Das weiße Kleid, die alte Stimme."
        },
        "line.26": {
            "text": "Komm zurück."
        },
        "line.27": {
            "text": "Die dünnen Lippen."
        },
        "line.28": {
            "text": "Wir müssen die Söhne beweinen."
        },
        "line.29": {
            "text": "Das lange Haar."
        },
        "line.30": {
            "text": "Die nächste Mutter ist schon da."
        },
        "line.31": {
            "text": "Einfache Erklärung: Es ist immer das alte Lied."
        }
    }
}