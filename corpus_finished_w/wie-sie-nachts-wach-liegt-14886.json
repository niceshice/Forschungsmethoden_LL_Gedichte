{
    "title": "wie-sie-nachts-wach-liegt-14886",
    "gender": "w",
    "author": "Martina Hefter",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Wie sie nachts wach liegt, das gedimmte Licht"
        },
        "line.2": {
            "text": "beleuchtet"
        },
        "line.3": {
            "text": "(unaussprechlich)"
        },
        "line.4": {
            "text": "."
        },
        "line.5": {
            "text": "Ich seh das auch, Groß neben Klein, sprechen wirs aus,"
        },
        "line.6": {
            "text": "mindestens hundert in mehreren Reihen"
        },
        "line.7": {
            "text": "wie liebe Verwandte, aber"
        },
        "line.8": {
            "text": "diese hier zugeknöpft bis verschlossen, sieh doch"
        },
        "line.9": {
            "text": "diesen Klotz in Pantoffeln, die bauchige Amme"
        },
        "line.10": {
            "text": "geht als Vase."
        },
        "line.11": {
            "text": "Kommt jede Nacht"
        },
        "line.12": {
            "text": "mit fliegendem Müll."
        },
        "line.13": {
            "text": "Kommen Lichter angeschleudert"
        },
        "line.14": {
            "text": "von weit her aus der Natur,"
        },
        "line.15": {
            "text": "ploppen die Schatten auf, kompakt"
        },
        "line.16": {
            "text": "oder bloß dunkelnde Luft."
        },
        "line.17": {
            "text": "Sie kann die Hand nicht heben,"
        },
        "line.18": {
            "text": "keine Widerworte rufen,"
        },
        "line.19": {
            "text": "muss in die leiseste Anschauung gehen."
        }
    }
}