{
    "title": "tollen-im-neuschnee-6553",
    "gender": "w",
    "author": "Ilana Shmueli",
    "author_birth": "1924",
    "poem": {
        "line.1": {
            "text": "Tollen im Neuschnee"
        },
        "line.2": {
            "text": "blendendes Weiß wie nie wieder"
        },
        "line.3": {
            "text": "und wie's frostig im Kindermund schmilzt"
        },
        "line.4": {
            "text": "Flieder von damals"
        },
        "line.5": {
            "text": "und der Duft verborgener Veilchen"
        },
        "line.6": {
            "text": "Gras frisch gemäht"
        },
        "line.7": {
            "text": "glühende Sonne"
        },
        "line.8": {
            "text": "das Träumen im Nussbaum"
        },
        "line.9": {
            "text": "kleine grün-braune Finger auf rauher Rinde"
        },
        "line.10": {
            "text": "das alles - läßt sich's noch schreiben?"
        },
        "line.11": {
            "text": "es zieht"
        },
        "line.12": {
            "text": "es zieht die gute Hand meiner Schwester"
        },
        "line.13": {
            "text": "die Hand"
        },
        "line.14": {
            "text": "die so früh wieder losließ."
        }
    }
}