{
    "title": "roemisches-nachtbild-269",
    "gender": "w",
    "author": "Ingeborg Bachmann",
    "author_birth": "1926",
    "poem": {
        "line.1": {
            "text": "Wenn das Schaukelbrett die sieben Hügel"
        },
        "line.2": {
            "text": "nach oben entführt, gleitet es auch,"
        },
        "line.3": {
            "text": "von uns beschwert und umschlungen,"
        },
        "line.4": {
            "text": "ins finstere Wasser,"
        },
        "line.5": {
            "text": "taucht in den Flußschlamm, bis in unsrem Schoß"
        },
        "line.6": {
            "text": "die Fische sich sammeln."
        },
        "line.7": {
            "text": "Ist die Reihe an uns,"
        },
        "line.8": {
            "text": "stoßen wir ab."
        },
        "line.9": {
            "text": "Es sinken die Hügel,"
        },
        "line.10": {
            "text": "wir steigen und teilen"
        },
        "line.11": {
            "text": "jeden Fisch mit der Nacht."
        },
        "line.12": {
            "text": "Keiner springt ab."
        },
        "line.13": {
            "text": "So gewiß ists, daß nur die Liebe"
        },
        "line.14": {
            "text": "und einer den andern erhöht."
        }
    }
}