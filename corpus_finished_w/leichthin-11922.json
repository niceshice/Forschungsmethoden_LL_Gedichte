{
    "title": "leichthin-11922",
    "gender": "w",
    "author": "Anja Kampmann",
    "author_birth": "1983",
    "poem": {
        "line.1": {
            "text": "Leichthin"
        },
        "line.2": {
            "text": "ist der Sommer"
        },
        "line.3": {
            "text": "Ferne schreibt"
        },
        "line.4": {
            "text": "die Buchstaben deines Gedächtnisses"
        },
        "line.5": {
            "text": "mit leichter Hand"
        },
        "line.6": {
            "text": "Während ein einzelnes Riesenrad"
        },
        "line.7": {
            "text": "Gondel um Gondel"
        },
        "line.8": {
            "text": "in die Luft steigen lässt"
        },
        "line.9": {
            "text": "So ist auch die Nacht"
        },
        "line.10": {
            "text": "nämlich das Aufsteigen"
        },
        "line.11": {
            "text": "einer ungefähren Sprache"
        },
        "line.12": {
            "text": "Kondenswasser"
        },
        "line.13": {
            "text": "und so sind die Tage"
        },
        "line.14": {
            "text": "nämlich ähnlicher dem Vergessen"
        },
        "line.15": {
            "text": "dem Abwenden des Blicks wenn"
        },
        "line.16": {
            "text": "der frühe Abend die Kleider durchdringt"
        },
        "line.17": {
            "text": "die Übergänge ins Vorhin"
        },
        "line.18": {
            "text": "dem du ähnlicher"
        },
        "line.19": {
            "text": "wirst. Abtreiben auf diesem alten Dampfer in Richtung Atlantik, Cuba"
        },
        "line.20": {
            "text": "So sind Tage"
        },
        "line.21": {
            "text": "leichthin -"
        },
        "line.22": {
            "text": "fallen die Gondeln"
        },
        "line.23": {
            "text": "fallen wie jeder Schritt"
        },
        "line.24": {
            "text": "Setzkästen mit getrockneten Faltern"
        },
        "line.25": {
            "text": "eine Sammlung"
        },
        "line.26": {
            "text": "die wie ein Schnalzen in der Dunkelheit verklingt."
        }
    }
}