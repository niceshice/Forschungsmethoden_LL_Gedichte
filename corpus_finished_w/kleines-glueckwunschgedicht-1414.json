{
    "title": "kleines-glueckwunschgedicht-1414",
    "gender": "w",
    "author": "Christine Nöstlinger",
    "author_birth": "1936",
    "poem": {
        "line.1": {
            "text": "Vater, hier bin ich!"
        },
        "line.2": {
            "text": "Das Bein ist gebrochen."
        },
        "line.3": {
            "text": "Den Gips,"
        },
        "line.4": {
            "text": "den behalt ich"
        },
        "line.5": {
            "text": "für sieben Wochen."
        },
        "line.6": {
            "text": "Walters Vater"
        },
        "line.7": {
            "text": "wird dich verklagen,"
        },
        "line.8": {
            "text": "denn ich habe dem Walter"
        },
        "line.9": {
            "text": "die Brille zerschlagen."
        },
        "line.10": {
            "text": "Was von den Skiern"
        },
        "line.11": {
            "text": "noch übrig ist,"
        },
        "line.12": {
            "text": "liegt teils auf der Piste,"
        },
        "line.13": {
            "text": "teils auf dem Mist."
        },
        "line.14": {
            "text": "Wegen der Rechnung"
        },
        "line.15": {
            "text": "für die Fensterscheiben"
        },
        "line.16": {
            "text": "wird dir der Wirt"
        },
        "line.17": {
            "text": "persönlich schreiben."
        },
        "line.18": {
            "text": "Und den Fotoapparat,"
        },
        "line.19": {
            "text": "den find ich nicht mehr."
        },
        "line.20": {
            "text": "Herzlichen Glückwunsch"
        },
        "line.21": {
            "text": "zu meiner Wiederkehr!"
        }
    }
}