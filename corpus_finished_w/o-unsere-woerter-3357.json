{
    "title": "o-unsere-woerter-3357",
    "gender": "w",
    "author": "Dorothea  Grünzweig",
    "author_birth": "1952",
    "poem": {
        "line.1": {
            "text": "Das Finnenwort für Mond ist kuu"
        },
        "line.2": {
            "text": "(sei auch erwähnt das englische moo"
        },
        "line.3": {
            "text": "bei Wegfall des wackligen n)"
        },
        "line.4": {
            "text": "zwei Wesen sind miteinander vereint"
        },
        "line.5": {
            "text": "das heißt Erhöhung der Sichtqualität"
        },
        "line.6": {
            "text": "wie im Allativ"
        },
        "line.7": {
            "text": "lle"
        },
        "line.8": {
            "text": "so in"
        },
        "line.9": {
            "text": "Lottelle/"
        },
        "line.10": {
            "text": "zu Lotte"
        },
        "line.11": {
            "text": "ein heimatliches"
        },
        "line.12": {
            "text": "le/chen"
        },
        "line.13": {
            "text": "schwebt"
        },
        "line.14": {
            "text": "wie in"
        },
        "line.15": {
            "text": "hirttää/"
        },
        "line.16": {
            "text": "erhängen ein guter Hirte lebt"
        },
        "line.17": {
            "text": "Die Kuh wenn sie am Himmel steht"
        },
        "line.18": {
            "text": "leuchtet dem malmenden Mond in den Wiesen"
        },
        "line.19": {
            "text": "es sorgt die Gescheckte zu uns herab"
        },
        "line.20": {
            "text": "wenn Kuunacht ist und wenn ihre Milch"
        },
        "line.21": {
            "text": "vom Nachtwind gemolken in düsteres"
        },
        "line.22": {
            "text": "räßes Gewässer fließt und siehe"
        },
        "line.23": {
            "text": "weiß wird es und süß"
        },
        "line.24": {
            "text": "Immer schon haben wir Küue geliebt"
        },
        "line.25": {
            "text": "die wir von Zeitnot zerschlagen sind"
        },
        "line.26": {
            "text": "tief in uns watet ihre Natur"
        },
        "line.27": {
            "text": "das eilfreie selige Grasen"
        },
        "line.28": {
            "text": "hier nun verquickt mit bezaubernden Phasen"
        },
        "line.29": {
            "text": "so folgen wir der schwindenden wachsenden Kuu"
        },
        "line.30": {
            "text": "der Sichelkuu (denkbar auch Sichelmadonna)"
        },
        "line.31": {
            "text": "der Voll- Halb- und Neukuu"
        },
        "line.32": {
            "text": "verfinsterten Kuu"
        },
        "line.33": {
            "text": "wenn sie errötet braust unser Blut"
        },
        "line.34": {
            "text": "(auch hockt ein Mensch ihr im Innern)"
        },
        "line.35": {
            "text": "Und jedesmal wenn sie widerkäut im"
        },
        "line.36": {
            "text": "üppig wuchernden Himmel"
        },
        "line.37": {
            "text": "fällt für uns ab eine feine Zeit Schwermut"
        },
        "line.38": {
            "text": "die holde sinkt in uns ein wir legen uns"
        },
        "line.39": {
            "text": "flach und erinnern"
        },
        "line.40": {
            "text": "und hoffen sehr denn Hoffen tut gut"
        },
        "line.41": {
            "text": "ihr blüht kein gewaltsamer Tod"
        },
        "line.42": {
            "text": "Anmerkung: Allativ  einer der 15 Fälle der finnischen Sprache"
        }
    }
}