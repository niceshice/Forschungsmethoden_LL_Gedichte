{
    "title": "das-rauchgespenst-454",
    "gender": "w",
    "author": "Jutta Richter",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Im Schornstein wohnt das Rauchgespenst"
        },
        "line.2": {
            "text": "seit hundertzwanzig Jahren,"
        },
        "line.3": {
            "text": "und immer, wenn der Ofen brennt,"
        },
        "line.4": {
            "text": "will es zum Himmel fahren."
        },
        "line.5": {
            "text": "Das Rauchgespenst heißt Adalbert."
        },
        "line.6": {
            "text": "So hieß sein Vater schon."
        },
        "line.7": {
            "text": "In der Familie Rauchgespenst"
        },
        "line.8": {
            "text": "heißt so der erste Sohn."
        },
        "line.9": {
            "text": "Adalbert ist ein Wintergeist,"
        },
        "line.10": {
            "text": "wird groß bei Schnee und Frost."
        },
        "line.11": {
            "text": "Am größten ist er immer dann,"
        },
        "line.12": {
            "text": "wenn draußen Ostwind tost."
        },
        "line.13": {
            "text": "Er möchte eine Wolke sein,"
        },
        "line.14": {
            "text": "will in die Ferne schweben."
        },
        "line.15": {
            "text": "Doch was auch immer er versucht,"
        },
        "line.16": {
            "text": "er bleibt am Schornstein kleben."
        },
        "line.17": {
            "text": "Ein festes Band, das fesselt ihn"
        },
        "line.18": {
            "text": "an Ofen, Schornstein, Haus."
        },
        "line.19": {
            "text": "Und alles, was er kennt und weiß,"
        },
        "line.20": {
            "text": "denkt er sich heimlich aus."
        },
        "line.21": {
            "text": "Er denkt bei Tag, er träumt bei Nacht."
        },
        "line.22": {
            "text": "Er möchte alles wissen."
        },
        "line.23": {
            "text": "Am allerliebsten würde er"
        },
        "line.24": {
            "text": "die Regenwolken küssen."
        }
    }
}