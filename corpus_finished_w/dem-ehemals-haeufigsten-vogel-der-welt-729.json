{
    "title": "dem-ehemals-haeufigsten-vogel-der-welt-729",
    "gender": "w",
    "author": "Silke Scheuermann",
    "author_birth": "1973",
    "poem": {
        "line.1": {
            "text": "Letzte einer Art zu sein"
        },
        "line.2": {
            "text": "was für eine merkwürdige Aufgabe"
        },
        "line.3": {
            "text": "Wo du doch einmal andere Vorstellungen"
        },
        "line.4": {
            "text": "von Enge und Weite hattest Sehr verschieden"
        },
        "line.5": {
            "text": "von der Seniorsuite im Zoo von Cincinnati"
        },
        "line.6": {
            "text": "Martha letzte Wandertaube der Welt"
        },
        "line.7": {
            "text": "was für ein Dilemma daß ihr so schmackhaft wart"
        },
        "line.8": {
            "text": "Eine einzige Delikatess-Großhandlung"
        },
        "line.9": {
            "text": "verkaufte im Jahr 1855 achtzehntausend"
        },
        "line.10": {
            "text": "von euch an hungrige New Yorker"
        },
        "line.11": {
            "text": "Wenn du in deiner Voliere"
        },
        "line.12": {
            "text": "das wirkliche Fliegen vermißt"
        },
        "line.13": {
            "text": "erinnere dich an eure Schwärme"
        },
        "line.14": {
            "text": "Tausende von Metern breit"
        },
        "line.15": {
            "text": "oder an die Brutkolonien"
        },
        "line.16": {
            "text": "fünfzig mal sechs Kilometer Wie ihr"
        },
        "line.17": {
            "text": "als die ersten europäischen"
        },
        "line.18": {
            "text": "Auswanderer nach Amerika kamen"
        },
        "line.19": {
            "text": "den Himmel verdunkeltet Wie ihr sie Stunden"
        },
        "line.20": {
            "text": "im Dunkeln stehen ließt für staunende Berechnungen"
        },
        "line.21": {
            "text": "Erinnere dich an die Zeit vor"
        },
        "line.22": {
            "text": "den Tötungsmethoden und dem Eisenbahnnetz"
        },
        "line.23": {
            "text": "Ein paar wilde Tiere"
        },
        "line.24": {
            "text": "haben euch bedroht"
        }
    }
}