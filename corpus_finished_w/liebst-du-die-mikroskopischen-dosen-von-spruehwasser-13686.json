{
    "title": "liebst-du-die-mikroskopischen-dosen-von-spruehwasser-13686",
    "gender": "w",
    "author": "Claudia Gabler",
    "author_birth": "1970",
    "poem": {
        "line.1": {
            "text": "Liebst du die mikroskopischen Dosen von Sprühwasser,"
        },
        "line.2": {
            "text": "die aus den Blüten der Städte ziehen,"
        },
        "line.3": {
            "text": "die domestizieren"
        },
        "line.4": {
            "text": "und uns von bukolischen Landschaften berichten,"
        },
        "line.5": {
            "text": "die sie auf ihren Mobbingtouren gestreift haben werden,"
        },
        "line.6": {
            "text": "die sich ausbreiten"
        },
        "line.7": {
            "text": "in unseren Wannen voll Glück?"
        },
        "line.8": {
            "text": ""
        },
        "line.9": {
            "text": "Wir aber sind schon lang in die Gärten gezogen,"
        },
        "line.10": {
            "text": "wo früher Mönche grasten,"
        },
        "line.11": {
            "text": "artgerecht und hungrig in ihrem Gesang."
        },
        "line.12": {
            "text": "Wir einst gewesenen MetroPolneure."
        },
        "line.13": {
            "text": "Wenn wir Menschenkinder jetzt Schuhe anziehen,"
        },
        "line.14": {
            "text": "finden wir manchmal Blasen darin."
        },
        "line.15": {
            "text": ""
        },
        "line.16": {
            "text": "Lieben sagst du,"
        },
        "line.17": {
            "text": "sei die falsche Vokabel."
        }
    }
}