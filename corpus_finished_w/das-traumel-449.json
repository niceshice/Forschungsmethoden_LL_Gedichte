{
    "title": "das-traumel-449",
    "gender": "w",
    "author": "Jutta Richter",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Das Traumel wohnt in meinem Kopf."
        },
        "line.2": {
            "text": "Es ist ein wildes Tier."
        },
        "line.3": {
            "text": "Woanders wollte man es nicht,"
        },
        "line.4": {
            "text": "drum lebt es jetzt bei mir."
        },
        "line.5": {
            "text": "Das Traumel ist am Tage still."
        },
        "line.6": {
            "text": "Es schläft, macht keinen Krach."
        },
        "line.7": {
            "text": "Doch fallen mir die Augen zu,"
        },
        "line.8": {
            "text": "dann wird das Traumel wach."
        },
        "line.9": {
            "text": "Es hüpft in meinem Kopf herum."
        },
        "line.10": {
            "text": "Es macht die Träume bunt,"
        },
        "line.11": {
            "text": "und wenn das Traumel leise bellt,"
        },
        "line.12": {
            "text": "träum ich von einem Hund."
        },
        "line.13": {
            "text": "Am Mittwoch war das Traumel krank."
        },
        "line.14": {
            "text": "Es hat gestöhnt, geweint."
        },
        "line.15": {
            "text": "Ich träumte eine graue Stadt,"
        },
        "line.16": {
            "text": "wo nie die Sonne scheint."
        },
        "line.17": {
            "text": "Ich träumte einen Pflaumenbaum"
        },
        "line.18": {
            "text": "mit einem schwarzen Mund."
        },
        "line.19": {
            "text": "Der fraß mich. Ich bin aufgewacht."
        },
        "line.20": {
            "text": "Das Traumel war gesund."
        }
    }
}