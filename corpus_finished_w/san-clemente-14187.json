{
    "title": "san-clemente-14187",
    "gender": "w",
    "author": "Birgit Kreipe",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "eine kirche"
        },
        "line.2": {
            "text": "darunter noch eine kirche"
        },
        "line.3": {
            "text": "darunter ein knochenharter tempel."
        },
        "line.4": {
            "text": "jede schicht ein eigener traum, und"
        },
        "line.5": {
            "text": "sie träumen voneinander, übereinander"
        },
        "line.6": {
            "text": "gestapelt, in einer:"
        },
        "line.7": {
            "text": "das leid katharinas, erleuchtet"
        },
        "line.8": {
            "text": "nur vom wahn ihres heiligenscheins."
        },
        "line.9": {
            "text": "vektoren, ihr goldener"
        },
        "line.10": {
            "text": "spin"
        },
        "line.11": {
            "text": "zwischen aura"
        },
        "line.12": {
            "text": "und byzantinischem jenseits der kuppel."
        },
        "line.13": {
            "text": "folterträume, wie aus dem zauberkasten"
        },
        "line.14": {
            "text": "der depression. verklärung, ein paradies"
        },
        "line.15": {
            "text": "nur für sekunden. ein zeiger bewegt sich"
        },
        "line.16": {
            "text": "aus der wand brechen blumen"
        },
        "line.17": {
            "text": "wuchern, flüstern  sind schon zertreten."
        },
        "line.18": {
            "text": "du mit dem wischmopp, dem eimer"
        },
        "line.19": {
            "text": "siehst du, wie sich am fuß der wand"
        },
        "line.20": {
            "text": "ein fluss teilt, gleich hinter den alten göttern?"
        },
        "line.21": {
            "text": "ja, es soll immer hoffnung sein"
        },
        "line.22": {
            "text": "schimmer auf wasser, dein spiegelbild."
        },
        "line.23": {
            "text": "unter der kirche ist noch eine kirche"
        },
        "line.24": {
            "text": "und darunter ein knochenweißer tempel"
        },
        "line.25": {
            "text": "und darunter ein haus, alles vergessen"
        },
        "line.26": {
            "text": "und darunter die hölle. oder ein brunnen."
        }
    }
}