{
    "title": "glasuren-des-januar-carne-vale-1360",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "und die dünnen Umwege, hatten in Kältewannen"
        },
        "line.2": {
            "text": "gebadet, in Senken mit Eisstöpseln,"
        },
        "line.3": {
            "text": "Schwämmen aus Kremserweiß, Bürsten,"
        },
        "line.4": {
            "text": "vergipsten Gebüschen,"
        },
        "line.5": {
            "text": "und"
        },
        "line.6": {
            "text": "einmal fiel Hagel, als wir über Bahnschwellen"
        },
        "line.7": {
            "text": "wanderten, über die nach und nach völlig"
        },
        "line.8": {
            "text": "verschütteten Hügel"
        },
        "line.9": {
            "text": ", bemehlt meine Stimme,"
        },
        "line.10": {
            "text": "Einsilbigkeit, ich lehnte mich tiefer in deinen Geruch"
        },
        "line.11": {
            "text": "und ich schlingerte neben dir her"
        },
        "line.12": {
            "text": "wie auf Eiern, wie Bildbeschreitungen"
        },
        "line.13": {
            "text": "nur auf den Fingerkuppen"
        },
        "line.14": {
            "text": ", im seifigen Licht"
        },
        "line.15": {
            "text": "inhalierten wir Birken, die lautlosen Luftschichten,"
        },
        "line.16": {
            "text": "rechtsdrehend linksdrehend Krähen,"
        },
        "line.17": {
            "text": "der Atem in Festkleidung zwischen uns und"
        },
        "line.18": {
            "text": "diese Gier nach Berührung EIN TAFELBERG"
        },
        "line.19": {
            "text": "DEN WIR SPAZIERENFÜHRTEN, und etwas"
        },
        "line.20": {
            "text": "zog neben uns her und entfernte sich,"
        },
        "line.21": {
            "text": "später"
        },
        "line.22": {
            "text": "die hell übersprenkelten Hänge"
        },
        "line.23": {
            "text": "schon tiefer gebeugt"
        }
    }
}