{
    "title": "alle-tage-265",
    "gender": "w",
    "author": "Ingeborg Bachmann",
    "author_birth": "1926",
    "poem": {
        "line.1": {
            "text": "Der Krieg wird nicht mehr erklärt,"
        },
        "line.2": {
            "text": "sondern fortgesetzt. Das Unerhörte"
        },
        "line.3": {
            "text": "ist alltäglich geworden. Der Held"
        },
        "line.4": {
            "text": "bleibt den Kämpfen fern. Der Schwache"
        },
        "line.5": {
            "text": "ist in die Feuerzonen gerückt."
        },
        "line.6": {
            "text": "Die Uniform des Tages ist die Geduld,"
        },
        "line.7": {
            "text": "die Auszeichnung der armselige Stern"
        },
        "line.8": {
            "text": "der Hoffnung über dem Herzen."
        },
        "line.9": {
            "text": "Er wird verliehen,"
        },
        "line.10": {
            "text": "wenn nichts mehr geschieht,"
        },
        "line.11": {
            "text": "wenn das Trommelfeuer verstummt,"
        },
        "line.12": {
            "text": "wenn der Feind unsichtbar geworden ist"
        },
        "line.13": {
            "text": "und der Schatten ewiger Rüstung"
        },
        "line.14": {
            "text": "den Himmel bedeckt."
        },
        "line.15": {
            "text": "Er wird verliehen"
        },
        "line.16": {
            "text": "für die Flucht von den Fahnen,"
        },
        "line.17": {
            "text": "für die Tapferkeit vor dem Freund,"
        },
        "line.18": {
            "text": "für den Verrat unwürdiger Geheimnisse"
        },
        "line.19": {
            "text": "und die Nichtachtung"
        },
        "line.20": {
            "text": "jeglichen Befehls."
        }
    }
}