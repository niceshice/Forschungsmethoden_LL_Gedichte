{
    "title": "hab-ich-die-worte-12650",
    "gender": "w",
    "author": "Daniela Danz",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "hab ich wie Schwalben die Worte"
        },
        "line.2": {
            "text": "Bögen zu schlagen"
        },
        "line.3": {
            "text": "zwischen Unsichtbarem und leicht zu sein"
        },
        "line.4": {
            "text": "hab ich leicht zu sein"
        },
        "line.5": {
            "text": "hab ich Schweres genug"
        },
        "line.6": {
            "text": "zu wenig Schweres genug um es zu tragen"
        },
        "line.7": {
            "text": "ich trage meine Schwalbe durch den Sommer"
        },
        "line.8": {
            "text": "mit entzündeten Wirbeln"
        },
        "line.9": {
            "text": "liegt sie auf meiner Schulter und staunt"
        },
        "line.10": {
            "text": "hab ich traurig zu sein"
        },
        "line.11": {
            "text": "hab ich Leichteres jemals getragen"
        },
        "line.12": {
            "text": "als diese eigensinnige Schwalbe?"
        }
    }
}