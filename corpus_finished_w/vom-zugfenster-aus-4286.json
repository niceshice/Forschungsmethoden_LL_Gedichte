{
    "title": "vom-zugfenster-aus-4286",
    "gender": "w",
    "author": "Brigitte Struzyk",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Nun fallen die roten Blätter,"
        },
        "line.2": {
            "text": "die roten Blätter fallen."
        },
        "line.3": {
            "text": "Bald fallen die Hallen"
        },
        "line.4": {
            "text": "in sich zusammen"
        },
        "line.5": {
            "text": "wie sonst auch Bahnstationen"
        },
        "line.6": {
            "text": "an der Saale hellem Strande"
        },
        "line.7": {
            "text": "."
        },
        "line.8": {
            "text": "Die Burgen perfektsaniert,"
        },
        "line.9": {
            "text": "die Dächer gedeckt,"
        },
        "line.10": {
            "text": "das alte Gemäuerflankiert"
        },
        "line.11": {
            "text": "von Sparkassenpavillons."
        },
        "line.12": {
            "text": "Im Kurpark spazieren,"
        },
        "line.13": {
            "text": "die hier sanieren,"
        },
        "line.14": {
            "text": "oft Gestalten zart und mild"
        },
        "line.15": {
            "text": "."
        },
        "line.16": {
            "text": "Die Wandervögel ziehen dahin,"
        },
        "line.17": {
            "text": "Naumburg, Schulpforta, Bad Kösen,"
        },
        "line.18": {
            "text": "vorbei an denNordic Walkern"
        },
        "line.19": {
            "text": "hinauf zur Einkehr ins Himmelreich."
        },
        "line.20": {
            "text": "Bewehrt fällt der Fluss,"
        },
        "line.21": {
            "text": "Großheringen,"
        },
        "line.22": {
            "text": "der Zementfabrik zu."
        },
        "line.23": {
            "text": "und der Wind streicht durch die Hallen"
        },
        "line.24": {
            "text": "."
        },
        "line.25": {
            "text": "Flatterbandan der Baustelle Paradies"
        },
        "line.26": {
            "text": "vorden Rohren der Fernleitungswärme"
        },
        "line.27": {
            "text": "für Lobeda."
        }
    }
}