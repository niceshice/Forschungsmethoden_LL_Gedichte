{
    "title": "der-mondhof-war-noch-nie-so-gross-1283",
    "gender": "w",
    "author": "Christine Lavant",
    "author_birth": "1915",
    "poem": {
        "line.1": {
            "text": "Der Mondhof war noch nie so groß,"
        },
        "line.2": {
            "text": "im Süden kämpft die Regenzeit,"
        },
        "line.3": {
            "text": "der Herr hält seinen Zorn bereit"
        },
        "line.4": {
            "text": "und läßt gewiß die Hunde los,"
        },
        "line.5": {
            "text": "sobald ich etwas träume."
        },
        "line.6": {
            "text": "Des Nachbars Apfelbäume"
        },
        "line.7": {
            "text": "sind wild bewegt vom warmen Wind,"
        },
        "line.8": {
            "text": "die Rosenkugel duckt sich blind"
        },
        "line.9": {
            "text": "im gelben Wald der Malven."
        },
        "line.10": {
            "text": "Die Sterne, die mir halfen,"
        },
        "line.11": {
            "text": "solang ich noch voll Hoffnung war,"
        },
        "line.12": {
            "text": "bedeuten jetzt ein Sterbejahr"
        },
        "line.13": {
            "text": "und Krankheit, Feindschaft, Kummer."
        },
        "line.14": {
            "text": "Mein Herz erträgt voll stummer"
        },
        "line.15": {
            "text": "Verwunderung die arge Zeit"
        },
        "line.16": {
            "text": "und trinkt in Abgeschiedenheit"
        },
        "line.17": {
            "text": "den bittern Kelch der Ängste."
        },
        "line.18": {
            "text": "Die Nacht ist wohl die längste!"
        },
        "line.19": {
            "text": "Vielleicht kräht niemals mehr ein Hahn?"
        },
        "line.20": {
            "text": "Der Mond welkt wie ein Löwenzahn,"
        },
        "line.21": {
            "text": "hat seinen Hof verloren."
        },
        "line.22": {
            "text": "Mein Traum fällt ungeboren"
        },
        "line.23": {
            "text": "dem Eifer Gottes in die Hand,"
        },
        "line.24": {
            "text": "ich weine keine Träne."
        },
        "line.25": {
            "text": "In meinen Augen knirscht der Sand"
        },
        "line.26": {
            "text": "wie hundert Hundezähne."
        }
    }
}