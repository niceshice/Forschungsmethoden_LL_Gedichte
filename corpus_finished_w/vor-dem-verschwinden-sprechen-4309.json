{
    "title": "vor-dem-verschwinden-sprechen-4309",
    "gender": "w",
    "author": "Andrea Heuser",
    "author_birth": "1971",
    "poem": {
        "line.1": {
            "text": "SPRECHEN hier unten, ganz nah"
        },
        "line.2": {
            "text": "beben der gleise"
        },
        "line.3": {
            "text": "mückenschwarm über ginster"
        },
        "line.4": {
            "text": "das gewitter bleibt aus"
        },
        "line.5": {
            "text": "SPRECHEN jetzt, die tauben wieder"
        },
        "line.6": {
            "text": "noch, noch einmal"
        },
        "line.7": {
            "text": "dein heller ton"
        },
        "line.8": {
            "text": "über dem schotter, dem ohr"
        }
    }
}