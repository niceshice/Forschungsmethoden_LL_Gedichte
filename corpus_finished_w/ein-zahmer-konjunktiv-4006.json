{
    "title": "ein-zahmer-konjunktiv-4006",
    "gender": "w",
    "author": "Elke Erb",
    "author_birth": "1938",
    "poem": {
        "line.1": {
            "text": "Die Straßenbahn kommt nicht Hält nicht Schließt die Tür"
        },
        "line.2": {
            "text": "bevor du das Trittbrett erreichst."
        },
        "line.3": {
            "text": "Etwas ist kompliziert, nicht unkompliziert."
        },
        "line.4": {
            "text": "Wäre es unkompliziert, könntest du ... Das Herz eine Katze"
        },
        "line.5": {
            "text": "auf dem Sprung Ereignislos"
        },
        "line.6": {
            "text": "steht der Erlenstamm von oben bis unten."
        },
        "line.7": {
            "text": "Eine Straßenbahn kommt nicht"
        },
        "line.8": {
            "text": "Das sollte nicht sein"
        },
        "line.9": {
            "text": "Allerhand Logiken"
        },
        "line.10": {
            "text": "Mit dem Rücken zu dir Mit Messer und Gabel vor sich"
        },
        "line.11": {
            "text": "Gelegentlich miaut etwas Klappert"
        },
        "line.12": {
            "text": "Ohr du und Gegend."
        },
        "line.13": {
            "text": "18.5.05"
        }
    }
}