{
    "title": "das-raeumliche-denken-12704",
    "gender": "w",
    "author": "Martina Hefter",
    "author_birth": "1965",
    "poem": {
        "line.1": {
            "text": "Manchester 1945. Rudolf von Laban forscht über die Optimierung"
        },
        "line.2": {
            "text": "der Handbewegungen von Fabrikarbeiterinnen und Fabrikarbeitern"
        },
        "line.3": {
            "text": "Den Flügelschlag eines Kolibris"
        },
        "line.4": {
            "text": "zerlegt in time, intensity?"
        },
        "line.5": {
            "text": "Das Öffnen und Schließen der Hand,"
        },
        "line.6": {
            "text": "Hebel umlegen, eine Vierteldrehung"
        },
        "line.7": {
            "text": "aus der Verträumtheit am Morgen,"
        },
        "line.8": {
            "text": "das in Einzelheiten teilen: Wehe,"
        },
        "line.9": {
            "text": "der Zugriff aufs Jetzt fällt heillos verfranst aus."
        },
        "line.10": {
            "text": "Alle diese Jetzte, Zähnchen, schnappende,"
        },
        "line.11": {
            "text": "fiese Gebisse."
        },
        "line.12": {
            "text": "Sich beimengen der eigenen Leistung."
        },
        "line.13": {
            "text": "Zehn Stunden am Band empfindsam sein."
        },
        "line.14": {
            "text": "Ding dong, eure Gruppe"
        },
        "line.15": {
            "text": "fuhr den goldenen Akkord ein."
        },
        "line.16": {
            "text": "Die Arbeiter agierten mit holzernen Hämmern,"
        },
        "line.17": {
            "text": "dass der ganze Körper in Schwung kam."
        },
        "line.18": {
            "text": "... lass uns ausgestreckt liegen, Wolken zählen,"
        },
        "line.19": {
            "text": "pendeln im Superblau"
        }
    }
}