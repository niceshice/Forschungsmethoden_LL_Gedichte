{
    "title": "wenn-du-deine-finger-aus-der-erde-ziehst-7416",
    "gender": "w",
    "author": "Orsolya Kalász",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "für Stevan Tontic"
        },
        "line.2": {
            "text": "Warum willst du einen Garten"
        },
        "line.3": {
            "text": "mit hohen Mauern?"
        },
        "line.4": {
            "text": "Warum soll dich dort niemand sehen?"
        },
        "line.5": {
            "text": "Du hast noch nie fremde Stimmen im Kopf gehört."
        },
        "line.6": {
            "text": "Niemand velangt von dir,"
        },
        "line.7": {
            "text": "daß du Reue zeigst."
        },
        "line.8": {
            "text": "Und wer sollte dich nach dem Wort Trauergras fragen."
        },
        "line.9": {
            "text": "Warum glaubst du keine andere Wahl zu haben"
        },
        "line.10": {
            "text": "als jenen Garten zu finden und dort"
        },
        "line.11": {
            "text": "deine Finger in die Erde zu graben"
        },
        "line.12": {
            "text": "und zu warten, daß das Trauergras"
        },
        "line.13": {
            "text": "in die Tiefe sprießt."
        },
        "line.14": {
            "text": "Wirst du deine Finger aus der Erde ziehen,"
        },
        "line.15": {
            "text": "werden deine Nägel schwarz umrandet sein."
        },
        "line.16": {
            "text": "Zehn taube"
        },
        "line.17": {
            "text": "Zehn stumme und blinde"
        },
        "line.18": {
            "text": "Trauergestalten."
        },
        "line.19": {
            "text": "Eine andere Hand war es"
        },
        "line.20": {
            "text": "die jene Zeile schrieb:"
        },
        "line.21": {
            "text": "\"Mein Herz versinkt in einem Brunnen, das keinen Boden hat.\""
        }
    }
}