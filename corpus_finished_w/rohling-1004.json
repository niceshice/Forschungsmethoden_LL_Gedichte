{
    "title": "rohling-1004",
    "gender": "w",
    "author": "Ulrike Draesner",
    "author_birth": "1962",
    "poem": {
        "line.1": {
            "text": "in ihn werden sie gegossen"
        },
        "line.2": {
            "text": "die zukünftigen jahre"
        },
        "line.3": {
            "text": "ich gebe dir zucker den guten start"
        },
        "line.4": {
            "text": "als wärst du ein pferd dir die sporen"
        },
        "line.5": {
            "text": "zu verdienen. so sagt man noch?"
        },
        "line.6": {
            "text": "genossen die zukunft, stoffbespannt."
        },
        "line.7": {
            "text": "wir lassen es, sage ich zu dir: kleben!"
        },
        "line.8": {
            "text": "wir lassen ein band es umgeben"
        },
        "line.9": {
            "text": "und nahm als muster den elefanten"
        },
        "line.10": {
            "text": "das dickhäutige frauengeführte tier"
        },
        "line.11": {
            "text": "das zu trauern weiß wie es ist an"
        },
        "line.12": {
            "text": "tagen wie diesem: dass die sonne"
        },
        "line.13": {
            "text": "scheint das datum stimmt und verrinnt"
        },
        "line.14": {
            "text": "dass der nächste schritt notwendig"
        },
        "line.15": {
            "text": "und unwiederbringlich gehst du durchs"
        },
        "line.16": {
            "text": "schultor mit deinen schuhen größe 30"
        },
        "line.17": {
            "text": "aus kälbchenhaut. nun wachsen"
        },
        "line.18": {
            "text": "die weißen großen zähne"
        },
        "line.19": {
            "text": "dir und ich"
        },
        "line.20": {
            "text": "will dich hegen"
        }
    }
}