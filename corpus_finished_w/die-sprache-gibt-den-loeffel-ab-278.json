{
    "title": "die-sprache-gibt-den-loeffel-ab-278",
    "gender": "w",
    "author": "Orsolya Kalász",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "für Verena Kammerer"
        },
        "line.2": {
            "text": "Wer kommt in meine Sprache?"
        },
        "line.3": {
            "text": "Frag ich dich"
        },
        "line.4": {
            "text": "frag du mich"
        },
        "line.5": {
            "text": "du Schlaflose."
        },
        "line.6": {
            "text": "Komm"
        },
        "line.7": {
            "text": "frag mich doch, du mich doch, ich dich dann wieder."
        },
        "line.8": {
            "text": "Gibt es das Tor in deiner Sprache"
        },
        "line.9": {
            "text": "das auf mein Herzklopfen sich öffnet?"
        },
        "line.10": {
            "text": "Hör mich doch, du mich doch, ich dich dann wieder."
        },
        "line.11": {
            "text": "Was können die Tränen in deiner Sprache?"
        },
        "line.12": {
            "text": "Was könnenTränen in deiner Sprache"
        },
        "line.13": {
            "text": "wenn ich von der"
        },
        "line.14": {
            "text": "Rebe"
        },
        "line.15": {
            "text": "der Rebe des Weinen"
        },
        "line.16": {
            "text": "die salzigen Trauben"
        },
        "line.17": {
            "text": "heimkarre"
        },
        "line.18": {
            "text": "und sie"
        },
        "line.19": {
            "text": "auf dein Gesicht lege"
        },
        "line.20": {
            "text": "läßt du sie dann rollen, rollen sie in deiner Sprache?"
        },
        "line.21": {
            "text": "Frag ich dich, frag du mich, du mich doch, ich dich dann wieder."
        },
        "line.22": {
            "text": "Wollen sie heim"
        },
        "line.23": {
            "text": "die erratenen Worte"
        },
        "line.24": {
            "text": "heim in die Dämmerungsanstalt?"
        },
        "line.25": {
            "text": "Was mußt du dann abgeben, du in deiner Sprache?"
        },
        "line.26": {
            "text": "Du, den Löffel."
        },
        "line.27": {
            "text": "Ich, ich in meiner Sprache den Schlüssel."
        },
        "line.28": {
            "text": "Da liegen noch ein paar Vergleiche im Keller."
        },
        "line.29": {
            "text": "Ich bin schuld! Du bist schuld!"
        },
        "line.30": {
            "text": "Wer ist schuld!"
        },
        "line.31": {
            "text": "Die verdammten Ratten sind schuld!"
        },
        "line.32": {
            "text": "Frag du mich, frag ich dich, du mich doch, ich dich dann wieder."
        },
        "line.33": {
            "text": "Was erwartet die Hand in deiner Sprache?"
        },
        "line.34": {
            "text": "Ich hatte ihren Kopf, einen an jedem Arm"
        },
        "line.35": {
            "text": "damit ließe sich etwas anfangen"
        },
        "line.36": {
            "text": "anfassen, umarmen."
        },
        "line.37": {
            "text": "Dir zeigt sie nur ihre Kehle"
        },
        "line.38": {
            "text": "die Handkehle."
        },
        "line.39": {
            "text": "Was kann eine Kehle"
        },
        "line.40": {
            "text": "außer singen, oder schreien"
        },
        "line.41": {
            "text": "einschießen in die volle Traube."
        },
        "line.42": {
            "text": "Dann sing eben, sing, schrei, verschluck dich"
        },
        "line.43": {
            "text": "schluchze, röchle"
        },
        "line.44": {
            "text": "speie die Kummerbrocken"
        },
        "line.45": {
            "text": "auf ein weißes Blatt:"
        },
        "line.46": {
            "text": "Ein Bild. Ein Mädchen und eine Wildgans. Die Gans hat ein Bein hochgezogen."
        },
        "line.47": {
            "text": "Das Mädchen lehnt den Kopf an ihren dünnen langen Hals."
        },
        "line.48": {
            "text": "Wer kommt in meine Arme"
        },
        "line.49": {
            "text": "hör ich dich, mich, hör du mich"
        },
        "line.50": {
            "text": "hör doch"
        },
        "line.51": {
            "text": "die erratenen Worte"
        },
        "line.52": {
            "text": "haben das Herztor aufgestoßen"
        },
        "line.53": {
            "text": "die Trauben"
        },
        "line.54": {
            "text": "zertreten, zertreten, zertreten"
        },
        "line.55": {
            "text": "Laß uns tauschen"
        },
        "line.56": {
            "text": "gib mir den Löffel"
        },
        "line.57": {
            "text": "nimm du den Schlüssel."
        }
    }
}