{
    "title": "erlaube-mir-traurig-zu-sein-1286",
    "gender": "w",
    "author": "Christine Lavant",
    "author_birth": "1915",
    "poem": {
        "line.1": {
            "text": "Erlaube mir traurig zu sein"
        },
        "line.2": {
            "text": "unter deinen Augen, den Sternen."
        },
        "line.3": {
            "text": "Vielleicht sehen sie nicht, daß ich traurig bin,"
        },
        "line.4": {
            "text": "denn die Muschel des Mondes ist abgewandt"
        },
        "line.5": {
            "text": "und hört nicht auf meine Gespräche."
        },
        "line.6": {
            "text": "Bei Tag denkt sicher die Sonnenstirne"
        },
        "line.7": {
            "text": "niemals über mich Dämmernde nach"
        },
        "line.8": {
            "text": "erlaube mir, gänzlich verloren zu gehen"
        },
        "line.9": {
            "text": "in den Büschen der Schwermut."
        }
    }
}