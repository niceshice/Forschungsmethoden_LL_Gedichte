{
    "title": "im-jahr-der-trauer-3345",
    "gender": "w",
    "author": "Maja  Haderlap",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "im jahr der trauer"
        },
        "line.2": {
            "text": "modern die fensterrahmen"
        },
        "line.3": {
            "text": "in unserer küche."
        },
        "line.4": {
            "text": "der tisch wird nicht gedeckt"
        },
        "line.5": {
            "text": "und das radio hat sendeverbot."
        },
        "line.6": {
            "text": "man hört nur noch selten den"
        },
        "line.7": {
            "text": "nachrichtensprecher über der tür."
        },
        "line.8": {
            "text": "wir wechseln die sprache nicht"
        },
        "line.9": {
            "text": "und halten die festtage ein."
        },
        "line.10": {
            "text": "an den baumstamm gebunden"
        },
        "line.11": {
            "text": "welken sonnenblumen."
        },
        "line.12": {
            "text": "die bienen schwärmen noch"
        },
        "line.13": {
            "text": "seltener aus. im jahr der trauer"
        },
        "line.14": {
            "text": "führt ein kühlschrankverkäufer"
        },
        "line.15": {
            "text": "neue modelle vor."
        },
        "line.16": {
            "text": "den geräten im schuppen"
        },
        "line.17": {
            "text": "fallen die zinken"
        },
        "line.18": {
            "text": "aus den gegabelten rachen."
        },
        "line.19": {
            "text": "den männern wachsen die haare nicht nach."
        },
        "line.20": {
            "text": "wie kupferwände leuchten die"
        },
        "line.21": {
            "text": "wachsblättchen vor jedem bienenstock."
        },
        "line.22": {
            "text": "tote sind rar."
        },
        "line.23": {
            "text": "jeder ist anderswo, diesseits."
        }
    }
}