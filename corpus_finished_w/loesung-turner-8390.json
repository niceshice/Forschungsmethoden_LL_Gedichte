{
    "title": "loesung-turner-8390",
    "gender": "w",
    "author": "Barbara Köhler",
    "author_birth": "1959",
    "poem": {
        "line.1": {
            "text": "Langsam löst sich das bild"
        },
        "line.2": {
            "text": "auf vor den augen. Langsam"
        },
        "line.3": {
            "text": "löst es sich von der wand."
        },
        "line.4": {
            "text": "Löst sich langsam in nebel"
        },
        "line.5": {
            "text": "licht und bewegung langsam"
        },
        "line.6": {
            "text": "liegts nicht mehr auf der"
        },
        "line.7": {
            "text": "hand. Langt nicht mehr hin"
        },
        "line.8": {
            "text": "hält nicht mehr fest sieht"
        },
        "line.9": {
            "text": "nicht mehr stellt es nicht"
        },
        "line.10": {
            "text": "her weht geht in die augen"
        },
        "line.11": {
            "text": "kreisen und fallen wirbeln"
        },
        "line.12": {
            "text": "weisses wie schnee und wie"
        },
        "line.13": {
            "text": "dunkel es fällt kristallen"
        },
        "line.14": {
            "text": "so kalt ein sturm ein halt"
        }
    }
}