{
    "title": "arachne-kommt-die-wohnglocke-13619",
    "gender": "w",
    "author": "Silke Scheuermann",
    "author_birth": "1973",
    "poem": {
        "line.1": {
            "text": "Beweglich wurde der Raum als jene Spinne darin war"
        },
        "line.2": {
            "text": "die erste sagst du"
        },
        "line.3": {
            "text": "älter als all der Anfang hier"
        },
        "line.4": {
            "text": "Und: Guck mal"
        },
        "line.5": {
            "text": "sie arbeitet"
        },
        "line.6": {
            "text": "Ist es nicht wirklich"
        },
        "line.7": {
            "text": "erstaunlich wie Springspinnen"
        },
        "line.8": {
            "text": "sich mehren und Wegwespen folgen?"
        },
        "line.9": {
            "text": "Schrei nicht sagst du"
        },
        "line.10": {
            "text": "meine Liebe"
        },
        "line.11": {
            "text": "laß uns lieber"
        },
        "line.12": {
            "text": "ihren Schlafstil erkunden"
        },
        "line.13": {
            "text": "wie sie sich ausruht für morgen"
        },
        "line.14": {
            "text": "um dann weiterzurudern im Webschiffchen Zeit"
        },
        "line.15": {
            "text": "Oh sage ich"
        },
        "line.16": {
            "text": "wollten wir nachts nicht anderes machen?"
        },
        "line.17": {
            "text": "Auch heute?"
        },
        "line.18": {
            "text": "Und vorher was essen?"
        },
        "line.19": {
            "text": "Sicher sagst du laß mich nur mal"
        },
        "line.20": {
            "text": "das Opfer in seinen"
        },
        "line.21": {
            "text": "seidenen Fäden besehen"
        },
        "line.22": {
            "text": "und wie es im Kunstwerk hier an der Scheibe hängt"
        },
        "line.23": {
            "text": "glücklos"
        },
        "line.24": {
            "text": "verschnürt"
        },
        "line.25": {
            "text": "auch so ein einfaches Abendbrot wie deins da"
        },
        "line.26": {
            "text": "Du hieltest dich"
        },
        "line.27": {
            "text": "sehr lange im Wohnzimmer auf während"
        },
        "line.28": {
            "text": "ich - appetitlich - am Tisch wartete"
        },
        "line.29": {
            "text": "Irgendwann fragte ich mich"
        },
        "line.30": {
            "text": "an den neuen Tagen deiner inneren Abwesenheit"
        },
        "line.31": {
            "text": "ob meine Seele auch nur ein Netz sei"
        },
        "line.32": {
            "text": "in das du dich verstricktest"
        },
        "line.33": {
            "text": "um dich eßbar zu fühlen"
        },
        "line.34": {
            "text": "ob du im Ernstfall"
        },
        "line.35": {
            "text": "lieber das Fenster hättest als das Klavier"
        }
    }
}