{
    "title": "rattenfaenger-4422",
    "gender": "w",
    "author": "Nora Bossong",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "Zwei Jungen traf ich"
        },
        "line.2": {
            "text": "unterm Brückenbogen nachts,"
        },
        "line.3": {
            "text": "die pinkelten den Pfosten an und"
        },
        "line.4": {
            "text": "sagten, dass sie sieben seien"
        },
        "line.5": {
            "text": "sagten, dass sie Läuse hätten."
        },
        "line.6": {
            "text": "Sie lachten über mich, als ich"
        },
        "line.7": {
            "text": "es glauben wollte. Nichts zu holen"
        },
        "line.8": {
            "text": "außer Läuse, verriet der Kleinere."
        },
        "line.9": {
            "text": "Er zeigte aufs Gebüsch und trat"
        },
        "line.10": {
            "text": "mir auf den Spann. Ich hätt mich gern"
        },
        "line.11": {
            "text": "in ihn verliebt, so billig war"
        },
        "line.12": {
            "text": "in jener Nacht sonst nichts mehr"
        },
        "line.13": {
            "text": "zu erleben. Der Große fragte, ob es stimmt,"
        },
        "line.14": {
            "text": "dass auch das Tier allein"
        },
        "line.15": {
            "text": "nicht sterben kann. Es war"
        },
        "line.16": {
            "text": "zu spät für Jungen unter dieser Brücke."
        }
    }
}