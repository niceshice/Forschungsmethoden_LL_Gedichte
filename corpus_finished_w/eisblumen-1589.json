{
    "title": "eisblumen-1589",
    "gender": "w",
    "author": "Erika Burkart",
    "author_birth": "1922",
    "poem": {
        "line.1": {
            "text": "Es war der Mantel der Schneekönigin."
        },
        "line.2": {
            "text": "Im Flockenschleier"
        },
        "line.3": {
            "text": "sah ich sie flusswärts ziehn."
        },
        "line.4": {
            "text": "Blumen und Omen,"
        },
        "line.5": {
            "text": "Blätter und Tatzen:"
        },
        "line.6": {
            "text": "wie ist er kalt, dieser Garten"
        },
        "line.7": {
            "text": "elbischer Todesarten."
        },
        "line.8": {
            "text": "In Schönheit vernarrt,"
        },
        "line.9": {
            "text": "mit Hoffnung verschneit,"
        },
        "line.10": {
            "text": "was lahmt und erstarrt,"
        },
        "line.11": {
            "text": "Geduld der Gnomen im Licht-Erwarten."
        },
        "line.12": {
            "text": "Achtzig Winter"
        },
        "line.13": {
            "text": "gefroren im alten Haus."
        },
        "line.14": {
            "text": "Ich friere; höre das Fliessen"
        },
        "line.15": {
            "text": "unter dem Eis -, Eisblumen"
        },
        "line.16": {
            "text": "spriessen in Dunkelheit,"
        },
        "line.17": {
            "text": "winterbräutlicher Frostflor:"
        },
        "line.18": {
            "text": "was man sieht im Kristall"
        },
        "line.19": {
            "text": "der geborgten Zeit."
        }
    }
}