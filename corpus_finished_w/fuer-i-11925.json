{
    "title": "fuer-i-11925",
    "gender": "w",
    "author": "Anja Kampmann",
    "author_birth": "1983",
    "poem": {
        "line.1": {
            "text": "Er ist im letzten Jahr gegangen"
        },
        "line.2": {
            "text": "in den Tagen danach"
        },
        "line.3": {
            "text": "sahst du manchmal Schatten an den Ästen der Zweige"
        },
        "line.4": {
            "text": "und das Meer"
        },
        "line.5": {
            "text": "spülte Walfischknochen an, deren geheime Mitte"
        },
        "line.6": {
            "text": "er suchte"
        },
        "line.7": {
            "text": "Ein konstanter Abriss wie das Schwarz als Teil"
        },
        "line.8": {
            "text": "des heller gestrichelten Asphalts oder"
        },
        "line.9": {
            "text": "sagen wir Steine, kleinere Tänzer"
        },
        "line.10": {
            "text": "unentwirrbar"
        },
        "line.11": {
            "text": "das Mosaik der Zeit oder"
        },
        "line.12": {
            "text": "sagen wir Muster, die ein Schwarm Saatkrähen"
        },
        "line.13": {
            "text": "an den Himmel wirft"
        },
        "line.14": {
            "text": "sagen wir November und schwächeres Licht"
        },
        "line.15": {
            "text": "oder sagen wir Atemflocken und Erinnern"
        },
        "line.16": {
            "text": "ein ewiges Rückwärtsgehen"
        },
        "line.17": {
            "text": "wie der Chinese im Park von Paris"
        },
        "line.18": {
            "text": "sagen wir an den Häusern der Wein"
        },
        "line.19": {
            "text": "die Spatzen, ihre Schwingen, die Anatomie einer Handschwinge"
        },
        "line.20": {
            "text": "an einem Frühherbsttag die Mitte"
        },
        "line.21": {
            "text": "von jedem Geräusch"
        },
        "line.22": {
            "text": "das durch uns durchgeht."
        }
    }
}