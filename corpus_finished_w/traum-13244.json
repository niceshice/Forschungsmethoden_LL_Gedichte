{
    "title": "traum-13244",
    "gender": "w",
    "author": "Ilma Rakusa",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Plötzlich kauerte sich der Mann in eine Ecke,"
        },
        "line.2": {
            "text": "holte sein Instrument hervor"
        },
        "line.3": {
            "text": "und spielte."
        },
        "line.4": {
            "text": "Ich sah seine Finger auf den Saiten"
        },
        "line.5": {
            "text": "des"
        },
        "line.6": {
            "text": "Oud"
        },
        "line.7": {
            "text": ","
        },
        "line.8": {
            "text": "er war glücklich."
        },
        "line.9": {
            "text": "Das Gesicht kam danach,"
        },
        "line.10": {
            "text": "der Blick."
        },
        "line.11": {
            "text": "Weil ich so reizvoll bin,"
        },
        "line.12": {
            "text": "sagten die Augen."
        },
        "line.13": {
            "text": "Wir schauten uns an,"
        },
        "line.14": {
            "text": "wir schauten."
        },
        "line.15": {
            "text": "Warum ich mich nicht entblösse."
        },
        "line.16": {
            "text": "Das klang angenehm,"
        },
        "line.17": {
            "text": "wie ein hängender Vers."
        },
        "line.18": {
            "text": "Ich kreuzte die Arme über der Brust."
        },
        "line.19": {
            "text": "Er spielte."
        },
        "line.20": {
            "text": "Es war eine Nacht ohne Phobien."
        },
        "line.21": {
            "text": "Draussen schliefen die Berge."
        },
        "line.22": {
            "text": "Alles gut."
        },
        "line.23": {
            "text": "Als er aufstand, nannte er sich"
        },
        "line.24": {
            "text": "einen Syrer."
        },
        "line.25": {
            "text": "Er war wie eine zarte Hochzeitsfigur."
        },
        "line.26": {
            "text": "Wer hatte ihn mir prophezeit?"
        },
        "line.27": {
            "text": "Keine posthumen Küsse,"
        },
        "line.28": {
            "text": "sagte sein Mund."
        },
        "line.29": {
            "text": "Ich vergass die letzten Verwandten,"
        },
        "line.30": {
            "text": "was mich verband und nicht verband."
        },
        "line.31": {
            "text": "Ich wartete."
        },
        "line.32": {
            "text": "Fremd holte er mich"
        },
        "line.33": {
            "text": "heim."
        }
    }
}