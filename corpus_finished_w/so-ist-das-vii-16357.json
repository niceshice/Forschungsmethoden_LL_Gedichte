{
    "title": "so-ist-das-vii-16357",
    "gender": "w",
    "author": "Andrea Grill",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "VII."
        },
        "line.2": {
            "text": "der Morgen eine mutige Feige"
        },
        "line.3": {
            "text": "reckt unbeirrt Blätter in die Höhe"
        },
        "line.4": {
            "text": "wo es regnet"
        },
        "line.5": {
            "text": "so ist das"
        },
        "line.6": {
            "text": "unterm Duschstrahl sickert"
        },
        "line.7": {
            "text": "Farbe aus meinen Haaren"
        },
        "line.8": {
            "text": "verlasse mich auf deine Wörter"
        },
        "line.9": {
            "text": "dieses Grau musst du angemalt haben"
        },
        "line.10": {
            "text": "sagst du"
        },
        "line.11": {
            "text": "mit einer Höflichkeit"
        },
        "line.12": {
            "text": "wie ich sie sonst nur"
        },
        "line.13": {
            "text": "von Bäumen kenne"
        }
    }
}