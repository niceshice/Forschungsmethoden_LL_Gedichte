{
    "title": "des-ortes-hier-1357",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "es war grau war genauso wie damals"
        },
        "line.2": {
            "text": "die unveränderten Flächen sonderten"
        },
        "line.3": {
            "text": "Stimmen ab innere Unruhe Rauch"
        },
        "line.4": {
            "text": "aus den Dächern wie auf der Flucht"
        },
        "line.5": {
            "text": "Begrüßungen Abschiede weitervermietet"
        },
        "line.6": {
            "text": "vereinzelte Rückschritte aussortiert"
        },
        "line.7": {
            "text": "schimmelnde Koffer man hatte"
        },
        "line.8": {
            "text": "Gerüchte verwahrt hatte"
        },
        "line.9": {
            "text": "Lustspiele noch orginalversiegelt"
        },
        "line.10": {
            "text": "die Stille stark abgenutzt Schmelztiegel"
        },
        "line.11": {
            "text": "falscher Bewegungen war es genauso"
        },
        "line.12": {
            "text": "wie damals statt Landschaft"
        },
        "line.13": {
            "text": "Übersprungshandlungen Flüche"
        },
        "line.14": {
            "text": "wir leugneten nichts lange Schatten"
        },
        "line.15": {
            "text": "beschrieben wir Kreise so als hielte"
        },
        "line.16": {
            "text": "uns allein die Wißbegier des Ortes hier"
        }
    }
}