{
    "title": "vom-ruebenschwein-br-und-trampeltier-455",
    "gender": "w",
    "author": "Jutta Richter",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "Das Rübenschwein, das Rübenschwein,"
        },
        "line.2": {
            "text": "das wollte bei den Rüben sein."
        },
        "line.3": {
            "text": "Da riefen alle Rüben: Nein!,"
        },
        "line.4": {
            "text": "wir wollen hier kein Rübenschwein!"
        },
        "line.5": {
            "text": "So blieb das Rübenschwein allein."
        },
        "line.6": {
            "text": "Das war gemein."
        },
        "line.7": {
            "text": "(Es baute sich ein Haus am Teich."
        },
        "line.8": {
            "text": "Und Rüben warn ihm fortan gleich.)"
        },
        "line.9": {
            "text": "Das Trampeltier, das Trampeltier"
        },
        "line.10": {
            "text": "fragt: Warum spielt ihr nicht mit mir?"
        },
        "line.11": {
            "text": "Die andern sagen: Weg mit dir!"
        },
        "line.12": {
            "text": "Du bist zu blöd, du Trampeltier!"
        },
        "line.13": {
            "text": "Jetzt übt das Trampeltier Klavier."
        },
        "line.14": {
            "text": "Bis fünf nach vier."
        },
        "line.15": {
            "text": "(Es wird bestimmt einmal berühmt als Pianist,"
        },
        "line.16": {
            "text": "weil das im Leben oft so ist.)"
        }
    }
}