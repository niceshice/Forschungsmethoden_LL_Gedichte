{
    "title": "winterliche-anwendung-mit-teelichtern-1361",
    "gender": "w",
    "author": "Marion Poschmann",
    "author_birth": "1969",
    "poem": {
        "line.1": {
            "text": "eine Zartheit befolgt, ein Herzklopfen, beinah"
        },
        "line.2": {
            "text": "Anordnung (Flageolett):"
        },
        "line.3": {
            "text": "ein versprengter Frost, ein Stanniol, das"
        },
        "line.4": {
            "text": "Aufblitzen in den Augen"
        },
        "line.5": {
            "text": "wie sich diese unsteten Gegenden nach und nach"
        },
        "line.6": {
            "text": "lossagen von uns"
        },
        "line.7": {
            "text": "Imitate und Tarnungen, halber Aufenthalt"
        },
        "line.8": {
            "text": "wie auf fotokopiertem Schnee (die geheimen"
        },
        "line.9": {
            "text": "Verstecke: dein einzeln beschlagenes"
        },
        "line.10": {
            "text": "Brillenglas, ich bin anstandshalber"
        },
        "line.11": {
            "text": "bald wieder gegangen) und alle Berührungen"
        },
        "line.12": {
            "text": "fallengelassen: noch rasch"
        },
        "line.13": {
            "text": "an dich angelehnt"
        },
        "line.14": {
            "text": "flackernde Orte, ein Herzklopfen"
        },
        "line.15": {
            "text": "voller Teelichter, leichte Bandagen: ich taste"
        },
        "line.16": {
            "text": "die Schuhe, die Schneeränder ab"
        },
        "line.17": {
            "text": "eine Zartheit befolgt, ein paar Fluchtpunkte"
        },
        "line.18": {
            "text": "sachte verschoben, ich habe die Fingerspitzen lackiert"
        },
        "line.19": {
            "text": "als wären sie winterfest"
        }
    }
}