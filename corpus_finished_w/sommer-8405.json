{
    "title": "sommer-8405",
    "gender": "w",
    "author": "Doris Runge",
    "author_birth": "1943",
    "poem": {
        "line.1": {
            "text": "das war ein blutsturz von rosen"
        },
        "line.2": {
            "text": "der heiße rücken der erde"
        },
        "line.3": {
            "text": "das war ein altmodischer sommer"
        },
        "line.4": {
            "text": "aus einem anderen leben"
        },
        "line.5": {
            "text": "ich will nicht abschied nehmen"
        },
        "line.6": {
            "text": "von dort wo ich nie war"
        },
        "line.7": {
            "text": "von der tafelrunde grüner blicke"
        },
        "line.8": {
            "text": "wer gibt uns die bilder"
        },
        "line.9": {
            "text": "zurück"
        },
        "line.10": {
            "text": "oder den traum"
        },
        "line.11": {
            "text": "die feuerbälle"
        },
        "line.12": {
            "text": "wer legt uns glut"
        },
        "line.13": {
            "text": "in die ausgebrannten augen"
        },
        "line.14": {
            "text": "streut asche"
        },
        "line.15": {
            "text": "auf vereiste herzen"
        },
        "line.16": {
            "text": "pfade die noch zu gehen sind"
        },
        "line.17": {
            "text": "bis zum ende"
        },
        "line.18": {
            "text": "bis zum wegkreuz"
        },
        "line.19": {
            "text": "als hätten wir"
        },
        "line.20": {
            "text": "eine wahl"
        }
    }
}