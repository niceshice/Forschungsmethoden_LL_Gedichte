{
    "title": "lepra-zirkelschluss-11979",
    "gender": "w",
    "author": "Carolin Callies",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "es lag ein stück lepra in den abgehangnen seiten der tierreste."
        },
        "line.2": {
            "text": "am zaun hing das, am zaun aus holz"
        },
        "line.3": {
            "text": "& holz verfeuerten wir gestrig"
        },
        "line.4": {
            "text": "& gestern erlagen wir der lepra & heute, heute singen wir davon:"
        },
        "line.5": {
            "text": "von den seitensträngen, dem husten"
        },
        "line.6": {
            "text": "& den vollgesognen tüchern & heute"
        },
        "line.7": {
            "text": "ist der arzt ein versoffenes tier."
        },
        "line.8": {
            "text": "in fahrigen nächten erlagen wir"
        },
        "line.9": {
            "text": "den mullbinden im verbandskasten"
        },
        "line.10": {
            "text": "& binden waren ein tatbestand."
        },
        "line.11": {
            "text": "darauf setzten wir uns,"
        },
        "line.12": {
            "text": "denn solange man saß, war graben keine option."
        },
        "line.13": {
            "text": "am rest der tiere zu reiben, verursacht abdrücke"
        },
        "line.14": {
            "text": "& sprechen wir dir mantraartig vor:"
        },
        "line.15": {
            "text": "||: in den wunden munter bleiben :|| & sagen: es lag ein stück lepra."
        }
    }
}