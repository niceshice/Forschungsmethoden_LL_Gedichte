{
    "title": "auszuege-aus-igeisterstroemungi-7026",
    "gender": "w",
    "author": "Brigitte Oleschinski",
    "author_birth": "1955",
    "poem": {
        "line.1": {
            "text": "auf dem Nachtrücken, rücklings nackt"
        },
        "line.2": {
            "text": "(und)"
        },
        "line.3": {
            "text": "die Raumstation tief am Horizont, die Schlafhütte am Hang, das Gen-"
        },
        "line.4": {
            "text": "labor, die Notaufnahme, die Bankenzentrale, das Studio"
        },
        "line.5": {
            "text": "aus rohen Brettern und Fliegengittern, wenn das Zirren"
        },
        "line.6": {
            "text": "wieder einsetzt und der Wind nach"
        },
        "line.7": {
            "text": "Mitternacht, die ersten matten Vogelstimmen, noch"
        },
        "line.8": {
            "text": "sind die Sterne zu sehen, der Termitenhügel"
        },
        "line.9": {
            "text": "nebenan, der stille Helikopter-"
        },
        "line.10": {
            "text": "platz, wir"
        },
        "line.11": {
            "text": "liegt schlaflos"
        },
        "line.12": {
            "text": "Geschlecht weiß, Hautfarbe"
        },
        "line.13": {
            "text": "weiblich"
        },
        "line.14": {
            "text": "als die Tiere"
        },
        "line.15": {
            "text": "noch Menschen waren, unteilbare Arten-"
        },
        "line.16": {
            "text": "sprache aller"
        },
        "line.17": {
            "text": "das Gras"
        },
        "line.18": {
            "text": "läuft überland, hügelan, hügelab, wird Reis"
        },
        "line.19": {
            "text": "und Tee und wieder Gras"
        },
        "line.20": {
            "text": "dann Hände wie Zungen, die erste"
        },
        "line.21": {
            "text": "Grammatik"
        },
        "line.22": {
            "text": "neunhundert Seelen, noch behaart"
        },
        "line.23": {
            "text": "Vertrauen war ein Geruch  wie sein Geruch"
        },
        "line.24": {
            "text": "in sie eindrang, wie er ihre kalten Glieder bewegte und in Schlaf"
        },
        "line.25": {
            "text": "fiel und nur der Geruch noch"
        },
        "line.26": {
            "text": "sie von innen bewegt"
        },
        "line.27": {
            "text": "und dieser Wille"
        },
        "line.28": {
            "text": "in den Gerippen am Straßenrand, die Fliegen"
        },
        "line.29": {
            "text": "verkaufen und Plastikbrillen"
        },
        "line.30": {
            "text": "atmende Flechtwand, und wir"
        },
        "line.31": {
            "text": "wie eingesickert in die Tropenlaken, ineinander tätowiert"
        },
        "line.32": {
            "text": "vor dem aufdämmernden Morgenruf  ein überwacher"
        },
        "line.33": {
            "text": "Lizzard, in dessen Neonbauch durchsichtig"
        },
        "line.34": {
            "text": "leuchtend die Libellen schliefen, Drachen-"
        },
        "line.35": {
            "text": "fliegen, Ginger Bee"
        },
        "line.36": {
            "text": "eating you alive"
        },
        "line.37": {
            "text": "ich ist der Vogel-"
        },
        "line.38": {
            "text": "darm, durch den sie reisen müssen, schlafende Keime, und ich"
        },
        "line.39": {
            "text": "ist das Schlafende, das reist"
        },
        "line.40": {
            "text": "auch die betende"
        },
        "line.41": {
            "text": "Mantis, ihr Morgenmurmeln aus Armen und Atmen"
        },
        "line.42": {
            "text": "mit dem züngelnd zurückgelassenen Echsen-"
        },
        "line.43": {
            "text": "schwanz im Bauch, dem durchsichtig"
        },
        "line.44": {
            "text": "fiependen Handphone"
        },
        "line.45": {
            "text": "das leuchtende Mädchen, das"
        },
        "line.46": {
            "text": "durch die Vorabendstadt fährt, vernieselter Asphalt, noch"
        },
        "line.47": {
            "text": "Stoppelränder, noch Tank-"
        },
        "line.48": {
            "text": "flecken, Teerfallen, geschirrtuchkleine"
        },
        "line.49": {
            "text": "Grundstücke, es trägt seine Brille nicht, weil das Mofa"
        },
        "line.50": {
            "text": "den Weg weiß, das Mofa"
        },
        "line.51": {
            "text": "sieht alles"
        },
        "line.52": {
            "text": "ich leckt"
        },
        "line.53": {
            "text": "daran, eine dünnhäutig geäderte Folie, durchscheinend schwarz, und"
        },
        "line.54": {
            "text": "die Halden"
        },
        "line.55": {
            "text": "inmitten der Landschaft, im Vorübergleiten, ihr Flackern"
        },
        "line.56": {
            "text": "unter der Haut, Flattern"
        },
        "line.57": {
            "text": "über den schwelenden, schwitzenden Säcken, ich leckt"
        },
        "line.58": {
            "text": "daran, im Vorüber-"
        },
        "line.59": {
            "text": "gleiten"
        },
        "line.60": {
            "text": "nur Materie hat"
        },
        "line.61": {
            "text": "Materie geschaffen, niemand schuf wir, wir erst"
        },
        "line.62": {
            "text": "erschuf Gott"
        },
        "line.63": {
            "text": "wozu"
        },
        "line.64": {
            "text": "Gas"
        },
        "line.65": {
            "text": "war die älteste Stille der Welt"
        },
        "line.66": {
            "text": "nickt ich, in ein Kopftuch"
        },
        "line.67": {
            "text": "gebunden, bodenlanges Lächeln im Sehschlitz"
        },
        "line.68": {
            "text": "der Gastkultur:"
        },
        "line.69": {
            "text": "tolerance, yes"
        },
        "line.70": {
            "text": "nickt"
        },
        "line.71": {
            "text": "ich (unrein), nickt, nickt:"
        },
        "line.72": {
            "text": "prayers for"
        },
        "line.73": {
            "text": "a better world, yes, yes"
        },
        "line.74": {
            "text": "wir reisten, (eher:) wurden gereist, irgendwer"
        },
        "line.75": {
            "text": "zahlte das Zimmer, gab uns ein Kingsize-Bett, einen Vorhang"
        },
        "line.76": {
            "text": "aus Regenzeitrauschen, wir schon ein Dschungel"
        },
        "line.77": {
            "text": "aus Haaren und Zähnen, darin dein Rücken"
        },
        "line.78": {
            "text": "das flickernde Licht löschte, das Rasseln"
        },
        "line.79": {
            "text": "der Kühlrippen, den Fliegengift-"
        },
        "line.80": {
            "text": "geruch, wir"
        },
        "line.81": {
            "text": "sind"
        },
        "line.82": {
            "text": "Milliarden und Abermilliarden, jeder Cent"
        },
        "line.83": {
            "text": "davon"
        },
        "line.84": {
            "text": "führt Krieg"
        },
        "line.85": {
            "text": "ein paar Wörter retten, Güte"
        },
        "line.86": {
            "text": "vielleicht, Freude, Erbarmen, oder Freiheit, Vielfalt, Zweifel, oder"
        },
        "line.87": {
            "text": "Gewissen, oder Mut  die Wörter retten"
        },
        "line.88": {
            "text": "oder was sie bedeuten, oder retten"
        },
        "line.89": {
            "text": "überhaupt"
        },
        "line.90": {
            "text": "oder wenigstens: und"
        },
        "line.91": {
            "text": "Flugdrache"
        },
        "line.92": {
            "text": "in meiner Schulter, rosen-"
        },
        "line.93": {
            "text": "fingriger"
        },
        "line.94": {
            "text": "Phönix, in Flutnächten fliegt er aus"
        },
        "line.95": {
            "text": "mit brennenden Klauen"
        },
        "line.96": {
            "text": "alle mit allen"
        },
        "line.97": {
            "text": "verwandt, noch die Mutanten"
        },
        "line.98": {
            "text": "mit allen verwandt"
        }
    }
}