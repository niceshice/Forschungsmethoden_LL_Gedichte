{
    "title": "nach-pasargada-11650",
    "gender": "w",
    "author": "Odile Kennel",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "aus dem Fenster schauen, sich vergewissern"
        },
        "line.2": {
            "text": "dass man existiert, weil die Welt"
        },
        "line.3": {
            "text": "da draußen existiert. Drinnen"
        },
        "line.4": {
            "text": "sind Bücher, vielleicht der Gedanke"
        },
        "line.5": {
            "text": "an ein Kind, das man nie hatte, ist"
        },
        "line.6": {
            "text": "ein Bett, eine Schreibmaschine."
        },
        "line.7": {
            "text": "Ein Telefon, das klingelt, wiederum"
        },
        "line.8": {
            "text": "Welt nachweist, Töne, elektrische"
        },
        "line.9": {
            "text": "Signale. Dann hinaus, gehen"
        },
        "line.10": {
            "text": "durch die Stadt. Die kein Beweis ist"
        },
        "line.11": {
            "text": "dass es das Drinnen gibt hinter"
        },
        "line.12": {
            "text": "den Fensterläden, schon eher"
        },
        "line.13": {
            "text": "der Milchmann, der Zeitungsverkäufer:"
        },
        "line.14": {
            "text": "Aufblitzen einer Möglichkeit, Falten"
        },
        "line.15": {
            "text": "im Anzug, Gesten des Alltags,"
        },
        "line.16": {
            "text": "die Rettung der Substantive"
        },
        "line.17": {
            "text": "Radfahren, Könige, Lektionen"
        },
        "line.18": {
            "text": "vom Weggehen, jedes Ding"
        },
        "line.19": {
            "text": "an seinem Platz"
        },
        "line.20": {
            "text": "Nach dem Film O poeta do castelo über Manuel Bandeira von Joaquim Pedro de Andrade (1959)"
        }
    }
}