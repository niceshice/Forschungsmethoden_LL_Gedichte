{
    "title": "wir-leben-wir-sind-fuer-alles-12652",
    "gender": "w",
    "author": "Daniela Danz",
    "author_birth": "1976",
    "poem": {
        "line.1": {
            "text": "Wie geht anfangen wie geht"
        },
        "line.2": {
            "text": "erinnern ohne zu vergessen"
        },
        "line.3": {
            "text": "vor mir im Schnee ein Mann"
        },
        "line.4": {
            "text": "sein Rücken einsam düster"
        },
        "line.5": {
            "text": "wie geht anfangen nicht erinnern"
        },
        "line.6": {
            "text": "Lichtblitze die ihm als Junge Bilder"
        },
        "line.7": {
            "text": "zeigten kurz und grell sieh im Licht"
        },
        "line.8": {
            "text": "die Schatten wie geht Nichterinnern"
        },
        "line.9": {
            "text": "horch das Zischen sieh das Licht"
        },
        "line.10": {
            "text": "und Deutschlands Leichtigkeit"
        },
        "line.11": {
            "text": "wie hell ist Deutschland wie Ruß"
        },
        "line.12": {
            "text": "wie Bilder kurz und grell wie geht"
        },
        "line.13": {
            "text": "Anfangen riech den Schnee"
        },
        "line.14": {
            "text": "er ist neu gefallen in der Nacht"
        },
        "line.15": {
            "text": "im Dunkeln geht vergessen"
        },
        "line.16": {
            "text": "in Bildern kurz horch den Schnee"
        },
        "line.17": {
            "text": "ganz leicht liegt er wie Leinen"
        },
        "line.18": {
            "text": "etwas brennt ein Zischen düster"
        },
        "line.19": {
            "text": "wie Bilder nachts an Wänden horch"
        },
        "line.20": {
            "text": "das Zischen riech den Brandgeruch"
        },
        "line.21": {
            "text": "sieh das Ruß auf weißem Grund"
        }
    }
}