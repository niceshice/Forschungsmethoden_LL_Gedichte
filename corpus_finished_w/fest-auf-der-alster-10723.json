{
    "title": "fest-auf-der-alster-10723",
    "gender": "w",
    "author": "Ulla Hahn",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "All das Eis wir schwelgen"
        },
        "line.2": {
            "text": "im Winter unter der Sonne"
        },
        "line.3": {
            "text": "Laufen auf Kufen im Kreis"
        },
        "line.4": {
            "text": "und gradaus mit und gegen"
        },
        "line.5": {
            "text": "und durch Licht und Wind."
        },
        "line.6": {
            "text": "Alte Ehepaare ziehn sich"
        },
        "line.7": {
            "text": "noch enger zusammen"
        },
        "line.8": {
            "text": "Vater und Mutter kreisen"
        },
        "line.9": {
            "text": "in hohem Bogen ums Kind."
        },
        "line.10": {
            "text": "Wippende Mädchen im heiratsfähigen Alter"
        },
        "line.11": {
            "text": "lächeln aus der Hüfte heraus gutaus"
        },
        "line.12": {
            "text": "staffierte Lilien in kühnen Kurven"
        },
        "line.13": {
            "text": "kreuzen ihre Herzensmänner das Feld."
        },
        "line.14": {
            "text": "Sogar silbrige Herren und Damen geraten"
        },
        "line.15": {
            "text": "ins Schleudern der Hut fliegt vom Kopf"
        },
        "line.16": {
            "text": "der Hund rutscht hinterdrein"
        },
        "line.17": {
            "text": "wittert Glühwein auf Eis."
        },
        "line.18": {
            "text": "Übermütig lächeln wir alle verschworene"
        },
        "line.19": {
            "text": "Kinder die vom selben Süßen genascht"
        },
        "line.20": {
            "text": "Werfen Lächeln wie Bälle uns zu"
        },
        "line.21": {
            "text": "durch die lächelnde Luft. Lächeln"
        },
        "line.22": {
            "text": "als gabe es nichts zu bestehn"
        },
        "line.23": {
            "text": "als den nächsten Schritt als geschähe"
        },
        "line.24": {
            "text": "nur was wir im voraus schon sehn"
        },
        "line.25": {
            "text": "bis an den Horizont von"
        },
        "line.26": {
            "text": "Brücken Kirchen und Banken."
        },
        "line.27": {
            "text": "Lächelnd vergibt ein jeder von uns"
        },
        "line.28": {
            "text": "seinem Nächsten und sich"
        },
        "line.29": {
            "text": "diesen Nachmittag lang"
        },
        "line.30": {
            "text": "all das Eis"
        },
        "line.31": {
            "text": "unter der Sonne."
        },
        "line.32": {
            "text": "(aus:"
        },
        "line.33": {
            "text": "Unerhörte Nähe"
        },
        "line.34": {
            "text": ", 1988)"
        }
    }
}