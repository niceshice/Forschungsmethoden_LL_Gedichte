{
    "title": "rezept-nummer-5-15117",
    "gender": "w",
    "author": "Zsuzsanna Gahse",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "Als ich vom Zugfenster aus"
        },
        "line.2": {
            "text": "die ersten Schafe sah, lief mir"
        },
        "line.3": {
            "text": "das Wasser im Mund zusammen."
        },
        "line.4": {
            "text": "Das sind alte Sünden, allerdings"
        },
        "line.5": {
            "text": "passierte mir bald darauf und"
        },
        "line.6": {
            "text": "noch auf derselben Strecke"
        },
        "line.7": {
            "text": "bei der nächsten Schafherde,"
        },
        "line.8": {
            "text": "dass mir der saftige Geruch"
        },
        "line.9": {
            "text": "von gegrillten Koteletten,"
        },
        "line.10": {
            "text": "chuletas de cordero in die"
        },
        "line.11": {
            "text": "Nase stieg, Olivenöl und"
        },
        "line.12": {
            "text": "Knoblauch, etwas Weißbrot"
        },
        "line.13": {
            "text": "dazu. Vor dem Zugfenster"
        },
        "line.14": {
            "text": "die Schafe, und ich hatte"
        },
        "line.15": {
            "text": "einen solchen Hunger!"
        },
        "line.16": {
            "text": "Kann denn Liebe Sünde sein."
        }
    }
}