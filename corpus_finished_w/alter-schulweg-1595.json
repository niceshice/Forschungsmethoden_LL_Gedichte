{
    "title": "alter-schulweg-1595",
    "gender": "w",
    "author": "Erika Burkart",
    "author_birth": "1922",
    "poem": {
        "line.1": {
            "text": "Verschwunden vom Dorfplan bleibt er"
        },
        "line.2": {
            "text": "ein Herz- und Hirnweg"
        },
        "line.3": {
            "text": "an Bäumen vorbei, die längst verheizt sind,"
        },
        "line.4": {
            "text": "Menschen, die keiner mehr kennt,"
        },
        "line.5": {
            "text": "nur ein Alter noch nennt. Mitten im Feld"
        },
        "line.6": {
            "text": "verschwand er im Bohnenwald."
        },
        "line.7": {
            "text": "In muldiger Matte verschenkte"
        },
        "line.8": {
            "text": "Libussas Baum seine Bronzebirnen,"
        },
        "line.9": {
            "text": "ein Körper der Stamm, gekleidet"
        },
        "line.10": {
            "text": "in wehrhafte Borke, blühendes Moos,"
        },
        "line.11": {
            "text": "das grünte nach dem Gewitter."
        },
        "line.12": {
            "text": "Föhnwind im Haar talab im Schotter"
        },
        "line.13": {
            "text": "verschwemmter Kurven rannte ich, quollen"
        },
        "line.14": {
            "text": "am Erdrand Gebirge von Wolken empor,"
        },
        "line.15": {
            "text": "im Schulsack hüpfte die Fibel, erzählte"
        },
        "line.16": {
            "text": "allwissend von Brunnen und Sonne,"
        },
        "line.17": {
            "text": "Waldkind und Wolf."
        },
        "line.18": {
            "text": "Heimweg hinauf im Gegenlicht,"
        },
        "line.19": {
            "text": "wenn in der Dole am Postrain"
        },
        "line.20": {
            "text": "das Wasser lispelte, lockte -"
        },
        "line.21": {
            "text": "mein Schatten hinter mir war, im Dorf"
        },
        "line.22": {
            "text": "das Läuten einbrach - bestürzend"
        },
        "line.23": {
            "text": "und unentrinnbar."
        },
        "line.24": {
            "text": "Immer wurde gestorben,"
        },
        "line.25": {
            "text": "schlug die Stunde,"
        },
        "line.26": {
            "text": "erinnerten Schläge, Erz-Stimmen,"
        },
        "line.27": {
            "text": "an die kurze, die lange Zeit."
        },
        "line.28": {
            "text": "Zeitloses Glück, als ich erstmals"
        },
        "line.29": {
            "text": "den doldigen Milchstern erblickte."
        },
        "line.30": {
            "text": "Ein Edelweiss! Mutter, gefunden"
        },
        "line.31": {
            "text": "am Hummelnestbord bei der Grube,"
        },
        "line.32": {
            "text": "wo die Weide ins Sumpfloch schaut."
        }
    }
}