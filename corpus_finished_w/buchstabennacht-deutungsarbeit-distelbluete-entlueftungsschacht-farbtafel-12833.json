{
    "title": "buchstabennacht-deutungsarbeit-distelbluete-entlueftungsschacht-farbtafel-12833",
    "gender": "w",
    "author": "Margret Kreidl",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "BUCHSTABENNACHT"
        },
        "line.2": {
            "text": "Das Papier: einleuchtend weiß"
        },
        "line.3": {
            "text": "Das Wort Nacht: schwarz"
        },
        "line.4": {
            "text": "Die Nacht besteht aus Buchstaben"
        },
        "line.5": {
            "text": "Buchstabe"
        },
        "line.6": {
            "text": "Du Buchstabe"
        },
        "line.7": {
            "text": "Nacht"
        },
        "line.8": {
            "text": "Einfache Erklärung:"
        },
        "line.9": {
            "text": "Und eine Nacht erwartet uns alle."
        },
        "line.10": {
            "text": "Horaz, Oden I."
        },
        "line.11": {
            "text": "DEUTUNGSARBEIT"
        },
        "line.12": {
            "text": "Eine Frau faltet und stapelt Hemden auf einem Tisch,"
        },
        "line.13": {
            "text": "was eine literarische Bedeutung hat, die ich nicht verstehe."
        },
        "line.14": {
            "text": "Einfache Erklärung: Gedichte werden nicht gebügelt."
        },
        "line.15": {
            "text": "DISTELBLÜTE"
        },
        "line.16": {
            "text": "Das Gedicht ist eine abgeblühte Distelblüte."
        },
        "line.17": {
            "text": "Einfache Erklärung: Keine Erklärung."
        },
        "line.18": {
            "text": "ENTLÜFTUNGSSCHACHT"
        },
        "line.19": {
            "text": "Spalte die Nachtigall, sagt er. Das ist eine Lerche, sagt sie."
        },
        "line.20": {
            "text": "Das ist kein Märchen, sagt er, sondern ein Traum, und ich"
        },
        "line.21": {
            "text": "erlaube dir, den Baum zu schälen. Mir ist kalt, sagt sie."
        },
        "line.22": {
            "text": "Wir sind in einer Tiefgarage, sagt er, die Federn werden"
        },
        "line.23": {
            "text": "durch den Entlüftungsschacht in den Wald geblasen."
        },
        "line.24": {
            "text": "Einfache Erklärung: Die Liebe ist kein warmes Nest."
        },
        "line.25": {
            "text": "FARBTAFEL"
        },
        "line.26": {
            "text": "Gelb zieht nach Norden,"
        },
        "line.27": {
            "text": "Weiß ist schon lange fort,"
        },
        "line.28": {
            "text": "Grün hat sich verborgen,"
        },
        "line.29": {
            "text": "Blau ist gestorben,"
        },
        "line.30": {
            "text": "Schwarz ist nur ein Wort,"
        },
        "line.31": {
            "text": "Rot ist die Farbe von dort."
        },
        "line.32": {
            "text": "Einfache Erklärung: Im Traum sehe ich den Ort."
        }
    }
}