{
    "title": "vom-gebrauch-der-gedichtzeilen-1522",
    "gender": "w",
    "author": "Elfriede Gerstl",
    "author_birth": "1932",
    "poem": {
        "line.1": {
            "text": "sich in eine zeile lehnen"
        },
        "line.2": {
            "text": "wie in eine sofaecke"
        },
        "line.3": {
            "text": "in einer zeile reiten"
        },
        "line.4": {
            "text": "mit fliegenden haaren"
        },
        "line.5": {
            "text": "mit einer wegschweben"
        },
        "line.6": {
            "text": "wie ein luftballon"
        },
        "line.7": {
            "text": "eine wandert mit schweren schuhen"
        },
        "line.8": {
            "text": "auf einer holzdiele"
        },
        "line.9": {
            "text": "wander mit"
        },
        "line.10": {
            "text": "eine breitet die flügel aus"
        },
        "line.11": {
            "text": "und flattert herum"
        },
        "line.12": {
            "text": "wie ein eben flügge gewordener vogel"
        },
        "line.13": {
            "text": "folge wenn du kannst"
        },
        "line.14": {
            "text": "eine zieht raketengleich fort"
        },
        "line.15": {
            "text": "auf nimmerwiedersehen."
        }
    }
}