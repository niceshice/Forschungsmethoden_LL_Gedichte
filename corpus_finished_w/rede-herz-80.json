{
    "title": "rede-herz-80",
    "gender": "w",
    "author": "Ursula Krechel",
    "author_birth": "1947",
    "poem": {
        "line.1": {
            "text": "So kalt war das Herz, daß es"
        },
        "line.2": {
            "text": "fürchtete um sich selbst"
        },
        "line.3": {
            "text": "absoff die Rede, wollte schon"
        },
        "line.4": {
            "text": "kaltschnäuzig genannt werden"
        },
        "line.5": {
            "text": "schmiegte sich wohlig an Fliesen"
        },
        "line.6": {
            "text": "hauste wie glückliche Maden"
        },
        "line.7": {
            "text": "unter Körben mit Sauerkirschen."
        },
        "line.8": {
            "text": "Selbstlos in Fremdes gebohrt"
        },
        "line.9": {
            "text": "kopfüber satt, so pochte das Herz"
        },
        "line.10": {
            "text": "sprachlos, was auch geschah"
        },
        "line.11": {
            "text": "sehr leise ging das Gesicht entzwei"
        },
        "line.12": {
            "text": "die Rede fraß sich fest"
        },
        "line.13": {
            "text": "schabte den Grund, grundlos."
        }
    }
}