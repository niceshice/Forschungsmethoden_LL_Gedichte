{
    "title": "mit-sappho-im-hof-11636",
    "gender": "w",
    "author": "Odile Kennel",
    "author_birth": "1967",
    "poem": {
        "line.1": {
            "text": "am Anfang war noch"
        },
        "line.2": {
            "text": "Aphrodite da. Ich kam"
        },
        "line.3": {
            "text": "mir blöd vor, kann"
        },
        "line.4": {
            "text": "kein griechisch, kannte"
        },
        "line.5": {
            "text": "beide nicht. Dann"
        },
        "line.6": {
            "text": "ging sie weg, wer weiß"
        },
        "line.7": {
            "text": "wohin, sie sagte was"
        },
        "line.8": {
            "text": "von Spree. Dann also"
        },
        "line.9": {
            "text": "wir allein. Nein, schlafen"
        },
        "line.10": {
            "text": "nicht, wir trinken Tee."
        },
        "line.11": {
            "text": "Ich sage, Sappho, du bist"
        },
        "line.12": {
            "text": "unumgänglich, wie wärs"
        },
        "line.13": {
            "text": "du schreibst noch eine"
        },
        "line.14": {
            "text": "Insel-Ode,"
        },
        "line.15": {
            "text": "une ode dle"
        },
        "line.16": {
            "text": "?"
        },
        "line.17": {
            "text": "Sie schaut mich fragmentarisch"
        },
        "line.18": {
            "text": "an, reicht mir Papiere"
        },
        "line.19": {
            "text": "Rollen, eine Rolex, Zeit"
        },
        "line.20": {
            "text": "für neue Texte, sagt sie,"
        },
        "line.21": {
            "text": "und eine Insel-Ode"
        },
        "line.22": {
            "text": "ist dabei. Ich bin perplex."
        },
        "line.23": {
            "text": "Leg mir die Uhr ums Hand-"
        },
        "line.24": {
            "text": "gelenk, lenk meinen Blick"
        },
        "line.25": {
            "text": "zum Text, Schreck:"
        },
        "line.26": {
            "text": "Ich kann das nicht lesen,"
        },
        "line.27": {
            "text": "Sappho! Ihr Blick geknickt."
        },
        "line.28": {
            "text": "Ich hatte so gehofft"
        },
        "line.29": {
            "text": "Im Hof sitzt Sappho"
        },
        "line.30": {
            "text": "ratlos, rastlos, folgt"
        },
        "line.31": {
            "text": "durchs Hoftor Aphrodite,"
        },
        "line.32": {
            "text": "die Rolex, ruf ich, sie"
        },
        "line.33": {
            "text": "sieht sich nicht um, und ich"
        },
        "line.34": {
            "text": "ich sitze mit der Armbanduhr"
        },
        "line.35": {
            "text": "und ohne Text im Hof, ich geh"
        },
        "line.36": {
            "text": "nach oben, leg mich"
        },
        "line.37": {
            "text": "schlafen, träum,"
        },
        "line.38": {
            "text": "ich trät in Scherben"
        }
    }
}