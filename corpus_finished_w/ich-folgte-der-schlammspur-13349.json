{
    "title": "ich-folgte-der-schlammspur-13349",
    "gender": "w",
    "author": "Brigitta Falkner",
    "author_birth": "1959",
    "poem": {
        "line.1": {
            "text": "Ich folgte der Schlammspur,"
        },
        "line.2": {
            "text": "die den Flur entlang,"
        },
        "line.3": {
            "text": "durch eine Tür,"
        },
        "line.4": {
            "text": "die aus den Angeln hing,"
        },
        "line.5": {
            "text": "in ein Zimmer führte,"
        },
        "line.6": {
            "text": "aus dem das züngelnde"
        },
        "line.7": {
            "text": "Zischen einer Gerte drang"
        },
        "line.8": {
            "text": "als das giftdornbewehrte Ding"
        },
        "line.9": {
            "text": "die Decke streifend,"
        },
        "line.10": {
            "text": "pfeifend die Luft durchschnitt,"
        },
        "line.11": {
            "text": "und der Gestank"
        },
        "line.12": {
            "text": "der"
        },
        "line.13": {
            "text": "Triffid"
        },
        "line.14": {
            "text": "mir entgegenschlug;"
        },
        "line.15": {
            "text": "Schlacke troff vom zottigen Wurzelhaar,"
        },
        "line.16": {
            "text": "schwärzlich spross es untenrum,"
        },
        "line.17": {
            "text": "aus dem nackten,"
        },
        "line.18": {
            "text": "an der Basis zwiebelig"
        },
        "line.19": {
            "text": "verdickten plumpen Stamm."
        },
        "line.20": {
            "text": "Schlammklumpen klebten"
        },
        "line.21": {
            "text": "an der dreigabelig"
        },
        "line.22": {
            "text": "verzweigten, in steifen"
        },
        "line.23": {
            "text": "Stumpen auslaufenden Wurzel"
        },
        "line.24": {
            "text": "des verholzten Strunks."
        },
        "line.25": {
            "text": "Die"
        },
        "line.26": {
            "text": "Triffid"
        },
        "line.27": {
            "text": "schien"
        },
        "line.28": {
            "text": "des gestelzten Gangs wegen"
        },
        "line.29": {
            "text": "wie auf Krücken"
        },
        "line.30": {
            "text": "ruckartig sich fort zu bewegen."
        },
        "line.31": {
            "text": "Dem Strunk entwuchs"
        },
        "line.32": {
            "text": "bedrohlich schwankend,"
        },
        "line.33": {
            "text": "sechs Fuß hoch,"
        },
        "line.34": {
            "text": "maximal biegsam"
        },
        "line.35": {
            "text": "wie ein Gummischlauch"
        },
        "line.36": {
            "text": "der fleischige Schaft der"
        },
        "line.37": {
            "text": "Triffid"
        },
        "line.38": {
            "text": "."
        },
        "line.39": {
            "text": "Springschwänze wirbelten hoch,"
        },
        "line.40": {
            "text": "als das Ding aus dem Schlund"
        },
        "line.41": {
            "text": "der Pflanze schoss,"
        },
        "line.42": {
            "text": "eine Stinkwanze saß zappelnd"
        },
        "line.43": {
            "text": "am klebrigen Grund"
        },
        "line.44": {
            "text": "zwischen Mücken und Fliegen."
        },
        "line.45": {
            "text": "Die übrigen lagen am Rücken,"
        },
        "line.46": {
            "text": "als der Kolben"
        },
        "line.47": {
            "text": "an Kolibrischwärmer mahnend"
        },
        "line.48": {
            "text": "sich saugrüsselartig entrollte,"
        },
        "line.49": {
            "text": "die lange Spadix"
        },
        "line.50": {
            "text": "wie die Schleuderzunge"
        },
        "line.51": {
            "text": "einer Schuppenechse"
        },
        "line.52": {
            "text": "schnalzend hervorschnellte"
        },
        "line.53": {
            "text": "und die Giftstacheln des Appendix"
        },
        "line.54": {
            "text": "in der Luft strauchelndes Getier"
        },
        "line.55": {
            "text": "die knirschenden Exoskelette"
        },
        "line.56": {
            "text": "der Hexapoden durchbohrten."
        }
    }
}