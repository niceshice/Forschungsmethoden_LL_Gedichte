{
    "title": "wieviele-woerter-braucht-man-fuer-eine-legende-15726",
    "gender": "w",
    "author": "Marie T.  Martin",
    "author_birth": "2021",
    "poem": {
        "line.1": {
            "text": "Wie die Hagebutte am Strauch"
        },
        "line.2": {
            "text": "ist der Platzregen plötzlicher"
        },
        "line.3": {
            "text": "Lichteinfall sind die Eltern da"
        },
        "line.4": {
            "text": "aus dem Nichts gekommen und"
        },
        "line.5": {
            "text": "immer so alt wie jetzt"
        },
        "line.6": {
            "text": "Stück für Stück legt sich"
        },
        "line.7": {
            "text": "das Skelett im Boden frei"
        },
        "line.8": {
            "text": "Knochen Gesichter der Abdruck"
        },
        "line.9": {
            "text": "eines Körpers je älter du wirst"
        },
        "line.10": {
            "text": "desto tiefer kannst du"
        },
        "line.11": {
            "text": "das Zimmer betreten"
        },
        "line.12": {
            "text": "jetzt ist unser Haus wie ein Hemd"
        },
        "line.13": {
            "text": "gewendet das Licht lässt sich"
        },
        "line.14": {
            "text": "erkennen Körnchen um Körnchen"
        },
        "line.15": {
            "text": "legst du mit Reis ein Orakel"
        },
        "line.16": {
            "text": "verbinde die Punkte die Küche das Bad"
        },
        "line.17": {
            "text": "rasch die Zimmer sind schon"
        },
        "line.18": {
            "text": "mit den Buchen verwachsen"
        }
    }
}