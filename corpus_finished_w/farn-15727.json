{
    "title": "farn-15727",
    "gender": "w",
    "author": "Marie T.  Martin",
    "author_birth": "2021",
    "poem": {
        "line.1": {
            "text": "Ein Ort der aus Zuhören wächst"
        },
        "line.2": {
            "text": "aus Farn den ausgerollten Nächten"
        },
        "line.3": {
            "text": "in denen du wach liegst"
        },
        "line.4": {
            "text": "deiner Schwester Geschichten erzählst"
        },
        "line.5": {
            "text": "mit offenem Ausgang"
        },
        "line.6": {
            "text": "Blatt um Blatt führen sich"
        },
        "line.7": {
            "text": "die Tage fort füllen sich die"
        },
        "line.8": {
            "text": "Seitenarme mit Figuren"
        },
        "line.9": {
            "text": "Natternzunge du spulst etwas aus"
        },
        "line.10": {
            "text": "das in der Mundhöhle schläft"
        },
        "line.11": {
            "text": "zwischen den Blättern sitzt du"
        },
        "line.12": {
            "text": "spiralige Formen die im All"
        },
        "line.13": {
            "text": "wiederkehren zischt es"
        },
        "line.14": {
            "text": "in den Ohren Sporen"
        },
        "line.15": {
            "text": "kleben an deinen Füßen"
        },
        "line.16": {
            "text": "unsichtbar willst du sein"
        },
        "line.17": {
            "text": "hilft ein Gebräu aus Farnsamen"
        },
        "line.18": {
            "text": "gegen Schatten die nachts"
        },
        "line.19": {
            "text": "dein Bett umstellen"
        },
        "line.20": {
            "text": "noch ist die Ahnenreihe"
        },
        "line.21": {
            "text": "nicht sichtbar aber du weißt"
        },
        "line.22": {
            "text": "du weißt: Windung um Windung"
        },
        "line.23": {
            "text": "kommst du empor lernst du"
        },
        "line.24": {
            "text": "zu sehen"
        },
        "line.25": {
            "text": "hörst du wie die Planeten sich drehen"
        },
        "line.26": {
            "text": "im Takt wächst Farnkraut im Takt wächst"
        },
        "line.27": {
            "text": "ein Apfel enthüllt dir die Welt auf einem"
        },
        "line.28": {
            "text": "Teller"
        }
    }
}