{
    "title": "kinderheim-_-13402",
    "gender": "w",
    "author": "Birgit Kreipe",
    "author_birth": "1964",
    "poem": {
        "line.1": {
            "text": "ein tag landet im schilf"
        },
        "line.2": {
            "text": "verblasst, eine preußische postkarte."
        },
        "line.3": {
            "text": "jede stunde schickt so eine. sie sind leer"
        },
        "line.4": {
            "text": "und werden still, wie nach dem aussetzen"
        },
        "line.5": {
            "text": "kleiner motoren. dieser tag ging verloren"
        },
        "line.6": {
            "text": "bei der übernahme des sommers"
        },
        "line.7": {
            "text": "durch die zwanghaften, seiner umwandlung"
        },
        "line.8": {
            "text": "in eine verdorrte büropflanze."
        },
        "line.9": {
            "text": "jetzt klappt er hoch"
        },
        "line.10": {
            "text": "äther knackt in den baumkronen"
        },
        "line.11": {
            "text": "schemen, die aus dem schilf kommen."
        },
        "line.12": {
            "text": "gesichter entstehen, wie kalkäffchen"
        },
        "line.13": {
            "text": "vogelspuren vor wolken (und  ist das noch schilf?)"
        },
        "line.14": {
            "text": "archive pochen. wie präzise die stimmen erinnert sind."
        },
        "line.15": {
            "text": "aber ich bin doch längst ausgewandert! und die kinder auch!"
        }
    }
}