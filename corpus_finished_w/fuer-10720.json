{
    "title": "fuer-10720",
    "gender": "w",
    "author": "Ulla Hahn",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "All die geschundenen Körper zerrissenen Seelen"
        },
        "line.2": {
            "text": "Gesichter ohne NAMEN ohne Gesicht"
        },
        "line.3": {
            "text": "Für"
        },
        "line.4": {
            "text": "die schwatte Hamburger Deern"
        },
        "line.5": {
            "text": "Mit zwölf große Ferien in Kenia"
        },
        "line.6": {
            "text": "bei Verwandten auf dem Land"
        },
        "line.7": {
            "text": "Ach all die schönen Versprechen"
        },
        "line.8": {
            "text": "von einer Sekunde zur anderen"
        },
        "line.9": {
            "text": "vom Schreckensmesser verwandelt"
        },
        "line.10": {
            "text": "in Schrei und Schmerz den"
        },
        "line.11": {
            "text": "klaffenden Mund das brüllende"
        },
        "line.12": {
            "text": "Blutloch zwischen den Beinen"
        },
        "line.13": {
            "text": "Im Blechnapf der Abfall"
        },
        "line.14": {
            "text": "Kinderschamlippen Mädchenklitoris"
        },
        "line.15": {
            "text": "Der Beschneiderin Hand mit Nadel"
        },
        "line.16": {
            "text": "und feinem Faden die blutenden"
        },
        "line.17": {
            "text": "Lippenränder entlang auf dass"
        },
        "line.18": {
            "text": ">alles schön glatt< wird. Mit"
        },
        "line.19": {
            "text": "derberem Garn noch viermal sticht"
        },
        "line.20": {
            "text": "die nadelnde Hand von einer"
        },
        "line.21": {
            "text": "Seite zur anderen durch"
        },
        "line.22": {
            "text": "zerrt die Fetzen zusammen"
        },
        "line.23": {
            "text": "leckt streicht verklebt die Blutnaht"
        },
        "line.24": {
            "text": "mit Zucker und Honig. Alsdann"
        },
        "line.25": {
            "text": "steigt die Verwandtschaft von den"
        },
        "line.26": {
            "text": "gespreizten Beinen des Ferienkindes"
        },
        "line.27": {
            "text": "herunter die Arme bleiben von harten"
        },
        "line.28": {
            "text": "Händen genagelt hinter dem Kopf."
        },
        "line.29": {
            "text": "Alt ist das Seil aus dem Stall"
        },
        "line.30": {
            "text": "das die Älteste nun von der Leiste"
        },
        "line.31": {
            "text": "bis zu den Zehen um die Kinderbeine"
        },
        "line.32": {
            "text": "zurrt und nicht wieder lockert"
        },
        "line.33": {
            "text": "ehe Schorf die Wunde verschließt"
        },
        "line.34": {
            "text": "Tropft der Harn liegt das Mädchen"
        },
        "line.35": {
            "text": "in seiner brennenden Nässe"
        },
        "line.36": {
            "text": "Beißendem Schmerz fächelt die"
        },
        "line.37": {
            "text": "Großmutter Kühlung zu pustet"
        },
        "line.38": {
            "text": "Altfrauenatem auf den verstümmelten Leib"
        },
        "line.39": {
            "text": "summt singt ein Lied wie es ihr"
        },
        "line.40": {
            "text": "schon die Mutter sang."
        },
        "line.41": {
            "text": "Mami wo bist du? Wimmert das Mädchen"
        },
        "line.42": {
            "text": "nach der Mutter in Hamburg"
        },
        "line.43": {
            "text": "Hört ihr das?"
        },
        "line.44": {
            "text": "Sechstausend Mal am Tag"
        },
        "line.45": {
            "text": "Zwei Millionen Mal im Jahr"
        },
        "line.46": {
            "text": "seit dreitausend Jahren"
        },
        "line.47": {
            "text": "Hört ihr das?"
        },
        "line.48": {
            "text": "Gedämpft durch Zeitungspapier"
        },
        "line.49": {
            "text": "verschwimmen die Verstümmelungen"
        },
        "line.50": {
            "text": "im Nebel der Druckerschwärze:"
        },
        "line.51": {
            "text": "Events weit weg"
        },
        "line.52": {
            "text": "Und ich?"
        },
        "line.53": {
            "text": "Noch ein paar triviale Heldentaten"
        },
        "line.54": {
            "text": "Resolutionen Kongresse Appelle"
        },
        "line.55": {
            "text": "Gutgemeinte Gedichte?"
        },
        "line.56": {
            "text": "Hoffen mit Schrift erstickt"
        },
        "line.57": {
            "text": "von Schreien"
        },
        "line.58": {
            "text": "Tod und Leiden umzudichten"
        },
        "line.59": {
            "text": "in unseren unzerstörbaren Traum."
        },
        "line.60": {
            "text": "(aus:"
        },
        "line.61": {
            "text": "Widerworte"
        },
        "line.62": {
            "text": ", 2011)"
        }
    }
}