{
    "title": "sirup-4419",
    "gender": "w",
    "author": "Nora Bossong",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "Wie sie ihren Finger spreizt"
        },
        "line.2": {
            "text": "vom Mokkalöffel, meine Sudetenoma."
        },
        "line.3": {
            "text": "Ihr Haar im Schwarz"
        },
        "line.4": {
            "text": "vertrockneter Rüben."
        },
        "line.5": {
            "text": "Draußen der Abdruck"
        },
        "line.6": {
            "text": "ihrer Hände im Wind,"
        },
        "line.7": {
            "text": "durch den werfen Kinder"
        },
        "line.8": {
            "text": "Kastanien. Den Kartoffeln"
        },
        "line.9": {
            "text": "hat sie nie getraut und gekauert"
        },
        "line.10": {
            "text": "nur im Qualm der Stippsbrennerei."
        },
        "line.11": {
            "text": "Wie manchen der Buckel"
        },
        "line.12": {
            "text": "den Rücken hoch wächst,"
        },
        "line.13": {
            "text": "wächst er ihr in die Locken."
        },
        "line.14": {
            "text": "Dieses Auseinanderfallen jeden Abend,"
        },
        "line.15": {
            "text": "nackt vor den Gardinen ist ihre Haut"
        },
        "line.16": {
            "text": "nur ein Riss im Stoff."
        }
    }
}