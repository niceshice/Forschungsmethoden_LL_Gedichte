{
    "title": "neige-dich-zu-deinen-toten-ich-hab-leben-gewaehlt-6550",
    "gender": "w",
    "author": "Ilana Shmueli",
    "author_birth": "1924",
    "poem": {
        "line.1": {
            "text": "Neige dich zu deinen Toten"
        },
        "line.2": {
            "text": "sie hören"
        },
        "line.3": {
            "text": "sie schauen"
        },
        "line.4": {
            "text": "sie sprechen dir zu"
        },
        "line.5": {
            "text": "weißt du?"
        },
        "line.6": {
            "text": "sie leben dir zu..."
        },
        "line.7": {
            "text": "Ich hab Leben gewählt"
        },
        "line.8": {
            "text": "mit dem ganzen Ballast"
        },
        "line.9": {
            "text": "die Füße sind schwer"
        },
        "line.10": {
            "text": "es versagt mir die Stimme"
        },
        "line.11": {
            "text": "der Spiegel zerbricht"
        },
        "line.12": {
            "text": "Sicht wird frei"
        },
        "line.13": {
            "text": "ich gehe"
        },
        "line.14": {
            "text": "ohne Ballast"
        }
    }
}