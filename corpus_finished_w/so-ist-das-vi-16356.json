{
    "title": "so-ist-das-vi-16356",
    "gender": "w",
    "author": "Andrea Grill",
    "author_birth": "1975",
    "poem": {
        "line.1": {
            "text": "VI."
        },
        "line.2": {
            "text": "so ist das"
        },
        "line.3": {
            "text": "der Winter holt noch schnell Atem"
        },
        "line.4": {
            "text": "mit gerösteten Fingern"
        },
        "line.5": {
            "text": "verbandest Stromkabel"
        },
        "line.6": {
            "text": "und Taschentücher"
        },
        "line.7": {
            "text": "mit vergessenen Worten des Verlangens"
        },
        "line.8": {
            "text": "klebst bestehende kleine Wunden"
        },
        "line.9": {
            "text": "Saliva aus nächster Nähe"
        },
        "line.10": {
            "text": "stelle mir vor"
        },
        "line.11": {
            "text": "abends würdest du Milch trinken"
        },
        "line.12": {
            "text": "ganz weiß munter werden"
        },
        "line.13": {
            "text": "ganz gemustert ich in der Früh"
        },
        "line.14": {
            "text": "auf ehrfürchtigen Fingerkuppen"
        },
        "line.15": {
            "text": "Krawatte Schal dein"
        },
        "line.16": {
            "text": "Schlüsselbein tragen da"
        },
        "line.17": {
            "text": "streift ein Sein"
        },
        "line.18": {
            "text": "abseits der Zeit"
        }
    }
}