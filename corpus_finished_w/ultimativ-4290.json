{
    "title": "ultimativ-4290",
    "gender": "w",
    "author": "Brigitte Struzyk",
    "author_birth": "1946",
    "poem": {
        "line.1": {
            "text": "In diesem Licht erschienen"
        },
        "line.2": {
            "text": "19. März 2003"
        },
        "line.3": {
            "text": "(Beginn des dritten Golfkriegs"
        },
        "line.4": {
            "text": "am Rande des Pfälzer Walde,"
        },
        "line.5": {
            "text": "hinter dem Rammstein liegt)"
        },
        "line.6": {
            "text": "Es schießt,"
        },
        "line.7": {
            "text": "es stößt es steigt"
        },
        "line.8": {
            "text": "die zeitversetzte Blutfontäne."
        },
        "line.9": {
            "text": "Gebranntes Kind sucht Feuer"
        },
        "line.10": {
            "text": "und sticht ins Licht"
        },
        "line.11": {
            "text": "der untergehenden Sonne."
        },
        "line.12": {
            "text": "Es säumen den Himmel"
        },
        "line.13": {
            "text": "mit einem Mal"
        },
        "line.14": {
            "text": "drei Kondensstreifen, rot"
        },
        "line.15": {
            "text": "vom Blutmond"
        },
        "line.16": {
            "text": "unter einem anderen Stern"
        },
        "line.17": {
            "text": "vom Himmel gekehrt,"
        },
        "line.18": {
            "text": "donnergleich der Ton."
        },
        "line.19": {
            "text": "Es wirft sich frech Geringes auf"
        },
        "line.20": {
            "text": "und Großes deckt sich zu."
        },
        "line.21": {
            "text": "Der rote Zeiger steht auf Zwölf"
        },
        "line.22": {
            "text": "Treibgut des Kalten Krieges"
        },
        "line.23": {
            "text": "erwämt, erhitzt sich,"
        },
        "line.24": {
            "text": "explodiert woanders"
        }
    }
}