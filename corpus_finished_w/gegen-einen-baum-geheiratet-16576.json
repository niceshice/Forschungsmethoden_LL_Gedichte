{
    "title": "gegen-einen-baum-geheiratet-16576",
    "gender": "w",
    "author": "Daniela  Chana",
    "author_birth": "1985",
    "poem": {
        "line.1": {
            "text": "Eine Freundin von mir"
        },
        "line.2": {
            "text": "Hat gegen einen Baum geheiratet"
        },
        "line.3": {
            "text": "Und dann ist sie"
        },
        "line.4": {
            "text": "In den Abgrund hinein schwanger geworden"
        },
        "line.5": {
            "text": "Wir alle haben gewusst"
        },
        "line.6": {
            "text": "Dass sie sich da in etwas verrennt"
        },
        "line.7": {
            "text": "Die Freundin"
        },
        "line.8": {
            "text": "Aber sie hat den Aufprall erst nach dem Fall gehört"
        },
        "line.9": {
            "text": "Vorher ist sie ganz unbedarft"
        },
        "line.10": {
            "text": "Schwanger und geheiratet worden"
        },
        "line.11": {
            "text": "Wir haben versucht, sie zu befreien"
        },
        "line.12": {
            "text": "Aber sie war so festgebissen"
        },
        "line.13": {
            "text": "Wir hätten sie entführen können"
        },
        "line.14": {
            "text": "Aber was hätten wir mit dem Kind gemacht?"
        },
        "line.15": {
            "text": "Da war es einfach schon zu spät"
        },
        "line.16": {
            "text": "Mathematisch"
        },
        "line.17": {
            "text": "5093 Männer"
        },
        "line.18": {
            "text": "Können in 385 Jahren nicht"
        },
        "line.19": {
            "text": "An zwei Händen zählen"
        },
        "line.20": {
            "text": "Wie sich diese Gefahr potenziert"
        },
        "line.21": {
            "text": "Eine heiratet gegen einen Baum"
        },
        "line.22": {
            "text": "Und dann steht das Wrack herum"
        },
        "line.23": {
            "text": "Und wer anderer fährt noch dagegen"
        }
    }
}