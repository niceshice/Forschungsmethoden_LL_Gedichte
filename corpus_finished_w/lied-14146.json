{
    "title": "lied-14146",
    "gender": "w",
    "author": "Ulrike Almut Sandig",
    "author_birth": "1979",
    "poem": {
        "line.1": {
            "text": "dieses"
        },
        "line.2": {
            "text": "Lied"
        },
        "line.3": {
            "text": "hab ich nur"
        },
        "line.4": {
            "text": "aus Wörtern gemacht."
        },
        "line.5": {
            "text": "es klingt wie der Klopfton"
        },
        "line.6": {
            "text": "der Fußgängerampel"
        },
        "line.7": {
            "text": "auf Rot, aber auch wie"
        },
        "line.8": {
            "text": "Kastanien beim Aufprall"
        },
        "line.9": {
            "text": "und wie still stehende"
        },
        "line.10": {
            "text": "Krähen auf dem Rasen"
        },
        "line.11": {
            "text": "zur Bahn, wie schwankende"
        },
        "line.12": {
            "text": "Kräne über dem Gras, wie"
        },
        "line.13": {
            "text": "der plötzliche Ausfall"
        },
        "line.14": {
            "text": "aller Bahnen zur Stadt, wie"
        },
        "line.15": {
            "text": "der Herzschrittmacher"
        },
        "line.16": {
            "text": "der Frau neben dir, ticke tack"
        },
        "line.17": {
            "text": "ticke tack ticke tack tack tack"
        },
        "line.18": {
            "text": "STOP klingt mein Lied,"
        },
        "line.19": {
            "text": "aber auch wie das alte"
        },
        "line.20": {
            "text": "Morgen früh, wenn Gott will,"
        },
        "line.21": {
            "text": "wirst du wieder ge- hörst du"
        },
        "line.22": {
            "text": "mein Lied? mein Lied soll"
        },
        "line.23": {
            "text": "nie aufhören! mein Lied"
        },
        "line.24": {
            "text": "hört auch nie auf, so lange"
        },
        "line.25": {
            "text": "ich selber nicht aufhör."
        },
        "line.26": {
            "text": "aber jetzt kommt ein Lied,"
        },
        "line.27": {
            "text": "das hab ich ganz ohne"
        },
        "line.28": {
            "text": "Wörter gemacht. Achtung!"
        },
        "line.29": {
            "text": "an genau dieser Stelle"
        },
        "line.30": {
            "text": "geht alles erst los:"
        }
    }
}