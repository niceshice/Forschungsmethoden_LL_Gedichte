{
    "title": "besuch-4417",
    "gender": "w",
    "author": "Nora Bossong",
    "author_birth": "1982",
    "poem": {
        "line.1": {
            "text": "Die alte Frau sitzt tagelang am Fenster"
        },
        "line.2": {
            "text": "und hält ein Taschentuch, zu träg,"
        },
        "line.3": {
            "text": "hinaus in eine Welt zu winken,"
        },
        "line.4": {
            "text": "die sie nicht mehr betritt. Das Draußen"
        },
        "line.5": {
            "text": "ist ein Fernsehbild. Wie es mir glückt,"
        },
        "line.6": {
            "text": "von dort ihr Zimmer zu betreten,"
        },
        "line.7": {
            "text": "bleibt ihr ein Rätsel,"
        },
        "line.8": {
            "text": "sie fragt mich nicht danach,"
        },
        "line.9": {
            "text": "sagt nur:"
        },
        "line.10": {
            "text": "Es gibt so vieles,"
        },
        "line.11": {
            "text": "das ich nicht versteh,"
        },
        "line.12": {
            "text": "ach Mädchen, weißt,"
        },
        "line.13": {
            "text": "die Klügste bin ich eben nicht."
        },
        "line.14": {
            "text": "Und hinter ihrem Schatten klafft"
        },
        "line.15": {
            "text": "die Wohnung,"
        },
        "line.16": {
            "text": "die zu große Schale einer Muschel, vergraben"
        },
        "line.17": {
            "text": "in dem Zeitschlick, der nicht mehr zur Stadt gehört."
        },
        "line.18": {
            "text": "Es begann damit, dass sie verzwergte"
        },
        "line.19": {
            "text": "Jahr um Jahr, nicht mehr zu finden"
        },
        "line.20": {
            "text": "Ihr mondäner Gang, ihr Blinzeln,"
        },
        "line.21": {
            "text": "als brenne ihr verrauchte Luft"
        },
        "line.22": {
            "text": "eines Kasinos in den Augen."
        },
        "line.23": {
            "text": "Vielleicht"
        },
        "line.24": {
            "text": ", sagt sie und"
        },
        "line.25": {
            "text": "irgendwann"
        },
        "line.26": {
            "text": "und will nicht weg von ihrem Fenster,"
        },
        "line.27": {
            "text": "sie ist so dünn geworden,"
        },
        "line.28": {
            "text": "dass sie keinen Tag mehr spürt."
        },
        "line.29": {
            "text": "Ach Mädchen"
        },
        "line.30": {
            "text": ", sagt sie,"
        },
        "line.31": {
            "text": "weißt, wir ham ja Zeit"
        },
        "line.32": {
            "text": "."
        }
    }
}