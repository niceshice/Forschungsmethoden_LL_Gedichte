{
    "title": "echolots-zornesmahl-12375",
    "gender": "w",
    "author": "Sonja vom Brocke",
    "author_birth": "1980",
    "poem": {
        "line.1": {
            "text": "Ich bin verschalt  und sie gaukeln!"
        },
        "line.2": {
            "text": "raffst die Fledermäuse zu Wutklumpen"
        },
        "line.3": {
            "text": "kaust auf Lederwämsern, Arbeitsmuskeln"
        },
        "line.4": {
            "text": "zwängst dich ein in die Herz-"
        },
        "line.5": {
            "text": "und Nervstrangulierer, ein Herznervstrangulier-"
        },
        "line.6": {
            "text": "maschinengeschlecht, geeicht."
        },
        "line.7": {
            "text": "Natürlich geeicht! Und von allen guten Geistern"
        },
        "line.8": {
            "text": "bei den Minigauklern im Todhof gelassen"
        },
        "line.9": {
            "text": "speist in Quasten, getrocknete Zwitter, Krust-"
        },
        "line.10": {
            "text": "beißt in Schaum. Ach."
        },
        "line.11": {
            "text": "Nippels ab ..."
        }
    }
}