{
    "title": "man-hat-uns-die-kleider-nachgeworfen-3346",
    "gender": "w",
    "author": "Maja  Haderlap",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "man hat uns die kleider nachgeworfen,"
        },
        "line.2": {
            "text": "den küchenrat, unsere knarrenden türen,"
        },
        "line.3": {
            "text": "man hat die tischladen geöffnet"
        },
        "line.4": {
            "text": "und ist mit lautem gezeter ans licht getreten:"
        },
        "line.5": {
            "text": "hier hat doch jemand gelebt,"
        },
        "line.6": {
            "text": "der im irrtum war! bergauf, bergab"
        },
        "line.7": {
            "text": "wurden verwandte umarmt"
        },
        "line.8": {
            "text": "uns sie haben sich alle zusammengerottet"
        },
        "line.9": {
            "text": "zum letzten spiel: drosselhäuptig,"
        },
        "line.10": {
            "text": "windbartbedeckt, nach alter geordnet"
        },
        "line.11": {
            "text": "die wiedergewonnene sippe. ach,"
        },
        "line.12": {
            "text": "wie ich mit ihnen in den berg floh,"
        },
        "line.13": {
            "text": "wie sich ein mann gegen den felsen"
        },
        "line.14": {
            "text": "stemmte und ich daran vorbeiflog,"
        },
        "line.15": {
            "text": "über kaninchen und maulwurfgräben hinweg,"
        },
        "line.16": {
            "text": "in ein fremdes land, wo ich nicht blieb"
        },
        "line.17": {
            "text": "und dann großmutter antraf,"
        },
        "line.18": {
            "text": "mit schürze und zockeln bekleidet."
        },
        "line.19": {
            "text": "das schuhwerk darf nicht das wasser berühren,"
        },
        "line.20": {
            "text": "rief sie, und, diesen fluss, siehst du,"
        },
        "line.21": {
            "text": "den lassen wir zurück."
        }
    }
}