{
    "title": "als-mir-die-sprache-abhanden-kam-3348",
    "gender": "w",
    "author": "Maja  Haderlap",
    "author_birth": "1961",
    "poem": {
        "line.1": {
            "text": "vielleicht trank ich gerade kaffee"
        },
        "line.2": {
            "text": "oder schlug eine zeitung auf."
        },
        "line.3": {
            "text": "vielleicht zog ich die vorhänge zu,"
        },
        "line.4": {
            "text": "oder sah auf die straße, als sie"
        },
        "line.5": {
            "text": "mich verließ. ich dachte noch,"
        },
        "line.6": {
            "text": "was für ein röcheln"
        },
        "line.7": {
            "text": "aus der tiefe der wand,"
        },
        "line.8": {
            "text": "was für ein klirren in diesem raum."
        },
        "line.9": {
            "text": "kein fensterglas sprang,"
        },
        "line.10": {
            "text": "kein sessel fiel um in der küche."
        },
        "line.11": {
            "text": "an den straßenschildern erloschen"
        },
        "line.12": {
            "text": "namen zu buchstabenasche."
        },
        "line.13": {
            "text": "über den häusern fuhr der"
        },
        "line.14": {
            "text": "worttanker davon, massig, lautlos."
        },
        "line.15": {
            "text": "meine zunge zuckte wie ein"
        },
        "line.16": {
            "text": "gestrandeter wal im trockenen mund."
        },
        "line.17": {
            "text": "ich floh aus der stadt,"
        },
        "line.18": {
            "text": "zog mich hinter die grenze zurück."
        },
        "line.19": {
            "text": "kein brief kam an und antworten"
        },
        "line.20": {
            "text": "blieben aus. wo ich"
        },
        "line.21": {
            "text": "war, klafft eine lücke."
        },
        "line.22": {
            "text": "wo ich bin, treibt"
        },
        "line.23": {
            "text": "mein schatten ins kraut."
        }
    }
}