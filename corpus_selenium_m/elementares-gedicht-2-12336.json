{
    "title": "elementares-gedicht-2-12336",
    "gender": "m",
    "author": "Ulrich Koch",
    "poem": {
        "line.1": {
            "text": "Die Bibliothek, von der ich nachts getrumt,"
        },
        "line.2": {
            "text": "bestand aus getrockneten Schmetterlingen,"
        },
        "line.3": {
            "text": "in der Mehrzahl Kleine Fchse und Admirle,"
        },
        "line.4": {
            "text": "und ich erwachte als Lepidopterologe,"
        },
        "line.5": {
            "text": "ghnend, von Hmatomen berst,"
        },
        "line.6": {
            "text": "als htte mich Sugling ber Nacht"
        },
        "line.7": {
            "text": "meine tote Mutter mit Kssen bedeckt."
        },
        "line.8": {
            "text": "Wo etwas grte oder verweste: Krhenfontnen."
        },
        "line.9": {
            "text": "Diesige Wiesen, das Licht: Nasses Salz."
        },
        "line.10": {
            "text": "Und der Weg nahm mich nur oberflchlich wahr."
        },
        "line.11": {
            "text": "Ich weckte den Traum vom Fliegen"
        },
        "line.12": {
            "text": "beim Betreten des Hhnerstalls."
        },
        "line.13": {
            "text": "Schauerwolke, hell, mit Regenfden:"
        },
        "line.14": {
            "text": "Seelenmyzel, in aufgelockerte Erde gesteckt."
        },
        "line.15": {
            "text": "Sternenhimmel, ich ging unter."
        },
        "line.16": {
            "text": "Rcklings verga mich das Gras."
        },
        "line.17": {
            "text": "Der Flu trieb mit meinen Fen voran."
        }
    }
}