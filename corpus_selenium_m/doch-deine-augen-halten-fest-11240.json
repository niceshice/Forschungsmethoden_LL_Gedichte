{
    "title": "doch-deine-augen-halten-fest-11240",
    "gender": "m",
    "author": "Thomas Rosenlöcher",
    "poem": {
        "line.1": {
            "text": "Du gehst längs eines Felds, umflirrt"
        },
        "line.2": {
            "text": "von mohndurchschossnem Gelb,"
        },
        "line.3": {
            "text": "da eine Lerche hoch auf schwirrt,"
        },
        "line.4": {
            "text": "als gälte es die Welt,"
        },
        "line.5": {
            "text": "die scharfgeschnittnen Hügel an."
        },
        "line.6": {
            "text": "Und wirklich kommt zur Linken"
        },
        "line.7": {
            "text": "das Meer bis an das Dorf heran"
        },
        "line.8": {
            "text": "als krauses Kräuselblinken,"
        },
        "line.9": {
            "text": "da sich über den Hügelrand"
        },
        "line.10": {
            "text": "ein Riesengletscher schiebt,"
        },
        "line.11": {
            "text": "und du dastehst und unverwandt"
        },
        "line.12": {
            "text": "schaust: Daß es Wolken gibt."
        },
        "line.13": {
            "text": "Hals über Kopf losläufst und schreist,"
        },
        "line.14": {
            "text": "nicht weißt, wohin dich wenden."
        },
        "line.15": {
            "text": "Das Meer, das links ein Zipfel war,"
        },
        "line.16": {
            "text": "liegt nun an allen Enden."
        },
        "line.17": {
            "text": "Und dehnt sich aus rings um dich her"
        },
        "line.18": {
            "text": "unnahbar nah im Bogen,"
        },
        "line.19": {
            "text": "und hinter ihm ist noch ein Meer"
        },
        "line.20": {
            "text": "ergrauend aufgezogen."
        },
        "line.21": {
            "text": "Da gehen Schiffe auf den Strich."
        },
        "line.22": {
            "text": "Rotorenüberwunken."
        },
        "line.23": {
            "text": "Da ist im weißen Himmelsriß"
        },
        "line.24": {
            "text": "das dritte Meer versunken."
        },
        "line.25": {
            "text": "Doch deine Augen halten fest,"
        },
        "line.26": {
            "text": "so schmal der Rest auch glänzt."
        },
        "line.27": {
            "text": "Ob sich auf Wasser gehen läßt?"
        },
        "line.28": {
            "text": "Erwartet wirst du längst."
        }
    }
}