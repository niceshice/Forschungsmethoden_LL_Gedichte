    "gender": "m",
    "author": "Franz Hohler",
    "poem": {
        "line.1": {
            "text": "Deine Uhr"
        },
        "line.2": {
            "text": "neben meiner Uhr"
        },
        "line.3": {
            "text": "auf dem Fenstersims"
        },
        "line.4": {
            "text": "in der Vormittagssonne."
        },
        "line.5": {
            "text": "Gemeinsam"
        },
        "line.6": {
            "text": "trinken sie Licht"
        },
        "line.7": {
            "text": "damit sie stets"
        },
        "line.8": {
            "text": "ihre Pflicht erfllen knnen"
        },
        "line.9": {
            "text": "uns anzuzeigen"
        },
        "line.10": {
            "text": "wie wir langsam"
        },
        "line.11": {
            "text": "zusammen lter werden"
        },
        "line.12": {
            "text": "du und ich."
        }
    }
}