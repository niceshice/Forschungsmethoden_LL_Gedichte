{
    "title": "ode-auf-die-gemeine-klette-und-george-de-mestral-den-erfinder-des-klettverschlusses-15601",
    "gender": "m",
    "author": "Steffen  Mensching",
    "poem": {
        "line.1": {
            "text": "Arcticum lappa,"
        },
        "line.2": {
            "text": "Zauberkraut, einst,"
        },
        "line.3": {
            "text": "Wider Dämonen und Donner. Den Extrakt"
        },
        "line.4": {
            "text": "Ihrer Wurzel empfahl"
        },
        "line.5": {
            "text": "Hildegard"
        },
        "line.6": {
            "text": "Von Bingen"
        },
        "line.7": {
            "text": "gegen Lepra, Steinleiden,"
        },
        "line.8": {
            "text": "Grind. Mit den Hexen fiel"
        },
        "line.9": {
            "text": "Auch die Klette dem Vergessen"
        },
        "line.10": {
            "text": "Anheim. Auf Ödland, im Unterholz"
        },
        "line.11": {
            "text": "Der Wälder wucherte sie, über Jahrhunderte,"
        },
        "line.12": {
            "text": "Still vor sich hin, eine Laune Gottes,"
        },
        "line.13": {
            "text": "Zu nichts zu gebrauchen. Wanderer,"
        },
        "line.14": {
            "text": "Jäger, Soldaten, zupften"
        },
        "line.15": {
            "text": "Die widerspenstigen Knöllchen"
        },
        "line.16": {
            "text": "Mürrisch aus Haaren und Kleidern. Kinder"
        },
        "line.17": {
            "text": "Zielten damit auf die Rockschöße"
        },
        "line.18": {
            "text": "Von Hauslehrern und Katecheten."
        },
        "line.19": {
            "text": "An einem Maiabend des Jahres"
        },
        "line.20": {
            "text": "Neunzehn Achtundvierzig"
        },
        "line.21": {
            "text": "Kehrte George de Mestral, ein Schweizer"
        },
        "line.22": {
            "text": "Ingenieur, mit seinem Hund"
        },
        "line.23": {
            "text": "Aus den Wiesen zurück, Kletten"
        },
        "line.24": {
            "text": "An Hosenbeinen und Strümpfen."
        },
        "line.25": {
            "text": "Die Hand in den Flanken des Dackels"
        },
        "line.26": {
            "text": "Prüfte der Forscher"
        },
        "line.27": {
            "text": "Eine haarige Kugel. Winzige Häkchen,"
        },
        "line.28": {
            "text": "Erkannte er unter der Lupe,"
        },
        "line.29": {
            "text": "Krallten sich fest"
        },
        "line.30": {
            "text": "In der Wolle. Ihm stockte der Atem."
        },
        "line.31": {
            "text": "Was wäre wenn? Was für ein Wahnwitz,"
        },
        "line.32": {
            "text": "Anzutreten gegen die"
        },
        "line.33": {
            "text": "ultima ratio"
        },
        "line.34": {
            "text": "Von Reißverschlüssen und Knöpfen."
        },
        "line.35": {
            "text": "Das Patent lag brach. Eine Revolution"
        },
        "line.36": {
            "text": "Der Verschlußtechnik"
        },
        "line.37": {
            "text": "Wuchs an den Rainen. Der Rest war Routine"
        },
        "line.38": {
            "text": "Und Handwerk."
        },
        "line.39": {
            "text": "Chapeau!,"
        },
        "line.40": {
            "text": "Meister Mestral,"
        },
        "line.41": {
            "text": "Astronauten und ABC-Schützen"
        },
        "line.42": {
            "text": "Lieben Ihre Erfindung, Sie schenkten"
        },
        "line.43": {
            "text": "Der Welt ein Geräusch, dieses"
        },
        "line.44": {
            "text": "Ritsch,"
        },
        "line.45": {
            "text": "Und den stachligen Glauben, noch"
        },
        "line.46": {
            "text": "Für die beste Lösung"
        },
        "line.47": {
            "text": "Gibt es auf Erden eine, die einfach"
        },
        "line.48": {
            "text": "Besser und einfacher ist."
        }
    }
}